@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/Lib/Jquery/jquery-1.11.0.js"></script>
<script src="~/Scripts/Lib/Angular/angular.min.js"></script>
<script src="~/Scripts/Lib/Angular/angular-resource.min.js"></script>
<script src="~/Scripts/Lib/Angular/angular-mocks.js"></script>
<script src="~/Scripts/Lib/Angular/ng-table.js"></script>
<script src="~/Areas/Credentialing/Scripts/plans.js"></script>
<link href="~/Content/Provider/ng-table.css" rel="stylesheet" />

<style>
    .loading-container {
        position: relative;
    }

        .loading-container .loading:before, .loading-container .loading:after {
            content: " ";
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            min-height: 50px;
            min-width: 50px;
        }

        .loading-container .loading:before {
            background-color: white;
            opacity: 0.5;
        }
</style>

<div id="page-wrapper" ng-app="planApp" ng-controller="planController">
    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <ol class="breadcrumb">
                    <li>
                        <i class="fa fa-dashboard"></i>
                        <a href="/Dashboard/Index">Dashboard</a>
                    </li>
                    <li class="active">
                        <i class="fa fa-list"></i> Plans
                    </li>
                </ol>
            </div>
        </div>
        <!-- /.row -->
        <!-- Add Provider content form div -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Add New Plan</h3>
                    </div>
                    <div class="panel-body">

                        <div class="col-lg-12">
                            <div class="col-lg-6">
                                <label class="control-label small">Plan Name</label>
                                <div>
                                    <input type="text" class="form-control input-sm"/>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label class="control-label small">Plan Code</label>
                                <div>
                                    <input type="text" class="form-control input-sm" />
                                </div>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <br />
                        <div class="col-lg-12">
                            <div class="col-md-4">
                                <label class="control-label small">Street/P.O Box</label>
                                <div>
                                    <input type="text" class="form-control input-sm" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <label class="control-label small">Appartment/Unit No.</label>
                                <div>
                                    <input type="text" class="form-control input-sm" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <label class="control-label small">City</label>
                                <div>
                                    <input type="text" class="form-control input-sm" />
                                </div>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <br />
                        <div class="col-lg-12">
                            <div class="col-md-4">
                                <label class="control-label small">State</label>
                                <div>
                                    <input type="text" class="form-control input-sm" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <label class="control-label small">Country</label>
                                <div>
                                    <input type="text" class="form-control input-sm" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <label class="control-label small">County</label>
                                <div>
                                    <input type="text" class="form-control input-sm" />
                                </div>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <br />
                        <div class="col-lg-12">
                            <div class="col-md-4">
                                <label class="control-label small">Phone</label>
                                <div>
                                    <input type="text" class="form-control input-sm" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <label class="control-label small">Fax</label>
                                <div>
                                    <input type="text" class="form-control input-sm" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <label class="control-label small">Email</label>
                                <div>
                                    <input type="text" class="form-control input-sm" />
                                </div>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <br />
                        <div class="col-lg-12">
                            <div class="col-md-4">
                                <label class="control-label small">Lines Of Business</label>
                                <div>
                                    <div class="col-md-9 zero-padding-left-right-div">
                                        <select class="form-control input-sm">
                                            <option selected disabled>-Select-</option>
                                            <option>Access</option>
                                            <option>Aceess2</option>
                                            <option>MIRRA</option>
                                        </select>
                                    </div>
                                    <div class="col-md-3">
                                        <button class="btn btn-xs btn-primary" tooltip data-toggle="tooltip" data-placement="left" title="Add New Lines Of Business"><i class="fa fa-plus"></i></button>
                                    </div>
                                </div>
                            </div>
                            @*<div class="col-md-1"><br />
                                <button class="btn btn-xs btn-primary" tooltip data-toggle="tooltip" data-placement="left" title="Add New Lines Of Business"><i class="fa fa-plus"></i></button>
                            </div>*@
                            <div class="col-md-3">
                                <label class="control-label small">Attach Application</label>
                                <div>
                                    <select class="form-control input-sm">
                                        <option selected disabled>-Select-</option>
                                        <option>Access</option>
                                        <option>Aceess2</option>
                                        <option>MIRRA</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <label class="control-label small">Attach Doc Checklist</label>
                                <div>
                                    <select class="form-control input-sm">
                                        <option selected disabled>-Select-</option>
                                        <option>Access</option>
                                        <option>Aceess2</option>
                                        <option>MIRRA</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-1">
                                <label class="control-label small">Delegated</label>
                                <input type="checkbox" class="form-control input-sm" />
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <br />
                        <div class="col-lg-12">
                            <div class="col-lg-6">
                                <label class="control-label small">Attach PSV</label>
                                <div>
                                    <select class="form-control input-sm">
                                        <option selected disabled>-Select-</option>
                                        <option>Access</option>
                                        <option>Aceess2</option>
                                        <option>MIRRA</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <br />
                                <a href="~/Credentialing/PSVCheckList/Index">
                                    <button class="btn btn-primary btn-sm">Configure New PSV</button>
                                </a>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <br />
                        <div class="col-lg-12">
                            <div class="col-lg-12">
                                <a href="/Credentialing/Plan/ListPlan" class="btn btn-danger btn-sm pull-left">Cancel</a>
                                <a href="/Credentialing/Plan/ListPlan" class="btn btn-success btn-sm pull-right">Submit</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
