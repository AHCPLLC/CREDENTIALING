<div class="form-style">
    <fieldset class="">
        <legend>
            Edit Email Template
        </legend>
        <div id="newOtherLegalFormDiv">
            <div class="col-lg-12 zero-padding-left-right-div ng-scope">
                <div class="col-lg-4 form-group">
                    <label class="control-label small">Category *</label>
                    <select class="form-control input-sm">
                        <option></option>
                    </select>
                </div>
                <div class="col-lg-4 form-group">
                    <label class="control-label small">Action</label>
                    <select class="form-control input-sm">
                        <option></option>
                    </select>
                </div>
                <div class="col-lg-4 form-group">
                    <label class="control-label small">Title *</label>
                    <input type="text" ng-model="OtherLegalName.LastName" class="form-control input-sm ng-pristine ng-untouched ng-valid" id="exampleInputEmail1" placeholder="last name" autocomplete="off">
                </div>
                <div class="form-group col-md-12">
                    <label class="control-label small">Description *</label>
                    <div>
                        <textarea class="form-control input-sm" autocomplete="off"></textarea>
                    </div>
                </div>
                <div class="form-group col-md-12">
                    <label class="control-label small">Subject *</label>
                    <div>
                        <input type="text" class="form-control input-sm" autocomplete="off">
                    </div>
                </div>
                <div class="col-md-12 form-group">
                    <label class="control-label small">Template *</label>
                    <div>
                        <input type="date" class="form-control input-sm" autocomplete="off">
                    </div>
                </div>
                <div class="col-md-12 form-group">
                    <button type="button" class="btn btn-warning btn-sm" ng-click="cancelOtherLegalName('saveCancel')">Cancel</button>
                    <button type="button" class="btn btn-primary btn-sm pull-right ng-hide" ng-click="updateOtherLegalName(OtherLegalName)">Update</button>
                </div>
            </div>
        </div>
    </fieldset>
</div>