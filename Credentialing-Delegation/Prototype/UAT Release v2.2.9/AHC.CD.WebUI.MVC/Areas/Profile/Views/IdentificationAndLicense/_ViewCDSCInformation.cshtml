@model AHC.CD.WebUI.MVC.Areas.Profile.Models.IdentificationAndLicenses.CDSCInformationViewModel
@using AHC.CD.WebUI.MVC.Areas.Profile.Attributes;

<div class="col-lg-12 zero-padding-left-right-div">
    <fieldset class="wrap-words">
        <legend>
            CDS Information
        </legend>
        <div>
            <div class="col-md-12 zero-padding-left-right-div">
                <div class="form-group col-md-3">
                    @Html.LabelFor(model => model.CertNumber, new { @class = "control-label small" })
                    <div>
                        <i class="data-label">{{CDSCInformation.CertNumber}}</i>
                    </div>
                </div>
                <div class="form-group col-md-3">
                    @Html.LabelFor(model => model.State, new { @class = "control-label small" })
                    <div>
                        <i class="data-label">{{CDSCInformation.State}}</i>
                    </div>
                </div>
                <div class="form-group col-md-3">
                    @Html.LabelFor(model => model.IssueDate, new { @class = "control-label small" })
                    <div>
                        <i class="data-label">{{CDSCInformation.IssueDate || 'Not Available' | date: "MM-dd-yyyy"}}</i>
                    </div>
                </div>
                <div class="form-group col-md-3">
                    @Html.LabelFor(model => model.ExpiryDate, new { @class = "control-label small" })
                    <div>
                        <i class="data-label">{{CDSCInformation.ExpiryDate || 'Not Available' | date: "MM-dd-yyyy"}}</i>
                    </div>
                </div>
            </div>
            <div class="col-md-12 zero-padding-left-right-div">
                <div class="form-group col-lg-12">
                    <label class="control-label small">Supporting Document</label>
                    <div ng-show="CDSCInformation.CDSCCerificatePath">
                        @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Preview, ViewBag.Roles, false))
                        {
                            <i class="data-label">
                                <a href="/Document/View?path={{CDSCInformation.CDSCCerificatePath}}" class="pointer" target="_blank" tooltip data-toggle="tooltip" data-placement="top" title="CDS Certificate">
                                    <i class="fa fa-file"></i>
                                </a>
                            </i>
                        }
                    </div>
                    <div ng-hide="CDSCInformation.CDSCCerificatePath">
                        <i class="data-label">Not Available</i>
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
            <div ng-show="activeMessageDiv=='updatedCDS'+$index" class="alert alert-{{messageType}}" role="alert">
                <button ng-click="closeAlertMessage('')" class="close"><span>&times;</span></button>
                {{messageDesc}}
            </div>
            <div ng-show="activeMessageDiv=='renewedCDS'+$index" class="alert alert-{{messageType}}" role="alert">
                <button ng-click="closeAlertMessage('')" class="close"><span>&times;</span></button>
                {{messageDesc}}
            </div>
            <div class="clearfix"></div>
            <div class="col-md-12 form-group zero-padding-left-right-div">
                <button type="button" class="btn btn-warning btn-sm" ng-click="operateCancelControl('')">Cancel</button>
                @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Edit, ViewBag.Roles, false))
                {
                    <button type="submit" class="btn btn-primary btn-sm pull-right" ng-click="operateEditControl($index+'_editCDSCInformation',CDSCInformation)">Edit</button>
                }
            </div>
        </div>
    </fieldset>
</div>