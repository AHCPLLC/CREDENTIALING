@{
    ViewBag.Title = "Credentialing Action Appointment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/Lib/Angular/angular.min.js"></script>
<script src="~/Scripts/Lib/Angular/ui-bootstrap-tpls-0.13.0.min.js"></script>
<script src="~/Areas/Credentialing/Scripts/CnD/CredentialingAppointmentController.js"></script>

<script>
    var togglemenu = function () {
        $("#sidemenu").toggleClass("menu-in");
        $("#page-wrapper").toggleClass("menuup");
    }
</script>
<style>
    .full button span {
        background-color: limegreen;
        border-radius: 32px;
        color: black;
    }
</style>

<div id="page-wrapper">
    <div class="container-fluid" ng-app="CCOApp" ng-controller="CCOController">
        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <ol class="breadcrumb">
                    <li>
                        <i class="fa fa-dashboard"></i>  <a href="/Dashboard/Index">Dashboard</a>
                    </li>
                    <li class="active">
                        <i class="fa fa-list-alt"></i> CCO Credentialing Appointment
                    </li>
                </ol>
            </div>
        </div>
        <div class="row">
            <div class="panel panel-default content-panel">
                <div class="panel-heading">
                    Credentialing Appointment Action &nbsp;&nbsp;
                    <a style="cursor: pointer; text-decoration: none;" ng-click="getDataByMenu(CCOAppointDataData[0])" ng-class="{'btn btn-xs btn-info': selectedAction==1}">Credentialing</a> &nbsp;
                    @*<a style="cursor: pointer; text-decoration: none;" ng-click="getDataByMenu(CCOAppointDataData[1])" ng-class="{'btn btn-xs btn-info': selectedAction==2}">Re-Credentialing</a> &nbsp;
                    <a style="cursor: pointer; text-decoration: none;" ng-click="getDataByMenu(CCOAppointDataData[2])" ng-class="{'btn btn-xs btn-info': selectedAction==3}">De-Credentialing</a>*@
                    <a style="cursor: pointer; text-decoration: none;" ng-click="AddSelectedCredentialing()" class="btn btn-xs btn-success pull-right"><i class="fa fa-plus"></i> Add for Credentialing Appointment</a>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="col-lg-4" style="padding-right:0px;">
                                <!-- In-line DatePicker-->
                                <h4>Pick a Date</h4>
                                <div style="display:inline-block; min-height:290px;">
                                    <datepicker ng-model="dt" min-date="minDate" show-weeks="true" class="well well-sm" custom-class="getDayClass(date, mode)"></datepicker>
                                </div>
                                <!-- in line date picker -->
                            </div>
                            <div class="col-lg-8" style="padding-left: 0px;">
                                <div class="col-lg-3 col-md-3 col-sm-3 form-group">
                                    <h4>Select Plan</h4>
                                    <select class="form-control input-sm" ng-model="Plans[$index]" ng-change="getValue(Plans[$index]) ">
                                        <option value="">ALL</option>
                                        <option ng-repeat="c in Plans track by $index">{{c}} </option>
                                    </select>
                                </div>
                                <table class="table table-hover ng-table-resizable-columns ng-table-rowselected ng-scope ng-table">
                                    <thead>
                                        <tr>
                                            <th class="col-lg-1 col-md-1">Name</th>
                                            <th class="col-lg-2 col-md-2">Provider Type</th>
                                            <th class="col-lg-1 col-md-1">Specialty</th>
                                            <th class="col-lg-2 col-md-2">
                                                <span ng-if="selectedAction==1">
                                                    Credentialing Initiated Date
                                                </span>
                                                <span ng-if="selectedAction==2">
                                                    Credentialed Date
                                                </span>
                                                <span ng-if="selectedAction==3">
                                                    Credentialed Date
                                                </span>
                                            </th>
                                            <th class="col-lg-1 col-md-2">Recommended Level</th>

                                            <th class="col-lg-1 col-md-1"></th>
                                        </tr>
                                        <tr>
                                            <th><input type="text" class="form-control input-sm" ng-model="search.Name"></th>
                                            <th><input type="text" class="form-control input-sm" ng-model="search.ProviderTitle"></th>
                                            <th><input type="text" class="form-control input-sm" ng-model="search.Specialty"></th>
                                            <th><input type="text" class="form-control input-sm" ng-model="search.CredentialingDate"></th>
                                            <th><input type="text" class="form-control input-sm" ng-model="search.RecommendedLevel"></th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="c in CreadentialingData | filter:{Name:search.Name,ProviderTitle:search.ProviderTitle,Specialty:search.Specialty,CredentialingDate:search.CredentialingDate,RecommendedLevel:search.RecommendedLevel}" ng-if="PlanNames==c.Plan || PlanNames==''" style="cursor:pointer;" ng-click="SelectedDetails[$index] = !SelectedDetails[$index]">
                                            <td>{{c.Name}}</td>
                                            <td>{{c.ProviderTitle}}</td>
                                            <td>{{c.Specialty}}</td>
                                            <td>{{c.CredentialingDate}}</td>
                                            <td>{{c.RecommendedLevel}}</td>
                                            <td>
                                                <i ng-if="SelectedDetails[$index]" class="fa fa-check"></i>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                     </div>
                     <div class="col-lg-12 zero-padding-left-right-div form-style">
                            <fieldset>
                                <legend>Selected Provider List</legend>
                                <table class="table table-bordered table-hover">
                                    <thead>
                                        <tr ng-if="NoDataFound1==true">
                                            <td>
                                                No Appointment is scheduled
                                            </td>
                                        </tr>


                                        <tr ng-if="NoDataFound1==false">
                                            <th class="col-lg-1 col-md-1">First Name</th>
                                            <th class="col-lg-1 col-md-1">Last Name</th>
                                            <th class="col-lg-1 col-md-1">Provider Type</th>
                                            <th class="col-lg-1 col-md-1">Specialty</th>
                                            <th class="col-lg-1 col-md-1">
                                                <span ng-if="selectedAction==1">
                                                    Credentialing Initiated Date
                                                </span>
                                                <span ng-if="selectedAction==2">
                                                    Credentialed Date
                                                </span>
                                                <span ng-if="selectedAction==3">
                                                    Credentialed Date
                                                </span>
                                            </th>
                                            <th class="col-lg-1 col-md-2">Recommended Level</th>
                                            <th class="col-lg-1 col-md-1">Appointment Date</th>
                                            <th class="col-lg-1 col-md-1">Status</th>
                                            <th class="col-lg-1 col-md-1">Remove</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="c in DoneCreadentialing track by $index" ng-if="dt1==c.AppointmentDate && (PlanNames==c.Plan || PlanNames=='')">
                                            <td>{{c.FirstName}}</td>
                                            <td>{{c.LastName}}</td>
                                            <td><span ng-repeat="d in c.ProviderTitles track by $index"><span ng-if="$index>0">,</span>{{d.ProviderType.Title}}</span></td>
                                            <td><span ng-repeat="e in c.Specialities track by $index" ng-if="e.Status=='Active'"><span ng-if="$index>0">,</span>{{e.Name}}</span></td>
                                            <td>{{c.CredentialingDate}}</td>
                                            <td>{{c.RecommendedLevel}}</td>
                                            <td>{{c.AppointmentDate}}</td>
                                            <td>{{c.Status}}</td>
                                            <td class="text-center"><a ng-click="RemoveAppoinment($parent.$index, c)" class="btn btn-xs btn-danger pointer" data-toggle="tooltip" data-placement="right" title="Remove"><i class="fa fa-remove"></i></a></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </fieldset>
                        </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/Lib/Jquery/jquery-1.11.0.js"></script>