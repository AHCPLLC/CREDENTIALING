@model AHC.CD.WebUI.MVC.Areas.Profile.Models.ProfileViewModel

<link href="~/Content/SharedCss/jasny-bootstrap.css" rel="stylesheet" />
<script src="~/Scripts/Lib/Bootstrap/jasny-bootstrap.js"></script>
<form id="ContractInformationForm">
    <div class="form-style">
        <fieldset>
            <legend>
                Contract Information
            </legend>
            <div class="col-lg-12 zero-padding-left-right-div">
                <div class="col-lg-3 form-group">
                    @Html.LabelFor(model => model.ContractInfo.ProviderRelationshipOption, new { @class = "control-label small" })
                    <div id="ProviderRelationCheckBox">
                        @foreach (var value in Enum.GetValues(typeof(AHC.CD.Entities.MasterProfile.Contract.ProviderRelationshipOption)))
                        {
                            <label class="radio-inline">
                                @Html.RadioButtonFor(model => model.ContractInfo.ProviderRelationshipOption, (int)value, new { data_ng_model = "ContractInfo.ProviderRelationshipOption", data_ng_change = "getProviderRelationTextValue()" }) <span>@value.ToString()</span>
                            </label>
                        }
                    </div>
                    @Html.ValidationMessageFor(model => model.ContractInfo.ProviderRelationshipOption, "", new { @class = "text-danger" })
                </div>
                <div class="col-lg-3 form-group">
                    @Html.LabelFor(model => model.ContractInfo.JoiningDate, new { @class = "control-label small" })
                    @Html.TextBoxFor(model => model.ContractInfo.JoiningDate, new { data_val_date = "Please enter date in mm/dd/yyyy format.", data_date_format = "MM/dd/yyyy", data_bs_datepicker = "bs-datepicker", @class = "form-control input-sm", placeholder = "mm/dd/yyyy", data_ng_model = "ContractInfo.JoiningDate" })
                    @Html.ValidationMessageFor(model => model.ContractInfo.JoiningDate, "", new { @class = "text-danger" })
                </div>
                <div class="col-lg-6 form-group">
                    @Html.LabelFor(model => model.ContractInfo.CVDocumentPath, htmlAttributes: new { @class = "control-label small" })
                    <div class="fileinput fileinput-new input-group" data-provides="fileinput">
                        <div class="form-control" data-trigger="fileinput"><i class="glyphicon glyphicon-file fileinput-exists"></i> <span class="fileinput-filename"></span></div>
                        <span class="input-group-addon btn btn-default btn-sm btn-file">
                            <span class="fileinput-new">Select CV</span><span class="fileinput-exists">Change</span>
                            @Html.TextBoxFor(model => model.ContractInfo.CVFile, new { type = "file", onchange = "angular.element(this).scope().setFiles(this)" })
                        </span>
                        <a href="#" class="input-group-addon btn btn-default btn-sm fileinput-exists" data-dismiss="fileinput" ng-click="removeFile('ContractInfo_CVFile')">Remove</a>
                    </div>
                    @Html.ValidationMessageFor(model => model.ContractInfo.CVFile, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-lg-12 zero-padding-left-right-div">
                <div class="col-lg-6 form-group">
                    @Html.LabelFor(model => model.ContractInfo.IndividualTaxId, new { @class = "control-label small" })
                    @Html.TextBoxFor(model => model.ContractInfo.IndividualTaxId, new { @class = "form-control input-sm", placeholder = "individual tax id", data_ng_model = "ContractInfo.IndividualTaxId" })
                    @Html.ValidationMessageFor(model => model.ContractInfo.IndividualTaxId, "", new { @class = "text-danger" })
                </div>
                <div class="col-lg-6 form-group">
                    @Html.LabelFor(model => model.ContractInfo.ContractFilePath, htmlAttributes: new { @class = "control-label small" })
                    <div class="fileinput fileinput-new input-group" data-provides="fileinput">
                        <div class="form-control" data-trigger="fileinput"><i class="glyphicon glyphicon-file fileinput-exists"></i> <span class="fileinput-filename"></span></div>
                        <span class="input-group-addon btn btn-default btn-sm btn-file">
                            <span class="fileinput-new">Select Document</span><span class="fileinput-exists">Change</span>
                            @Html.TextBoxFor(model => model.ContractInfo.ContractFile, new { type = "file", onchange = "angular.element(this).scope().setFiles1(this)" })
                        </span>
                        <a href="#" class="input-group-addon btn btn-default btn-sm fileinput-exists" data-dismiss="fileinput" ng-click="removeFile('ContractInfo_ContractFile')">Remove</a>
                    </div>
                    @Html.ValidationMessageFor(model => model.ContractInfo.ContractFile, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-lg-12 zero-padding-left-right-div">
                <div class="col-lg-3 form-group">
                    @Html.LabelFor(model => model.GroupInfoes, new { @class = "control-label small" })
                    <div>
                        <label class="radio-inline">
                            <input type="radio" ng-model="IsPartOfGroup" name="PartOfGroup1" value="Yes"> Yes
                        </label>
                        <label class="radio-inline">
                            <input type="radio" ng-model="IsPartOfGroup" name="PartOfGroup1" value="No"> No
                        </label>
                    </div>
                </div>
                <div ng-if="IsPartOfGroup=='Yes'" class="col-lg-3 form-group">
                    <label class="control-label small">Group Name</label>
                    <div>
                        <input class="form-control input-sm" ng-class="{'input-validation-error':GroupInfoes.length == 0 && isHasError}" ng-model="searchGroupName" ng-focus="showContryCodeDiv('ProfileCreationGroupInfoResultDiv')" placeholder="select group" />

                        <span ng-if="GroupInfoes.length == 0 && isHasError" class="text-danger field-validation-error">
                            <span>Please select the Group.</span>
                        </span>

                        <div class="ProviderTypeSelectAutoList popover fade bottom in" role="tooltip" id="ProfileCreationGroupInfoResultDiv">
                            <table class="table table-striped table-bordered table-hover table-condensed" style="margin-bottom: 0px;">
                                <tbody>
                                    <tr ng-repeat="group in filterGroups = (OrganizationGroups | filter:searchGroupName)" ng-click="SelectOrganizationGroup(group)" class="pointer">
                                        <td>{{group.GroupName}}</td>
                                    </tr>
                                    <tr ng-if="OrganizationGroups.length == 0">
                                        <td>No data..... </td>
                                    </tr>
                                    <tr ng-if="OrganizationGroups.length > 0 && filterGroups.length == 0">
                                        <td>Group not found..... </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        @Html.ValidationMessageFor(model => model.GroupInfoes, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div ng-if="GroupInfoes.length > 0 && IsPartOfGroup=='Yes'" class="col-lg-6 form-group">
                    <label class="control-label small">Selected Groups</label>
                    <div>
                        <span ng-repeat="group in GroupInfoes track by $index">
                            <span class="label label-default">
                                {{group.OrganizationGroup.GroupName}}
                                <i class="fa fa-minus-circle pointer" ng-click="RemoveOrganizationGroup(group)"></i>
                                <input type="hidden" name="GroupInfoes[{{$index}}].OrganizationGroupID" value="{{group.OrganizationGroupID}}" />
                                <input type="hidden" name="GroupInfoes[{{$index}}].StatusType" value="1" />
                            </span>
                            &nbsp;&nbsp;
                        </span>
                    </div>
                </div>
            </div>
            @*<div class="col-lg-12 zero-padding-left-right-div">
                
                <div class="col-lg-6 form-group">
                    @Html.LabelFor(model => model.ContractInfo.ContractFilePath, htmlAttributes: new { @class = "control-label small" })
                    <div class="fileinput fileinput-new input-group" data-provides="fileinput">
                        <div class="form-control" data-trigger="fileinput"><i class="glyphicon glyphicon-file fileinput-exists"></i> <span class="fileinput-filename"></span></div>
                        <span class="input-group-addon btn btn-default btn-sm btn-file">
                            <span class="fileinput-new">Select Document</span><span class="fileinput-exists">Change</span>
                            @Html.TextBoxFor(model => model.ContractInfo.ContractFile, new { type = "file", onchange = "angular.element(this).scope().setFiles1(this)" })
                        </span>
                        <a href="#" class="input-group-addon btn btn-default btn-sm fileinput-exists" data-dismiss="fileinput" ng-click="removeFile('ContractInfo_ContractFile')">Remove</a>
                    </div>
                    @Html.ValidationMessageFor(model => model.ContractInfo.ContractFile, "", new { @class = "text-danger" })
                </div>
            </div>*@
            <div class="col-lg-12">
                <input id="next1" type="button" value="Continue" ng-click="previewAddProvider('ContractInformationForm')" class="btn btn-primary btn-sm pull-right" />
                <input id="next1" type="button" value="Previous" ng-click="nextForm(1)" class="btn btn-warning btn-sm pull-left" />
            </div>
        </fieldset>
    </div>
</form>