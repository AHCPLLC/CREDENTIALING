@model AHC.CD.WebUI.MVC.Areas.Profile.Models.PracticeLocationInformation.ProviderPracticeOfficeHourViewModel
@using AHC.CD.WebUI.MVC.Areas.Profile.Attributes;

<div class="form-style" ng-if="visibilitySecondControl != 'OfficeHoursEdit'">
    <fieldset class="wrap-words">
        <legend>
            Office Hours
        </legend>
        <table ng-show="PracticeLocationDetailHistory.OfficeHour.AnyTimePhoneCoverage == null && visibilityControl != 'OfficeHoursEdit' " class="table table-bordered table-condensed customtbodyStyle table-striped">
            <thead>
                <tr>
                    <td>
                        No History Available for Office Hours for this Practice Location!
                    </td>
                </tr>
            </thead>
        </table>
        <div class="col-md-12" ng-if="PracticeLocationDetailHistory.OfficeHour.AnyTimePhoneCoverage">
            <div class="col-md-12 zero-padding-left-right-div">
                <div class="col-md-2 form-group">
                    <label class="control-label small">Day</label>
                </div>
                <div class="col-md-10">
                    <div class="col-md-4 form-group">
                        <label class="control-label small">Start Time</label>
                    </div>
                    <div class="col-md-4 form-group">
                        <label class="control-label small">End Time</label>
                    </div>
                </div>
            </div>
            <div class="col-md-12 zero-padding-left-right-div" ng-repeat="PracticeDay in PracticeLocationDetailHistory.OfficeHour.PracticeDays">
                <div class="col-md-2 form-group">
                    <label class="control-label small">{{PracticeDay.DayName || 'Not Available'}}</label>
                </div>
                <div class="col-md-10">
                    <!-- ngRepeat: t in Days[0].Times -->
                    <div ng-repeat="DailyHour in PracticeDay.DailyHours" class="col-md-12 zero-padding-left-right-div ng-scope">
                        <div class="col-md-4 form-group">
                            <i>{{ changeTimeAmPm(DailyHour.StartTime)}}</i>
                        </div>
                        <div class="col-md-4 form-group">
                            <i>{{ changeTimeAmPm(DailyHour.EndTime)}}</i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <div class="col-md-2 remove-left-padding">
                        @Html.LabelFor(model => model.AnyTimePhoneCoverageYesNoOption, new { @class = "control-label small" })
                    </div>
                    <div class="col-md-10">
                        <i>{{PracticeLocationDetailHistory.OfficeHour.AnyTimePhoneCoverage || 'Not Available'}}</i>
                    </div>
                </div>
            </div>
            <div class="col-md-12 zero-padding-left-right-div" ng-if="PracticeLocationDetailHistory.OfficeHour.AnyTimePhoneCoverage=='YES'">
                <div class="form-group col-md-3">
                    @Html.LabelFor(model => model.AnsweringServiceYesNoOption, new { @class = "control-label small" })
                    <div>
                        <i>{{PracticeLocationDetailHistory.OfficeHour.AnsweringService || 'Not Available'}}</i>
                    </div>
                </div>
                <div class="form-group col-md-3">
                    @Html.LabelFor(model => model.VoiceMailToAnsweringServiceYesNoOption, new { @class = "control-label small" })
                    <div>
                        <i>{{PracticeLocationDetailHistory.OfficeHour.VoiceMailToAnsweringService || 'Not Available'}}</i>
                    </div>
                </div>
                <div class="form-group col-md-3">
                    @Html.LabelFor(model => model.VoiceMailOtherYesNoOption, new { @class = "control-label small" })
                    <div>
                        <i>{{PracticeLocationDetailHistory.OfficeHour.VoiceMailOther || 'Not Available'}}</i>
                    </div>
                </div>
                <div class="form-group col-md-3">
                    @Html.LabelFor(model => model.AfterHoursTelephoneNumber, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i>{{PracticeLocationDetailHistory.OfficeHour.AfterHoursTelephoneNumber || 'Not Available'}}</i>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
        <div ng-show="activeMessageDiv=='providerPracticeOfficeHoursSuccessMsg'" class="alert alert-success" role="alert">
            <button ng-click="closeAlertMessage('')" class="close"><span>&times;</span></button>
            {{messageDesc}}
        </div>
    </fieldset>
</div>