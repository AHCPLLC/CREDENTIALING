
<table ng-table="SearchProviderTable" class="table table-bordered table-hover table-condensed alignTableStyle">
    <thead>
        <tr>
            <th rowspan="2">Profile Pic</th>
            <th>NPI Number</th>
            <th>First Name</th>
            <th>Last Name</th>
            @*<th>Plan</th>
            <th>Group</th>*@
            <th>Status</th>
            <th>Approval Date</th>
            <th rowspan="2">Select</th>
        </tr>
        <tr>
            <td><input type="text" placeholder="Filter NPI" class="form-control input-sm" ng-model="search.NPI" /></td>
            <td><input type="text" placeholder="Filter First Name" class="form-control input-sm" ng-model="search.FirstName" /></td>
            <td><input type="text" placeholder="Filter Last Name" class="form-control input-sm" ng-model="search.LastName" /></td>
            @*<td><input type="text" placeholder="Filter Plan" class="form-control input-sm" ng-model="search.Plan" /></td>
            <td><input type="text" placeholder="Filter Group" class="form-control input-sm" ng-model="search.Groups" /></td>*@
            <td><input type="text" placeholder="Filter Type" class="form-control input-sm" ng-model="search.CredType" /></td>
            <td><input type="text" placeholder="Filter Date" class="form-control input-sm" ng-model="search.CredDate" /></td>
        </tr>
    </thead>
    <tbody>
        <tr ng-class="{selectedProvider: p.IsSelected == true}" ng-repeat="p in $data | filter:{NPI:search.NPI,FirstName:search.FirstName,LastName:search.LastName,Groups:search.Groups,Plan:search.Plan,CredType:search.CredType,CredDate:search.CredDate}">
            <td class="col-lg-1">
                <div class="thumbnail imageStyle">
                    <img src="~/Content/Images/Providers/{{p.Image}}" class="img-rounded">
                </div>
            </td>
            <td>{{p.NPI}}</td>
            <td>{{p.FirstName}}</td>
            <td>{{p.LastName}}</td>
            @*<td><span ng-repeat="s in p.Plan"><span ng-if="$index > 0">, </span>{{s}}</span></td>
            <td><span ng-repeat="g in p.Groups"><span ng-if="$index > 0">, </span>{{g}}</span></td>*@
            <td>{{p.CredType}}</td>
            <td>{{p.CredDate}}</td>
            <td class="col-lg-1">
                <input type="checkbox" ng-model="p.IsCkecked" name="select">
            </td>
        </tr>
    </tbody>
</table>
