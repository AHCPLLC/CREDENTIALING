    <li class="previous"><a href="/Credentialing/CnD/Index/#/credentialing_appointment"><<</a></li>
    <li class="next"><a href="/Credentialing/CnD/Index/#/load_to_plan">>></a></li>
    <li class="next"><a href="/Credentialing/CnD/Index/#/load_to_plan">Skip</a></li>
</ul>
<div class="clearfix"></div>


<div class="col-lg-12 zero-padding-left-right-div">
    <div class="col-lg-12 form-style">
        <fieldset style="min-height:186px">
            <legend>
                Package Generator
            </legend>
            <div class="col-lg-12 form-style">
                <div class="col-lg-3 form-style" ng-repeat="g in GeneratedList track by $index">
                    <button class="fa fa-file-archive-o fa-2x" >{{$index+1}}</button>
                </div>
                <button class="btn btn-primary btn-file" ng-click="ShowApplicationDocument()">
                    Add Package
                </button>
            </div>
            <div class="clearfix"></div>
            <br />
            <div class="col-lg-6 form-style" ng-show="AppRepoStatus">
                <fieldset style="min-height:250px">
                    <legend>
                        Forms
                    </legend>
                    <div class="col-lg-12">
                        <table class="table table-bordered table-condensed alignTableStyle">
                            <tr>
                                <th>Select Form</th>
                                <th>Forms</th>
                                <th></th>
                                <th></th>
                            </tr>
                            <tr ng-repeat="a in AppRepoList">

                                <td><input type="checkbox" ng-click="ToggleSelection(a)" /></td>
                                <td>{{a}}</td>
                                <td class="col-lg-2 col-md-2 hidden-sm hidden-xs">
                                    <button type="button" class="btn btn-default btn-xs" data-toggle="modal" data-target="#selectDoc"><i class="fa fa-eye"></i></button>
                                </td>
                                <td class="col-lg-2 col-md-2 hidden-sm hidden-xs">
                                    <button type="button" class="btn btn-primary btn-xs" data-toggle="modal" data-target="#selectDoc1"><i class="fa fa-edit"></i></button>
                                </td>
                            </tr>


                        </table>
                    </div>
                </fieldset>
            </div>
            <div class="col-lg-6 form-style" ng-show="DocumentRepoStatus">
                <fieldset style="min-height:250px">
                    <legend>
                        Profile Documents
                    </legend>
                    <div class="col-lg-12">
                        <table class="table table-bordered table-condensed alignTableStyle">
                            <tr>
                                <th>Select Document</th>
                                <th>Documents</th>
                                <th></th>
                                <th></th>
                            </tr>
                            <tr ng-repeat="d in DocumentRepoList">

                                <td><input type="checkbox" ng-click="ToggleSelection(d)" /></td>
                                <td>{{d}}</td>
                                <td class="col-lg-2 col-md-2 hidden-sm hidden-xs">
                                    <button type="button" class="btn btn-default btn-xs" data-toggle="modal" data-target="#selectDoc"><i class="fa fa-eye"></i></button>
                                </td>
                                <td class="col-lg-2 col-md-2 hidden-sm hidden-xs">
                                    <button type="button" class="btn btn-primary btn-xs" data-toggle="modal" data-target="#selectDoc1"><i class="fa fa-edit"></i></button>
                                </td>
                            </tr>


                        </table>
                    </div>
                </fieldset>
            </div>
            <div class="clearfix"></div>
            <br />
            <div class="col-lg-12 form-style" ng-if="PackageList.length>0">
                <fieldset>
                    <legend>
                        Package
                    </legend>
                    <div class="col-lg-12">
                        <table class="table table-bordered table-condensed alignTableStyle">
                            <tr>
                                <th></th>
                                <th>Documents</th>
                                <th></th>
                                <th></th>
                            </tr>
                            <tr ng-repeat="p in PackageList track by $index">

                                <td ng-if="$index==0">
                                    <a class="btn btn-info btn-xs"><i class="fa fa-sort-up"></i></a>
                                </td>
                                <td ng-if="$index>0 && $index<PackageList.length-1">
                                    <a class="btn btn-info btn-xs"><i class="fa fa-sort-up"></i></a>
                                    <a class="btn btn-info btn-xs"><i class="fa fa-sort-down"></i></a>
                                </td>
                                <td ng-if="$index==PackageList.length-1 && $index!=0">
                                    <a class="btn btn-info btn-xs"><i class="fa fa-sort-down"></i></a>
                                </td>
                                <td>{{p}}</td>
                                <td class="col-lg-2 col-md-2 hidden-sm hidden-xs">
                                    <button type="button" class="btn btn-default btn-xs" data-toggle="modal" data-target="#selectDoc"><i class="fa fa-eye"></i></button>
                                </td>
                                <td class="col-lg-2 col-md-2 hidden-sm hidden-xs">
                                    <button type="button" class="btn btn-primary btn-xs" data-toggle="modal" data-target="#selectDoc"><i class="fa fa-edit"></i></button>
                                </td>
                            </tr>


                        </table>
                    </div>

                    <button class="btn btn-success pull-right" ng-click="Generate('SomeData')">Generate Package</button>
                </fieldset>
            </div>
        </fieldset>
    </div>
</div>