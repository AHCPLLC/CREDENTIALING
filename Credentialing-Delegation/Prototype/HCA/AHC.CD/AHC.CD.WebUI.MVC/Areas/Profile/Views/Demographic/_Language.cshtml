@model AHC.CD.WebUI.MVC.Areas.Profile.Models.Demographic.LanguageInfoViewModel

<style>
    .LanguageSelectAutoList {
        display: inherit;
        left: 0%;
        width: 95%;
        margin-left: 15px;
        margin-right: 15px;
        overflow-y: scroll;
        height: 222px;
    }

    .LanguageSelectAutoList {
        max-width: 100%;
    }
    .LanguageSelectAutoList.popover{
        border-radius: 0px;
    }
    .LanguageSelectAutoList.popover.bottom {
        margin-top: 77px;
    }
     .LanguageSelectAutoList > table > tbody > tr:hover {
           background-color: rgb(36, 71, 196);
            color: white;
        }
</style>
<script>
    $(".LanguageSelectAutoList").hide();
</script>

<form class="languageInfo">
    <div class="col-lg-12 text-right">
        <span class="instruction-style">
            Please select a language to change its priority.
        </span>
    </div>
    <div class="col-md-12 zero-padding-left-right-div">
        @Html.ValidationSummary(true, "", new { @class = "text-danger validSummary" })
        <div class="col-lg-6">
            <div class="form-group">
                <label class="control-label">Non-English Languages you are fluent (in order of proficiency)</label>
                <br/>
                <span>Select Languages:</span>
                <div>
                    <input class="form-control input-sm" ng-model="searchLang" id="searchLanguageKnow" ng-focus="shoLanguageList('DemographicsLanguageKnowSearchResultDiv')" />
                    <div class="LanguageSelectAutoList popover fade bottom in" role="tooltip" id="DemographicsLanguageKnowSearchResultDiv">
                        <table class="table table-striped table-bordered table-hover table-condensed">
                            <tbody>
                                <tr ng-repeat="lang in filteredLangResults = (tempLanguages | filter:searchLang)" ng-click="SelectLanguageKnown(lang)" class="pointer">
                                    <td>{{lang.name}} ({{lang.nativeName}})</td>
                                </tr>
                                <tr ng-if="tempLanguages.length == 0">
                                    <td>No data..... </td>
                                </tr>
                                <tr ng-if="tempLanguages.length > 0 && filteredLangResults.length == 0">
                                    <td>Match not found..... </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="col-lg-11" style="padding-right:0px;">
                Selected Languages ({{TempLanguageForEdit.KnownLanguages.length}}) : <br />
                <table class="table table-striped table-bordered table-hover table-condensed">
                    <thead>
                        <tr>
                            <th>Language</th>
                            @*<th>Read</th>
                        <th>Write</th>
                        <th>Speak</th>*@
                            <th>Priority</th>
                            <th>Remove</th>
                        </tr>
                    </thead>

                    <tbody>
                        <tr ng-repeat="kl in TempLanguageForEdit.KnownLanguages | orderBy:'ProficiencyIndex':reverse" ng-click="selectedLanguage(kl,$index)">
                            <td ng-class="{true:'label-warning'}[selectedIndex==$index]"><span>{{kl.Language}}</span></td>

                            <td ng-class="{true:'label-warning'}[selectedIndex==$index]">
                                {{kl.ProficiencyIndex = $index+1}}&nbsp;&nbsp;&nbsp;&nbsp;

                            </td>
                            <td ng-class="{true:'label-warning'}[selectedIndex==$index]"><i ng-if="kl.KnownLanguageID > removeLinkShowId" class="fa fa-minus-circle pointer" style="color:#d9534f;" ng-click="UnselectLanguage(kl)"></i></td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="col-lg-1" style="margin-top:18px;">
                <i ng-if="langForPriority" class="fa fa-arrow-circle-up btn btn-xs btn-primary" ng-click="PriorityChange('increase')" data-toggle="tooltip" data-placement="top" title="Increase Priority"></i>
                <i ng-if="langForPriority" class="fa fa-arrow-circle-down fa-align-center btn btn-xs btn-primary" ng-click="PriorityChange('decrease')" data-toggle="tooltip" data-placement="top" title="Decrease Priority"></i>
            </div>
        </div>
    </div>
    <div class="col-lg-12 clearfix" style="padding-bottom:15px;"></div>
    <div class="col-lg-12 zero-padding-left-right-div">
        <div class="col-lg-12">
            @Html.LabelFor(model => model.CanSpeakAmericanSignLanguage, htmlAttributes: new { @class = "control-label small" })
            &nbsp;&nbsp;
            <label class="radio-inline">
                @Html.RadioButtonFor(model => model.CanSpeakAmericanSignLanguage, "Yes", new { data_ng_model = "TempLanguageForEdit.CanSpeakAmericanSignLanguage" }) Yes
            </label>
            <label class="radio-inline">
                @Html.RadioButtonFor(model => model.CanSpeakAmericanSignLanguage, "No", new { data_ng_model = "TempLanguageForEdit.CanSpeakAmericanSignLanguage" }) No
            </label>
            <br />
            @Html.ValidationMessageFor(model => model.CanSpeakAmericanSignLanguage, "", new { @class = "text-danger" })
        </div>
    </div>
    <div ng-if="IsLanguageInfoHasError" class="col-lg-12">
        <div class="alert alert-danger" role="alert">
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <span class="sr-only">Error:</span>
            Error Lists : <br />
            <span ng-repeat="err in LanguageInfoErrorList track by $index">{{err}}</span>
        </div>
    </div>
    <div class="col-md-12">
        <button class="btn btn-warning btn-sm" ng-click="LanguageKnownToggle()">Cancel</button>
        <button class="btn btn-success btn-sm pull-right" ng-click="saveEthnicityLanguages(TempLanguageForEdit)">Save</button>
    </div>
</form>