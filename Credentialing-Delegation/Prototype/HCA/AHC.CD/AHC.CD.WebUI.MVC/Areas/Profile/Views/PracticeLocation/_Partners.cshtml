
<div class="form-style">
    <fieldset>
        <legend>
            Partners/Associates/Covering Colleagues
        </legend>

        <div id="CredentialingContact">
            <div class="col-lg-12 zero-padding-left-right-div">
                <table ng-hide=" primaryPracticeLocations.Partners.length >= 0" class="table table-bordered table-condensed customtbodyStyle table-striped">
                    <thead>
                        <tr>
                            <td>No Data Available ! To Add New Click "Add Partners/Associates/Covering Colleagues"</td>
                        </tr>
                    </thead>
                </table>
                <table ng-hide=" primaryPracticeLocations.Partners.length < 1" class="table table-bordered table-condensed table-striped customtbodyStyle">
                    <thead>

                        <tr>
                            <th>Employer Name</th>
                            <th>Specialty Code</th>
                            <th>Provider Type</th>
                            <th>Action</th>
                        </tr>

                    </thead>
                    <tbody ng-repeat="partner in primaryPracticeLocations.Partners">

                        <tr>
                            <td>{{partner.First}} {{patner.Middle}} {{partner.Last}}</td>
                            <td>{{partner.Speciality}}</td>
                            <td>{{partner.ProviderType}}</td>
                            <td>
                                <button class="btn btn-xs btn-default" ng-click="viewPartners($index,partner)" ng-hide="viewShowPartners"><i class="fa fa-eye"></i></button>
                                <button class="btn btn-xs btn-primary" ng-click="editPartners($index,partner)" ng-hide="editShowPartners"><i class="fa fa-edit"></i></button>
                                <button ng-hide="viewShowPartners || editShowPartners || newShowMidLevel || $index+1!=primaryPracticeLocations.Partners.length" class="btn btn-xs btn-success" ng-click="addPartners()"><i class="fa fa-plus"></i></button>
                            </td>
                        </tr>
                        <tr ng-show="viewShowPartners && midLevel==midLevel">
                            <td colspan="6" id="PartnersEditDiv{{$index}}" class="editTableDataStyle">
                                @Html.Partial("~/Areas/Profile/Views/PracticeLocation/_ViewPartners.cshtml")
                            </td>
                        </tr>
                        <tr ng-show="editShowPartners && midLevel==midLevel">
                            <td colspan="6" id="partnersEditDiv{{$index}}" class="editTableDataStyle">
                                @Html.Partial("~/Areas/Profile/Views/PracticeLocation/_AddEditPartners.cshtml")
                            </td>
                        </tr>
                    </tbody>

                </table>

            </div>

            <div class="clearfix"></div>
            <fieldset ng-show="newShowPartners">
                <legend>
                    Add Partners/Associates/Covering Colleagues
                </legend>
                <div id="newShowPartnersDiv">
                    @Html.Partial("~/Areas/Profile/Views/PracticeLocation/_AddEditPartners.cshtml")
                </div>
            </fieldset>
            <div ng-hide="primaryPracticeLocations.Partners.length > 0 || newShowPartners" class="col-md-12 text-right">
                <button class="btn btn-xs btn-primary addHosPrvBtn" ng-click="addPartners()"><i class="fa fa-plus"></i> Add Partners/Associates/Covering Colleagues</button>
            </div>
        </div>
    </fieldset>
</div>
