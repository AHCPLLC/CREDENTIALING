<script src="~/Scripts/Custom/Profile/documentRepositoryController.js"></script>

<div class="panel-group" ng-controller="DocumentRepositoryController">
    <div class="form-style">
        <fieldset>
            <legend>
                Document Repository Management
            </legend>
            <div class="legend2 pull-right">
                <a ng-click="AddNewDocument({LicenseTypeID:0})" class="btn btn-xs btn-primary"><i class="fa fa-plus"></i> Add New</a>
            </div>
            <div class="col-md-12 zero-padding-left-right-div">
                <div class="col-lg-4 col-md-4 col-sm-4">
                    <ul class="list-group">
                        <li ng-repeat="lt in LicenseTypes track by $index" class="list-group-item">
                            <a ng-click="ViewLicenseList(lt)" class="pointer"><i class="fa" ng-class="{'fa-minus-square-o':SelectedLicenseType.LicenseTypeID==lt.LicenseTypeID, 'fa-plus-square-o':SelectedLicenseType.LicenseTypeID!=lt.LicenseTypeID}"></i></a> {{lt.LicenseTypeName}}
                            @*<a ng-click="AddNewDocument(lt)" class="btn btn-xs btn-primary pull-right" style="margin-left: 10px;"><i class="fa fa-plus"></i> Add</a>*@
                            <a ng-click="ViewLicenseList(lt, 1)" class="btn btn-xs btn-primary pull-right" tooltip data-toggle="tooltip" data-placement="left" title="View Archive"><i class="fa fa-clock-o"></i></a>
                            @*<ul ng-if="SelectedLicenseType.LicenseTypeID == lt.LicenseTypeID" class="list-group">
                                <li  ng-click="ViewLicense(l)" class="list-group-item pointer" ng-class="{'active':SelectedLicense.LicenseID==l.LicenseID}">{{l.LicenseName}}</li>

                            </ul>*@
                            <ul ng-if="SelectedLicenseType.LicenseTypeID == lt.LicenseTypeID && !IsHistoryView" class="list-group">
                                <li ng-repeat="l in lt.Licenses" class="list-group-item">
                                    <span class="badge pointer" ng-click="EditDocument(lt, l)" style="background-color: #337ab7;" tooltip data-toggle="tooltip" data-placement="right" title="Edit New"><i class="fa fa-pencil"></i></span>
                                    <span class="badge pointer" ng-click="RemoveDocument(lt, l)" style="background-color: #a94442;" tooltip data-toggle="tooltip" data-placement="left" title="Remove"><i class="fa fa-minus"></i></span>

                                    <a ng-click="ViewLicense(l)" class="pointer">{{l.LicenseName}}</a>
                                </li>
                            </ul>
                            <ul ng-if="SelectedLicenseType.LicenseTypeID == lt.LicenseTypeID && IsHistoryView" class="list-group">
                                <li class="list-group-item">
                                    <table class="table table-bordered table-condensed">
                                        <thead>
                                            <tr>
                                                <th>Title</th>
                                                <th>Archive Date</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr ng-repeat="l in lt.LicenseHistories">
                                                <td><a ng-click="ViewLicense(l)" class="pointer">{{l.LicenseName}}</a></td>
                                                <td>{{l.removeDate | date:sort}}</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                    <a ng-click="ViewLicense(l)" class="pointer">{{l.LicenseName}}</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>

                <div ng-if="IsMessage" class="col-lg-8 col-md-8 col-sm-8 form-style">
                    <div class="alert alert-success" role="alert">
                        <strong>Success!</strong> {{SuccessMessage}}
                    </div>
                </div>

                <div ng-if="!IsAddNewDocument && SelectedLicense.LicenseID" class="col-lg-8 col-md-8 col-sm-8 form-style">
                    <fieldset>
                        <legend>Document Preview</legend>
                        <img ng-src="{{SelectedLicense.LicenseDocPath}}" width="650" height="500" />
                    </fieldset>
                </div>
                <div ng-if="IsAddNewDocument" class="col-lg-8 col-md-8 col-sm-8 form-style">
                    <fieldset>
                        <legend>New Document</legend>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <label class="control-label small">Title :</label>
                            <div class="form-group">
                                <input type="text" ng-model="TempObject.Title" class="form-control input-sm" placeholder="title" />
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <label class="control-label small">Category :</label>
                            <div class="form-group">
                                <select ng-model="TempObject.CategoryID" class="form-control input-sm">
                                    <option selected disabled>-Select-</option>
                                    <option ng-repeat="lt in LicenseTypes track by $index" value="{{lt.LicenseTypeID}}">{{lt.LicenseTypeName}}</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <label class="control-label small">Select Document :</label>
                            <div class="form-group">
                                <input type="file" ng-model="TempObject.Document" />
                            </div>
                        </div>
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" ng-model="TempObject.IsPrivate"> Private
                                </label>
                            </div>
                        </div>
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <button ng-click="SaveData(TempObject);" class="btn btn-sm btn-primary pull-right">Add</button>
                            <button ng-click="CancelAdd();" class="btn btn-sm btn-warning pull-left">Cancel</button>
                        </div>
                    </fieldset>
                </div>


                <!--------------------- Alert Modal --------------->
                <!-- Modal -->
                <div class="modal fade" id="DocRemoveConfirmation" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                <h4 class="modal-title" id="myModalLabel">Confirmation - Remove Document</h4>
                            </div>
                            <div class="modal-body">
                                <span>
                                    Are you sure, you want to remove <b>{{TempLicense.LicenseName}}</b>.!!!!
                                </span>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-xs btn-default" data-dismiss="modal">No</button>
                                <button ng-click="Confirmation(TempLicense);" type="button" class="btn btn-xs btn-primary">Yes</button>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- end modal -->
            </div>
        </fieldset>
    </div>
</div>
