
<div class="form-style">
    <fieldset>
        <legend>
            Supervising Provider
        </legend>

        <div id="CredentialingContact">
            <div class="col-lg-12 zero-padding-left-right-div">
                <table ng-hide=" primaryPracticeLocations.Supervisors.length >= 0" class="table table-bordered table-condensed customtbodyStyle table-striped">
                    <thead>
                        <tr>
                            <td>No Data Available ! To Add New Click "Add Supervising Provider"</td>
                        </tr>
                    </thead>
                </table>
                <table ng-hide=" primaryPracticeLocations.Supervisors.length < 1" class="table table-bordered table-condensed table-striped customtbodyStyle">
                    <thead>

                        <tr>
                            <th>Name</th>
                            <th>State License Number</th>
                            <th>DEA Number</th>
                            <th>Specialty</th>
                            <th>Supporting Document</th>
                            <th>Action</th>
                        </tr>

                    </thead>
                    <tbody ng-repeat="supervisor in primaryPracticeLocations.Supervisors">

                        <tr>
                            <td>{{supervisor.ProviderFirstName}} {{supervisor.ProviderMiddleName}} {{supervisor.ProviderLastName}} </td>
                            <td>{{supervisor.ProviderStateLicense}}</td>
                            <td>{{supervisor.ProviderDEANumber}}</td>
                            <td>{{supervisor.ProviderSpecialty}}</td>
                            <td>Not Available</td>
                            <td>
                                <button class="btn btn-xs btn-default" ng-click="viewSupervisor($index,supervisor)" ng-hide="viewShowSupervisor"><i class="fa fa-eye"></i></button>
                                <button class="btn btn-xs btn-primary" ng-click="editSupervisor($index,supervisor)" ng-hide="editShowSupervisor"><i class="fa fa-edit"></i></button>
                                <button ng-hide="viewShowSupervisor || editShowSupervisor|| newShowSupervisor || $index+1!=primaryPracticeLocations.Supervisors.length" class="btn btn-xs btn-success" ng-click="addSupervisor()"><i class="fa fa-plus"></i></button>
                            </td>
                        </tr>
                        <tr ng-show="viewShowSupervisor && supervisor==supervisor">
                            <td colspan="6" id="supervisorEditDiv{{$index}}" class="editTableDataStyle">
                                @Html.Partial("~/Areas/Profile/Views/PracticeLocation/_ViewSupervising.cshtml")
                            </td>
                        </tr>
                        <tr ng-show="editShowSupervisor && supervisor==supervisor">
                            <td colspan="6" id="supervisorEditDiv{{$index}}" class="editTableDataStyle">
                                @Html.Partial("~/Areas/Profile/Views/PracticeLocation/_AddEditSupervising.cshtml")
                            </td>
                        </tr>
                    </tbody>

                </table>

            </div>

            <div class="clearfix"></div>
            <fieldset ng-show="newShowSupervisor">
                <legend>
                    Add Supervising Provider
                </legend>
                <div id="newShowSupervisorDiv">
                    @Html.Partial("~/Areas/Profile/Views/PracticeLocation/_AddEditSupervising.cshtml")
                </div>
            </fieldset>
            <div ng-hide="primaryPracticeLocations.Supervisors.length > 0 || newShowSupervisor" class="col-md-12 text-right">
                <button class="btn btn-xs btn-primary addHosPrvBtn" ng-click="addSupervisor()"><i class="fa fa-plus"></i> Add Supervising Provider</button>
            </div>
        </div>
    </fieldset>
</div>
