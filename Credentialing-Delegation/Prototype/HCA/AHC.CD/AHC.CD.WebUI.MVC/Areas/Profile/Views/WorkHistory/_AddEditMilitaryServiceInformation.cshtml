@model AHC.CD.WebUI.MVC.Areas.Profile.Models.WorkHistory.MilitaryServiceInformationViewModel


    <form class="militaryServiceInformationForm">

        <div class="col-lg-12 zero-padding-left-right-div">
            @Html.ValidationSummary(true, "", new { @class = "text-danger validSummary" })
            @Html.HiddenFor(model => model.MilitaryServiceInformationID, new { data_ng_model = "militaryServiceInformation.MilitaryServiceInformationID" })
            <div class="col-md-12">
                <div class="form-group col-md-4">
                    @Html.LabelFor(model => model.MilitaryBranch, new { @class = "control-label small" })
                    @Html.DropDownListFor(Model => Model.MilitaryBranch, new[] { new SelectListItem { Value = "Navy", Text = "Navy" }, new SelectListItem { Value = "Marine", Text = "Marine" } }, "-- select a Branch --", new { @class = "form-control input-sm", data_ng_mode = "militaryServiceInformation.MilitaryBranch" })
                    @Html.ValidationMessageFor(model => model.MilitaryBranch, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-md-4">
                    @Html.LabelFor(model => model.StartDate, new { @class = "control-label small" })
                    <div>
                        @Html.TextBoxFor(model => model.StartDate, new { @class = "form-control input-sm", placeholder = "star date", data_ng_mode = "militaryServiceInformation.StartDate" })
                        @Html.ValidationMessageFor(model => model.StartDate, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group col-md-4">
                    @Html.LabelFor(model => model.DischargeDate, new { @class = "control-label small" })
                    <div>
                        @Html.TextBoxFor(model => model.DischargeDate, new { @class = "form-control input-sm", placeholder = "discharge date", data_ng_mode = "militaryServiceInformation.DischargeDate" })
                        @Html.ValidationMessageFor(model => model.DischargeDate, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-md-12">
                <div class="form-group col-md-6">
                    @Html.LabelFor(model => model.RankAtDischarge, new { @class = "control-label small" })
                    <div>
                        @Html.DropDownListFor(Model => Model.RankAtDischarge, new[] { new SelectListItem { Value = "Navy", Text = "Navy" }, new SelectListItem { Value = "Marine", Text = "Marine" } }, "-- select a Branch --", new { @class = "form-control input-sm", data_ng_mode = "militaryServiceInformation.RankAtDischarge" })
                        @Html.ValidationMessageFor(model => model.RankAtDischarge, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group col-md-6">
                    @Html.LabelFor(model => model.DischargeType, new { @class = "control-label small" })
                    <div>
                        @Html.DropDownListFor(Model => Model.DischargeType, new[] { new SelectListItem { Value = "Navy", Text = "Navy" }, new SelectListItem { Value = "Marine", Text = "Marine" } }, "-- select a Branch --", new { @class = "form-control input-sm", data_ng_mode = "militaryServiceInformation.DischargeType" })
                        @Html.ValidationMessageFor(model => model.DischargeType, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-md-12">
                <div class="col-md-12">
                    <div class="form-group">
                        @Html.LabelFor(model => model.OtherHonorable, new { @class = "control-label small" })
                        <div>
                            @Html.TextBoxFor(model => model.OtherHonorable, new { @class = "form-control input-sm", placeholder = "reason", data_ng_mode = "militaryServiceInformation.OtherHonorable" })
                            @Html.ValidationMessageFor(model => model.OtherHonorable, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-md-12">
                <div class="form-group col-md-6">
                    @Html.LabelFor(model => model.PresentDutyStatus, new { @class = "control-label small" })
                    <div>
                        @Html.DropDownListFor(Model => Model.PresentDutyStatus, new[] { new SelectListItem { Value = "Active", Text = "Active" }, new SelectListItem { Value = "Inactive", Text = "Inactive" } }, "-- Status --", new { @class = "form-control input-sm", data_ng_mode = "militaryServiceInformation.PresentDutySatus" })
                        @Html.ValidationMessageFor(model => model.PresentDutyStatus, "", new { @class = "text-danger" })
                    </div>
                </div>
