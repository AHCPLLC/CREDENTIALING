@model AHC.CD.WebUI.MVC.Areas.Profile.Models.IdentificationAndLicenses.CDSCInformationViewModel

@*<script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>*@

<form class="cDSCInformationForm">
    <div class="col-lg-12 zero-padding-left-right-div">
        <fieldset>
            <legend>
                CDS Information
            </legend>
           <div>
                <div class="col-md-12">
                   
                        <div class="form-group col-md-3">
                            @Html.LabelFor(model => model.CertNumber, new { @class = "control-label small" })
                            <div>
                                <i class="data-label">{{cDSCInformation.CertNumber}}</i>
                            </div>
                        </div>
                        <div class="form-group col-md-3">
                            @Html.LabelFor(model => model.State, new { @class = "control-label small" })
                            <div>
                                <i class="data-label">{{cDSCInformation.State}}</i>
                            </div>
                        </div>
                        <div class="form-group col-md-3">
                            @Html.LabelFor(model => model.IssueDate, new { @class = "control-label small" })
                            <div>
                                <i class="data-label">{{cDSCInformation.IssueDate | date: "MM-dd-yyyy"}}</i>
                            </div>
                        </div>
                        <div class="form-group col-md-3">
                            @Html.LabelFor(model => model.ExpiryDate, new { @class = "control-label small" })
                            <div>
                                <i class="data-label">{{cDSCInformation.ExpiryDate | date: "MM-dd-yyyy"}}</i>
                            </div>
                        </div>
                    </div>
                   
                    <div class="col-md-12">
                        <label class="control-label small">Certificate</label>
                        <div>
                            <i class="data-label"><a href="{{cDSCInformation.CDSCCertPath}}" class="pointer" target="_blank" data-toggle="tooltip" data-placement="top" title="CDS Certificate"><i class="fa fa-file"> CDS Certificate</i></a></i>
                        </div>
                        <div class="col-md-2 form-group">
                            <span >@Html.LabelFor(model => model.CDSCCertPath, htmlAttributes: new { @class = "control-label small" })</span>
                        </div>
                        <div class="col-md-1 form-group">
                            <div>
                                <a href="{{cDSCInformation.CDSCCertPath}}" class="pointer" target="_blank" data-toggle="tooltip" data-placement="top" title="Preview"><i class="fa fa-file"></i></a>
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
               <br/>
                    <div class="col-md-12 form-group">
                        <button type="button" class="btn btn-warning btn-sm" ng-click="cancelCDSCInformation()">Cancel</button>
                        <button type="submit" class="btn btn-primary btn-sm pull-right" ng-click="editCDSCInformation($index,ci)">Edit</button>
                    </div>
                </div>
            </fieldset>
        </div>
</form>
