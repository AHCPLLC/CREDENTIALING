@model AHC.CD.WebUI.MVC.Areas.Profile.Models.EducationHistory.CMECertificationViewModel
           <div class="clearfix"></div>
<div id="certificateForm">

    <fieldset>
        <legend>
            Post Graduate Training/CME
        </legend>
        <div class=" col-lg-12 zero-padding-left-right-div">
            @Html.ValidationSummary(true, "", new { @class = "text-danger validSummary" })
            @Html.HiddenFor(model => model.CMECertificationID, new { data_ng_model = "certificationCMEViewModel.CMECertificationID" })
            <div class="col-lg-12 zero-padding-left-right-div">
                <div class="col-lg-4 form-group">
                    @Html.LabelFor(model => model.QualificationDegree, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <select class="form-control input-sm" ng-model="certificationCMEViewModel.DegreeAwarded">
                            <option></option>
                            <option value="MD">MD</option>
                        </select>
                        @Html.ValidationMessageFor(model => model.QualificationDegree, "", new { @class = "text-danger" })
                    </div>

                </div>
                <div class="col-lg-4 form-group">
                    <label class="control-label small">Post Graduate Training/CME Name</label>
                    <div>
                        <select class="form-control input-sm"  required ng-model="certificationCMEViewModel.CertificateName">
                            <option value="Basic Life Support">Basic Life Support</option>
                            <option value="CPR">CPR</option>
                            <option value="ADV Cardiac Life SPT">ADV Cardiac Life SPT</option>
                            <option value="Neonatal Advanced Life SPT">Neonatal Advanced Life SPT </option>
                            <option value="ADV Life Support in QB">ADV Life Support in QB</option>
                            <option value="ADV Truma Life STP">ADV Truma Life STP</option>
                            <option value="Pediatric Advanced Life SPT">Pediatric Advanced Life SPT</option>
                            <option value="Others">Others</option>
                        </select>
                        @Html.ValidationMessageFor(model => model.Certification, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div ng-show="certificateTextBox" class="col-lg-4 form-group">
                    @Html.LabelFor(model => model.Certification, htmlAttributes: new { @class = "control-label small" })
                    @Html.TextBoxFor(model => model.Certification, new { @class = "form-control input-sm", placeholder = "Certification", data_ng_model = "certificationCMEViewModel.OtherCertificateName" })
                    @Html.ValidationMessageFor(model => model.Certification, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-lg-3 form-group">
                @Html.LabelFor(model => model.InstituteName, htmlAttributes: new { @class = "control-label small" })
                <div>

                    @Html.TextBoxFor(model => model.InstituteName, new { @class = "form-control input-sm", placeholder = "Institute Name", data_ng_model = "certificationCMEViewModel.InstituteName" })
                </div>
                @Html.ValidationMessageFor(model => model.InstituteName, "", new { @class = "text-danger" })
            </div>
            <div class="col-lg-3 form-group">
                @Html.LabelFor(model => model.SponsorName, htmlAttributes: new { @class = "control-label small" })
                <div>

                    @Html.TextBoxFor(model => model.SponsorName, new { @class = "form-control input-sm", placeholder = "Sponsor Name", data_ng_model = "certificationCMEViewModel.SponsorName" })
                </div>
                @Html.ValidationMessageFor(model => model.SponsorName, "", new { @class = "text-danger" })
            </div>
            <div class="col-lg-3 form-group">
                @*@Html.LabelFor(model => model.ExpiryDate, htmlAttributes: new { @class = "control-label small" })*@
                <label class="control-label small">Expiration</label>
                <div>

                    @Html.TextBoxFor(model => model.ExpiryDate, new { type = "date", @class = "form-control input-sm", placeholder = "Expiry Date", data_ng_model = "certificationCMEViewModel.ExpiryDate" })
                </div>
                @Html.ValidationMessageFor(model => model.ExpiryDate, "", new { @class = "text-danger" })
            </div>
            <div class="col-lg-3 form-group">
                @Html.LabelFor(model => model.CreditHours, htmlAttributes: new { @class = "control-label small" })
                <div>

                    @Html.TextBoxFor(model => model.CreditHours, new { @class = "form-control input-sm", placeholder = "Credit Hours", data_ng_model = "certificationCMEViewModel.CreditHours" })
                </div>
                @Html.ValidationMessageFor(model => model.CreditHours, "", new { @class = "text-danger" })
            </div>

            <div class="form-group col-md-3">
                @Html.LabelFor(model => model.EducationAddress.Number, htmlAttributes: new { @class = "control-label small" })
                <div>

                    @Html.TextBoxFor(model => model.EducationAddress.Number, new { @class = "form-control input-sm", placeholder = "number", data_ng_model = "certificationCMEViewModel.Number" })
                </div>
                @Html.ValidationMessageFor(model => model.EducationAddress.Number, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-3">
                @Html.LabelFor(model => model.EducationAddress.Building, htmlAttributes: new { @class = "control-label small" })
                <div>

                    @Html.TextBoxFor(model => model.EducationAddress.Building, new { @class = "form-control input-sm", placeholder = "building", data_ng_model = "certificationCMEViewModel.Building" })
                </div>
                @Html.ValidationMessageFor(model => model.EducationAddress.Building, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-3">
                @Html.LabelFor(model => model.EducationAddress.Street, htmlAttributes: new { @class = "control-label small" })
                <div>

                    @Html.TextBoxFor(model => model.EducationAddress.Street, new { @class = "form-control input-sm", placeholder = "street", data_ng_model = "certificationCMEViewModel.Street" })
                </div>
                @Html.ValidationMessageFor(model => model.EducationAddress.Street, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-3">
                @Html.LabelFor(model => model.EducationAddress.Country, htmlAttributes: new { @class = "control-label small" })
                <div>

                    <select id="Country" class="form-control input-sm" ng-model="certificationCMEViewModel.Country" ng-change="getStates(certificationCMEViewModel.Country)">
                        <option ng-repeat="country in Countries" value="{{country.Code}}" ng-selected="country.Code == certificationCMEViewModel.Country">{{country.Name}}</option>
                    </select>
                </div>
                @Html.ValidationMessageFor(model => model.EducationAddress.Country, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-3">
                @Html.LabelFor(model => model.EducationAddress.State, htmlAttributes: new { @class = "control-label small" })
                <div>

                    <select id="State" name="State" class="form-control input-sm" ng-model="certificationCMEViewModel.State" ng-change="getCounties(certificationCMEViewModel.State)">
                        <option>-- select --</option>
                        <option ng-repeat="state in States | unique: 'State'" value="{{state.State}}" ng-selected="state.State == certificationCMEViewModel.State">{{state.State}}</option>
                    </select>
                </div>
                @Html.ValidationMessageFor(model => model.EducationAddress.State, "", new { @class = "text-danger" })
            </div>

            <div class="form-group col-md-3">
                @Html.LabelFor(model => model.EducationAddress.County, htmlAttributes: new { @class = "control-label small" })
                <div>

                    <select id="County" name="County" class="form-control input-sm ng-pristine ng-valid ng-touched" ng-model="certificationCMEViewModel.County" ng-change="getCities(certificationCMEViewModel.County)">
                        <option>-- select --</option>
                        <option ng-repeat="county in Counties | unique: 'County'" value="{{county.County}}" ng-selected="county.County == certificationCMEViewModel.County">{{county.County}}</option>
                    </select>
                </div>
                @Html.ValidationMessageFor(model => model.EducationAddress.County, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-3">
                @Html.LabelFor(model => model.EducationAddress.City, htmlAttributes: new { @class = "control-label small" })
                <div>

                    <select id="City" name="City" class="form-control input-sm ng-pristine ng-valid ng-touched" ng-model="certificationCMEViewModel.City">
                        <option>-- select --</option>
                        <option ng-repeat="city in Cities | unique: 'City'" value="{{city.City}}" ng-selected="city.City == certificationCMEViewModel.City">{{city.City}}</option>
                    </select>
                </div>
                @Html.ValidationMessageFor(model => model.EducationAddress.City, "", new { @class = "text-danger" })
            </div>


            <div class="form-group col-md-3">
                @Html.LabelFor(model => model.EducationAddress.Zipcode, htmlAttributes: new { @class = "control-label small" })
                <div>

                    @Html.TextBoxFor(model => model.EducationAddress.Zipcode, new { @class = "form-control input-sm", placeholder = "Zip Code", data_ng_model = "certificationCMEViewModel.ZipCode" })
                </div>
                @Html.ValidationMessageFor(model => model.EducationAddress.Zipcode, "", new { @class = "text-danger" })
            </div>
            <div class="col-lg-3 form-group">
                @Html.LabelFor(model => model.StartDate, htmlAttributes: new { @class = "control-label small" })
                <div>

                    @Html.TextBoxFor(model => model.StartDate, new { type = "date", @class = "form-control input-sm", placeholder = "start date", data_ng_model = "certificationCMEViewModel.StartDate" })
                </div>
                @Html.ValidationMessageFor(model => model.StartDate, "", new { @class = "text-danger" })
            </div>
            <div class="col-lg-3 form-group">
                @Html.LabelFor(model => model.EndDate, htmlAttributes: new { @class = "control-label small" })
                <div>

                    @Html.TextBoxFor(model => model.EndDate, new { type = "date", @class = "form-control input-sm", placeholder = "end date", data_ng_model = "certificationCMEViewModel.EndDate" })
                </div>
                @Html.ValidationMessageFor(model => model.EndDate, "", new { @class = "text-danger" })
            </div>
            <div ng-hide="showPreview" class="col-md-12 form-group">
                <div class="fileinput fileinput-new input-group" data-provides="fileinput">
                    <div class="form-control" data-trigger="fileinput"><i class="glyphicon glyphicon-file fileinput-exists"></i> <span class="fileinput-filename"></span></div>
                    <span class="input-group-addon btn btn-default btn-sm btn-file"><span class="fileinput-new">@Html.LabelFor(model => model.CertificatePath, htmlAttributes: new { @class = "control-label small" })</span><span class="fileinput-exists">Change</span>@Html.TextBoxFor(model => model.CertificatePath, new { type = "file", data_ng_model = "certificationCMEViewModel.CertificatePath" })</span>
                    <a href="#" class="input-group-addon btn btn-default btn-sm fileinput-exists" data-dismiss="fileinput">Remove</a>
                </div>
            </div>

            <div ng-show="showPreview" class="col-md-11 form-group">
                <div class="fileinput fileinput-new input-group" data-provides="fileinput">
                    <div class="form-control" data-trigger="fileinput"><i class="glyphicon glyphicon-file fileinput-exists"></i> <span class="fileinput-filename"></span></div>
                    <span class="input-group-addon btn btn-default btn-sm btn-file"><span class="fileinput-new">@Html.LabelFor(model => model.CertificatePath, htmlAttributes: new { @class = "control-label small" })</span><span class="fileinput-exists">Change</span>@Html.TextBoxFor(model => model.CertificatePath, new { type = "file", data_ng_model = "certificationCMEViewModel.CertificatePath" })</span>
                    <a href="#" class="input-group-addon btn btn-default btn-sm fileinput-exists" data-dismiss="fileinput">Remove</a>
                </div>
            </div>
            <div ng-show="showPreview" class="col-md-1">
                <a href="~/Content/Document/SINGH - BOARD CERT.pdf" target="_blank"><i class="fa fa-3x fa-file"></i></a>
            </div>

        </div>
    </fieldset>
    <div class="col-md-12 form-group">
        <button ng-show="certificateFormStatus" type="button" class="btn btn-warning btn-sm" ng-click="cancelCertificate('editCancel')">Cancel</button>
        <button ng-show="!certificateFormStatus" type="button" class="btn btn-warning btn-sm" ng-click="cancelCertificate('saveCancel')">Cancel</button>
        <button ng-show="!certificateFormStatus" type="button" class="btn btn-primary btn-sm pull-right" ng-click="saveCertificate(Certificate)">Add</button>
        <button ng-show="certificateFormStatus" type="button" class="btn btn-primary btn-sm pull-right" ng-click="updateCertificate(Certificate)">Update</button>
    </div>
</div>