

<script src="~/Areas/CredentialingDelegation/Scripts/Questions.js"></script>
<div id="dis" class="panel-body" ng-app="app" ng-controller="DisclosureController">
    <div class="form-style">
        <fieldset ng-repeat="category in disclosureQuestions">
            <legend>
                {{category.catName}}
            </legend>
            <div class="panel-body">
                <div class="form-group col-md-12 zero-padding-left-right-div" ng-repeat="question in category.questions">
                    <label class="control-label small col-md-12">{{question.questionText}} </label>
                    <div class="col-md-3">
                        <label class="control-label small">Answer</label>
                        <span>
                            <i class="data-label" id="ans">{{question.answerText}}</i>
                        </span>
                    </div>
                    <div ng-show="question.answerText == 'Yes'" class="col-md-9">
                        <label class="control-label small">Reason</label>
                        <span>
                            <i class="data-label">{{question.reasonText}}</i>
                        </span>
                    </div>
                    <br />
                </div>
               
            </div>
        </fieldset>
        <div class="col-lg-12">
            <div class="col-lg-4 pull-right">
                <input type="text" class="pull-right form-control input-sm" placeholder="Signature" />
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
</div>
