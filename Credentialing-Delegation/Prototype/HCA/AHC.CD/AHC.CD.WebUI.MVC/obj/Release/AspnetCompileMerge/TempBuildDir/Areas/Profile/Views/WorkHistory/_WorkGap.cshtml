<div class="form-style">
    <fieldset>
        <legend>
            Work Gap
        </legend>

        <div class="form-style">
            <div class="col-md-12 text-right" style="font-style:italic;font-size:x-small;">
                <label>*If you have any work gap over 3 months</label>
            </div>
            <div class="col-lg-12 zero-padding-left-right-div">
                
                <table ng-hide="WorkGaps.length <= 0" class="table table-bordered table-condensed table-striped customtbodyStyle">
                    <thead>
                        <tr>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody ng-repeat="wg in WorkGaps">
                        <tr>
                            <td>{{wg.StartDate | date : 'dd-mm-yyyy'}}</td>
                            <td>{{wg.EndDate}}</td>
                            <td>
                                <button data-toggle="tooltip" data-placement="left" title="View" ng-click="viewWorkGap($index,wg)" class="btn btn-xs btn-default"><i class="fa fa-eye"></i></button>
                                <button data-toggle="tooltip" data-placement="top" title="Edit" class="btn btn-xs btn-primary" ng-click="editWorkGap($index,wg)"><i class="fa fa-edit"></i></button>
                                <button data-toggle="tooltip" data-placement="right" title="Add New" class="btn btn-xs btn-success" ng-click="addWorkGap()" ng-hide="$index+1!=WorkGaps.length"><i class="fa fa-plus"></i></button>
                            </td>
                        </tr>
                        <tr ng-show="showingDetails && wg==workGap">
                            <td colspan="3" class="editTableDataStyle">
                                <form id="newWorkGapForm">
                                    @Html.Partial("~/Areas/Profile/Views/WorkHistory/_AddWorkGap.cshtml")
                                </form>
                            </td>
                        </tr>
                        <tr ng-show="showingDetailsWorkGapView && wg==workGap">
                            <td colspan="3">

                                @Html.Partial("~/Areas/Profile/Views/WorkHistory/_AddWorkGapView.cshtml")
                                <div class="clearfix"></div>
                                <br />
                                <div class="col-md-12 form-group">

                                    <button type="button" class="btn btn-warning btn-sm" ng-click="cancelWorkGap('viewCancel')">Cancel</button>
                                </div>

                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
           
            <div class="clearfix"></div>
            <fieldset ng-show="newWorkGapForm">
                <legend>
                    Add Work Gap
                </legend>
                <div id="newWorkGapFormDiv">

                    <div class="col-lg-12 zero-padding-left-right-div">

                        <form id="addNewWorkGapForm" enctype="multipart/form-data">

                            @Html.Partial("~/Areas/Profile/Views/WorkHistory/_AddWorkGap.cshtml") 

                        </form>

                    </div>
                </div>
            </fieldset>
            <div class="text-right">
                <button class="btn btn-xs btn-primary" ng-click="addWorkGap()" ng-show="WorkGaps.length==0" ng-hide="newWorkGapForm"><i class="fa fa-plus"></i> Add Work Gap</button>
            </div>
        </div>

    </fieldset>

</div>
