<script src="~/Scripts/Custom/Profile/Specialty.js"></script>

<br />
<div class="panel-group" ng-controller="SpecialtyController">
    <div class="form-style">
        <fieldset>
            <legend>
                Specialty Details
            </legend>
            <div id="Speciality" class="panel-body">
                <div class="form-style">
                    <div class="col-lg-12 zero-padding-left-right-div">
                        <table class="table table-bordered table-condensed table-striped customtbodyStyle">
                            <thead>
                                <tr>
                                    <th>Type</th>
                                    <th>Specialty</th>
                                    <th>Board Name</th>
                                    <th>Expiration Date</th>
                                    <th>Board Certificate</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody ng-repeat="s in Specialties">
                                <tr>
                                    <td>{{s.SpecialtyPreference}}</td>
                                    <td>{{s.Specialty}}</td>
                                    <td>{{s.SpecialityBoardDetail.SpecialityBoardCetifiedDetail.SpecialityBoard}}</td>
                                    <td>{{s.SpecialityBoardDetail.SpecialityBoardCetifiedDetail.ExpirationDate | date:'MM-dd-yyyy'}}</td>
                                    <td><a href="{{s.SpecialityBoardDetail.SpecialityBoardCetifiedDetail.BoardCertificatePath}}" target="_blank" title="{{s.SpecialityBoardDetail.SpecialityBoardCetifiedDetail.BoardCertificatePath}}"><i class="fa fa-file" title=""></i></a></td>
                                    <td>
                                        <button class="btn btn-xs btn-default" ng-click="viewSpecialty($index,s)" ng-hide="viewShowSpecialty" data-toggle="tooltip" data-placement="left" title="View"><i class="fa fa-eye"></i></button>
                                        <button class="btn btn-xs btn-primary" ng-click="editSpecialty($index,s)" ng-hide="editShowSpecialty" data-toggle="tooltip" data-placement="top" title="Edit"><i class="fa fa-edit"></i></button>
                                        <button class="btn btn-xs btn-success" ng-click="addSpecialty()" ng-hide="viewShowSpecialty || editShowSpecialty || newShowSpecialty || $index+1!=Specialties.length" data-toggle="tooltip" data-placement="right" title="Add New"><i class="fa fa-plus"></i></button>
                                    </td>
                                </tr>
                                <tr ng-show="viewShowSpecialty && s==specialty">
                                    <td colspan="6" id="specialtyViewDiv{{$index}}" class="editTableDataStyle">
                                        @Html.Partial("~/Areas/Profile/Views/Specialty/_ViewSpecialty.cshtml")
                                    </td>
                                </tr>
                                <tr ng-show="editShowSpecialty && s==specialty">
                                    <td colspan="6" id="specialtyEditDiv{{$index}}" class="editTableDataStyle">
                                        @Html.Partial("~/Areas/Profile/Views/Specialty/_AddEditSpecialty.cshtml")
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="clearfix"></div>
                    
                    <fieldset ng-show="newShowSpecialty">
                        <legend>
                            Add Specialty
                        </legend>
                        <div id="newShowSpecialtyDiv">
                            @Html.Partial("~/Areas/Profile/Views/Specialty/_AddEditSpecialty.cshtml")
                        </div>
                    </fieldset>
                </div>
            </div>
            <fieldset>
                <legend>
                    Practice Interest
                </legend>
                <div ng-hide="changePartial">
                    @Html.Partial("~/Areas/Profile/Views/Specialty/_ViewPracticeInterest.cshtml")
                </div>
                <div ng-show="changePartial">
                    @Html.Partial("~/Areas/Profile/Views/Specialty/_AddEditPracticeInterest.cshtml")
                </div>
            </fieldset>
        </fieldset>
    </div>
</div>