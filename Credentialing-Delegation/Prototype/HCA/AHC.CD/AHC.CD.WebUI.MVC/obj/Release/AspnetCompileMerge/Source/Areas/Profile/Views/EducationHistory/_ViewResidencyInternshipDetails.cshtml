        <button type="button" class="btn btn-warning btn-sm" ng-click="cancelViewProgram()">Cancel</button>
        <button type="button" class="btn btn-primary btn-sm pull-right" ng-click="editProgram($index,residencyInternshipViewModel)">Edit</button>
