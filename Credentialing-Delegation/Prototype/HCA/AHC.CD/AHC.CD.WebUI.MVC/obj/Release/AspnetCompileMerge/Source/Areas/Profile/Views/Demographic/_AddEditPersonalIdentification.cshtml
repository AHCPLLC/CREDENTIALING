@model AHC.CD.WebUI.MVC.Areas.Profile.Models.Demographic.PersonalIdentificationViewModel

<form enctype="multipart/form-data" id="DemographicsPersonalIdentificationForm">
    <div class="col-lg-12 zero-padding-left-right-div">
        <div class="col-lg-6 form-group">
            @Html.LabelFor(model => model.SSN, htmlAttributes: new { @class = "control-label small" })
            @Html.EditorFor(model => model.SSN, new { htmlAttributes = new { @class = "form-control input-sm", data_ng_model = "TempPersonalIdentificationForEdit.SSN", placeholder = "social security number" } })
            @Html.ValidationMessageFor(model => model.SSN, "", new { @class = "text-danger" })
        </div>
        <div class="col-lg-6 form-group">
            <label class="control-label small" for="SSN"></label>
            <div class="fileinput input-group fileinput-exists" data-provides="fileinput">
                <input type="hidden" value="" name="">
                <div class="form-control" data-trigger="fileinput"><i class="glyphicon glyphicon-file fileinput-exists"></i> <span class="fileinput-filename">@*ssn_certificate.pdf{{TempPersonalIdentificationForEdit.SSNCertificatePath}}*@</span></div>
                <span class="input-group-addon btn btn-default btn-sm btn-file"><span class="fileinput-new">Select SSN Certificate</span><span class="fileinput-exists">Change</span><input type="file" name="SSNCertificateFile" autocomplete="off"></span>
                <a href="#" class="input-group-addon btn btn-default btn-sm fileinput-exists" data-dismiss="fileinput">Remove</a>
            </div>
        </div>
        @*<div class="col-lg-1 form-group">
            <label class="control-label small"></label>
            <div>
                <a href="{{TempPersonalIdentificationForEdit.SSNCertificatePath}}" class="pointer" target="_blank" data-toggle="tooltip" data-placement="top" title="SSN Certificate"><i class="fa fa-2x fa-file"></i></a>
            </div>
        </div>*@
    </div>
    <div class="col-lg-12 zero-padding-left-right-div">
        <div class="col-lg-6 form-group">
            @Html.LabelFor(model => model.DL, htmlAttributes: new { @class = "control-label small" })
            @Html.EditorFor(model => model.DL, new { htmlAttributes = new { @class = "form-control input-sm", data_ng_model = "TempPersonalIdentificationForEdit.DL", placeholder = "drivers license" } })
            @Html.ValidationMessageFor(model => model.DL, "", new { @class = "text-danger" })
        </div>
        <div class="col-lg-5 form-group">
            <label class="control-label small" for="SSN"></label>
            <div class="fileinput input-group fileinput-exists" data-provides="fileinput">
                <input type="hidden" value="" name="">
                <div class="form-control" data-trigger="fileinput"><i class="glyphicon glyphicon-file fileinput-exists"></i> <span class="fileinput-filename">dl_certificate.pdf@*{{TempPersonalIdentificationForEdit.DLCertificatePath}}*@</span></div>
                <span class="input-group-addon btn btn-default btn-sm btn-file"><span class="fileinput-new">Select Driving License*</span><span class="fileinput-exists">Change</span><input type="file" name="DLCertificateFile" autocomplete="off"></span>
                <a href="#" class="input-group-addon btn btn-default btn-sm fileinput-exists" data-dismiss="fileinput">Remove</a>
            </div>
        </div>
        <div class="col-lg-1 form-group">
            <label class="control-label small"></label>
            <div>
                <a href="{{TempPersonalIdentificationForEdit.DLCertificatePath}}" class="pointer" target="_blank" data-toggle="tooltip" data-placement="top" title="DL"><i class="fa fa-2x fa-file"></i></a>
            </div>
        </div>
    </div>
    <div ng-if="IsPersonalIdentificationHasError" class="col-lg-12">
        <div class="alert alert-danger" role="alert">
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <span class="sr-only">Error:</span>
            Error Lists : <br />
            <span ng-repeat="err in PersonalIdentificationErrorList track by $index">{{err}}</span>
        </div>
    </div>
    <div class="col-lg-12">
        <button class="btn btn-sm btn-warning" ng-click="PersonalIdentificationToggle()">Cancel</button>
        <button type="submit" class="btn btn-sm btn-success pull-right" ng-click="DemographicsPersonalIdentificationSave('DemographicsPersonalIdentificationForm')">Save</button>
    </div>
</form>