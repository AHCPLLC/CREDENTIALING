@model AHC.CD.WebUI.MVC.Areas.Profile.Models.EducationHistory.ResidencyInternshipDetailViewModel
<div class="clearfix"></div>
<div>
    <div class="col-lg-12 form-group">
        @Html.LabelFor(model => model.ResidencyInternshipProgramType, htmlAttributes: new { @class = "control-label small" })
        <div>
            @foreach (var value in Enum.GetValues(typeof(AHC.CD.Entities.MasterData.Enums.ResidencyInternshipProgramType)))
            {
                <label class="radio-inline">
                    @Html.RadioButtonFor(model => model.ResidencyInternshipProgramType, value.ToString(), new { data_ng_model = "residencyInternshipViewModel.ProgramType" }) @value.ToString()
                </label>
            }
        </div>
        @Html.ValidationMessageFor(model => model.ResidencyInternshipProgramType, "", new { @class = "text-danger" })
    </div>
    <div class="col-lg-3 form-group">
        <label class="control-label small">Specialty</label>
        @*@Html.LabelFor(model => model.Speciality, htmlAttributes: new { @class = "control-label small" })*@
        <div>
            <select class="form-control input-sm" ng-model="residencyInternshipViewModel.Specialty">
                <option selected disabled hidden>Select Specialty</option>
                <option>Allergey</option>
                <option>Internal Medicine</option>
                <option>Dentist</option>
            </select>
            @Html.ValidationMessageFor(model => model.Speciality, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="col-lg-3 form-group">
        @Html.LabelFor(model => model.Department, htmlAttributes: new { @class = "control-label small" })
        <div>
            @Html.TextBoxFor(model => model.Department, new { @class = "form-control input-sm", placeholder = "Department", data_ng_model = "residencyInternshipViewModel.Department" })
        </div>
        @Html.ValidationMessageFor(model => model.Department, "", new { @class = "text-danger" })
    </div>
    <div class="col-lg-3 form-group">
        @Html.LabelFor(model => model.StartDate, htmlAttributes: new { @class = "control-label small" })
        <div>

            @Html.TextBoxFor(model => model.StartDate, new { type = "date", @class = "form-control input-sm", placeholder = "Start Date", data_ng_model = "residencyInternshipViewModel.StartDate" })
        </div>
        @Html.ValidationMessageFor(model => model.StartDate, "", new { @class = "text-danger" })
    </div>
    <div class="col-lg-3 form-group">
        @Html.LabelFor(model => model.EndDate, htmlAttributes: new { @class = "control-label small" })
        <div>

            @Html.TextBoxFor(model => model.EndDate, new { type = "date", @class = "form-control input-sm", placeholder = "End Date", data_ng_model = "residencyInternshipViewModel.EndDate" })
        </div>
        @Html.ValidationMessageFor(model => model.EndDate, "", new { @class = "text-danger" })
    </div>
    <div ng-hide="showPreview" class="col-md-12 form-group">
        <div class="fileinput fileinput-new input-group" data-provides="fileinput">
            <div class="form-control" data-trigger="fileinput"><i class="glyphicon glyphicon-file fileinput-exists"></i> <span class="fileinput-filename"></span></div>
            <span class="input-group-addon btn btn-default btn-sm btn-file"><span class="fileinput-new">Supporting Document</span><span class="fileinput-exists">Change</span><input type="file" ng-model="residencyInternshipViewModel.Document" /></span>
            <a href="#" class="input-group-addon btn btn-default btn-sm fileinput-exists" data-dismiss="fileinput">Remove</a>
        </div>
    </div>

    <div ng-show="showPreview" class="col-md-11 form-group">
        <div class="fileinput fileinput-new input-group" data-provides="fileinput">
            <div class="form-control" data-trigger="fileinput"><i class="glyphicon glyphicon-file fileinput-exists"></i> <span class="fileinput-filename"></span></div>
            <span class="input-group-addon btn btn-default btn-sm btn-file"><span class="fileinput-new">Supporting Document</span><span class="fileinput-exists">Change</span><input type="file" ng-model="residencyInternshipViewModel.Document" /></span>
            <a href="#" class="input-group-addon btn btn-default btn-sm fileinput-exists" data-dismiss="fileinput">Remove</a>
        </div>
    </div>
    <div ng-show="showPreview" class="col-md-1">
        <a href="~/Content/Document/{{residency.Document}}" target="_blank"><i class="fa fa-3x fa-file"></i></a>
    </div>
    <div class="col-md-12 form-group">
        <button ng-show="editCancelBtn" type="button" class="btn btn-warning btn-sm" ng-click="cancelResidency('editCancel')">Cancel</button>
        <button ng-show="saveCancelBtn" type="button" class="btn btn-warning btn-sm" ng-click="cancelResidency('saveCancel')">Cancel</button>
        <button ng-show="addBtn" type="button" class="btn btn-primary btn-sm pull-right" ng-click="">Add</button>
        <button ng-show="updateBtn" type="button" class="btn btn-primary btn-sm pull-right" ng-click="">Update</button>
    </div>
</div>