@model AHC.CD.WebUI.MVC.Areas.Profile.Models.Demographic.VisaDetailViewModel

<div class=" col-lg-12 zero-padding-left-right-div">
    <div class="col-lg-4">
        <div class="form-group">
            @Html.LabelFor(model => model.IsResidentOfUSA, htmlAttributes: new { @class = "control-label small" })
            &nbsp;&nbsp;{{Provider.VisaDetails.IsResidentOfUSA}}
        </div>
    </div>
    <div class="col-md-4" ng-if="Provider.VisaDetails.IsResidentOfUSA=='No'">
        <div class="form-group">
            @Html.LabelFor(model => model.VisaInfo.IsAuthorizedToWorkInUS, htmlAttributes: new { @class = "control-label small" })
            &nbsp;&nbsp;{{Provider.VisaDetails.VisaInfo.IsAuthorizedToWorkInUS}}
        </div>
    </div>
</div>

<div ng-if="Provider.VisaDetails.IsResidentOfUSA=='No'" class="col-lg-12 zero-padding-left-right-div">
    <div class="form-group col-md-4">
        @Html.LabelFor(model => model.VisaInfo.GreenCardNumber, htmlAttributes: new { @class = "control-label small" })
        <div>
            <i class="data-label">{{Provider.VisaDetails.VisaInfo.GreenCardNumber}}</i>
        </div>
    </div>
    <div class="col-md-8">
        <label class="control-label small">Supporting Document</label>
        <div>
            <i class="data-label"><a href="{{Provider.VisaDetails.VisaInfo.GreenCardCertificatePath}}" class="pointer" target="_blank" data-toggle="tooltip" data-placement="top" title="Green Card"><i class="fa fa-file"> Green Card</i></a></i>
        </div>
    </div>
</div>
<div ng-if="Provider.VisaDetails.IsResidentOfUSA=='No'">
    <div class=" col-lg-12 zero-padding-left-right-div">
        <div class="form-group col-md-4">
            @Html.LabelFor(model => model.VisaInfo.VisaNumber, htmlAttributes: new { @class = "control-label small" })
            <div>
                <i class="data-label">{{Provider.VisaDetails.VisaInfo.VisaNumber}}</i>
            </div>
        </div>
        <div class="form-group col-md-4">
            @Html.LabelFor(model => model.VisaInfo.VisaType, htmlAttributes: new { @class = "control-label small" })
            <div>
                <i class="data-label">{{Provider.VisaDetails.VisaInfo.VisaType}}</i>
            </div>
        </div>
        <div class="form-group col-md-4">
            @Html.LabelFor(model => model.VisaInfo.VisaStatus, htmlAttributes: new { @class = "control-label small" })
            <div>
                <i class="data-label">{{Provider.VisaDetails.VisaInfo.VisaStatus}}</i>
            </div>
        </div>
    </div>
    <div class=" col-lg-12 zero-padding-left-right-div">
        <div class="form-group col-md-4">
            @Html.LabelFor(model => model.VisaInfo.VisaSponsor, htmlAttributes: new { @class = "control-label small" })
            <div>
                <i class="data-label">{{Provider.VisaDetails.VisaInfo.VisaSponsor}}</i>
            </div>
        </div>
        <div class="form-group col-md-4">
            @Html.LabelFor(model => model.VisaInfo.VisaExpirationDate, htmlAttributes: new { @class = "control-label small" })
            <div>
                <i class="data-label">{{Provider.VisaDetails.VisaInfo.VisaExpirationDate | date: "MM-dd-yyyy"}}</i>
            </div>
        </div>
        <div class="form-group col-md-4">
            @Html.LabelFor(model => model.VisaInfo.VisaCertificateFile, htmlAttributes: new { @class = "control-label small" })
            <div>
                <i class="data-label">Not Available</i>
            </div>
        </div>
    </div>

    <div ng-if="Provider.VisaDetails.VisaInfo.NationalIDNumber" class="col-lg-12 zero-padding-left-right-div">
        <div class="form-group col-md-4">
            @Html.LabelFor(model => model.VisaInfo.NationalIDNumber, htmlAttributes: new { @class = "control-label small" })
            <div>
                <i class="data-label">{{Provider.VisaDetails.VisaInfo.NationalIDNumber}}</i>
            </div>
        </div>
        <div class="form-group col-md-8">
            @Html.LabelFor(model => model.VisaInfo.NationalIDCertificateFile, htmlAttributes: new { @class = "control-label small" })
            <div>
                <i class="data-label"><a href="{{Provider.VisaDetails.VisaInfo.NationalIDCertificatePath}}" class="pointer" target="_blank" data-toggle="tooltip" data-placement="top" title="National Identification Certificate"><i class="fa fa-file"> National ID Certificate</i></a></i>
            </div>
        </div>
    </div>
    <div class="form-group col-md-12">
        @Html.LabelFor(model => model.VisaInfo.CountryOfIssue, htmlAttributes: new { @class = "control-label small" })
        <div>
            <i class="data-label">{{Provider.VisaDetails.VisaInfo.CountryOfIssue}}</i>
        </div>
    </div>
</div>