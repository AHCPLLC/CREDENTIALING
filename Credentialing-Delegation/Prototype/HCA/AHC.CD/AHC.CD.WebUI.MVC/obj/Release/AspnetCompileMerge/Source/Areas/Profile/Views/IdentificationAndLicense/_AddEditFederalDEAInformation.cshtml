                @Html.LabelFor(model => model.HasStateControlledSubstanceRegCertificate, new { @class = "control-label small" })
                <div class="radio">
                    <label class="radio-inline">
                        @Html.RadioButtonFor(model => model.HasStateControlledSubstanceRegCertificate, true, new { data_ng_model = "FederalDEALicense.HasStateControlledSubstanceRegCertificate" }) Yes
                    </label>
                    <label class="radio-inline">
                        @Html.RadioButtonFor(model => model.HasStateControlledSubstanceRegCertificate, false, new { data_ng_model = "FederalDEALicense.HasStateControlledSubstanceRegCertificate" }) No
                    </label>
                </div>
                @Html.ValidationMessageFor(model => model.HasStateControlledSubstanceRegCertificate, "", new { @class = "text-danger" })
            </div>*@
                          
                        <div class="clearfix"></div>
                        @*<div class="form-style" ng-show="FederalDEALicense.HasStateControlledSubstanceRegCertificate=='True'">
                            @Html.Partial("~/Areas/Profile/Views/IdentificationAndLicense/_AddEditCDSCInformation.cshtml")


                        </div>*@

                        <div class="clearfix"></div>
                      
                        <div class="clearfix"></div>
                        <div class="col-md-12">
                            <div class="col-md-12">
                                <button type="button" class="btn btn-warning btn-sm" ng-click="cancelFederalDEALicense()">Cancel</button>
                                <button type="submit" class="btn btn-primary btn-sm pull-right" ng-click="saveFederalDEALicense(FederalDEALicense)">{{submitButtonText}}</button>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </form>
</div></fieldset>
