
<div class="panel-default">
    <div class="form-style">
        <fieldset>
            <legend>
                Medicare Information
            </legend>
            <div class="col-md-12 text-right" style="font-style:italic;font-size:x-small;">
                <label>*If you have additional Medicare Numbers include here.</label>
            </div>
            <div id="MedicareInfo" class="panel-body">
                @*<table ng-hide="MedicareInformations.length > 0" class="table table-bordered table-condensed customtbodyStyle table-striped">
                    <thead>
                        <tr>
                            <td>No Data Available ! To Add New Click "Add Medicare Information"</td>
                        </tr>
                    </thead>
                </table>*@
                <div class="col-md-12" ng-hide="MedicareInformations.length > 0">
                    <div class="form-group col-md-4">
                        <label class=" control-label small">Medicare Approved*</label>
                        <div class="radio">
                            <label class="radio-inline">
                                <input type="radio" name="cdsc" value="Y" checked="checked" ng-click="addMedicareInformation()"> Yes
                            </label>
                            <label class="radio-inline">
                                <input type="radio" name="cdsc" value="N" checked="checked"> No
                            </label>
                        </div>
                    </div>
                </div>
                <table ng-hide="MedicareInformations.length < 1" class="table table-bordered table-condensed customtbodyStyle table-striped">
                    <thead>
                    <tr>
                    <th>Medicare Number</th>
                    @*<th>State </th>*@
                    <th>Issue Date</th>
                    @*<th>Expiration Date</th>
    <th>Certificate</th>*@
                    <th>Action</th>
                    </tr>
                    </thead>
                    <tbody ng-repeat="mcr in MedicareInformations">
                    <tr>
                    <td>{{mcr.LicenseNumber}}</td>
                    @*<td>{{mcr.State}}</td>*@
                    <td>{{mcr.IssueDate| date: "MM-dd-yyyy"}}</td>
                    @*<td>{{mcr.ExpiryDate| date: "MM-dd-yyyy"}}</td>

                    <td><a href="{{mcr.LicenseCertPath}}" class="pointer" target="_blank" title="{{mcr.LicenseCertPath}}"><i class="fa fa-file" title=""></i></a></td>*@
                    <td>
                        <button class="btn btn-xs btn-default" ng-click="viewMedicareInformation($index,mcr)" ng-hide="viewMedicare" data-toggle="tooltip" data-placement="left" title="View"><i class="fa fa-eye"></i></button>
                        <button class="btn btn-xs btn-primary" ng-click="editMedicareInformation($index,mcr)" ng-hide="editShowMedicareInformation" data-toggle="tooltip" data-placement="top" title="Edit"><i class="fa fa-edit"></i></button>
                        <button class="btn btn-xs btn-success" ng-click="addMedicareInformation()" data-toggle="tooltip" data-placement="right" title="Add new" ng-hide="viewMedicare|| editShowMedicareInformation || newShowMedicareInformation || $index+1!=MedicareInformations.length"><i class="fa fa-plus"></i></button>
                    </td>
                    </tr>
                        <tr ng-show="viewMedicare && mcr==MedicareInformation">
                            <td colspan="5" id="MedicareInformationEditDiv{{$index}}" class="editTableDataStyle">
                                @Html.Partial("~/Areas/Profile/Views/IdentificationAndLicense/_ViewMedicareInformation.cshtml")
                            </td>
                        </tr>
                    <tr ng-show="editShowMedicareInformation && mcr==MedicareInformation">
                    <td colspan="6" id="MedicareInformationEditDiv{{$index}}" class="editTableDataStyle">
                    @Html.Partial("~/Areas/Profile/Views/IdentificationAndLicense/_AddEditMedicareInformation.cshtml")
                    </td>
                    </tr>
                    </tbody>
                    </table>

                    @*<div class="col-lg-12 clearfix" style="padding-bottom:15px;"></div>*@
                    <div class="clearfix"></div>
                    <div class="form-style">
                        <fieldset ng-show="newShowMedicareInformation">
                            <legend>
                                Add Medicare Information
                            </legend>
                            <div id="newStateLicenseDiv">
                                @Html.Partial("~/Areas/Profile/Views/IdentificationAndLicense/_AddEditMedicareInformation.cshtml")
                            </div>
                        </fieldset>
                    </div>
                    @*<div ng-hide="editShowMedicareInformation || newShowMedicareInformation" class="col-md-12 text-right">
                <button class="btn btn-xs btn-primary addHosPrvBtn" ng-click="addMedicareInformation()"><i class="fa fa-plus"></i> Add Medicare Information</button>
            </div>*@
</div>
        </fieldset>
    </div>
</div>
