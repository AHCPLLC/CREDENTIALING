                            <i class="data-label " ng-class="{'True':'fa fa-check', 'False':'fa fa-times'}[hospitalPrivilegeInformation.Primary]"></i>
                        </div>
                    </div>
                    <div class="form-group col-md-3">
                        @Html.LabelFor(model => model.HospitalName, htmlAttributes: new { @class = "control-label small" })
                        <div class="radio">
                            <i class="data-label">{{hospitalPrivilegeInformation.HospitalName}}</i>
                        </div>
                    </div>
                </div>
                <div class="col-md-12">                    
                    @*<div class="form-group col-md-3">
                        @Html.LabelFor(model => model.Number, htmlAttributes: new { @class = "control-label small" })
                        <div>
                            <i class="data-label">{{hospitalPrivilegeInformation.Number}}</i>
                        </div>
                    </div>*@

                    <div class="form-group col-md-3">
                        @Html.LabelFor(model => model.StreetAddress, htmlAttributes: new { @class = "control-label small" })
                        <div>
                            <i class="data-label">{{hospitalPrivilegeInformation.StreetAddress}}</i>
                        </div>
                    </div>
                    <div class="form-group col-md-3">
                        @Html.LabelFor(model => model.Building, htmlAttributes: new { @class = "control-label small" })
                        <div>
                            <i class="data-label">{{hospitalPrivilegeInformation.Building}}</i>
                        </div>
                    </div>

                    <div class="form-group col-md-3">
                        @Html.LabelFor(model => model.City, htmlAttributes: new { @class = "control-label small" })
                        <div>
                            <i class="data-label">{{hospitalPrivilegeInformation.City}}</i>
                        </div>
                    </div>

                    <div class="form-group col-md-3">
                        @Html.LabelFor(model => model.State, htmlAttributes: new { @class = "control-label small" })
                        <div>
                            <i class="data-label">{{hospitalPrivilegeInformation.State}}</i>
                        </div>
                    </div>

                 
                </div>

                <div class="col-md-12">
                    <div class="form-group col-md-3">
                        @Html.LabelFor(model => model.Zipcode, htmlAttributes: new { @class = "control-label small" })
                        <div>
                            <i class="data-label">{{hospitalPrivilegeInformation.Zipcode}}</i>
                        </div>
                    </div>

                    <div class="form-group col-md-3">
                        <label class="control-label small">Country</label>
                        <div>
                            <i class="data-label">{{hospitalPrivilegeInformation.Country}}</i>
                        </div>
                    </div>
                    
                    <div class="form-group col-md-3">
                        @Html.LabelFor(model => model.County, htmlAttributes: new { @class = "control-label small" })
                        <div>
                            <i class="data-label">{{hospitalPrivilegeInformation.County}}</i>
                        </div>
                    </div>
                    <div class="form-group col-md-3">
                        @Html.LabelFor(model => model.HospitalPhone, htmlAttributes: new { @class = "control-label small" })
                        <div>
                            <i class="data-label">{{hospitalPrivilegeInformation.HospitalPhone}}</i>
                        </div>
                    </div>
                </div>

                <div class="col-md-12">
                    
                    <div class="form-group col-md-3">
                        @Html.LabelFor(model => model.HospitalFax, htmlAttributes: new { @class = "control-label small" })
                        <div>
                            <i class="data-label">{{hospitalPrivilegeInformation.HospitalFax}}</i>
                        </div>
                    </div>
                    <div class="form-group col-md-3">
                        @Html.LabelFor(model => model.EmailID, htmlAttributes: new { @class = "control-label small" })
                        <div>
                            <i class="data-label">{{hospitalPrivilegeInformation.EmailID}}</i>
                        </div>
                    </div>

                </div>

                <div class=" col-md-12">
                    <div class="form-group col-md-3">
                        @Html.LabelFor(model => model.ContactPerson, htmlAttributes: new { @class = "control-label small" })
                        <div>
                            <i class="data-label">{{hospitalPrivilegeInformation.ContactPerson}}</i>
                        </div>
                    </div>
                    <div class="form-group col-md-3">
                        @Html.LabelFor(model => model.ContactPersonPhone, htmlAttributes: new { @class = "control-label small" })
                        <div>
                            <i class="data-label">{{hospitalPrivilegeInformation.ContactPersonPhone}}</i>
                        </div>
                    </div>
                    <div class="form-group col-md-3">
                        @Html.LabelFor(model => model.ContactPersonFax, htmlAttributes: new { @class = "control-label small" })
                        <div>
                            <i class="data-label">{{hospitalPrivilegeInformation.ContactPersonFax}}</i>
                        </div>
                    </div>
                </div>
                <div class=" col-md-12">
                    <div class="form-group col-md-3">
                        @Html.LabelFor(model => model.DepartmentName, htmlAttributes: new { @class = "control-label small" })
                        <div>
                            <i class="data-label">{{hospitalPrivilegeInformation.DepartmentName}}</i>
                        </div>
                    </div>
                    <div class="form-group col-md-3">
                        @Html.LabelFor(model => model.DepartmentChief, htmlAttributes: new { @class = "control-label small" })
                        <div>
                            <i class="data-label">{{hospitalPrivilegeInformation.DepartmentChief}}</i>
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group col-md-3">
                        @Html.LabelFor(model => model.AffilicationStartDate, htmlAttributes: new { @class = "control-label small" })
                        <div>
                            <i class="data-label">{{hospitalPrivilegeInformation.AffilicationStartDate| date:'MM-dd-yyyy'}}</i>
                        </div>
                    </div>
                    <div class="form-group col-md-3">
                        @Html.LabelFor(model => model.AffiliationEndDate, htmlAttributes: new { @class = "control-label small" })
                        <div>
                            <i class="data-label">{{hospitalPrivilegeInformation.AffiliationEndDate| date:'MM-dd-yyyy'}}</i>
