                    <div class="form-group col-md-3">
                        @Html.LabelFor(model => model.StaffCategory, htmlAttributes: new { @class = "control-label small" })
                        <div>
                            <i class="data-label">{{hospitalPrivilegeInformation.StaffCategoryValue}}</i>
                        </div>
                    </div>

                </div>

                <div class="col-md-12">
                    <div class="col-md-12">
                        <label class="control-label small">Supporting Document</label>
                        <div>
                            <span ng-show="hospitalPrivilegeInformation.Certificate==''">Not Available</span><a ng-show="hospitalPrivilegeInformation.Certificate!=''" href="{{hospitalPrivilegeInformation.Certificate}}" data-toggle="tooltip" data-placement="top" title="{{hospitalPrivilegeInformation.DocumentPath}}" target="_blank"><i class="fa fa-file"></i> Hospital Privilege Letter</a>
                        </div>
                    </div>
                </div>
            </div>
        </fieldset>
        <div class="clearfix"></div>
        <br />
        <div class="col-md-12">
            <div class="col-md-12">
                <button class="btn btn-warning btn-sm" ng-click="cancelHospitalPrivilegeInformation()">Cancel</button>
                <button class="btn btn-primary btn-sm pull-right" ng-click="editHospitalPrivilegeInformation($index,hpi)">Edit</button>
            </div>
        </div>
    </div>
</form>
