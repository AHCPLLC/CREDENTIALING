                    </div>

                    <div class="form-group col-md-3">
                        @Html.LabelFor(model => model.FullUnrestrictedPrevilages, new { @class = "control-label small" })
                        <div>
                            <i class="data-label " ng-class="{'True':'fa fa-check', 'False':'fa fa-times'}[hospitalPrivilegeInformation.FullUnrestrictedPrevilages]"></i>
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group col-md-3">
                        @Html.LabelFor(model => model.AddmittingPrivilegeStatus, htmlAttributes: new { @class = "control-label small" })
