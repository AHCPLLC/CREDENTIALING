                    </div>
                    <div class="form-group col-md-3">
                        @Html.LabelFor(model => model.ArePrevilegesTemporary, new { @class = "control-label small" })
                        <div>
                            <i class="data-label " ng-class="{'True':'fa fa-check', 'False':'fa fa-times'}[hospitalPrivilegeInformation.ArePrevilegesTemporary]"></i>
