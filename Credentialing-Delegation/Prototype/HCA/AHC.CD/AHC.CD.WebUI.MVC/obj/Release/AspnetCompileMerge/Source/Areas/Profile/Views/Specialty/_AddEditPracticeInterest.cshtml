@model AHC.CD.WebUI.MVC.Areas.Profile.Models.BoardSpeciality.PracticeInterestViewModel

<div>
    @*@Html.LabelFor(model => model.Description, new { @class = "control-label small" })*@
    @Html.TextAreaFor(model => model.Description, new { @class = "form-control input-sm", data_ng_model = "practiceInterest.PracticeInterest", maxlength = "500" })
    <span class="control-label small">
        {{500-practiceInterest.PracticeInterest.length}}
        Characters left.
    </span>
    <div class="clearfix"></div>
    <br />
    <div class="col-md-12">
        <button type="button" class="btn btn-warning btn-sm" ng-click="showViewPartial()">Cancel</button>
        <button class="btn btn-success pull-right" ng-click="savePracticeInterest(practiceInterest)">Save</button>
    </div>
</div>