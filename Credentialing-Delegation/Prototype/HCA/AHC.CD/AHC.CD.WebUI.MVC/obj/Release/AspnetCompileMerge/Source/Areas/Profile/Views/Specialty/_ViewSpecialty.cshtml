@model AHC.CD.WebUI.MVC.Areas.Profile.Models.BoardSpeciality.SpecialityDetailViewModel

<div>
    <div class=" col-lg-12 zero-padding-left-right-div">    
        
        <fieldset>
            <legend>
                Specialty
            </legend>
            <div class="col-lg-4 form-group">
                @Html.LabelFor(model => model.SpecialityPreference, new { @class = "control-label small" })
                <div>
                    <i class="data-label">{{specialty.SpecialtyPreference}}</i>
                </div>
            </div>
            <div class="col-lg-4 form-group">
                @Html.LabelFor(model => model.Speciality, new { @class = "control-label small" })
                <div>
                    <i class="data-label">{{specialty.Specialty}}</i>
                </div>
            </div>
            <div class="col-lg-4">
                @Html.LabelFor(model => model.PercentageOfTime, new { @class = "control-label small" })
                <div>
                    <i class="data-label">{{specialty.PercentageOfTime}}</i>
                </div>
            </div>
            <div class="clearfix"></div><br />
            <div class="col-lg-6">
                <label class="control-label small">Do you wish to be listed in the directory under this specialty? *</label>
                <div>
                    <table class="col-lg-6">
                        <tr>
                            <th>@Html.LabelFor(model => model.ListedInHMO, new { @class = "control-label small" })</th>
                            <th>@Html.LabelFor(model => model.ListedInPPO, new { @class = "control-label small" })</th>
                            <th>@Html.LabelFor(model => model.ListedInPOS, new { @class = "control-label small" })</th>
                        </tr>
                        <tr>
                            <td><i class="data-label">{{specialty.ListedInHMO}}</i></td>
                            <td><i class="data-label">{{specialty.ListedInPPO}}</i></td>
                            <td><i class="data-label">{{specialty.ListedInPOS}}</i></td>
                        </tr>
                    </table>
                </div>
            </div>
            @*<div class="col-lg-6">
                @Html.LabelFor(model => model.CertificatePath, new { @class = "control-label small" })
                <div>
                    <i class="data-label"><a href="{{specialty.CertificatePath}}" class="pointer" target="_blank" data-toggle="tooltip" data-placement="top" title="Specialty Certificate"><i class="fa fa-file"> Specialty Certificate</i></a></i>
                </div>
            </div>*@
        </fieldset>
                       
        <fieldset>
            <legend>
                Board Details
            </legend>
            <div class="col-lg-4">
                @Html.LabelFor(model => model.SpecialityBoardDetail.IsBoardCertified, new { @class = "control-label small" })
                <div>
                    <i class="data-label">{{specialty.SpecialityBoardDetail.IsBoardCertified}}</i>
                </div>
            </div>
            <div ng-if="specialty.SpecialityBoardDetail.IsBoardCertified == 'Yes'">
                <div class="col-lg-4">
                    @Html.LabelFor(model => model.SpecialityBoardDetail.SpecialityBoardCetifiedDetail.SpecialityBoard, new { @class = "control-label small" })
                    <div>
                        <i class="data-label">{{specialty.SpecialityBoardDetail.SpecialityBoardCetifiedDetail.SpecialityBoard}}</i>
                    </div>
                </div>
                <div class="col-lg-4">
                    @Html.LabelFor(model => model.SpecialityBoardDetail.SpecialityBoardCetifiedDetail.InitialCertificationDate, new { @class = "control-label small" })
                    <div>
                        <i class="data-label">{{specialty.SpecialityBoardDetail.SpecialityBoardCetifiedDetail.InitialCertificationDate | date:'MM-dd-yyyy'}}</i>
                    </div>
                </div>
                <div class="col-lg-4">
                    <label class="control-label small">Last Recertification Date</label>                  
    @*@Html.LabelFor(model => model.SpecialityBoardDetail.SpecialityBoardCetifiedDetail.LastReCerificationDate, new { @class = "control-label small" })*@
                    <div>
                        <i class="data-label">{{specialty.SpecialityBoardDetail.SpecialityBoardCetifiedDetail.LastReCredentialingDate | date:'MM-dd-yyyy'}}</i>
                    </div>
                </div>
                <div class="col-lg-4">
                    @Html.LabelFor(model => model.SpecialityBoardDetail.SpecialityBoardCetifiedDetail.ExpirationDate, new { @class = "control-label small" })
                    <div>
                        <i class="data-label">{{specialty.SpecialityBoardDetail.SpecialityBoardCetifiedDetail.ExpirationDate | date:'MM-dd-yyyy'}}</i>
                    </div>
                </div>
            </div>
            <div ng-if="specialty.SpecialityBoardDetail.IsBoardCertified == 'No'">
                <div class="col-lg-4">
                    @Html.LabelFor(model => model.SpecialityBoardDetail.SpecialityBoardNotCertifiedDetail.ExamStatus, new { @class = "control-label small" })
                    <div>
                        <i class="data-label">{{specialty.SpecialityBoardDetail.SpecialityBoardNotCertifiedDetail.ExamStatus}}</i>
                    </div>
                </div>
                <div ng-if="specialty.SpecialityBoardDetail.SpecialityBoardNotCertifiedDetail.ExamStatus == 'I intend to sit for exam'">
                    <div class="col-lg-4">
                        @Html.LabelFor(model => model.SpecialityBoardDetail.SpecialityBoardNotCertifiedDetail.ExamDate, new { @class = "control-label small" })
                        <div>
                            <i class="data-label">{{specialty.SpecialityBoardDetail.SpecialityBoardNotCertifiedDetail.ExamDate | date:'MM-dd-yyyy'}}</i>
                        </div>
                    </div>
                </div>
                <div ng-if="specialty.SpecialityBoardDetail.SpecialityBoardNotCertifiedDetail.ExamStatus == 'I do not intend to take exam'">
                    <div class="col-lg-4">
                        @Html.LabelFor(model => model.SpecialityBoardDetail.SpecialityBoardNotCertifiedDetail.ReasonForNotTakingExam, new { @class = "control-label small" })
                        <div>
                            <i class="data-label">{{specialty.SpecialityBoardDetail.SpecialityBoardNotCertifiedDetail.ReasonForNotTakingExam}}</i>
                        </div>
                    </div>
                </div>
            </div>
            <div ng-if="specialty.SpecialityBoardDetail.IsBoardCertified == 'Yes'">
                <div class="col-lg-4">
                    <label class="control-label small">Supporting Document</label>
                    <div>
                        <i class="data-label"><a href="{{specialty.SpecialityBoardDetail.SpecialityBoardCetifiedDetail.BoardCertificatePath}}" c cla class="pointer" target="_blank" data-toggle="tooltip" data-placement="top" title="Board Certification Document"><i class="fa fa-file"> Board Certificate</i></a></i>
                    </div>
                </div>
            </div>
        </fieldset>
        <div class="col-md-12 form-group">
            <button type="button" class="btn btn-warning btn-sm" ng-click="cancelSpecialty()">Cancel</button>
            <button type="submit" class="btn btn-primary btn-sm pull-right" ng-click="editSpecialty($index, s)">Edit</button>
        </div>
    </div>
</div>