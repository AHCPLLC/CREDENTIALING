@model AHC.CD.WebUI.MVC.Areas.Profile.Models.Demographic.OtherLegalNameViewModel

<form enctype="multipart/form-data">
    <div class="col-lg-12 zero-padding-left-right-div">
        @*@Html.HiddenFor(model => model.OtherLegalNameID, new { data_ng_model = "OtherLegalName.OtherLegalNameID" })*@
        <div class="col-lg-3 form-group">
            @Html.LabelFor(model => model.OtherFirstName, htmlAttributes: new { @class = "control-label small" })
            @Html.EditorFor(model => model.OtherFirstName, new { htmlAttributes = new { @class = "form-control input-sm", data_ng_model = "OtherLegalName.OtherFirstName", placeholder = "first name" } })
            @Html.ValidationMessageFor(model => model.OtherFirstName, "", new { @class = "text-danger" })
        </div>
        <div class="col-lg-3 form-group">
            @Html.LabelFor(model => model.OtherMiddleName, htmlAttributes: new { @class = "control-label small" })
            @Html.EditorFor(model => model.OtherMiddleName, new { htmlAttributes = new { @class = "form-control input-sm", data_ng_model = "OtherLegalName.OtherMiddleName", placeholder = "middle name" } })
            @Html.ValidationMessageFor(model => model.OtherMiddleName, "", new { @class = "text-danger" })
        </div>
        <div class="col-lg-3 form-group">
            @Html.LabelFor(model => model.OtherLastName, htmlAttributes: new { @class = "control-label small" })
            @Html.EditorFor(model => model.OtherLastName, new { htmlAttributes = new { @class = "form-control input-sm", data_ng_model = "OtherLegalName.OtherLastName", placeholder = "last name" } })
            @Html.ValidationMessageFor(model => model.OtherLastName, "", new { @class = "text-danger" })
        </div>
        <div class="col-lg-3 form-group">
            @Html.LabelFor(model => model.Suffix, htmlAttributes: new { @class = "control-label small" })
            @Html.EditorFor(model => model.Suffix, new { htmlAttributes = new { @class = "form-control input-sm", data_ng_model = "OtherLegalName.Suffix", placeholder = "suffix" } })
            @Html.ValidationMessageFor(model => model.Suffix, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="col-lg-12 zero-padding-left-right-div">
        <div class="form-group col-md-6">
            @Html.LabelFor(model => model.StartDate, htmlAttributes: new { @class = "control-label small" })
            @Html.EditorFor(model => model.StartDate, new { htmlAttributes = new { type = "date", @class = "form-control input-sm", data_ng_model = "OtherLegalName.StartDate", placeholder = "start date" } })
            @Html.ValidationMessageFor(model => model.StartDate, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-md-6">
            @Html.LabelFor(model => model.EndDate, htmlAttributes: new { @class = "control-label small" })
            @Html.EditorFor(model => model.EndDate, new { htmlAttributes = new { type = "date", @class = "form-control input-sm", data_ng_model = "OtherLegalName.EndDate", placeholder = "end date" } })
            @Html.ValidationMessageFor(model => model.EndDate, "", new { @class = "text-danger" })
        </div>
    </div>
    <div ng-if="!newLegalNameForm" class="col-md-12 zero-padding-left-right-div">
        <div class="col-lg-11 form-group">
            <div class="fileinput input-group fileinput-exists" data-provides="fileinput">
                <input type="hidden" value="" name="">
                <div class="form-control" data-trigger="fileinput"><i class="glyphicon glyphicon-file fileinput-exists"></i> <span class="fileinput-filename">Other Legal Name Certificate Approved.pdf</span></div>
                <span class="input-group-addon btn btn-default btn-sm btn-file"><span class="fileinput-new">Select Other Legal Name Certificate</span><span class="fileinput-exists">Change</span><input type="file" name="file" ng-model="OtherLegalName.File" autocomplete="off"></span>
                <a href="#" class="input-group-addon btn btn-default btn-sm fileinput-exists" data-dismiss="fileinput">Remove</a>
            </div>
        </div>
        <div class="col-lg-1 form-group">
            <a href="/Content/Document/ATTESTATIONOFSITEVISIT.pdf" class="pointer" target="_blank" data-toggle="tooltip" data-placement="top" title="Other Legal Name Certificate Approved.pdf"><i class="fa fa-2x fa-file"></i></a>
        </div>
    </div>
    <div ng-if="newLegalNameForm" class="form-group col-md-12">
        <div class="fileinput fileinput-new input-group" data-provides="fileinput">
            <div class="form-control" data-trigger="fileinput"><i class="glyphicon glyphicon-file fileinput-exists"></i> <span class="fileinput-filename"></span></div>
            <span class="input-group-addon btn btn-default btn-sm btn-file"><span class="fileinput-new">Select Other Legal Name Certificate</span><span class="fileinput-exists">Change</span><input type="file" name="file" ng-model="OtherLegalName.File"></span>
            <a href="#" class="input-group-addon btn btn-default btn-sm fileinput-exists" data-dismiss="fileinput">Remove</a>
        </div>
    </div>
    <div ng-if="IsOtherLegalNameHasError" class="col-lg-12">
        <div class="alert alert-danger" role="alert">
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <span class="sr-only">Error:</span>
            Error Lists : <br />
            <span ng-repeat="err in OtherLegalNameErrorList track by $index">{{err}}</span>
        </div>
    </div>
    <div ng-if="newLegalNameForm" class="col-lg-12 zero-padding-left-right-div">
        <div class="col-md-12 form-group">
            <button type="button" class="btn btn-warning btn-sm" ng-click="cancelOtherLegalName('newLegalNameForm1')">Cancel</button>
            <button type="submit" class="btn btn-primary btn-sm pull-right" ng-click="saveOtherLegalName('newLegalNameForm1',OtherLegalName)">Add</button>
        </div>
    </div>
    <div ng-if="!newLegalNameForm" class="col-lg-12 zero-padding-left-right-div">
        <div class="col-md-12 form-group">
            <button type="button" class="btn btn-warning btn-sm" ng-click="cancelOtherLegalName('otherLegalNameEditDiv'+$index)">Cancel</button>
            <button type="submit" class="btn btn-primary btn-sm pull-right" ng-click="updateOtherLegalName('otherLegalNameEditDiv'+$index,OtherLegalName, $index)">Update</button>
        </div>
    </div>
</form>