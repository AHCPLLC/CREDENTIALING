
<div id="dis">
    <form class="form-style">
        <fieldset ng-repeat="QuestionCategory in MasterData.QuestionCategories track by $index">
            <legend>
                {{QuestionCategory.Title}}
            </legend>

            <div class="zero-padding-left-right-div">
                <div class="form-group col-md-12 zero-padding-left-right-div" ng-repeat="Question in MasterData.Questions track by $index" ng-if="QuestionCategory.QuestionCategoryID == Question.QuestionCategoryId">
                    <label class="control-label small col-md-12">{{$index+1}}. {{Question.Title}}</label>
                    <div class="col-md-12">
                        <label class="control-label small">Answer</label>
                        <div ng-show="MasterProfile.DisclosureQuestion.ProfileDisclosure.ProfileDisclosureQuestionAnswers[$index].AnswerYesNoOption == '1'">
                            <i class="data-label" id="ans">Yes</i>
                        </div>
                        <div ng-show="MasterProfile.DisclosureQuestion.ProfileDisclosure.ProfileDisclosureQuestionAnswers[$index].AnswerYesNoOption == '2'">
                            <i class="data-label" id="ans">No</i>
                        </div>
                        <div ng-show="!MasterProfile.DisclosureQuestion.ProfileDisclosure.ProfileDisclosureQuestionAnswers[$index].AnswerYesNoOption">
                            <i class="data-label" id="ans">Not Available</i>
                        </div>
                    </div>
                    <div class="col-md-12 wrap-words" ng-show="MasterProfile.DisclosureQuestion.ProfileDisclosure.ProfileDisclosureQuestionAnswers[$index].AnswerYesNoOption == '1'">
                        <label class="control-label small">Reason</label>
                        <div>
                            <i class="data-label">{{MasterProfile.DisclosureQuestion.ProfileDisclosure.ProfileDisclosureQuestionAnswers[$index].Reason || 'Not Available'}}</i>
                        </div>
                    </div>
                    <br />
                </div>
                <div class="clearfix"></div><br />
            </div>
        </fieldset>
        <div class="clearfix"></div>
    </form>
</div>