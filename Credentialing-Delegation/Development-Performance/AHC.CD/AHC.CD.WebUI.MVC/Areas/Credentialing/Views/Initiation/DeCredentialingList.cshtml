@{
    ViewBag.Title = "DeCredentialingList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section AddToHead{
    <script src="~/Scripts/Lib/Jquery/jquery-1.11.0.js"></script>
    <script src="~/Scripts/Lib/Angular/angular.min.js"></script>
    <script src="~/Scripts/Lib/Angular/ng-table.js"></script>

    <script src="~/Scripts/Lib/Angular/ng-table-resizable-columns.js"></script>
    <link href="~/Content/Provider/ng-table.css" rel="stylesheet" />

    <script src="~/Areas/Credentialing/Scripts/CredentialingList.js"></script>
    <script src="~/Areas/Credentialing/Scripts/DeCredentialingList.js"></script>
}
<div id="page-wrapper" ng-app="DeCredentialingList" ng-controller="deCredentialingListController">

    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <ol class="breadcrumb">
                <li>
                    <i class="fa fa-dashboard"></i>  <a href="@System.Configuration.ConfigurationManager.AppSettings["AppRoot"]/Dashboard/Index">Dashboard</a>
                </li>
                <li class="active">
                    <i class="fa fa-list-alt"></i> Credentialing and Delegation
                </li>
            </ol>
        </div>
    </div>
    <!-- /.row -->
    <!-- Page Heading -->

    <div class="panel panel-default content-panel">
        <div class="panel-heading">
            <span class="badge bg-info pull-right" ng-show="ifFilter()">{{getIndexFirst()}} - {{getIndexLast()}} of {{data.length}}</span>
            <h3 class="panel-title">List of DeCredentialing Initiations</h3>
        </div>
        <div class="clearfix"></div>
        <div class="panel-body" ng-cloak ng-if="data.length!=0">
            <div class="col-lg-12" style="overflow-x:auto;">
                <table ng-table="tableParams1" show-filter="true" class="table table-hover ng-table-rowselected">
                    <!-- ngInclude: templates.header -->
                    <thead>
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Plan</th>
                            <th>Initiated Date</th>
                            <th>Status</th>
                        </tr>
                        <tr>
                            <td><input type="text" placeholder="Filter First Name" class="form-control input-sm" ng-model="search.FirstName" /></td>
                            <td><input type="text" placeholder="Filter Last Name" class="form-control input-sm" ng-model="search.LastName" /></td>
                            <td><input type="text" placeholder="Filter Plan" class="form-control input-sm" ng-model="search.Plan" /></td>
                            <td><input type="text" placeholder="Filter Initiated Date" class="form-control input-sm" ng-model="search.InitiationDate" /></td>
                            <td><input type="text" placeholder="Filter Status" class="form-control input-sm" ng-model="search.Status" /></td>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- ngRepeat: user in $data -->
                        <tr ng-repeat="user in $data | filter:{FirstName:search.FirstName,LastName:search.LastName,Plan:search.Plan,InitiationDate:search.InitiationDate,Status:search.Status}">

                            <td data-title="'First Name'" header-class="text-left" sortable="'FirstName'" filter="{ 'FirstName': 'text' }" data-title-text="First Name" class="ng-binding">
                                {{user.Profile.PersonalDetail.FirstName}}
                            </td>
                            <td data-title="'Last Name'" header-class="text-left" sortable="'LastName'" filter="{ 'LastName': 'text' }" data-title-text="Last Name" class="ng-binding">
                                {{user.Profile.PersonalDetail.LastName}}
                            </td>
                            <td data-title="'Plan'" header-class="text-left" sortable="'Plan'" filter="{ 'Plan': 'text' }" data-title-text="Plan" class="ng-binding">
                                {{user.Plan.PlanName}}
                            </td>

                            <td data-title="'Initiated Date'" header-class="text-left" sortable="'InitiationDate'" filter="{ 'InitiationDate': 'text' }" data-title-text="Initiated Date" class="ng-binding">
                                {{user.InitiationDate | date:'MM-dd-yyyy'}}
                            </td>
                            <td data-title="'Status'" header-class="text-left" sortable="'Status'" filter="{ 'Status': 'text' }" data-title-text="Status" class="ng-binding">
                                {{user.Status}}
                            </td>
                            <td>
                                <a class="btn btn-xs btn-info" href="@System.Configuration.ConfigurationManager.AppSettings["AppRoot"]/Credentialing/CnD/Application/{{user.CredentialingInfoID}}"><i class="fa fa-caret-right"></i></a>
                            </td>
                        </tr>
                        <!-- end ngRepeat: user in data -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>





