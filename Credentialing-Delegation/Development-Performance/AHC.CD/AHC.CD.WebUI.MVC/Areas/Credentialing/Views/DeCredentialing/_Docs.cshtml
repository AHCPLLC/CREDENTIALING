<br />
<div class="clearfix"></div>
<br />

<div class="col-lg-12">
    @Html.Partial("~/Areas/Credentialing/Views/DeCredentialing/_FloatingAction.cshtml")
    <div class="clearfix"></div>
    <br />
    
    <div class="col-lg-6 ">
        <button class="btn btn-xs btn-primary pull-left" onclick="showAttachMore();">Attach Document</button>
    </div>
  
</div>
<div class="clearfix"></div>
<br />
<div class="col-lg-12" id="ATTACHmoreDeCred" style="display:none">
    <div class="col-lg-6">
        <label class="control-label small">Document Name:</label><input class="input-sm form-control" type="text" />

    </div>
    <div class="col-lg-6 pull-right">
        <div class="form-group">
            <label class="control-label small">Attach Document:</label>
            <div class="fileinput fileinput-new input-group input-group-sm" data-provides="fileinput">
                <div class="form-control" data-trigger="fileinput"><i class="glyphicon glyphicon-file fileinput-exists"></i> <span class="fileinput-filename"></span></div>
                <span class="input-group-addon btn btn-default btn-file"><span class="fileinput-new">Select</span><span class="fileinput-exists">Change</span><input type="file" name="..."></span>
                <a href="#" class="input-group-addon btn btn-default fileinput-exists" data-dismiss="fileinput">Remove</a>
            </div>
        </div>
    </div>
    <div class="col-lg-12">
        <div class="col-lg-6">
            <button class="btn btn-xs btn-danger  pull-left" onclick="cancelAdd();">Cancel</button>
        </div>
        <div class="col-lg-6">
            <button class="btn btn-xs btn-success  pull-right" onclick="showAdd();">Add</button>
        </div>
    </div>
</div>
<div class="clearfix"></div>
<div class="col-lg-12">
    <div class="alert alert-success" id="SubmitDoneDeCred" role="alert" style="display:none;">
        <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        The Submission is Successful and Email is Sent !!!!
    </div>
    <div class="alert alert-success" id="AddDoneDeCred" role="alert" style="display:none;">
        <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        The Document Upload is Successful !!!!
    </div>
</div>


<div class="col-lg-12">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Document</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
           
            <tr>
                <td>Supporting Document</td>
                <td><input type="checkbox" /></td>
                <td>
                    <a class="btn btn-xs btn-primary" toggle data-toggle="tooltip" data-placement="top" title="View" href="#" target="_blank"><i class="fa fa-eye"></i></a>
                    <button class="btn btn-xs btn-primary" toggle data-toggle="tooltip" data-placement="top" title="Print"><i class="fa fa-print"></i></button>
                    <button class="btn btn-xs btn-primary" toggle data-toggle="tooltip" data-placement="top" title="Download"><i class="fa fa-download"></i></button>
                </td>
            </tr>
         
        </tbody>
    </table>
</div>

<script>
    var showAttachMore = function () {
        $("#ATTACHmoreDeCred").show();
        $("#SubmitDoneDeCred").hide();
        $("#AddDoneDeCred").hide();

    };
    var showSubmit = function () {
        $("#ATTACHmoreDeCred").hide();
        $("#SubmitDoneDeCred").show();
        $("#AddDoneDeCred").hide();

    };
    var showAdd = function () {
        $("#ATTACHmoreDeCred").hide();
        $("#SubmitDoneDeCred").hide();
        $("#AddDoneDeCred").show();
    };
    var cancelAdd = function () {
        $("#AddDoneDeCred").hide();
        $("#SubmitDoneDeCred").hide();
        $("#ATTACHmoreDeCred").hide();
    };
</script>