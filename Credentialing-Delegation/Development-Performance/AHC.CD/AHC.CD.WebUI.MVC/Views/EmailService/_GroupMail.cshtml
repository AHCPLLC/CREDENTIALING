@model AHC.CD.WebUI.MVC.Models.EmailService.EmailGroupViewModel

<div id="AddGroupEmail" class="col-lg-12 zero-padding-left-right-div">
    <div>
        <label class="control-label small" style="margin-left:14px">Group Mail ID *</label>
        <div class="col-lg-12 zero-padding-left-right-div">

            <div class="col-lg-4">
                @*<input type="text" class="form-control input-sm" ng-model="groupMailID" />*@
                @Html.TextBoxFor(model => model.EmailGroupName, new { @class = "form-control input-sm", data_ng_model = "groupMailID", data_val = "true" })
                <span style="color:red" ng-if="grpNameErrorMessage">Please provide Group Mail Name</span>
                <span style="color:red" ng-if="InvalidgrpNameErrorMessage">Please provide a Valid Mail Id.</span>
            </div>
        </div>
    </div>
    <br /><br />
    <div class="clearfix"></div>
    <div class="col-lg-12 zero-padding-left-right-div">
        <div class="col-lg-4 form-group">
            <label class="control-label small">Select Email ID *</label>
            <input id="tulasi" type="hidden" name="EmailIds" ng-value="{{GroupEmailIds}}" />
            <input class="form-control input-sm" name="mail" autocomplete="off" ng-model="ProviderMailId" ng-focus="searchCumDropDown('groupMail')" />
            <span style="color:red" ng-if="grpMailIdsErrorMessage">Please Add Mail Ids to the group</span>
            <div class="ProviderTypeSelectAutoList popover fade bottom in" role="tooltip" id="groupMail">
                <table class="table table-striped table-bordered table-hover table-condensed" style="margin-bottom: 0px;">
                    <tbody>
                        <tr ng-repeat="mail in filteredgroupMail = (tempGroupMailIDS | filter:ProviderMailId) track by $index" ng-click="Selectmail(mail)" class="pointer">
                            <td>{{mail}}</td>
                        </tr>
                        <tr ng-if="tempGroupMailIDS.length == 0">
                            <td>No data..... </td>
                        </tr>
                        <tr ng-if="tempGroupMailIDS.length > 0 && filteredgroupMail.length == 0">
                            <td>Mail ID not found..... </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-lg-3 col-lg-offset-2 form-group" style="overflow-y:scroll;overflow:auto;height:150px">
            <table class="table-hover table-condensed">
                <tbody>
                    <tr ng-repeat="a in selectedMail track by $index">
                        <td><p class="label label-info">{{a}}</p></td>
                        <td><i class="fa fa-close" style="color:red;cursor:pointer" ng-click="removeMail(a)"></i></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="col-lg-12" style="margin-bottom:2%">
        <button class="btn btn-warning" ng-click="cancelGroupView()">Cancel</button>
        <button class="btn btn-primary pull-right" ng-click="saveGroup('AddGroupEmail')">Save</button>
    </div>
    <div ng-show="activeMessageDiv=='grpsuccessMsgDiv'" class="col-lg-12">
        <div class="alert alert-success" role="alert">
            <button ng-click="closeAlertMessage('')" class="close"><span>&times;</span></button>
            <i class="fa fa-2x fa-arrow-up"></i> {{messageDesc}}
        </div>
    </div>
    <div ng-show="activeMessageDiv=='grperrorMsgDiv'" class="col-lg-12">
        <div class="alert alert-danger" role="alert">
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <span class="sr-only">Error:</span>
            <span>{{messageDesc}}</span>
        </div>
    </div>
</div>