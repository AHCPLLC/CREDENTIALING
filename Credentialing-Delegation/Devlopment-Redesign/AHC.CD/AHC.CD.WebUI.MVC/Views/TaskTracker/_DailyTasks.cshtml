<div class="row">
    <div class="col-lg-12">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 zero-padding-left-right-div form-style" style="border-top: 1px solid #eee; padding-top: 10px;" ng-if="TableView">
            <div class="progress col-lg-12" ng-if="!progressbar" ng-cloak>
                <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
                    Loading...Please wait...
                </div>
            </div>
            <div ng-if="progressbar">
                <div class="col-lg-12 zero-padding-left-right-div">
                    <div ng-show="activeMessageDiv=='successfullySaved'" class="alert alert-success" role="alert">
                        <button ng-click="closeAlertMessage('')" class="close"><span>&times;</span></button>
                        {{messageDesc}}
                    </div>
                    <div ng-show="activeMessageDiv=='errorInitiated'" class="col-lg-12">
                        <div class="alert alert-danger" role="alert">
                            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                            <span class="sr-only">Error:</span>
                            <span>{{messageDesc}}</span>
                        </div>
                    </div>
                </div>
                <div ng-show="TasksAssigned.length==0 && progressbar">
                    <label>No Tasks Assigned.</label>
                </div>
                <table ng-show="TasksAssigned.length>0 && progressbar" class='table table-striped table-bordered customtbodyStyle medium wrap-words'>
                    <thead>
                        <tr>
                            <th class='col-lg-2'>
                                Provider Name
                            </th>
                            <th class='col-lg-2 col-md-2 col-sm-2 col-xs-2'>
                                Subject
                            </th>
                            <th class='col-lg-2 col-md-2 col-sm-2 col-xs-2'>
                                Sub Section Name
                            </th>
                            <th class='col-lg-2 col-md-2 col-sm-2 col-xs-2'>
                                Next FollowUp Date
                            </th>
                            <th class='col-lg-1 col-md-1 col-sm-1 col-xs-1'>
                                Task Status
                            </th>
                            <th class='col-lg-2 col-md-2 col-sm-2 col-xs-2'>Action</th>
                        </tr>
                        <tr>
                            <td class='col-lg-2 col-md-2 col-sm-2 col-xs-2'><input type="text" placeholder="Filter Provider Name" class="form-control input-sm" ng-model="search.ProviderName"></td>
                            <td class='col-lg-2 col-md-2 col-sm-2 col-xs-2'><input type="text" placeholder="Filter Subject" class="form-control input-sm" ng-model="search.Subject" /></td>
                            <td class='col-lg-2 col-md-2 col-sm-2 col-xs-2'><input type="text" placeholder="Filter Sub Section Name" class="form-control input-sm" ng-model="search.SubSectionName" /></td>
                            <td class='col-lg-1 col-md-1 col-sm-1 col-xs-1'><input type="text" placeholder="Filter Next FollowUp Date" class="form-control input-sm" ng-model="search.NextFollowUpDate" /></td>
                            <td class='col-lg-2 col-md-2 col-sm-2 col-xs-2'><input type="text" placeholder="Filter Task Status" class="form-control input-sm" ng-model="search.CompleteStatus" /></td>
                            <td class='col-lg-2 col-md-2 col-sm-2 col-xs-2'></td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="c in TasksAssignedPagination | filter:{ProviderName:search.ProviderName,Subject:search.Subject,SubSectionName:search.SubSectionName,NextFollowUpDate:search.NextFollowUpDate,CompleteStatus:search.CompleteStatus}   track by $index">
                            <td>{{c.ProviderName}}</td>
                            <td>{{c.Subject}}</td>
                            <td>{{c.SubSectionName}}</td>
                            <td>{{c.NextFollowUpDate}}</td>
                            <td>{{c.CompleteStatus}}</td>
                            <td>
                                <a class="btn btn-xs btn-default" href='@System.Configuration.ConfigurationManager.AppSettings["AppRoot"]/Profile/MasterProfile/ProviderProfile/{{c.ProfileID}}{{c.TabID}}{{c.SubSectionID}}' tooltip data-toggle="tooltip" data-placement="top" title="Redirect"><i class="fa fa-repeat"></i></a>
                                <button class="btn btn-xs btn-default" ng-click="showDetailViewforTab1(c)" tooltip data-toggle="tooltip" data-placement="top" title="View"><i class="fa fa-eye"></i></button>
                                <button class="btn btn-xs btn-primary" ng-click="showEditViewforTab1(c)" ng-hide="c.CompleteStatus=='Closed'" tooltip data-toggle="tooltip" data-placement="top" title="Edit"><i class="fa fa-edit"></i></button>
                                <button class="btn btn-xs btn-danger" data-toggle="tooltip" ng-hide="c.CompleteStatus=='Closed'" data-placement="top" title="Close" ng-click="inactiveWarning(c);" tooltip><i class="fa fa-remove"></i></button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="clearfix"></div>
            <div ng-if="CurrentPageforTasksAssigned.length > 0" ccolicensedetailstable></div>
            <pagination ng-if="CurrentPageforTasksAssigned.length > 0" total-items="bigTotalItemsforTasksAssigned" ng-model="bigCurrentPageforTasksAssigned" max-size="maxSize" class="pagination-sm" ng-change="pageChangedforTasksAssigned(bigCurrentPageforTasksAssigned)" boundary-links="true" rotate="false" num-pages="numPages" style="margin:0;"></pagination>
            <div class="clearfix"></div><br />
        </div>
        <div ng-if="editViewforTab1" class="col-lg-12 col-md-12 col-sm-12 col-xs-12 zero-padding-left-right-div form-style">
            <fieldset>
                <legend>
                    Edit Task
                </legend>
                <div class="legend2 pull-right">
                    <button ng-click="cancelEditViewforTab1()" class="btn btn-xs btn-default" tooltip data-toggle="tooltip" data-placement="top" title="close"><i class="fa fa-close"></i></button>
                </div>
                <div id="editFormDiv">
                    @Html.Partial("~/Views/TaskTracker/_AddEditTask.cshtml")
                </div>
            </fieldset>
        </div>
        <div ng-if="detailViewfortab1" class="col-lg-12 col-md-12 col-sm-12 col-xs-12 zero-padding-left-right-div form-style">
            <fieldset>
                <legend>
                    View Task
                </legend>
                <div class="legend2 pull-right">
                    <button ng-click="cancelViewforTab1()" class="btn btn-xs btn-default" tooltip data-toggle="tooltip" data-placement="top" title="close"><i class="fa fa-close"></i></button>
                </div>
                <div id="detailFormDiv">
                    @Html.Partial("~/Views/TaskTracker/_ViewTask.cshtml")
                </div>
            </fieldset>
        </div>
    </div>
</div>
<div class="modal fade" id="inactiveWarningModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="removeTask">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Warning!!!!</h4>
                </div>
                <div class="col-lg-12 text-center" ng-show="isRemoved">
                    <div style="margin-top:2%;">
                        <img src="~/Content/Images/ajax-loader.gif" style="width:50px;" /> Please Wait..
                    </div>
                </div>
                <div class="modal-body" ng-show="!isRemoved">
                    Do you really want to Close the Task ?
                    <input type="hidden" name="TaskTrackerId" value="{{task.TaskTrackerId}}" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" ng-click="removeTask()" data-dismiss="modal">Continue</button>
                </div>
            </form>
        </div>
    </div>
</div>
