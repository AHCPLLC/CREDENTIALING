@model AHC.CD.WebUI.MVC.Areas.Profile.Models.PracticeLocation.PrimaryCredentialingContactViewModel

<div class="form-style">
    <fieldset>
        <legend>
           Credentialing Contact
        </legend>

        <form>
            <div class="col-lg-12 zero-padding-left-right-div">
                <div class="col-lg-8 form-group">
                    <label class="control-label small"><input type="checkbox" name="OfficeManager" data-ng-model="primaryCredentialingContact.OfficeManagerAvail" /> Check here to use the Office Manager and Address of the Primary Practice Location as the Credentialing Information.</label>
                </div>
                <div class="col-lg-4 form-group">
                    <label class="control-label small">Office Manager</label>
                    <select class="form-control input-sm col-lg-3" data-ng-model="primaryCredentialingContact.OfficeManager">
                        <option disabled selected hidden>Choose Office Manager</option>
                        <option value="John Paul">John Paul</option>
                    </select>
                </div>
            </div>
            <div class="col-lg-12 zero-padding-left-right-div">
                <div class="col-lg-4 form-group">
                    @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control input-sm", placeholder = "First Name", data_ng_model = "primaryCredentialingContact.FirstName" })
                        @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-lg-4 form-group">
                    @Html.LabelFor(model => model.MiddleName, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        @Html.TextBoxFor(model => model.MiddleName, new { @class = "form-control input-sm", placeholder = "Middle Name", data_ng_model = "primaryCredentialingContact.MiddleName" })
                        @Html.ValidationMessageFor(model => model.MiddleName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-lg-4 form-group">
                    @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        @Html.TextBoxFor(model => model.LastName, new { @class = "form-control input-sm", placeholder = "Last Name", data_ng_model = "primaryCredentialingContact.LastName" })
                        @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="col-lg-12 zero-padding-left-right-div">
                @*<div class="col-lg-4 form-group">
                    @Html.LabelFor(model => model.Number, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        @Html.TextBoxFor(model => model.Number, new { @class = "form-control input-sm", placeholder = "Number", data_ng_model = "primaryCredentialingContact.Number" })
                        @Html.ValidationMessageFor(model => model.Number, "", new { @class = "text-danger" })
                    </div>
                </div>*@
                <div class="col-lg-4 form-group">
                    @Html.LabelFor(model => model.Street, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        @Html.TextBoxFor(model => model.Street, new { @class = "form-control input-sm", placeholder = "Street", data_ng_model = "primaryCredentialingContact.Street" })
                        @Html.ValidationMessageFor(model => model.Street, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-lg-4 form-group">
                    @Html.LabelFor(model => model.Building, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        @Html.TextBoxFor(model => model.Building, new { @class = "form-control input-sm", placeholder = "Building", data_ng_model = "primaryCredentialingContact.Building" })
                        @Html.ValidationMessageFor(model => model.Building, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="col-lg-12 zero-padding-left-right-div">
                <div class="col-lg-4 form-group">
                    @Html.LabelFor(model => model.City, htmlAttributes: new { @class = "control-label small" })
                    
                    <select class="form-control input-sm col-lg-3" data-ng-model="primaryCredentialingContact.City">
                        <option disabled selected hidden>Choose City</option>
                        <option value="St Petersburg">St Petersburg</option>
                    </select>
                </div>
                <div class="col-lg-4 form-group">
                    @Html.LabelFor(model => model.State, htmlAttributes: new { @class = "control-label small" })
                    
                    <select class="form-control input-sm col-lg-3" data-ng-model="primaryCredentialingContact.State">
                        <option disabled selected hidden>Choose State</option>
                        <option value="Florida">Florida</option>
                    </select>
                </div>
                <div class="col-lg-4 form-group">
                    @Html.LabelFor(model => model.Zipcode, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        @Html.TextBoxFor(model => model.Zipcode, new { @class = "form-control input-sm", placeholder = "Zip code", data_ng_model = "primaryCredentialingContact.ZipCode" })
                        @Html.ValidationMessageFor(model => model.Zipcode, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="col-lg-12 zero-padding-left-right-div">
                <div class="form-group col-md-4">
                    @Html.LabelFor(model => model.Telephone, htmlAttributes: new { @class = "control-label small" })
                    
                    <div>
                        <div class="input-group">
                            <div class="input-group-btn">
                                <button type="button" class="btn btn-sm"><span class="caret"></span></button>
                            </div>
                            <div class="popover fade bottom in" role="tooltip" id="countryDailCodeContainer">
                                <div class="arrow"></div>
                                <h3 class="popover-title">Select Country Dial Code</h3>
                                <div class="popover-content">
                                    <select id="ContactContryCode">
                                        <option>+91</option>
                                    </select>
                                </div>
                            </div>
                            <input type="text" name="PhoneNo" class="form-control input-sm" id="PhoneNo" placeholder="Phone Number" data-ng-model="primaryCredentialingContact.Telephone" required>
                        </div>

                    </div>
                  
                </div>
                <div class="form-group col-md-4">
                    @Html.LabelFor(model => model.Fax, htmlAttributes: new { @class = "control-label small" })
                    
                    <div>
                        <div class="input-group">
                            <div class="input-group-btn">
                                <button type="button" class="btn btn-sm"><span class="caret"></span></button>
                            </div>
                            <div class="popover fade bottom in" role="tooltip" id="countryDailCodeContainer">
                                <div class="arrow"></div>
                                <h3 class="popover-title">Select Country Dial Code</h3>
                                <div class="popover-content">
                                    <select id="ContactContryCode">
                                        <option>+91</option>
                                    </select>
                                </div>
                            </div>
                            <input type="text" name="Fax" class="form-control input-sm" id="Fax" placeholder="Fax Number" data-ng-model="primaryCredentialingContact.Fax" required>
                        </div>

                    </div>
                </div>
                <div class="col-lg-4 form-group">
                    @Html.LabelFor(model => model.EmailID, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        @Html.TextBoxFor(model => model.EmailID, new {Type="Email", @class = "form-control input-sm", placeholder = "EmailID", data_ng_model = "primaryCredentialingContact.EmailId" })
                        @Html.ValidationMessageFor(model => model.EmailID, "", new { @class = "text-danger" })
                    </div>
                    @*<input class="form-control input-sm" type="text" placeholder="Email ID" data-ng-model="primaryCredentialingContact.EmailId" />*@
                </div>
            </div>
            <div class="col-lg-12">
                <button class="btn btn-warning btn-sm" ng-click="cancelCredentialingContact()">Cancel</button>              
                <button class="btn btn-success btn-sm pull-right" ng-click="saveCredentialingContact(primaryCredentialingContact)">Save</button>
            </div>
        </form>

        </fieldset>
    </div>
