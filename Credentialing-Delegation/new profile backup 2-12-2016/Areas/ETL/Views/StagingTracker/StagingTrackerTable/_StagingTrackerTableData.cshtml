@using PortalTemplate.Areas.ETL.Models.StagingTracker;

<p-script filepath="~/Areas/ETL/Scripts/StagingTracker/StagingTrackerTable.js"></p-script>
<p-link filepath="~/Areas/ETL/Styles/TableStyle/TableStyle.css"></p-link>

@{int rowNo = 0;}

<style>
    tbody > tr, td {
        white-space: normal;
        word-wrap: break-word;
        text-transform: none;
    }

    th {
        font-size: 15px;
        text-transform: none;
    }

    body {
        text-transform: none;
    }

    a {
        cursor: pointer;
    }

    input {
        font-size: x-small;
    }

    .buttons-excel {
        visibility: hidden;
    }
</style>
<br />
<div class="col-lg-4">
    <span style="background: #0092B3; padding: 10px; border-radius: 10px; color: #fff;"><b>Total Count : <span class="charge badge" style="background-color: rgba(47, 39, 39, 0.84);">@ViewData["_StagingTrackerount"]</span></b></span>
</div>
<div class="col-lg-3">
    <span style="background: #0092B3; padding: 10px; border-radius: 10px; color: #fff;"><b>Filtered Count : <span class="charge badge" id="DisplayFilteredCount" style="background-color: rgba(47, 39, 39, 0.84);">@ViewData["_StagingTrackerount"]</span></b></span>
</div>
<div class=" col-lg-1 pull-right">
    <a href="#" onclick="ExportToExcel()" id="ExportToExcel" class="pointer" style="text-decoration:none;" tooltip="" data-toggle="tooltip" data-placement="top" title="Export to Excel" data-original-title="Export to Excel">
        <img src="~/Areas/ETL/Resources/Images/ssis-export-excel-file-task.png" style="width:40px; height:40px;" />
    </a>
</div>
<br /> <br />

<div class="col-lg-12">
    <table id="StagingTracker" class="displayTableStagingTracker table table-striped table-hover table-responsive custom-thead-back custom-thead-font" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>S No </th>
                <th>Plan</th>
                <th>File Path</th>
                <th>File Type</th>
                <th>IPA</th>
                <th>Migration Start Date</th>
                <th>Migration End Date</th>
                <th>Migartaion Status</th>
                <th>File Recieved Date</th>
                <th>Source</th>
                <th>Staging Type</th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th>S No </th>
                <th>Plan</th>
                <th>File Path</th>
                <th>File Type</th>
                <th>IPA</th>
                <th>Migration Start Date</th>
                <th>Migration End Date</th>
                <th>Migartaion Status</th>
                <th>File Recieved Date</th>
                <th>Source</th>
                <th>Staging Type</th>
            </tr>
        </tfoot>
        <tbody>
            @foreach (var StagingTracker in
                (List<StagingTrackerDTO>)ViewData["_StagingTrackerDTO"])
            {
                <tr>
                    <td>@(rowNo += 1)</td>
                    <td>@StagingTracker.plan</td>
                    <td>@StagingTracker.FilePath</td>
                    <td>@StagingTracker.FileType</td>
                    <td>@StagingTracker.IPA</td>
                    <td>@StagingTracker.MigrationStartDate</td>
                    <td>@StagingTracker.MigrationEndtDate</td>
                    <td>@StagingTracker.MigrationStatus</td>
                    <td>@StagingTracker.FileRecievedDate</td>
                    <td>@StagingTracker.Source</td>
                    <td>@StagingTracker.StagingType</td>
                </tr>
            }

        </tbody>
    </table>
</div>
