@using PortalTemplate.Areas.ETL.Models.EdwLogger;
<p-script filepath="~/Areas/ETL/Scripts/Table.js"></p-script>
<p-link filepath="~/Areas/ETL/Styles/TableStyle/TableStyle.css"></p-link>

<style>
    tbody > tr, td {
        white-space: normal;
        text-transform: none;
    }

    th {
        font-size: 15px;
        text-transform: none;
    }

    body {
        text-transform: none;
    }

    a {
        cursor: pointer;
    }

    input {
        font-size: x-small;
    }
    .buttons-excel {
        visibility: hidden;
    }
</style>
<br />
<div>
    <div class="col-lg-4">
        <span style="background: #0092B3; padding: 10px; border-radius: 10px; color: #fff;"><b>Total Count : <span class="charge badge" style="background-color: rgba(47, 39, 39, 0.84);">@ViewData["_PreStageLoggerDataCount"]</span></b></span>
    </div>
    <div class="col-lg-3">
        <span style="background: #0092B3; padding: 10px; border-radius: 10px; color: #fff;"><b>Filtered Count : <span class="charge badge" id="DisplayFilteredCount" style="background-color: rgba(47, 39, 39, 0.84);">@ViewData["_PreStageLoggerDataCount"]</span></b></span>
    </div>
    <div class=" col-lg-1 pull-right">
        <a href="#" onclick="ExportToExcel()" id="ExportToExcel" class="pointer" style="text-decoration:none;" tooltip="" data-toggle="tooltip" data-placement="top" title="Export to Excel" data-original-title="Export to Excel">
            <img src="~/Areas/ETL/Resources/Images/ssis-export-excel-file-task.png" style="width:40px; height:40px;" />
        </a>
    </div>
</div>

<br /> <br /> 

<div class="col-lg-12">
    <table id="PrsetageLoggerTable" class="display  table table-striped table-hover table-responsive custom-thead-back custom-thead-font" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>
                    S No.
                </th>
                <th>
                    File Location
                </th>
                <th>
                    Plan
                </th>
                <th>
                    Data Source
                </th>
                <th>
                    File Type
                </th>
                <th>
                    File Archieved Date
                </th>
                <th>
                    Prestaged Date
                </th>

            </tr>
        </thead>
        <tfoot>
            <tr>
                <th> </th>
                <th>File Location</th>
                <th>Plan</th>
                <th>Data Source</th>
                <th>File Type</th>
                <th> File Archieved Date</th>
                <th>Prestaged Date</th>
            </tr>
        </tfoot>
        <tbody id="LivePrestageLoggerTableBody">
            @*@{ Html.RenderAction("LivePrestageLoggerTableDataBody", "EdwLogger"); }*@
            @foreach (var LoggerData in (List<PreStageLoggerData>)ViewData["_PreStageLoggerData"])
            {
 
                <tr>
                    <td>@LoggerData.serial</td>
                    <td style="word-wrap: break-word">@LoggerData.FileLocation</td>
                    <td>@LoggerData.plan</td>
                    <td>@LoggerData.DataSource</td>
                    <td>@LoggerData.FileType</td>
                    <td>@LoggerData.FileDate</td>
                    <td>@LoggerData.moment</td>
                </tr>
            }

        </tbody>
    </table>
</div>
