@model List<PortalTemplate.Areas.Encounters.Models.CreateEncounter.ICDCodeViewModel>

<div class="col-lg-12 padding_icd zero-padding-left-right">
    <fieldset class="fieldsetStyle">
        <legend class="legendstyle">Member Active Diagnosis Codes</legend>
        <div class="row">
            <div class="col-lg-12">
                <div class="col-lg-1 pull-right">
                    <span class="custombadge outertabclose outertabclose-red DiagnosisActiveHistory pull-right"><i class="fa fa-times"></i></span>
                </div>
                <div class=" col-lg-2 col-md-4 col-sm-6 col-xs-12 pull-right">
                    <button class="btn btn-xs btn-primary margin_left_12px" id="member_search_btnCCM">Search</button>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12 zero-padding-left-right pull-right">
                    <input type="text" class="form-control input-xs " placeholder="Search By ICD Code/Description" name="icdCodeDescription">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <table class="table table-striped table-hover table-responsive custom-thead-back custom-thead-font custom-tbody custom-table-striped">
                    <thead class="theme_thead">
                        <tr>
                            <th></th>
                            <th>Code </th>
                            <th>Description </th>
                            <th>HCC Code</th>
                            <th>HCC Version</th>
                            <th>HCC Description </th>
                            <th>HCC Weight</th>

                        </tr>
                    </thead>
                    <tbody id="icdCodeSearch">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><input class="normal-checkbox icdCode" name="icdCode" type="checkbox" value="A207"><label><span></span></label></td>
                                <td>@item.ICDCode</td>
                                <td>@item.CodeDescription</td>
                                <td>@item.HCCCode</td>
                                <td>@item.HCCVersion</td>
                                <td>@item.HCCDescription</td>
                                <td>@item.HCCWeight</td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </fieldset>
</div>