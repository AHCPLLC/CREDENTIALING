@model List<PortalTemplate.Areas.Encounters.Models.CreateEncounter.DocumentHistoryViewModel>
<fieldset class="fieldsetStyle">
    <legend class="legendstyle">Document History</legend>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 clearfix">
            <a class="custombadge outertabclose outertabclose-red pull-right" id="CloseDocHistoryBtn"><i class="fa fa-times"></i></a>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <table class="table table-striped table-hover table-responsive custom-thead-back custom-thead-font custom-tbody custom-table-striped">
                <thead class="theme_thead">
                    <tr>
                        <th>Document Name</th>
                        <th>Category</th>
                        <th>Uploaded By</th>
                        <th>Uploaded On</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.DocumentName</td>
                            <td>@item.DocumentCategory</td>
                            <td>@item.UploadedBy</td>
                            <td>@item.UploadedOn</td>
                            <td>
                                <a class="btn btn-xs" href="javascript:void(0)" onclick="openDocumentViewer()"><i class="fa fa-eye"></i></a>
                                <a class="btn btn-xs"><i class="fa fa-plus"></i></a>
                                <a class="btn btn-xs" target="_blank" href="@item.DocumentPath" data-toggle="tooltip" title="Open Document in New Tab"><i class="fa fa-external-link" aria-hidden="true"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>

</fieldset>
