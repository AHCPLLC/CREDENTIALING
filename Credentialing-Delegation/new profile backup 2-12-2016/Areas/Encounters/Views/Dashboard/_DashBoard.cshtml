@model PortalTemplate.Areas.Encounters.Models.Dashboard.EncounterDashboardViewModel
<p-link filepath="~/Areas/Encounters/Contents/Css/AppCss/Dashboard/Unminified/EncounterDashBoard.css" rel="stylesheet"></p-link>

<div class="margin_top_10_px margin_bottom_10_px">
    <a class="btn btn-xs btn-info pull-right" id="filterData" onclick="DashboardFilter()">
        <i class="fa fa-filter"> Filter</i>
    </a>
    <a class="btn btn-xs btn-primary tab-navigation member-actions pull-right" data-toggle="tooltip" title="View Encounter List" data-tab-val="Encounters" data-tab-action="Encounters" data-tab-title="Encounters" data-tab-container="fullBodyContainer" data-tab-autoflush="false" data-tab-path="/Encounters/EncounterList/ShowAllEncounters"><i class="fa fa-eye"></i> Go To List</a>
    <a class="btn btn-xs btn-primary tab-navigation member-actions pull-right" data-toggle="tooltip" title="Create Schedule" data-tab-val="Schedule" data-tab-action="Schedule" data-tab-title="Create Schedule" data-tab-container="fullBodyContainer" data-tab-autoflush="false" data-tab-path="/Encounters/Schedule/CreateSchedule"><i class="fa fa-plus"></i> Create Schedule</a>

</div>
<div class="row">
    <div class="dashboard_filter" id="showfilter">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <fieldset class="fieldsetStyle">
                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
                    <label>Member</label>
                    <div>
                        <input list="members" class="form-control input-xs non_mandatory_field_halo">
                        <datalist id="members">
                            <option value="Jill Crawley">
                            <option value="John Satterfield">
                            <option value="Smith Lucas">
                        </datalist>
                    </div>
                </div>
                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
                    <label>PCP</label>
                    <div>
                        <input list="pcp" class="form-control input-xs non_mandatory_field_halo">
                        <datalist id="pcp">
                            <option value="Pariksith Singh">
                            <option value="Nishat Seema">
                            <option value="Ali Syed">
                        </datalist>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                    <label>Facility</label>
                    <div>
                        <input list="facility" class="form-control input-xs non_mandatory_field_halo">
                        <datalist id="facility">
                            <option value="1094 North Cliffe Dlve">
                            <option value="10441 Quality Dr">
                            <option value="10494 Internal Med">
                            <option value="10045 Cortez Blvd">
                            <option value="13235 State Road Blvd">
                            <option value="14690 Spring Hill Dr">
                        </datalist>
                    </div>
                </div>
                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
                    <label>DOS  From</label>
                    <div>
                        @Html.PratianUiDatePicker(new { @placeholder = "MM/DD/YYYY", @id = "EntDashboardDOSFrom", @class = "input-xs non_mandatory_field_halo" })
                    </div>
                </div>
                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
                    <label>DOS  To</label>
                    <div>
                        @Html.PratianUiDatePicker(new { @placeholder = "MM/DD/YYYY", @id = "EntDashboardDOSTo", @class = "input-xs non_mandatory_field_halo" })
                    </div>
                </div>
            </fieldset>
        </div>

    </div>

    @Html.Partial("~/Areas/Encounters/Views/Dashboard/_Biscuits.cshtml")

    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="col-lg-6 col-md-6 col-xs-6 zero-padding-right">
                <a class="pull-right view_more btn_link viewcss" id="view_Detailed_Report_Btn">View More</a>

                <div class="p_panel border-top-EncounterProductivity" id="ReadytoCodeid">
                    <div class="small_view">
                        <div class="p_panel_header">
                            <label class="labelheader zero-padding-left">Encounters Productivity</label>
                        </div>
                        <div class="p_panel_body">
                            <div id="chart1"></div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6 col-md-6 col-xs-6 zero-padding-left">
                <div class="p_panel border-top-ReasonForOnHold" id="ReasonforonHoldid">
                    <div class="small_view">
                        <div class="p_panel_header">
                            <label class="labelheader zero-padding-left">Reasons for On-Hold Encounters</label>
                        </div>
                        <div class="p_panel_body">
                            <div>
                                <table class="table table-striped table-hover table-bordered custom-thead-back custom-thead-font custom-tbody custom-table-striped">
                                    <thead class="theme_thead">
                                        <tr>
                                            <th>Reason</th>
                                            <th>Count</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            foreach (var item in Model.ReasonsForOnHoldEncountersViewModel)
                                            {
                                                <tr class="pointer" onclick="ViewOnHoldfullscreen()">
                                                    <td>@item.Reason</td>
                                                    <td>@item.Count</td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-12 col-md-12 col-xs-12">
        <div class="p_panel border-top-Scheduler">
            <div class="p_panel_header">
                <center><label class="labelheader SchedulerLabel">Scheduler</label></center>
            </div>
            <div class="p_panel_body" id="pCalendar">
            </div>
        </div>
    </div>
</div>
<p-script filepath="~/Areas/Encounters/Scripts/AppJs/Dashboard/Unminified/_DashboardController.js"></p-script>
<p-script filepath="~/Areas/Encounters/Scripts/AppJs/Dashboard/Unminified/_GraphDetailedController.js"></p-script>
<p-link filepath="~/Areas/Encounters/Contents/Css/AppCss/Dashboard/Unminified/Pratian-Calendar.css" rel="stylesheet"></p-link>
