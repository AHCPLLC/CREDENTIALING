@*PopUp to ensure the Encounter to be NoShow*@
<div class="modal fade" tabindex="-1" role="dialog" id="noshowModal">
    <div class="modal-dialog modal-md">
        <form class="modal-content">
            <div class="modal-header bg-primary">
                <div class="col-md-12 col-lg-12">
                    <i class="fa fa-question-circle"></i>
                    <label>No Show an Encounter</label>
                    <button type="button" class="btn btn-xs btn-danger pull-right" data-dismiss="modal"><i class="fa fa-close"></i></button>
                </div>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-12">
                        @Html.Partial("~/Views/PBAS/CreateEncounter/_viewPatientDetails.cshtml")
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-xs-12">
                        Reason
                        <div><textarea class="form-control input-xs non_mandatory_field_halo uppercase" placeholder="REASON"></textarea></div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-sm btn-danger pull-left" data-dismiss="modal">Cancel</button>
                <button class="btn btn-sm btn-success pull-right" data-dismiss="modal">Confirm</button>
            </div>
        </form>
    </div>
</div>
