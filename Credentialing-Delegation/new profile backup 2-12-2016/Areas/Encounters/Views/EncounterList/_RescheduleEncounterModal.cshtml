@*PopUp to ensure the Encounter to be Reschedule*@
<div class="modal fade" tabindex="-1" role="dialog" id="rescheduleModal">
    <div class="modal-dialog modal-md ">
        <form class="modal-content">
            <div class="modal-header bg-primary">
                <div class="col-md-12 col-lg-12">

                    <i class="fa fa-history"></i>
                    <label>Re-Schedule an Encounter</label>
                    <button type="button" class="btn btn-xs btn-danger pull-right" data-dismiss="modal"><i class="fa fa-close"></i></button>
                </div>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-xs-12">
                        <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
                            Reason
                            <div><textarea class="form-control input-xs non_mandatory_field_halo uppercase" placeholder="REASON"></textarea></div>
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                            Re-Schedule Date
                            <div>
                                <input type="text" placeholder="MM/DD/YYYY HH:MM:SS" class="form-control input-xs non_mandatory_field_halo">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-sm btn-danger pull-left" data-dismiss="modal">Cancel</button>
                <button class="btn btn-sm btn-success pull-right" data-dismiss="modal">Confirm</button>
            </div>
        </form>
    </div>
</div>
