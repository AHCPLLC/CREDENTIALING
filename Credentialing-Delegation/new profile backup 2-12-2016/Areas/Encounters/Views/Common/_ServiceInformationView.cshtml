@model PortalTemplate.Areas.Encounters.Models.ServiceInfoViewModel
<fieldset class="fieldsetStyle">

    <legend class="legendstyle">Service Information</legend>
    <div class="row viewelements" style="display: block;">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
                @Html.Label("Referring Provider", new { @class = "enlabelheader" })

                <div>
                    <label class="uppercase">@(Model.ReferringProvider.ProviderFirstName + ' ' + Model.ReferringProvider.ProviderLastName)</label>
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
                @Html.Label("Billing Provider", new { @class = "enlabelheader" })
                <div>
                    <label class="uppercase">@(Model.BillingProvider.ProviderFirstName + ' ' + Model.BillingProvider.ProviderLastName)</label>
                </div>
            </div>

            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
                @Html.LabelFor(m => m.ServiceFacility.FacilityName, new { @class = "enlabelheader" })
                <div><label class="uppercase">@Model.ServiceFacility.FacilityName</label></div>
            </div>
        </div>
    </div>



    <div class="row marginTop-5">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
                @Html.LabelFor(m => m.DOSFrom, new { @class = "enlabelheader" })
                <div style="display: block;"><label class="uppercase">@Model.DOSFrom</label></div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
                @Html.LabelFor(m => m.DOSTo, new { @class = "enlabelheader" })
                <div style="display: block;"><label class="uppercase">@Model.DOSTo</label></div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
                @Html.Label("Place Of Service", new { @class = "enlabelheader" })
                <div style="display: block;"><label class="uppercase">@(Model.PlaceOfService.PlaceOfServiceID + '-' + Model.PlaceOfService.Name)</label></div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
                @Html.LabelFor(m => m.NextAppointmentDate, new { @class = "enlabelheader" })
                <div style="display: block;">
                    <label class="uppercase">@Model.NextAppointmentDate</label>
                </div>
            </div>
        </div>
    </div>

    <div class="row marginTop-5">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
                @Html.LabelFor(m => m.CheckInTime, new { @class = "enlabelheader" })
                <div class="viewelements" style="display: block;"><label class="uppercase">@Model.CheckInTime</label></div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
                @Html.LabelFor(m => m.CheckOutTime, new { @class = "enlabelheader" })
                <div class="viewelements" style="display: block;"><label class="uppercase">@Model.CheckOutTime</label></div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
                @Html.LabelFor(m => m.VisitLength, new { @class = "enlabelheader" })
                <div class="viewelements" style="display: block;">
                    <label class="uppercase">@Model.VisitLength</label>
                </div>
            </div>

            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
                @Html.LabelFor(m => m.ReasonForVisit, new { @class = "enlabelheader" })
                <div class="viewelements" style="display: block;">
                    <label class="uppercase">@Model.ReasonForVisit</label>
                </div>
            </div>
        </div>
    </div>
</fieldset>
