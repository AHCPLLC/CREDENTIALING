@model PortalTemplate.Areas.Portal.Models.Facility.FacilityServiceQuestionViewModel
<div class="panel-body" id="cmstablecontainer">
    <div class="c_panel_body">
        <table class="table table-striped table-hover table-responsive custom-thead-back queue_table queue_table_head custom-thead-font custom-tbody custom-table-striped">
            <thead class="theme_thead">

                <tr>
                    <th class="withfilter sm-mbrid">
                        <span class="cmsStyled-input">
                            <input class="filer-search" type="text" required="">
                             @Html.LabelFor(p => p.Title) 
                            <span></span>
                            <i class="fa fa-sort sorticon"></i>
                        </span>
                    </th>
                    <th class="withfilter sm-mbrid">
                        <span class="cmsStyled-input">
                            <input class="filer-search" type="text" required="">
                             @Html.LabelFor(p => p.ShortTitle) 
                            <span></span>
                            <i class="fa fa-sort sorticon"></i>
                        </span>
                    </th>
                   

                    <th class="withfilter sm-mbrid">
                        <span class="cmsStyled-input">
                            <input class="filer-search" type="text" required="">
                             @Html.LabelFor(p => p.Status) 
                            <span></span>
                            <i class="fa fa-sort sorticon"></i>
                        </span>
                    </th>
                    <th class="withfilter sm-mbrid">
                        <span class="cmsStyled-input">
                            <input class="filer-search" type="text" required="">
                             @Html.LabelFor(p => p.ModifiedDate) 
                            <i class="fa fa-sort sorticon"></i>
                        </span>
                    </th>
                    <th>ACTION</th>
                </tr>

            </thead>
            <tbody class="tabletdcontrol" id="FacilityServiceQuestionTableContent">
                @if (ViewBag.TableData != null)
                {
                    foreach (var headdata in ViewBag.TableData)
                    {
                        <tr>
                            <td class="maxWidthXLem">@headdata.Title</td>
                            <td class="maxWidthXLem">@headdata.Short_Title</td>
                            <td>
                                <i class="@(("active").Equals(headdata.Status.ToString().ToLower()) ? "fa fa-check-circle text-success" : "fa fa-times text-danger")"></i>
                            </td>
                            <td class="maxWidthXLem ">@headdata.ModifiedDate</td>
                            <th>
                                <div class="btn-group" role="group">
                                    <button type="button" name="edit" data-product-name="@headdata" class="btn btn-xs btn-primary editclass"><i class="fa fa-edit"></i></button>
                                </div>
                            </th>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center text-capitalize boldFont">No Data Available</td>
                    </tr>
                }
            </tbody>

        </table>
        <div class="clearfix"></div>
        <div style="margin-bottom:50px;"></div>
    </div>
</div>



