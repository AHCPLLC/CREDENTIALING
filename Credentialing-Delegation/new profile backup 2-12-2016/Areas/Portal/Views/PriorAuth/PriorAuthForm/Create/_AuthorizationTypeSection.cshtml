@model PortalTemplate.Areas.Portal.Models.PriorAuth.PriorAuthorization.PriorAuthorizationViewModel
@using PratianUI
<div class="x_panel border_on_panel zero-padding-left-right">
    <div class="x_content zero-padding-left-right">
        <div class="col-lg-5">
            <span class="col-lg-5 zero-padding-left-right">
                <b>@Html.LabelFor(e => e.AuthorizationType)</b>
            </span>
            <div class="col-lg-4 theme_label">
                @Html.PratianUiSquareRadioButtonFor(e => e.AuthorizationType, "STANDARD", new { @checked = "checked", @id = "standardId", @Value = "Standard", @class = "AuthTypeCheck" })
            </div>
            <div class="col-lg-3 zero-padding-left-right">
                @Html.PratianUiSquareRadioButtonFor(e => e.AuthorizationType, "EXPEDITED", new { @id = "expediteId", @Value = "Expedited", @class = "AuthTypeCheck" })
            </div>
        </div>
        <div id="expediteMessageId" class="col-lg-7 zero-padding-left-right hidden">
            <span class="ExpeditedMsg"> Select Expedited Only if the member's life, health or ability to regain maximum function is jeopardized.</span>
        </div>
    </div>
</div>
