@model PortalTemplate.Areas.Portal.Models.PriorAuth.PriorAuthorization.PriorAuthorizationViewModel
<div class="">
    <div class="col-lg-12">
        <div class="col-lg-1">
            <span class="theme_label">@Html.LabelFor(e => e.CPTCodes[0].CPTCode)</span><br />
        </div>
        <div class="col-lg-1">
            <span class="theme_label">@Html.LabelFor(e => e.CPTCodes[0].Modifier)</span>
        </div>
        <div class="col-lg-3">
            <span class="theme_label">@Html.LabelFor(e => e.CPTCodes[0].CPTDesc)</span>
        </div>
        <div class="col-lg-1">
            <span class="theme_label">@Html.LabelFor(e => e.CPTCodes[0].Discipline)</span>
        </div>
        <div class="col-lg-1">
            <span class="theme_label">@Html.LabelFor(e => e.CPTCodes[0].RequestedUnits)</span>
        </div>
        <div class="col-lg-1">
            <span class="theme_label">@Html.LabelFor(e => e.CPTCodes[0].Range1)</span>
        </div>
        <div class="col-lg-1">
            <span class="theme_label">@Html.LabelFor(e => e.CPTCodes[0].NumberPer)</span>
        </div>
        <div class="col-lg-1">
            <span class="theme_label">@Html.LabelFor(e => e.CPTCodes[0].Range2)</span>
        </div>
        <div class="col-lg-1">
            <span class="theme_label">@Html.LabelFor(e => e.CPTCodes[0].TotalUnits)</span>
        </div>
        <div class="col-lg-1">
            <span class="theme_label">@Html.Label("ACTION")</span>
        </div>

    </div>
    <div id="PreAuthCPTArea">
        <div class="col-lg-12 PreAuthCPTRow">
            <div class="col-lg-1 col-md-1">
                @Html.TextBoxFor(e => e.CPTCodes[0].CPTCode, new { @class = "form-control input-xs mandatory_field_halo", @placeholder = "CPT CODE" })
            </div>
            <div class="col-lg-1 col-md-1">
                @Html.TextBoxFor(e => e.CPTCodes[0].Modifier, new { @class = "form-control input-xs ", @placeholder = "MODIFIER" })
            </div>
            <div class="col-lg-3 col-md-3">
                @Html.TextBoxFor(e => e.CPTCodes[0].CPTDesc, new { @class = "form-control input-xs mandatory_field_halo", @placeholder = "DESCRIPTION" })
            </div>
            <div class="col-lg-1 col-md-1">
                @Html.DropDownListFor(e => e.CPTCodes[0].Discipline, new SelectList((System.Collections.IEnumerable)ViewData["MasterDisciplines"], "Name", "Name"), "SELECT", new { @class = "form-control input-xs text-uppercase" })
            </div>
            <div class="col-lg-1 col-md-1">
                @Html.TextBoxFor(e => e.CPTCodes[0].RequestedUnits, new { @class = "form-control input-xs", @placeholder = "REQ UNITS" })
            </div>
            <div class="col-lg-1 col-md-1">
                @Html.DropDownListFor(e => e.CPTCodes[0].Range1, new SelectList((System.Collections.IEnumerable)ViewData["MasterRangeTypes"], "RangeType", "RangeType"), "SELECT", new { @class = "form-control input-xs text-uppercase" })
            </div>
            <div class="col-lg-1 col-md-1">
                @Html.TextBoxFor(e => e.CPTCodes[0].NumberPer, new { @class = "form-control input-xs", @placeholder = "NO PER" })
            </div>
            <div class="col-lg-1 col-md-1">
                @Html.DropDownListFor(e => e.CPTCodes[0].Range2, new SelectList((System.Collections.IEnumerable)ViewData["MasterRangeTypes"], "RangeType", "RangeType"), "SELECT", new { @class = "form-control input-xs text-uppercase" })
            </div>
            <div class="col-lg-1 col-md-1">
                @Html.TextBoxFor(e => e.CPTCodes[0].TotalUnits, new { @class = "form-control input-xs", @placeholder = "TOTAL UNITS", @Tabindex = "-1" })
            </div>
            <div class="col-lg-1 col-md-1 button-styles-xs">
                <button class="btn btn-danger btn-xs cpt_delete_btn hidden"><i class="fa fa-minus"></i></button>
                <button class="btn btn-success btn-xs cpt_add_btn"><i class="fa fa-plus"></i></button>
            </div>
        </div>
    </div>
</div>
