<?xml version="1.0" encoding="utf-8" ?>
<Validators>
  <Validator Type="FileUpload">
    <Property Name="InputSource" Required="1" ErrorMessage="InputSource is Required." />
    <Property Name="FileType" Required="1" ErrorMessage="FileType is Required." checkEdIFile="InputSource" />
    <Property Name="EdiFile" Required="1" ErrorMessage="EdiFile is Required." ValidateFile="FileType" ValidateSizeMsg="Your File is too large, maximum allowed size is :10 MB" ValidateExtMsg="Please upload only text files"/>
  </Validator>
  <Validator Type="ClearingHouseViewModel">
    <Property Name="ClearingHouseId" Required="1" ErrorMessage="Clearing House ID is Required." />
    <Property Name="ClearingHouseName" Required="1" ErrorMessage="Clearing House Name is Required."/>
    <Property Name="ClearingHousePayers" Required="1" ErrorMessage="Atleast One Payer Should be Mapped."/> 
  </Validator>
  <Validator Type="Plan">
    <Property Name="PlanName" Required="1" ErrorMessage="Plan Name is Required." />
    <Property Name="PlanUniqueId" Required="1" ErrorMessage="Plan ID is Required." CheckLengthRange="PlanUniqueId" />
  </Validator>
  <Validator Type="Member">
    <Property Name="FirstName" Required="1" ErrorMessage="First Name is Required." />
    <Property Name="Gender" Required="1" ErrorMessage="Gender is Required." />
  </Validator>
  <Validator Type="Address">
    <Property Name="AddressLine1" Required="1" ErrorMessage="Address is Required." />
    <Property Name="City" Required="1" ErrorMessage="City is Required." />
  </Validator>
  
</Validators>