@model List<PortalTemplate.Areas.Billing.Models.Claims_Tracking.EOBReport>

<div class="x_panel border_on_panel">
    <div class="x_content">

        <div>
            <label class="title_heading">EOB Report of Claim Id: CLM4845165545</label>
        </div>

        <table id="EOBReportRenderingProviderDOSListTable" class="table table-striped table-hover table-responsive custom-thead-back custom-thead-font custom-tbody custom-table-striped">
            <thead class="theme_thead">
                <tr>
                    <th>
                        Sl.No.
                    </th>
                    <th>
                        Primary Payer
                    </th>
                    <th>
                        Secondary Payer
                    </th>
                    <th>
                        Patient Name
                    </th>
                    <th>
                        DOS
                    </th>
                    <th>
                        CPT
                    </th>
                    <th>
                        Billed
                    </th>
                    <th>
                        Allowed
                    </th>
                    <th>
                        Adj
                    </th>
                    <th>
                        Ded
                    </th>
                    <th>
                        Coins/PR
                    </th>
                    <th>
                        Pmt/Amt.
                    </th>
                    <th>
                        Penalty
                    </th>
                    <th>
                        Check
                    </th>
                    <th>
                        Paid
                    </th>
                    <th>
                        Reason
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr data-container="@item.ID">
                        <td>
                            @( ((Int32)1) + @Model.IndexOf(item))
                        </td>
                        <td>
                            @item.PrimaryPayerName
                        </td>
                        <td>
                            @item.SecondaryPayerName
                        </td>
                        <td>
                            @item.PatientName
                        </td>
                        <td>
                            @item.DOS.Value.ToShortDateString()
                        </td>
                        <td>
                            @item.CPT
                        </td>
                        <td>
                            $@item.Billed
                        </td>
                        <td>
                            $@item.Allowed
                        </td>
                        <td>
                            $@item.Adjusted
                        </td>
                        <td>
                            $@item.Denied
                        </td>
                        <td>
                            $@item.CoInsurence
                        </td>
                        <td>
                            $@item.Amount
                        </td>
                        <td>
                            $@item.Penalty
                        </td>
                        <td>
                            $@item.Check
                        </td>
                        <td>
                            $@item.Paid
                        </td>
                        <td>
                            <a class="EOBReasonClaimList" href="#" data-toggle="popover" data-trigger="hover" title="@item.Reason" data-content="@item.ReasonDescription" data-placement="left">@item.Reason</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>


        <div class="clearfix button-styles">
            <button class="edit-button pull-left" id="GoBackFromEOBBtn">Back</button>
        </div>
    </div>
</div>

<script src="~/Areas/Billing/Scripts/AppJs/ClaimsTracking/Unminified/EOBReport.js"></script>