@model List<PortalTemplate.Areas.Billing.Models.Claims_Tracking.AcceptedClaimViewModel>
<div class="table-responsive">
    <table class="table table-striped table-hover table-responsive custom-thead-back custom-thead-font custom-tbody custom-table-striped">
        <thead class="theme_thead">
            <tr>
                <th>
                    <input type="checkbox" class="normal-checkbox SelectAllAcceptedClaims" value="selectAll" />
                    <label><span></span></label>
                </th>
                <th>Sl.No </th>
                <th>Claim ID </th>
                <th>Payer</th>
                <th>Member</th>
                <th>Provider</th>
                <th>Claimed Amount</th>
                <th>Created On</th>
                <th>Age</th>
                <th>Account</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @if (item.IsProcessing == "true")
                        {
                            <i class="fa fa-lock lock_claim" aria-hidden="true"></i>
                        }
                        else
                        {
                            <input type="checkbox" class="normal-checkbox individualCheckAcceptedClaims" value="@item.ClaimId" />
                            <label><span></span></label>
                        }

                    </td>
                    <td>@( ((Int32)1) + @Model.IndexOf(item))</td>
                    <td class="ClaimIdTd">@item.ClaimId</td>
                    <td>@item.Payer</td>
                    <td>@item.Member</td>
                    <td>@item.Provider</td>
                    <td>@item.ClaimedAmount</td>
                    <td>@item.CreatedOn.Value.ToShortDateString()</td>
                    <td>@item.Age</td>
                    <td>@item.Account</td>
                    <td>
                        <button class="btn btn-info btn-xs margin_left_12px editBtn"><i class="fa fa-edit"> </i></button>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="col-lg-12 zero-padding-left-right">
    <button id="AccClaimListGenerateBTN" class="btn btn-sm btn-success pull-right">Generate</button>
</div>


<script src="~/Areas/Billing/Scripts/AppJs/ClaimsTracking/Unminified/AcceptedClaims.js"></script>