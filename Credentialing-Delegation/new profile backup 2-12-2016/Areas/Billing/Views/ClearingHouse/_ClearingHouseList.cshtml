@model List<PortalTemplate.Areas.Billing.Models.Clearing_House.ClearingHouseViewModel>

<link href="~/Content/PratianComponentsCss/ptGrid.css" rel="stylesheet" />

    <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12" >
    <div>
        <button class="btn btn-success btn-xs margin_left_12px pull-right add_clearinghouse_btn"><i class="fa fa-plus-square"> Add</i></button>
    </div>
    <table id="clearingHouseTable" class="table table-striped table-hover table-responsive custom-thead-back custom-thead-font custom-tbody custom-table-striped">
        <thead class="theme_thead">
            <tr>
                <th>
                    <span class="sortable-th">
                        Clearing House ID
                        <i class="fa fa-sort"></i>
                    </span>
                </th>
                <th>
                    Clearing House Name
                </th>
                <th>
                    No. of Associated Payers
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.ClearingHouseId
                    </td>
                    <td>
                        @item.ClearingHouseName
                    </td>
                    <td>
                        @item.PayersCount
                    </td>
                    <td data-container="@item.ClearingHouseId">
                        <button class="btn btn-info btn-xs margin_left_12px view_clearinghouse_btn" data-toggle="tooltip" title="View"><i class="fa fa-eye"></i></button>
                        <button class="btn btn-info btn-xs margin_left_12px edit_clearinghouse_btn" data-toggle="tooltip" title="Edit"><i class="fa fa-edit"></i></button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>



