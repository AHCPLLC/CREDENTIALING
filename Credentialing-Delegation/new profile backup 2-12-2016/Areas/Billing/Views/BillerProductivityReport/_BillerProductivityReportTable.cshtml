@model PortalTemplate.Areas.Billing.Models.BillerProductivityReport.BillerProductivityReportViewModel

<table id="BPRListTable" class="table table-striped table-hover table-responsive custom-thead-back custom-thead-font custom-tbody custom-table-striped">
    <thead class="theme_thead">
        <tr>
            <th colspan="3">
                #Total
            </th>
            <th>
                @Model.TotalOpen
            </th>
            <th>
                @Model.TotalOnHold
            </th>
            <th>
                @Model.TotalRejected
            </th>
            <th>
                @Model.TotalAccepted
            </th>
            <th>
                @Model.TotalGenerated
            </th>
            <th>
                @Model.TotalTranslated
            </th>
            <th>
                @Model.TotalProviderOnHold
            </th>
            <th>
                @Model.TotalCommitteeReview
            </th>
            <th>
                @Model.TotalBilledAmount
            </th>
            <th>
                @Model.TotalTotalClaims
            </th>
        </tr>
        <tr>
            <th>
                Sl.No.
            </th>
            <th>
                FirstName
            </th>
            <th>
                LastName
            </th>
            <th>
                #Open
            </th>
            <th>
                #On hold
            </th>
            <th>
                #Rejected
            </th>
            <th>
                #Accepted
            </th>
            <th>
                #Generated
            </th>
            <th>
                #Translated
            </th>
            <th>
                #Provider On Hold
            </th>
            <th>
                #Committee Review
            </th>
            <th>
                Billed Amount($)
            </th>
            <th>
                #Total Claims
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.BillerProductivityReportList)
        {
            <tr data-container="@item.Id">
                <td>
                    @( ((Int32)1) + @Model.BillerProductivityReportList.IndexOf(item))
                </td>
                <td>
                    @item.FirstName
                </td>
                <td>
                    @item.LastName
                </td>
                <td>
                    @item.Open
                </td>
                <td>
                    @item.OnHold
                </td>
                <td>
                    @item.Rejected
                </td>
                <td>
                   @item.Accepted
                </td>
                <td>
                   @item.Generated
                </td>
                <td>
                   @item.Translated
                </td>
                <td>
                   @item.ProviderOnHold
                </td>
                <td>
                   @item.CommitteeReview
                </td>
                <td>
                   @item.BilledAmount
                </td>
                <td>
                   @item.TotalClaims
                </td>
            </tr>
        }

    </tbody>
</table>

