
@model PortalTemplate.Areas.Billing.Models.PayerDrilldownReport.ABillingProviderReportViewModel

<div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
    <div id="amount_billingProvider_report_donut_chart" class="report_donut_chart">

    </div>
    <div>
        <table id="chart_table" class="table table-bordered table-responsive">
            <thead>
                <tr>
                    <th>
                       Claims Status
                    </th>
                    <th>
                       Amount ($)
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr class="submitted_row">
                    <td>
                        <label class="text">Billed</label>
                    </td>
                    <td>
                        <label>@Model.AmountBilled</label>
                    </td>
                </tr>
                <tr class="accepted_row">
                    <td>
                        <label class="text">Paid    </label>
                    </td>
                    <td>
                        <label>@Model.AmountPaid</label>
                    </td>
                </tr>
                <tr class="pending_row">
                    <td>
                        <label class="text">Pending</label>
                    </td>
                    <td>
                        <label>@Model.AmountPending</label>
                    </td>
                </tr>
                <tr class="rejected_row">
                    <td>
                        <label class="text">Denied</label>
                    </td>
                    <td>
                        <label>@Model.AmountDenied</label>
                    </td>
                </tr>
            </tbody>

        </table>
    </div>
</div>
<div class="col-lg-9 col-md-9 col-sm-9 col-xs-9">
    <label class="list_title">Billing Provider List</label>
    <table class="table table-striped table-hover table-responsive custom-thead-back custom-thead-font custom-tbody custom-table-striped">
        <thead class="theme_thead">
            <tr>
                <th rowspan="2">
                    Sl No
                </th>
                <th rowspan="2">
                   Payer
                </th>
                <th rowspan="2">
                    No of Rendering Provider
                </th>
                <th colspan="7" class="text-center">
                    Amount Claims ($)
                </th>
                <th rowspan="2">
                    Action
                </th>
            </tr>
            <tr>
                <th>
                    Billed
                </th>
                <th>
                    Allowed
                </th>
                <th>
                    Paid
                </th>
                <th>
                    Adj
                </th>
                <th>
                    Ded
                </th>
                <th>
                    Pending
                </th>
                <th>
                    Denied
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.BillingProvider)
            {
                <tr>
                    <td>
                        @( ((Int32)1) + @Model.BillingProvider.IndexOf(item))
                    </td>
                    <td class="billingProvider_name">
                        @item.BillingProvider <!--PAYER-->
                    </td>
                    <td>
                        @item.RenderingProviderCount
                    </td>
                    <td>
                        @item.Billed
                    </td>
                    <td>
                        @item.Allowed
                    </td>
                    <td>
                        @item.Paid
                    </td>
                    <td>
                        @item.Adj
                    </td>
                    <td>
                        @item.Ded
                    </td>
                    <td>
                        @item.Pending
                    </td>
                    <td>
                        @item.Denied
                    </td>
                    <td>
                        <button class="btn btn-info btn-xs margin_left_12px view_amount_billingProvider_btn" data-container="@item.ID"><i class="fa fa-eye"></i></button>
                    </td>
                </tr>
            }
        </tbody>
    </table>


</div>
<div class="col-lg-12 margin_top_20_px margin_bottom_10_px button-styles clearfix">
    <button class="btn btn-warning btn-sm pull-left" id="aBillingProvider_back_btn">Back</button>
</div>

<script src="~/Areas/Billing/Scripts/AppJs/PayerDrilldownReport/Unminified/Amount/ABillingProvider.js"></script>