@model List<PortalTemplate.Areas.Billing.Models.CreateClaim.Claim_Info.CPTCodeViewModel>
<div class="modal-content">
    <div class="modal-header bg-primary">
        <div class="col-md-12 col-lg-12">
            <div class="col-lg-offset-3 col-lg-6">
                <h3 class="text-center"> <b>CPT Code History</b></h3>
            </div>
            <div class="col-lg-3 pull-right">
                <button type="button" class="btn btn-xs btn-danger pull-right" data-dismiss="modal"><i class="fa fa-close"></i></button>
            </div>
        </div>
    </div>
    <div class="modal-body c-modalBody">
        <div class="col-lg-12 border_on_panel margin_bottom_10_px padding-top_10 padding_icd" id="ViewActiveHistoryCPT">
            @*<div class="col-lg-12 zero-padding-left-right">
                <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12 zero-padding-left-right padding-bottom-10px">
                    <input type="text" class="form-control input-xs" placeholder="Search By CPT Code/Description">
                </div>
                <div class=" col-lg-2 col-md-4 col-sm-6 col-xs-12">
                    <button class="copy-button margin_left_12px">Search</button>
                </div>
            </div>*@
            <div class="col-lg-12 zero-padding-left-right">
                <div class="row">
                    @for (var i = 0; i < Model.Count; i++)
                    {
                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4 CptCodesborderStyle c-pointer" id="CPTCodeDescDiv">
                            <span class="cpt-span"></span>
                            @Model[i].CPTCode - @Model[i].CPTDescription
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-sm btn-danger pull-left" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-sm btn-success pull-right" data-dismiss="modal">Save</button>
    </div>
</div>
