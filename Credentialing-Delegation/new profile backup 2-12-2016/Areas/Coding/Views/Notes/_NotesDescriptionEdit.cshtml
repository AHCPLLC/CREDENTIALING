@model PortalTemplate.Areas.Coding.Models.CreateCoding.NotesViewModel
<div class="row">
    <div class="col-lg-12">
        <table class="table table-striped table-hover table-responsive custom-thead-back custom-thead-font custom-tbody custom-table-striped">
            <thead class="theme_thead">
                <tr>
                    @*<th>SNO </th>*@
                    <th>Category </th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Module</th>
                    <th>Notify</th>
                    <th>Added By</th>
                    <th>Added On</th>
                    <th></th>
                </tr>
            </thead>
            <tbody id="CodingNotestbody">
                @{
                    for (var i = 0; i < Model.CodingNotes.Count; i++)
                    {
                        <tr>
                            @*<td>@((@i) + 1)</td>*@
                            <td>
                                @Html.TextBoxFor(model => model.CodingNotes[i].Category, new { @Class = "form-control input-xs text-uppercase" })
                            </td>
                            <td>
                                @Html.TextBoxFor(model => model.CodingNotes[i].Title, new { @Class = "form-control input-xs text-uppercase" })
                            </td>
                            <td>
                                @Html.TextBoxFor(model => model.CodingNotes[i].Description, new { @Class = "form-control input-xs text-uppercase" })
                            </td>
                            <td>
                                @Html.TextBoxFor(model => model.CodingNotes[i].Module, new { @Class = "form-control input-xs text-uppercase" })
                            </td>
                            <td>
                                @Html.TextBoxFor(model => model.CodingNotes[i].Notify, new { @Class = "form-control input-xs text-uppercase" })
                            </td>
                            <td>
                                @Html.TextBoxFor(model => model.CodingNotes[i].AddedBy, new { @Class = "form-control input-xs text-uppercase" })
                            </td>
                            <td>
                                @Html.TextBoxFor(model => model.CodingNotes[i].AddedOn, new { @Class = "form-control input-xs text-uppercase" })
                            </td>
                            <td>
                                <a class="removeCodingNotesrow pointer"><span class="fa fa-close"></span></a>
                            </td>
                        </tr>
                    }
                }
            </tbody>         
        </table>
        <div>
            <button type="button" class="light-green-button pull-right" onclick="addnewNotesrow()"><i class="fa fa-plus"></i></button>
        </div>
    </div>
</div>

<p-script filepath="~/Areas/Coding/Scripts/AppJs/Notes/_NotesDescriptionEdit.js"></p-script>
