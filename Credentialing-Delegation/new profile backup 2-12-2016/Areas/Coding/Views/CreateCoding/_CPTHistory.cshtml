@model List<PortalTemplate.Areas.Coding.Models.CPTCodes.CPTCodeViewModel>
@using PratianUI
<div class="col-lg-12 col-md-12 col-xs-12 col-sm-12">
    <fieldset class="fieldsetStyle">
        <legend class="legendstyle">Member Active Procedure Codes</legend>
        <div class="row">
            <div class="col-lg-12">
                <div class="col-lg-3 pull-left">
                </div>
                <div class="col-lg-9 pull-right">
                    <div class="col-lg-1 pull-right">
                        <span class="custombadge outertabclose outertabclose-red closeactiveCptCodes pull-right"><i class="fa fa-times"></i></span>
                    </div>
                    <div class=" col-lg-2 col-md-4 col-sm-6 col-xs-12  pull-right">
                        <button type="button" class="btn btn-xs btn-primary margin_left_12px" id="cptCodeDescription">Search</button>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12  pull-right">
                        <input type="text" class="form-control input-xs " placeholder="Search By CPT Code/Description" name="icdCodeDescription">
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="col-lg-4 zero-padding-left-right">
                    <table class="table table-striped table-hover table-responsive custom-thead-back custom-thead-font custom-tbody custom-table-striped">
                        <thead class="theme_thead">
                            <tr>
                                <th></th>
                                <th>Code </th>
                                <th>Description </th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @*@Html.PratianUiSquareCheckboxFor(m =>item.Code, new { color = "purple", @checked = "checked" })*@
                                            <input class="normal-checkbox cptCode" name="cptCode" type="checkbox" value="@item.Code"><label><span></span></label>
                                        </td>
                                        <td>@item.Code</td>
                                        <td>@item.Description</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </fieldset>
</div>
