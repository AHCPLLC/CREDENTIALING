@model PortalTemplate.Areas.Coding.Models.CreateCoding.EncounterDecisionViewModel

<fieldset class="fieldsetStyle">
    <legend class="legendstyle">Encounter Audit Decision</legend>
    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4 eisagreed">
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 zero-padding-left-right">
            @Html.RadioButtonFor(model => model.IsAgree, true, new { @class = "normal-radio disagreeCheck" })
            <label><span></span>Agree</label>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
            @Html.RadioButtonFor(model => model.IsAgree, false, new { @class = "normal-radio disagreeCheck" })
            <label><span></span>DisAgree</label>
        </div>
    </div>
    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4 audit-valid disagreedetails" id="encdecisiondiv">
        <div>
            @Html.LabelFor(model => model.Categories[0].CategoryName)
            <div>
                @Model.Categories[0].CategoryName
                <button type="button" onclick="OpenencounterRemarksDetailedview()">...</button>
            </div>
        </div>
    </div>
    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4 audit-valid disagreedetails">
        <div>
            @Html.LabelFor(model => model.Categories[0].Remarks)
            <div>
                @Model.Categories[0].CategoryName
                <button type="button" onclick="OpenencounterRemarksDetailedview()">...</button>
            </div>
        </div>
    </div>
</fieldset>

@*******************MODAL TO VIEW THE CATEGORIES AND REMARKS**************************@
<div class="modal fade" tabindex="-1" role="dialog" id="Encounterremarksmodal">
    <div class="modal-dialog modal-md ">
        <form class="modal-content">
            <div class="modal-header bg-primary">
                <div class="col-md-12 col-lg-12">
                    <label>DisAgree ICD Code</label>
                    <button type="button" class="btn btn-xs btn-danger pull-right" data-dismiss="modal"><i class="fa fa-close"></i></button>
                </div>
            </div>
            <div class="modal-body">
                <table class="table table-striped table-hover table-responsive custom-thead-back custom-thead-font custom-tbody custom-table-striped p_body_data_background">
                    <thead class="theme_thead">
                        <tr>
                            <th class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
                                <label>S NO.</label>
                            </th>
                            <th class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
                                <label>Category</label>
                            </th>
                            <th class="col-lg-1 col-md-1 col-sm-1 col-xs-1">
                                <label>Action</label>
                            </th>
                            <th class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                                <label>Remarks</label>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (var i = 0; i < @Model.Categories.Count; i++)
                        {
                            <tr>
                                <td class="col-lg-2 col-md-2 col-sm-2 col-xs-2">@((@i) + 1)</td>
                                <td class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
                                    @Html.DisplayFor(model => Model.Categories[i].CategoryName)
                                </td>
                                <td class="col-lg-1 col-md-1 col-sm-1 col-xs-1">
                                    @if (Model.Categories[i].selected == true)
                                    {
                                        <input class="normal-checkbox enableRemarks-Icd" name="enableRemarksIcd" type="checkbox" checked><label><span></span></label>
                                    }
                                    else
                                    {
                                        <input class="normal-checkbox enableRemarks-Icd" name="enableRemarksIcd" type="checkbox"><label><span></span></label>
                                    }
                                </td>
                                <td class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                                    @Html.DisplayFor(model => Model.Categories[i].Remarks)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-danger pull-left" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-sm btn-success pull-right" data-dismiss="modal">Save</button>
            </div>
        </form>
    </div>
</div>
@*******************MODAL TO VIEW THE CATEGORIES AND REMARKS**************************@
<p-script filepath="~/Areas/Coding/Scripts/AppJs/ViewCoding/NonMinified/_ViewEncounterDecision.js"></p-script>