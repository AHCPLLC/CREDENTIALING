@model PortalTemplate.Areas.Coding.Models.CreateCoding.CategoryReasonViewModel
@using (Ajax.BeginForm("SaveEncounterCategories", "/Coding/Coding", new AjaxOptions { HttpMethod = "POST", LoadingElementId = "EncounterCategoriesDetails", OnBegin = "validateForm", OnSuccess = "onSuccessFn" }, new { id = "EncounterCategoriesDetails" }))
{
    <div class="modal-header bg-primary">
        <div class="col-md-12 col-lg-12">
            <label>DisAgree Encounter</label>
            <button type="button" class="btn btn-xs btn-danger pull-right" data-dismiss="modal"><i class="fa fa-close"></i></button>
        </div>
    </div>
    <div class="modal-body">
        <table class="table table-striped table-hover table-responsive custom-thead-back custom-thead-font custom-tbody custom-table-striped p_body_data_background">
            <thead class="theme_thead">
                <tr>
                    <th class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
                        <label>S NO.</label>
                    </th>
                    <th class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
                        <label>Category</label>
                    </th>
                    <th class="col-lg-1 col-md-1 col-sm-1 col-xs-1">
                        <label>Action</label>
                    </th>
                    <th class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                        <label>Remarks</label>
                    </th>
                </tr>
            </thead>
            <tbody>
                @for (var i = 0; i < Model.selectedCategories.Count; i++)
        {
                <tr>
                    <td class="col-lg-2 col-md-2 col-sm-2 col-xs-2">@((@i) + 1)</td>
                    <td class="col-lg-3 col-md-3 col-sm-3 col-xs-3">@Model.selectedCategories[i].CategoryName</td>
                    <td class="col-lg-1 col-md-1 col-sm-1 col-xs-1">
                        <input class="normal-checkbox enableRemarks-Encounter" name="enableRemarksIcd" type="checkbox">
                        <label><span></span></label>
                    </td>
                    <td class="col-lg-6 col-md-6 col-sm-6 col-xs-6 encRemarkscolumn"></td>
                </tr>
        }
            </tbody>
        </table>

    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-sm btn-danger pull-left" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-sm btn-success pull-right" onclick="SubmmitEncounterReasons()" data-dismiss="modal">Save</button>
    </div>

}