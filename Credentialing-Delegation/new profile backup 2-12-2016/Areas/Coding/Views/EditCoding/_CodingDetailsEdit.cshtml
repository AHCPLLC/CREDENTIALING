@model PortalTemplate.Areas.Coding.Models.CreateCoding.CodingDetailsViewModel

<p-link filepath="~/Areas/Coding/Contents/CSS/AppCss/EditCoding/NonMinified/EditCoding.css" rel="stylesheet"></p-link>
<div class="row padding-left-right-2px-17px">
    <div class="col-lg-12">
        <div class="x_panel border_on_panel">
            <div class="x_content">
                <div class="col-lg-12">
                    <label class="title_text">Coding Details</label>
                </div>
                <fieldset class="fieldsetStyle">
                    <legend class="legendstyle">Diagnosis Codes</legend>
                    <div id="icdCodecontainer">
                    @Html.Partial("~/Areas/Coding/Views/EditCoding/_ICDCodeDetails.cshtml", Model.ICDCodeDetails)
                        </div>
                </fieldset>
                <fieldset class="fieldsetStyle">
                    <legend class="legendstyle">Procedure Codes</legend>
                    <div id="cptcodedetails">
                        @Html.Partial("~/Areas/Coding/Views/EditCoding/_CPTCodeDetails.cshtml", Model.CPTCodeDetails)
                   </div>
            </fieldset>
                <fieldset class="fieldsetStyle">
                    <legend class="legendstyle">Notes</legend>
                    @Html.Partial("~/Areas/Coding/Views/Notes/_NotesDescriptionEdit.cshtml", Model.Notes)
                </fieldset>
        </div>
    </div>
</div>

    @*******************MODAL TO SELECT THE DIAGNOSIS POINTESR FROM SELECTED ICDs**************************@
    <div class="modal fade" tabindex="-1" role="dialog" id="DiagnosispointerModal" style="overflow: auto; top: 8%;">
        <div class="modal-dialog modal-md ">
            <div class="modal-content">
                <div class="modal-header bg-primary">
                    <div class="col-md-12 col-lg-12">
                        <label>Diagnosis Pointers</label>
                        <button type="button" class="btn btn-xs btn-danger pull-right" data-dismiss="modal"><i class="fa fa-close"></i></button>
                    </div>
                </div>
                <div class="modal-body">
                    <div class="row" id="ICDpointerModalvalues">
                        
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-sm btn-danger pull-left" data-dismiss="modal">Cancel</button>
                    <button type="button" onclick="saveDP()" class="btn btn-sm btn-success pull-right" data-dismiss="modal">Save</button>
                </div>
            </div>
        </div>
    </div>
    @*******************MODAL TO SELECT THE DIAGNOSIS POINTESR FROM SELECTED ICDs**************************@

</div>
<p-script filepath="~/Areas/Coding/Scripts/AppJs/EditCoding/NonMinified/EditCoding.js"></p-script>
