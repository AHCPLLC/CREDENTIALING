@model PortalTemplate.Areas.Auditing.Models.CreateAuditing.CPTCodesInfoViewModel

    <fieldset class="fieldsetStyle CPTCodeAuditMainpanel_View">
        <legend class="legendstyle">Procedure Codes</legend>
        <div class="row">
            <div class="col-lg-12">
                <table class="table table-striped table-hover table-responsive custom-thead-back custom-thead-font custom-tbody custom-table-striped">
                    <thead class="theme_thead checkstatus">
                        <tr>
                            <th>Code</th>
                            <th>Description </th>
                            <th>Modifier</th>
                            <th>DiagnosisPointer</th>
                            <th>Fee </th>
                            <th>
                                Review
                            </th>
                            <th>Category</th>
                            <th>Remarks</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var cpt in Model.CPTCodes)
                        {
                            if (@cpt.isEnM)
                            {
                                <tr>
                                    <td>@cpt.Code<span class="charge badge EnMCode">E&M</span></td>
                                    <td>@cpt.Description</td>
                                    <td></td>
                                    <td></td>
                                    <td>
                                        @cpt.Fee
                                    </td>
                                    <td>
                                        @if (@cpt.IsAgree)
                                        {
                                            <span class="agree_btn"><i class="fa fa-check"></i></span>
                                        }
                                        else
                                        {
                                            <span class="disagree_btn"><i class="fa fa-close"></i></span>
                                        }
                                    </td>
                                    <td class="cptcategories">
                                        @foreach (var category in cpt.Categories)
                                        {
                                            @category.CategoryName <br />
                                        }
                                    </td>
                                    <td class="cptremarks">
                                        @foreach (var remarks in cpt.Categories)
                                        {
                                            <label>@remarks.Remarks</label> <br />
                                        }
                                    </td>
                                </tr>

                            }
                            else
                            {
                                <tr>
                                    <td>@cpt.Code</td>
                                    <td>@cpt.Description</td>
                                    <td>
                                        @cpt.Modifier1, @cpt.Modifier2, @cpt.Modifier3, @cpt.Modifier4
                                    </td>
                                    <td>
                                        @cpt.DiagnosisPointer1, @cpt.DiagnosisPointer2,@cpt.DiagnosisPointer3,@cpt.DiagnosisPointer4
                                    </td>
                                    <td>
                                        @cpt.Fee
                                    </td>
                                    <td>
                                        @if (@cpt.IsAgree)
                                        {
                                            <span class="agree_btn"><i class="fa fa-check"></i></span>
                                        }
                                        else
                                        {
                                            <span class="disagree_btn"><i class="fa fa-close"></i></span>
                                        }
                                    </td>
                                    <td class="cptcategories">
                                        @foreach (var category in cpt.Categories)
                                        {
                                            @category.CategoryName <br />
                                        }
                                    </td>
                                    <td class="cptremarks">
                                        @foreach (var remarks in cpt.Categories)
                                        {
                                            <label>@remarks.Remarks</label> <br />
                                        }
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </fieldset>
<p-link filepath="~/Areas/Auditing/Contents/CSS/AppCss/ViewAuditing/NonMinified/_ViewProcedureCodes.css" rel="stylesheet"></p-link>