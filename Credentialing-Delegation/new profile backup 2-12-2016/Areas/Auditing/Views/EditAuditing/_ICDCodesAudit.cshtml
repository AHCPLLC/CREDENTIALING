@model PortalTemplate.Areas.Auditing.Models.CreateAuditing.ICDCodesInfoViewModel
@using PratianUI
@{
    var Categories = ViewBag.AllCategories;
}
<fieldset class="fieldsetStyle" style="background:white;">
    <legend class="legendstyle">Diagnosis Codes</legend>
    <div class="col-lg-12 AuditICDMainPanel_eDIT">
        <div class="row">
            <div class="col-lg-12">
                <div class="pull-left">
                    @*@Html.PratianUiSqaureRadioFor(t => t.ICDIndicatorType, new { color = "purple" })*@
                    <input class="normal-radio" id="icd9" name="ICDIndicator" type="radio" value="ICD9" checked>
                    <label for="ICD9" style="font-weight:normal;"><span></span>ICD9</label>
                    <input class="normal-radio" id="icd10" name="ICDIndicator" type="radio" value="ICD10">
                    <label for="ICD10" style="font-weight:normal;"><span></span>ICD10</label>
                </div>
            </div>
        </div>
        <div class="row IcdAuditMailPanel_Edit">
            <div class="col-lg-12 zero-padding-left-right">
                <table class="table table-striped table-hover table-responsive custom-thead-back custom-thead-font custom-tbody custom-table-striped">
                    <thead class="theme_thead">
                        <tr>
                            <th>Code </th>
                            <th>Description </th>
                            <th>HCC Code</th>
                            <th>HCC Type</th>
                            <th>HCC Version</th>
                            <th>HCC Description </th>
                            <th>HCC Weight</th>
                            <th>
                                Agree<br /> <input type="checkbox" class="normal-checkbox EditAgreeICD" checked /><label><span></span></label>
                            </th>
                            <th>
                                Disagree <br /><input type="checkbox" class="normal-checkbox EditDisagreeICD" /><label><span></span></label>
                            </th>
                            <th>Category</th>
                            <th>Remarks</th> 
                            <th></th>                       
                        </tr>
                    </thead>
                    <tbody id="ICDAudittbody_Edit">
                        @for (var i = 0; i < Model.ICDCodes.Count; i++)
                        {
                            var RowSpan = Model.ICDCodes[i].HCCCodes.Count;
                            <tr>
                                <td rowspan="@RowSpan">
                                    @Html.TextBoxFor(model => model.ICDCodes[i].Code, new { @class = "form-control input-xs text-uppercase" })
                                    @Html.ValidationMessageFor(m => m.ICDCodes[i].Code)
                                </td>
                                <td rowspan="@RowSpan">
                                    @Html.TextBoxFor(model => model.ICDCodes[i].Description, new { @class = "form-control input-xs text-uppercase" })
                                </td>
                                <td>
                                    @Html.TextBoxFor(model => model.ICDCodes[i].HCCCodes[0].HCCCode, new { @class = "form-control input-xs text-uppercase" })
                                </td>
                                <td>
                                    @Html.TextBoxFor(model => model.ICDCodes[i].HCCCodes[0].HCCType, new { @class = "form-control input-xs text-uppercase" })
                                </td>
                                <td>
                                    @Html.TextBoxFor(model => model.ICDCodes[i].HCCCodes[0].HCCVersion, new { @class = "form-control input-xs text-uppercase" })
                                </td>
                                <td>
                                    @Html.TextBoxFor(model => model.ICDCodes[i].HCCCodes[0].HCCDescription, new { @class = "form-control input-xs text-uppercase" })
                                </td>
                                <td>
                                    @Html.TextBoxFor(model => model.ICDCodes[i].HCCCodes[0].HCCWeight, new { @class = "form-control input-xs text-uppercase" })
                                </td>
                                <td>
                                    @Html.RadioButtonFor(model => model.ICDCodes[i].IsAgree, true, new { @class = "normal-radio agreeCheck" })
                                    <label><span></span></label>
                                </td>
                                <td>
                                    @Html.RadioButtonFor(model => model.ICDCodes[i].IsAgree, false, new { @class = "normal-radio disagreeCheck" })
                                    <label><span></span></label>
                                </td>
                                <td>
                                    @if (@Model.ICDCodes[i].Categories.Count > 0)
                                    {
                                        @Html.DisplayFor(model => model.ICDCodes[i].Categories[0].CategoryName)
                                        <button type="button" onclick="IcdCatgRemaDetailedbiew(@i)">....</button>
                                    }
                                    @*@foreach (var category in @Model.ICDCodes[i].Categories)
                                        {
                                            @Html.TextBoxFor(model => category.CategoryName, new { @class = "form-control input-xs text-uppercase modifier_width read_only_field isAgree" })
                                           @Html.DisplayFor(model=>category.CategoryName)
                                        }*@
                                </td>
                                <td>
                                    @if (@Model.ICDCodes[i].Categories.Count > 0)
                                    {
                                        @Html.DisplayFor(model => model.ICDCodes[i].Categories[0].Remarks)
                                        <button type="button" onclick="IcdCatgRemaDetailedbiew(@i)">....</button>
                                    }
                                    @*@foreach (var remarks in @Model.ICDCodes[i].Categories)
                                        {
                                            <label>@remarks.Remarks</label>
                                            @Html.TextAreaFor(m => remarks.Remarks, new { @class = "form-control input-xs non_mandatory_field_halo isAgree" })
                                            @Html.DisplayFor(model=>remarks.Remarks)
                                        }*@
                                </td>
                                <td></td>
                            </tr>
                            for (var j = 1; j < Model.ICDCodes[i].HCCCodes.Count; j++)
                            {
                                <tr>
                                    <td>
                                        @Html.TextBoxFor(model => model.ICDCodes[i].HCCCodes[0].HCCCode, new { @class = "form-control input-xs text-uppercase" })
                                    </td>
                                    <td>
                                        @Html.TextBoxFor(model => model.ICDCodes[i].HCCCodes[0].HCCType, new { @class = "form-control input-xs text-uppercase" })
                                    </td>
                                    <td>
                                        @Html.TextBoxFor(model => model.ICDCodes[i].HCCCodes[0].HCCVersion, new { @class = "form-control input-xs text-uppercase" })
                                    </td>
                                    <td>
                                        @Html.TextBoxFor(model => model.ICDCodes[i].HCCCodes[0].HCCDescription, new { @class = "form-control input-xs text-uppercase" })
                                    </td>
                                    <td>
                                        @Html.TextBoxFor(model => model.ICDCodes[i].HCCCodes[0].HCCWeight, new { @class = "form-control input-xs text-uppercase" })
                                    </td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
                <button type="button" class="light-green-button pull-right AddNewRowInICDTable_EditAuditing"><i class="fa fa-plus"></i></button>
            </div>
        </div>
    </div>
</fieldset>

@*******************MODAL TO SELECT THE CATEGORIES AND REMARKS**************************@
<div class="modal fade" tabindex="-1" role="dialog" id="icdcategorymodal" style="overflow: auto; top: 8%;">
    <div class="modal-dialog modal-md ">
        <form class="modal-content">
            <div class="modal-header bg-primary">
                <div class="col-md-12 col-lg-12">
                    <label>DisAgree ICD Code</label>
                    <button type="button" class="btn btn-xs btn-danger pull-right" data-dismiss="modal"><i class="fa fa-close"></i></button>
                </div>
            </div>
            <div class="modal-body">
                <table class="table table-striped table-hover table-responsive custom-thead-back custom-thead-font custom-tbody custom-table-striped p_body_data_background" style="margin-bottom: 0px;" cellspacing="0">
                    <thead class="theme_thead">
                        <tr>
                            <th class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
                                <label>S NO.</label>
                            </th>
                            <th class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
                                <label>Category</label>
                            </th>
                            <th class="col-lg-1 col-md-1 col-sm-1 col-xs-1">
                                <label>Action</label>
                            </th>
                            <th class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                                <label>Remarks</label>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (var i = 0; i < Categories.Count; i++)
                        {
                            <tr>
                                <td class="col-lg-2 col-md-2 col-sm-2 col-xs-2">@((@i) + 1)</td>
                                <td class="col-lg-3 col-md-3 col-sm-3 col-xs-3">@ViewBag.AllCategories[i].CategoryName</td>
                                <td class="col-lg-1 col-md-1 col-sm-1 col-xs-1"><input class="normal-checkbox enableRemarks-Icd" name="enableRemarksIcd" type="checkbox"><label><span></span></label></td>
                                <td class="col-lg-6 col-md-6 col-sm-6 col-xs-6 icdremarkscolumn"></td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-danger pull-left" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-sm btn-success pull-right" data-dismiss="modal">Save</button>
            </div>
        </form>
    </div>
</div>
