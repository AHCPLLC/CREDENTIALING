<div class="modal fade" tabindex="-1" role="dialog" id="ViewUserRoleModal" style="overflow: auto; top: 8%">
    <div class="modal-dialog modal-lg ModalDialog">
        <form class="modal-content ModalContent" style=" background: #f7f7f7">
            <div class="modal-header shared-floating-modal-header ui-draggable-handle">
                <div class="col-md-12 col-lg-12">
                    <i class="fa fa-eye"></i>
                    <label>VIEW USER ROLE <span id="UserRoleNameForTitle"></span></label>
                    <button type="button" class="btn btn-xs btn-danger pull-right" onclick="CloseModal('AddUserModal')" data-dismiss="modal" style="margin-top:-3px"><i class="fa fa-close"></i></button>
                    <button type="button" data-toggle="tooltip" data-placement="bottom" title="Maximize" class="btn btn-xs btn-success pull-right ExpandModalBtn" @*id="ExpandModalBtn"*@ onclick="FullScreenModal('ViewUserRoleModal'); ShowHide('CompressModalBtn', 'ExpandModalBtn')" style="margin-top:-3px"><i class="fa fa-expand"></i></button>
                    <button type="button" data-toggle="tooltip" data-placement="bottom" title="Restore Down" class="btn btn-xs btn-success pull-right CompressModalBtn" @*id="CompressModalBtn"*@ onclick="CompressModal('ViewUserRoleModal'); ShowHide('ExpandModalBtn', 'CompressModalBtn')" style="margin-top:-3px;display:none"><i class="fa fa-compress"></i></button>
                </div>
            </div>
            <div class="modal-body" style="max-height:500px;overflow-y:auto">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-xs-12">
                        <div class="col-lg-12">
                            <div class="col-lg-4 theme_label">ROLE NAME</div>
                            <div class="col-lg-8 theme_label_data" >
                                <b style="color:black"><span id="rolenameforview"></span></b>
                            </div>
                        </div><br />
                        <div class="col-lg-12">
                            <br /><div class="col-lg-4 theme_label">DESCRIPTION</div>
                            <div class="col-lg-8 theme_label_data">
                                <b style="color:black"> <span id="roledescriptionforview"></span></b>
                            </div>
                        </div><br />

                        <div class="col-lg-12">
                            <fieldset class="fieldsetStyle">
                                <legend class="legendStyle noBorder">
                                    <span class="theme_depend title_text text-uppercase ">PRIVILEGES SUMMARY</span>
                                </legend>
                                <div class="row viewelements" style="margin-top:-5px;">
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        <br />
                                        <table class="table table-striped table-hover table-responsive custom-thead-back queue_table queue_table_head custom-thead-font custom-tbody custom-table-striped" style="margin-top: -30px;">
                                            <thead class="theme_thead">
                                                <tr>
                                                    <th class="withfilter sm-mbrid" style="width:30%">
                                                        <span class="styled-input">
                                                            <input class="filer-search" type="text" required="">
