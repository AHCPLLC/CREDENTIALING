@using PortalTemplate.Helper

<style>
    .btn-ssm {
        padding: 1px 8px;
        font-size: 12px;
    }

    .bootstrap-switch.bootstrap-switch-small {
        height: 22px;
    }

    label.title_text {
        font-weight: 900;
        font-size: 15px;
        background: #5b83d5;
        color: #ffffff;
        padding: 1px 9px;
        position: relative;
        margin-left: -25px;
    }
    /*fieldset
    {
        background: white; box-shadow: 0px 0px 3px 0px #b1b1b1 !important;
    }*/
    legend
    {
        width:auto;
        border-bottom:none;
    }
</style>
<div class="col-lg-12" style="margin-top: 22px; background-color: #f7f7f7">
    <fieldset class="fieldsetStyle" >
        <legend class="legendStyle noBorder">
            <span class="theme_depend title_text text-uppercase ">All Accounts</span>
        </legend>
        <div class="" style="margin-top:-34px">
            <div class="col-lg-12">
                @*<label class="title_text">Accounts List</label>*@
                <div class="pull-right">@Html.ExportOptions("excel", "print", "PDF", "filter")</div>
                <div class="pull-right" style="margin-top: 6px;">
                    <a class="btn btn-xs btn-success" onclick="AddAccountModal()" style="" data-toggle="tooltip" data-placement="bottom" title="Add New Account">
                        <i class="fa fa-plus"></i> Add New Account
                    </a>
                </div>
                <div class="pull-right boldFont" style="margin-top: 7px; padding-right: 10px; font-weight: bold" id="TreeViewLabel">
                    Tree View
                </div>

                <div class="pull-right" style="margin-top: 3px;">
                    &nbsp;&nbsp;&nbsp;
                    <label class="switch">
                        <input type="checkbox" id="TreeTableView" data-toggle="tooltip" data-placement="bottom" title="Switch Views">
                        <div class="slider round"></div>
                    </label>
                    &nbsp;&nbsp;&nbsp;


                </div>
                <div class="pull-right boldFont" style="margin-top: 7px; color: black; font-weight:bold" id="TableViewLabel">
                    Table View
                </div>
            </div>
            <div class="c_panel_body">

                <div id="TreeView" hidden>
                    <table class="table table-responsive custom-thead-back queue_table queue_table_head custom-thead-font custom-tbody custom-table-striped">
                        <thead class="theme_thead">
                            <tr>
                                <th class="text-center"></th>
                                <th class="text-center"></th>
                                <th class="text-center"></th>
                                <th class="text-center" colspan="4">
                                    ACCOUNTS
                                </th>
                            </tr>
                        </thead>
                        <tbody class="theme_label_data" style="background-color: white ">
                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td id="AccountListTreeData"></td>
                            </tr>
                        </tbody>

                    </table>
                </div>
                <table class="table table-striped table-hover table-responsive custom-thead-back queue_table queue_table_head custom-thead-font custom-tbody custom-table-striped" id="AccountsTableView">
                    <thead class="theme_thead">
                        <tr>
                            <th class="withfilter sm-mbrid">
                                <span class="styled-input">
                                    <input class="filer-search" type="text" required="">
                                    <label>Account ID</label>
                                    <span></span>
                                    <i class="fa fa-sort" style="color: rgb(255, 255, 255);"></i>
                                </span>
                            </th>
                            <th class="withfilter sm-mbrid">
                                <span class="styled-input">
                                    <input class="filer-search" type="text" required="">
                                    <label>Account Name</label>
                                    <span></span>
                                    <i class="fa fa-sort" style="color: rgb(255, 255, 255);"></i>
                                </span>
                            </th>
                            <th class="withfilter sm-mbrid">
                                <span class="styled-input">
                                    <input class="filer-search" type="text" required="">
                                    <label>Account Type</label>
                                    <span></span>
                                    <i class="fa fa-sort" style="color: rgb(255, 255, 255);"></i>
                                </span>
                            </th>
                            <th class="withfilter sm-mbrid">
                                <span class="styled-input">
                                    <input class="filer-search" type="text" required="">
                                    <label>Reportee</label>
                                    <span></span>
                                    <i class="fa fa-sort" style="color: rgb(255, 255, 255);"></i>
                                </span>
                            </th>
                            <th class="withfilter sm-mbrid">
                                <span class="styled-input">
                                    <input class="filer-search" type="text" required="">
                                    <label>Report To</label>
                                    <span></span>
                                    <i class="fa fa-sort" style="color: rgb(255, 255, 255);"></i>
                                </span>
                            </th>
                            <th class="withfilter sm-mbrid">
                                <span class="styled-input">
                                    <input class="filer-search" type="text" required="">
                                    <label>Status</label>
                                    <span></span>
                                    <i class="fa fa-sort" style="color: rgb(255, 255, 255);"></i>
                                </span>
                            </th>
                            <th class="text-center">
                                <label>Action</label>
                            </th>
                        </tr>
                    </thead>
                    <tbody class="theme_label_data" id="AccountListTableData"></tbody>

                </table>
                <br />
                <br />
            </div>
        </div>
    </fieldset>

</div>



