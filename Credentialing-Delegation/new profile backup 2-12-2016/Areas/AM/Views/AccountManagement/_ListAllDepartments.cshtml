@using PortalTemplate.Helper
<fieldset class="fieldsetStyle">
    <legend class="legendStyle noBorder">
        <span class="theme_depend title_text text-uppercase ">All Departments</span>
    </legend>
    <div style="margin-top:-79px">
        <div class="col-lg-12" style="margin-bottom:5px">
            <div class="pull-right">@Html.ExportOptions("excel", "print", "PDF", "filter")</div>
            <div class="pull-right" style="margin-top: 6px;">
                <a class="btn btn-xs btn-success" id="addNewDepartmentBtn" onclick="AddDepartmentModal()"><i class="fa fa-plus"></i> Add New Department</a>
            </div>
        </div>
            <div class="row viewelements" style="margin-top:3.4%;">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <table class="table table-striped table-hover table-responsive custom-thead-back queue_table queue_table_head custom-thead-font custom-tbody custom-table-striped">
                        <thead class="theme_thead">
                            <tr>
                                <th class="withfilter sm-mbrid" style="width:10%">
                                    <span class="styled-input">
                                        <input class="filer-search" type="text" required="">
                                        <label>ID</label>
                                        <span></span>
                                        <i class="fa fa-sort" style="color: rgb(255, 255, 255);"></i>
                                    </span>
                                </th>
                                <th class="withfilter sm-mbrid" style="width:20%">
                                    <span class="styled-input">
                                        <input class="filer-search" type="text" required="">
                                        <label>Name</label>
                                        <span></span>
                                        <i class="fa fa-sort" style="color: rgb(255, 255, 255);"></i>
                                    </span>
                                </th>
                                <th class="withfilter sm-mbrid" style="width:30%">
                                    <span class="styled-input">
                                        <input class="filer-search" type="text" required="">
                                        <label>Business Processes</label>
                                        <span></span>
                                        <i class="fa fa-sort" style="color: rgb(255, 255, 255);"></i>
                                    </span>
                                </th>
                                @*<th class="withfilter sm-mbrid">
                                        <span class="styled-input">
                                            <input class="filer-search" type="text" required="">
                                            <label>Teams</label>
                                            <span></span>
                                            <i class="fa fa-sort" style="color: rgb(255, 255, 255);"></i>
                                        </span>
                                    </th>*@
                                <th class="withfilter sm-mbrid" style="width:20%">
                                    <span class="styled-input">
                                        <input class="filer-search" type="text" required="">
                                        <label>Created On</label>
                                        <span></span>
                                        <i class="fa fa-sort" style="color: rgb(255, 255, 255);"></i>
                                    </span>
                                </th>
                                <th class="text-center" style="width:20%;padding:7px">Action</th>
                            </tr>
                        </thead>
                        <tbody id="DepartmentsTableData"></tbody>
                    </table>
                </div>
            </div>
        </div>
</fieldset>
