<div class="modal fade" tabindex="-1" role="dialog" id="AddAccountModal" style="overflow: auto; top: 8%;">
    <div class="modal-dialog modal-md ">
        <form class="modal-content" style=" background: #f7f7f7">
            <div class="modal-header shared-floating-modal-header ui-draggable-handle">
                <div class="col-md-12 col-lg-12" id="addAccountTitle">

                    <i class="fa fa-plus"></i>
                    <label>ADD NEW ACCOUNT</label>
                    <button type="button" class="btn btn-xs btn-danger pull-right cancelcreateAccount" data-dismiss="modal" style="margin-top:-3px"><i class="fa fa-close"></i></button>
                </div>
                <div class="col-md-12 col-lg-12" id="editAccountTitle" hidden>

                    <i class="fa fa-edit"></i>
                    <label>EDIT ACCOUNT</label>
                    <button type="button" class="btn btn-xs btn-danger pull-right cancelcreateAccount" data-dismiss="modal" style="margin-top:-3px"><i class="fa fa-close"></i></button>
                </div>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-xs-12">
                        <div class="col-lg-12">
                            <div class="col-lg-3 theme_label">ACCOUNT NAME</div>
                            <div class="col-lg-4">
                                <input type="text" id="AccountName" placeholder="ENTER ACCOUNT NAME" class="form-control input-xs">
                            </div>
                            <div id="availabilityCheckDiv">
                                <div class="col-lg-4" id="availabilityCheck" style="font-size:1.1em"><i class="fa fa-info-circle" style="font-size: 1.3em; margin-top: 4px;"> </i> CHECK AVAILABILITY</div>

                                <div class="col-lg-4" id="availabilityCheckIcon" hidden>
                                    <img src="~/Areas/AM/Resources/Images/loading.gif" height="21" />
                                </div>
                                <div class="col-lg-3  text-danger" id="notAvailable" hidden style="font-size:1.1em"><i class="fa fa-close" style="font-size: 1.3em; margin-top: 4px;"> </i> NOT AVAILABLE</div>
                                <div class="col-lg-3 text-success" id="available" hidden style="font-size:1.1em"><i class="fa fa-check-circle " style="font-size: 1.3em; margin-top: 4px;"> </i> AVAILABLE</div>
                                <div class="col-lg-3 text-danger" id="noValue" hidden style="font-size:1.1em"><i class="fa fa-info-circle " style="font-size: 1.3em; margin-top: 4px;"> </i> INPUT DATA</div>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <br /><div class="col-lg-3 theme_label">ACCOUNT TYPE</div>
                            <div class="col-lg-4">
                                @*<input type="radio" class="normal-radio" name="organization" id="organization" /><label for="organization"> ORGANIZATION<span></span></label>
                                    <br /> <input type="radio" class="normal-radio" name="individual" id="individual" /><label for="individual"><span> INDIVIDUAL</span></label>*@
                                <select class="form-control input-xs" id="accType">
                                    <option disabled class="text-muted">CHOOSE TYPE</option>
                                    <option selected>ORGANIZATION</option>
                                    <option>INDIVIDUAL</option>
                                </select>
                            </div>
                        </div><br />
                        <div class="col-lg-12">
                            <br /><div class="col-lg-3 theme_label">ADMIN EMAIL ID</div>
                            <div class="col-lg-4">
                                <input type="text" id="Email" placeholder="ENTER ADMIN EMAIL ID" class="form-control input-xs">
                            </div>
                        </div><br />
                        <div class="col-lg-12" id="confirmEmailAdd">
                            <br /><div class="col-lg-3 theme_label">
                                CONFIRM EMAIL ID
                            </div>  <div class="col-lg-4">
                                <input type="text" id="ConfirmEmail" placeholder="CONFIRM EMAIL ID" class="form-control input-xs">
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <br />
                            <div class="" style="margin-top: -4px;display:none"><input type="checkbox" class="normal-checkbox" name="map" id="map" /><label><span></span></label></div>
                            <div class="col-lg-3">
                                <label for="map" class="cursor_pointer text-primary pull-left theme_label">
                                    <b>MAP ACCOUNT &nbsp;&nbsp@*;<i class="fa fa-chevron-down" id="mapAccountIcon"></i>*@</b>
                                </label>
                                <label for="map" class="cursor_pointer pull-right">
                                    <i class="fa fa-chevron-down" id="mapAccountIcon"></i>
                                </label>
                            </div>
                        </div>

                        <div id="mapAccount" hidden>
                            <div id="ReportToMapping">
                                <div class="col-lg-12">
                                    <br />
                                    <div class="col-lg-3 theme_label">REPORT TO</div>
                                    <div class="col-lg-4">
                                        @* <input type="text" list="AdminAccounts" id="ReportTo" placeholder="REPORT TO ACCOUNT" class="form-control input-xs">*@

                                    </div>
                                    <div class="col-lg-8">
                                        <span class="col-lg-6 zero-padding-left">
                                            <input list="AdminAccounts" name="AdminAccounts" placeholder="REPORT TO ACCOUNT" id="ReportTo" class="form-control input-xs">
                                            <datalist id="AdminAccounts"></datalist>
                                        </span>
                                        <span class="col-lg-6">
                                            <a onclick="AddNewReportToRow()" class="light-green-button btn" id="AddNewReportToRow"><i class="fa fa-plus margin_top_6px"></i></a>
                                        </span>
                                    </div>
                                </div>
                            </div><br />
                            <div class="col-lg-12">
                                <br />
                                <div class="col-lg-3 theme_label">REPORTEE</div>
                                <div class="col-lg-8">
                                    <span class="col-lg-6 zero-padding-left">
                                        <input list="ChildAccounts" id="Reportee" placeholder="REPORTEE ACCOUNT" class="form-control input-xs">
                                        <datalist id="ChildAccounts"></datalist>
                                    </span>
                                    <span class="col-lg-6">
                                        <a onclick="AddNewReporteeRow()" class="light-green-button btn" id="AddNewReporteeRow"><i class="fa fa-plus margin_top_6px"></i></a>
                                    </span>
                                </div>

                            </div>
                        </div>
                        @*<div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                                Re-Schedule Date
                                <div>
                                    <input type="text" placeholder="mm/dd/yyyy" class="form-control input-xs non_mandatory_field_halo">
                                </div>
                            </div>*@
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <input type="button" class="btn btn-sm btn-danger  cancelcreateAccount" value="CANCEL" id="cancelcreateAccount" />
                <input type="button" class="btn btn-sm btn-success pull-right" id="createAccount" onclick="CreateAccount()" value="CREATE" />
                <input type="button" class="btn btn-sm btn-success pull-right" data-dismiss="modal" onclick="UpdateAccount()" id="UpdateAccountBtn" value="UPDATE" hidden />
            </div>
        </form>
    </div>
</div>
