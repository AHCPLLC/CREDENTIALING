@using PortalTemplate.Helper

<style>
    .btn-ssm {
        padding: 1px 8px;
        font-size: 12px;
    }

    .bootstrap-switch.bootstrap-switch-small {
        height: 22px;
    }

    label.title_text {
        font-weight: 900;
        font-size: 15px;
        background: #5b83d5;
        color: #ffffff;
        padding: 1px 9px;
        position: relative;
        margin-left: -25px;
    }
    .popover{
        width:auto;
    }
</style>
@Html.Partial("~/Areas/AM/Views/AccountManagement/_AddNewRoleModal.cshtml")
<div id="ListAllUserRoles">
    <div class="col-lg-12" style="margin-top: 22px; background-color: #f7f7f7">
        <fieldset class="fieldsetStyle">
            <legend class="legendStyle noBorder">
                <span class="theme_depend title_text text-uppercase ">All User Roles</span>
            </legend>
            <div style="margin-top:-35px">
                <div class="col-lg-12">
                    <div class="pull-right">@Html.ExportOptions("excel", "print", "PDF", "filter")</div>
                    <div class="pull-right" style="margin-top: 6px;">
                        <a class="btn btn-xs btn-success" id="addNewDepartmentBtn" onclick="AddUserRoleModal('AddUserRoleModal')"><i class="fa fa-plus"></i> Add New User Role</a>
                    </div>
                </div>
                    <div class="c_panel_body">
                        <table class="table table-striped table-hover table-responsive custom-thead-back queue_table queue_table_head custom-thead-font custom-tbody custom-table-striped" id="AccountsTableView">
                            <thead class="theme_thead">
                                <tr>
                                    <th class="withfilter sm-mbrid" style="width:18%">
                                        <span class="styled-input">
                                            <input class="filer-search" type="text" required="">
                                            <label>Role Name</label>
                                            <span></span>
                                            <i class="fa fa-sort" style="color: rgb(255, 255, 255);"></i>
                                        </span>
                                    </th>
                                    <th class="withfilter sm-mbrid" style="width:18%">
                                        <span class="styled-input">
                                            <input class="filer-search" type="text" required="">
                                            <label>Business Processes</label>
                                            <span></span>
                                            <i class="fa fa-sort" style="color: rgb(255, 255, 255);"></i>
                                        </span>
                                    </th>
                                    <th class="withfilter sm-mbrid" style="width:54%">
                                        <span class="styled-input">
                                            <input class="filer-search" type="text" required="">
                                            <label>Description</label>
                                            <span></span>
                                            <i class="fa fa-sort" style="color: rgb(255, 255, 255);"></i>
                                        </span>
                                    </th>
                                    <th class="text-center">
                                        <label>Action</label>
                                    </th>
                                </tr>
                            </thead>
                            <tbody id="UserRolesListTableData"></tbody>

                        </table>
                        <br />
                        <br />
                    </div>
                </div>
        </fieldset>
    </div>
</div>
@Html.Partial("~/Areas/AM/Views/AccountManagement/_ViewUserRoleModal.cshtml")

