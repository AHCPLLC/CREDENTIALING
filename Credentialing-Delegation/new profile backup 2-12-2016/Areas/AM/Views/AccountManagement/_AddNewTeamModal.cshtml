@using PratianUI
<style>
    .Type
    {
        margin-left:6px;
    }
</style>
<div class="modal fade" tabindex="-1" role="dialog" id="AddTeamModal" style="overflow: auto; top: 8%;">
    <div class="modal-dialog modal-md ">
        <form class="modal-content" style=" background: #f7f7f7">
            <div class="modal-header shared-floating-modal-header ui-draggable-handle">
                <div class="col-md-12 col-lg-12" id="addTeamTitle">
                    <i class="fa fa-plus"></i>
                    <label>ADD NEW TEAM</label>
                    <button type="button" class="btn btn-xs btn-danger pull-right" data-dismiss="modal" style="margin-top:-3px"><i class="fa fa-close"></i></button>
                </div>
                <div class="col-md-12 col-lg-12" id="editTeamTitle" hidden>
                    <i class="fa fa-edit"></i>
                    <label>EDIT TEAM</label>
                    <button type="button" class="btn btn-xs btn-danger pull-right" data-dismiss="modal" style="margin-top:-3px"><i class="fa fa-close"></i></button>
                </div>
            </div>
            <div class="modal-body" style="max-height:500px;overflow-y:auto">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-xs-12">
                        <div class="col-lg-12">
                            <br /><div class="col-lg-4 theme_label">TEAM NAME</div>
                            <div class="col-lg-6">
                                <input type="text" id="teamName" placeholder="ENTER TEAM NAME" class="form-control input-xs TeamInputFields">
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <br /><div class="col-lg-4 theme_label">ACCOUNT</div>
                            <div class="col-lg-6">
                                <select class="form-control input-xs" id="AccountListForNewTeam">
                                    <option selected disabled>SELECT ACCOUNT</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <br /><div class="col-lg-4 theme_label">BUSINESS PROCESS</div>
                            <div class="col-lg-6">
                                <select class="form-control input-xs" id="BPListForNewTeam">
                                    <option selected disabled>SELECT BUSINESS PROCESS</option>
                                </select>
                            </div>
                        </div>
                        <div id="teamDepartments">
                            <div class="col-lg-12">
                                <br /><div class="col-lg-4 theme_label">DEPARTMENTS</div>
                                <div class="col-lg-6">
                                    <select class="multiselect-plugin" multiple="multiple" id="teamDepts" style="width:100%;height:22px"></select>
                                </div>
                            </div>
                        </div>
                        <fieldset class="fieldsetStyle">
                            <legend class="legendStyle noBorder">
                                <span class="theme_depend title_text text-uppercase ">MAP USERS</span>
                            </legend>
                            <div class="c_panel_body">
                                <div class="col-lg-12" style="margin-top: -30px;">
                                    <br /><div class="col-lg-4 theme_label">USER FULL NAME</div>
                                    <div class="col-lg-6">
                                        <select id="ListAllUsers" class="form-control ListAllUsers input-xs" style="width:100%;height:22px"></select>
                                        @*<input type="text" list="ListAllUsers" id="usrnamemap" autocomplete="off" placeholder="SELECT USER NAME" class="form-control input-xs TeamInputFields">
                                        <datalist class="ListAllUsers"></datalist>*@


                                    </div>
                                </div>
                                <div id="mappedusrinfo" hidden>
                                    <div class="col-lg-12">
                                        <br /><div class="col-lg-4 theme_label">TYPE</div>
                                        

                                        <div class="col-lg-6">
                                            <input type="radio" name="roleType" id="TeamLead" class="normal-radio teaRadioBtn"/><label class="theme_label_data" for="TeamLead"><span></span>Team Lead</label>
                                            <input type="radio" name="roleType" id="TeamMember" class="normal-radio teaRadioBtn" /><label for="TeamMember" class="theme_label_data"><span></span>Team Member</label>
                                        </div>
                                        @*<div>
                                            <div class="Type">
                                                @Html.PratianUiRadioButton("Team Lead", new { @class = "input-md", @name = "Type", @checked = "checked" })

                                                @Html.PratianUiRadioButton("Team Member", new { @class = "input-md", @name = "Type" })
                                            </div>
                                            </div>*@
                                    </div>
                                    <div class="col-lg-12">
                                        <br /><div class="col-lg-4 theme_label">USER ROLE</div>
                                        <div class="col-lg-6">
                                            <select  multiple="multiple" id="UserRoles" style="width:100%;height:22px"></select>
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <br /><div class="col-lg-4"></div>
                                        <div class="col-lg-6">
                                            <input type="button" class="btn btn-sm btn-success pull-right " value="ADD TO TEAM" onclick="AddUserToTeam()" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <br />
                        </fieldset>
                        <fieldset class="fieldsetStyle" >
                            <legend class="legendStyle noBorder">
                                <span class="theme_depend title_text text-uppercase ">MAPPED USERS</span>
                            </legend>
                            <div class="c_panel_body">
                                <table class="table table-striped table-hover table-responsive custom-thead-back queue_table queue_table_head custom-thead-font custom-tbody custom-table-striped" id="AccountsTableView" style="margin-top: -18px;">
                                    <thead class="theme_thead">
                                        <tr>
                                            <th class="withfilter sm-mbrid">
                                                <span class="styled-input">
                                                    <input class="filer-search" type="text" required="">
                                                    <label>USER ID</label>
                                                    <span></span>
                                                    <i class="fa fa-sort" style="color: rgb(255, 255, 255);"></i>
                                                </span>
                                            </th>
                                            <th class="withfilter sm-mbrid">
                                                <span class="styled-input">
                                                    <input class="filer-search" type="text" required="">
                                                    <label>FIRST NAME</label>
                                                    <span></span>
                                                    <i class="fa fa-sort" style="color: rgb(255, 255, 255);"></i>
                                                </span>
                                            </th>
                                            <th class="withfilter sm-mbrid">
                                                <span class="styled-input">
                                                    <input class="filer-search" type="text" required="">
                                                    <label>LAST NAME</label>
                                                    <span></span>
                                                    <i class="fa fa-sort" style="color: rgb(255, 255, 255);"></i>
                                                </span>
                                            </th>

                                            <th class="withfilter sm-mbrid text-center">
                                                <label>ACTION</label>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody id="MappedUsersListTableData" class="theme_label_data"></tbody>

                                </table>
                            </div>
                        </fieldset>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <input type="button" class="btn btn-sm btn-danger" data-dismiss="modal" value="CANCEL" id="cancelAddNewTeamBtn" />
                <input type="button" class="btn btn-sm btn-success pull-right" data-dismiss="modal" id="addTeamBtn" onclick="AddNewTeam()" value=" CREATE" />
                <input type="button" class="btn btn-sm btn-success pull-right" data-dismiss="modal" id="editTeamBtn" onclick="UpdateTeam()" value=" UPDATE" style="display:none" />
            </div>
        </form>
    </div>
</div>

