@model IEnumerable<PortalTemplate.Areas.CredAxis.Models.DocumentRepoViewModel.PSVViewModel>
@{
    var UniqueCategoryObjects = Model.GroupBy(m => m.VerifiedOn).Select(g => g.First()).ToList();
    List<String> categories = new List<String>();
    foreach (var cat in UniqueCategoryObjects)
    {
        categories.Add(cat.VerifiedOn);
    }
}



    @foreach (var category in categories)
    {
     
            <div class="x_panel">
                <div class="x_title">
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up chevron"></i></a>
                        </li>
                    </ul>
                    <h2>PSV, Date: @category &nbsp;&nbsp;</h2>

                    <hr />
                    <div class="clearfix"></div>
                </div>
                <div class="clearfix"></div>

                <div class="x_content">
                    <ul class="connectedSortable  container3 col-lg-12">
                        @foreach (var file in Model)
                        {
                            if (file.VerifiedOn == category)
                            {
                            <li class="col-lg-2">
                                <div class="filecss" onclick="OpenPreviewPanel(@file.FilePath)">
                                    <div class="thumbnail">
                                        <div class="image view view-first">
                                            @if (file.VerficationStatus)
                                            {

                                            <img style="width: 100%; display: block;" src="@Url.Content("~/Resources/Images/File/" + @file.FileType + ".png")" alt="Doc Icon">
                                            }
                                            else
                                            {
                                            <img style="width: 100%; display: block;" src="~/Areas/CredAxis/Resources/DocRepofiles/PSVfailed.jpg" alt="Doc Icon" />

                                            }
                                            @*<div class="mask">
                                                    <p>@file.FileName</p>
                                                    <div class="tools tools-bottom">
                                                        <a href="#"><i class="fa fa-link"></i></a>
                                                        <a href="#"><i class="fa fa-pencil"></i></a>
                                                        <a href="#"><i class="fa fa-times"></i></a>
                                                    </div>
                                                </div>*@
                                        </div>
                                        <div class="caption">
                                            <p>@file.FileName</p>
                                        </div>
                                    </div>
                                </div>
                            </li>
                                }


                                }
</ul>

</div>
            </div>
     
    }
