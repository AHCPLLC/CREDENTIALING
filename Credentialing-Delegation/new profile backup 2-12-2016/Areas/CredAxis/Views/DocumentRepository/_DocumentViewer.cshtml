@model PortalTemplate.Areas.CredAxis.Models.DocumentRepoViewModel.DocumentViewerModel
<iframe src="~/Areas/CredAxis/Resources/DocRepofiles/State%20License_new.pdf" style="width:100%;height:500px;" frameborder="1"></iframe>
<div class="fileInfo" style="width: 100%; height: 192px; border: 2px solid grey; border-radius: 5px;">
    <div class="row">
        <div class="col-lg-3">
            <span class="fileinfo-header">File Name: </span>
            @Model.FileName
        </div>
        <div class="col-lg-2">
            <span class="fileinfo-header">Uploaded By: </span>
            @Model.UploadedBy
        </div>
        <div class="col-lg-3">
            <span class="fileinfo-header">Uploaded On: </span>
            @Model.UploadedOn.ToShortDateString()
        </div>
        <div class="col-lg-4">
            <div class="dropdown">
                <button class="btn btn-default btn-xs dropdown-toggle" type="button" data-toggle="dropdown">
                    Permissions
                    <span class="caret"></span>
                </button>
                <ul class="dropdown-menu">
                    <li><a href="#">Permission 1</a></li>
                    <li><a href="#">Permission 2</a></li>
                    <li><a href="#">Permission 3</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="row comments">
        <div class="col-lg-12">
            <h4>Comments: </h4>
        </div>
        @foreach (var comment in Model.Comments)
        {
            <div class="commentItem col-lg-12">
                <span class="fileinfo-header">@comment.UserName:</span>
                <span class="comment-message">@comment.CommentBody</span>
                <span class="comment-datetime">@comment.CommentDateTime.ToString()</span>
            </div>
        }

    </div>
    <div class="row ComposeComment">
        <div class="col-lg-12">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Type A Comment..">
                <span class="input-group-btn">
                    <button class="btn btn-default" type="button"><i class="fa fa-paper-plane"></i></button>
                </span>
            </div>
        </div>
    </div>
</div>
