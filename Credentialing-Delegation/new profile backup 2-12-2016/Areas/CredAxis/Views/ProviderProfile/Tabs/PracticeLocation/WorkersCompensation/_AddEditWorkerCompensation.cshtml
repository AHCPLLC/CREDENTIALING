@using PratianUI


<div class="col-lg-12 nopadding">
    <fieldset class="fsStyle" id="EditPersonalInfo">
        <legend class="legendStyle">
            <span class="theme_depend text-uppercase create-auth-legends">Edit WORKER COMPENSATION Information</span>
        </legend>

        <div class="x_content zero-padding-left">
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 boxstyle">
                <span class="col-lg-5 theme_label nopadding">
                    <label class="">WORKER COMPENSATION NUMBER</label>
                </span><span class="col-lg-1"></span>
                <span class="col-lg-6 nopadding">
                    @Html.TextBox("WORKER", "", new { @class = "form-control input-xs", placeholder = "WORKER COMPENSATION NUMBER" })
                </span>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12 boxstyle">
                <span class="col-lg-5 theme_label nopadding">
                    <label class="">CERTIFICATION STATUS</label>
                </span><span class="col-lg-1"></span>
                <span class="col-lg-6 nopadding">
                    @*<select id="SelectedUserRoleId" name="SelectedUserRoleId">
                        <option value="1">ACTIVE</option>
                        <option value="2">INACTIVE</option>
                    </select>*@
                    @Html.TextBox("STATUS", "ACTIVE", new { @class = "form-control input-xs", placeholder = "CERTIFICATION STATUS" })


                </span>
            </div>
            <br />
            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12 boxstyle">
                <span class="col-lg-6 theme_label nopadding">
                    <label class="">ISSUE DATE</label>
                </span>
                <span class="col-lg-6 nopadding">
                    <span class="theme_label_data">@Html.PratianUiDatePickerFor(m => m, "06/07/2015", new { @class = "form-control input-xs", placeholder = "MM/DD/YYYY" })</span>
                </span>
            </div>
       
            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12 boxstyle">
                <span class="col-lg-6 theme_label nopadding">
                    <label class="">EXPIRATION DATE</label>
                </span>
                <span class="col-lg-6 nopadding">
                    <span class="theme_label_data">@Html.PratianUiDatePickerFor(m => m, "06/07/2016", new { @class = "form-control input-xs", placeholder = "MM/DD/YYYY" })</span>
                </span>
            </div>
        </div>
        <div class="row col-lg-12 zero-padding-left-right">
            @*<input class="btn btn-success btn-xs  buttonmargin pull-right margin-right-5px" data-tab-path="/CredAxis/Demographics/GetPersonalIdentificationInfoEditPartial?ActionType=View" data-tab-container="PersonalIdentificationDiv" type="submit" name="submit" value="Save">*@
            <button class="btn btn-success btn-xs yahanClickKar  list-item buttonmargin pull-right margin-right-5px" data-tab-path="/CredAxis/PracticeLocation/ViewworkerInformation" data-tab-container="PLWorkersCompensationDetails" value="">Save</button>
                <button class="btn btn-danger btn-xs yahanClickKar list-item buttonmargin pull-right margin-right-5px" data-tab-path="/CredAxis/PracticeLocation/ViewworkerInformation" data-tab-container="PLWorkersCompensationDetails" value="">Cancel</button>
</div>
    </fieldset>
</div>
