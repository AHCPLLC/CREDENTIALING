@model IEnumerable<PortalTemplate.Areas.CredAxis.Models.DemographisViewModels.HomeAddressViewModel>
@{
    var homeAddressCount = 0;
}
@***************Home Address View *********************************@
<div class="col-lg-12 nopadding">

    <fieldset class="fsStyle" id="ViewHomeAddress">

        @***************Home Address View Panel Heading*********************************@
        <legend class="legendStyle">
            <span class="theme_depend text-uppercase"><span class="transparent-font-color">______</span>Home Address<span class="transparent-font-color">______</span></span>
            &nbsp;&nbsp;
            <span class="text-uppercase">
                <span class="fstyleBtnStyle">
                    <button class="btn btn-success btn-xs add_note_btn addBtnCSS list-item" data-tab-autoflush="true" data-tab-path="/CredAxis/Demographics/GetAddEditHomeAddress?model=@Model&type=Add" data-tab-container="HomeAddressDiv">
                        <i class="fa fa-plus"></i>
                    </button>
                </span>
                <span class="fstyleBtnStyle">
                    <button class="btn btn-primary btn-xs add_note_btn list-item" data-tab-path="/CredAxis/Demographics/GetAddEditHomeAddress?model=@Model&type=Edit" data-tab-container="HomeAddressDiv">
                        <i class="fa fa-pencil"></i>
                    </button>
                </span>
                <span class="fstyleBtnStyle">
                    <button class="btn btn-warning btn-xs historyBtnCSS list-item" data-tab-path="/CredAxis/Demographics/GetHomeAddressHistoryPartial" data-tab-container="HomeAddressesHistory">
                        <i class="fa fa-history"></i>
                    </button>
                </span>
                <a class="print_button_for_HomeAddr hover_effect pull-right" data-toggle="tooltip" data-placement="top" title="" data-original-title="Print" tabindex="-1">
                    <img class="printIcon_image" src="/Resources/Images/Icons/print_icon.png">
                </a>
            </span>
        </legend>

        @***************Home Address View Panel Body*********************************@
        @foreach (var item in Model)
        {
            homeAddressCount++;

            <div class="x_content mutiple-data zero-padding-left ViewmoreHomeAddress_@homeAddressCount collapse in">
                <div class="SubHeaderSpacing1">
                    <span class="text-uppercase TableHeading">Home Address - @homeAddressCount</span>  &nbsp; <button data-toggle="modal" data-target="#@item.HomeAddressId" class="btn btn-danger btn-xs RemoveButtonStyleModal"><i class="fa fa-minus"></i></button>
                </div>
                <div class="col-lg-3 text_adjust boxstyle">
                    <label class="theme_label">@Html.DisplayNameFor(e => e.PrimaryHomeAddress) :</label>
                    @if (item.PrimaryHomeAddress)
                    {
                        <span class="theme_label_data">YES</span>
                    }
                    else
                    {
                        <span class="theme_label_data">NO</span>
                    }
                </div>
                <div class="col-lg-3 text_adjust boxstyle">
                    <label class="theme_label">@Html.DisplayNameFor(e => e.PresnetHomeAddress) :</label>
                    @if (item.PresnetHomeAddress)
                    {
                        <span class="theme_label_data">YES</span>
                    }
                    else
                    {
                        <span class="theme_label_data">NO</span>
                    }
                </div>
                <div class="col-lg-3 text_adjust boxstyle">
                    <label class="theme_label">@Html.DisplayNameFor(e => e.ApartmentOrUnit) # :</label>
                    @if (item.ApartmentOrUnit != "")
                    {
                        <span class="theme_label_data">@item.ApartmentOrUnit</span>
                    }
                    else
                    {
                        <span class="theme_label_data">NOT AVAILABLE</span>
                    }
                </div>
                <div class="col-lg-3 text_adjust boxstyle">
                    <label class="theme_label">@Html.DisplayNameFor(e => e.StreetOrPOBox) # :</label>
                    @if (item.StreetOrPOBox != "")
                    {
                        <span class="theme_label_data">@item.StreetOrPOBox</span>
                    }
                    else
                    {
                        <span class="theme_label_data">NOT AVAILABLE</span>
                    }
                </div>
                <div class="col-lg-3 text_adjust boxstyle">
                    <label class="theme_label">@Html.DisplayNameFor(e => e.City) :</label>
                    @if (item.City != "")
                    {
                        <span class="theme_label_data">@item.City</span>
                    }
                    else
                    {
                        <span class="theme_label_data">NOT AVAILABLE</span>
                    }
                </div>
                <div class="col-lg-3 text_adjust boxstyle">
                    <label class="theme_label">@Html.DisplayNameFor(e => e.State) :</label>
                    @if (item.State != "")
                    {
                        <span class="theme_label_data">@item.State</span>
                    }
                    else
                    {
                        <span class="theme_label_data">NOT AVAILABLE</span>
                    }
                </div>
                <div class="col-lg-3 text_adjust boxstyle">
                    <label class="theme_label">@Html.DisplayNameFor(e => e.County) :</label>
                    @if (item.County != "")
                    {
                        <span class="theme_label_data">@item.County</span>
                    }
                    else
                    {
                        <span class="theme_label_data">NOT AVAILABLE</span>
                    }
                </div>
                <div class="col-lg-3 text_adjust boxstyle">
                    <label class="theme_label">@Html.DisplayNameFor(e => e.Country) :</label>
                    @if (item.Country != "")
                    {
                        <span class="theme_label_data">@item.Country</span>
                    }
                    else
                    {
                        <span class="theme_label_data">NOT AVAILABLE</span>
                    }
                </div>
                <div class="col-lg-3 text_adjust boxstyle">
                    <label class="theme_label">@Html.DisplayNameFor(e => e.ZipCode) :</label>
                    @if (item.ZipCode != "")
                    {
                        <span class="theme_label_data">@item.ZipCode</span>
                    }
                    else
                    {
                        <span class="theme_label_data">NOT AVAILABLE</span>
                    }
                </div>

                <div class="col-lg-3 text_adjust boxstyle">
                    <label class="theme_label">@Html.DisplayNameFor(e => e.LivingHereFrom) :</label>
                    @if (item.LivingHereFrom != "")
                    {
                        <span class="theme_label_data">@item.LivingHereFrom</span>
                    }
                    else
                    {
                        <span class="theme_label_data">NOT AVAILABLE</span>
                    }
                </div>
            </div>




        }
        <span class="view-more  pull-right" id="lessHomeAddress" data-toggle="collapse" data-target=".ViewmoreHomeAddress_2" onclick="ShowHideAddView('moreHomeAddress', 'lessHomeAddress')">View Less</span>
        <span class="view-more hidden pull-right" id="moreHomeAddress" data-toggle="collapse" data-target=".ViewmoreHomeAddress_2" onclick="ShowHideAddView('lessHomeAddress', 'moreHomeAddress')">View More</span>

        <div id="HomeAddressesHistory">

        </div>

    </fieldset>

</div>

@foreach (var item in Model)
{


    <div class="modal fade " tabindex="-1" role="dialog" id="@item.HomeAddressId" style="overflow: auto; top: 8%;">
        <div class="modal-dialog modal-lg ">
            <form class="modal-content">
                <div class="modal-header zero_padding_bottom">
                    @*<div class="row" style="text-align: center;">
                            <span class="modalTitle text-uppercase">REMOVE DETAIL</span>
                            <span><button type="button" class="btn btn-xs btn-danger closeBtnCSS pull-right" data-dismiss="modal"><i class="fa fa-times" aria-hidden="true"></i></button></span>

                        </div>*@
