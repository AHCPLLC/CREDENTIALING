@model PortalTemplate.Areas.CredAxis.Models.DemographisViewModels.PersonalIdentificationViewModel

<div class="col-lg-12 nopadding">
    <fieldset class="fsStyle" id="EditPersonalInfo">
        <legend class="legendStyle">
            <span class="theme_depend text-uppercase create-auth-legends">Edit Personal Identification</span>
        </legend>

        <div class="x_content zero-padding-left">
            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12 boxstyle">
                <span class="col-lg-5 theme_label nopadding">
                    <label class="">@Html.DisplayNameFor(e => e.SocialSecurityNumber) #</label>
                </span><span class="col-lg-1"></span>
                <span class="col-lg-6 nopadding">
                    @Html.TextBoxFor(m => m.SocialSecurityNumber, new { @class = "form-control input-xs", placeholder = "SOCIAL SECURITY NUMBER" })
                </span>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12 boxstyle">
                <span class="col-lg-5 theme_label nopadding">
                    <label class="">SSN DOCUMENT</label>
                </span><span class="col-lg-1"></span>
                <span class="col-lg-6 input-group  nopadding" style="margin-bottom: -1px;">
                    <input id="UploadSsnDoc" type="text" class="form-control input-xs" readonly placeholder="Document">
                    <span class="input-group-addon File_uploadStyle" onclick="$('#file-inputSsn').click();"><i class="fa fa-upload"></i></span>
                    <input id="file-inputSsn" style="display:none" onchange="document.getElementById('UploadSsnDoc').value = this.value" type="file">
                </span>
                @*<span class="col-lg-6 nopadding">
                        <span class="theme_label_data"><input type="file" class="form-control input-xs" placeholder="Certificate" value="" name="Certificate" /></span>
                    </span>*@
            </div>
            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12 boxstyle">
                <span class="col-lg-5 theme_label nopadding">
                    <label class="">@Html.DisplayNameFor(e => e.DriversLicense)</label>
                </span>
                <span class="col-lg-1 "></span>
                <span class="col-lg-6 nopadding">
                    @Html.TextBoxFor(m => m.DriversLicense, new { @class = "form-control input-xs", placeholder = "DRIVER'S LICENSE" })
                </span>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12 boxstyle">
                <span class="col-lg-5 theme_label nopadding">
                    <label class="">@Html.DisplayNameFor(e => e.IssueStateOfDL)</label>
                </span><span class="col-lg-1"></span>
                <span class="col-lg-6 nopadding">
                    @Html.TextBoxFor(m => m.IssueStateOfDL, new { @class = "form-control input-xs", placeholder = "ISSUE STATE OF DL" })
                </span>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12 boxstyle">
                <span class="col-lg-5 theme_label nopadding">
                    <label class="">DL DOCUMENT</label>
                </span>
                <span class="col-lg-1"></span>
                <span class="col-lg-6 input-group  nopadding">
                    <input id="UploadDlDoc" type="text" class="form-control input-xs" readonly placeholder="Document">
                    <span class="input-group-addon File_uploadStyle" onclick="$('#file-inputDl').click();"><i class="fa fa-upload"></i></span>
                    <input id="file-inputDl" style="display:none" onchange="document.getElementById('UploadDlDoc').value = this.value" type="file">

                </span>
                @*<span class="col-lg-6 nopadding">
                        <span class="theme_label_data"><input type="file" class="form-control input-xs" placeholder="Certificate" value="" name="Certificate" /></span>
                    </span>*@
            </div>
        </div>
        <div class="row col-lg-12 zero-padding-left-right">
            @*<input class="btn btn-success btn-xs  buttonmargin pull-right margin-right-5px" data-tab-path="/CredAxis/Demographics/GetPersonalIdentificationInfoEditPartial?ActionType=View" data-tab-container="PersonalIdentificationDiv" type="submit" name="submit" value="Save">*@
            <button class="btn btn-success btn-xs yahanClickKar  list-item buttonmargin pull-right margin-right-5px" data-tab-path="/CredAxis/Demographics/GetPersonalIdentificationInfoEditPartial?ActionType=View" data-tab-container="PersonalIdentificationDiv">Save</button>
            <button class="btn btn-danger btn-xs yahanClickKar list-item buttonmargin pull-right margin-right-5px" data-tab-path="/CredAxis/Demographics/GetPersonalIdentificationInfoEditPartial?ActionType=View" data-tab-container="PersonalIdentificationDiv">Cancel</button>
        </div>
    </fieldset>
</div>
