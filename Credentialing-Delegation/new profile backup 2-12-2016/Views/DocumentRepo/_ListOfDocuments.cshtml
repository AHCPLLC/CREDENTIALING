<p-script filepath="~/Scripts/AppScripts/DocRepo/DocList.js"></p-script>

<p-link filepath="~/Content/AppCss/DocRepo/DocList.css"></p-link>

<div class="col-lg-12">
    <div class="col-lg-12 theDocRepoHeader ">
        <div class="col-lg-6 col-lg-offset-8">
            <span class="col-lg-4">
                <b>Available : <label class="label-success-color">26</label>&nbsp; Missing : <label style="color:red">8</label></b>
            </span>
            <span class="col-lg-6">
                <span>
                    <i class="fa fa-print fa-2x" style="cursor:pointer" title="Header" data-toggle="popover" data-placement="top" data-content="Content"></i>
                </span>&nbsp;&nbsp;
                <span>
                    <i class="fa fa-envelope fa-2x" style="cursor:pointer" title="Header" data-toggle="popover" data-placement="top" data-content="Content"></i>&nbsp;&nbsp;
                </span>
                <span>
                    <i class="fa fa-gear fa-2x" style="cursor:pointer" title="Header" data-toggle="popover" data-placement="top" data-content="Content"></i>
                </span>
                <span style="margin-left: 6px;">
                    <i class="fa fa-angle-double-right fa-2x thePreviewMailPanelClose hidden" style="cursor:pointer" title="Header" data-toggle="popover" data-placement="top" data-content="Content"></i>
                    <i class="fa fa-angle-double-left fa-2x thePreviewMailPanel" style="cursor:pointer" title="Header" data-toggle="popover" data-placement="top" data-content="Content"></i>
                </span>
            </span>
        </div>
    </div>
    <div class="col-lg-12" id="custom-Container">
        <div id="container" @*style="height: 500px"*@>
            <div class="ui-layout-west col-lg-12" @*style="overflow-y: scroll"*@>
                @foreach (var doc in ViewBag.DocList)
                {
                    if (doc.Value.Count > 0)
                    {
                        <div class="x_panel">
                            <div class="x_title">
                                <ul class="nav navbar-right panel_toolbox">
                                    <li>
                                        <a class="collapse-link"><i class="fa fa-chevron-up chevron"></i></a>
                                    </li>
                                </ul>
                                <h2>@doc.Name (@doc.Value.Count/7) &nbsp;&nbsp;</h2>

                                <hr />
                                <div class="clearfix"></div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="x_content">
                                docNumber = 1;
                                @foreach (var file in doc.Value)
                                {

                                    @*onclick="openModal()"*@
                                    <div class="col-md-1 filecss" onclick="OpenPreviewPanel(@file.FilePath)">
                                        <div class="thumbnail">
                                            <div class="image view view-first">

                                                <img style="width: 100%; display: block;" src="@Url.Content("~/Resources/Images/File/" + @file.FileType + ".png")" alt="Doc Icon">
                                                <div class="mask">
                                                    <p>@file.FileName</p>
                                                    <div class="tools tools-bottom">
                                                        <a href="#"><i class="fa fa-link"></i></a>
                                                        <a href="#"><i class="fa fa-pencil"></i></a>
                                                        <a href="#"><i class="fa fa-times"></i></a>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="caption">
                                                <p>@file.FileName</p>
                                            </div>
                                        </div>
                                    </div>
                                    docNumber = docNumber + 1;
                                }
                                <div class="col-md-1 filecss @doc.Name" id="AddNewModal">
                                    <div class="thumbnail">
                                        <div class="image view view-first">
                                            <img style="width: 97%; display: block;" src="@Url.Content("~/Resources/Images/File/add3.png")" alt="Doc Icon">
                                            <div class="mask">
                                                <p>Add New</p>
                                            </div>
                                        </div>
                                        <div class="caption">
                                            <p>New</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
            <div class="ui-layout-right col-lg-6 hidden">
                <iframe src="~/Areas/CredAxis/Resources/DocRepofiles/State%20License_new.pdf" style="width:100%;height:400px;" frameborder="1"></iframe>
                <div class="fileInfo" style="width: 100%; height: 100px; border: 2px solid grey; border-radius: 5px;">
                    
                </div>
            </div>
        </div>
    </div>


    @Html.Partial("~/Views/DocumentRepo/_PreviewDoc.cshtml")
</div>
<div class="clearfix"></div>