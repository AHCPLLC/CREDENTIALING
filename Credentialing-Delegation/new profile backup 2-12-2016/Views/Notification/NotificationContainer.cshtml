@{
    Layout = null;
}
<link href="~/Content/LibCss/Notify/pnotify.css" rel="stylesheet" />
<link href="~/Content/LibCss/Notify/pnotify.buttons.css" rel="stylesheet" />
<link href="~/Content/LibCss/Notify/pnotify.nonblock.css" rel="stylesheet" />
<script src="~/Scripts/Notify/push.min.js"></script>
<script src="~/Scripts/Notify/pnotify.buttons.js"></script>
<script src="~/Scripts/Notify/pnotify.core.js"></script>
<script src="~/Scripts/Notify/pnotify.nonblock.js"></script>
<script>
    PopNotify = function (notifyAbout, Msg, notifyType) {
        notifyAbout = notifyAbout.toUpperCase();
        Msg = Msg.toUpperCase();
        if (("Notification" in window) && Notification.permission === "granted") {
            Push.create(notifyAbout, {
                body: Msg,
                icon: '@Url.Content("~/Resources/Images/Common/ahc_logo.png")',
                timeout: 7000,
                onClick: function () {
                    window.focus();
                    this.close();
                }
            });
        }

        new PNotify({
            title: notifyAbout,
            text: Msg,
            type: notifyType,
            nonblock: {
                nonblock: true
            },
            styling: 'bootstrap3'
        });

    }
    var Greetings = function () {
        datetoday = new Date();
        timenow = datetoday.getTime();
        datetoday.setTime(timenow);
        thehour = datetoday.getHours();
        if (thehour > 18) display = "Evening";
        else if (thehour > 12) display = "Afternoon";
        else display = "Morning";
        var greeting = ("Good " + display + " " + $(".user-profile").text().trim() + "!");
        PopNotify("Greetings!", greeting, "dark");
    }

    $(function () {
        Greetings();
    })
</script>
