        <style>
            .small_tile {
                padding: 5px;
                margin-top: 11px;
                border-radius: 2px;
                text-transform: uppercase;
            }

            .small_tile_header {
                text-align: center;
            }

            .small_tile_body {
                font-size: 13px;
                text-align: center;
            }

            .info_small_tile {
                /*background: #487fc4;*/
                color: #487fc4;
                border: 1px solid #487fc4;
                border-bottom: 3px solid #487fc4;
            }

            .success_small_tile {
                color: #18a689;
                border: 1px solid #18a689;
                border-bottom: 3px solid #18a689;
            }

            .danger_small_tile {
                color: #ea394c;
                border: 1px solid #ea394c;
                border-bottom: 3px solid #ea394c;
            }
        </style>
        <div class="col-lg-4">
            <div class="small_tile info_small_tile">
                <div class="small_tile_header">

                </div>
                <div class="small_tile_body">
                    <span>Dispatched:</span><b>$8,854,856</b>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="small_tile success_small_tile">
                <div class="small_tile_header">

                </div>
                <div class="small_tile_body">
                    <span>Paid:</span><b>$7,107,021</b>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="small_tile danger_small_tile">
                <div class="small_tile_header">

                </div>
                <div class="small_tile_body">
                    <span>Rejected:</span><b>$845,152</b>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-12">
        <h4>
            CLAIMS REPORT FOR FINANCIAL YEAR -
            <select class="financial_year_dropdown">
                <option>2013-2014</option>
                <option>2014-2015</option>
                <option selected>2015-2016</option>
            </select>

            @*<a class="btn btn-xs btn-warning pull-right">
                    <i class="fa fa-history"></i>
                </a>*@
            <a class="btn btn-xs btn-success pull-right" id="Float_Settings" data-role="tooltip" data-placement="left" title="Open Settings">
                <i class="fa fa-cog"></i>
            </a>
            <a class="btn btn-xs btn-info pull-right" id="master_filter">
                <i class="fa fa-filter"></i>
            </a>


        </h4>
    </div>
