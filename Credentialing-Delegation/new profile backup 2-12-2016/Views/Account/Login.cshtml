@model PortalTemplate.Models.LoginViewModel

@{
    ViewBag.Title = "Log in";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <!--[if lt IE 7]> <html class="no-js ie6 oldie" lang="en"> <![endif]-->
    <!--[if IE 7]>    <html class="no-js ie7 oldie" lang="en"> <![endif]-->
    <!--[if IE 8]>    <html class="no-js ie8 oldie" lang="en"> <![endif]-->
    <!--[if IE 9]> <html class="no-js ie9 oldie" lang="en"> <![endif]-->
    <meta charset="utf-8" />
    <!-- Set the viewport width to device width for mobile -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    <meta name="description" content="" />
    <link rel="shortcut icon" href="~/favicon.ico">
    <title>AHC - Login</title>
    <noscript>
        <meta http-equiv="Refresh" content="0;URL=@Url.Content("~/Errorpage/JavaScriptDisabled")">
    </noscript>
    @Styles.Render("~/Content/logincss")
    <style>
        body {
            background: url('@Url.Content("~/Resources/Images/LoginPage/45.jpg")') 0% 18%;
        }
    </style>
</head>
<body>
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()

        @*<div id="custom-bootstrap-menu" class="navbar navbar-default " role="navigation">
                <div class="container">
                    <div class="navbar-header">
                        <a class="navbar-brand col-lg-offset-4 col-md-offset-4 col-sm-offset-4 col-xs-offset-4" href="#"><img src="~/Resources/Images/Common/ahc_logo.png" /></a>
                    </div>
                </div>
            </div>*@
        <div class="container">
            <div id="loginform" class="col-lg-5 col-md-6 col-sm-9 col-xs-12 col-lg-offset-3 col-md-offset-3 col-sm-offset-2 login_form">
                <div class="registrationform">
                    <div class="col-lg-12 text-center">
                        <img src="@Url.Content("~/Resources/Images/Common/ahc_logo.png")" width="60%" />
                    </div>
                    <div class="clearfix"></div>
                    <div class="form-horizontal">
                        <fieldset>
                            <legend>Login <i class="fa fa-lock fa-2x pull-right"></i></legend>
                            <div class="form-group text-center">@Html.ValidationSummary(true)</div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.UserName, new { @class = "col-md-3 control-label" })
                                <div class="col-md-8">
                                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Email", autocomplete = "off" })
                                    @Html.ValidationMessageFor(m => m.UserName)
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Password, new { @class = "col-md-3 control-label" })
                                <div class="col-md-8">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                                    @Html.ValidationMessageFor(m => m.Password)
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-12">
                                    <div class="col-lg-12">
                                        <div class="checkbox pull-right">
                                            <label>
                                                <a class="label label-primary rippler rippler-inverse" href="~/Account/ForgotPassword">Forgot Password ?</a>
                                            </label>
                                        </div>
                                        <div class="checkbox pull-left">
                                            <label>
                                                @Html.CheckBoxFor(m => m.RememberMe) Remember Me
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="form-group">
                                <div class="col-lg-12">
                                    <input id="btnSubmit" class="btn btn-success btn-block  rippler rippler-inverse" value="Submit" type="submit" />
                                </div>
                            </div>
                        </fieldset>
                    </div>
                </div>
            </div>
        </div>
        @Scripts.Render("~/bundles/loginscripts")
        <script type="text/javascript">
            'use strict';
            $(function () {
                $("#loginform").show("puff", 500);
                $("input[name='UserName']").focus();
                $(".rippler").rippler({
                    effectClass: 'rippler-effect',
                    effectSize: 16,
                    addElement: 'div',
                    duration: 400
                });
            })
        </script>
    }
    @Html.Partial("~/Views/Shared/OtherLayouts/ScreenAlert.cshtml")
</body>
</html>