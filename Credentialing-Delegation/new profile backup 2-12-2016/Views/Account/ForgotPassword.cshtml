@model PortalTemplate.Models.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <!--[if lt IE 7]> <html class="no-js ie6 oldie" lang="en"> <![endif]-->
    <!--[if IE 7]>    <html class="no-js ie7 oldie" lang="en"> <![endif]-->
    <!--[if IE 8]>    <html class="no-js ie8 oldie" lang="en"> <![endif]-->
    <!--[if IE 9]> <html class="no-js ie9 oldie" lang="en"> <![endif]-->
    <meta charset="utf-8" />
    <!-- Set the viewport width to device width for mobile -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    <meta name="description" content="" />
    <link rel="shortcut icon" href="~/favicon.ico">
    <title>Forgot Password | </title>
    @Styles.Render("~/Content/logincss")
    <style>
        .login_form {
            display: none;
            margin-top: 14%;
            margin-left: 29%;
        }
    </style>
</head>
<body style="background:url('@Url.Content("~/Resources/Images/LoginPage/45.jpg")') 0% 18% /cover no-repeat">
    @using (Html.BeginForm("ForgotPassword", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()

        @*<div id="custom-bootstrap-menu" class="navbar navbar-default " role="navigation">
                <div class="container">
                    <div class="navbar-header">
                        <a class="navbar-brand" href="#"><img src="~/Resources/Images/Common/ahc_logo.png" /></a>
                    </div>
                </div>
            </div>*@
        <div class="container">
            <div id="loginform" class="col-lg-5 col-md-6 col-sm-9 col-xs-12 col-lg-offset-3 col-md-offset-3 col-sm-offset-2 login_form">
                <div class="registrationform">
                    <div class="col-lg-12 text-center">
                        <img src="~/Resources/Images/Common/ahc_logo.png" width="60%" />
                    </div>
                    <div class="clearfix"></div>
                    <div class="form-horizontal">
                        <fieldset>
                            <legend>Forgot Password <i class="fa fa-key fa-2x pull-right"></i></legend>
                            <div class="form-group text-center">@Html.ValidationSummary(true)</div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.UserName, new { @class = "col-md-3 control-label" })
                                <div class="col-md-8">
                                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control rippler rippler-inverse", placeholder = "Email", autocomplete = "off" })
                                    @Html.ValidationMessageFor(m => m.UserName)
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-12">
                                    <div class="col-lg-12">
                                        <div class="checkbox pull-right">
                                            <label>
                                                <a class="label label-primary rippler rippler-inverse" href="~/Account/Login">Go Back To Login</a>
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="form-group">
                                <div class="col-lg-12">
                                    <input id="btnSubmit" class="btn btn-success btn-block rippler rippler-default" value="Submit" type="submit" />
                                </div>
                            </div>
                        </fieldset>
                    </div>
                </div>
            </div>
        </div>

        @Scripts.Render("~/bundles/loginscripts")

        <script type="text/javascript">
            'use strict';
            $(function () {
                //$("#loginform").show(1000);
                $("#loginform").show("puff", 500);
                $("input[name='UserName']").focus();
                $(".rippler").rippler({
                    effectClass: 'rippler-effect',
                    effectSize: 16,
                    addElement: 'div',
                    duration: 400
                });
            })

            /* ========================== */
            /* ::::::: Backstrech ::::::: */
            /* ========================== */
            // You may also attach Backstretch to a block-level element
            $.backstretch(
            [
                @*"@Url.Content("~/Resources/Images/LoginPage/44.jpg")",
                "@Url.Content("~/Resources/Images/LoginPage/colorful.jpg")",
                "@Url.Content("~/Resources/Images/LoginPage/34.jpg")",
                "@Url.Content("~/Resources/Images/LoginPage/images.jpg")"*@
            ],

            {
                duration: 4500,
                fade: 1500
            }
        );
           
        </script>
    }
</body>
</html>