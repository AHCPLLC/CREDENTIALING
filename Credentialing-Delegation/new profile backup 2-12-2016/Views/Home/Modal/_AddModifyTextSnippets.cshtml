@model IEnumerable<PortalTemplate.Areas.UM.Models.ViewModels.InsertText.InsertTextViewModel>
<p-script filepath="~/Scripts/AppScripts/Home/AddModifyTextSnippetsModal.js"></p-script>
<div class="col-lg-12 align-middle">
    <div class="col-lg-2"><div class="inline_block theme_label"><input class="normal-radio" type="radio" checked /><label for=""><span></span>UM</label></div></div>
    <div class="col-lg-2"><div class="inline_block theme_label"><input class="normal-radio" type="radio" disabled /><label for=""><span></span>CM</label></div></div>
    <div class="col-lg-2"><div class="inline_block theme_label"><input class="normal-radio" type="radio" disabled /><label for=""><span></span>DM</label></div></div>
    <div class="col-lg-6" id="actionBtns">
        <button id="addNewTextSnippetBtn" class="btn btn-success">Add New</button>
        <span id="hiddenActionBtns">
            <button id="editTextSnippetBtn" class="btn btn-primary">Edit</button>
            <button id="deleteTextSnippetBtn" class="btn btn-danger">Delete</button>
            <button id="cancelTextSnippetBtn" class="btn btn-warning">Cancel</button>
        </span>
    </div>
</div>
<div id="InsertTextDiv">
    <table id="textSnippetsTable" class="table table-striped table-hover table-responsive">
        <thead class="theme_thead custom-thead-back theme1_table custom-thead-font custom-tbody">
            <tr>
                <th width="14.5%">@Html.DisplayNameFor(e => e.ServiceSubjectToNotice)</th>
                <th width="14.5%">@Html.DisplayNameFor(e => e.ListOfMedicalService)</th>
                <th width="14.5%">@Html.DisplayNameFor(e => e.Rationale)</th>
                <th width="14.5%">@Html.DisplayNameFor(e => e.CriteriaUsed)</th>
                <th width="14.5%">@Html.DisplayNameFor(e => e.AlternaltePlanOfCare)</th>
                <th width="14.5%">@Html.DisplayNameFor(e => e.Note)</th>
                <th width="7%">@Html.DisplayNameFor(e => e.ReviewType)</th>
                <th width="6%">@Html.DisplayNameFor(e => e.Decision)</th>
            </tr>
        </thead>

        <tbody id="textSnippetBody">
            @if (Model != null && Model.Count() > 0)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td class="theme_label_data">@Html.DisplayFor(e => item.ServiceSubjectToNotice)</td>
                        <td class="theme_label_data">
                            @foreach (var count in item.ListOfMedicalService)
                            {
                                @Html.DisplayFor(e => count) <br />
                            }
                        </td>
                        <td class="theme_label_data">@Html.DisplayFor(e => item.Rationale)</td>
                        <td class="theme_label_data">@Html.DisplayFor(e => item.CriteriaUsed)</td>
                        <td class="theme_label_data">@Html.DisplayFor(e => item.AlternaltePlanOfCare)</td>
                        <td class="theme_label_data">@Html.DisplayFor(e => item.Note)</td>
                        <td class="theme_label_data">@Html.DisplayFor(e => item.ReviewType)</td>
                        <td class="theme_label_data">@Html.DisplayFor(e => item.Decision)</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="8" align="center" class="theme_label_data theme_a">No Data Available</td>
                </tr>
            }
        </tbody>
    </table>
</div>