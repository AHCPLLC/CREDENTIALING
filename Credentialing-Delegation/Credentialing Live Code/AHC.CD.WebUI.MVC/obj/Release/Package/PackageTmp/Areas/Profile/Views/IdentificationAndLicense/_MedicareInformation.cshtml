@using AHC.CD.WebUI.MVC.Areas.Profile.Attributes;

<div class="panel-default" id="MedicareInformation">
    <div class="form-style">
        <div id="Medicare">
            <fieldset>
                <legend>
                    @if (!ViewBag.Roles.Contains("CCO") && !ViewBag.Roles.Contains("CRA"))
                {
                        <i style="font-size:20px" tooltip data-toggle="tooltip" data-placement="top" title="This section is under observation by your credentialing co-ordinator" ng-show="MedicareInformationPendingRequest" class="fa text-danger fa-exclamation-circle"></i>
                }
                    Medicare Information
                </legend>
                <div class="legend2 pull-right">
                    @*<button type="button" ng-hide="MedicareInformations.length < 1" class="btn btn-xs btn-primary" data-container="body" data-toggle="popover" data-placement="left" data-trigger="hover" data-content="Download" data-original-title="" title="" ng-click="downloadTableData('Profile_Licenses_MedicareInformation','Medicare Information')"><i class="fa fa-download"></i></button>*@
                    <button id="Medicare_Print" type="button" ng-hide="MedicareInformations.length < 1" class="btn btn-xs btn-primary" data-container="body" data-toggle="popover" popover data-placement="left" data-trigger="hover" data-content="Print" data-original-title="" title="" ng-click="printData('Profile_Licenses_MedicareInformation','Medicare Information')"><i class="fa fa-print"></i></button>
                    <button id="Medicare_HistoryIcon" type="button" ng-click="showMedicareHistory('MedicareHistory')" class="btn btn-xs btn-warning" data-container="body" data-toggle="popover" data-placement="left" data-trigger="hover" data-content="View History"><i class="fa fa-clock-o"></i></button>
                    <div id="MedicareHistory" class="loading pull-right loadingHistory"><img src="/Content/Images/ajax-loader.gif" width="20" height="20"></div>
                    <button class="btn btn-xs btn-default" data-container="body" data-toggle="popover" data-placement="left" data-trigger="hover" data-content="*If you have additional Medicare Number include here."><i class="fa fa-question"></i></button>
                </div>
                <div id="MedicareInfo" class="panel-body">
                    <table ng-hide="MedicareInformations.length > 0||newShowMedicareInformation" class="table table-bordered table-condensed customtbodyStyle table-striped">
                        <thead>
                            <tr>
                                <td ng-hide="visibilityControl=='addMedicareInformation'">
                                    No Data Available For Medicare Information!
                                    @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Add, ViewBag.Roles, false))
                                {
                                        <span>
                                            Please click on <button id="noDataAddNewMedicare" class="btn btn-xs btn-success" ng-click="operateViewAndAddControl('addMedicareInformation')" tooltip data-toggle="tooltip" data-placement="right" title="Add new"><i class="fa fa-plus"></i></button>
                                            to add new Medicare Information
                                        </span>
                                }
                                </td>
                            </tr>
                        </thead>
                    </table>
                    <table ng-hide="MedicareInformations.length < 1" class="table table-bordered table-condensed customtbodyStyle table-striped" id="Profile_Licenses_MedicareInformation">
                        <thead>
                            <tr>
                                <th>Medicare Number</th>
                                <th>Issue Date</th>
                                <th>Expiration Date</th>
                                <th class="hideData">Supporting Document</th>
                                <th class="hideData">Action</th>
                            </tr>
                        </thead>
                        <tbody ng-repeat="MedicareInformation in MedicareInformations track by $index">
                            <tr>
                                <td >{{MedicareInformation.LicenseNumber}}</td>
                                <td  ng-hide="MedicareInformation.IssueDate"><i class="data-label">Not Available</i></td>
                                <td  ng-show="MedicareInformation.IssueDate">{{MedicareInformation.IssueDate | date: "MM-dd-yyyy"}}</td>


                                <td ng-hide="MedicareInformation.ExpirationDate"><i class="data-label">Not Available</i></td>
                                <td ng-show="MedicareInformation.ExpirationDate">{{MedicareInformation.ExpirationDate | date: "MM-dd-yyyy"}}</td>


                                <td class="hideData">
                                    @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Preview, ViewBag.Roles, false))
                                {
                                        <a ng-if="MedicareInformation.CertificatePath" href="@System.Configuration.ConfigurationManager.AppSettings["AppRoot"]/Document/View?path=@System.Configuration.ConfigurationManager.AppSettings["AppRoot"]{{MedicareInformation.CertificatePath}}" class="pointer" target="_blank" tooltip data-toggle="tooltip" data-placement="top" title="Medicare Certificate">
                                            <i class="fa fa-file" title=""></i>
                                        </a>
                                }
                                    <i ng-if="!MedicareInformation.CertificatePath">Not Available</i>
                                </td>
                                <td class="hideData">
                                    @if (ProfileActionValidator.IsAuthorized(ProfileActionType.View, ViewBag.Roles, false))
{
    <button id="Medicare_Table_ViewIcon" class="btn btn-xs btn-default" ng-click="operateViewAndAddControl($index+'_viewMedicareInformation')" ng-hide="viewMedicare" tooltip data-toggle="tooltip" data-placement="left" title="View"><i class="fa fa-eye"></i></button>
}
                                    @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Edit, ViewBag.Roles, false))
{
    <button id="Medicare_Table_EditIcon" class="btn btn-xs btn-primary" ng-click="operateEditControl($index+'_editMedicareInformation',MedicareInformation)" ng-hide="editShowMedicareInformation" tooltip data-toggle="tooltip" data-placement="top" title="Edit"><i class="fa fa-edit"></i></button>
}
                                @*<button class="btn btn-xs btn-default" ng-click="operateRenewControl($index+'_renewMedicareInformation',MedicareInformation); RenewDivMI(MedicareInformation);" ng-hide="renewMedicareInformation" tooltip data-toggle="tooltip" data-placement="top" title="Renew"><i class="fa fa-repeat"></i></button>*@
                                    @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Add, ViewBag.Roles, false))
{
    <button id="Medicare_Table_RemoveIcon" class="btn btn-xs btn-danger" data-toggle="tooltip" data-placement="top" title="Remove" ng-click="initMedicareInformation(MedicareInformation)" tooltip><i class="fa fa-minus-circle"></i></button>
    <button id="addNewMedicare" ng-if="$index == MedicareInformations.length-1" class="btn btn-xs btn-success" ng-click="operateViewAndAddControl('addMedicareInformation')" tooltip data-toggle="tooltip" data-placement="right" title="Add new" ng-hide="viewMedicare|| editShowMedicareInformation || newShowMedicareInformation || $index+1!=MedicareInformations.length"><i class="fa fa-plus"></i></button>
}
                                </td>
                            </tr>
                            @if (ProfileActionValidator.IsAuthorized(ProfileActionType.View, ViewBag.Roles, false))
                        {
                                <tr ng-show="visibilityControl==($index+'_viewMedicareInformation')" class="hideData">
                                    <td colspan="5" class="editTableDataStyle">
                                        @Html.Partial("~/Areas/Profile/Views/IdentificationAndLicense/_ViewMedicareInformation.cshtml")
                                    </td>
                                </tr>
                        }
                            @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Edit, ViewBag.Roles, false))
                        {
                                <tr ng-show="visibilityControl==($index+'_editMedicareInformation')" class="hideData">
                                    <td colspan="5" id="MedicareInformationEditDiv{{$index}}" class="editTableDataStyle">
                                        <fieldset>
                                            <legend>
                                                Edit Medicare Information
                                            </legend>
                                            <div>
                                                @Html.Partial("~/Areas/Profile/Views/IdentificationAndLicense/_AddEditMedicareInformation.cshtml")
                                            </div>
                                        </fieldset>
                                    </td>
                                </tr>
                        }
                        @*<tr ng-show="visibilityControl==($index+'_renewMedicareInformation')" class="hideData">
                            <td colspan="7" id="MedicareInformationRenewDiv{{$index}}" class="editTableDataStyle">
                                <fieldset>
                                    <legend>
                                        Renew Medicare Information
                                    </legend>
                                    <div>
                                        @Html.Partial("~/Areas/Profile/Views/IdentificationAndLicense/_RenewMedicareInformation.cshtml")
                                    </div>
                                </fieldset>
                            </td>
                        </tr>*@
                        </tbody>
                    </table>
                    <div class="clearfix"></div>
                    <div class="modal fade" id="medicareWarningModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <form id="editMedicareInfo">
                                    <div class="modal-header">
                                        <button id="Medicare_Remove_Close" type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                        <h4 class="modal-title" id="myModalLabel">Warning!!!!</h4>
                                    </div>
                                    <div class="col-lg-12 text-center" ng-show="isRemoved">
                                        <div style="margin-top:2%;">
                                            <img src="~/Content/Images/ajax-loader.gif" style="width:50px;" /> Please Wait..
                                        </div>
                                    </div>
                                    <div class="modal-body" ng-show="!isRemoved">
                                        Do you really want to remove <b>{{tempReference.LicenseNumber}}</b> from your Medicare List ?
                                        <input type="hidden" name="MedicareInformationID" value="{{tempReference.MedicareInformationID}}" />
                                        <input type="hidden" name="StatusType" value="2" />
                                    </div>
                                    <div class="modal-footer">
                                        <button id="Medicare_Remove_CancelButton" type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                        <button id="Medicare_Remove_RemoveButton" type="button" class="btn btn-primary" ng-click="removeMedicareInformation(MedicareInformations)">Remove</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div ng-show="activeMessageDiv=='addedMedicare'" class="alert alert-success" role="alert">
                        <button ng-click="closeAlertMessage('')" class="close"><span>&times;</span></button>
                        <i class="fa fa-2x fa-arrow-up"></i> {{messageDesc}}
                    </div>
                    <div class="clearfix"></div>
                    <div class="form-style">
                        @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Add, ViewBag.Roles, false))
                    {
                            <fieldset ng-show="visibilityControl=='addMedicareInformation'">
                                <legend>
                                    Add Medicare Information
                                </legend>
                                <div id="newShowMedicareInformationDiv">
                                    @Html.Partial("~/Areas/Profile/Views/IdentificationAndLicense/_AddEditMedicareInformation.cshtml")
                                </div>
                            </fieldset>
                    }
                    </div>
                </div>
            </fieldset>
        </div>
        <div id="MedicareHistory">
            <fieldset ng-if="showMedicareHistoryTable">
                <legend>
                    Medicare Information History
                </legend>
                <div class="legend2 pull-right">
                    @*<button type="button" ng-hide="MedicareInformationsHistory.length < 1" class="btn btn-xs btn-primary" data-container="body" data-toggle="popover" data-placement="left" data-trigger="hover" data-content="Download" data-original-title="" title="" ng-click="downloadTableData('Profile_Licenses_MedicareInformationHistory','Medicare Information History')"><i class="fa fa-download"></i></button>*@
                    <button type="button" ng-hide="MedicareInformationsHistory.length < 1" class="btn btn-xs btn-primary" data-container="body" data-toggle="popover" popover data-placement="left" data-trigger="hover" data-content="Print" data-original-title="" title="" ng-click="printData('Profile_Licenses_MedicareInformationHistory','Medicare Information History')"><i class="fa fa-print"></i></button>
                    <button id="Medicare_History_Close" type="button" ng-click="cancelMedicareHistory()" class="btn btn-xs btn-default" data-container="body" data-toggle="popover" data-placement="left" data-trigger="hover" data-content="View History"><i class="fa fa-times text-danger"></i></button>
                </div>
                <div id="MedicareInfo" class="panel-body">
                    <table ng-hide="MedicareInformationsHistory.length > 0" class="table table-bordered table-condensed customtbodyStyle table-striped">
                        <thead>
                            <tr>
                                <td>
                                    No History Available for Medicare Information!
                                </td>
                            </tr>
                        </thead>
                    </table>
                    <table ng-hide="MedicareInformationsHistory.length < 1" class="table table-bordered table-condensed customtbodyStyle table-striped" id="Profile_Licenses_MedicareInformationHistory">
                        <thead>
                            <tr>
                                <th>Medicare Number</th>
                                <th>Issue Date</th>
                                <th>Expiration Date</th>
                                <th class="hideData">Supporting Document</th>
                                <th>Status</th>
                                <th>Deleted By</th>
                                <th>Deleted On</th>
                                <th class="hideData">Action</th>
                            </tr>
                        </thead>
                        <tbody ng-repeat="MedicareInformationHistory in MedicareInformationsHistory track by $index">
                            <tr>
                                <td ng-if="MedicareInformationHistory.LicenseNumber">{{MedicareInformationHistory.LicenseNumber}}</td>
                                <td ng-if="!MedicareInformationHistory.LicenseNumber"><i>Not Available</i></td>
                                <td ng-hide="MedicareInformationHistory.IssueDate"><i class="data-label">Not Available</i></td>
                                <td ng-show="MedicareInformationHistory.IssueDate">{{MedicareInformationHistory.IssueDate | date: "MM-dd-yyyy"}}</td>
                                <td ng-hide="MedicareInformationHistory.ExpirationDate"><i class="data-label">Not Available</i></td>
                                <td ng-show="MedicareInformationHistory.ExpirationDate">{{MedicareInformationHistory.ExpirationDate | date: "MM-dd-yyyy"}}</td>
                            
                                <td class="hideData">
                                    @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Preview, ViewBag.Roles, false))
                                {
                                        <a ng-if="MedicareInformationHistory.CertificatePath" href="@System.Configuration.ConfigurationManager.AppSettings["AppRoot"]/Document/View?path=@System.Configuration.ConfigurationManager.AppSettings["AppRoot"]{{MedicareInformationHistory.CertificatePath}}" class="pointer" target="_blank" tooltip data-toggle="tooltip" data-placement="top" title="Medicare Certificate">
                                            <i class="fa fa-file" title=""></i>
                                        </a>
                                }
                                    <i ng-if="!MedicareInformationHistory.CertificatePath">Not Available</i>
                                </td>
                                <td>{{MedicareInformationHistory.HistoryStatus}}</td>
                                <td ng-hide="MedicareInformationHistory.DeletedBy"><i class="data-label">Not Available</i></td>
                                <td ng-show="MedicareInformationHistory.DeletedBy">{{MedicareInformationHistory.DeletedBy}}</td>
                                <td ng-hide="MedicareInformationHistory.DeletedDate"><i class="data-label">Not Available</i></td>
                                <td ng-show="MedicareInformationHistory.DeletedDate">{{MedicareInformationHistory.DeletedDate }}</td>

                                <td class="hideData">
                                    @if (ProfileActionValidator.IsAuthorized(ProfileActionType.View, ViewBag.Roles, false))
{
    <button id="View_History_Medicaid_" class="btn btn-xs btn-default" ng-click="operateViewAndAddControl($index+'_viewMedicareInformationHistory')" ng-hide="viewMedicare" tooltip data-toggle="tooltip" data-placement="left" title="View"><i class="fa fa-eye"></i></button>
}
                                </td>
                            </tr>
                            @if (ProfileActionValidator.IsAuthorized(ProfileActionType.View, ViewBag.Roles, false))
                        {
                                <tr ng-show="visibilityControl==($index+'_viewMedicareInformationHistory')" class="hideData">
                                    <td colspan="8" class="editTableDataStyle">
                                        @Html.Partial("~/Areas/Profile/Views/IdentificationAndLicense/_ViewMedicareInformationHistory.cshtml")
                                    </td>
                                </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </fieldset>
        </div>
    </div>
</div>