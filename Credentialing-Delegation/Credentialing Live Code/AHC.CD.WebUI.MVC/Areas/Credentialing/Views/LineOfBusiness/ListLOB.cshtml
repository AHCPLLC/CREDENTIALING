@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section AddToHead{
    <script src="~/Scripts/Lib/Jquery/jquery-1.11.0.js"></script>
    <script src="~/Scripts/Lib/Angular/angular.min.js"></script>
    <script src="~/Scripts/Lib/Angular/angular-resource.min.js"></script>
    <script src="~/Scripts/Lib/Angular/angular-mocks.js"></script>
    <script src="~/Scripts/Lib/Angular/ng-table.js"></script>
    <script src="~/Areas/Credentialing/Scripts/LOB.js"></script>
    <link href="~/Content/Provider/ng-table.css" rel="stylesheet" />
}
<style>
    .loading-container {
        position: relative;
    }

        .loading-container .loading:before, .loading-container .loading:after {
            content: " ";
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            min-height: 50px;
            min-width: 50px;
        }

        .loading-container .loading:before {
            background-color: white;
            opacity: 0.5;
        }
</style>

<div id="page-wrapper" ng-app="planApp" ng-controller="planController" ng-cloak>
    <div class="container-fluid">

        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <ol class="breadcrumb">
                    <li>
                        <i class="fa fa-dashboard"></i>
                        <a href="@System.Configuration.ConfigurationManager.AppSettings["AppRoot"]/Dashboard/Index">Dashboard</a>
                    </li>
                    <li class="active">
                        <i class="fa fa-list"></i> Line Of Business
                    </li>
                </ol>
            </div>
        </div>
        <!-- /.row -->
        <!-- Add Provider content form div -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <a href="@System.Configuration.ConfigurationManager.AppSettings["AppRoot"]/Credentialing/LineOfBusiness/AddEdit" class="btn btn-primary btn-xs pull-right">Add New</a>
                        <h3 class="panel-title">List Of Line Of Business</h3>
                    </div>
                    <div class="panel-body">
                        <!-- Button trigger modal -->
                        <div class="col-lg-12">
                            <div class="col-lg-5 pull-left">
                                <label class="control-label small">Select Plan</label>
                                <div>
                                    <select class="form-control input-sm">
                                        <option selected disabled>-Select-</option>
                                        <option>Blue Cross Blue Shield</option>
                                        <option>Wellcare</option>
                                        <option>Freedom</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-lg-5">
                                <label class="control-label small">Select Type of Plan</label>
                                <div>
                                    <select class="form-control input-sm">
                                        <option selected disabled>-Select-</option>
                                        <option>Commercial</option>
                                        <option>Medicare</option>
                                        <option>Medicaid</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-lg-2">
                                <br />
                                <button class="btn btn-primary">Search</button>
                            </div>
                        </div>


                        @*<button ng-click="tableParams.reload()" class="btn btn-default btn-sm pull-right">Reload</button>
                            <span class="pull-right">&nbsp;&nbsp;&nbsp;</span>
                            <button ng-click="tableParams.sorting({})" class="btn btn-default btn-sm pull-right">Clear sorting</button>*@
                        <div class="clearfix"></div>
                        <br />
                        <br />
                        <div loading-container="tableParams.settings().$loading">
                            <table ng-table="tableParams" show-filter="true" class="table table-striped table-bordered table-condensed">
                                <tr ng-repeat="plan in $data">
                                    <td data-title="'Line Of Business'" filter="{ 'LOB': 'text' }" sortable="'LOB'">
                                        {{plan.LOB}}
                                    </td>
                                    <td data-title="'Line Of Business Code'" filter="{ 'Code': 'text' }" sortable="'Code'">
                                        {{plan.Code}}
                                    </td>
                                    <td data-title="'EmailID'" filter="{ 'EmailId': 'text' }" sortable="'EmailId'">
                                        {{plan.EmailId}}
                                    </td>
                                    <td data-title="'Phone'" filter="{ 'Phone': 'text' }" sortable="'Phone'">
                                        {{plan.Phone}}
                                    </td>
                                    <td data-title="'Fax'" filter="{ 'Fax': 'text' }" sortable="'Fax'">
                                        {{plan.Fax}}
                                    </td>
                                    <td data-title="'Action'">
                                        <button class="btn btn-xs btn-danger" tooltip data-toggle="tooltip" data-placement="left" title="View"><i class="fa fa-minus"></i></button>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->
