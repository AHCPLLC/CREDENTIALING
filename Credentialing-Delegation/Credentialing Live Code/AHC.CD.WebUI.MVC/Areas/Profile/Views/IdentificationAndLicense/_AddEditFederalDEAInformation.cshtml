@model AHC.CD.WebUI.MVC.Areas.Profile.Models.IdentificationAndLicenses.FederalDEAInformationViewModel
@using AHC.CD.WebUI.MVC.Areas.Profile.Attributes;
<script src="~/Scripts/Lib/Bootstrap/jasny-bootstrap.js"></script>
<link href="~/Content/SharedCss/jasny-bootstrap.css" rel="stylesheet" />

<div>
    <form class="FederalDEALicenseForm">
        <div class="form-style">
            <div id="licensedea" class="panel-body zero-padding-left-right-div">
                <div class="zero-padding-left-right-div">
                    <div class="col-md-12 zero-padding-left-right-div">
                        <span ng-if="tempObject.FederalDEAInformationID">
                            @Html.HiddenFor(model => model.FederalDEAInformationID, new { ng_value = "tempObject.FederalDEAInformationID" })
                        </span>
                        @Html.HiddenFor(model => model.StatusType, new { ng_value = (int)@AHC.CD.Entities.MasterData.Enums.StatusType.Active, data_ng_model = "tempObject.StatusType" })
                        <div class="form-group col-md-3">
                            @Html.LabelFor(model => model.DEANumber, new { @class = "control-label small" })
                            <div>
                                @Html.TextBoxFor(model => model.DEANumber, new { @class = "form-control input-sm", data_ng_model = "tempObject.DEANumber" })
                            </div>
                            @Html.ValidationMessageFor(model => model.DEANumber, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-3">
                            @Html.LabelFor(model => model.StateOfReg, new { @class = "control-label small" })
                            <div>
                                <input class="form-control input-sm" id="EnterState" data-ng-model="tempObject.StateOfReg" name="StateOfReg" placeholder="select state" @*data-val="true" data-val-required="Please select the State of Registration"*@ data-searchdropdown="searchdropdown" />
                                <span class="text-danger" ng-if="Deastateerrormsg">Please enter State of Registration *.</span>
                                <div class="ProviderTypeSelectAutoList1 popover fade bottom in" role="tooltip">
                                    <table class="table table-striped table-bordered table-hover table-condensed" style="margin-bottom: 0px;">
                                        <tbody>
                                            <tr ng-repeat="state in filteredState = (States | filter:tempObject.StateOfReg)" ng-click="hideDiv(); tempObject.StateOfReg = state" class="pointer">
                                                <td>{{state}}</td>
                                            </tr>
                                            <tr ng-if="States.length == 0">
                                                <td>No data..... </td>
                                            </tr>
                                            <tr ng-if="States.length > 0 && filteredState.length == 0">
                                                  <td>State not found..... </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                                @*@Html.ValidationMessageFor(model => model.StateOfReg, "", new { @class = "text-danger" })*@
                            </div>
                        </div>
                        <div class="form-group col-md-3">
                            @Html.LabelFor(model => model.IssueDate, new { @class = "control-label small" })
                            <div>
                                @Html.TextBoxFor(model => model.IssueDate, new { data_val_date = "Please enter date in mm/dd/yyyy format.", data_date_format = "MM/dd/yyyy", data_bs_datepicker = "bs-datepicker", @class = "form-control input-sm", data_ng_model = "tempObject.IssueDate", placeholder = "mm/dd/yyyy", data_ng_change = "tempObject.ExpiryDate = autoFillExpiryDate(tempObject.FederalDEAInformationID, tempObject.IssueDate, tempObject.ExpiryDate)" })
                            </div>
                            @Html.ValidationMessageFor(model => model.IssueDate, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group col-md-3">
                            @Html.LabelFor(model => model.ExpiryDate, new { @class = "control-label small" })
                            <div>
                                @Html.TextBoxFor(model => model.ExpiryDate, new { data_val_date = "Please enter date in mm/dd/yyyy format.", data_date_format = "MM/dd/yyyy", data_bs_datepicker = "bs-datepicker", @class = "form-control input-sm", data_ng_model = "tempObject.ExpiryDate", placeholder = "mm/dd/yyyy" })
                            </div>
                            @Html.ValidationMessageFor(model => model.ExpiryDate, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="clearfix"></div>
                    <div class="form-group col-md-12">
                        <table class="col-md-12 table table-bordered table-condensed customtbodyStyle table-striped">
                            <thead>
                                <tr>
                                    <th>Schedule</th>
                                    <th>Schedule Type</th>
                                    <th>Eligibility (Choose 'YES' for the Schedules applicable)</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="sl in Schedules track by $index">
                                    <td>
                                        <label>{{sl.ScheduleTitle}}</label>
                                    </td>
                                    <td>
                                        <label>{{sl.ScheduleTypeTitle}}</label>
                                    </td>
                                    <td>
                                        <span ng-if="!tempObject.DEAScheduleInfoes[$index].YesNoOption" ng-init="tempObject.DEAScheduleInfoes[$index].YesNoOption = 2"></span>
                                        <span ng-if="tempObject.FederalDEAInformationID">
                                            <input type="hidden" ng-value="tempObject.DEAScheduleInfoes[$index].DEAScheduleInfoID" name="DEAScheduleInfoes[{{$index}}].DEAScheduleInfoID">
                                        </span>
                                        <input type="hidden" value="{{sl.DEAScheduleID}}" data-ng-model="tempObject.DEAScheduleInfoes[$index].DEAScheduleID" name="DEAScheduleInfoes[{{$index}}].DEAScheduleID">
                                        @foreach (var value in Enum.GetValues(typeof(AHC.CD.Entities.MasterData.Enums.YesNoOption)))
                                        {
                                            <label class="radio-inline">
                                                <input id="FederalDEA_Add_Eligibility" type="radio" name="DEAScheduleInfoes[{{$index}}].YesNoOption" data-ng-model="tempObject.DEAScheduleInfoes[$index].YesNoOption" value="@((int)value)" />@value.ToString()
                                            </label>
                                        }
                                        &nbsp;
                                        <span class="field-validation-valid text-danger" data-valmsg-for="DEAScheduleInfoes[{{$index}}].YesNoOption" data-valmsg-replace="true"></span>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        @*   @Html.ValidationMessageFor(model => model.DEAScheduleInfoes, "", new { @class = "text-danger" })*@


                    </div>
                    <div class="clearfix"></div>
                    <div class="col-md-12 zero-padding-left-right-div">
                        <div class="form-group col-md-3">
                            @Html.LabelFor(model => model.GoodStandingYesNoOption, new { @class = "control-label small" })
                            <div>
                                @foreach (var value in Enum.GetValues(typeof(AHC.CD.Entities.MasterData.Enums.YesNoOption)))
                                {
                                <label class="radio-inline">
                                    @Html.RadioButtonFor(model => model.GoodStandingYesNoOption, (int)value, new { data_ng_model = "tempObject.GoodStandingYesNoOption" }) @value.ToString()
                                </label>
                                }
                            </div>
                            @Html.ValidationMessageFor(model => model.GoodStandingYesNoOption, "", new { @class = "text-danger" })


                        </div>
                        <div class="form-group col-md-9 zero-padding-left-right-div">
                            <div ng-class="{'col-lg-11':tempObject.DEALicenceCertPath,'col-lg-12':!tempObject.DEALicenceCertPath}">
                                <div class="fileinput fileinput-new input-group" data-provides="fileinput">
                                    <div class="form-control jancyFileWrapTexts" data-trigger="fileinput">
                                        <i class="glyphicon glyphicon-file fileinput-exists"></i>
                                        <span class="fileinput-filename wraptext"></span>
                                    </div>
                                    <span class="input-group-addon btn btn-default btn-file">
                                        <span class="fileinput-new small">Select Federal DEA License Document</span>
                                        <span class="fileinput-exists">Change</span>
                                        @Html.TextBoxFor(model => model.DEALicenceCertFile, new { name = "DEALicenceCertFile", ng_data_model = "tempObject.DEALicenceCertFile", type = "file", onchange = "angular.element(this).scope().setFiles(this)" })
                                        @* <input type="file" name="DEALicenceCertFile" ng-model="tempObject.DEALicenceCertFile" autocomplete="off">*@
                                    </span>
                                    <a href="#" class="input-group-addon btn btn-default fileinput-exists" data-dismiss="fileinput">Remove</a>
                                </div>
                                @Html.HiddenFor(model => model.DEALicenceCertPath, new { ng_value = "tempObject.DEALicenceCertPath" })
                                @Html.ValidationMessageFor(model => model.DEALicenceCertFile, "", new { @class = "text-danger" })
                            </div>
                            @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Preview, ViewBag.Roles, false))
                            {
                            <div ng-show="tempObject.DEALicenceCertPath!=null" class="col-lg-1">
                                <a href="@System.Configuration.ConfigurationManager.AppSettings["AppRoot"]/Document/View?path=@System.Configuration.ConfigurationManager.AppSettings["AppRoot"]{{tempObject.DEALicenceCertPath}}" target="_blank"><i class="fa fa-2x fa-file"></i></a>
                            </div>
                            }
                        </div>

                    </div>
                    <div ng-show="activeMessageDiv=='DEAError'" class="col-lg-12">
                        <div class="alert alert-danger" role="alert">
                            <span class="pull-right" ng-click="DEAError=''"><i class="fa fa-times"></i></span>
                            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                            <span class="sr-only">Error:</span>
                            Error List : <br />
                            <span ng-repeat="err in DEAError track by $index">{{err}}</span>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="col-md-12 zero-padding-left-right-div">
                        <div class="col-md-12">

                            <button id="FederalDEA_Add_CancelButton" type="button" class="btn btn-warning btn-sm" ng-click="operateCancelControl(''); resetDates();DEAError='';reseterrormessages(); ">Cancel</button>
                            <button id="FederalDEA_Add_AddButton" type="submit" class="btn btn-primary btn-sm pull-right" ng-click="saveFederalDEALicense(tempObject,$index)">{{buttonLabel}}</button>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </form>
</div>
