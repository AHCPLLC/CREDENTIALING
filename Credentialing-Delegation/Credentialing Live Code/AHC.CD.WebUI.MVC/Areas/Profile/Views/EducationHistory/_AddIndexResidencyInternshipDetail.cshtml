@using AHC.CD.WebUI.MVC.Areas.Profile.Attributes;

<fieldset ng-show="visibilityControl==($index+'_editresidencyInternshipViewModel') || visibilityControl==($index+'_viewresidencyInternshipViewModel') ">
    <legend>
        Residency/Internship/Fellowship Details
    </legend>
    <div class="legend2 pull-right">
        <button type="button" class="btn btn-xs btn-default" data-container="body" popover data-toggle="popover" data-placement="left" data-trigger="hover" data-content="*List each department separately , if applicable"><i class="fa fa-question"></i></button>
    </div>    
    <div class="col-lg-12 zero-padding-left-right-div">
        <div>
            <div class="clearfix"></div><br />
            <table ng-hide="tempObject.ResidencyInternshipDetails.length > 0 || visibilitySecondControl =='addresidency'" class="table table-bordered table-condensed customtbodyStyle table-striped">
                <thead>
                    <tr>
                        <td>
                            No Data Available for Residency/Internship/Fellowship Details! Please click on
                            @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Add, ViewBag.Roles, false))
                            {
                                <button class="btn btn-xs btn-success" ng-click="operateSecondViewAndAddControl('addresidency')"><i class="fa fa-plus"></i></button>
                            }
                            to add new Residency/Internship/Fellowship Information
                        </td>
                    </tr>
                </thead>
            </table>

            <table ng-show="tempObject.ResidencyInternshipDetails.length > 0" class="table table-bordered table-condensed customtbodyStyle">
                <thead>
                    <tr>
                        <th>Program Type</th>
                        <th>Specialty</th>
                        <th>Department</th>                       
                        <th>Supporting Document</th>
                        <th>Primary</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody ng-repeat="residency in tempObject.ResidencyInternshipDetails track by $index">
                    <tr ng-class="{'1':'isprimary', '2':''}[residency.PreferenceType]">
                        <td ng-if="residency.ResidencyInternshipProgramType != 3" class="wrap-words">{{residency.ProgramType}}</td>
                        <td ng-if="residency.ResidencyInternshipProgramType == 3" class="wrap-words">Residency</td>
                        <td class="wrap-words">{{residency.Specialty.Name}}</td>
                        <td ng-if="residency.Department" class="wrap-words">{{residency.Department}}</td>
                        <td ng-if="!residency.Department" class="wrap-words"><i>Not Available</i></td>                        
                        <td ng-if="residency.DocumentPath" class="wrap-words">
                            @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Preview, ViewBag.Roles, false))
{
    <a href="@System.Configuration.ConfigurationManager.AppSettings["AppRoot"]/Document/View?path=@System.Configuration.ConfigurationManager.AppSettings["AppRoot"]{{residency.DocumentPath}}" ta target="_blank" title="{{residency.DocumentPath}}"><i class="fa fa-file" title=""></i></a>
}
                        </td>
                        <td ng-if="!residency.DocumentPath" class="wrap-words"><i>Not Available</i></td>
                        <td class="wrap-words"><i class="data-label " ng-class="{'1':'fa fa-check', '2':'fa fa-times'}[residency.PreferenceType]"></i></td>
                        <td class="wrap-words">
                            @if (ProfileActionValidator.IsAuthorized(ProfileActionType.View, ViewBag.Roles, false))
                            {
                                <button tooltip data-toggle="tooltip" data-placement="left" title="View" class="btn btn-xs btn-default" ng-click="operateSecondViewAndAddControl($index+'_viewresidency')"><i class=" fa fa-eye"></i></button>
                            }

                            @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Edit, ViewBag.Roles, false))
                            {
                                <button tooltip data-toggle="tooltip" data-placement="top" title="Edit" class="btn btn-xs btn-primary" ng-click="operateSecondEditControl($index+'_editresidency',residency)"><i class="fa fa-edit"></i></button>
                            }

                            @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Add, ViewBag.Roles, false))
                            {
                                <button tooltip data-toggle="tooltip" data-placement="right" title="Add New" ng-hide="$index+1!=tempObject.ResidencyInternshipDetails.length" ng-click="operateSecondViewAndAddControl('addresidency')" class="btn btn-xs btn-success"><i class="fa fa-plus"></i></button>
                            }

                        </td>
                    </tr>
                    @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Edit, ViewBag.Roles, false))
                    {
                        <tr ng-show="visibilitySecondControl==($index+'_editresidency')">
                            <td colspan="6" id="residencyEditDiv{{residency.ResidencyInternshipDetailID}}" class="editTableDataStyle">
                                <fieldset>
                                    <legend>
                                       Update Residency/Internship/Fellowship Details
                                    </legend>
                                    @Html.Partial("~/Areas/Profile/Views/EducationHistory/_AddEditResidencyInternshipFellowship.cshtml")
                                </fieldset>
                            </td>
                        </tr>
                    }

                    @if (ProfileActionValidator.IsAuthorized(ProfileActionType.View, ViewBag.Roles, false))
                    {
                        <tr ng-show="visibilitySecondControl==($index+'_viewresidency')">
                            <td colspan="6" id="{{$index}}" class="editTableDataStyle">
                                <fieldset>
                                    <legend>
                                        View Residency/Internship/Fellowship Details
                                    </legend>
                                    @Html.Partial("~/Areas/Profile/Views/EducationHistory/_ViewResidencyInternshipFellowship.cshtml")
                                </fieldset>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>

        </div>
        @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Add, ViewBag.Roles, false))
        {
            <div ng-show="visibilitySecondControl=='addresidency'">
                
                <div id="newResidencyDivForAdd{{residencyInternshipViewModel.TrainingDetailID}}">
                    <fieldset>
                        <legend>
                            Add Residency/Internship/Fellowship Details
                        </legend>
                        @Html.Partial("~/Areas/Profile/Views/EducationHistory/_AddEditResidencyInternshipFellowship.cshtml")
                        </fieldset>
                </div>
            </div>
        }
        
        <div ng-show="activeMessageDiv=='addedNewResidencyDetails'" class="alert alert-success" role="alert">
            <button ng-click="closeAlertMessage('')" class="close"><span>&times;</span></button>
            <i class="fa fa-2x fa-arrow-up"></i> {{messageDesc}}
        </div>  
    </div>
</fieldset>

<div ng-show="ErrorInProgramDetails" class="col-lg-12">
    <div class="alert alert-danger" role="alert">
        <span class="pull-right" ng-click="ErrorInProgramDetails=false"><i class="fa fa-times"></i></span>
        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
        <span class="sr-only">Error:</span>
        Error Lists : <br />
        <span ng-repeat="err in ProgramDetailsErrorList track by $index">{{err}}</span>
    </div>
</div>