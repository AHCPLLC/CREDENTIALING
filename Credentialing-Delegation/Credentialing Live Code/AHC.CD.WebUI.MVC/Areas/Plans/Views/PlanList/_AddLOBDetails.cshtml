<div class="col-lg-12  form-style">
    <form id="LOBEdit{{$index}}">
        <div class="col-lg-6">
            <label class="col-lg-4 control-label small"> Select LOB :</label>
            <input type="hidden" name="PlanLOBs[{{$index}}].LOBID" ng-value="tempObject1.SELECTEDLOB.LOBID" />
            <select class="form-control input-sm" ng-options="lob.LOBName for lob in tempObject1.LOBSDATA.LOBs track by lob.LOBID" ng-model="tempObject1.SELECTEDLOB"></select>
        </div>
        <div class="col-lg-1"></div>
        <div class="col-lg-4">
            <label class="col-lg-12 control-label small"> Re-Credentialing Duration</label>
            <span class="input-group" style="width:94%">
                <input class="form-control input-sm" type="text" name="PlanLOBs[{{$index}}].ReCredentialingDuration" ng-value="tempObject1.SELECTEDLOB.ReCredentialingDuration" data-val-required="Please enter Re-Credentialing Duration." data-val-regex="Please enter valid Re-Credentialing Duration." data-val-regex-pattern="^(0|[1-9][0-9]*)$" data-val="true" data-ng-model="tempObject1.ReCredentialingDuration" />
                <span style="background-color: #337ab7;color:white;font-size:small" class="input-group-addon">Years</span>
            </span>
            <div class="clearfix"></div>
            <div>
                <span class="field-validation-valid text-danger" data-valmsg-for="PlanLOBs[{{$index}}].ReCredentialingDuration" data-valmsg-replace="true"></span>
            </div>
        </div>
        <div class="clearfix"></div>
        <br />
        @Html.Partial("_AddSubPlan")

        @Html.Partial("_AddLOBContactDetails")

        @Html.Partial("_AddLOBAddressDetails")

        <br />
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 form-group">
                <button type="button" class="btn btn-sm btn-success pull-right" ng-click="SaveLOB('LOBEdit'+$index,tempObject1);">Save LOB</button>
                <button type="button" class="btn btn-sm btn-warning" ng-click="CancelLOBEdit()">Cancel</button>
            </div>
        </div>
    </form>
</div>