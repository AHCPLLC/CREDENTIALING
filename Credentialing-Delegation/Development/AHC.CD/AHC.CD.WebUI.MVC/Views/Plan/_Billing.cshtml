    <div class="panel panel-default">
        <div class="panel-heading" role="tab" id="BillHeading">
            <a data-toggle="collapse" data-parent="#accordionBill" href="#bill" aria-expanded="false" aria-controls="bill">
                Billing/Remit Location
                <span class="collapsed pull-right">
                    <span class="glyphicon glyphicon-plus"></span>
                </span>
            </a>
        </div>
        <div id="bill" class="panel-collapse collapse" role="tabpanel" aria-labelledby="BillHeading">
            <div class="panel-body table-bordered">
                <div class="form-group">
                    <div class="clearfix"></div>
                    <div class="col-md-12">                      
                        <div class="col-md-4">
                            <label class="control-label small">Remit Name</label>
                            <input type="text" class="form-control input-sm" />
                        </div>
                        <div class="col-md-4">
                            <label class="control-label small">Billing Contacts</label>
                            <input type="text" class="form-control input-sm" />
                        </div>
                        <div class="col-md-4">
                            <label class="control-label small">Billing Street Address</label>
                            <input type="text" class="form-control input-sm" />
                        </div>
                        <div class="col-lg-4">
                            <label class="control-label small">City *</label>
                            <select class="form-control input-sm">
                                <option>Putnam</option>
                                <option>Raipur</option>
                            </select>
                        </div>
                        <div class="col-lg-4">
                            <label class="control-label small">State *</label>
                            <select class="form-control input-sm">
                                <option>Florida</option>
                                <option>Alaska</option>
                            </select>
                        </div>   
                        <div class="col-md-4">
                            <label class="control-label small">Zip</label>
                            <input type="text" class="form-control input-sm" />
                        </div> 
                        <div class="form-group col-md-4">
                            <label for="MobileNo" class="control-label small">Billing Phone</label>
                            <div>
                                <div class="input-group">
                                    <div class="input-group-btn">
                                        <button type="button" class="btn btn-default btn-sm"><span class="caret"></span></button>
                                    </div>
                                    <div class="popover fade bottom in" role="tooltip" id="countryDailCodeContainer">
                                        <div class="arrow"></div>
                                        <h3 class="popover-title">Select Country Dial Code</h3>
                                        <div class="popover-content">
                                            <select id="ContactContryCode">
                                                <option>+91</option>
                                            </select>
                                        </div>
                                    </div>
                                    <input type="text" name="PhoneNo" class="form-control input-sm" id="PhoneNo" placeholder="Phone Number" required>
                                </div>

                            </div>
                        </div> 
                        <div class="form-group col-md-4">
                            <label for="MobileNo" class="control-label small">Billing Fax</label>
                            <div>
                                <div class="input-group">
                                    <div class="input-group-btn">
                                        <button type="button" class="btn btn-default btn-sm"><span class="caret"></span></button>
                                    </div>
                                    <div class="popover fade bottom in" role="tooltip" id="countryDailCodeContainer">
                                        <div class="arrow"></div>
                                        <h3 class="popover-title">Select Country Dial Code</h3>
                                        <div class="popover-content">
                                            <select id="ContactContryCode">
                                                <option>+91</option>
                                            </select>
                                        </div>
                                    </div>
                                    <input type="text" name="PhoneNo" class="form-control input-sm" id="PhoneNo" placeholder="Fax Number" required>
                                </div>

                            </div>
                        </div>
                        <div class="col-md-4">
                            <label class="control-label small">Billing Email Address</label>
                            <input type="text" class="form-control input-sm" />
                        </div>                  
                    </div>
                    <div class="clearfix"></div>
                    <br />
                    <div class="col-md-12 panel-footer">
                        <div class="col-md-12">
                            <button class="btn btn-success pull-right">Cancel</button>
                            <button class="btn btn-warning">Save</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

