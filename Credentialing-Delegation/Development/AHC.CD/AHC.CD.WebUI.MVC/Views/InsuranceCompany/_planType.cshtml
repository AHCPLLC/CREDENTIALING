
<script>
    $(document).ready(function () {
        $('.planTypeAddBtn').click(addEditPlanType);
        $('.planTypeCancel').click(cancelPlanType);
    });

    function addEditPlanType() {
        $("#planTypeList").slideUp();
        $(".addEditPlanType").slideDown();
    }

    function cancelPlanType() {
        $("#planTypeList").slideDown();
        $(".addEditPlanType").slideUp();
    }
</script>


<div class="panel-body">

    <div class="form-style col-lg-12" id="planTypeList">
        <fieldset>
            <legend>
                Plan Type List
            </legend>
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-lg-4">
                        <button class="btn btn-primary btn-xs planTypeAddBtn">Add Plan Type</button>
                    </div>
                    <div class="col-lg-6 pull-right">
                        <input type="text" class="form-control input-sm" id="searchForm" placeholder="search">
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
            <br />

            <table class="table table-hover">
                <thead class="bg-gray">
                    <tr>
                        <th>Code</th>
                        <th>Title</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Code001</td>

                        <td>MEDICARE RISK</td>
                        <td style="color:green">Active</td>
                        <td><button class="btn btn-xs btn-primary planTypeAddBtn"><i class="fa fa-edit"></i></button></td>
                    </tr>
                    <tr>
                        <td>Code002</td>

                        <td>MEDICARE LOB</td>
                        <td style="color:red">Deactive</td>
                        <td><button class="btn btn-xs btn-primary planTypeAddBtn"><i class="fa fa-edit"></i></button></td>
                    </tr>

                </tbody>
            </table>

            <div class="col-lg-12">
                @Html.Partial("_pagination")
            </div>
        </fieldset>
    </div>
    <div class="form-style col-lg-12 addEditPlanType" style="display:none;">
        <fieldset>
            <legend>
                Add Plan Type
            </legend>
            <div class="clearfix"></div>
            <br />
            <div class="col-lg-12 ">
                <div class="col-lg-6 form-group">
                    <label class="control-label small">Code</label>
                    <input type="text" class="form-control input-sm" id="planCode" placeholder="plan code">
                </div>

                <div class="col-lg-6 form-group">
                    <label class="control-label small">Title</label>
                    <input type="text" class="form-control input-sm" id="planTitle" placeholder="plan title">
                </div>
            </div>
            <div class="col-lg-12">


                <div class="col-lg-6 form-group">
                    <label class="control-label small">Status</label>
                    <select class="form-control input-sm">
                        <option>Select Status</option>
                        <option style="color:green">Active</option>
                        <option style="color:red">Deactive</option>
                        <option style="color:blue">Draft</option>
                    </select>
                </div>
                <div class="col-lg-6 form-group">
                    <label class="control-label small">Decription</label>
                    <textarea class="form-control input-sm" id="planTitle" placeholder="Description about the plan"></textarea>
                </div>
            </div>

            <div class="col-md-12 form-group panel-footer">
                <button type="button" class="btn btn-warning btn-sm planTypeCancel">Cancel</button>
                <button type="button" class="btn btn-primary btn-sm pull-right planTypeCancel">Add</button>
            </div>

        </fieldset>
    </div>
</div>
