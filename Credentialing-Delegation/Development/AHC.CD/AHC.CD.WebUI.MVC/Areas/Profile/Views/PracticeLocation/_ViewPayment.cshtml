@model AHC.CD.WebUI.MVC.Areas.Profile.Models.PracticeLocationInformation.PracticePaymentAndRemittanceViewModel

<div class="form-style" ng-if="visibilitySecondControl != 'PaymentRemittanceEdit' && UpdateHistorySectionVisibility !='PaymentHistory'">
    <fieldset class="wrap-words">
        <legend>
            Payment and Remittance
        </legend>
        <div ng-if="!PaymentRemittanceEdit && PracticeLocationDetail.PaymentAndRemittance != null" class="legend2 pull-right">
            <button id="Edit_PaymentandRemittance" ng-click="PaymentRemittanceEdit=true; operateSecondEditControl('PaymentRemittanceEdit', PracticeLocationDetail.PaymentAndRemittance);TemporaryDataForPayment(PracticeLocationDetail.PaymentAndRemittance)" class="btn btn-xs btn-primary" tooltip data-toggle="tooltip" data-placement="top" title="Edit"><i class="fa fa-edit"></i></button>
            <button ng-click="sectionWiseVisibilityControlForUpdateHistory('PaymentHistory');OperateUpdateHistory((PracticeLocationDetail.PaymentAndRemittance.PracticePaymentAndRemittanceID),'PracticePaymentAndRemittanceID');" class="btn btn-xs btn-warning" tooltip data-toggle="tooltip" data-placement="top" title="Update History"><i class="fa fa-history"></i></button>
        </div>
        <table ng-show="PracticeLocationDetail.PaymentAndRemittance == null && visibilityControl != 'PaymentRemittanceEdit' " class="table table-bordered table-condensed customtbodyStyle table-striped">
            <thead>
                <tr>
                    <td>
                        No Data Available for Payment and Remittance!
                        <span>Please click on <button id="Add_PaymentandRemittance" class="btn btn-xs btn-success" ng-click="operateSecondViewAndAddControl('PaymentRemittanceEdit')" data-toggle="tooltip" data-placement="top" title="Add New" id="noDataAddNewPracticeInterest"><i class="fa fa-plus"></i></button> to add new Payment and Remittance information.</span>
                    </td>
                </tr>
            </thead>
        </table>
        <div class="form-group" ng-if="PracticeLocationDetail.PaymentAndRemittance">
            <div class="col-md-12">
                <div class="form-group col-md-3">
                    @Html.LabelFor(model => model.ElectronicBillingCapabilityYesNoOption, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i class="data-label">{{PracticeLocationDetail.PaymentAndRemittance.ElectronicBillingCapability || 'Not Available'}}</i>
                    </div>
                </div>
                <div class="form-group col-md-3">
                    @Html.LabelFor(model => model.BillingDepartment, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i class="data-label">{{PracticeLocationDetail.PaymentAndRemittance.BillingDepartment || 'Not Available'}}</i>
                    </div>
                </div>

                <div class="col-lg-3 form-group">
                    @Html.LabelFor(model => model.CheckPayableTo, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i class="data-label">{{PracticeLocationDetail.PaymentAndRemittance.CheckPayableTo || 'Not Available'}}</i>
                    </div>
                </div>
                <div class="col-lg-3 form-group">
                    @Html.LabelFor(model => model.Office, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i class="data-label">{{PracticeLocationDetail.PaymentAndRemittance.Office || 'Not Available'}}</i>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="col-lg-3 form-group">
                    @Html.LabelFor(model => model.PaymentAndRemittancePerson.FirstName, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i class="data-label">{{PracticeLocationDetail.PaymentAndRemittance.PaymentAndRemittancePerson.FirstName || 'Not Available'}}</i>
                    </div>
                </div>
                <div class="col-lg-3 form-group">
                    @Html.LabelFor(model => model.PaymentAndRemittancePerson.MiddleName, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i class="data-label">{{PracticeLocationDetail.PaymentAndRemittance.PaymentAndRemittancePerson.MiddleName || 'Not Available'}}</i>
                    </div>
                </div>
                <div class="col-lg-3 form-group">
                    @Html.LabelFor(model => model.PaymentAndRemittancePerson.LastName, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i class="data-label">{{PracticeLocationDetail.PaymentAndRemittance.PaymentAndRemittancePerson.LastName || 'Not Available'}}</i>
                    </div>
                </div>
                <div class="form-group col-md-3">
                    @Html.LabelFor(model => model.PaymentAndRemittancePerson.Street, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i class="data-label">{{PracticeLocationDetail.PaymentAndRemittance.PaymentAndRemittancePerson.Street || 'Not Available'}}</i>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group col-md-3">
                    @Html.LabelFor(model => model.PaymentAndRemittancePerson.Building, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i class="data-label">{{PracticeLocationDetail.PaymentAndRemittance.PaymentAndRemittancePerson.Building || 'Not Available'}}</i>
                    </div>
                </div>
                <div class="form-group col-md-3">
                    @Html.LabelFor(model => model.PaymentAndRemittancePerson.City, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i class="data-label">{{PracticeLocationDetail.PaymentAndRemittance.PaymentAndRemittancePerson.City || 'Not Available'}}</i>
                    </div>
                </div>
                <div class="col-lg-3 form-group">
                    @Html.LabelFor(model => model.PaymentAndRemittancePerson.State, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i class="data-label">{{PracticeLocationDetail.PaymentAndRemittance.PaymentAndRemittancePerson.State || 'Not Available'}}</i>
                    </div>
                </div>
                <div class="form-group col-md-3">
                    @Html.LabelFor(model => model.PaymentAndRemittancePerson.ZipCode, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i class="data-label">{{PracticeLocationDetail.PaymentAndRemittance.PaymentAndRemittancePerson.ZipCode || 'Not Available'}}</i>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="col-lg-3 form-group">
                    @Html.LabelFor(model => model.PaymentAndRemittancePerson.Country, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i class="data-label">{{PracticeLocationDetail.PaymentAndRemittance.PaymentAndRemittancePerson.Country || 'Not Available'}}</i>
                    </div>
                </div>
                <div class="col-lg-3 form-group">
                    @Html.LabelFor(model => model.PaymentAndRemittancePerson.County, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i class="data-label">{{PracticeLocationDetail.PaymentAndRemittance.PaymentAndRemittancePerson.County || 'Not Available'}}</i>
                    </div>
                </div>
                <div class="form-group col-md-3">
                    @Html.LabelFor(model => model.PaymentAndRemittancePerson.Telephone, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        @*<i class="data-label">{{PracticeLocationDetail.PaymentAndRemittance.PaymentAndRemittancePerson.CountryCodeTelephone || 'Not Available'}} - {{PracticeLocationDetail.PaymentAndRemittance.PaymentAndRemittancePerson.Telephone || 'Not Available'}}</i>*@
                        <i ng-if="PracticeLocationDetail.PaymentAndRemittance.PaymentAndRemittancePerson.Telephone " class="data-label">{{PracticeLocationDetail.PaymentAndRemittance.PaymentAndRemittancePerson.CountryCodeTelephone }}-{{PracticeLocationDetail.PaymentAndRemittance.PaymentAndRemittancePerson.Telephone }}</i>
                        <i ng-if="!PracticeLocationDetail.PaymentAndRemittance.PaymentAndRemittancePerson.Telephone " class="data-label">Not Available</i>
                    </div>
                </div>

                <div class="form-group col-md-3">
                    @Html.LabelFor(model => model.PaymentAndRemittancePerson.Fax, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        @*<i class="data-label">{{PracticeLocationDetail.PaymentAndRemittance.PaymentAndRemittancePerson.CountryCodeFax || 'Not Available'}} - {{PracticeLocationDetail.PaymentAndRemittance.PaymentAndRemittancePerson.Fax || 'Not Available'}}</i>*@
                        <i ng-if="PracticeLocationDetail.PaymentAndRemittance.PaymentAndRemittancePerson.Fax " class="data-label">{{PracticeLocationDetail.PaymentAndRemittance.PaymentAndRemittancePerson.CountryCodeFax }}-{{PracticeLocationDetail.PaymentAndRemittance.PaymentAndRemittancePerson.Fax}}</i>
                        <i ng-if="!PracticeLocationDetail.PaymentAndRemittance.PaymentAndRemittancePerson.Fax " class="data-label">Not Available</i>
                    </div>
                </div>

                <div class="form-group col-md-3">
                    @Html.LabelFor(model => model.PaymentAndRemittancePerson.EmailAddress, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i class="data-label">{{PracticeLocationDetail.PaymentAndRemittance.PaymentAndRemittancePerson.EmailAddress || 'Not Available'}}</i>
                    </div>
                </div>

            </div>
        </div>
        <div class="clearfix"></div>
        <div ng-show="activeMessageDiv=='paymentSuccessMsg'" class="alert alert-success" role="alert">
            <button ng-click="closeAlertMessage('')" class="close"><span>&times;</span></button>
            {{messageDesc}}
        </div>
    </fieldset>
</div>

@*Update History button for Payment*@
<div ng-if="UpdateHistorySectionVisibility =='PaymentHistory'">
    <div>
        <fieldset>
            <legend>
                Payment & Remittance History
            </legend>
            @Html.Partial("~/Areas/Profile/Views/MasterProfile/_ProfileUpdateHistory.cshtml")
        </fieldset>
    </div>
</div>