<div class="col-lg-12 zero-padding-left-right-div">
    <table ng-hide="UpdateHistory.length > 0" class="table table-bordered table-condensed customtbodyStyle table-striped">
        <thead>
            <tr>
                <td>
                    No Update History Available!
                </td>
            </tr>
        </thead>
    </table>
    <table ng-hide="UpdateHistory.length <= 0" class="table table-bordered table-condensed customtbodyStyle">
        <thead>
            <tr>
                <th>Updated By</th>
                <th>Updated On</th>
                <th>Updated Fields</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody ng-repeat="history in disclosureHistoryData track by $index">
            <tr>
                <td class="col-lg-3 wrap-words"><i class="data-label">{{history.UpdatedBy}}</i></td>
                <td class="col-lg-1 wrap-words"><i class="data-label">{{history.UpdatedDate}}</i></td>
                <td class="col-lg-4 wrap-words"><i class="control-label" ng-repeat="(key,value) in history.updatedData track by $index"><span ng-if="$index>0">,</span>{{key}}<span ng-if=" $index != history.UpdatedFieldNames.length-1"></span></i></td>
                <td class="col-lg-1 wrap-words"><button class="btn btn-xs btn-default" ng-click="showUpdateHistoryofaRecord($index+'showDetailView');" tooltip data-toggle="tooltip" data-placement="left" title="View Update History"><i class="fa fa-eye"></i></button></td>
            </tr>
            <tr ng-show="UpdateHistoryVisibilityControl == ($index+'showDetailView')">
                <td class="" colspan="8">
                    <fieldset>
                        <legend>
                            Updated Fields
                        </legend>
                        <div class="legend2 pull-right">
                            <button type="button" class="btn btn-xs btn-default" ng-click="CloseUpdateHistorySubSection();" tooltip="" data-toggle="tooltip" data-placement="top" title="" data-original-title="close">
                                <i class="fa fa-close"></i>
                            </button>
                        </div>
                        <div class="col-lg-12 zero-padding-left-right-div">
                            <fieldset ng-repeat="(key1,value1) in history.updatedData track by $index">
                                <legend>
                                    {{key1}}
                                </legend>
                                <div class="col-lg-12 form-group">
                                    @*<label class="control-label small"><span ng-repeat="(key,value) in historyData">{{key}}<br /><span>{{Option}}</span><br /><span ng-if="">{{Reason}}</span></span></label>*@
                                    @*<label class="control-label small"><span ng-repeat="(key,value) in history">{{key}}<br /><span ng-repeat="optionsData in history">{{optionsData.Option}}<br /><span ng-if="optionsData.Reason!=null">{{optionsData.Reason}}</span></span></span></label>*@
                                    <label class="control-label small"><span ng-repeat="(key2,value2) in value1.data">{{value2.Question}}<br /><span>{{value2.Option}}<br /><span ng-if="value2.Reason!='null'">{{value2.Reason}}<br /></span></span></span></label>
                                </div>
                            </fieldset>
                        </div>
                    </fieldset>
                </td>
            </tr>
        </tbody>
    </table>
</div>
<div class="clearfix"></div><br />
<div class="col-lg-12 pull-left">
    <button type="button" class="btn btn-warning btn-sm pull-left" ng-click="CloseUpdateHistorySection();">Cancel</button>
</div>
