@model AHC.CD.WebUI.MVC.Areas.Profile.Models.EducationHistory.EducationDetailViewModel
@using AHC.CD.WebUI.MVC.Areas.Profile.Attributes;

<div class="clearfix"></div>
<div class="form-style">
    <fieldset class="wrap-words">
        <legend>
            Under Graduate/Professional School Details
        </legend>
        <div class="col-md-12 zero-padding-left-right-div">
            <div class="col-lg-3 form-group">
                @Html.LabelFor(model => model.USGraduateYesNoOption, htmlAttributes: new { @class = "control-label small" })
                <div>
                    <i class="data-label">{{educationDetailViewModelHistory.IsUSGraduate || 'Not Available'}}</i>
                </div>
            </div>
            <div class="form-group col-md-3">
                @Html.LabelFor(model => model.SchoolInformation.SchoolName, htmlAttributes: new { @class = "control-label small" })
                <div>
                    <i class="data-label wrap-words">{{educationDetailViewModelHistory.SchoolInformation.SchoolName || 'Not Available'}}</i>
                </div>
            </div>
            <div class="form-group col-md-3">
                @Html.LabelFor(model => model.QualificationDegree, htmlAttributes: new { @class = "control-label small" })
                <div>
                    <i class="data-label wrap-words">{{educationDetailViewModelHistory.QualificationDegree || 'Not Available'}}</i>
                </div>
            </div>
            <div class="form-group col-md-3">
                @Html.LabelFor(model => model.SchoolInformation.Location, htmlAttributes: new { @class = "control-label small" })
                <div>
                    <i class="data-label wrap-words">{{educationDetailViewModelHistory.SchoolInformation.Location || 'Not Available'}}</i>
                </div>
            </div>
           
        </div>
        <div class="col-md-12 zero-padding-left-right-div">
            <div class="form-group col-md-3">
                @Html.LabelFor(model => model.SchoolInformation.Street, htmlAttributes: new { @class = "control-label small" })
                <div>
                    <i class="data-label wrap-words">{{educationDetailViewModelHistory.SchoolInformation.Street || 'Not Available'}}</i>
                </div>
            </div>
            <div class="form-group col-md-3">
                @Html.LabelFor(model => model.SchoolInformation.Building, htmlAttributes: new { @class = "control-label small" })
                <div>
                    <i ng-if="educationDetailViewModelHistory.SchoolInformation.Building" class="data-label wrap-words">{{educationDetailViewModelHistory.SchoolInformation.Building}}</i>
                    <i ng-if="!educationDetailViewModelHistory.SchoolInformation.Building" class="data-label">Not Available</i>
                </div>
            </div>
            <div class="form-group col-md-3">
                @Html.LabelFor(model => model.SchoolInformation.City, htmlAttributes: new { @class = "control-label small" })
                <div>
                    <i class="data-label">{{educationDetailViewModelHistory.SchoolInformation.City || 'Not Available'}}</i>
                </div>
            </div>
            <div class="form-group col-md-3">
                @Html.LabelFor(model => model.SchoolInformation.State, htmlAttributes: new { @class = "control-label small" })
                <div>
                    <i class="data-label wrap-words">{{educationDetailViewModelHistory.SchoolInformation.State || 'Not Available'}}</i>
                </div>
            </div>
           
        </div>
        <div class="col-md-12 zero-padding-left-right-div">
            <div class="form-group col-md-3">
                @Html.LabelFor(model => model.SchoolInformation.ZipCode, htmlAttributes: new { @class = "control-label small" })
                <div>
                    <i ng-if="educationDetailViewModelHistory.SchoolInformation.ZipCode" class="data-label">{{educationDetailViewModelHistory.SchoolInformation.ZipCode}}</i>
                    <i ng-if="!educationDetailViewModelHistory.SchoolInformation.ZipCode" class="data-label">Not Available</i>
                </div>
            </div>
            <div class="form-group col-md-3">
                @Html.LabelFor(model => model.SchoolInformation.Country, htmlAttributes: new { @class = "control-label small" })
                <div>
                    <i class="data-label wrap-words">{{educationDetailViewModelHistory.SchoolInformation.Country || 'Not Available'}}</i>
                </div>
            </div>
            <div class="form-group col-md-3">
                @Html.LabelFor(model => model.SchoolInformation.County, htmlAttributes: new { @class = "control-label small" })
                <div>
                    <i ng-if="educationDetailViewModelHistory.SchoolInformation.County" class="data-label wrap-words">{{educationDetailViewModelHistory.SchoolInformation.County}}</i>
                    <i ng-if="!educationDetailViewModelHistory.SchoolInformation.County" class="data-label">Not Available</i>
                </div>
            </div>
            <div class="form-group col-md-3">
                @Html.LabelFor(model => model.SchoolInformation.Email, htmlAttributes: new { @class = "control-label small" })
                <div>
                    <i ng-if="educationDetailViewModelHistory.SchoolInformation.Email" class="data-label wrap-words">{{educationDetailViewModelHistory.SchoolInformation.Email}}</i>
                    <i ng-if="!educationDetailViewModelHistory.SchoolInformation.Email" class="data-label">Not Available</i>
                </div>
            </div>
           
        </div>
        <div class="col-md-12 zero-padding-left-right-div">
            <div class="form-group col-md-3">
                @Html.LabelFor(model => model.SchoolInformation.Phone, htmlAttributes: new { @class = "control-label small" })
                <div>
                    <i ng-if="educationDetailViewModelHistory.SchoolInformation.Phone" class="data-label">{{educationDetailViewModelHistory.SchoolInformation.PhoneCountryCode}}-{{educationDetailViewModelHistory.SchoolInformation.Phone}}</i>
                    <i ng-if="!educationDetailViewModelHistory.SchoolInformation.Phone" class="data-label">Not Available</i>
                </div>
            </div>
            <div class="form-group col-md-3">
                @Html.LabelFor(model => model.SchoolInformation.Fax, htmlAttributes: new { @class = "control-label small" })
                <div>
                    <i ng-if="educationDetailViewModelHistory.SchoolInformation.Fax" class="data-label">{{educationDetailViewModelHistory.SchoolInformation.FaxCountryCode}}-{{educationDetailViewModelHistory.SchoolInformation.Fax}}</i>
                    <i ng-if="!educationDetailViewModelHistory.SchoolInformation.Fax" class="data-label">Not Available</i>
                </div>
            </div>
            <div class="form-group col-md-3">
                @Html.LabelFor(model => model.StartDate, htmlAttributes: new { @class = "control-label small" })
                <div>
                    <i class="data-label">{{educationDetailViewModelHistory.StartDate || 'Not Available' | date:'MM-dd-yyyy'}}</i>
                </div>
            </div>
            <div class="form-group col-md-3">
                @Html.LabelFor(model => model.EndDate, htmlAttributes: new { @class = "control-label small" })
                <div>
                    <i class="data-label">{{educationDetailViewModelHistory.EndDate || 'Not Available' | date:'MM-dd-yyyy'}}</i>
                </div>
            </div>
           
        </div>
        <div class="col-md-12 zero-padding-left-right-div">
            <div class="form-group col-md-3">
                @Html.LabelFor(model => model.CompletedYesNoOption, htmlAttributes: new { @class = "control-label small" })
                <div>
                    <i class="data-label">{{educationDetailViewModelHistory.IsCompleted || 'Not Available'}}</i>
                </div>
            </div>
            @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Preview, ViewBag.Roles, false))
            {
                <div class="form-group col-md-3">
                    <div class="fileinput fileinput-new input-group" data-provides="fileinput">
                        @Html.LabelFor(model => model.CertificatePath, htmlAttributes: new { @class = "control-label small" })
                        <div ng-if="educationDetailViewModelHistory.CertificatePath">
                            <i class="data-label"><a href="@System.Configuration.ConfigurationManager.AppSettings["AppRoot"]/Document/View?path=@System.Configuration.ConfigurationManager.AppSettings["AppRoot"]{{educationDetailViewModelHistory.CertificatePath}}" class="pointer" target="_blank" tooltip data-toggle="tooltip" data-placement="top" title="Diploma"><i class="fa fa-file"></i></a></i>
                        </div>
                        <div ng-if="!educationDetailViewModelHistory.CertificatePath">
                            <i class="data-label"> Not available</i>
                        </div>
                    </div>
                </div>
            }
            </div>
        <br />
        <div class="col-lg-12 zero-padding-left-right-div">
            <div class="form-group col-md-12">
                <button id="UGPSD_History_CancelButton" type="button" class="btn btn-warning btn-sm" ng-click="operateCancelControl('')">Cancel</button>
            </div>
        </div>
    </fieldset>
</div>