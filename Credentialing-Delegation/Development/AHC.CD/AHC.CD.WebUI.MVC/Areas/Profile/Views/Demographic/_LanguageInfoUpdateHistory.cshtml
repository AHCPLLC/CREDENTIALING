<div class="col-lg-12 zero-padding-left-right-div">
    <table class="table table-bordered table-condensed customtbodyStyle">
        <thead>
            <tr>
                <th>Updated By</th>
                <th>Updated On</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody ng-repeat="history in UpdateHistory track by $index">
            <tr>
                <td class="col-lg-2 wrap-words"><i class="data-label">{{history.UpdatedBy}}</i></td>
                <td class="col-lg-2 wrap-words"><i class="data-label">{{history.UpdatedDate}}</i></td>
                <td class="col-lg-1 wrap-words"><button class="btn btn-xs btn-default" ng-click="showUpdateHistoryofaRecord($index+'showDetailView');" tooltip data-toggle="tooltip" data-placement="left" title="View Update History"><i class="fa fa-eye"></i></button></td>
            </tr>
            <tr ng-show="UpdateHistoryVisibilityControl == ($index+'showDetailView')">
                <td class="" colspan="8">
                    <fieldset>
                        <legend>
                            Updated Fields
                        </legend>
                        <div class="legend2 pull-right">
                            <button type="button" class="btn btn-xs btn-default" ng-click="CloseUpdateHistorySubSection();" tooltip="" data-toggle="tooltip" data-placement="top" title="" data-original-title="close">
                                <i class="fa fa-close"></i>
                            </button>
                        </div>
                        <table class="table table-striped table-bordered table-hover table-condensed">
                            <thead>
                                <tr>
                                    <th>Priority</th>
                                    <th>Language</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="kl in history.UpdatedFields | orderBy:'ProficiencyIndex':reverse track by $index">
                                    <td>
                                        <span ng-if="kl.ProficiencyIndex">{{kl.ProficiencyIndex}}</span>
                                        <span ng-if="!kl.ProficiencyIndex">Not Available</span>
                                    </td>
                                    <td>{{kl.Language}}</td>
                                </tr>
                            </tbody>
                        </table>
                    </fieldset>
                </td>
            </tr>
        </tbody>
    </table>
</div>
<div class="clearfix"></div><br />
<div class="col-lg-12 pull-left">
    <button type="button" class="btn btn-warning btn-sm pull-left" ng-click="CloseUpdateHistorySection();">Cancel</button>
</div>
