@model AHC.CD.WebUI.MVC.Areas.Profile.Models.Demographic.LanguageInfoViewModel

<script>
    $(".LanguageSelectAutoList").hide();
</script>

<form id="languageInfoForm" class="languageInfo">
    <div class="col-md-12 zero-padding-left-right-div">
        @Html.ValidationSummary(true, "", new { @class = "text-danger validSummary" })
        @Html.HiddenFor(model => model.UpdateHistory, new { id = "UpdateHistoryHidden" })
        <p id="UHProficiencyIndex" ng-hide="1==1">Priority - Language</p>
        <span ng-if="TempLanguageForEdit.LanguageInfoID">
            @Html.HiddenFor(model => model.LanguageInfoID, new { ng_value = "TempLanguageForEdit.LanguageInfoID" })
        </span>
        <div class="col-lg-6">
            <div class="form-group">
                <label class="control-label small">Non- English Languages you are fluent (in order of proficiency)</label>
                <br />
                <span>Select Languages:</span>
                <div>
                    <input class="form-control input-sm" ng-model="searchLang" id="searchLanguageKnow" ng-focus="shoLanguageList('DemographicsLanguageKnowSearchResultDiv'); searchLang='';" />
                    <div class="LanguageSelectAutoList popover fade bottom in" role="tooltip" id="DemographicsLanguageKnowSearchResultDiv">
                        <table class="table table-striped table-bordered table-hover table-condensed">
                            <tbody>
                                <tr ng-repeat="lang in filteredLangResults = (tempLanguages | filter:searchLang) track by $index" ng-click="SelectLanguageKnown(lang, 'DemographicsLanguageKnowSearchResultDiv')" class="pointer">
                                    <td>{{lang.name}} ({{lang.nativeName}})</td>
                                </tr>
                                <tr ng-if="tempLanguages.length == 0">
                                    <td>No data..... </td>
                                </tr>
                                <tr ng-if="tempLanguages.length > 0 && filteredLangResults.length == 0">
                                    <td>Match not found..... </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-5  remove-rigth-padding" ng-if="TempLanguageForEdit.KnownLanguages.length > 0">            
            Selected Languages ({{TempLanguageForEdit.KnownLanguages.length}}) :                  
                 <br />
            <table class="table table-striped table-bordered table-hover table-condensed" id="Profile_Demographics_LanguagesKnown_SelectedLanguages">
                <thead>
                    <tr>
                        <th>Language</th>
                        @*<th>Read</th>
                    <th>Write</th>
                    <th>Speak</th>*@
                        <th>Priority</th>
                        <th>Remove</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="kl in TempLanguageForEdit.KnownLanguages | orderBy:'ProficiencyIndex':reverse track by $index" ng-click="selectedLanguage(kl,$index);">
                        <td ng-class="{true:'label-warning'}[selectedIndex==$index]">
                            <span>{{kl.Language}}</span>
                            <span ng-if="kl.KnownLanguageID"><input type="hidden" name="KnownLanguages[{{$index}}].KnownLanguageID" value="{{kl.KnownLanguageID}}" /></span>
                            <input type="hidden" name="KnownLanguages[{{$index}}].Language" value="{{kl.Language}}" />
                            <input type="hidden" name="KnownLanguages[{{$index}}].ProficiencyIndex" value="{{kl.ProficiencyIndex}}" />
                        </td>
                        <td  ng-class="{true:'label-warning'}[selectedIndex==$index]">
                            {{kl.ProficiencyIndex = $index+1}}&nbsp;&nbsp;&nbsp;&nbsp;
                        </td>
                        <td ng-class="{true:'label-warning'}[selectedIndex==$index]"><i id="Demographics_LanguagesKnown_Edit_RemoveSelectedLanguage" class="fa fa-minus-circle pointer" style="color:#d9534f;" ng-click="UnselectLanguage(kl)"></i></td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div ng-if="TempLanguageForEdit.KnownLanguages.length > 0" class="col-lg-1 zero-padding-left-right-div" style="margin-top:18px;">
            <i id="Demographics_LanguagesKnown_Edit_Lanuage_Priority_Increase_Decrease" class="fa fa-arrow-circle-up btn btn-xs btn-primary" ng-click="PriorityChange('increase')" tooltip data-toggle="tooltip" data-placement="top" title="Increase Priority"></i>
            <br />
            <i id="Demographics_LanguagesKnown_Edit_Lanuage_Priority_Increase_Decrease" class="fa fa-arrow-circle-down fa-align-center btn btn-xs btn-primary" ng-click="PriorityChange('decrease')" tooltip data-toggle="tooltip" data-placement="top" title="Decrease Priority"></i>
        </div>
    </div>
    <div class="col-lg-12 clearfix" style="padding-bottom:15px;"></div>
    <div class="col-lg-12 ">
        @Html.LabelFor(model => model.CanSpeakAmericanSignYesNoOption, htmlAttributes: new { @class = "control-label small" })
        &nbsp;&nbsp;
        @foreach (var value in Enum.GetValues(typeof(AHC.CD.Entities.MasterData.Enums.YesNoOption)))
        {
            <label class="radio-inline">
                @Html.RadioButtonFor(model => model.CanSpeakAmericanSignYesNoOption, (int)value, new { data_ng_model = "TempLanguageForEdit.CanSpeakAmericanSignYesNoOption" }) @value.ToString()
            </label>
        }
        <br />
        @Html.ValidationMessageFor(model => model.CanSpeakAmericanSignYesNoOption, "", new { @class = "text-danger" })
    </div>

    <div class="clearfix"></div>
    <div ng-if="activeMessageDiv=='alertLanguageKnownError'" class="col-md-12 alert alert-{{messageType}}" role="alert">
        <button ng-click="closeAlertMessage()" class="close"><span>&times;</span></button>
        Errors: <br />
        <div ng-repeat="err in messageDesc track by $index">{{err}}</div>
    </div>
    <div class="clearfix"></div>
    <div class="col-md-12">
        <button id="Demographics_LanguagesKnown_Edit_CancelButton" class="btn btn-warning btn-sm" ng-click="LanguageKnownToggle()">Cancel</button>
        <button id="Demographics_LanguagesKnown_Edit_SaveButton" class="btn btn-primary btn-sm pull-right" ng-click="saveLanguages('languageInfoForm')">Save</button>
    </div>
</form>