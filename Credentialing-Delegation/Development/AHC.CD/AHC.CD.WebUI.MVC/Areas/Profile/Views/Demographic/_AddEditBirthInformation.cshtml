@model AHC.CD.WebUI.MVC.Areas.Profile.Models.Demographic.BirthInformationViewModel

<form enctype="multipart/form-data" id="BirthInformationForm">
    <span ng-if="tempObject.BirthInformationID">
        @Html.HiddenFor(model => model.BirthInformationID, new { ng_value = "tempObject.BirthInformationID" })
    </span>
    @Html.HiddenFor(model => model.UpdateHistory, new { id = "UpdateHistoryHidden" })
    <div class="col-md-12 zero-padding-left-right-div">
        <div class="form-group col-md-3">
            @Html.LabelFor(model => model.DateOfBirth, htmlAttributes: new { @class = "control-label small", id = "UHDateOfBirth" })
            <div>
                @Html.TextBoxFor(model => model.DateOfBirth, new { data_val_date = "Please enter date in mm/dd/yyyy format.", data_date_format = "MM/dd/yyyy", data_bs_datepicker = "bs-datepicker", placeholder = "mm/dd/yyyy", @class = "form-control input-sm", data_ng_model = "tempObject.DateOfBirth" })
                @Html.ValidationMessageFor(model => model.DateOfBirth, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group col-md-3">
            @Html.LabelFor(model => model.CityOfBirth, htmlAttributes: new { @class = "control-label small", id = "UHCityOfBirth" })
            @Html.TextBoxFor(model => model.CityOfBirth, new { @class = "form-control input-sm", data_ng_model = "tempObject.CityOfBirth", placeholder = "city name", data_ng_change = "addressAutocompleteForBirthInformation(tempObject.CityOfBirth)", onfocus = "showLocationList(this)" })
            <div class="ProviderTypeSelectAutoList popover fade bottom in" role="tooltip">
                <table class="table table-striped table-bordered table-hover table-condensed marginBottomAutosearch">
                    <tbody>
                        <tr ng-repeat="location in Locations track by $index" ng-click="selectedLocation(location)" class="pointer">
                            <td>{{location.City}} - {{location.State}} - {{location.CountryCode}}</td>
                        </tr>
                        <tr ng-if="Locations.length == 0">
                            <td>Not Available..... </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            @Html.ValidationMessageFor(model => model.CityOfBirth, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-md-3">
            @Html.LabelFor(model => model.StateOfBirth, htmlAttributes: new { @class = "control-label small", id = "UHStateOfBirth" })
            @Html.EditorFor(model => model.StateOfBirth, new { htmlAttributes = new { @class = "form-control input-sm", data_ng_model = "tempObject.StateOfBirth", placeholder = "state name" } })
            @Html.ValidationMessageFor(model => model.StateOfBirth, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-md-3">
            @Html.LabelFor(model => model.CountryOfBirth, htmlAttributes: new { @class = "control-label small", id = "UHCountryOfBirth" })
            @Html.EditorFor(model => model.CountryOfBirth, new { htmlAttributes = new { @class = "form-control input-sm", data_ng_model = "tempObject.CountryOfBirth", placeholder = "country name" } })
            @Html.ValidationMessageFor(model => model.CountryOfBirth, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="clearfix"></div>

    <div class="col-md-12 zero-padding-left-right-div">
        <div class="form-group col-md-3">
            @Html.LabelFor(model => model.CountyOfBirth, htmlAttributes: new { @class = "control-label small", id = "UHCountyOfBirth" })
            @Html.EditorFor(model => model.CountyOfBirth, new { htmlAttributes = new { @class = "form-control input-sm", data_ng_model = "tempObject.CountyOfBirth", placeholder = "county name" } })
            @Html.ValidationMessageFor(model => model.CountyOfBirth, "", new { @class = "text-danger" })
        </div>
        <div id="BirthCert" class="form-group" ng-class="{'col-md-8':tempObject.BirthCertificatePath,'col-md-9':!tempObject.BirthCertificatePath}">
            <label class="control-label small"></label>
            <div class="fileinput fileinput-new input-group" data-provides="fileinput">
                <div id="BirthWrap" class="form-control jancyFileWrapTexts" data-trigger="fileinput"><i class="glyphicon glyphicon-file fileinput-exists"></i> <span class="fileinput-filename wraptext"></span></div>
                <span class="input-group-addon btn btn-default btn-sm btn-file">
                    <span class="fileinput-new">Select Birth Document</span><span class="fileinput-exists">Change</span>
                    @Html.TextBoxFor(model => model.BirthCertificateFile, new { type = "file", onchange = "setFileNameWith(this);" })
                </span>
                <a href="#" class="input-group-addon btn btn-default btn-sm fileinput-exists" data-dismiss="fileinput">Remove</a>
            </div>
            @Html.ValidationMessageFor(model => model.BirthCertificateFile, "", new { @class = "text-danger" })
        </div>
        <div ng-if="tempObject.BirthCertificatePath" class="form-group col-md-1">
            <label class="control-label small"></label>
            <div>
                <input type="hidden" name="BirthCertificatePath" value="{{tempObject.BirthCertificatePath}}" />
                <a href="@System.Configuration.ConfigurationManager.AppSettings["AppRoot"]/Document/View?path=@System.Configuration.ConfigurationManager.AppSettings["AppRoot"]{{tempObject.BirthCertificatePath}}" class="pointer" target="_blank" tooltip data-toggle="tooltip" data-placement="top" title="Birth Document"><i class="fa fa-2x fa-file" style="margin-top: 3px;"></i></a>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
    <div ng-if="activeMessageDiv=='alertBirthInformationError'" class="col-md-12 alert alert-{{messageType}}" role="alert">
        <button ng-click="closeAlertMessage()" class="close"><span>&times;</span></button>
        Errors: <br />
        <div ng-repeat="err in messageDesc track by $index">{{err}}</div>
    </div>
    <div class="clearfix"></div>
    <div class="col-md-12">
        <button id="Demographics_BirthInformation_Edit_CancelButton" class="btn btn-warning btn-sm" ng-click="operateCancelControl('_EditBirthInformation')">Cancel</button>
        <button id="Demographics_BirthInformation_Edit_SaveButton" class="btn btn-primary btn-sm pull-right" type="submit" ng-click="saveBirthInformation('BirthInformationForm')">Save</button>
    </div>
</form>