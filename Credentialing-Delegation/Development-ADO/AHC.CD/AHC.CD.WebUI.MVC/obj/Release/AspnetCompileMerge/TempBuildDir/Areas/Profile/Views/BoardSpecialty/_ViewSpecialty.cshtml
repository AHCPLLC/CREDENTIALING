@model AHC.CD.WebUI.MVC.Areas.Profile.Models.BoardSpecialty.SpecialtyDetailViewModel
@using AHC.CD.WebUI.MVC.Areas.Profile.Attributes;

<div>
    <div class=" col-lg-12 zero-padding-left-right-div">

        @*Section to view Specialty Detail starts here*@
        <fieldset>
            <legend>
                Specialty
            </legend>
            <div class="col-lg-12 zero-padding-left-right-div">
                <div class="col-lg-4 form-group">
                    @Html.LabelFor(model => model.PreferenceType, new { @class = "control-label small" })
                    <div>
                        <i class="data-label">{{boardSpecialty.SpecialtyPreference}}</i>
                    </div>
                </div>
                <div class="col-lg-4 form-group">
                    @Html.LabelFor(model => model.SpecialtyID, new { @class = "control-label small" })
                    <div>
                        <i class="data-label">{{boardSpecialty.Specialty.Name}}</i>
                    </div>
                </div>
                <div class="col-lg-4">
                    @Html.LabelFor(model => model.PercentageOfTime, new { @class = "control-label small" })
                    <div ng-show="boardSpecialty.PercentageOfTime == null">
                        <i class="data-label">Not Available</i>
                    </div>
                    <div ng-show="boardSpecialty.PercentageOfTime != null">
                        <i class="data-label">{{boardSpecialty.PercentageOfTime}} %</i>
                    </div>
                </div>
            </div>
            <div class="clearfix"></div><br />
            <div class="col-lg-6">
                <label class="control-label small">Do you wish to be listed in the directory under this specialty?</label>
                <div>
                    <table class="col-lg-6">
                        <tr>
                            <th>@Html.LabelFor(model => model.ListedInHMOYesNoOption, new { @class = "control-label small" })</th>
                            <th>@Html.LabelFor(model => model.ListedInPOSYesNoOption, new { @class = "control-label small" })</th>
                            <th>@Html.LabelFor(model => model.ListedInPPOYesNoOption, new { @class = "control-label small" })</th>
                        </tr>
                        <tr>
                            <td ng-if="boardSpecialty.ListedInHMO == 'YES'"><i class="data-label">Yes</i></td>
                            <td ng-if="boardSpecialty.ListedInHMO == 'NO'"><i class="data-label">No</i></td>
                            <td ng-if="boardSpecialty.ListedInHMO == '' || boardSpecialty.ListedInHMO == null || boardspecialty.listedinhmo == 'Not Available' "><i class="data-label">Not Available</i></td>
                            <td ng-if="boardSpecialty.ListedInPOS == 'YES'"><i class="data-label">Yes</i></td>
                            <td ng-if="boardSpecialty.ListedInPOS == 'NO'"><i class="data-label">No</i></td>
                            <td ng-if="!boardSpecialty.ListedInPOS"><i class="data-label">Not Available</i></td>
                            <td ng-if="boardSpecialty.ListedInPPO == 'YES'"><i class="data-label">Yes</i></td>
                            <td ng-if="boardSpecialty.ListedInPPO == 'NO'"><i class="data-label">No</i></td>
                            <td ng-if="!boardSpecialty.ListedInPPO"><i class="data-label">Not Available</i></td>
                        </tr>
                    </table>
                </div>
            </div>
        </fieldset>
        @*Section to view Specialty Detail ends here*@

        @*Section to view Board Detail starts here*@
        <fieldset>
            <legend>
                Board Details
            </legend>
            <div class="col-lg-4">
                @Html.LabelFor(model => model.BoardCertifiedYesNoOption, new { @class = "control-label small" })
                <div ng-if="boardSpecialty.IsBoardCertified == 'YES'">
                    <i class="data-label">Yes</i>
                </div>
                <div ng-if="boardSpecialty.IsBoardCertified == 'NO'">
                    <i class="data-label">No</i>
                </div>
                <div ng-if="boardSpecialty.IsBoardCertified == 'Not Available'">
                    <i class="data-label">Not Available</i>
                </div>
            </div>
            <div ng-if="boardSpecialty.IsBoardCertified == 'YES'">
                <div class="col-lg-4">
                    @Html.LabelFor(model => model.SpecialtyBoardCertifiedDetail.SpecialtyBoardID, new { @class = "control-label small" })
                    <div ng-show="boardSpecialty.SpecialtyBoardCertifiedDetail.SpecialtyBoard">
                        <i class="data-label">{{boardSpecialty.SpecialtyBoardCertifiedDetail.SpecialtyBoard.Name}}</i>
                    </div>
                    <div ng-show="!boardSpecialty.SpecialtyBoardCertifiedDetail.SpecialtyBoard">
                        <i class="data-label">Not Available</i>
                    </div>
                </div>
                <div class="col-lg-4">
                    @Html.LabelFor(model => model.SpecialtyBoardCertifiedDetail.CertificateNumber, new { @class = "control-label small" })
                    <div ng-show="boardSpecialty.SpecialtyBoardCertifiedDetail.CertificateNumber" class="wrap-words">
                        <i class="data-label">{{boardSpecialty.SpecialtyBoardCertifiedDetail.CertificateNumber}}</i>
                    </div>
                    <div ng-hide="boardSpecialty.SpecialtyBoardCertifiedDetail.CertificateNumber">
                        <i class="data-label">Not Available</i>
                    </div>
                </div>
                <div class="clearfix"></div><br />
                <div class="col-lg-4">
                    @Html.LabelFor(model => model.SpecialtyBoardCertifiedDetail.InitialCertificationDate, new { @class = "control-label small" })
                    <div ng-show="boardSpecialty.SpecialtyBoardCertifiedDetail.InitialCertificationDate == null">
                        <i class=" data-label">Not Available</i>
                    </div>
                    <div ng-show="boardSpecialty.SpecialtyBoardCertifiedDetail.InitialCertificationDate != null">
                        <i class="data-label">{{boardSpecialty.SpecialtyBoardCertifiedDetail.InitialCertificationDate | date:'MM-dd-yyyy'}}</i>
                    </div>
                </div>
                <div class="col-lg-4">
                    @Html.LabelFor(model => model.SpecialtyBoardCertifiedDetail.LastReCerificationDate, new { @class = "control-label small" })
                    <div ng-show="boardSpecialty.SpecialtyBoardCertifiedDetail.LastReCerificationDate == null">
                        <i class=" data-label">Not Available</i>
                    </div>
                    <div ng-show="boardSpecialty.SpecialtyBoardCertifiedDetail.LastReCerificationDate != null">
                        <i class=" data-label">{{boardSpecialty.SpecialtyBoardCertifiedDetail.LastReCerificationDate | date:'MM-dd-yyyy'}}</i>
                    </div>
                </div>
                <div class="col-lg-4">
                    @Html.LabelFor(model => model.SpecialtyBoardCertifiedDetail.ExpirationDate, new { @class = "control-label small" })
                    <div ng-show="boardSpecialty.SpecialtyBoardCertifiedDetail.ExpirationDate == null">
                        <i class=" data-label">Indefinitely</i>
                    </div>
                    <div ng-show="boardSpecialty.SpecialtyBoardCertifiedDetail.ExpirationDate != null">
                        <i class="data-label">{{boardSpecialty.SpecialtyBoardCertifiedDetail.ExpirationDate | date:'MM-dd-yyyy'}}</i>
                    </div>
                </div>
                <div class="clearfix"><br /></div>
                @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Preview, ViewBag.Roles, false))
                {
                    <div class="col-lg-4">
                        @Html.LabelFor(model => model.SpecialtyBoardCertifiedDetail.BoardCertificatePath, new { @class = "control-label small" })
                        <div ng-show="boardSpecialty.SpecialtyBoardCertifiedDetail.BoardCertificatePath">
                            <i class="data-label"><a href="/Document/View?path={{boardSpecialty.SpecialtyBoardCertifiedDetail.BoardCertificatePath}}" class="pointer" target="_blank" tooltip data-toggle="tooltip" data-placement="top" title="Board Certificate Document"><i class="fa fa-file"></i></a></i>
                        </div>
                        <div ng-hide="boardSpecialty.SpecialtyBoardCertifiedDetail.BoardCertificatePath">
                            <i class="data-label">Not Available</i>
                        </div>
                    </div>
                }
            </div>
            <div ng-if="boardSpecialty.IsBoardCertified == 'NO'">
                <div class="col-lg-4">
                    @Html.LabelFor(model => model.SpecialtyBoardNotCertifiedDetail.SpecialtyBoardExamStatus, new { @class = "control-label small" })
                    <div ng-show="boardSpecialty.SpecialtyBoardNotCertifiedDetail.ExamStatus == 'ResultPending'">
                        <i class="data-label">I have taken exam, result pending</i>
                    </div>
                    <div ng-show="boardSpecialty.SpecialtyBoardNotCertifiedDetail.ExamStatus == 'IntendToSit'">
                        <i class="data-label">I intend to sit for exam</i>
                    </div>
                    <div ng-show="boardSpecialty.SpecialtyBoardNotCertifiedDetail.ExamStatus == 'DoNotIntendToSit'">
                        <i class="data-label">I do not intend to take exam</i>
                    </div>
                    <div ng-show="boardSpecialty.SpecialtyBoardNotCertifiedDetail.ExamStatus == 'FailedExam'">
                        <i class="data-label">I failed in the exam</i>
                    </div>
                    <div ng-show="!boardSpecialty.SpecialtyBoardNotCertifiedDetail.ExamStatus">
                        <i class="data-label">Not Available</i>
                    </div>
                </div>
                <div class="col-lg-4" ng-if="boardSpecialty.SpecialtyBoardNotCertifiedDetail.ExamStatus == 'IntendToSit'">
                    @Html.LabelFor(model => model.SpecialtyBoardNotCertifiedDetail.ExamDate, new { @class = "control-label small" })
                    <div ng-show="!boardSpecialty.SpecialtyBoardNotCertifiedDetail.ExamDate">
                        <i class="data-label">Not Available</i>
                    </div>
                    <div ng-show="boardSpecialty.SpecialtyBoardNotCertifiedDetail.ExamDate">
                        <i class="data-label">{{boardSpecialty.SpecialtyBoardNotCertifiedDetail.ExamDate | date:'MM-dd-yyyy'}}</i>
                    </div>
                </div>
                <div class="col-lg-4" ng-if="boardSpecialty.SpecialtyBoardNotCertifiedDetail.ExamStatus == 'DoNotIntendToSit'">
                    @Html.LabelFor(model => model.SpecialtyBoardNotCertifiedDetail.ReasonForNotTakingExam, new { @class = "control-label small" })
                    <div class="wrap-words" ng-show="!boardSpecialty.SpecialtyBoardNotCertifiedDetail.ReasonForNotTakingExam">
                        <i class="data-label">Not Available</i>
                    </div>
                    <div ng-show="boardSpecialty.SpecialtyBoardNotCertifiedDetail.ReasonForNotTakingExam">
                        <i class="data-label">{{boardSpecialty.SpecialtyBoardNotCertifiedDetail.ReasonForNotTakingExam}}</i>
                    </div>
                </div>
                <div class="col-lg-4" ng-if="boardSpecialty.SpecialtyBoardNotCertifiedDetail.ExamStatus == 'FailedExam'">
                    @Html.LabelFor(model => model.SpecialtyBoardNotCertifiedDetail.RemarkForExamFail, new { @class = "control-label small" })
                    <div class="wrap-words" ng-show="!boardSpecialty.SpecialtyBoardNotCertifiedDetail.RemarkForExamFail">
                        <i class="data-label">Not Available</i>
                    </div>
                    <div ng-show="boardSpecialty.SpecialtyBoardNotCertifiedDetail.RemarkForExamFail">
                        <i class="data-label">{{boardSpecialty.SpecialtyBoardNotCertifiedDetail.RemarkForExamFail}}</i>
                    </div>
                </div>
            </div>
        </fieldset>
        @*Section to view Board Detail ends here*@
        <div class="clearfix"></div>
        <div ng-show="activeMessageDiv=='updatedBoardSpecialty'+$index" class="alert alert-success" role="alert">
            <button ng-click="closeAlertMessage('')" class="close"><span>&times;</span></button>
            {{messageDesc}}
        </div>
        <div ng-show="activeMessageDiv=='renewedBoardSpecialty'+$index" class="alert alert-success" role="alert">
            <button ng-click="closeAlertMessage('')" class="close"><span>&times;</span></button>
            {{messageDesc}}
        </div>
        <div class="clearfix"></div>
        @*Buttons to Edit/Cancel Specialty Details*@
        <div class="col-md-12 form-group">
            <button type="button" class="btn btn-warning btn-sm" ng-click="operateCancelControl('')">Cancel</button>
            @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Edit, ViewBag.Roles, false))
            {
                <button type="submit" class="btn btn-primary btn-sm pull-right" ng-click="operateEditControl($index+'_editboardSpecialty', boardSpecialty)">Edit</button>
            }
        </div>
        @*Buttons to Edit/Cancel Specialty Details*@
    </div>
</div>