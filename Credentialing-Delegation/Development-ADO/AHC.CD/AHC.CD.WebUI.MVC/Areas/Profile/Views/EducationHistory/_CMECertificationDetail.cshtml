@using AHC.CD.WebUI.MVC.Areas.Profile.Attributes;

<div class="form-style">
    <fieldset>
        <legend>
            <i style="font-size:20px" tooltip data-toggle="tooltip" data-placement="top" title="This section is under observation by your credentialing co-ordinator" ng-show="CMECertificationDetailPendingRequest" class="fa text-danger fa-exclamation-circle"></i>
            Post Graduate Training/CME Details
        </legend>
        <div class="legend2 pull-right">
            @*<button type="button" class="btn btn-xs btn-primary" data-container="body" data-toggle="popover" data-placement="left" data-trigger="hover" data-content="Download" data-original-title="" title="" ng-if="CertificationCMEViewModel.length != 0" ng-click="downloadTableData('Profile_EducationHistory_PostGraduateTraining/CMEDetails', 'PostGraduate Training/CME Details')"><i class="fa fa-download"></i></button>*@
            <button type="button" class="btn btn-xs btn-primary" data-container="body" data-toggle="popover" popover data-placement="left" data-trigger="hover" data-content="Print" data-original-title="" title="" ng-if="CertificationCMEViewModel.length != 0" ng-click="printData('Profile_EducationHistory_PostGraduateTraining/CMEDetails','PostGraduate Training/CME Details')"><i class="fa fa-print"></i></button>
            <button type="button" ng-click="showCMECertificationHistory('CME')" class="btn btn-xs btn-warning" data-container="body" data-toggle="popover" data-placement="left" data-trigger="hover" data-content="View History"><i class="fa fa-clock-o"></i></button>
            <div id="CME" class="loading pull-right loadingHistory"><img src="/Content/Images/ajax-loader.gif" width="20" height="20"></div>
        </div>
        <div id="Certificate" class="panel-body">
            <div class="form-style">
                <div class="col-lg-12 zero-padding-left-right-div">
                    <table ng-hide="CertificationCMEViewModel.length > 0 || visibilityControl =='addcertificationCMEViewModel'" class="table table-bordered table-condensed customtbodyStyle table-striped">
                        <thead>
                            <tr>
                                <td>
                                    No Data Available for Post Graduate Training/CME Details! Please click on
                                    @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Add, ViewBag.Roles, false))
                                    {
                                        <button id="noDataAddNewCMEDetails" class="btn btn-xs btn-success" ng-click="operateViewAndAddControl('addcertificationCMEViewModel')"><i class="fa fa-plus"></i></button>
                                    }
                                    to add new Post Graduate Training/CME Information
                                </td>
                            </tr>
                        </thead>
                    </table>
                    <table ng-if="CertificationCMEViewModel.length != 0" class="table table-bordered table-condensed customtbodyStyle table-striped" id="Profile_EducationHistory_PostGraduateTraining/CMEDetails">
                        <thead>
                            <tr>
                                <th>Certificate Name</th>
                                <th>Credit Hours</th>
                                <th>Completion Date</th>
                                <th>Expiration Date</th>
                                <th class="hideData">Supporting Document</th>
                                <th class="hideData">Action</th>
                            </tr>
                        </thead>
                        <tbody ng-repeat="certificationCMEViewModel in CertificationCMEViewModel track by $index">
                            <tr>
                                <td ng-if="certificationCMEViewModel.Certification" class="wrap-words">{{certificationCMEViewModel.Certification}}</td>
                                <td ng-if="!certificationCMEViewModel.Certification" class="wrap-words"><i>Not Available</i></td>
                                <td ng-if="certificationCMEViewModel.CreditHours" class="wrap-words">{{certificationCMEViewModel.CreditHours}}</td>
                                <td ng-if="!certificationCMEViewModel.CreditHours" class="wrap-words"><i>Not Available</i></td>
                                <td ng-if="certificationCMEViewModel.EndDate" class="wrap-words">{{certificationCMEViewModel.EndDate | date:'MM-dd-yyyy'}}</td>
                                <td ng-if="!certificationCMEViewModel.EndDate" class="wrap-words"><i>Not Available</i></td>
                                <td ng-if="certificationCMEViewModel.ExpiryDate" class="wrap-words">{{certificationCMEViewModel.ExpiryDate | date:'MM-dd-yyyy'}}</td>
                                <td ng-if="!certificationCMEViewModel.ExpiryDate" class="wrap-words"><i>Not Available</i></td>
                                <td ng-if="certificationCMEViewModel.CertificatePath" class="wrap-words hideData">
                                    @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Preview, ViewBag.Roles, false))
                                    {
                                        <a href="/Document/View?path={{certificationCMEViewModel.CertificatePath}}" target="_blank" title="{{certificationCMEViewModel.CertificatePath}}"><i class="fa fa-file" title=""></i></a>
                                    }
                                </td>
                                <td ng-if="!certificationCMEViewModel.CertificatePath" class="wrap-words hideData"><i>Not Available</i></td>
                                <td class="wrap-words hideData">
                                    @if (ProfileActionValidator.IsAuthorized(ProfileActionType.View, ViewBag.Roles, false))
                                    {
                                        <button data-toggle="tooltip" class="btn btn-xs btn-default" ng-click="operateViewAndAddControl($index+'_viewcertificationCMEViewModel')" tooltip><i class="fa fa-eye"></i></button>
                                    }
                                    @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Edit, ViewBag.Roles, false))
                                    {
                                        <button tooltip data-toggle="tooltip" data-placement="top" title="Edit" class="btn btn-xs btn-primary" ng-click="operateEditControl($index+'_editcertificationCMEViewModel',certificationCMEViewModel)"><i class="fa fa-edit"></i></button>
                                    }
                                    @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Add, ViewBag.Roles, false))
                                    {
                                        <button class="btn btn-xs btn-danger" data-toggle="tooltip" data-placement="top" title="Remove" ng-click="initCertificationDetailWarning(certificationCMEViewModel);" tooltip><i class="fa fa-minus-circle"></i></button>
                                        <button id="addNewCMEDetails" tooltip data-toggle="tooltip" data-placement="right" title="Add New" ng-hide="$index+1!=CertificationCMEViewModel.length" ng-click="operateViewAndAddControl('addcertificationCMEViewModel')" class="btn btn-xs btn-success"><i class="fa fa-plus"></i></button>
                                    }
                                </td>
                            </tr>
                            @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Edit, ViewBag.Roles, false))
                            {
                                <tr ng-show="visibilityControl==($index+'_editcertificationCMEViewModel')" class="hideData">
                                    <td colspan="6" id="certificateEditDiv{{$index}}" class=" editTableDataStyle">
                                        @Html.Partial("~/Areas/Profile/Views/EducationHistory/_AddEditCertificationCME.cshtml")
                                    </td>
                                </tr>
                            }
                            @if (ProfileActionValidator.IsAuthorized(ProfileActionType.View, ViewBag.Roles, false))
                            {
                                <tr ng-show="visibilityControl==($index+'_viewcertificationCMEViewModel')" class="hideData">
                                    <td colspan="6" id="{{$index}}" class=" editTableDataStyle">
                                        @Html.Partial("~/Areas/Profile/Views/EducationHistory/_ViewCertificationCME.cshtml")
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="clearfix"></div>
                @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Add, ViewBag.Roles, false))
                {
                    <div ng-show="visibilityControl=='addcertificationCMEViewModel'">
                        <div id="newCertificateFormDiv">
                            @Html.Partial("~/Areas/Profile/Views/EducationHistory/_AddEditCertificationCME.cshtml")
                        </div>
                    </div>
                }
                <div ng-show="activeMessageDiv=='addedNewCMEDetails'" class="alert alert-success" role="alert">
                    <button ng-click="closeAlertMessage('')" class="close"><span>&times;</span></button>
                    <i class="fa fa-2x fa-arrow-up"></i> {{messageDesc}}
                </div>
                <div ng-if="activeMessageDiv=='removeCMEDetails'">
                    <div class="alert alert-danger" role="alert">
                        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                        <span class="sr-only">Error:</span>
                        Error Lists :<br />
                        <span ng-repeat="err in errorCMEDetails track by $index">{{err}}</span>
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </fieldset>
    <div ng-if="showCMECertificationTable">
        <div class="form-style">
            <fieldset>
                <legend>
                    PostGraduation/CME History
                </legend>
                <div class="legend2 pull-right" >
                    @*<button type="button" class="btn btn-xs btn-primary" data-container="body" data-toggle="popover" data-placement="left" data-trigger="hover" data-content="Download" data-original-title="Download" title="Download" ng-hide="CMECertificationArray.length <= 0" ng-click="downloadTableData('Profile_EducationHistory_PostGraduation/CMEHistory','PostGraduation/CME History')"><i class="fa fa-download"></i></button>*@
                    <button type="button" class="btn btn-xs btn-primary" data-container="body" data-toggle="popover" popover data-placement="left" data-trigger="hover" data-content="Print" data-original-title="Print" title="Print" ng-hide="CMECertificationArray.length <= 0" ng-click="printData('Profile_EducationHistory_PostGraduation/CMEHistory','PostGraduation/CME History')"><i class="fa fa-print"></i></button>
                    <button type="button" ng-click="cancelCMECertificationHistory()" class="btn btn-xs btn-default" data-container="body" data-toggle="popover" data-placement="left" data-trigger="hover" data-content="View History"><i class="fa fa-times text-danger"></i></button>
                </div>
                <table ng-hide="CMECertificationArray.length > 0" class="table table-bordered table-condensed customtbodyStyle table-striped">
                    <thead>
                        <tr>
                            <td>
                                No History Available for PostGraduation/CME Details!
                            </td>
                        </tr>
                    </thead>
                </table>
                <table ng-hide="CMECertificationArray.length <= 0" class="table table-bordered table-condensed table-striped customtbodyStyle" id="Profile_EducationHistory_PostGraduation/CMEHistory">
                    <thead>
                        <tr>
                            <th>Certificate Name</th>
                            <th>Credit Hours</th>
                            <th>Completion Date</th>
                            <th>Expiration Date</th>
                            <th>Status</th>
                            <th class="hideData">Action</th>
                        </tr>
                    </thead>
                    <tbody ng-repeat="cmeHistory in CMECertificationArray">
                        <tr>
                            <td ng-if="!cmeHistory.Certification"><i>Not Available</i></td>
                            <td ng-if="cmeHistory.Certification">{{cmeHistory.Certification}}</td>
                            <td ng-if="!cmeHistory.CreditHours"><i>Not Available</i></td>
                            <td ng-if="cmeHistory.CreditHours">{{cmeHistory.CreditHours}}</td>
                            <td ng-if="!cmeHistory.EndDate"><i>Not Available</i></td>
                            <td ng-if="cmeHistory.EndDate">{{cmeHistory.EndDate | date:'MM-dd-yyyy'}}</td>
                            <td ng-if="!cmeHistory.ExpiryDate"><i>Not Available</i></td>
                            <td ng-if="cmeHistory.ExpiryDate">{{cmeHistory.ExpiryDate | date:'MM-dd-yyyy'}}</td>
                            <td>{{cmeHistory.HistoryStatus}}</td>
                            <td class="hideData">
                                <button class="btn btn-xs btn-default" ng-click="operateViewAndAddControl($index+'_viewcmeHistory')" ng-hide="showViewProfessionalAffiliation" tooltip data-toggle="tooltip" data-placement="left" title="View"><i class="fa fa-eye"></i></button>
                            </td>
                        </tr>
                        <tr ng-show="visibilityControl==($index+'_viewcmeHistory')" class="hideData">
                            <td colspan="6" class="editTableDataStyle">
                                @Html.Partial("~/Areas/Profile/Views/EducationHistory/_ViewCertificationCMEHistory.cshtml")
                            </td>
                        </tr>
                    </tbody>
                </table>
            </fieldset>
        </div>
    </div>
    <div class="modal fade" id="certificationDetailWarningModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form id="removeCertificationDetail">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">Warning!!!!</h4>
                    </div>
                    <div class="col-lg-12 text-center" ng-show="isRemoved">
                        <div style="margin-top:2%;">
                            <img src="~/Content/Images/ajax-loader.gif" style="width:50px;" /> Please Wait..
                        </div>
                    </div>
                    <div class="modal-body" ng-show="!isRemoved">
                        Do you really want to remove <b>{{tempCertificationDetail.Certification}}</b> from your Post Graduate Training/CME Details list ?
                        <input type="hidden" name="CMECertificationID" value="{{tempCertificationDetail.CMECertificationID}}" />
                        <input type="hidden" name="StatusType" value="2" />
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-primary" ng-click="removeCertificationDetail(CertificationCMEViewModel)">Remove</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>