            <div class="form-style">
                <fieldset>
                    <legend>
                        Generate PDF Template
                    </legend>
                    <div class="col-lg-8 form-group">
                        <label class="control-label small">Plan Template*</label>
                        <input type="text" class="form-control input-sm" placeholder="Select Plan Template" name="PlanPdfName" ng-model="tempObject.seletedPDFName" ng-click="searchCumDropDown('ForType'+$index);tempObject.seletedPDFName='';" data-searchdropdown="searchdropdown" />
                        <div class="ProviderTypeSelectAutoList1 popover fade bottom in" role="tooltip" id="ForType{{$index}}" style="margin-top:55px;">
                            <table class="table table-striped table-bordered table-hover table-condensed">
                                <tbody>
                                    <tr ng-repeat="temp in pdfTemplateList = (pdfTemplateList | filter:tempObject.seletedPDFName)" ng-click="addIntoTypePdfDropDown(temp)" class="pointer">
                                        <td>{{temp.Name}}</td>
                                    </tr>
                                    <tr ng-if="pdfTemplateList.length == 0">
                                        <td>Template not found..... </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="col-lg-6">
                            <button class="btn btn-xs btn-danger  pull-left" ng-click="cancelAdd();tempObject=null">Clear</button>
                        </div>
                        <div class="col-lg-6">
                            <button type="submit" ng-click="ViewTemplate(pdfProfileId,tempObject.selectedFileName)" class="btn btn-xs btn-success  pull-right" data-dismiss="fileinput" ng-disabled="tempObject.seletedPDFName==''">Generate PDF</button>
                        </div>
                    </div>
                </fieldset>

            </div>

            <div class="form-style" ng-if="IsAddNewDocument">
                <fieldset>
                    <legend>
                        New Document
                    </legend>
                    <div id="newDocumentForm">
                        <form enctype="multipart/form-data" name="DocumentForm">
                            <div class="col-lg-12">
                                <div ng-if="TempObject.ID" ng-hide="true">
                                    @Html.EditorFor(model => model.OtherDocumentID, new { htmlAttributes = new { data_ng_model = "TempObject.ID" } })

                                </div>
                                <div class="col-lg-4">
                                    <label class="control-label small">Document Name *:</label>@Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control input-sm", data_ng_model = "TempObject.Title", placeholder = "title" } })
                                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                                </div>

                                <div class="col-lg-10 form-group">
                                    @Html.LabelFor(model => model.File, htmlAttributes: new { @class = "control-label small" })
                                    <div class="col-lg-12 fileinput fileinput-new input-group" data-provides="fileinput">
                                        <div class="form-control jancyFileWrapTexts" data-trigger="fileinput"><i class="glyphicon glyphicon-file fileinput-exists"></i> <span class="fileinput-filename wraptext"></span></div>
                                        <span class="input-group-addon btn btn-default btn-sm btn-file">
                                            <span class="fileinput-new">Select Document</span><span class="fileinput-exists">Change</span>
                                            @Html.TextBoxFor(model => model.File, new { type = "file", htmlAttributes = new { data_ng_model = "FilePath", value = "FilePath" }, onchange = "setFileNameWith(this);" })
                                        </span>
                                        <a href="#" class="input-group-addon btn btn-default btn-sm fileinput-exists" data-dismiss="fileinput">Remove</a>

                                    </div>
                                    @*@Html.ValidationMessageFor(model => model.File, "", new { @class = "text-danger" })*@
                                    <p style="color:red;" ng-if="isError">{{message}}</p>
                                </div>
                                <div class="col-lg-2 pull-right">
                                    <br />
                                    @Html.CheckBoxFor(model => model.IsPrivate, new { data_ng_model = "TempObject.IsPrivate", id = "Private" }) Private

                                </div>
                                <div class="col-lg-12">
                                    <div class="col-lg-6">
                                        <button class="btn btn-xs btn-danger  pull-left" ng-click="cancelAdd()">Cancel</button>
                                    </div>
                                    <div class="col-lg-6">
                                        <button type="submit" ng-click="saveOtherDocument('newDocumentForm', pdfProfileId)" class="btn btn-xs btn-success  pull-right" data-dismiss="fileinput">Add</button>
                                    </div>

                                    <br />
                                    <br />

                                </div>
                            </div>

                        </form>

                    </div>

                </fieldset>

            </div>
            <div ng-show="IsMessage" class="col-lg-12 col-md-12 col-sm-12 form-style">
                <div class="alert alert-success" role="alert">
                    <strong>Success!</strong> {{SuccessMessage}}
                </div>
            </div>
            <div ng-if="IsFail" class="col-lg-12 col-md-12 col-sm-12 form-style">
                <div class="alert alert-danger" role="alert">
                    <strong>Failure!</strong> {{FailureMessage}}
                </div>
            </div>
        </fieldset>
    </div>
</div>
