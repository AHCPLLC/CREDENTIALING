@model AHC.CD.WebUI.MVC.Areas.Credentialing.Models.SubPlanViewModel

<fieldset>
    <legend>
        Sub Plan
    </legend>
    <div ng-if="!PlanIsEdit" class="pull-right legend2">
        <button type="button" class="btn btn-xs btn-success" tooltip data-toggle="tooltip" data-placement="top" title="Add More" ng-click="AddSubPlan();"><i class="fa fa-plus"></i></button>
    </div>
    <div ng-repeat="lobsub in tempObject1.SubPlans track by $index" class="col-lg-12 zero-padding-right-right-div">
        <fieldset>
            <div ng-if="!PlanIsEdit" ng-if="$index > 0" class="pull-right legend2">
                <button type="button" class="btn btn-xs btn-danger" tooltip data-toggle="tooltip" data-placement="top" title="Remove" ng-click="RemoveSubPlan($index);"><i class=" fa fa-minus"></i></button>
            </div>
        <div class="col-lg-4 form-group">
            @Html.LabelFor(model => model.SubPlanName, new { @class = "control-label small" })
            @Html.TextBoxFor(model => model.SubPlanName, new { @class = "form-control input-sm", data_ng_model = "lobsub.SubPlanName", placeholder = "SubPlan name" })
            @Html.ValidationMessageFor(model => model.SubPlanName, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-4 form-group">
            @Html.LabelFor(model => model.SubPlanCode, new { @class = "control-label small" })
            @Html.TextBoxFor(model => model.SubPlanCode, new { @class = "form-control input-sm", data_ng_model = "lobsub.SubPlanCode", placeholder = "SubPlan code" })
            @Html.ValidationMessageFor(model => model.SubPlanCode, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-4 form-group">
            @Html.LabelFor(model => model.SubPlanDescription, new { @class = "control-label small" })
            @Html.TextBoxFor(model => model.SubPlanDescription, new { @class = "form-control input-sm", data_ng_model = "lobsub.SubPlanDescription", placeholder = "SubPlan Description" })
            @Html.ValidationMessageFor(model => model.SubPlanDescription, "", new { @class = "text-danger" })
        </div>
        </fieldset>
    </div>
</fieldset>

