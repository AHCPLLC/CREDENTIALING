@model AHC.CD.WebUI.MVC.Areas.Profile.Models.Demographic.VisaDetailViewModel
@using AHC.CD.WebUI.MVC.Areas.Profile.Attributes;

<div class="col-lg-12">
    <table ng-if="!Provider.VisaDetails" class="table table-bordered table-condensed customtbodyStyle table-striped">
        <thead>
            <tr>
                <td>
                    No Data Available for Citizenship Information!
                    @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Add, ViewBag.Roles, true))
                    {
                        <span>Please click on <button id="noDataAddNewCitizenshipInfo" class="btn btn-xs btn-success" ng-click="operateEditControl('_EditVisaDetails',Provider.VisaDetails)" tooltip data-toggle="tooltip" data-placement="top" title="Add New"><i class="fa fa-plus"></i></button> to add new Citizenship Information</span>
                    }
                </td>
            </tr>
        </thead>
    </table>
</div>
<div ng-if="Provider.VisaDetails" class="wrap-words">
    <div class=" col-lg-12 zero-padding-left-right-div">
        <div class="col-lg-4">
            <div class="form-group">
                @Html.LabelFor(model => model.IsResidentOfUSAYesNoOption, htmlAttributes: new { @class = "control-label small" })
                &nbsp;&nbsp;{{Provider.VisaDetails.IsResidentOfUSA}}
            </div>
        </div>
        <div ng-if="Provider.VisaDetails.IsResidentOfUSAYesNoOption==2" class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(model => model.IsAuthorizedToWorkInUSYesNoOption, htmlAttributes: new { @class = "control-label small" })
                &nbsp;&nbsp;{{Provider.VisaDetails.IsAuthorizedToWorkInUS}}
            </div>
        </div>
    </div>

    <div ng-if="Provider.VisaDetails.IsAuthorizedToWorkInUSYesNoOption==1">
        <div class=" col-lg-12 zero-padding-left-right-div">
            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.VisaInfo.VisaNumber, htmlAttributes: new { @class = "control-label small" })
                <div>
                    @if (ProfileActionValidator.IsMasked(ViewBag.Roles))
                    {
                        <i class="data-label" ng-if="Provider.VisaDetails.VisaInfo.VisaNumber">############</i>
                        <i class="data-label" ng-if="!Provider.VisaDetails.VisaInfo.VisaNumber">Not Availabe</i>
                    }
                    else
                    {
                        <i class="data-label" ng-if="Provider.VisaDetails.VisaInfo.VisaNumber">{{Provider.VisaDetails.VisaInfo.VisaNumber}}</i>
                        <i class="data-label" ng-if="!Provider.VisaDetails.VisaInfo.VisaNumber">Not Availabe</i>
                    }
                </div>
            </div>
            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.VisaInfo.VisaTypeID, htmlAttributes: new { @class = "control-label small" })
                <div>
                    @if (ProfileActionValidator.IsMasked(ViewBag.Roles))
                    {
                        <i class="data-label" ng-if="Provider.VisaDetails.VisaInfo.VisaType.Title">############</i>
                        <i class="data-label" ng-if="!Provider.VisaDetails.VisaInfo.VisaType.Title">Not Availabe</i>
                    }
                    else
                    {
                        <i class="data-label" ng-if="Provider.VisaDetails.VisaInfo.VisaType.Title">{{Provider.VisaDetails.VisaInfo.VisaType.Title}}</i>
                        <i class="data-label" ng-if="!Provider.VisaDetails.VisaInfo.VisaType.Title">Not Availabe</i>
                    }
                </div>
            </div>
            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.VisaInfo.VisaStatusID, htmlAttributes: new { @class = "control-label small" })
                <div>
                    @if (ProfileActionValidator.IsMasked(ViewBag.Roles))
                    {
                        <i class="data-label" ng-if="Provider.VisaDetails.VisaInfo.VisaStatus.Title">############</i>
                        <i class="data-label" ng-if="!Provider.VisaDetails.VisaInfo.VisaStatus.Title">Not Availabe</i>
                    }
                    else
                    {
                        <i class="data-label" ng-if="Provider.VisaDetails.VisaInfo.VisaStatus.Title">{{Provider.VisaDetails.VisaInfo.VisaStatus.Title}}</i>
                        <i class="data-label" ng-if="!Provider.VisaDetails.VisaInfo.VisaStatus.Title">Not Availabe</i>
                    }
                </div>
            </div>
        </div>
        <div class=" col-lg-12 zero-padding-left-right-div">
            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.VisaInfo.VisaSponsor, htmlAttributes: new { @class = "control-label small" })
                <div>
                    @if (ProfileActionValidator.IsMasked(ViewBag.Roles))
                    {
                        <i class="data-label" ng-if="Provider.VisaDetails.VisaInfo.VisaSponsor">############</i>
                        <i class="data-label" ng-if="!Provider.VisaDetails.VisaInfo.VisaSponsor">Not Availabe</i>
                    }
                    else
                    {
                        <i class="data-label" ng-if="Provider.VisaDetails.VisaInfo.VisaSponsor">{{Provider.VisaDetails.VisaInfo.VisaSponsor}}</i>
                        <i class="data-label" ng-if="!Provider.VisaDetails.VisaInfo.VisaSponsor">Not Availabe</i>
                    }
                </div>
            </div>
            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.VisaInfo.VisaExpirationDate, htmlAttributes: new { @class = "control-label small" })
                <div>
                    <i class="data-label">
                        @if (ProfileActionValidator.IsMasked(ViewBag.Roles))
                        {
                            <span ng-if="Provider.VisaDetails.VisaInfo.VisaExpirationDate">############</span>
                            <span ng-if="!Provider.VisaDetails.VisaInfo.VisaExpirationDate">Not Available</span>
                        }
                        else
                        {
                            <span ng-if="Provider.VisaDetails.VisaInfo.VisaExpirationDate">{{Provider.VisaDetails.VisaInfo.VisaExpirationDate | date: "MM/dd/yyyy"}}</span>
                            <span ng-if="!Provider.VisaDetails.VisaInfo.VisaExpirationDate">Not Available</span>
                        }
                    </i>
                </div>
            </div>
            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.VisaInfo.VisaCertificateFile, htmlAttributes: new { @class = "control-label small" })
                <div>
                    <i class="data-label">
                        @if (ProfileActionValidator.IsMasked(ViewBag.Roles))
                        {
                            <span ng-if="Provider.VisaDetails.VisaInfo.VisaCertificatePath"><i class="fa fa-file"></i></span>
                            <span ng-if="!Provider.VisaDetails.VisaInfo.VisaCertificatePath">Not Available</span>
                        }
                        else
                        {
                            <a ng-if="Provider.VisaDetails.VisaInfo.VisaCertificatePath" href="@System.Configuration.ConfigurationManager.AppSettings["AppRoot"]/Document/View?path=@System.Configuration.ConfigurationManager.AppSettings["AppRoot"]{{Provider.VisaDetails.VisaInfo.VisaCertificatePath}}" class="pointer" target="_blank" tooltip data-toggle="tooltip" data-placement="top" title="Visa Document"><i class="fa fa-file"></i></a>
                            <span ng-if="!Provider.VisaDetails.VisaInfo.VisaCertificatePath">Not Available</span>
                        }
                    </i>
                </div>
            </div>
        </div>
        <div class="col-lg-12 zero-padding-left-right-div">
            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.VisaInfo.GreenCardNumber, htmlAttributes: new { @class = "control-label small" })
                <div>
                    <i class="data-label">
                        @if (ProfileActionValidator.IsMasked(ViewBag.Roles))
                        {
                            <span ng-if="Provider.VisaDetails.VisaInfo.GreenCardNumber">############</span>
                            <span ng-if="!Provider.VisaDetails.VisaInfo.GreenCardNumber">Not Available</span>
                        }
                        else
                        {
                            <span ng-if="Provider.VisaDetails.VisaInfo.GreenCardNumber">{{Provider.VisaDetails.VisaInfo.GreenCardNumber}}</span>
                            <span ng-if="!Provider.VisaDetails.VisaInfo.GreenCardNumber">Not Available</span>
                        }
                    </i>
                </div>
            </div>
            <div class="col-md-8">
                @Html.LabelFor(model => model.VisaInfo.GreenCardCertificateFile, htmlAttributes: new { @class = "control-label small" })
                <div>
                    <i class="data-label">
                        @if (ProfileActionValidator.IsMasked(ViewBag.Roles))
                        {
                            <span ng-if="Provider.VisaDetails.VisaInfo.GreenCardCertificatePath"><i class="fa fa-file"></i></span>
                            <span ng-if="!Provider.VisaDetails.VisaInfo.GreenCardCertificatePath">Not Available</span>
                        }
                        else
                        {
                            <a ng-if="Provider.VisaDetails.VisaInfo.GreenCardCertificatePath" href="@System.Configuration.ConfigurationManager.AppSettings["AppRoot"]/Document/View?path=@System.Configuration.ConfigurationManager.AppSettings["AppRoot"]{{Provider.VisaDetails.VisaInfo.GreenCardCertificatePath}}" class="pointer" target="_blank" tooltip data-toggle="tooltip" data-placement="top" title="Green Card Document"><i class="fa fa-file"></i></a>
                            <span ng-if="!Provider.VisaDetails.VisaInfo.GreenCardCertificatePath">Not Available</span>
                        }
                    </i>
                </div>
            </div>
        </div>
        <div class="col-lg-12 zero-padding-left-right-div">
            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.VisaInfo.NationalIDNumber, htmlAttributes: new { @class = "control-label small" })
                <div>
                    <i class="data-label">
                        @if (ProfileActionValidator.IsMasked(ViewBag.Roles))
                        {
                            <span ng-if="Provider.VisaDetails.VisaInfo.NationalIDNumber">############</span>
                            <span ng-if="!Provider.VisaDetails.VisaInfo.NationalIDNumber">Not Available</span>
                        }
                        else
                        {
                            <span ng-if="Provider.VisaDetails.VisaInfo.NationalIDNumber">{{Provider.VisaDetails.VisaInfo.NationalIDNumber}}</span>
                            <span ng-if="!Provider.VisaDetails.VisaInfo.NationalIDNumber">Not Available</span>
                        }
                    </i>
                </div>
            </div>
            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.VisaInfo.NationalIDCertificateFile, htmlAttributes: new { @class = "control-label small" })
                <div>
                    <i class="data-label">
                        @if (ProfileActionValidator.IsMasked(ViewBag.Roles))
                        {
                            <span ng-if="Provider.VisaDetails.VisaInfo.NationalIDCertificatePath"><i class="fa fa-file"></i></span>
                            <span ng-if="!Provider.VisaDetails.VisaInfo.NationalIDCertificatePath">Not Available</span>
                        }
                        else
                        {
                            <a ng-if="Provider.VisaDetails.VisaInfo.NationalIDCertificatePath" href="@System.Configuration.ConfigurationManager.AppSettings["AppRoot"]/Document/View?path=@System.Configuration.ConfigurationManager.AppSettings["AppRoot"]{{Provider.VisaDetails.VisaInfo.NationalIDCertificatePath}}" class="pointer" target="_blank" tooltip data-toggle="tooltip" data-placement="top" title="National Identification Document"><i class="fa fa-file"></i></a>
                            <span ng-if="!Provider.VisaDetails.VisaInfo.NationalIDCertificatePath">Not Available</span>
                        }
                    </i>
                </div>
            </div>
            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.VisaInfo.CountryOfIssue, htmlAttributes: new { @class = "control-label small" })
                <div>
                    <i class="data-label">
                        @if (ProfileActionValidator.IsMasked(ViewBag.Roles))
                        {
                            <span ng-if="Provider.VisaDetails.VisaInfo.CountryOfIssue">############</span>
                            <span ng-if="!Provider.VisaDetails.VisaInfo.CountryOfIssue">Not Available</span>
                        }
                        else
                        {
                            <span ng-if="Provider.VisaDetails.VisaInfo.CountryOfIssue">{{Provider.VisaDetails.VisaInfo.CountryOfIssue}}</span>
                            <span ng-if="!Provider.VisaDetails.VisaInfo.CountryOfIssue">Not Available</span>
                        }
                    </i>
                </div>
            </div>
        </div>
    </div>
</div>