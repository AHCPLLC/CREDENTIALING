@using AHC.CD.WebUI.MVC.Areas.Profile.Attributes;

<form class="organisationInfo">
    @Html.ValidationSummary(true, "", new { @class = "text-danger validSummary" })
    <div class="col-md-12 zero-padding-left-right-div">
        <div class="col-md-3 form-group">
            <label class="control-label small">IPA Name *</label>
            <div>
                <i class="data-label">{{gi.PracticingGroup.Group.Name}}</i>
            </div>
        </div>
        <div class="col-md-3 form-group">
            <label class="control-label small">Start Date *</label>
            <div>
                <i class="data-label">{{gi.JoiningDate| date:'MM-dd-yyyy'}}</i>
            </div>
        </div>
        <div class="col-md-3 form-group">
            <label class="control-label small">End Date</label>
            <div>
                <i ng-show="gi.ExpiryDate" class="data-label">{{gi.ExpiryDate| date:'MM-dd-yyyy'}}</i>
                <i ng-show="!gi.ExpiryDate" class="data-label">Not Available</i>
            </div>
        </div>
        <div class="col-md-3 form-group">
            <label class="control-label small">Status *</label>
            <div>
                <i class="data-label">{{gi.ContractGroupStatus}}</i>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
    <div ng-show="activeMessageDiv=='updatedContractGroupInformation'+$index" class="alert alert-success" role="alert">
        <button ng-click="closeAlertMessage('')" class="close"><span>&times;</span></button>
        {{messageDesc}}
    </div>
    <div class="col-md-12 form-group">
        <button type="button" class="btn btn-warning btn-sm" ng-click="operateCancelControl('')">Cancel</button>
        @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Edit, ViewBag.Roles, false) && !(ViewBag.Roles as List<string>).Contains("PRO"))
        {
            <button class="btn btn-primary btn-sm pull-right" ng-click="operateEditControl($index+'_editgi',gi)">Edit</button>
        }
    </div>
</form>