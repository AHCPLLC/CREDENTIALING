@model AHC.CD.WebUI.MVC.Areas.Profile.Models.WorkHistory.MilitaryServiceInformationViewModel

<div>
    <form class="militaryServiceInformationForm">
        <span ng-if="tempObject.MilitaryServiceInformationID">
            @Html.HiddenFor(model => model.MilitaryServiceInformationID, new { ng_value = "tempObject.MilitaryServiceInformationID" })
        </span>
        @Html.HiddenFor(model => model.StatusType, new { ng_value = (int)@AHC.CD.Entities.MasterData.Enums.StatusType.Active, data_ng_model = "tempObject.StatusType" })
        <div class="col-lg-12 zero-padding-left-right-div">
            <div class="col-md-12 zero-padding-left-right-div">
                <div class="form-group col-md-4">
                    @Html.LabelFor(model => model.MilitaryBranch, new { @class = "control-label small" })
                    @*@Html.TextBoxFor(model => model.MilitaryBranch, new { @class = "form-control input-sm", data_ng_model = "tempObject.MilitaryBranch", placeholder = "military branch", data_searchdropdown = "searchdropdown" })*@

                    @Html.TextBoxFor(model => model.MilitaryBranch, new { @class = "form-control input-sm", data_ng_model = "tempObject.MilitaryBranch", placeholder = "Military branch", onfocus = "showLocationList(this)" })


                    <div class="ProviderTypeSelectAutoList popover fade bottom in" role="tooltip">
                        <table class="table table-striped table-bordered table-hover table-condensed">
                            <tbody ng-show="filteredmilitaryBranchesResults.length>0">
                                <tr ng-repeat="mb in filteredmilitaryBranchesResults = (militaryBranches | filter:tempObject.MilitaryBranch)" ng-click="SelectMilitaryBranch(mb);" class="pointer">
                                    <td>{{mb.Title}}</td>
                                </tr>
                            </tbody>
                            <tbody ng-show="filteredmilitaryBranchesResults.length==0">
                                <tr>
                                    <td>No Search Found</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    @Html.ValidationMessageFor(model => model.MilitaryBranch, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-md-4">
                    @Html.LabelFor(model => model.StartDate, new { @class = "control-label small" })
                    @Html.TextBoxFor(model => model.StartDate, new { data_val_date = "Please enter date in mm/dd/yyyy format.", data_date_format = "MM/dd/yyyy", data_bs_datepicker = "bs-datepicker", @class = "form-control input-sm", data_ng_model = "tempObject.StartDate", placeholder = "mm/dd/yyyy" })
                    @Html.ValidationMessageFor(model => model.StartDate, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-md-4">
                    @Html.LabelFor(model => model.DischargeDate, new { @class = "control-label small" })
                    @Html.TextBoxFor(model => model.DischargeDate, new { data_val_date = "Please enter date in mm/dd/yyyy format.", data_date_format = "MM/dd/yyyy", data_bs_datepicker = "bs-datepicker", @class = "form-control input-sm", data_ng_model = "tempObject.DischargeDate", placeholder = "mm/dd/yyyy" })
                    @Html.ValidationMessageFor(model => model.DischargeDate, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-md-12 zero-padding-left-right-div">
                <div class="form-group col-md-4">
                    @Html.LabelFor(model => model.MilitaryRank, new { @class = "control-label small" })
                    <div>
                        <select class="form-control input-sm" data-ng-model="tempObject.MilitaryRank" name="MilitaryRank" >
                            <option value="" disabled selected>--Select--</option>
                            <option ng-repeat="type in militaryRanks" value="{{type.Title}}">{{type.Title}}</option>
                        </select>
                        @Html.ValidationMessageFor(model => model.MilitaryRank, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group col-md-4">
                    @Html.LabelFor(model => model.MilitaryDischarge, new { @class = "control-label small" })
                    <div>
                        <select class="form-control input-sm" data-ng-model="tempObject.MilitaryDischarge" name="MilitaryDischarge"  ng-change="militaryDischargeChange()">
                            <option value="" disabled selected>--Select--</option>
                            <option ng-repeat="type in militaryDischarges" value="{{type.Title}}">{{type.Title}}</option>
                        </select>
                        @Html.ValidationMessageFor(model => model.MilitaryDischarge, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group col-md-4">
                    @Html.LabelFor(model => model.MilitaryPresentDuty, new { @class = "control-label small" })
                    <div>
                        <select class="form-control input-sm" data-ng-model="tempObject.MilitaryPresentDuty" name="MilitaryPresentDuty" >
                            <option value="" disabled selected>--Select--</option>
                            <option ng-repeat="type in militaryPresentDuties" value="{{type.Title}}">{{type.Title}}</option>
                        </select>
                        @Html.ValidationMessageFor(model => model.MilitaryPresentDuty, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-md-12 zero-padding-left-right-div" ng-show="tempObject.MilitaryDischarge=='Other than honourable'">
                <div class="col-md-12">
                    <div class="form-group">
                        @Html.LabelFor(model => model.HonorableExplanation, new { @class = "control-label small" })
                        <div>
                            @Html.TextBoxFor(model => model.HonorableExplanation, new { @class = "form-control input-sm", placeholder = "reason", data_ng_model = "tempObject.HonorableExplanation" })
                            @Html.ValidationMessageFor(model => model.HonorableExplanation, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-md-12 zero-padding-left-right-div">
                <div ng-if="IsMilitaryServiceInfoHasError" class="col-lg-12">
                    <div class="alert alert-danger" role="alert">
                        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                        <span class="sr-only">Error:</span>
                        Error Lists : <br />
                        <span ng-repeat="err in MilitaryServiceInfoErrorList track by $index">{{err}}</span>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>