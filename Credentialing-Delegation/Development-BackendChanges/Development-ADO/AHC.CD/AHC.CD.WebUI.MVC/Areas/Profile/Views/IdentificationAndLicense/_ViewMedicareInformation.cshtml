@model AHC.CD.WebUI.MVC.Areas.Profile.Models.IdentificationAndLicenses.MedicareInformationViewModel
@using AHC.CD.WebUI.MVC.Areas.Profile.Attributes;

<div class="form-style">
    <fieldset>
        <legend>
            Medicare Information
        </legend>
        <div>
            <div class="form-group col-md-12 zero-padding-left-right-div">
                <div class="col-md-4">
                    @Html.LabelFor(model => model.LicenseNumber, new { @class = "  control-label small" })
                    <div>
                        <i class="data-label">{{MedicareInformation.LicenseNumber}}</i>
                    </div>
                </div>
                <div class="col-md-4">
                    @Html.LabelFor(model => model.IssueDate, new { @class = "  control-label small" })
                    <div>
                        <i class="data-label">{{MedicareInformation.IssueDate || 'Not Available' | date: "MM-dd-yyyy"}}</i>
                    </div>
                </div>
                <div class="col-md-4">
                    <label class="control-label small">Supporting Document</label>
                    <div ng-show="MedicareInformation.CertificatePath">
                        @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Preview, ViewBag.Roles, false))
                        {
                            <i class="data-label"><a href="/Document/View?path={{MedicareInformation.CertificatePath}}" class="pointer" target="_blank" tooltip data-toggle="tooltip" data-placement="top" title="Medicare Certificate"><i class="fa fa-file"></i></a></i>
                        }
                    </div>
                    <div ng-hide="MedicareInformation.CertificatePath">
                        <i class="data-label">Not Available</i>
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
            <div ng-show="activeMessageDiv=='updatedMedicare'+$index" class="alert alert-{{messageType}}" role="alert">
                <button ng-click="closeAlertMessage('')" class="close"><span>&times;</span></button>
                {{messageDesc}}
            </div>
            <div class="clearfix"></div>
            <div class="col-md-12 zero-padding-left-right-div">
                <div class="col-md-12">
                    <button type="button" class="btn btn-warning btn-sm" ng-click="operateCancelControl('')">Cancel</button>
                    @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Edit, ViewBag.Roles, false))
                    {   <button type="submit" class="btn btn-primary btn-sm pull-right" ng-click="operateEditControl($index+'_editMedicareInformation',MedicareInformation)">Edit</button>
                    }
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
    </fieldset>
</div>