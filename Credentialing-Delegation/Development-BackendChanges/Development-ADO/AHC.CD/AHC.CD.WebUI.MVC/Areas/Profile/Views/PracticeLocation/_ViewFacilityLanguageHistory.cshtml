@model AHC.CD.WebUI.MVC.Areas.Profile.Models.PracticeLocationInformation.PracticeLocationViewModel
@using AHC.CD.WebUI.MVC.Areas.Profile.Attributes;

<fieldset class="wrap-words">
    <legend>
        Language
    </legend>
    <div class="col-md-12 zero-padding-left-right-div">
        <div class="col-lg-6">
            @Html.LabelFor(model => model.FacilityDetail.Language.NonEnglishLanguages, htmlAttributes: new { @class = "control-label small" })
        </div>
        <div class="col-lg-6">
            @Html.LabelFor(model => model.FacilityDetail.Language.AmericanSignLanguageYesNoOption, htmlAttributes: new { @class = "control-label small" })
            &nbsp;&nbsp;
            {{PracticeLocationDetailHistory.Facility.FacilityDetail.Language.AmericanSignLanguage}}
        </div>
        <div class="col-lg-12">
            <table ng-if="PracticeLocationDetailHistory.Facility.FacilityDetail.Language.NonEnglishLanguages.length > 0" class="table table-striped table-bordered table-hover table-condensed">
                <thead>
                    <tr>
                        <th>Language</th>
                        <th>Interpreters Available?</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="lang in PracticeLocationDetailHistory.Facility.FacilityDetail.Language.NonEnglishLanguages track by $index">
                        <td>{{lang.Language}}</td>
                        <td>{{lang.InterpretersAvailable}}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</fieldset>