@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Areas/Profile/Scripts/JavaScripts/LocationTracker.js"></script>
<script>
    $(function () {
        $("#sidemenu").addClass("menu-in");
        $("#page-wrapper").addClass("menuup");
        $("#menu-toggle").toggleClass("btn-menuup");
    });

</script>


@section AddToHead{
    @Scripts.Render("~/bundles/jquery")

    @Scripts.Render("~/bundles/angular")

}

<div id="page-wrapper" ng-app="locationApp" ng-controller="locationController" ng-cloak>
    <div class="container-fluid wrap-words">
        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <ol class="breadcrumb">
                    <li class="active">
                        <i class="fa fa-list"></i>
                        Profiles
                    </li>
                </ol>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4">
                <div class="input-group">
                    <div class="input-group-btn">
                        <button type="button" class="btn btn-default btn-sm dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Select <span class="caret"></span></button>
                        <ul class="dropdown-menu">
                            <li><a ng-click="selectedOption = 'Provider'; error = false" href="#">Provider</a></li>
                            <li><a ng-click="selectedOption = 'Location'; error = false" href="#">Location</a></li>
                        </ul>

                        @*<select class="form-control input-sm" ng-change="selectedOption" ng-model="selectedOption">
                            <option disabled value="">Select</option>
                            <option value="1">Provider</option>
                            <option value="2">Location</option>
                        </select>*@
                    </div>
                    <input type="text" class="form-control input-sm" placeholder="Search for..." name="search" ng-change="errorText=false" ng-model="searchFor"/>
                    
                    <span class="input-group-btn">
                        <button class="btn btn-primary btn-sm" ng-click="getDetails(searchFor)" type="button">Go!</button>{{selectedOption}}
                    </span>                                       
                </div>
                <div class="clearfix"></div><br />
                <div ng-if="showProviderDetails" class="row">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Action</th>
                            </tr>

                        </thead>
                        <tbody ng-repeat="profile in providersList track by $index">
                            <tr>
                                <td></td>
                                <td>{{profile.PersonalDetail.FirstName}}</td>
                                <td>{{profile.PersonalDetail.LastName}}</td>
                                <td><a href="#" data-toggle="tooltip" ng-click="getPracticeLocations(profile)" data-placement="left" title="View Practice Location" class="btn btn-xs btn-info pull-right"><i class="fa fa-2x fa-chevron-circle-right"></i></a></td>
                            </tr>
                            <tr ng-if="providersList.length == 0"><td>No Data Available</td></tr>
                        </tbody>
                    </table>
                </div>
                <div class="clearfix"></div><br />
                <div ng-if="showLocationDetails" class="row">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Facility Name</th>
                                <th>City</th>
                                <th>State</th>
                                <th>Country</th>
                                <th>Action</th>
                            </tr>

                        </thead>
                        <tbody ng-repeat="place in locationList track by $index">
                            <tr>
                                <td>{{place.Facility.FacilityName}}</td>
                                <td>{{place.Facility.City}}</td>
                                <td>{{place.Facility.State}}</td>
                                <td>{{place.Facility.Country}}</td>
                                <td><a href="#" ng-click="getProvidersList(place)" data-toggle="tooltip" data-placement="left" title="View Providers" class="btn btn-xs btn-info pull-right"><i class="fa fa-2x fa-chevron-circle-right"></i></a></td>
                            </tr>
                            <tr ng-if="locationList.length == 0"><td>No Data Available</td></tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="text-danger" ng-if="error">Please select an option</div> 
            <div class="text-danger" ng-if="errorText">Please provide your input to search</div> 
            <div ng-if="showLocationList" class="col-lg-8">
                @Html.Partial("~/Areas/Profile/Views/LocationTracker/_PracticeLocationList.cshtml")
            </div>
        </div>

    </div>
</div>

