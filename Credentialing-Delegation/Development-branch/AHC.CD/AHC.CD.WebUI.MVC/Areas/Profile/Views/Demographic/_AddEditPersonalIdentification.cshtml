@model AHC.CD.WebUI.MVC.Areas.Profile.Models.Demographic.PersonalIdentificationViewModel

<form enctype="multipart/form-data" id="DemographicsPersonalIdentificationForm">
    <span ng-if="tempObject.PersonalIdentificationID">
        @Html.HiddenFor(model => model.PersonalIdentificationID, new { ng_value = "tempObject.PersonalIdentificationID" })
    </span>
    <div class="col-lg-12 zero-padding-left-right-div">
        <div class="col-lg-3 form-group">
            @Html.LabelFor(model => model.SSN, htmlAttributes: new { @class = "control-label small" })
            @Html.EditorFor(model => model.SSN, new { htmlAttributes = new { @class = "form-control input-sm", data_ng_model = "tempObject.SSN", placeholder = "social security number" } })
            @Html.ValidationMessageFor(model => model.SSN, "", new { @class = "text-danger" })
        </div>
        <div class="form-group" ng-class="{'col-lg-8':tempObject.SSNCertificatePath,'col-lg-9':!tempObject.SSNCertificatePath}">
            <label class="control-label small" for="SSN"></label>
            <div class="fileinput fileinput-new input-group" data-provides="fileinput">
                <div class="form-control jancyFileWrapTexts" data-trigger="fileinput">
                    <i class="glyphicon glyphicon-file fileinput-exists"></i>
                    <span class="fileinput-filename wraptext"></span>
                </div>
                <span class="input-group-addon btn btn-default btn-file">
                    <span class="fileinput-new">Select SSN Document</span>
                    <span class="fileinput-exists">Change</span>
                    @Html.TextBoxFor(model => model.SSNCertificateFile, new { type = "file", onchange = "setFileNameWith(this);" })
                </span>
                <a href="#" class="input-group-addon btn btn-default fileinput-exists" data-dismiss="fileinput">Remove</a>
            </div>
            @Html.ValidationMessageFor(model => model.SSNCertificateFile, "", new { @class = "text-danger" })
        </div>
        <div ng-if="tempObject.SSNCertificatePath" class="col-lg-1 form-group">
            <label class="control-label small"></label>
            <div>
                <input type="hidden" name="SSNCertificatePath" value="{{tempObject.SSNCertificatePath}}" />
                <a href="@System.Configuration.ConfigurationManager.AppSettings["AppRoot"]/Document/View?path=@System.Configuration.ConfigurationManager.AppSettings["AppRoot"]{{tempObject.SSNCertificatePath}}" class="pointer" target="_blank" tooltip data-toggle="tooltip" data-placement="top" title="SSN Document"><i class="fa fa-2x fa-file"></i></a>
            </div>
        </div>
    </div>
    <div class="col-lg-12 zero-padding-left-right-div">
        <div class="col-lg-3 form-group" >
            @Html.LabelFor(model => model.DL, htmlAttributes: new { @class = "control-label small" })
            @Html.EditorFor(model => model.DL, new { htmlAttributes = new { @class = "form-control input-sm", data_ng_model = "tempObject.DL",name="DriverLicense", placeholder = "driver's license" } })
            @*<div>
                <input type="text" class="form-control input-sm" ng-model="tempObject.DL" placeholder="Driver's license" ng-change="validatedl()">
            </div>*@
            @Html.ValidationMessageFor(model => model.DL, "", new { @class = "text-danger" })
            <span ng-show="dlinfoerror1" class="text-danger">Please enter DL</span>
        </div>
        <div class="col-lg-3 form-group">
            @Html.LabelFor(model => model.DLState, htmlAttributes: new { @class = "control-label small" })
            @Html.EditorFor(model => model.DLState, new { htmlAttributes = new { @class = "form-control input-sm", data_ng_model = "tempObject.DLState", placeholder = "Issue State of DL", data_autocomplete = "stateautocomplete" } })
            @*@Html.ValidationMessageFor(model => model.DLState, "", new { @class = "text-danger" })*@
            <span ng-show="dlinfoerror" class="text-danger">Please Select Issue State</span>
        </div>
        <div class="form-group" ng-class="{'col-lg-5':tempObject.DLCertificatePath,'col-lg-6':!tempObject.DLCertificatePath}">
            <label class="control-label small" for="SSN"></label>
            <div class="fileinput fileinput-new input-group" data-provides="fileinput">
                <div class="form-control jancyFileWrapTexts" data-trigger="fileinput"><i class="glyphicon glyphicon-file fileinput-exists"></i> <span class="fileinput-filename wraptext"></span></div>
                <span class="input-group-addon btn btn-default btn-file">
                    <span class="fileinput-new">Select Driver's License</span><span class="fileinput-exists">Change</span>
                    @Html.TextBoxFor(model => model.DLCertificateFile, new { type = "file", onchange = "setFileNameWith(this);" })
                </span>
                <a href="#" class="input-group-addon btn btn-default fileinput-exists" data-dismiss="fileinput">Remove</a>
            </div>
            @Html.ValidationMessageFor(model => model.DLCertificateFile, "", new { @class = "text-danger" })
        </div>
        <div ng-if="tempObject.DLCertificatePath" class="col-lg-1 form-group">
            <label class="control-label small"></label>
            <div>
                <input type="hidden" name="DLCertificatePath" value="{{tempObject.DLCertificatePath}}" />
                <a href="@System.Configuration.ConfigurationManager.AppSettings["AppRoot"]/Document/View?path=@System.Configuration.ConfigurationManager.AppSettings["AppRoot"]{{tempObject.DLCertificatePath}}" class="pointer" target="_blank" tooltip data-toggle="tooltip" data-placement="top" title="Driver's License Document"><i class="fa fa-2x fa-file"></i></a>
            </div>
        </div>
    </div>

    <div class="clearfix"></div>
    <div ng-if="activeMessageDiv=='alertPersonalIdentificationError'" class="col-md-12 alert alert-{{messageType}}" role="alert">
        <button ng-click="closeAlertMessage()" class="close"><span>&times;</span></button>
        Errors: <br />
        <div ng-repeat="err in messageDesc track by $index">{{err}}</div>
    </div>
    <div class="col-lg-12">
        <button type="submit" class="btn btn-sm btn-primary pull-right" ng-click="DemographicsPersonalIdentificationSave('DemographicsPersonalIdentificationForm')">Save</button>
        <button class="btn btn-sm btn-warning" ng-click="operateCancelControl('_EditPersonalIdentification')">Cancel</button>
    </div>
</form>