@using AHC.CD.WebUI.MVC.Areas.Profile.Attributes

<div class="form-style">
    <fieldset>
        <legend>
            Partners/Associates/Covering Colleagues
        </legend>
        <div id="CredentialingContact">
            <div class="col-lg-12 zero-padding-left-right-div">
                <table ng-hide=" PracticeLocationDetail.PracticeColleagues.length > 0 || visibilitySecondControl==('addPartner')" class="table table-bordered table-condensed customtbodyStyle table-striped">
                    <thead>
                        <tr>
                            <td>
                                No Data Available For Partners/Associates/Covering Colleagues  !
                                @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Add, ViewBag.Roles, false))
                                {
                                    <span>
                                        Please click on <button id="noPartners" class="btn btn-xs btn-success" ng-click="operateSecondViewAndAddControl('addPartner');resetData();" tooltip data-toggle="tooltip" data-placement="top" title="Add new"><i class="fa fa-plus"></i></button>
                                        to Add Partners/Associates/Covering Colleagues
                                    </span>
                                }
                            </td>
                        </tr>
                    </thead>
                </table>
                <table ng-if="PracticeLocationDetail.PracticeColleagues" ng-hide=" PracticeLocationDetail.PracticeColleagues.length <= 0" class="table table-bordered table-condensed table-striped customtbodyStyle">
                    <thead>
                        <tr>
                            <th>First Name *</th>
                            <th>Last Name *</th>
                            <th>Specialty</th>
                            <th>Provider Type</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody ng-repeat="partner in PracticeLocationDetail.PracticeColleagues">
                        <tr>
                            <td>{{partner.FirstName}}</td>
                            <td>{{partner.LastName}}</td>
                            <td>
                                <span ng-if="partner.PracticeProviderSpecialties.length > 0  && s.StatusType == 1" class="data-label wrap-words" ng-repeat="s in partner.PracticeProviderSpecialties"><i ng-if="$index>0">,</i><br ng-if="$index>0" />{{s.Specialty.Name}}</span>
                                <i ng-if="partner.PracticeProviderSpecialties.length == 0  || partner.PracticeProviderSpecialties==null" class="data-label">Not Available</i>
                            </td>
                            <td>
                                <span ng-if="partner.PracticeProviderTypes.length > 0 && p.StatusType == 1" class="data-label wrap-words" ng-repeat="p in partner.PracticeProviderTypes"><i ng-if="$index>0">,</i><br ng-if="$index>0" />{{p.ProviderType.Title}}</span>
                                <i ng-if="partner.PracticeProviderTypes.length == 0 || partner.PracticeProviderTypes==null" class="data-label">Not Available</i>
                            </td>
                            <td>
                                @if (ProfileActionValidator.IsAuthorized(ProfileActionType.View, ViewBag.Roles, false))
                                {
                                    <button class="btn btn-xs btn-default" tooltip data-toggle="tooltip" data-placement="left" title="View" ng-click="operateSecondViewAndAddControl($index+'_viewPartner')"><i class="fa fa-eye"></i></button>
                                }
                                @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Edit, ViewBag.Roles, false))
                                {           
                                    <button class="btn btn-xs btn-primary" tooltip data-toggle="tooltip" ng-click="operateSecondEditControl($index+'_editPartner',partner); setValue(partner);resetData();" data-placement="top" title="Edit"><i class="fa fa-edit"></i></button>
                                }
                                @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Edit, ViewBag.Roles, false))
                                {
                                    <button class="btn btn-xs btn-danger" data-toggle="tooltip" data-placement="top" title="Remove" ng-click="initWarningMethod(partner);" tooltip><i class="fa fa-minus-circle"></i></button>
                                }

                                @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Add, ViewBag.Roles, false))
{
    <button tooltip data-toggle="tooltip" data-placement="right" title="Add New" ng-hide="$index+1!=PracticeLocationDetail.PracticeColleagues.length" class="btn btn-xs btn-success" ng-click="operateSecondViewAndAddControl('addPartner'); clearAll();resetData();"><i class="fa fa-plus"></i></button>
}
                            </td>
                        </tr>
                        <tr ng-show="visibilitySecondControl==($index+'_viewPartner')">
                            <td colspan="6" id="PartnersViewDiv{{$index}}" class="editTableDataStyle">
                                @Html.Partial("~/Areas/Profile/Views/PracticeLocation/_ViewPartners.cshtml")
                            </td>
                        </tr>
                        <tr ng-show="visibilitySecondControl==($index+'_editPartner')">
                            <td colspan="6" id="partnersEditDiv{{$index}}" class="editTableDataStyle">
                                @Html.Partial("~/Areas/Profile/Views/PracticeLocation/_AddEditPartners.cshtml")
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="clearfix"></div>
            @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Add, ViewBag.Roles, false))
            {
                <div ng-show="visibilitySecondControl==('addPartner')">
                    <div id="newShowPartnersDiv">
                        @Html.Partial("~/Areas/Profile/Views/PracticeLocation/_AddEditPartners.cshtml")
                    </div>
                </div>
            }
            <div ng-show="activeMessageDiv=='addedPartnerDetails'" class="alert alert-success" role="alert">
                <button ng-click="closeAlertMessage('')" class="close"><span>&times;</span></button>
                <i class="fa fa-2x fa-arrow-up"></i> {{messageDesc}}
            </div>
            <div class="clearfix"></div>
        </div>
    </fieldset>
    <div class="modal fade" id="warningModalMethod" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form id="editPracticeColleague">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">Warning!!!!</h4>
                    </div>
                    <div class="modal-body">
                        Do you really want to remove <b>{{tempPracticeColleague.FirstName}} {{tempPracticeColleague.LastName}}</b> from your Covering Colleagues list ?
                        <input type="hidden" name="PracticeLocationID" value="{{PracticeLocationDetail.PracticeLocationDetailID}}" />
                        <input type="hidden" name="PracticeProviderID" value="{{tempPracticeColleague.PracticeProviderID}}" />
                        <input type="hidden" name="ProfileID" value="{{tempPracticeColleague.ProfileID}}" />
                        <input type="hidden" name="StatusType" value="2" />
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-primary" ng-click="removePatner(PracticeLocationDetail)">Remove</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>