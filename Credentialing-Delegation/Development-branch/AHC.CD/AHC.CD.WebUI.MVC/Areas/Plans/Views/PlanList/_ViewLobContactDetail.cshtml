<fieldset>
    <legend>
        Contact Details
    </legend>
    <div ng-repeat="pcd in plob.LOBContactDetails track by $index" class="col-lg-12 zero-padding-right-right-div">
        <div class="col-lg-12">
            <div class="col-lg-3 form-group">
                <label class="control-label small" for="SalutationType">Contact Person Name:</label>
                <div>
                    <i class="data-label  wrap-words">{{pcd.ContactPersonName || 'Not available' }}</i>
                </div>
            </div>
            <div class="form-group col-md-3">
                <label class="control-label small">Office Phone</label>
                <div ng-repeat="hp in Home=getContactDetailsPhoneByPhoneTypeAndActiveStatus((pcd.ContactDetail.PhoneDetails | filter:{PhoneType: 'Home'})) track by $index">
                    <span class="ResultDataStyle"><i>{{hp.PhoneNumber}}</i> &nbsp;&nbsp; <i ng-if="hp.PreferenceType==1" tooltip data-toggle="tooltip" data-placement="right" title="Primary Home Phone" class="fa fa-check"></i></span>
                </div>
                <div ng-if="Home.length==0 || pcd.ContactDetail==null">
                    <i>{{'Not available'}}</i>
                </div>
            </div>
            <div class="form-group col-md-3">
                <label class="control-label small">Office Fax</label>
                <div ng-repeat="hf in Fax=getContactDetailsPhoneByPhoneTypeAndActiveStatus((pcd.ContactDetail.PhoneDetails | filter:{PhoneType: 'Fax'})) track by $index">
                    <span class="ResultDataStyle"><i>{{hf.PhoneNumber}}</i> &nbsp;&nbsp; <i ng-if="hf.PreferenceType==1" tooltip data-toggle="tooltip" data-placement="right" title="Primary Home Fax" class="fa fa-check"></i></span>
                </div>
                <div ng-if="Fax.length==0 || pcd.ContactDetail==null">
                    <i>{{'Not available'}}</i>
                </div>
            </div>
            <div class="form-group col-md-3">
                <label class="control-label small">Mobile Number</label>
                <div ng-repeat="mn in MobilePhone=getContactDetailsPhoneByPhoneTypeAndActiveStatus((pcd.ContactDetail.PhoneDetails | filter:{PhoneType: 'Mobile'})) track by $index">
                    <span class="ResultDataStyle"><i>{{mn.PhoneNumber}}</i> &nbsp;&nbsp; <i ng-if="mn.PreferenceType==1" tooltip data-toggle="tooltip" data-placement="right" title="Primary Mobile Number" class="fa fa-check"></i></span>
                </div>
                <div ng-if="MobilePhone.length==0 || pcd.ContactDetail==null">
                    <i>{{'Not available'}}</i>
                </div>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="col-lg-3 zero-padding-left-right-div">
                <div class="col-lg-12 form-group" ng-init="contactPrefferedSearch.StatusType=1">
                    <label class="control-label small">Preferred Contacts</label>
                    <div ng-if="pcd.ContactDetail==null">
                        <i>{{'Not available'}}</i>
                    </div>
                    <div>
                        <table ng-if="pcd.ContactDetail.PreferredContacts.length > 0" class="table table-striped table-bordered table-hover table-condensed">
                            <thead>
                                <tr>
                                    <th>Priority</th>
                                    <th>Method Of Contact</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="pc in filterdPreferedContact = (pcd.ContactDetail.PreferredContacts | filter:contactPrefferedSearch) track by $index">
                                    <td>{{$index+1}}</td>
                                    <td ng-if="pc.ContactType == 'HomePhone'">Office Phone</td>
                                    <td ng-if="pc.ContactType != 'HomePhone'">{{pc.ContactType}}</td>
                                </tr>
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
            <div class="col-lg-3">
                <label class="control-label small">Email Id</label>
                <div ng-repeat="email in getContactDetailsPhoneByPhoneTypeAndActiveStatus(pcd.ContactDetail.EmailIDs) track by $index" class="wrap-words">
                    <span class="ResultDataStyle">{{email.EmailAddress}} &nbsp;&nbsp; <i ng-if="email.PreferenceType==1" tooltip data-toggle="tooltip" data-placement="right" title="Primary Email Address" class="fa fa-check"></i></span>
                </div>
                <div ng-if="pcd.ContactDetail==null || pcd.ContactDetail.EmailIDs.length==0">
                    <i>{{'Not available'}}</i>
                </div>
            </div>
        </div>
    </div>

    <div ng-if="plob.LOBContactDetails.length==0" class="col-lg-12 zero-padding-right-right-div">

        <table class="table table-bordered table-condensed customtbodyStyle table-striped">
            <thead>
                <tr>
                    <td>
                        No Contact details available !!
                    </td>
                </tr>
            </thead>
        </table>

    </div>
</fieldset>



