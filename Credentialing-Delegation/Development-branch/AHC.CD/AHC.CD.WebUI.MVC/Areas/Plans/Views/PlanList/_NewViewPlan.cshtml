<div class="col-lg-12" ng-cloak>
    <ul class="nav nav-tabs col-lg-8" role="tablist">
        <li ng-class="{active: tabStatus == 0}" class="pointer" ng-click="tabViewSelect(0)"><a>General Information</a></li>
        <li ng-class="{active: tabStatus == 1}" class="pointer" ng-click="tabViewSelect(1)"><a>LOB Information</a></li>
        <li ng-class="{active: tabStatus == 2}" class="pointer" ng-click="tabViewSelect(2)"><a>Plan Contract</a></li>


    </ul>
    <ul class="pager small col-lg-4">
        <li class="next pull-right pointer" ng-show="tabStatus<2" ng-click="ProceedView()" tooltip data-toggle="tooltip" data-placement="top" title="Next Tab"><a>>></a></li>
        <li class="previous pull-right pointer" ng-show="tabStatus>0" ng-click="BackView()" tooltip data-toggle="tooltip" data-placement="top" title="Previous Tab"><a><<</a></li>
    </ul>
    
    <div class="tab-content">
        <div class="tab-pane fade" ng-class="{'active in': tabStatus == 0}">@Html.Partial("_ViewPlanForm")</div>
        <div class="tab-pane fade" ng-class="{'active in': tabStatus == 1}">@Html.Partial("_View_LOB_BE_Mapping")</div>
        <div class="tab-pane fade" ng-class="{'active in': tabStatus == 2}">@Html.Partial("_ViewPlanContract")</div>
    </div>
</div>