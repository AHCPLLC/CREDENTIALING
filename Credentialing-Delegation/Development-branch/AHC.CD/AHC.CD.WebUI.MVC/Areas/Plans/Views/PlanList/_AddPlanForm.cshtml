@model AHC.CD.WebUI.MVC.Areas.Plans.Models.PlanListViewModel
<form id="Plandata" class="form-style" ng-if="CurrentPageMasterViewData.Type=='Add' || CurrentPageMasterViewData.Type=='Edit'">

    <fieldset>
        <legend>
            General Details
        </legend>
        <span ng-if="tempPlanAddEditObject.PlanID">
            @Html.HiddenFor(model => model.PlanID, new { @data_ng_value = "tempPlanAddEditObject.PlanID" })

        </span>
        <div class="col-lg-10 zero-padding-left-right-div">
            <div class="col-lg-12 zero-padding-left-right-div">
                <div class="col-lg-6 form-group">
                    @Html.LabelFor(model => model.PlanName, new { @class = "control-label small" })
                    @Html.TextBoxFor(model => model.PlanName, new { @class = "form-control input-sm", data_ng_model = "tempPlanAddEditObject.PlanName", data_ng_change = "checkPlanName(tempPlanAddEditObject.PlanName)", placeholder = "plan name", data_ng_class = "{loadinggif:PlanNameCheckLoading}" })
                    @Html.ValidationMessageFor(model => model.PlanName, "", new { @class = "text-danger", ng_show = "!PlanNameCheckMessage" })
                    <span class="text-danger" ng-show="PlanNameCheckMessage"><span>Plan name already exist*.</span></span>
                </div>
                <div class="col-md-6 form-group">
                    @Html.LabelFor(model => model.PlanCode, new { @class = "control-label small" })
                    @Html.TextBoxFor(model => model.PlanCode, new { @class = "form-control input-sm", data_ng_model = "tempPlanAddEditObject.PlanCode", placeholder = "plan code" })
                    @Html.ValidationMessageFor(model => model.PlanCode, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-lg-12 zero-padding-left-right-div">
                @if (System.Configuration.ConfigurationManager.AppSettings["SupportsDelegatedPlans"] == "true")
                {
                    <div class="col-lg-6 form-group">
                        @Html.LabelFor(model => model.IsDelegated, new { @class = "control-label small" })
                        <div>
                            @foreach (var value in Enum.GetValues(typeof(AHC.CD.Entities.MasterData.Enums.IsDelegated)))
                            {
                                <label class="radio-inline">
                                    @Html.RadioButtonFor(model => model.IsDelegated, (int)value, new { data_ng_model = "tempPlanAddEditObject.IsDelegated" }) @value.ToString()
                                </label>
                            }
                        </div>
                        @Html.ValidationMessageFor(model => model.IsDelegated, "", new { @class = "text-danger" })
                    </div>
                }
                else
                {
                    @Html.HiddenFor(model => model.IsDelegated, new { data_ng_model = "tempPlanAddEditObject.IsDelegated", ng_value = "2" })
                }
                <div class="col-lg-6 form-group">
                    @Html.LabelFor(model => model.PlanDescription, new { @class = "control-label small" })
                    @Html.TextBoxFor(model => model.PlanDescription, new { @class = "form-control input-sm", data_ng_model = "tempPlanAddEditObject.PlanDescription", placeholder = "plan description" })
                    @Html.ValidationMessageFor(model => model.PlanDescription, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="col-lg-2 form-group zero-padding-right-right-div">
            <label class="control-label small">Plan Logo </label>
            @Html.HiddenFor(model => model.PlanLogoPath, new { @Value = "{{tempPlanAddEditObject.PlanLogoPath}}" })
            <div class="fileinput fileinput-exists" data-provides="fileinput">
                <div class="fileinput-preview thumbnail file_preview_upload" style="line-height: 83px; background-size: 100% 97%;" data-trigger="fileinput">
                    <img ng-if="tempPlanAddEditObject.PlanLogoPath==''||tempPlanAddEditObject.PlanLogoPath==null || tempPlanAddEditObject.PlanLogoPath=='~/ApplicationDocuments/PlanLogo/'" ng-src="~/Content/Images/no_image.png" class="grow img-circle" />
                    <img ng-if="tempPlanAddEditObject.PlanLogoPath!=''&& tempPlanAddEditObject.PlanLogoPath!=null && tempPlanAddEditObject.PlanLogoPath!='~/ApplicationDocuments/PlanLogo/'" ng-src="@System.Configuration.ConfigurationManager.AppSettings["AppRoot"]/Document/View?path=@System.Configuration.ConfigurationManager.AppSettings["AppRoot"]{{tempPlanAddEditObject.PlanLogoPath}}">
                </div>
                <div>
                    <span class="btn btn-primary btn-xs btn-file" tooltip data-toggle="tooltip" data-placement="bottom" title="Search">
                        <span class="fileinput-new"><i class="fa fa-search"></i></span>
                        <span class="fileinput-exists" tooltip data-toggle="tooltip" data-placement="bottom" title="Edit"><i class="fa fa-search"></i></span>
                        <input type="file" name="PlanLogoFile" id="PlanLogoFile">
                    </span>
                    <a class="btn btn-danger btn-xs fileinput-exists" ng-click="removeFile()" tooltip data-toggle="tooltip" data-placement="left" title="Remove" data-dismiss="fileinput"><i class="fa fa-remove"></i></a>
                    @Html.ValidationMessageFor(model => model.PlanLogoFile, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </fieldset>

    @Html.Partial("_AddPlanAddressDetails")
    @Html.Partial("_AddPlanContactDetails")

    <br />
    <div class="col-lg-12">
        <a class="btn btn-warning btn-sm pull-left" ng-click="CancelAdd()">Cancel</a>
        <button class="btn btn-primary btn-sm pull-right"  ng-click="ProceedAdd()">Proceed</button>
    </div>

</form>

