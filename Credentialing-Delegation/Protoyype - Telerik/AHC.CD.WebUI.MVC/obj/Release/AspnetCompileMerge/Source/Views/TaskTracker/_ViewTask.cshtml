@model AHC.CD.WebUI.MVC.Models.TaskTracker.TaskTrackerViewModel


<div>
    <div>
        <div class="col-lg-12 zero-padding-left-right-div">            
            <div class="col-lg-4 form-group">
                <label class="control-label small">Provider</label>
                <div>
                    <i class="data-label wrap-words">{{taskView.ProviderName || 'Not Available'}}</i>
                </div> 
            </div>
            <div class="col-lg-4 form-group">
                <label class="control-label small">Sub Section</label>
                <div>
                    <i class="data-label wrap-words">{{taskView.SubSectionName || 'Not Available'}}</i>
                </div> 
            </div>
            <div class="col-lg-4 form-group">
                <label class="control-label small">Subject</label>
                <div>
                    <i class="data-label wrap-words">{{taskView.Subject || 'Not Available'}}</i>
                </div>                
            </div>
        </div>
        <div class="col-lg-12 zero-padding-left-right-div">
            <div class="col-lg-4 form-group">
                <label class="control-label small">Next Followup</label>
                <div>
                    <i class="data-label wrap-words">{{taskView.NextFollowUpDate  | date:'MM/dd/yyyy' || 'Not Available'}}</i>
                </div>                
            </div>
            <div class="col-lg-4 form-group">
                <label class="control-label small">Mode Of Followup</label>
                <div>
                    <i class="data-label wrap-words">{{taskView.FollowUp || 'Not Available'}}</i>
                </div>                
            </div>
            <div class="col-lg-4 form-group">
                <label class="control-label small">Assign To</label>
                <div>
                    <i class="data-label wrap-words">{{taskView.AssignedTo || 'Not Available'}}</i>
                </div>
            </div>
        </div>
        <div class="col-lg-12 zero-padding-left-right-div">
            <div class="col-lg-4 form-group">
                <label class="control-label small">Hospital</label>
                <div>
                    <i class="data-label wrap-words">{{taskView.Hospital || 'Not Available'}}</i>
                </div>                
            </div>
        </div>
        <div class="col-lg-12 zero-padding-left-right-div">
            <div class="col-lg-12 form-group">
                <label class="control-label small">Notes</label>
                <div>
                    <i class="data-label wrap-words">{{taskView.Notes || 'Not Available'}}</i>
                </div>
            </div>
        </div>       
        <div class="col-lg-12 zero-padding-left-right-div">
            <div class="col-md-12 form-group">
                <button type="button" ng-if="detailView" class="btn btn-warning btn-sm" ng-click="cancelView()">Cancel</button>
                <button type="button" ng-if="detailView" class="btn btn-primary btn-sm pull-right" ng-click="showEditview(taskView)">Edit</button>                
            </div>
        </div>
    </div>
</div>

