<div class="panel-group" id="accordionlicense" role="tablist" aria-multiselectable="true" ng-controller="licenseController">
    <div class="panel panel-default">
        <div class="panel-heading" role="tab" id="licenseHeading">
            <a data-toggle="collapse" data-parent="#accordionlicense" href="#license" aria-expanded="false" aria-controls="license">
                Licenses
                <span class="collapsed pull-right">
                    <span class="glyphicon glyphicon-plus"></span>
                </span>
            </a>
        </div>
        <div id="license" class="panel-collapse collapse" role="tabpanel" aria-labelledby="licenseHeading">
            <div class="panel-body">
                <div class="form-group">
                    <div class="col-md-12">
                        <div class="col-md-4">
                            <label class="control-label small">FL Medical License</label>
                            <input type="text" class="form-control input-sm" />
                        </div>
                        <div class="col-md-4">
                            <label class="control-label small">Issue Date</label>
                            <input type="date" class="form-control input-sm" />
                        </div>
                        <div class="col-md-4">
                            <label class="control-label small">Expiration Date</label>
                            <input type="date" class="form-control input-sm" />
                        </div>
                    </div>
                    <div class="col-md-12">
                        <hr />
                        <label class="control-label small">List Additional Medical State Licenses Below</label>
                        <button class="btn btn-primary btn-sm pull-right" ng-click="StateLicense = StateLicense + 1">
                            Add License
                        </button>
                        <hr />

                        <br />
                        <table class="table table-bordered table-condensed">
                            <thead>
                                <tr>
                                    <th>State</th>
                                    <th>License Number</th>
                                    <th>Issue Date</th>
                                    <th>Expiration Date</th>
                                    <th>Action</th>
                            <tbody>
                                <tr ng-repeat="n in stateLicenseList">
                                    <td>
                                        <input type="text" class="form-control input-sm" placeholder="state" />
                                    </td>
                                    <td>
                                        <input type="text" class="form-control input-sm" placeholder="License Number" />
                                    </td>
                                    <td>
                                        <input type="date" class="form-control input-sm" placeholder="Issue Date" />
                                    </td>
                                    <td>
                                        <input type="date" class="form-control input-sm" placeholder="Expiration Date" />
                                    </td>
                                    <td>
                                        <button class="btn btn-danger btn-sm" ng-click="removeStateLicense($index)">
                                            <i class="fa fa-minus"></i>
                                        </button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="col-md-12">
                        <div class="col-md-3">
                            <label class="control-label small">DEA Number</label>
                            <input type="text" class="form-control input-sm" />
                        </div>
                        <div class="col-md-3">
                            <label class="control-label small">Expiration Date</label>
                            <input type="date" class="form-control input-sm" />
                        </div>
                        <div class="col-md-3">
                            <label class="control-label small">CDC Number</label>
                            <input type="text" class="form-control input-sm" />
                        </div>
                        <div class="col-md-3">
                            <label class="control-label small">Expiration Date</label>
                            <input type="date" class="form-control input-sm" />
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="col-md-3">
                            <label class="control-label small">CLIA Number</label>
                            <input type="text" class="form-control input-sm" />
                        </div>
                        <div class="col-md-3">
                            <label class="control-label small">Expiration Date</label>
                            <input type="date" class="form-control input-sm" />
                        </div>
                        <div class="col-md-3">
                            <label class="control-label small">CLIA Number</label>
                            <input type="text" class="form-control input-sm" />
                        </div>
                        <div class="col-md-3">
                            <label class="control-label small">Expiration Date</label>
                            <input type="date" class="form-control input-sm" />
                        </div>
                    </div>

                    <div class="clearfix"></div>
                    <br />

                    <div class="col-md-12 panel-footer">
                        <div class="col-md-12">
                            <button class="btn btn-success btn-sm pull-right">Cancel</button>
                            <button class="btn btn-warning btn-sm">Save</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/Custom/Plan/licenseController.js"></script>