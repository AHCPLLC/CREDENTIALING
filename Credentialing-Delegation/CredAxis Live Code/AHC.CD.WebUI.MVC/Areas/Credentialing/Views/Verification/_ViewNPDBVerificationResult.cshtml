<form class="form-style">
    <fieldset>
        <legend>
            @*{{lisence.name}}*@
            <strong>Verification Result</strong>
        </legend>
        <div class="col-lg-12">
            <table class="table table-bordered table-condensed">
                <thead>
                    <tr>
                        <th>Source</th>
                        <th>Remarks</th>
                        <th>Verified Date</th>
                        <th>Verified Document</th>
                        <th>Action</th>
                    </tr>
                 </thead>
                <tbody>
                    <tr>
                        <td>
                            <div>
                                <a class="data-label wrap-words" style="cursor:pointer" ng-if="NPDB.ProfileVerificationDetail.VerificationResult.Source" ng-click="checkForHttp(NPDB.ProfileVerificationDetail.VerificationResult.Source)">{{NPDB.ProfileVerificationDetail.VerificationResult.Source}}</a>
                                @*<i class="data-label wrap-words" ng-if="!NPDB.ProfileVerificationDetail.VerificationResult.Source">Not Available</i>*@
                            </div>
                        </td>
                        <td>
                            <div>
                                <i class="control-label small wrap-words">{{NPDB.ProfileVerificationDetail.VerificationResult.Remark}}</i>
                            </div>
                        </td>
                        <td>
                            <div>
                                <i class="control-label small wrap-words">{{NPDB.ProfileVerificationDetail.VerificationDate | date:'MM/dd/yyyy'}}</i>
                                @*<label class="control-label small" ng-if="!NPDB.ProfileVerificationDetail.VerificationDate">Not Available</label>*@
                            </div>
                        </td>
                        <td>
                            <div>
                                <a ng-if="NPDB.ProfileVerificationDetail.VerificationResult.VerificationDocumentPath" toggle data-toggle="tooltip" data-placement="bottom" title="Preview" href="@System.Configuration.ConfigurationManager.AppSettings["AppRoot"]{{NPDB.ProfileVerificationDetail.VerificationResult.VerificationDocumentPath}}" target="_blank"><i class="fa fa-file"></i></a>
                                @*<i ng-if="!NPDB.ProfileVerificationDetail.VerificationResult.VerificationDocumentPath">Not Available</i>*@
                            </div>
                        </td>
                        <td>
                            <div>
                                <a class="btn btn-xs btn-primary" tooltip data-toggle="tooltip" data-placement="top" title="Edit" ng-click="NPDB.EditDiv=true;NPDB.ViewDiv=false"><i class="fa fa-edit"></i></a>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </fieldset>
</form>


