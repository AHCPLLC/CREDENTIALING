@using AHC.CD.WebUI.MVC.Areas.Profile.Attributes;

<div class="panel-default" id="FederalDEA">
    <div class="form-style">
        <div id="FederalDEAInfo">
            <fieldset>
                <legend>
                    @if (!ViewBag.Roles.Contains("CCO") && !ViewBag.Roles.Contains("CRA") && !ViewBag.Roles.Contains("TL"))
                    {
                        <i style="font-size:20px" tooltip data-toggle="tooltip" data-placement="top" title="This section is under observation by your credentialing co-ordinator" ng-show="FederalDEAPendingRequest" class="fa text-danger fa-exclamation-circle"></i>
                    }
                    Federal DEA Information
                </legend>
                <div class="legend2 pull-right">
                    @*<button type="button" ng-hide="FederalDEA.length < 1" class="btn btn-xs btn-primary" data-container="body" data-toggle="popover" data-placement="left" data-trigger="hover" data-content="Download" data-original-title="" title="" ng-click="downloadTableData('Profile_Licenses_FederalDEAInformation','Federal DEA Information')"><i class="fa fa-download"></i></button>*@
                    <button id="FederalDEA_Print" type="button" ng-hide="FederalDEA.length < 1" class="btn btn-xs btn-primary" data-container="body" data-toggle="popover" popover data-placement="left" data-trigger="hover" data-content="Print" data-original-title="" title="" ng-click="printData('Profile_Licenses_FederalDEAInformation','Federal DEA Information')"><i class="fa fa-print"></i></button>
                    <button id="FederalDEA_HistoryIcon" type="button" ng-click="showFederalDEALicenseHistory('DEAhistory')" class="btn btn-xs btn-warning" data-container="body" data-toggle="popover" data-placement="left" data-trigger="hover" data-content="View History"><i class="fa fa-clock-o"></i></button>
                    <div id="DEAhistory" class="loading pull-right loadingHistory"><img src="/Content/Images/ajax-loader.gif" width="20" height="20"></div>
                    <button class="btn btn-xs btn-default" data-container="body" data-toggle="popover" data-placement="left" data-trigger="hover" data-content="*If you have additional DEA Licenses include all DEA Registration numbers here."><i class="fa fa-question"></i></button>
                </div>
                <div id="FederalDEAInfo" class="panel-body">
                    <table ng-hide="FederalDEA.length > 0||newShowFederalDEALicense" class="table table-bordered table-condensed customtbodyStyle table-striped">
                        <thead>
                            <tr>
                                <td ng-hide="visibilityControl=='addDEAInformation'">
                                    No Data Available for Federal DEA!
                                    @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Add, ViewBag.Roles, false))
                                    {
                                        <span>
                                            Please click on <button id="noDataAddNewDEA" class="btn btn-xs btn-success" ng-click="operateViewAndAddControl('addDEAInformation'); resetScheduleOption();" tooltip data-toggle="tooltip" data-placement="right" title="Add new"><i class="fa fa-plus"></i></button>
                                            to add new DEA Information
                                        </span>  }
                                </td>
                            </tr>
                        </thead>
                    </table>
                    <table ng-hide="FederalDEA.length < 1" class="table table-bordered table-condensed customtbodyStyle table-striped" id="Profile_Licenses_FederalDEAInformation">
                        <thead>
                            <tr>
                                <th>DEA Number</th>
                                <th>State Of Registration</th>
                                <th>Issue Date</th>
                                <th>Expiration Date</th>
                                <th class="hideData">Supporting Document</th>
                                <th class="hideData">Action</th>
                            </tr>
                        </thead>
                        <tbody ng-repeat="DEAInformation in FederalDEA track by $index">
                            <tr ng-class="{'TableColor':DEAInformation.TableState}">
                                <td class="wrap-words">{{DEAInformation.DEANumber}}</td>
                                <td class="wrap-words">{{DEAInformation.StateOfReg}}</td>
                                <td id="FederalDEA_Add_IssueDate" ng-show="DEAInformation.IssueDate" class="wrap-words">{{DEAInformation.IssueDate || 'Not Available'| date: "MM-dd-yyyy"}}</td>
                                <td id="FederalDEA_Add_IssueDate" ng-hide="DEAInformation.IssueDate" class="wrap-words"><i class="data-label">Not Available</i></td>
                                <td id="FederalDEA_Add_ExpiryDate" ng-hide="DEAInformation.ExpiryDate" class="wrap-words"><i class="data-label">Not Available</i></td>
                                <td id="FederalDEA_Add_ExpiryDate" ng-show="DEAInformation.ExpiryDate" class="wrap-words">{{DEAInformation.ExpiryDate || 'Not Available'| date: "MM-dd-yyyy"}}</td>
                                <td class="wrap-words hideData">
                                    @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Preview, ViewBag.Roles, false))
                                    {
                                        <a ng-if="DEAInformation.DEALicenceCertPath" href="@System.Configuration.ConfigurationManager.AppSettings["AppRoot"]/Document/View?path=@System.Configuration.ConfigurationManager.AppSettings["AppRoot"]{{DEAInformation.DEALicenceCertPath}}" class="pointer" target="_blank" tooltip data-toggle="tooltip" data-placement="top" title="DEA License Document"><i class="fa fa-file" title=""></i></a>
                                    }
                                    <i ng-if="!DEAInformation.DEALicenceCertPath">Not Available</i>
                                </td>
                                <td class="wrap-words hideData">
                                    @if (ProfileActionValidator.IsAuthorized(ProfileActionType.View, ViewBag.Roles, false))
                                    {
                                        <button id="FederalDEA_Table_ViewIcon" class="btn btn-xs btn-default" ng-click="operateViewAndAddControl($index+'_viewDEAInformation')" ng-hide="viewFederalDEALicense" tooltip data-toggle="tooltip" data-placement="left" title="View"><i class="fa fa-eye"></i></button>
                                    }
                                    @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Edit, ViewBag.Roles, false))
                                    {
                                        <button id="FederalDEA_Table_EditIcon" class="btn btn-xs btn-primary" ng-click="operateEditControl($index+'_editDEAInformation',DEAInformation)" ng-hide="editShowFederalDEALicense|| DEAInformation.TableState" tooltip data-toggle="tooltip" data-placement="top" title="Edit"><i class="fa fa-edit"></i></button>
                                    }
                                    <button id="FederalDEA_Table_RenewIcon" class="btn btn-xs btn-default" ng-click="operateRenewControl($index+'_renewDEAInformation',DEAInformation); RenewDivDEA(DEAInformation);" ng-hide="renewFederalDEALicense|| DEAInformation.TableState" tooltip data-toggle="tooltip" data-placement="top" title="Renew"><i class="fa fa-repeat"></i></button>
                                    @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Add, ViewBag.Roles, false))
                                    {
                                        <button id="FederalDEA_Table_RemoveIcon" class="btn btn-xs btn-danger" data-toggle="tooltip" data-placement="top" title="Remove" ng-click="initFederalDEAWarning(DEAInformation)" ng-hide="DEAInformation.TableState" tooltip><i class="fa fa-minus-circle"></i></button>
                                        <button id="addNewDEA" ng-if="$index == FederalDEA.length-1" class="btn btn-xs btn-success" ng-click="operateViewAndAddControl('addDEAInformation'); resetScheduleOption();reseterrormessages();" tooltip data-toggle="tooltip" data-placement="right" title="Add new" ng-hide="viewFederalDEALicense||editShowFederalDEALicense || newShowFederalDEALicense || $index+1!=FederalDEA.length"><i class="fa fa-plus"></i></button>
                                    }
                                </td>
                            </tr>
                            @if (ProfileActionValidator.IsAuthorized(ProfileActionType.View, ViewBag.Roles, false))
                            {
                                <tr ng-show="visibilityControl==($index+'_viewDEAInformation')" class="hideData">
                                    <td colspan="7" class="editTableDataStyle">
                                        @Html.Partial("~/Areas/Profile/Views/IdentificationAndLicense/_ViewFederalDEAInformation.cshtml")
                                    </td>
                                </tr>
                            }
                            @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Edit, ViewBag.Roles, false))
                            {
                                <tr ng-show="visibilityControl==($index+'_editDEAInformation')" class="hideData">
                                    <td colspan="7" id="FederalDEALicenseEditDiv{{$index}}" class="editTableDataStyle">
                                        <fieldset>
                                            <legend>
                                                Edit Federal DEA License
                                            </legend>
                                            <div>
                                                @Html.Partial("~/Areas/Profile/Views/IdentificationAndLicense/_AddEditFederalDEAInformation.cshtml")
                                            </div>
                                        </fieldset>
                                    </td>
                                </tr>
                            }
                            <tr ng-show="visibilityControl==($index+'_renewDEAInformation')" class="hideData">
                                <td colspan="7" id="DEAInformationRenewDiv{{$index}}" class="editTableDataStyle">
                                    <fieldset>
                                        <legend>
                                            Renew Federal DEA License
                                        </legend>
                                        <div>
                                            @Html.Partial("~/Areas/Profile/Views/IdentificationAndLicense/_RenewDEAInformation.cshtml")
                                        </div>
                                    </fieldset>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <div ng-show="activeMessageDiv=='DEAError1'" class="col-lg-12">
                        <br />
                        <div class="alert alert-danger" role="alert">
                            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                            <span class="sr-only">Error:</span>
                            Error List : <br />
                            <span>{{messageDesc}}</span>
                        </div>
                    </div>
                    <div class="modal fade" id="federalDeaWarningModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <form id="editFederalDea">
                                    <div class="modal-header">
                                        <button id="FederalDEA_Remove_Close" type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                        <h4 class="modal-title" id="myModalLabel">Warning!!!!</h4>
                                    </div>
                                    <div class="col-lg-12 text-center" ng-show="isRemoved">
                                        <div style="margin-top:2%;">
                                            <img src="~/Content/Images/ajax-loader.gif" style="width:50px;" /> Please Wait..
                                        </div>
                                    </div>
                                    <div class="modal-body" ng-show="!isRemoved">
                                        Do you really want to remove <b>{{tempReference.DEANumber}} {{tempReference.StateOfReg}}</b> from your Federal Dea list ?
                                        <input type="hidden" name="FederalDEAInformationID" value="{{tempReference.FederalDEAInformationID}}" />
                                        <input type="hidden" name="StatusType" value="2" />
                                    </div>
                                    <div class="modal-footer">
                                        <button id="FederalDEA_Remove_CancelButton" type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                        <button id="FederalDEA_Remove_RemoveButton" type="button" class="btn btn-primary" ng-click="removeFederalDEAInformation(FederalDEA)">Remove</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div ng-show="activeMessageDiv=='addedDEA'" class="alert alert-success" role="alert">
                        <button ng-click="closeAlertMessage('')" class="close"><span>&times;</span></button>
                        <i class="fa fa-2x fa-arrow-up"></i> {{messageDesc}}
                    </div>
                    <div class="clearfix"></div>
                    <div class="form-style">
                        @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Add, ViewBag.Roles, false))
                        {
                            <fieldset ng-show="visibilityControl=='addDEAInformation'">
                                <legend>
                                    Add Federal DEA License
                                </legend>
                                <div id="newShowFederalDEALicenseDiv">
                                    @Html.Partial("~/Areas/Profile/Views/IdentificationAndLicense/_AddEditFederalDEAInformation.cshtml")
                                </div>
                            </fieldset>
                        }
                    </div>
                </div>
            </fieldset>
        </div>
        <div id="FederalDEAInfoHistory">
            <fieldset ng-if="showFederalDEALicenseHistoryTable">
                <legend>
                    Federal DEA Information History
                </legend>
                <div class="legend2 pull-right">
                    @*<button type="button" ng-hide="FederalDEAHistory.length < 1" class="btn btn-xs btn-primary" data-container="body" data-toggle="popover" data-placement="left" data-trigger="hover" data-content="Download" data-original-title="" title="" ng-click="downloadTableData('Profile_Licenses_FederalDEAInformationHistory','Federal DEA Information History')"><i class="fa fa-download"></i></button>*@
                    <button type="button" ng-hide="FederalDEAHistory.length < 1" class="btn btn-xs btn-primary" data-container="body" data-toggle="popover" popover data-placement="left" data-trigger="hover" data-content="Print" data-original-title="" title="" ng-click="printData('Profile_Licenses_FederalDEAInformationHistory','Federal DEA Information History')"><i class="fa fa-print"></i></button>
                    <button type="button" ng-click="cancelFederalDEALicenseHistory()" class="btn btn-xs btn-default" data-container="body" data-toggle="popover" data-placement="left" data-trigger="hover" data-content="View History"><i class="fa fa-times text-danger"></i></button>
                </div>
                <div class="panel-body">
                    <table ng-hide="FederalDEAHistory.length > 0" class="table table-bordered table-condensed customtbodyStyle table-striped">
                        <thead>
                            <tr>
                                <td>
                                    No History Available for Federal DEA Information!
                                </td>
                            </tr>
                        </thead>
                    </table>
                    <table ng-hide="FederalDEAHistory.length < 1" class="table table-bordered table-condensed customtbodyStyle table-striped" id="Profile_Licenses_FederalDEAInformationHistory">
                        <thead>
                            <tr>
                                <th>DEA Number</th>
                                <th>State Of Registration</th>
                                <th>Issue Date</th>
                                <th>Expiration Date</th>
                                <th class="hideData">Supporting Document</th>
                                <th>Status</th>
                                <th>Deleted By</th>
                                <th>Deleted On</th>
                                <th class="hideData">Action</th>
                            </tr>
                        </thead>
                        <tbody ng-repeat="DEAInformationHistory in FederalDEAHistory track by $index">
                            <tr>
                                <td ng-if="DEAInformationHistory.DEANumber" class="wrap-words">{{DEAInformationHistory.DEANumber}}</td>
                                <td ng-if="!DEAInformationHistory.DEANumber" class="wrap-words"><i>Not Available</i></td>
                                <td ng-if="DEAInformationHistory.StateOfReg" class="wrap-words">{{DEAInformationHistory.StateOfReg}}</td>
                                <td ng-if="!DEAInformationHistory.StateOfReg" class="wrap-words"><i>Not Available</i></td>
                                <td ng-show="DEAInformationHistory.IssueDate" class="wrap-words">{{DEAInformationHistory.IssueDate || 'Not Available'| date: "MM-dd-yyyy"}}</td>
                                <td ng-hide="DEAInformationHistory.IssueDate" class="wrap-words"><i class="data-label">Not Available</i></td>
                                <td ng-hide="DEAInformationHistory.ExpiryDate" class="wrap-words"><i class="data-label">Not Available</i></td>
                                <td ng-show="DEAInformationHistory.ExpiryDate" class="wrap-words">{{DEAInformationHistory.ExpiryDate || 'Not Available'| date: "MM-dd-yyyy"}}</td>

                                <td class="wrap-words hideData">
                                    @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Preview, ViewBag.Roles, false))
                                    {
                                        <a ng-if="DEAInformationHistory.FederalDEADocumentPath" href="/Document/View?path={{DEAInformationHistory.FederalDEADocumentPath}}" class="pointer" target="_blank" tooltip data-toggle="tooltip" data-placement="top" title="DEA License Document"><i class="fa fa-file" title=""></i></a>
                                    }
                                    <i ng-if="!DEAInformationHistory.FederalDEADocumentPath">Not Available</i>
                                </td>
                                <td>{{DEAInformationHistory.HistoryStatus}}</td>
                                <td ng-hide="DEAInformationHistory.DeletedBy" class="wrap-words"><i class="data-label">Not Available</i></td>
                                <td ng-show="DEAInformationHistory.DeletedBy" class="wrap-words">{{DEAInformationHistory.DeletedBy || 'Not Available'}}</td>
                                <td ng-hide="DEAInformationHistory.DeletedDate" class="wrap-words"><i class="data-label">Not Available</i></td>
                                <td ng-show="DEAInformationHistory.DeletedDate" class="wrap-words">{{DEAInformationHistory.DeletedDate || 'Not Available'}}</td>

                                <td class="wrap-words hideData">
                                    @if (ProfileActionValidator.IsAuthorized(ProfileActionType.View, ViewBag.Roles, false))
                                    {
                                        <button id="View_FDA_History" class="btn btn-xs btn-default" ng-click="operateViewAndAddControl($index+'_viewDEAInformationHistory')" ng-hide="viewFederalDEALicense" tooltip data-toggle="tooltip" data-placement="left" title="View"><i class="fa fa-eye"></i></button>
                                    }
                                </td>
                            </tr>
                            @if (ProfileActionValidator.IsAuthorized(ProfileActionType.View, ViewBag.Roles, false))
                            {
                                <tr ng-show="visibilityControl==($index+'_viewDEAInformationHistory')" class="hideData">
                                    <td colspan="10" class="editTableDataStyle">
                                        @Html.Partial("~/Areas/Profile/Views/IdentificationAndLicense/_ViewFederalDEAInformationHistory.cshtml")
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </fieldset>
        </div>
    </div>
</div>