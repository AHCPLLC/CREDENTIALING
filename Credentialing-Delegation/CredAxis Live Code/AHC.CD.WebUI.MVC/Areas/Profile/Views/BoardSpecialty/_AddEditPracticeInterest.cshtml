@model AHC.CD.WebUI.MVC.Areas.Profile.Models.BoardSpecialty.PracticeInterestViewModel

<form>
    @Html.ValidationSummary(true, "", new { @class = "text-danger validSummary" })

    @*Practice Interest ID which is used while Editing and kept hidden while adding*@
    <span ng-if="tempObject.PracticeInterestID">
        @Html.HiddenFor(model => model.PracticeInterestID, new { ng_value = "tempObject.PracticeInterestID" })
    </span>
    @*Practice Interest ID which is used while Editing and kept hidden while adding*@

    @*Practice Interest section starts here*@
    @Html.LabelFor(model => model.Interest, new { @class = "control-label small" })
    @Html.TextAreaFor(model => model.Interest, new { @class = "form-control input-sm", data_ng_model = "tempObject.Interest", maxlength = "500" })
    <span class="control-label small pull-right">
        {{500-tempObject.Interest.length}}
        Characters left. 
    </span>
    @Html.ValidationMessageFor(model => model.Interest, "", new { @class = "text-danger" })
    <div class="clearfix"></div><br />
    @*Practice Interest section ends here*@

    @*Error List for Practice Interest*@
    <div ng-show="activeMessageDiv=='errorPracticeInterest'+$index" class="col-lg-12">
        <div class="alert alert-danger" role="alert">
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <span class="sr-only">Error:</span>
            Error Lists :<br />
            <span ng-repeat="err in errorPracticeInterest track by $index">{{err}}</span>
        </div>
    </div>
    <div class="clearfix"></div>
    @*Error List for Practice Interest*@

    @*Buttons to Add/Update/Cancel Practice Interest*@
    <div class="col-md-12 zero-padding-left-right-div">
        <button id="PracticeInterest_Cancelbutton" type="button" class="btn btn-warning btn-sm" ng-click="operateCancelControl('')">Cancel</button>
        <button id="PracticeInterest_Edit_UpdateButton" class="btn btn-primary btn-sm pull-right" ng-show="practiceInterest != null" ng-click="savePracticeInterest(tempObject,tempObject.PracticeInterestID)">Update</button>
        <button id="PracticeInterest_SaveButton" class="btn btn-primary btn-sm pull-right" ng-show="practiceInterest == null" ng-click="savePracticeInterest(tempObject)">Save</button>
    </div>
    @*Buttons to Add/Update/Cancel Practice Interest*@
</form>