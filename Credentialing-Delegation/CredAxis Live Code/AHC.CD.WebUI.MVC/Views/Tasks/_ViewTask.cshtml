@model AHC.CD.WebUI.MVC.Models.TaskTracker.TaskTrackerViewModel

<style>
    .notesTable tr:nth-child(even) {
        background-color: rgba(100, 149, 237, 0.08);
    }

    .notesTable thead {
        color: white;
        background-color: rgba(100, 149, 237, 0.78);
    }

    .notesTable tr:hover {
        background-color: rgba(100, 149, 237, 0.05);
    }
</style>

<div>
    <div>
        <div class="col-lg-12 zero-padding-left-right-div">
            <div class="col-lg-4 form-group">
                <label class="control-label small">Provider</label>
                <div>
                    <i class="data-label wrap-words">{{CurrentTask.ProviderName || 'Not Available'}}</i>
                </div>
            </div>
            <div class="col-lg-4 form-group">
                <label class="control-label small">Sub Section</label>
                <div>
                    <i class="data-label wrap-words">{{CurrentTask.SubSectionName || 'Not Available'}}</i>
                </div>
            </div>
            <div class="col-lg-4 form-group">
                <label class="control-label small">Subject</label>
                <div>
                    <i class="data-label wrap-words">{{CurrentTask.Subject || 'Not Available'}}</i>
                </div>
            </div>
        </div>
        <div class="col-lg-12 zero-padding-left-right-div">
            <div class="col-lg-4 form-group">
                <label class="control-label small">Next Followup</label>
                <div>
                    <i class="data-label wrap-words">{{CurrentTask.NextFollowUpDate  | date:'MM/dd/yyyy' || 'Not Available'}}</i>
                </div>
            </div>
            <div class="col-lg-4 form-group">
                <label class="control-label small">Mode Of Followup</label>
                <div>
                    <span ng-repeat="followup in CurrentTask.ModeOfFollowUp track by $index">
                        <span class="label label-provider-type wrap-words">
                            {{followup.Name || 'Not Available'}}
                        </span>
                        &nbsp;&nbsp;
                    </span>
                </div>
            </div>
            <div class="col-lg-4 form-group">
                <label class="control-label small">Assign To</label>
                <div>
                    <i class="data-label wrap-words">{{CurrentTask.AssignedTo || 'Not Available'}}</i>
                </div>
            </div>
        </div>
        <div class="col-lg-12 zero-padding-left-right-div">
            <div class="col-lg-4 form-group">
                <label class="control-label small">Hospital</label>
                <div>
                    <i class="data-label wrap-words">{{CurrentTask.Hospital || 'Not Available'}}</i>
                </div>
            </div>
            <div class="col-lg-4 form-group">
                <label class="control-label small">Plan Name</label>
                <div>
                    <i class="data-label wrap-words">{{CurrentTask.PlanName || 'Not Available'}}</i>
                </div>
            </div>
        </div>
        <div class="col-lg-12 zero-padding-left-right-div">
            <div class="col-lg-12 form-group">
                <label class="control-label small">Notes:</label>
                <div class="col-lg-12 zero-padding-left-right-div" id="Notes">
                    <div class="col-lg-12" ng-show="viewTemp1.length!=0">
                        <table class="table table-bordered table-condensed table-hover notesTable">
                            <thead>
                                <tr>
                                    <th class="col-lg-2">Date Time</th>
                                    <th class="col-lg-2">User Name</th>
                                    <th>Note</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="note in viewTemp1" class="pointer">
                                    <td>{{note.modifiedDate|| '-'}}</td>
                                    <td>{{note.By||"-"}}</td>
                                    <td class="wrap-words">{{note.stamp}}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        @*<div class="col-lg-12 zero-padding-left-right-div">
            <div class="col-md-12 form-group">
                <button type="button" ng-if="detailView" class="btn btn-warning btn-sm" ng-click="cancelView()">Cancel</button>
            </div>
        </div>*@
    </div>
</div>

