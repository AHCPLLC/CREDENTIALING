@model AHC.CD.WebUI.MVC.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section AddToHead{
    <script src="~/Scripts/Lib/Jquery/jquery-1.11.0.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
}
<style>
    .paddingclass {
        padding-left: 54px;
    }
</style>
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-6">
            @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4>Change Password</h4>
                <hr />
                <div style="margin-left: 80px;">Strong password required. Enter Minimum 8 characters. Do not include common words or names. Combine uppercase letters, lowercase letters, numbers, and symbols.</div>
                @Html.ValidationSummary("", new { @class = "text-danger paddingclass" })
                <div class="form-group">
                    @Html.LabelFor(m => m.OldPassword, new { @class = "col-md-4 control-label small" })
                    <div class="col-md-8">
                        @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control input-sm" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.NewPassword, new { @class = "col-md-4 control-label small" })
                    <div class="col-md-8">
                        @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control input-sm" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-4 control-label small" })
                    <div class="col-md-8">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control input-sm" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        @*<input type="submit" value="Change password" class="btn btn-default" />*@
                        <input type="submit" value="Submit" class="btn btn-success pull-right" />
                        @*<input type="submit" value="Cancel" class="btn btn-warning pull-right" />*@ 
                        <a class="btn btn-warning btn-sm pull-right" style="margin-right: 2%; height: 34px; width: 63px;" href="@System.Configuration.ConfigurationManager.AppSettings["AppRoot"]/manage/index">Cancel</a>                        
                    </div>
                </div>
            }
            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
        </div>
    </div>
</div>
