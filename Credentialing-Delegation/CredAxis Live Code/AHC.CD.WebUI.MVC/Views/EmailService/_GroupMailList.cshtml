                        <br />
                        <div ng-show="groupMailList.length==0 && !gm.isLoading && !loading" class="text-center">
                            <label>No Data Available.</label>
                        </div>
                        <br />
                        <div class="modal fade" id="inactivateWarningModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <form id="removeTask">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                            <h4 class="modal-title" id="myModalLabel">Warning!!!!</h4>
                                        </div>
                                        <div class="col-lg-12 text-center" ng-show="isRemoved">
                                            <div style="margin-top:2%;">
                                                <img src="~/Content/Images/ajax-loader.gif" style="width:50px;" /> Please Wait..
                                            </div>
                                        </div>
                                        <div class="modal-body" ng-show="!isRemoved">
                                            Do you really want to remove the Group ?
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                            <button type="button" class="btn btn-primary" ng-click="removeGroup()" data-dismiss="modal">Continue</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="modal fade" id="ActivateWarningModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <form id="removeTask">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                            <h4 class="modal-title" id="myModalLabel">Warning!!!!</h4>
                                        </div>
                                        <div class="col-lg-12 text-center" ng-show="isRemoved">
                                            <div style="margin-top:2%;">
                                                <img src="~/Content/Images/ajax-loader.gif" style="width:50px;" /> Please Wait..
                                            </div>
                                        </div>
                                        <div class="modal-body" ng-show="!isRemoved">
                                            Do you really want to Activate the Group ?
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                            <button type="button" class="btn btn-primary" ng-click="ActivateGroup()" data-dismiss="modal">Continue</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>

                    </div>
