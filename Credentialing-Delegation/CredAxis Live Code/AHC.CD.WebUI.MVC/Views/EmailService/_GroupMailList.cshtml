                    <div ng-if="tableView">
                        <div class="col-lg-12 form-group  zero-padding-left-right-div">
                            <table class='table table-bordered table-condensed customtbodyStyle table-striped groupListTable' st-pipe="gm.callServer" st-table="gm.displayed" st-safe-src="groupMailList">
                                <thead>
                                    <tr style="color: white; background-color: rgba(66, 123, 225, 0.78);">
                                        <th st-sort-default="reverse" st-sort="EmailGroupName" class="col-lg-2">Group Name</th>
                                        <th st-sort="CreatedByEmail" class="col-lg-2">Created By</th>
                                        <th st-sort="CreatedOn" class="col-lg-2">Created On</th>
                                        @*<th st-sort="Status" class="col-lg-2">Status</th>*@
                                        <th st-sort="CreatedBy" class="col-lg-2">Description</th>
                                        <th st-sort="Emails" class="col-lg-1">Number of Email IDs</th>
                                        <th class="col-lg-2">ACTION</th>
                                    </tr>
                                    <tr>
                                        <td class="hideData "><input st-search="EmailGroupName" type="text" placeholder="Filter Group Name" class="form-control input-sm" /></td>
                                        <td class="hideData"><input st-search="CreatedByEmail" type="text" placeholder="Filter Created By" class="form-control input-sm" /></td>
                                        <td class="hideData"><input st-search="CreatedOn" type="text" placeholder="Filter Created On" class="form-control input-sm" /></td>
                                        <td class="hideData"><input st-search="Description" type="text" placeholder="Filter Description" class="form-control input-sm" /></td>
                                        @*<td class="hideData"><input st-search="Status" type="text" placeholder="Filter Status" class="form-control input-sm" /></td>*@
                                        <td class="hideData"><input st-search="GroupMailUserDetailslength" type="text" placeholder="Filter Number Of Email IDs" class="form-control input-sm" /></td>
                                        <td></td>
                                    </tr>
                                </thead>
                                <tbody ng-show="!gm.isLoading">
                                    <tr ng-repeat="c in gm.displayed">
                                        <td>{{c.EmailGroupName || 'Not Available'}}</td>
                                        <td>{{c.CreatedByEmail|| 'Not Available'}}</td>
                                        <td>{{c.CreatedOn|| 'Not Available'}}</td>
                                        <td>{{c.Description|| 'Not Available'}}</td>
                                        @*<td>{{c.Status|| 'Not Available'}}</td>*@
                                        <td>{{c.GroupMailUserDetailslength|| 'Not Available'}}</td>
                                        <td>
                                            <button class="btn btn-xs btn-default" ng-click="viewGroup(c)" tooltip data-toggle="tooltip" data-placement="left" title="View"><i class="fa fa-eye"></i></button>
                                            <button class="btn btn-xs btn-primary" ng-if="c.Status == 'Active'" ng-class="{'disabled':c.CreatedBy.CDUserID!=c.currentCDuserId}" ng-click="EditGroup(c)" tooltip data-toggle="tooltip" data-placement="left" title="Edit"><i class="fa fa-edit"></i></button>
                                            <button class="btn btn-xs btn-danger" ng-if="c.Status == 'Active'" ng-class="{'disabled':c.CreatedBy.CDUserID!=c.currentCDuserId}" data-toggle="tooltip" data-placement="top" title="Inactivate Group" ng-click="Remove(c.EmailGroupId);" tooltip><i class="fa fa-remove"></i></button>
                                            <button class="btn btn-xs btn-info" ng-if="c.Status == 'Inactive'" ng-class="{'disabled':c.CreatedBy.CDUserID!=c.currentCDuserId}" data-toggle="tooltip" data-placement="top" title="Re-Activate Group" ng-click="ReActivateGroup(c.EmailGroupId);" tooltip><i class="fa fa-repeat"></i></button>
                                        </td>
                                    </tr>
                                </tbody>
                                <tbody ng-show="gm.isLoading">
                                    <tr>
                                        <td colspan="8" class="text-center">
                                            <div class="loading-indicator"></div>
                                        </td>
                                    </tr>
                                </tbody>
                                <tfoot style="cursor:pointer">
                                    <tr ng-if="groupMailList.length>10">
                                        <td class="text-center" st-pagination="" st-items-by-page="10" colspan="8"></td>
                                    </tr>
                                </tfoot>
                            </table>

