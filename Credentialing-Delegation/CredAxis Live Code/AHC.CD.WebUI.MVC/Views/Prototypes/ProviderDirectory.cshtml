
@{
    ViewBag.Title = "Provider Directory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section AddToHead{
    <style>
        .zero-padding-left-right {
            padding-left: 3px;
            padding-right: 3px;
        }

        .margin_top_6px {
            margin-top: 6px;
        }

        button.biscuit {
            min-height: 75px;
            min-width: 10px;
            width: 100%;
            height: 100%;
            text-decoration: none;
            text-transform: none;
            border-radius: 2px;
            font-weight: 600;
            margin-bottom: 20px !important;
            white-space: normal;
            cursor: pointer;
            outline: 0;
            padding: 0;
            transition: all .3s linear;
        }

        button.biscuit {
            position: relative;
            display: inline-block;
        }

            button.biscuit:hover {
                color: #fff;
                transition: all .3s linear;
            }

        .biscit_outerColor_blue {
            color: #0288d1;
            background-color: #fff;
            border: 1px solid #0288d1;
            box-shadow: inset 0 0 0 #01579b, 0 5px 0 0 #01579b, 0 5px 5px #999;
        }

            .biscit_outerColor_blue:hover {
                background-color: #0288d1;
            }

            .biscit_outerColor_blue.active {
                color: #fff;
                background-color: #0288d1;
                box-shadow: 0 5px #01579b;
                transform: translateY(4px);
            }

        .tiles_outerColor_blue {
            color: #fff;
            background-color: #0288d1;
            border: 1px solid #0288d1;
            box-shadow: 0 5px #01579b;
            transform: translateY(4px);
        }



        .biscit_outerColor_green {
            color: #43a047;
            background-color: #fff;
            border: 1px solid #43a047;
            box-shadow: inset 0 0 0 #1b5e20, 0 5px 0 0 #1b5e20, 0 5px 5px #999;
        }

            .biscit_outerColor_green:hover {
                background-color: #43a047;
            }

            .biscit_outerColor_green.active {
                color: #fff;
                background-color: #43a047;
                box-shadow: 0 5px #1b5e20;
                transform: translateY(4px);
            }

        .tiles_outerColor_green {
            color: #fff;
            background-color: #43a047;
            border: 1px solid #0288d1;
            box-shadow: 0 5px #1b5e20;
            transform: translateY(4px);
        }

        .biscit_outerColor_time {
            color: #18758f;
            background-color: #fff;
            border: 1px solid #18758f;
            box-shadow: inset 0 0 0 #044557, 0 5px 0 0 #044557, 0 5px 5px #999;
        }

            .biscit_outerColor_time:hover {
                background-color: #18758f;
            }

            .biscit_outerColor_time.active {
                color: #fff;
                background-color: #18758f;
                box-shadow: 0 5px #044557;
                transform: translateY(4px);
            }

        .tiles_outerColor_time {
            color: #fff;
            background-color: #18758f;
            border: 1px solid #18758f;
            box-shadow: 0 5px #044557;
            transform: translateY(4px);
        }

        .biscit_outerColor_Sea {
            color: #009973;
            background-color: #fff;
            border: 1px solid #009973;
            box-shadow: inset 0 0 0 #00664d, 0 5px 0 0 #00664d, 0 5px 5px #999;
        }

            .biscit_outerColor_Sea:hover {
                background-color: #009973;
            }

            .biscit_outerColor_Sea.active {
                color: #fff;
                background-color: #009973;
                box-shadow: 0 5px #00664d;
                transform: translateY(4px);
            }

        .biscuit_heading.auth, .biscuit_heading.pt {
            font-size: 20px;
        }

        .biscuit_heading.auth {
            position: relative;
            margin-top: 8px;
            font-weight: 300;
            margin-left: 38px;
        }

        .biscuit_heading {
            font-size: 8px;
            font-weight: 600;
        }

        .biscuit_body {
            font-size: 12px;
            font-weight: 300;
        }

        .iconspace {
            margin-top: -24px;
            margin-left: 8px;
        }

        .datasize {
            margin-left: 142px;
            margin-top: -28px;
            font-size: 24px;
        }

        .padding_5 {
            font-size: 12px;
        }

        .padding_5, .padding_5px {
            padding-left: 5px;
            padding-right: 5px;
        }

        .divborder {
            border: 3px solid rgba(13, 1, 25, 0.4);
            border-radius: 3px;
            background-color: #FFF;
        }

        .tripijodal {
            text-align: center;
            color: #f5f5f5;
            height: 0px;
            line-height: 3;
            font-weight: bold;
            border-bottom: 40px solid #464957;
            border-left: 50px solid transparent;
            border-right: 50px solid transparent;
        }

        .tableRowColorRed {
            background-color: red;
            color: white;
        }

        fieldset {
            border: 3px solid rgba(13, 1, 25, 0.4);
            border-radius: 3px;
            background-color: #FFF;
        }

        legend {
            text-align: left;
            color: #f5f5f5;
            width: inherit;
            margin-left: 12px;
            font-size: initial;
            background-color: #464957;
            padding: 0.6em;
        }


        .panelheading {
            color: #f5f5f5 !important;
            background-color: #3E3C53 !important;
        }

        .single_dual.notActive {
            color: #3276b1;
            background-color: #fff;
            background-image: linear-gradient(to bottom, #fff 0, #fff 100%);
        }

        .provider_active.notActive {
            color: #3276b1;
            background-color: #fff;
            background-image: linear-gradient(to bottom, #fff 0, #fff 100%);
        }
    </style>
    <link rel="stylesheet" href="https://unpkg.com/ng-table@2.0.2/bundles/ng-table.min.css">

    <script src="~/Scripts/Lib/Jquery/jquery-1.11.0.js"></script>
    <script src="~/Scripts/Lib/Angular/angular.min.js"></script>
    @*<script src="~/Scripts/Lib/Angular/ng-table.js"></script>*@
    <script src="https://unpkg.com/ng-table@2.0.2/bundles/ng-table.min.js"></script>
    <script src="~/Scripts/Lib/Angular/ui-bootstrap-tpls-0.13.0.min.js"></script>
    <script src="~/Scripts/Custom/Credentialing/ProviderDirectory.js"></script>

    <script>
        $(document).ready(function () {
            $("body").tooltip({ selector: '[data-toggle=tooltip]' });
            $("#sidemenu").addClass("menu-in");
            $("#page-wrapper").addClass("menuup");
            $(".ProviderTypeSelectAutoList").hide();
        });
    </script>
}

<div id="page-wrapper" ng-app="PDApp" ng-controller="PDController" style="margin-top: 60px;">
    <div class="col-lg-12 zero-padding-left-right margin_top_6px">
        <div class="col-lg-3 zero-padding-left-right ng-scope">
            <button ng-click="GetAll();" class="biscuit biscit_outerColor_blue">
                <div class="biscuit_heading auth">
                    <b>All Providers</b>
                </div>
                <div class="biscuit_body">
                    <div class="col-sm-5 padding_5">
                        <div class="pull-left iconspace">
                            <i class="fa fa-4x fa-users"></i>
                        </div>
                    </div>
                    <div class="col-sm-5 datasize">
                        <b>212</b>
                    </div>
                    <div class="col-sm-2 padding_5"></div>
                </div>
            </button>
        </div>
        <div class="col-lg-3 zero-padding-left-right ng-scope">
            <button ng-click="GetMidLevels();" class="biscuit biscit_outerColor_green">
                <div class="biscuit_heading auth">
                    <b>Mid Levels</b>
                </div>
                <div class="biscuit_body">
                    <div class="col-sm-5 padding_5">
                        <div class="pull-left iconspace">
                            <i class="fa fa-4x fa-user"></i>
                        </div>
                    </div>
                    <div class="col-sm-5 datasize">
                        <b>70</b>
                    </div>
                    <div class="col-sm-2 padding_5"></div>
                </div>
            </button>
        </div>
        <div class="col-lg-3 zero-padding-left-right ng-scope">
            <button ng-click="GetPCPs();" class="biscuit biscit_outerColor_time">
                <div class="biscuit_heading auth">
                    <b>PCPs</b>
                </div>
                <div class="biscuit_body">
                    <div class="col-sm-5 padding_5">
                        <div class="pull-left iconspace">
                            <i class="fa fa-4x fa-user-md"></i>
                        </div>
                    </div>
                    <div class="col-sm-5 datasize">
                        <b>60</b>
                    </div>
                    <div class="col-sm-2 padding_5"></div>
                </div>
            </button>
        </div>
        <div class="col-lg-3 zero-padding-left-right ng-scope">
            <button ng-click="GetSpecialities(2);" class="biscuit biscit_outerColor_Sea">
                <div class="biscuit_heading auth">
                    <b>Specialists</b>
                </div>
                <div class="biscuit_body">
                    <div class="col-sm-5 padding_5">
                        <div class="pull-left iconspace">
                            <i class="fa fa-4x fa-user-md"></i>
                        </div>
                    </div>
                    <div class="col-sm-5 datasize">
                        <b>45</b>
                    </div>
                    <div class="col-sm-2 padding_5"></div>
                </div>
            </button>
        </div>
    </div>

    <div class="col-lg-12 zero-padding-left-right">
        <table class="table table-condensed table-striped">
            <tbody>
                <tr>
                    <td colspan="4"><h4 style="margin-top: 0px;margin-bottom: 0px;">All {{ProviderTitle}}</h4></td>
                    <td colspan="2">
                        <span style="float:right;">
                            <button class="btn btn-xs btn-default" tooltip="" data-toggle="tooltip" data-placement="top" data-original-title="Print"><i class="fa fa-print"></i></button>
                            <button class="btn btn-xs btn-success" tooltip="" data-toggle="tooltip" data-placement="top" data-original-title="Export To Excel"><i class="fa fa-file-excel-o"></i></button>
                            <button class="btn btn-xs btn-danger" tooltip="" data-toggle="tooltip" data-placement="top" data-original-title="Export To PDF"><i class="fa fa-file-pdf-o"></i></button>
                        </span>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="form-group">
                            <span for="fun" class="col-sm-5 col-md-5 control-label text-right">Speciality: </span>
                            <div class="col-sm-7 col-md-7 zero-padding-left-right">
                                <div class="input-group">
                                    <div class="btn-group">
                                        <a ng-click="GetSpecialities(1);" class="single_dual btn btn-xs btn-success active" data-toggle="fun" data-title="Y">Single</a>
                                        <a ng-click="GetSpecialities(2);" class="single_dual btn btn-xs btn-primary notActive" data-toggle="fun" data-title="X">Dual</a>
                                    </div>
                                    <input type="hidden" name="fun" id="fun">
                                </div>
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <span for="fun" class="col-sm-5 col-md-5 control-label text-right">Active: </span>
                            <div class="col-sm-7 col-md-7 zero-padding-left-right">
                                <div class="input-group">
                                    <div class="btn-group">
                                        <a ng-click="GetActiveInActive(1);" class="provider_active btn btn-xs btn-primary active" data-toggle="fun" data-title="Y">Active</a>
                                        <a ng-click="GetActiveInActive(2);" class="provider_active btn btn-xs btn-danger notActive" data-toggle="fun" data-title="X">Inactive</a>
                                    </div>
                                    <input type="hidden" name="fun" id="fun">
                                </div>
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="input-group">
                            <div class="input-group-btn">
                                <button type="button" class="btn btn-default btn-sm dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Hospitals List <span class="caret"></span></button>
                                <ul class="dropdown-menu">
                                    <li><a href="#">Hospitals List</a></li>
                                    <li><a href="#">LOB</a></li>
                                    <li><a href="#">ProviderType</a></li>
                                    <li role="separator" class="divider"></li>
                                    <li><a href="#">Provider Relationship</a></li>
                                    <li><a href="#">Country</a></li>
                                    <li><a href="#">Speciality</a></li>
                                    <li><a href="#">Practice Location</a></li>
                                </ul>
                            </div><!-- /btn-group -->
                            <input type="text" class="form-control input-sm" aria-label="search_dropdown">
                        </div><!-- /input-group -->
                    </td>
                    <td>
                        <div class="input-group">
                            <div class="input-group-btn">
                                <button type="button" class="btn btn-default btn-sm dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-cog"></span> Customize Search Result <span class="caret"></span></button>
                                <ul class="dropdown-menu customize_column">
                                    <li><a class="small" data-value="option1"><input type="checkbox" checked />&nbsp;S. No.</a></li>
                                    <li><a class="small" data-value="option2"><input type="checkbox" checked />&nbsp;Salutation</a></li>
                                    <li><a class="small" data-value="option3"><input type="checkbox" checked />&nbsp;Provider Name</a></li>
                                    <li><a class="small" data-value="option4"><input type="checkbox" checked />&nbsp;NPI Number</a></li>
                                    <li><a class="small" data-value="option5"><input type="checkbox" checked />&nbsp;Specialty</a></li>
                                    <li><a class="small" data-value="option6"><input type="checkbox" checked />&nbsp;Primary Practice Location</a></li>
                                    <li><a class="small" data-value="option7"><input type="checkbox" checked />&nbsp;IPA/Group</a></li>
                                    <li><a class="small" data-value="option8"><input type="checkbox" checked />&nbsp;Plan</a></li>
                                    <li><a class="small" data-value="option9"><input type="checkbox" checked />&nbsp;LOB</a></li>
                                </ul>
                            </div>
                        </div><!-- /input-group -->
                    </td>
                    <td colspan="2">
                        <div class="input-group input-group-sm">
                            <input type="text" class="form-control" placeholder="Search...">
                            <span class="input-group-btn">
                                <button class="btn btn-default" type="button"><i class="fa fa-search"></i></button>
                            </span>
                        </div><!-- /input-group -->
                    </td>
                </tr>
            </tbody>
        </table>
        <table ng-table="tableParams" class="table table-condensed table-bordered table-striped" show-filter="true">
            <tr ng-repeat="row in $data">
                <td data-title="'S. No.'">{{$index+1}}</td>
                <td data-title="'Salutation'" filter="{ Salutation: 'text'}" sortable="'Salutation'">{{row.Salutation}}</td>
                <td data-title="'Provider Name'" filter="{ Name: 'text'}" sortable="'Name'">{{row.Name}}</td>
                <td data-title="'NPI Number'" filter="{ NPI: 'text'}" sortable="'NPI'">{{row.NPI}}</td>
                <td data-title="'Specialty'" filter="{ Specialty: 'text'}" @*filter-data="Specialties"*@ sortable="'Specialty'">{{row.Specialty}}</td>
                <td data-title="'Primary Practice Location'" filter="{ PrimaryPracticeLocation: 'text'}" sortable="'PrimaryPracticeLocation'">{{row.PrimaryPracticeLocation}}</td>
                <td data-title="'IPA/Group'" filter="{ Groups: 'text'}" sortable="'Groups'">{{row.Groups}}</td>
                <td data-title="'Plan'" filter="{ Plan: 'text'}" sortable="'Plan'">{{row.Plan}}</td>
                <td data-title="'LOB'" filter="{ LOB: 'text'}" sortable="'LOB'">{{row.LOB}}</td>
            </tr>
        </table>
    </div>
</div>