@using AHC.CD.WebUI.MVC.Areas.Profile.Attributes;

<div class="form-style">
    <fieldset>
        <legend>
            Work Gap
        </legend>
        <div class="form-style">
            <div class="legend2 pull-right">
                <button class="btn btn-xs btn-default" data-container="body" data-toggle="popover" data-placement="left" data-trigger="hover" data-content="*If you have any work gap over 3 months"><i class="fa fa-question"></i></button>
                <button type="button" ng-click="showWorkGapHistory('WGH')" class="btn btn-xs btn-default" data-container="body" data-toggle="popover" data-placement="left" data-trigger="hover" data-content="View History"><i class="fa fa-history"></i></button>
                <div id="WGH" class="loading pull-right loadingHistory"><img src="/Content/Images/ajax-loader.gif" width="20" height="20"></div>
            </div>
            <div class="col-lg-12">
                <table ng-hide="workGaps.length > 0" class="table table-bordered table-condensed customtbodyStyle table-striped">
                    <thead>
                        <tr>
                            <td ng-hide="visibilityControl=='addWorkGap'">
                                No Data Available For Work Gap !
                                @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Add, ViewBag.Roles, false))
                                {
                                    <span>Please click on <button id="noDataAddNewWorkGap" class="btn btn-xs btn-success" ng-click="operateViewAndAddControl('addWorkGap')" tooltip data-toggle="tooltip" data-placement="right" title="Add new"><i class="fa fa-plus"></i></button> to add new Work Gap</span>
                                }
                            </td>
                        </tr>
                    </thead>
                </table>
                <table ng-hide="workGaps.length < 1" class="table table-bordered table-condensed customtbodyStyle table-striped">
                    <thead>
                        <tr>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody ng-repeat="workGap in workGaps">
                        <tr>
                            <td>{{workGap.StartDate | date:'MM-dd-yyyy'}}</td>
                            <td>{{workGap.EndDate | date:'MM-dd-yyyy'}}</td>
                            <td>
                                @if (ProfileActionValidator.IsAuthorized(ProfileActionType.View, ViewBag.Roles, false))
                                {
                                    <button class="btn btn-xs btn-default" ng-click="operateViewAndAddControl($index+'_viewWorkGap')" ng-hide="viewWorkGap" tooltip data-toggle="tooltip" data-placement="left" title="View"><i class="fa fa-eye"></i></button>
                                }
                                @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Edit, ViewBag.Roles, false))
                                {
                                    <button class="btn btn-xs btn-primary" ng-click="operateEditControl($index+'_editWorkGap',workGap);changeButtonText()" ng-hide="editWorkGap" tooltip data-toggle="tooltip" data-placement="top" title="Edit"><i class="fa fa-edit"></i></button>
                                }
                                @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Add, ViewBag.Roles, false))
                                {
                                    <button class="btn btn-xs btn-danger" data-toggle="tooltip" data-placement="top" title="Remove" ng-click="initWorkGapWarning(workGap);" tooltip><i class="fa fa-minus-circle"></i></button>
                                    <button id="addNewWorkGap" class="btn btn-xs btn-success" ng-click="operateViewAndAddControl('addWorkGap');changeButtonText()" ng-hide="viewWorkGap|| editShowWorkGap || newShowWorkGap || $index+1!=workGaps.length" tooltip data-toggle="tooltip" data-placement="right" title="Add new"><i class="fa fa-plus"></i></button>
                                }
                            </td>
                        </tr>
                        @if (ProfileActionValidator.IsAuthorized(ProfileActionType.View, ViewBag.Roles, false))
                        {
                            <tr ng-show="visibilityControl==($index+'_viewWorkGap')">
                                <td colspan="7">
                                    @Html.Partial("~/Areas/Profile/Views/WorkHistory/_ViewWorkGap.cshtml")
                                </td>
                            </tr>
                        }
                        @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Edit, ViewBag.Roles, false))
                        {
                            <tr ng-show="visibilityControl==($index+'_editWorkGap')">
                                <td colspan="7" id="workGapEditDiv{{$index}}" class="editTableDataStyle">
                                    <fieldset>
                                        <legend>
                                            Edit Work Gap
                                        </legend>
                                        @Html.Partial("~/Areas/Profile/Views/WorkHistory/_AddEditWorkGap.cshtml")
                                        <div class="col-md-12 form-group">
                                            <button type="button" class="btn btn-warning btn-sm" ng-click="operateCancelControl('');resetDates();">Cancel</button>
                                            <button type="submit" class="btn btn-primary btn-sm pull-right" ng-click="saveWorkGap(tempObject, $index)">Update</button>
                                        </div>
                                    </fieldset>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div ng-show="activeMessageDiv=='addedNewWorkGap'" class="alert alert-success" role="alert">
                    <button ng-click="closeAlertMessage('')" class="close"><span>&times;</span></button>
                    <i class="fa fa-2x fa-arrow-up"></i> {{messageDesc}}
                </div>
                <div ng-show="activeMessageDiv=='removeWorkGap'">
                    <div class="alert alert-danger" role="alert">
                        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                        <span class="sr-only">Error:</span>
                        Error Lists :<br />
                        <span ng-repeat="err in errorWorkGap track by $index">{{err}}</span>
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="clearfix"></div>
            @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Add, ViewBag.Roles, false))
            {
                <fieldset ng-show="visibilityControl==('addWorkGap')">
                    <legend>
                        Add Work Gap
                    </legend>
                    <div id="newWorkGapFormDiv">
                        @Html.Partial("~/Areas/Profile/Views/WorkHistory/_AddEditWorkGap.cshtml")
                        <div class="col-md-12 form-group">
                            <button type="button" class="btn btn-warning btn-sm" ng-click="operateCancelControl('');resetDates();">Cancel</button>
                            <button type="submit" class="btn btn-primary btn-sm pull-right" ng-click="saveWorkGap(tempObject, $index)">Add</button>
                        </div>
                    </div>
                </fieldset>
            }
        </div>
    </fieldset>
    <div class="panel-default" ng-if="showWorkGapHistoryTable">
        <div class="form-style">
            <fieldset>
                <legend>
                    Work Gap History
                </legend>
                <div class="legend2 pull-right">
                    <button type="button" ng-click="cancelWorkGapHistory()" class="btn btn-xs btn-default" data-container="body" data-toggle="popover" data-placement="left" data-trigger="hover" data-content="View History"><i class="fa fa-times text-danger"></i></button>
                </div>
                <table ng-hide="workGapHistoryArray.length > 0" class="table table-bordered table-condensed customtbodyStyle table-striped">
                    <thead>
                        <tr>
                            <td>
                                No History Available for Work Gap!
                            </td>
                        </tr>
                    </thead>
                </table>
                <table ng-hide="workGapHistoryArray.length <= 0" class="table table-bordered table-condensed table-striped customtbodyStyle">
                    <thead>
                        <tr>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody ng-repeat="wgHistory in workGapHistoryArray">
                        <tr>
                            <td>{{wgHistory.StartDate | date:'MM-dd-yyyy'}}</td>
                            <td>{{wgHistory.EndDate | date:'MM-dd-yyyy'}}</td>
                            <td>{{wgHistory.HistoryStatus}}</td>
                            <td>
                                <button class="btn btn-xs btn-default" ng-click="operateViewAndAddControl($index+'_viewgHistory')" tooltip data-toggle="tooltip" data-placement="left" title="View"><i class="fa fa-eye"></i></button>
                            </td>
                        </tr>
                        <tr ng-show="visibilityControl==($index+'_viewgHistory')">
                            <td colspan="6" class="editTableDataStyle">
                                @Html.Partial("~/Areas/Profile/Views/WorkHistory/_ViewWorkGapHistory.cshtml")
                            </td>
                        </tr>
                    </tbody>
                </table>
            </fieldset>
        </div>
    </div>
    <div class="modal fade" id="workGapWarningModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form id="editWorkGap">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">Warning!!!!</h4>
                    </div>
                    <div class="modal-body">
                        Do you really want to remove the work gap from <b>{{tempWorkGap.StartDate | date:'MM-dd-yyyy'}}</b> to <b>{{tempWorkGap.EndDate | date:'MM-dd-yyyy'}}</b> from your Work Gap list ?
                        <input type="hidden" name="WorkGapID" value="{{tempWorkGap.WorkGapID}}" />
                        <input type="hidden" name="StatusType" value="2" />
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-primary" ng-click="removeWorkGap(workGaps)">Remove</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>