@model AHC.CD.Entities.MasterProfile.WorkHistory.EmployeerDetail

<fieldset>
    <legend>
        Employer Details
    </legend>
    <div class="panel-body">
        <div class="col-md-12">
            <div class="form-group col-md-4">
                <label class="control-label small">Employer Name *</label>
                <div>

                    @Html.EditorFor(model => model.EmployerName, new { htmlAttributes = new { @class = "form-control input-sm", data_ng_model = "newProWorkInfo.EmployerDetail.EmployerName" } })
                    @Html.ValidationMessageFor(model => model.EmployerName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-md-4">
                <label class="control-label small">Job Title *</label>
                <div>
                    @Html.EditorFor(model => model.JobTitle, new { htmlAttributes = new { @class = "form-control input-sm", data_ng_model = "newProWorkInfo.EmployerDetail.JobTitle" } })
                    @Html.ValidationMessageFor(model => model.JobTitle, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group col-md-4">
                <label for="MobileNo" class="control-label small">Mobile Number *</label>
                <div>
                    <div class="input-group">
                        <div class="input-group-btn">
                            <button type="button" class="btn btn-default btn-sm"><span class="caret"></span></button>
                        </div>
                        <div class="popover fade bottom in" role="tooltip" id="countryDailCodeContainer">
                            <div class="arrow"></div>
                            <h3 class="popover-title">Select Country Dial Code</h3>
                            <div class="popover-content">
                                <select id="ContactContryCode">
                                    <option>+91</option>
                                </select>
                            </div>
                        </div>
                        @Html.EditorFor(model => model.EmployerMobile, new { htmlAttributes = new { @class = "form-control input-sm", data_ng_model = "newProWorkInfo.EmployerDetail.EmployerMobile" } })
                        @Html.ValidationMessageFor(model => model.EmployerMobile, "", new { @class = "text-danger" })
                    </div>

                </div>
            </div>

        </div>

        <div class="col-md-12">
            <div class="form-group col-md-4">
                <label for="MobileNo" class="control-label small">Fax Number *</label>
                <div>
                    <div class="input-group">
                        <div class="input-group-btn">
                            <button type="button" class="btn btn-default btn-sm"><span class="caret"></span></button>
                        </div>
                        <div class="popover fade bottom in" role="tooltip" id="countryDailCodeContainer">
                            <div class="arrow"></div>
                            <h3 class="popover-title">Select Country Dial Code</h3>
                            <div class="popover-content">
                                <select id="ContactContryCode">
                                    <option>+91</option>
                                </select>
                            </div>
                        </div>
                        @Html.EditorFor(model => model.EmployerFax, new { htmlAttributes = new { @class = "form-control input-sm", data_ng_model = "newProWorkInfo.EmployerDetail.EmployerFax" } })
                        @Html.ValidationMessageFor(model => model.EmployerFax, "", new { @class = "text-danger" })
                    </div>

                </div>
            </div>

            <div class="form-group col-md-8">
                <label for="Contact" class="control-label small">May we contact your employer ? *</label>
                <div class="radio">
                    <label class="radio-inline">
                        @Html.RadioButtonFor(model => model.CanContactEmployer, true, new { data_ng_model = "newProWorkInfo.EmployerDetail.CanContactEmployer" }) Yes
                    </label>
                    <label class="radio-inline">
                        @Html.RadioButtonFor(model => model.CanContactEmployer, false, new { data_ng_model = "newProWorkInfo.EmployerDetail.CanContactEmployer" }) No
                    </label>
                </div>
            </div>


        </div>


        <div class="col-md-12">
            <div class="form-group col-md-6">
                <label class="control-label small">Department *</label>
                <div>
                    @Html.EditorFor(model => model.Department, new { htmlAttributes = new { @class = "form-control input-sm", data_ng_model = "newProWorkInfo.EmployerDetail.Department" } })
                    @Html.ValidationMessageFor(model => model.Department, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-md-6">
                <label class="control-label small">Title *</label>
                <div>
                    @Html.DropDownListFor(model => model.Title, new[] { new SelectListItem { Value = "PO", Text = "PO" }, new SelectListItem { Value = "MO", Text = "MO" } }, "-- select --", new { @class = "form-control input-sm input-sm", data_ng_model = "newProWorkInfo.EmployerDetail.Title" })
                </div>
            </div>

        </div>

        <div class="col-md-12">
            <div class="form-group col-md-12">
                <div class="fileinput fileinput-new input-group" data-provides="fileinput">
                    <div class="form-control input-sm" data-trigger="fileinput"><i class="glyphicon glyphicon-file fileinput-exists"></i> <span class="fileinput-filename"></span></div>
                    <span class="input-group-addon btn btn-default btn-file"><span class="fileinput-new"> Upload Resume</span><span class="fileinput-exists">Change</span><input type="file" name="..."></span>
                    <a href="#" class="input-group-addon btn btn-default fileinput-exists" data-dismiss="fileinput">Remove</a>
                </div>
            </div>
        </div>
    </div>
</fieldset>
