@using AHC.CD.WebUI.MVC.Areas.Profile.Attributes;

<div class="panel-default">
    <div class="form-style">
        <fieldset>
            <legend>
                Medicaid Information
            </legend>
            
            <div class="legend2 pull-right">
                <button class="btn btn-xs btn-default" data-container="body" data-toggle="popover" data-placement="left" data-trigger="hover" data-content="*If you have additional Medicaid Number include here."><i class="fa fa-question"></i></button>
            </div>
            <div id="MedicaidInfo" class="panel-body">
                <table ng-hide="MedicaidInformations.length > 0||newShowMedicaidInformation" class="table table-bordered table-condensed customtbodyStyle table-striped">
                    <thead>
                        <tr>
                            <td ng-hide ="visibilityControl=='addMedicaidInformation'">
                                No Data Available For Medicaid Information! 
                                @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Add, ViewBag.Roles, false))
                                {
                                    <span>
                                        Please click on <button class="btn btn-xs btn-success" ng-click="operateViewAndAddControl('addMedicaidInformation')" data-toggle="tooltip" data-placement="right" title="Add new"><i class="fa fa-plus"></i></button>
                                    to add new Medicaid Information</span> }
                            </td>
                        </tr>
                    </thead>
                </table>
              
                <table ng-hide="MedicaidInformations.length < 1" class="table table-bordered table-condensed customtbodyStyle table-striped">
                        <thead>
                            <tr>
                                <th>Medicaid Number</th>
                                <th>Issue State</th>
                                <th>Issue Date</th>
                                <th>Supporting Document</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                    <tbody ng-repeat="MedicaidInformation in MedicaidInformations track by $index">
                        <tr>
                            <td>{{MedicaidInformation.LicenseNumber}}</td>
                            <td>{{MedicaidInformation.State}}</td>
                            <td>{{MedicaidInformation.IssueDate| date: "MM-dd-yyyy"}}</td>
                            <td>
                                @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Preview, ViewBag.Roles, false))
                                {
                                    <a ng-if="MedicaidInformation.CertificatePath" href="/Document/View?path={{MedicaidInformation.CertificatePath}}" class="pointer" target="_blank" title="{{MedicaidInformation.CertificatePath}}">
                                        <i class="fa fa-file" title=""></i>
                                    </a>
                                }  <i ng-if="!MedicaidInformation.CertificatePath">Not available</i>
                            </td>
                            <td>
                                @if (ProfileActionValidator.IsAuthorized(ProfileActionType.View, ViewBag.Roles, false))
                                {
                                    <button class="btn btn-xs btn-default" ng-click="operateViewAndAddControl($index+'_viewMedicaidInformation')" ng-hide="viewMedicaid" data-toggle="tooltip" data-placement="left" title="View"><i class="fa fa-eye"></i></button>
                                }
                                @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Edit, ViewBag.Roles, false))
                                {
                                    <button class="btn btn-xs btn-primary" ng-click="operateEditControl($index+'_editMedicaidInformation',MedicaidInformation)" ng-hide="editShowMedicaidInformation" data-toggle="tooltip" data-placement="top" title="Edit"><i class="fa fa-edit"></i></button>
                                }
                                @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Add, ViewBag.Roles, false))
                                {
                                    <button class="btn btn-xs btn-success" ng-click="operateViewAndAddControl('addMedicaidInformation')" data-toggle="tooltip" data-placement="right" title="Add new" ng-hide="viewMedicaid ||editShowMedicaidInformation || newShowMedicaidInformation || $index+1!=MedicaidInformations.length"><i class="fa fa-plus"></i></button>
                                }
                            </td>
                        </tr>
                        @if (ProfileActionValidator.IsAuthorized(ProfileActionType.View, ViewBag.Roles, false))
                        {
                            <tr ng-show="visibilityControl==($index+'_viewMedicaidInformation')">
                                <td colspan="6" class="editTableDataStyle">
                                    @Html.Partial("~/Areas/Profile/Views/IdentificationAndLicense/_ViewMedicaidInformation.cshtml")
                                </td>
                            </tr>
                        }
                        @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Edit, ViewBag.Roles, false))
                        {
                            <tr ng-show="visibilityControl==($index+'_editMedicaidInformation')">
                                <td colspan="6" id="MedicaidInformationEditDiv{{$index}}" class="editTableDataStyle">
                                    <fieldset>
                                        <legend>
                                            Edit Medicaid Information
                                        </legend>
                                        <div>
                                            @Html.Partial("~/Areas/Profile/Views/IdentificationAndLicense/_AddEditMedicaidInformation.cshtml")
                                        </div>
                                    </fieldset>
                                </td>
                            </tr>
                        }
                    </tbody>
                    </table>

                <div class="clearfix"></div>
                <div ng-show="activeMessageDiv=='addedMedicaid'" class="alert alert-success" role="alert">
                    <button ng-click="closeAlertMessage('')" class="close"><span>&times;</span></button>
                    <i class="fa fa-2x fa-arrow-up"></i> {{messageDesc}}
                </div>
                <div class="clearfix"></div>
                    <div class="form-style">
                        @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Add, ViewBag.Roles, false))
                        {
                            <fieldset ng-show="visibilityControl=='addMedicaidInformation'">
                                <legend>
                                    Add Medicaid Information
                                </legend>
                                <div id="newShowMedicaidInformationDiv">
                                    @Html.Partial("~/Areas/Profile/Views/IdentificationAndLicense/_AddEditMedicaidInformation.cshtml")
                                </div>
                            </fieldset>
                        }
                    </div>
              
</div>
        </fieldset>
    </div>
</div>
