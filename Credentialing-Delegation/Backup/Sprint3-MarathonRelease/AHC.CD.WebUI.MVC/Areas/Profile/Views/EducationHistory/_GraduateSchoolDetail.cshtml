@using AHC.CD.WebUI.MVC.Areas.Profile.Attributes;

<div class="form-style">
    <fieldset>
        <legend>
            Graduate/Medical School Details
        </legend>
        <div id="grad" class="panel-body">
            <div class="form-style">
                <div class="col-lg-12 zero-padding-left-right-div">
                    <table ng-hide="GraduationDetailViewModel.length > 0 || visibilityControl == ('addgraduationDetailViewModel')" class="table table-bordered table-condensed customtbodyStyle table-striped">
                        <thead>
                            <tr>
                                <td>
                                    No Data Available for Graduate/Medical School Details! Please click on
                                    @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Add, ViewBag.Roles, false))
                                    {
                                        <button class="btn btn-xs btn-success" ng-click="operateViewAndAddControl('addgraduationDetailViewModel')"><i class="fa fa-plus"></i></button>
                                    }
                                    to add new Graduate/Professional School Information
                                </td>
                            </tr>
                        </thead>
                    </table>
                    <table ng-hide="GraduationDetailViewModel.length <= 0" class="table table-bordered table-condensed customtbodyStyle table-striped">
                        <thead>
                            <tr>
                                <th>School</th>
                                <th>Degree Awarded</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                                <th>Supporting Document</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody ng-repeat="graduationDetailViewModel in GraduationDetailViewModel track by $index">
                            <tr>
                                <td>{{graduationDetailViewModel.SchoolInformation.SchoolName}}</td>
                                <td>{{graduationDetailViewModel.QualificationDegree}}</td>
                                <td>{{graduationDetailViewModel.StartDate | date:'MM-dd-yyyy'}}</td>
                                <td>{{graduationDetailViewModel.EndDate | date:'MM-dd-yyyy'}}</td>
                                <td ng-if="graduationDetailViewModel.CertificatePath">
                                    @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Preview, ViewBag.Roles, false))
                                    {
                                        <a href="/Document/View?path={{graduationDetailViewModel.CertificatePath}}" target="_blank" title="{{graduationDetailViewModel.CertificatePath}}"><i class="fa fa-file" title=""></i></a>
                                    }
                                </td>
                                <td ng-if="!graduationDetailViewModel.CertificatePath">Not Available</td>
                                <td>
                                    @if (ProfileActionValidator.IsAuthorized(ProfileActionType.View, ViewBag.Roles, false))
                                    {
                                        <button data-toggle="tooltip" data-placement="left" title="View" class="btn btn-xs btn-default" ng-click="operateViewAndAddControl($index+'_viewgraduationDetailViewModel')" ng-hide="viewShowPG" @*ng-hide="showViewPGBtn" ng-click="showViewPG($index, graduation)"*@><i class="fa fa-eye"></i></button>}

                                    @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Edit, ViewBag.Roles, false))
                                    {
                                        <button data-toggle="tooltip" data-placement="top" title="Edit" class="btn btn-xs btn-primary" ng-click="operateEditControl($index+'_editgraduationDetailViewModel', graduationDetailViewModel)" ng-hide="editShowPG" @*ng-hide="hideEditPGBtn" ng-click="editGraduation($index, graduation)"*@><i class="fa fa-edit"></i></button>
                                    }

                                    @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Add, ViewBag.Roles, false))
                                    {

                                    }
                                    <button data-toggle="tooltip" data-placement="right" title="Add New" ng-hide="viewShowPG || editShowPG || newShowPG || $index+1!=GraduationDetailViewModel.length" ng-click="operateViewAndAddControl('addgraduationDetailViewModel')" @*ng-hide="graduationFormStatus || newGraduationForm || $index+1!=GraduationDetailViewModel.length"*@ class="btn btn-xs btn-success" @*ng-click="addGraduation()"*@><i class="fa fa-plus"></i></button>
                                </td>
                            </tr>
                            @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Edit, ViewBag.Roles, false))
                            {
                                <tr ng-show="visibilityControl==($index+'_editgraduationDetailViewModel')">
                                    <td colspan="6" id="graduationEditDiv{{$index}}" class="editTableDataStyle">
                                        @Html.Partial("~/Areas/Profile/Views/EducationHistory/_AddEditGraduationDetails.cshtml")
                                    </td>
                                </tr>
                            }

                            @if (ProfileActionValidator.IsAuthorized(ProfileActionType.View, ViewBag.Roles, false))
                            {
                                <tr ng-show="visibilityControl==($index+'_viewgraduationDetailViewModel')">
                                    <td colspan="6" id="{{$index}}" class="editTableDataStyle">
                                        @Html.Partial("~/Areas/Profile/Views/EducationHistory/_ViewGraduationDetails.cshtml")
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                    <div ng-show="activeMessageDiv=='addedNewPGDetails'" class="alert alert-success" role="alert">
                        <button ng-click="closeAlertMessage('')" class="close"><span>&times;</span></button>
                        <i class="fa fa-2x fa-arrow-up"></i> {{messageDesc}}
                    </div>
                </div>
                <div class="clearfix"></div>
                @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Add, ViewBag.Roles, false))
                {
                    <div ng-show="visibilityControl=='addgraduationDetailViewModel'">
                        
                        <div id="newGraduationFormDiv">
                            @Html.Partial("~/Areas/Profile/Views/EducationHistory/_AddEditGraduationDetails.cshtml")
                        </div>
                    </div>
                }

                @*<div class="clearfix"></div><br />
                <div ng-show="visibilityControl=='addedNewPGDetails'" class="alert alert-success" role="alert">
                    <button ng-click="operateCancelControl('')" class="close"><span>&times;</span></button>
                    <i class="fa fa-2x fa-arrow-up"></i>New Graduate/Medical School Detail Added Successfully !!!!
                </div>
                <div ng-show="visibilityControl=='updatedPGDetails'" class="alert alert-success" role="alert">
                    <button ng-click="operateCancelControl('')" class="close"><span>&times;</span></button>
                    <i class="fa fa-2x fa-arrow-up"></i>Graduate/Medical School Detail Updated Successfully !!!!
                </div>*@
            </div>
        </div>

    </fieldset>
</div>

