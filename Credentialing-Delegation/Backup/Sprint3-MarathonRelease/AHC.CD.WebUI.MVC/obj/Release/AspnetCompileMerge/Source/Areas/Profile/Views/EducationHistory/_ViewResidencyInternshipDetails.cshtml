                    </div>
                </div>
            </div>
            <div class="col-lg-12">                
                <div ng-show="showReason" class="col-lg-3 form-group">

                    @Html.LabelFor(model => model.InCompleteReason, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i class="data-label">{{residencyInternshipViewModel.InCompleteReason}}</i>
