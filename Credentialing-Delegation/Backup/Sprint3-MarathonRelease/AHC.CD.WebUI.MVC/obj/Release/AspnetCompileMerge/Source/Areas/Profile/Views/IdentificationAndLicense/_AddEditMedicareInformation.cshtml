@model AHC.CD.WebUI.MVC.Areas.Profile.Models.IdentificationAndLicenses.MedicareInformationViewModel
<fieldset>
    <legend>
        Medicare Information
    </legend>
    <div>
        <form class="MedicareInformationForm">
            <div class="form-style">
                <div class="panel-body zero-padding-left-right-div">

                    <div class="col-md-12">
                        <span ng-if="tempObject.MedicareInformationID">
                            @Html.HiddenFor(model => model.MedicareInformationID, new { ng_value = "tempObject.MedicareInformationID" })
                        </span>


                        <div class="col-md-4">
                            @Html.LabelFor(model => model.LicenseNumber, new { @class = "  control-label small" })
                            @Html.TextBoxFor(model => model.LicenseNumber, new { @class = "form-control input-sm", data_ng_model = "tempObject.LicenseNumber" })
                            @Html.ValidationMessageFor(model => model.LicenseNumber, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-4">
                            @Html.LabelFor(model => model.State, new { @class = "  control-label small" })
                            <select id="stateMedicare" class="form-control input-sm" data-ng-model="tempObject.State" name="State">
                                <option value="" disabled selected>--Select--</option>
                                <option ng-repeat="state in States | unique: 'State'" value="{{state.State}}">{{state.State}}</option>
                            </select>
                            @Html.ValidationMessageFor(model => model.State, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-4">
                            @Html.LabelFor(model => model.IssueDate, new { @class = "  control-label small" })
                            @Html.TextBoxFor(model => model.IssueDate, new { @class = "form-control input-sm", type = "date", data_ng_model = "tempObject.IssueDate" })
                            @Html.ValidationMessageFor(model => model.IssueDate, "", new { @class = "text-danger" })
                        </div>
                        @*<div class="col-md-3">
                    @Html.LabelFor(model => model.ExpiryDate, new { @class = "  control-label small" })
                    @Html.TextBoxFor(model => model.ExpiryDate, new { @class = "form-control input-sm", type = "date", data_ng_model = "tempObject.ExpiryDate" })
                    @Html.ValidationMessageFor(model => model.ExpiryDate, "", new { @class = "text-danger" })
                </div>*@
                    </div>

                    <div class="clearfix"></div>
                    <br />

                    <div class="col-md-12">
                        <div class="col-md-11">
                            @Html.HiddenFor(model => model.CertificatePath, new { ng_value = "tempObject.CertificatePath" })


                            <div class="fileinput fileinput-new input-group" data-provides="fileinput">
                                <div class="form-control" data-trigger="fileinput">
                                    <i class="glyphicon glyphicon-file fileinput-exists"></i>
                                    <span class="fileinput-filename">{{tempObject.CertificateFile}}</span>
                                </div>
                                <span class="input-group-addon btn btn-default btn-sm btn-file">
                                    <span class="fileinput-new small">Select Document</span>
                                    <span class="fileinput-exists">Change</span>
                                    @*   @Html.TextBoxFor(model => model.StateLicenseDocumentFile, new { type = "file", data_ng_model = "stateLicense.StateLicenseDocumentFile" })*@
                                    <input type="file" name="CertificateFile" ng-model="tempObject.CertificateFile" autocomplete="off">
                                </span>

                                <a href="#" class="input-group-addon btn btn-default btn-sm fileinput-exists" data-dismiss="fileinput">Remove</a>
                            </div>
                        </div>
                        <div ng-show="tempObject.CertificateFile" class="col-md-1">
                            <a href="{{tempObject.CertificateFile}}" ta targe target="_blank"><i class="fa fa-2x fa-file"></i></a>
                        </div>
                    </div>
                    <div ng-if="ErrorMedicare" class="col-lg-12">
                        <div class="alert alert-danger" role="alert">
                            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                            <span class="sr-only">Error:</span>
                            Error List : <br />
                            <span ng-repeat="err in MedicareError track by $index">{{err}}</span>
                        </div>
                    </div>
                    <div class="col-md-12">
                        
                        <div class="col-md-12" ng-if="visibilityControl=='addMedicareInformation'">
                            <button type="button" class="btn btn-warning btn-sm" ng-click="operateCancelControl('')">Cancel</button>
                            <button type="submit" class="btn btn-primary btn-sm pull-right" ng-click="saveMedicareInformation(tempObject,-1)">Add</button>
                        </div>
                        <div class="col-md-12" ng-if="visibilityControl==($index+'_editMedicareInformation')">
                            <button type="button" class="btn btn-warning btn-sm" ng-click="operateCancelControl('')">Cancel</button>
                            <button type="submit" class="btn btn-primary btn-sm pull-right" ng-click="saveMedicareInformation(tempObject,$index)">Update</button>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>

            </div>
        </form>
</div>
</fieldset>