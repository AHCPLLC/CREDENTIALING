<fieldset>
    <legend>
        Payment and Remittance
    </legend>
    <div id="practice4" class="panel-body">
        <div class="form-group">
            <div class="col-md-12">
                <div class="col-md-6">
                    <label class="control-label small ">Re-use information from another practice location </label>
                    <select class="form-control input-sm " data-ng-model="paymentandRemittance.Location">
                        <option></option>
                        <option></option>
                    </select>
                </div>
            </div>
            <div class="clearfix"></div>
            <br />
            <div class="col-md-12">
                <div class="form-group col-md-3">
                    <label class="control-label small">Electronic Billing Capabilities *</label>
                    <div class="radio">
                        <label class="radio-inline">
                            <input type="radio" name="bill" value="Yes" data-ng-model="paymentandRemittance.BillingCapabilities"> Yes
                        </label>
                        <label class="radio-inline">
                            <input type="radio" name="bill" value="No" data-ng-model="paymentandRemittance.BillingCapabilities"> No
                        </label>
                    </div>
                </div>
                <div class="form-group col-md-3">
                    <label class="control-label small">Billing Department (If Hospital - Based)</label>
                    <input type="text" class="form-control input-sm" data-ng-model="paymentandRemittance.BillingDepartment" />
                </div>

                <div class="col-lg-3 form-group">
                    <label class="control-label small">Check Payable To *</label>
                    <input type="text" class="form-control input-sm" data-ng-model="paymentandRemittance.Check" />
                </div>
                <div class="col-lg-3 form-group">
                    <label class="control-label small">Office *</label>
                    <textarea class="form-control input-sm" data-ng-model="paymentandRemittance.Office"></textarea>
                </div>
            </div>
            <div class="col-md-12">
                <div class="col-lg-4 form-group">
                    <label class="control-label small">First Name *</label>
                    <input type="text" class="form-control input-sm" id="name1" placeholder="first name" data-ng-model="paymentandRemittance.First">
                </div>
                <div class="col-lg-4 form-group">
                    <label class="control-label small">Middle Name</label>
                    <input type="text" class="form-control input-sm" id="name2" placeholder="middle name" data-ng-model="paymentandRemittance.Middle">
                </div>
                <div class="col-lg-4 form-group">
                    <label class="control-label small">Last Name *</label>
                    <input type="text" class="form-control input-sm" id="name3" placeholder="last name" data-ng-model="paymentandRemittance.Last">
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-md-12">
                @*<div class="form-group col-md-4">
                    <label class="control-label small">Number *</label>
                    <div>
                        <input type="text" class="form-control input-sm" data-ng-model="paymentandRemittance.Number" required />
                    </div>
                </div>*@

                <div class="form-group col-md-4">
                    <label class="control-label small">Street *</label>
                    <div>
                        <input type="text" class="form-control input-sm" data-ng-model="paymentandRemittance.Street" required />
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label class="control-label small">Suite/Building</label>
                    <div>
                        <input type="text" class="form-control input-sm" data-ng-model="paymentandRemittance.Suite" required />
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-md-12">
                <div class="form-group col-md-4">
                    <label class="control-label small">State *</label>
                    <div>
                        <select id="state" name="" class="form-control input-sm" data-ng-model="paymentandRemittance.State" required>
                            <option>State1</option>
                        </select>
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label class="control-label small">City *</label>
                    <div>
                        <select id="city" name="" class="form-control input-sm" data-ng-model="paymentandRemittance.City" required>
                            <option>City1</option>
                        </select>
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label class="control-label small">ZIP Code *</label>
                    <div>
                        <input type="text" class="form-control input-sm" data-ng-model="paymentandRemittance.ZIP" required />
                    </div>
                </div>
            </div>

            <div class="clearfix"></div>
            <div class="col-md-12">
                <div class="form-group col-md-4">
                    <label for="MobileNo" class="control-label small">Telephone *</label>
                    <div>
                        <div class="input-group">
                            <div class="input-group-btn">
                                <button type="button" class="btn btn-default btn-sm"><span class="caret"></span></button>
                            </div>
                            <div class="popover fade bottom in" role="tooltip" id="countryDailCodeContainer">
                                <div class="arrow"></div>
                                <h3 class="popover-title">Select Country Dial Code</h3>
                                <div class="popover-content">
                                    <select id="ContactContryCode">
                                        <option>+91</option>
                                    </select>
                                </div>
                            </div>
                            <input type="text" name="PhoneNo" class="form-control input-sm" id="PhoneNo" placeholder="Telephone Number" data-ng-model="paymentandRemittance.Telephone" required>
                        </div>
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="MobileNo" class="control-label small">Fax </label>
                    <div>
                        <div class="input-group">
                            <div class="input-group-btn">
                                <button type="button" class="btn btn-default btn-sm"><span class="caret"></span></button>
                            </div>
                            <div class="popover fade bottom in" role="tooltip" id="countryDailCodeContainer">
                                <div class="arrow"></div>
                                <h3 class="popover-title">Select Country Dial Code</h3>
                                <div class="popover-content">
                                    <select id="ContactContryCode">
                                        <option>+91</option>
                                    </select>
                                </div>
                            </div>
                            <input type="text" name="PhoneNo" class="form-control input-sm" id="PhoneNo" placeholder="Fax Number" data-ng-model="paymentandRemittance.Fax" required>
                        </div>

                    </div>
                </div>

                <div class="col-lg-4 form-group">
                    <label class="control-label small">E-Mail Address</label>
                    <input type="text" class="form-control input-sm" data-ng-model="paymentandRemittance.MailAddress" />
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-md-12">
                <div class="col-md-12 form-group">
                    <button class="btn btn-warning btn-sm" ng-click="cancelPayment()">Cancel</button>
                    <button class="btn btn-success btn-sm pull-right">Save</button>
                </div>
            </div>
        </div>

    </div>
</fieldset>
