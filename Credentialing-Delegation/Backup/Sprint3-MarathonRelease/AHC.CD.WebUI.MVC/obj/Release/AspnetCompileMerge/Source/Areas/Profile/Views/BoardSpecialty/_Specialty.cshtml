<script src="~/Areas/Profile/Scripts/BoardSpecialty/Specialty.js"></script>

<br />
<div class="panel-group" ng-controller="SpecialtyController">
    <div class="form-style">
        <fieldset>
            <legend>
                Specialty Details
            </legend>
            <div id="Specialty" class="panel-body">
                <div class="form-style">
                    <div class="col-lg-12 zero-padding-left-right-div">
                        <table ng-hide="Specialties.length > 0" class="table table-bordered table-condensed customtbodyStyle table-striped">
                            <thead>
                                <tr>
                                    <td>No Data Available ! To Add New Click <button class="btn btn-xs btn-success" ng-click="operateViewAndAddControl('addboardSpecialty')" data-toggle="tooltip" data-placement="top" title="Add New"><i class="fa fa-plus"></i></button></td>
                                </tr>
                            </thead>
                        </table>
                        <table ng-hide="Specialties.length <= 0" class="table table-bordered table-condensed table-striped customtbodyStyle">
                            <thead>
                                <tr>
                                    <th>Type</th>
                                    <th>Specialty</th>
                                    <th>Board Name</th>
                                    <th>Expiration Date</th>
                                    <th>Board Certification Document</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody ng-repeat="boardSpecialty in Specialties">
                                <tr>
                                    <td>{{boardSpecialty.SpecialtyPreference}}</td>
                                    <td>{{boardSpecialty.Specialty.Name}}</td>
                                    <td ng-show="boardSpecialty.SpecialtyBoardCertifiedDetail == null"><i>Not Board Certified</i></td>
                                    <td ng-show="boardSpecialty.SpecialtyBoardCertifiedDetail != null">{{boardSpecialty.SpecialtyBoardCertifiedDetail.SpecialtyBoard.Name}}</td>
                                    <td ng-show="boardSpecialty.SpecialtyBoardCertifiedDetail == null"><i>Not Board Certified</i></td>
                                    <td ng-show="boardSpecialty.SpecialtyBoardCertifiedDetail != null">{{boardSpecialty.SpecialtyBoardCertifiedDetail.ExpirationDate | date:'MM-dd-yyyy'}}</td>
                                    <td ng-show="boardSpecialty.SpecialtyBoardCertifiedDetail.BoardCertificatePath == null"><i>Not Available</i></td>
                                    <td ng-show="boardSpecialty.SpecialtyBoardCertifiedDetail.BoardCertificatePath != null"><a href="{{boardSpecialty.SpecialtyBoardCertifiedDetail.BoardCertificatePath}}" target="_blank" title="{{boardSpecialty.SpecialtyBoardCertifiedDetail.BoardCertificatePath}}"><i class="fa fa-file" title=""></i></a></td>
                                    <td>
                                        <button class="btn btn-xs btn-default" ng-click="operateViewAndAddControl($index+'_viewboardSpecialty')" ng-hide="viewShowSpecialty" data-toggle="tooltip" data-placement="left" title="View"><i class="fa fa-eye"></i></button>
                                        <button class="btn btn-xs btn-primary" ng-click="operateEditControl($index +'_editboardSpecialty', boardSpecialty)" ng-hide="editShowSpecialty" data-toggle="tooltip" data-placement="top" title="Edit"><i class="fa fa-edit"></i></button>
                                        <button class="btn btn-xs btn-success" ng-click="operateViewAndAddControl('addboardSpecialty')" ng-hide="viewShowSpecialty || editShowSpecialty || newShowSpecialty || $index+1!=Specialties.length" data-toggle="tooltip" data-placement="right" title="Add New"><i class="fa fa-plus"></i></button>
                                    </td>
                                </tr>
                                <tr ng-show="visibilityControl==($index+'_viewboardSpecialty')">
                                    <td colspan="6" class="editTableDataStyle">
                                        @Html.Partial("~/Areas/Profile/Views/BoardSpecialty/_ViewSpecialty.cshtml")
                                    </td>
                                </tr>
                                <tr ng-show="visibilityControl==($index+'_editboardSpecialty')">
                                    <td colspan="6" id="specialtyEditDiv{{$index}}" class="editTableDataStyle">
                                        @Html.Partial("~/Areas/Profile/Views/BoardSpecialty/_AddEditSpecialty.cshtml")
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="clearfix"></div>                    
                    <fieldset ng-show="visibilityControl=='addboardSpecialty'">
                        <legend>
                            Add Specialty
                        </legend>
                        <div id="newShowSpecialtyDiv">
                            @Html.Partial("~/Areas/Profile/Views/BoardSpecialty/_AddEditSpecialty.cshtml")
                        </div>
                    </fieldset>
                </div>
                <div class="clearfix"></div><br />
                <div ng-show="visibilityControl=='addedNewBoardSpecialty'" class="alert alert-success" role="alert">
                    <button ng-click="operateCancelControl('')" class="close"><span>&times;</span></button>
                    <i class="fa fa-2x fa-arrow-up"></i>New Specialty Details Added Successfully !!!!
                </div>
                <div ng-show="visibilityControl=='updatedBoardSpecialty'" class="alert alert-warning" role="alert">
                    <button ng-click="operateCancelControl('')" class="close"><span>&times;</span></button>
                    <i class="fa fa-2x fa-arrow-up"></i>Data Updated Successfully !!!!
                </div>
            </div>
            <fieldset>
                <legend>
                    Practice Interest
                </legend>
                <div ng-show="visibilityControl!='editpracticeInterest'">
                    @Html.Partial("~/Areas/Profile/Views/BoardSpecialty/_ViewPracticeInterest.cshtml")
                </div>
                <div ng-show="visibilityControl=='editpracticeInterest'">
                    <div id="editShowPracticeInterest">
                        @Html.Partial("~/Areas/Profile/Views/BoardSpecialty/_AddEditPracticeInterest.cshtml")
                    </div>
                </div>
                <div class="clearfix"></div><br />
                <div ng-show="visibilityControl=='addedNewPracticeInterest'" class="alert alert-success" role="alert">
                    <button ng-click="operateCancelControl('')" class="close"><span>&times;</span></button>
                    <i class="fa fa-2x fa-arrow-up"></i>Practice Interest Added Successfully !!!!
                </div>
                <div ng-show="visibilityControl=='updatedPracticeInterest'" class="alert alert-warning" role="alert">
                    <button ng-click="operateCancelControl('')" class="close"><span>&times;</span></button>
                    <i class="fa fa-2x fa-arrow-up"></i>Data Updated Successfully !!!!
                </div>
            </fieldset>
        </fieldset>
    </div>
</div>