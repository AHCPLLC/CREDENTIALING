                                    </td>
                                </tr>
                                <tr ng-show="visibilityControl==($index+'_editcertificationCMEViewModel')" @*ng-show="showingCDetails && certificate ==certificationCMEViewModel"*@>
                                    <td colspan="5" id="certificateEditDiv{{$index}}" class=" editTableDataStyle">
