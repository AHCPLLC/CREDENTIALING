                                    </td>
                                </tr>
                                <tr ng-show="visibilityControl==($index+'_viewcertificationCMEViewModel')" @*ng-show="viewCME && certificate==certificationCMEViewModel"*@>
                                    <td colspan="5" id="{{$index}}" class=" editTableDataStyle">
                                        @Html.Partial("~/Areas/Profile/Views/EducationHistory/_ViewCertificationCME.cshtml")
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <fieldset ng-show="visibilityControl=='addcertificationCMEViewModel'" @*ng-show="newCertificateForm && !certificateFormStatus"*@>
                        <legend>
                            Add Post Graduate Training/CME Details
                        </legend>
                        <div id="newCertificateFormDiv">
                            @Html.Partial("~/Areas/Profile/Views/EducationHistory/_AddEditCertificationCME.cshtml")
                        </div>
                    </fieldset>
                    <div class="clearfix"></div><br />
                    <div ng-show="visibilityControl=='addedNewCMEDetails'" class="alert alert-success" role="alert">
                        <button ng-click="visibilityControl=''" class="close"><span>&times;</span></button>
                        <i class="fa fa-2x fa-arrow-up"></i>New PostGraduate Training/CME Details Added Successfully !!!!
                    </div>
                    <div ng-show="visibilityControl=='updatedCMEDetails'" class="alert alert-warning" role="alert">
                        <button ng-click="visibilityControl=''" class="close"><span>&times;</span></button>
                        <i class="fa fa-2x fa-arrow-up"></i>PostGraduate Training/CME Details Updated Successfully !!!!
                    </div>
                </div>
            </div>
        </fieldset>
    </div>
</div>
