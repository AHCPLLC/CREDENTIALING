<br />
<script src="~/Scripts/Custom/Profile/PracticeLocation.js"></script>
<div class="form-style" ng-controller="locationcltr">
    <fieldset>
        <legend>
            Practice Location
        </legend>
        <div>
            <div class="col-lg-12 zero-padding-left-right-div">
                <div class="col-md-6">
                    <label class="control-label small">Do you practice exclusively within inpatient setting? *</label>
                    <div>
                        <label class="radio-inline">
                            <input type="radio" name="ada" value="Yes" data-ng-model="PracticeExclusively" /> Yes
                        </label>
                        <label class="radio-inline">
                            <input type="radio" name="ada" value="No" data-ng-model="PracticeExclusively" /> No
                        </label>
                    </div>
                    <br />
                </div>
                <table ng-hide="PrimaryPracticeLocations.length >= 0" class="table table-condensed customtbodyStyle table-striped">
                    <thead>
                        <tr>
                            <td>No Data Available ! To Add New Click "Add Practice Location Information"</td>
                        </tr>
                    </thead>
                </table>
                <table ng-hide="PrimaryPracticeLocations.length < 1" class="table table-bordered table-condensed customtbodyStyle table-striped">
                    <thead>
                        <tr>

                            <th>Practice Name</th>
                            <th>Address</th>
                            <th>Telephone</th>
                            <th>Email Id</th>
                            <th>Edit</th>
                        </tr>
                    </thead>
                    <tbody ng-repeat="primaryPracticeLocations in PrimaryPracticeLocations">
                        <tr>
                            <td>{{primaryPracticeLocations.PracticeName}}</td>
                            <td>{{primaryPracticeLocations.Number}}, {{primaryPracticeLocations.Street}}, {{primaryPracticeLocations.County}}</td>
                            <td>{{primaryPracticeLocations.Telephone}}</td>
                            <td>{{primaryPracticeLocations.EmailId}}</td>
                            <td>
                                <button class="btn btn-xs btn-default" data-toggle="tooltip" data-placement="left" title="View" ng-click="viewPrimaryLocationInformation($index , primaryPracticeLocations)" ng-hide="viewShowPrimaryLocationInformation"><i class="fa fa-eye"></i></button>
                                <button class="btn btn-xs btn-primary" data-toggle="tooltip" data-placement="top" title="Edit" ng-click="editPrimaryLocationInformation($index,primaryPracticeLocations)" ng-hide="editShowPrimaryLocationInformation"><i class="fa fa-edit"></i></button>
                                <button class="btn btn-xs btn-success" data-toggle="tooltip" data-placement="right" title="Add New" ng-click="addPrimaryLocationInformation()" ng-hide=" $index+1!=PrimaryPracticeLocations.length"><i class="fa fa-plus"></i></button>
                            </td>
                        </tr>
                        <tr ng-show="viewShowPrimaryLocationInformation && primaryPracticeLocations==primaryLocationInformation">
                                <td colspan="6" id="PrimaryLocationInformationEditDiv{{$index}}" class="editTableDataStyle">
                                    @Html.Partial("~/Areas/Profile/Views/PracticeLocation/_ViewPracticeLocationInformation.cshtml")
                                </td>
                            </tr>

                        <tr ng-show="editShowPrimaryLocationInformation && primaryPracticeLocations==primaryLocationInformation">
                            <td colspan="6" id="PrimaryLocationInformationEditDiv{{$index}}" class="editTableDataStyle">
                                @Html.Partial("~/Areas/Profile/Views/PracticeLocation/_AddEditPracticeLocationInformation.cshtml")
                            </td>
                        </tr>
                    </tbody>
                </table>

            </div>

            <div class="clearfix"></div>
            <fieldset ng-show="newShowPrimaryLocationInformation">
                <legend>
                    Add Practice Location
                </legend>
                <div id="newShowPrimaryLocationInformationDiv">
                    @Html.Partial("~/Areas/Profile/Views/PracticeLocation/_AddPracticeLocationInformation.cshtml")
                </div>
            </fieldset>
            <div ng-hide="PrimaryPracticeLocations.length > 0 || newShowPrimaryLocationInformation" class="col-md-12 text-right">
                <button class="btn btn-xs btn-primary addHosPrvBtn" ng-click="addPrimaryLocationInformation()"><i class="fa fa-plus"></i> Add Practice Location</button>
            </div>
        </div>

    </fieldset>
</div>












