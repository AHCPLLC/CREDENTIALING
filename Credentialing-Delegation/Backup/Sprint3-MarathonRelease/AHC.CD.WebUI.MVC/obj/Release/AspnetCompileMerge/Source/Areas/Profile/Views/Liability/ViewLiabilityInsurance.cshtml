@model AHC.CD.WebUI.MVC.Areas.Profile.Models.ProfessionalLiability.ProfessionalLiabilityInfoViewModel

<fieldset>
    <legend>
        Professional liability
    </legend>
    <form enctype="multipart/form-data">
        <div class="form-style">

            <div class="panel-body">

                <div class="col-md-12">
                <div class="col-lg-8 form-group">

                    @Html.LabelFor(p => p.InsuranceCarrierID, htmlAttributes: new { @class = "control-label small" })


                    <div>
                        <i class="data-label">{{Li.CarrierName}}</i>
                    </div>

                </div>

                <div class="form-group col-md-4">
                    @Html.LabelFor(p => p.SelfInsured, htmlAttributes: new { @class = "control-label small" })

                    <div>
                        <i class="data-label">{{Li.SelfInsured}}</i>
                    </div>

                </div>
            </div>

              

                <div class="col-md-12">

                    <div class="form-group col-md-3">
                      
                        <label class="control-label small">Building</label>

                        <div>

                            <i class="data-label">{{Li.Building}}</i>
                        </div>
                    </div>

                

                <div class="form-group col-md-3">
                    <label class="control-label small">Street</label>

                    <div>
                        <i class="data-label">{{Li.Street}}</i>
                    </div>
                </div>


                <div class="form-group col-md-3">

                    <label class="control-label small">Zipcode</label>
                    <div>
                        <i class="data-label">{{Li.Zipcode}}</i>
                    </div>
                </div>

             </div>

                <div class="col-md-12">
                    <div class="form-group col-md-3">

                        <label class="control-label small">Country</label>

                        <div>
                            <i class="data-label">{{Li.Country}}</i>
                        </div>
                    </div>

                    <div class="form-group col-md-3">
                        <label class="control-label small">State</label>

                        <div>
                            <i class="data-label">{{Li.State}}</i>
                        </div>

                    </div>


                    <div class="form-group col-md-3">

                        <label class="control-label small">County</label>

                        <div>
                            <i class="data-label">{{Li.County}}</i>
                        </div>
                    </div>

                    <div class="form-group col-md-3">

                        <label class="control-label small">City</label>
                        <div>
                            <i class="data-label">{{Li.City}}</i>
                        </div>

                    </div>
                </div>

                <div class="col-md-12">
                <div class="col-lg-3 form-group">

                    @Html.LabelFor(p => p.OriginalEffectiveDate, htmlAttributes: new { @class = "control-label small" })

                    <div>
                        <i class="data-label">{{Li.OriginalDate| date:'MM-dd-yyyy'}}</i>
                    </div>
                </div>

                <div class="col-lg-3 form-group">

                    @Html.LabelFor(p => p.EffectiveDate, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i class="data-label">{{Li.EffectiveDate| date:'MM-dd-yyyy'}}</i>
                    </div>

                </div>


                <div class="col-lg-3 form-group">

                    @Html.LabelFor(p => p.ExpirationDate, htmlAttributes: new { @class = "control-label small" })

                    <div>
                        <i class="data-label">{{Li.ExpirationDate| date:'MM-dd-yyyy'}}</i>
                    </div>

                </div>

                <div class="form-group col-md-3">

                    @Html.LabelFor(p => p.CoverageType, htmlAttributes: new { @class = "control-label small" })

                    <div>
                        <i class="data-label">{{Li.TypeOfCoverage}}</i>
                    </div>
                </div>
            </div>
                <div class="clearfix"></div><br>

                <div class="col-md-12">
                <div class="form-group col-md-3">
                    @Html.LabelFor(p => p.UnlimitedCoverageWithInsuranceCarrier, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i class="data-label">{{Li.UnlimitedCoverage}}</i>
                    </div>
                </div>

                <div class="form-group col-md-3">
                    @Html.LabelFor(p => p.AmountOfCoverageAggregate, htmlAttributes: new { @class = "control-label small" })

                    <div>
                        <i class="data-label">{{Li.AmountOfCoverageAgg}}</i>
                    </div>

                </div>


                <div class="form-group col-md-3">
                    @Html.LabelFor(p => p.AmountOfCoveragePerOccurance, htmlAttributes: new { @class = "control-label small" })

                    <div>
                        <i class="data-label">{{Li.AmountOfCoverageOcc}}</i>
                    </div>

                </div>

                <div class="form-group col-md-3">

                        <label class="control-label small">Phone Number </label>
                        <div>
                            <i class="data-label">{{Li.Phone}}</i>
                        </div>

                    </div>

             </div>

                <div class="clearfix"></div><br>

                <div class="col-md-12">
                    <div class=" col-md-3 form-group">

                        @Html.LabelFor(p => p.PolicyIncludesTailCoverage, htmlAttributes: new { @class = "control-label small" })

                        <div>
                            <i class="data-label">{{Li.TailCoverage}}</i>
                        </div>
                    </div>


                    <div class="col-md-3 form-group">
                        <div>

                            @Html.LabelFor(p => p.PolicyNumber, htmlAttributes: new { @class = "control-label small" })

                            <div>
                                <i class="data-label">{{Li.PolicyNumber}}</i>
                            </div>

                        </div>
                    </div>



                    <div class=" col-md-6 form-group">
                        <label> Certificate</label>


                    <br>

                    <div>

                        <i class="data-label"><a href="/Content/Document/SINGH - LIABILITY INS.pdf" class="pointer" target="_blank" data-toggle="tooltip" data-placement="top" title="Liability Insurance Certificate"><i class="fa fa-file"> Liability Insurance Certificate</i></a></i>
                    </div>

                </div>
           </div>


            <div class="col-md-12">
                <button class="btn btn-warning btn-sm" ng-click="operateCancelControl('')">Cancel</button>
                <button class="btn btn-primary btn-sm pull-right" ng-click ="operateEditControl($index+'_editLi',Li)">Edit</button>
            </div>

        </div>
    </div>
    </form>

</fieldset>
