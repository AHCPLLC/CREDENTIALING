@model AHC.CD.WebUI.MVC.Areas.Profile.Models.Demographic.PersonalDetailViewModel

<form enctype="multipart/form-data" id="DemographicsPersonalDetailsForm">
    <span ng-if="tempObject.PersonalDetailID">
        @Html.HiddenFor(model => model.PersonalDetailID, new { ng_value = "tempObject.PersonalDetailID" })
    </span>
    <div class="col-lg-12 zero-padding-left-right-div">
        <div class="col-lg-1 form-group" style="padding-left:0px;padding-right:0px;">
            @Html.LabelFor(model => model.TitleType, new { @class = "control-label small" })
            @Html.EnumDropDownListFor(Model => Model.TitleType, "-- select a Title --", new { @class = "form-control input-sm", data_ng_model = "tempObject.TitleType" })
            @Html.ValidationMessageFor(model => model.TitleType, "", new { @class = "text-danger" })
        </div>
        <div class="col-lg-3 form-group">
            @Html.LabelFor(model => model.FirstName, new { @class = "control-label small" })
            @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control input-sm", placeholder = "first name", data_ng_model = "tempObject.FirstName" })
            @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
        </div>
        <div class="col-lg-3 form-group">
            @Html.LabelFor(model => model.MiddleName, new { @class = "control-label small" })
            @Html.TextBoxFor(model => model.MiddleName, new { @class = "form-control input-sm", placeholder = "middle name", data_ng_model = "tempObject.MiddleName" })
            @Html.ValidationMessageFor(model => model.MiddleName, "", new { @class = "text-danger" })
        </div>
        <div class="col-lg-3 form-group" style="padding-left:0px;">
            @Html.LabelFor(model => model.LastName, new { @class = "control-label small" })
            @Html.TextBoxFor(model => model.LastName, new { @class = "form-control input-sm", placeholder = "last name", data_ng_model = "tempObject.LastName" })
            @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
        </div>
        <div class="col-lg-2 form-group" style="padding-left:0px;">
            @Html.LabelFor(model => model.Suffix, new { @class = "control-label small" })
            @Html.TextBoxFor(model => model.Suffix, new { @class = "form-control input-sm", placeholder = "suffix", data_ng_model = "tempObject.Suffix" })
            @Html.ValidationMessageFor(model => model.Suffix, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="col-lg-12 zero-padding-left-right-div">
        <div class="col-lg-3 form-group">
            @Html.LabelFor(model => model.GenderType, new { @class = "control-label small" })
            <div>
                @foreach (var value in Enum.GetValues(typeof(AHC.CD.Entities.MasterData.Enums.GenderType)))
                {
                    <label class="radio-inline">
                        @Html.RadioButtonFor(model => model.GenderType, (int)value, new { data_ng_model = "tempObject.GenderType" }) @value.ToString()
                    </label>
                }
            </div>
            @Html.ValidationMessageFor(model => model.GenderType, "", new { @class = "text-danger" })
        </div>
        <div class="col-lg-3 form-group" ng-if="tempObject.GenderType==2">
            @Html.LabelFor(model => model.MaidenName, new { @class = "control-label small" })
            @Html.TextBoxFor(model => model.MaidenName, new { @class = "form-control input-sm", placeholder = "spouse name", data_ng_model = "tempObject.MaidenName" })
            @Html.ValidationMessageFor(model => model.MaidenName, "", new { @class = "text-danger" })
        </div>
        <div class="col-lg-3 form-group">
            @Html.LabelFor(model => model.MaritalStatusType, new { @class = "control-label small" })
            @Html.EnumDropDownListFor(model => model.MaritalStatusType, "-- select --", new { @class = "form-control input-sm", placeholder = "marital status", data_ng_model = "tempObject.MaritalStatusType" })
            @Html.ValidationMessageFor(model => model.MaritalStatusType, "", new { @class = "text-danger" })
        </div>
        <div class="col-lg-3 form-group" ng-if="tempObject.MaritalStatusType==1">
            @Html.LabelFor(model => model.SpouseName, new { @class = "control-label small" })
            @Html.TextBoxFor(model => model.SpouseName, new { @class = "form-control input-sm", placeholder = "spouse name", data_ng_model = "tempObject.SpouseName" })
            @Html.ValidationMessageFor(model => model.SpouseName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div ng-if="IsPersonalDetailsHasError" class="col-lg-12">
        <div class="alert alert-danger" role="alert">
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <span class="sr-only">Error:</span>
            Error Lists : <br />
            <span ng-repeat="err in PersonalDetailsErrorList track by $index">{{err}}</span>
        </div>
    </div>
    <div class="col-lg-12">
        <button class="btn btn-warning btn-sm" ng-click="operateCancelControl('_EditPersonalDetails')">Cancel</button>
        <input class="btn btn-success btn-sm pull-right" type="submit" ng-click="DemographicsUpdatePersonalDetails('DemographicsPersonalDetailsForm')" value="Save" />
    </div>
</form>