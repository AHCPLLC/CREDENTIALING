<script src="~/Areas/Profile/Scripts/ProfessionalLiabilityInsurance/ProfessionalLiabilityInsurance.js"></script>

<br />
<div class="panel-group" ng-controller="LiabilityCtrl">
    <div class="panel-default">
        <div class="form-style">
            <fieldset>
                <legend>
                    Professional liability
                </legend>
                <div id="Liabiltyqwe">
                    <div class="col-lg-12 zero-padding-left-right-div">
                        <table ng-hide="ProfessionalLiabilityInfoes.length > 0" class="table table-bordered table-condensed customtbodyStyle table-striped">
                            <thead>
                                <tr>
                                    <td>
                                        No Data Available ! To Add New Click
                                        <button class="btn btn-xs btn-success" ng-click="operateViewAndAddControl('addLi')" data-toggle="tooltip" data-placement="right" title="Add New"><i class="fa fa-plus"></i></button>
                                    </td>

                                </tr>
                            </thead>
                        </table>

                        <table ng-hide="ProfessionalLiabilityInfoes.length <= 0" class="table table-bordered table-condensed customtbodyStyle table-striped">
                            <thead>
                                <tr>
                                    <th>Carrier Name</th>
                                    <th>Policy Number</th>
                                    <th>Address</th>
                                    <th>Document</th>
                                    <th>Edit</th>
                                </tr>
                            </thead>
                            <tbody ng-repeat="Li in ProfessionalLiabilityInfoes">

                                <tr>
                                    <td>{{Li.CarrierName}}</td>
                                    <td>{{Li.PolicyNumber}}</td>
                                    <td>{{Li.Number}}, {{Li.Street}}</td>
                                    <td><i class="data-label"><a href="/Content/Document/SINGH - LIABILITY INS.pdf" class="pointer" target="_blank" data-toggle="tooltip" data-placement="top" title="Liability Insurance Certificate"><i class="fa fa-file"></i></a></i></td>
                                    <td>
                                        <button class="btn btn-xs btn-default" ng-click="operateViewAndAddControl($index+'_viewLi')" ng-hide="showViewLiabilityInsurance" data-toggle="tooltip" data-placement="left" title="View"><i class="fa fa-eye"></i></button>
                                        <button class="btn btn-xs btn-primary" ng-click="operateEditControl($index+'_editLi',Li)" ng-hide="editShowProfessionalLiabilty" data-toggle="tooltip" data-placement="top" title="Edit"><i class="fa fa-edit"></i></button>
                                        <button class="btn btn-xs btn-success" ng-click="operateViewAndAddControl('addLi')" ng-hide="showViewLiabilityInsurance||editShowProfessionalLiabilty||newShowProfessionalLiabilty" data-toggle="tooltip" data-placement="right" title="Add New"><i class="fa fa-plus"></i></button>
                                    </td>
                                </tr>

                                <tr ng-show="visibilityControl==($index+'_viewLi')">
                                    <td colspan="6" class="editTableDataStyle">

                                        @Html.Partial("~/Areas/Profile/Views/Liability/ViewLiabilityInsurance.cshtml")
                                    </td>

                                </tr>

                                <tr ng-show="visibilityControl==($index+'_editLi')">
                                    <td colspan="6" id="professionalLiabiltyEditDiv{{$index}}" class="editTableDataStyle">
                                        @Html.Partial("~/Areas/Profile/Views/Liability/_AddEditLiabilityInsurance.cshtml")
                                    </td>
                                </tr>
                            </tbody>

                        </table>

                    </div>

                    <div class="clearfix"></div>
                    <fieldset ng-show="visibilityControl=='addLi'">
                        <legend>
                            Add Professional Liability
                        </legend>
                        <div id="newShowProfessionalLiabiltyDiv">
                            @Html.Partial("~/Areas/Profile/Views/Liability/_AddEditLiabilityInsurance.cshtml")
                        </div>
                    </fieldset>

                </div>
            </fieldset>
        </div>
    </div>
</div>