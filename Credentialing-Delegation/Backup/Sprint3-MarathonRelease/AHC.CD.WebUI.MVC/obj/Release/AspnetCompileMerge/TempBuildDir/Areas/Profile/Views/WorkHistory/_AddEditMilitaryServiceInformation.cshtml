@model AHC.CD.WebUI.MVC.Areas.Profile.Models.WorkHistory.MilitaryServiceInformationViewModel


<div>
    <form class="militaryServiceInformationForm">
        <span ng-if="tempObject.MilitaryServiceInformationID">
            @Html.HiddenFor(model => model.MilitaryServiceInformationID, new { ng_value = "tempObject.MilitaryServiceInformationID" })
        </span>
        <div class="col-lg-12 zero-padding-left-right-div">
            <div class="col-md-12">
                <div class="form-group col-md-4">
                    @Html.LabelFor(model => model.MilitaryBranch, new { @class = "control-label small" })
                    <select class="form-control input-sm" data-ng-model="tempObject.MilitaryBranch" name="MilitaryBranch">
                        <option value="" disabled selected>--Select--</option>
                        <option ng-repeat="type in militaryBranches" value="{{type.Title}}">{{type.Title}}</option>
                    </select>
                    @Html.ValidationMessageFor(model => model.MilitaryBranch, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-md-4">
                    @Html.LabelFor(model => model.StartDate, new { @class = "control-label small" })
                    <div>
                        @Html.TextBoxFor(model => model.StartDate, new { type = "date", @class = "form-control input-sm", placeholder = "star date", data_ng_model = "tempObject.StartDate" })
                        @Html.ValidationMessageFor(model => model.StartDate, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group col-md-4">
                    @Html.LabelFor(model => model.DischargeDate, new { @class = "control-label small" })
                    <div>
                        @Html.TextBoxFor(model => model.DischargeDate, new { type = "date", @class = "form-control input-sm", placeholder = "discharge date", data_ng_model = "tempObject.DischargeDate" })
                        @Html.ValidationMessageFor(model => model.DischargeDate, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-md-12">
                <div class="form-group col-md-6">
                    @Html.LabelFor(model => model.MilitaryRank, new { @class = "control-label small" })
                    <div>
                        <select class="form-control input-sm" data-ng-model="tempObject.MilitaryRank" name="MilitaryRank">
                            <option value="" disabled selected>--Select--</option>
                            <option ng-repeat="type in militaryRanks" value="{{type.Title}}">{{type.Title}}</option>
                        </select>
                        @Html.ValidationMessageFor(model => model.MilitaryRank, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group col-md-6">
                    @Html.LabelFor(model => model.MilitaryDischarge, new { @class = "control-label small" })
                    <div>
                        <select class="form-control input-sm" data-ng-model="tempObject.MilitaryDischarge" name="MilitaryDischarge">
                            <option value="" disabled selected>--Select--</option>
                            <option ng-repeat="type in militaryDischarges" value="{{type.Title}}">{{type.Title}}</option>
                        </select>
                        @Html.ValidationMessageFor(model => model.MilitaryDischarge, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-md-12">
                <div class="col-md-12">
                    <div class="form-group">
                        @Html.LabelFor(model => model.HonorableExplanation, new { @class = "control-label small" })
                        <div>
                            @Html.TextBoxFor(model => model.HonorableExplanation, new { @class = "form-control input-sm", placeholder = "reason", data_ng_model = "tempObject.HonorableExplanation" })
                            @Html.ValidationMessageFor(model => model.HonorableExplanation, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-md-12">
                <div class="form-group col-md-6">
                    @Html.LabelFor(model => model.MilitaryPresentDuty, new { @class = "control-label small" })
                    <div>
                        <select class="form-control input-sm" data-ng-model="tempObject.MilitaryPresentDuty" name="MilitaryPresentDuty">
                            <option value="" disabled selected>--Select--</option>
                            <option ng-repeat="type in militaryPresentDuties" value="{{type.Title}}">{{type.Title}}</option>
                        </select>
                        @Html.ValidationMessageFor(model => model.MilitaryPresentDuty, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div ng-if="IsMilitaryServiceInfoHasError" class="col-lg-12">
                    <div class="alert alert-danger" role="alert">
                        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                        <span class="sr-only">Error:</span>
                        Error Lists : <br />
                        <span ng-repeat="err in MilitaryServiceInfoErrorList track by $index">{{err}}</span>
                    </div>
                </div>
                <div class="col-md-12 form-group">
                    <button type="button" class="btn btn-warning btn-sm" ng-click="operateCancelControl('')">Cancel</button>
                    <button type="submit" class="btn btn-primary btn-sm pull-right" ng-click="saveMilitaryServiceInformation(tempObject, $index)">{{submitButtonText}}</button>
                </div>
            </div>
        </div>
    </form>
</div>