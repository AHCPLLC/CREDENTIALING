<div class="panel panel-default">
    <div class="panel-heading">
        <div>Basic Information</div>
    </div>
    <div class="panel-body form-horizontal">
        <div class="col-md-12 form-group">
            <label class="col-md-3 control-label">Provider Category *</label>
            <div class="col-md-7 input-group input-group-sm">
                <label ng-repeat="providerCategory in providerCategories" class="radio-inline">
                    <input type="radio" name="radio_provider_category1" ng-model="Provider.categoryId" value="{{providerCategory.categoryId}}" ng-click="getprovidertypes_by_category_Id(providerCategory.categoryId)"> {{providerCategory.categoryName}}
                </label>
            </div>
        </div>
        <div class="col-md-12 form-group">
            <label class="col-md-3 control-label">NPI Number *</label>
            <div class="col-md-7">
                <input type="text" class="form-control input-sm" ng-model="Provider.NPINumber" placeholder="NPI number" ng-blur="isExistNPINumber(Provider.NPINumber)" />
            </div>
            <div ng-show="NPIExist" class="col-md-2 has-error">
                <a href="#" class="help-block" data-toggle="tooltip" data-placement="top" title="Link Your Profile Here!">
                    <span class="glyphicon glyphicon-exclamation-sign"></span> already exist!
                </a>
            </div>
        </div>
        <div class="col-md-12 form-group">
            <label class="col-md-3 control-label">CAQH Number</label>
            <div class="col-md-7">
                <input type="text" class="form-control input-sm" ng-model="Provider.CAQHNumber" placeholder="CAQH number" ng-blur="isExistCAQHNumber(Provider.CAQHNumber)" />
            </div>
            <div ng-show="CAQHExist" class="col-md-2 has-error">
                <a href="#" class="help-block" data-toggle="tooltip" data-placement="top" title="Load Profile Information!">
                    <span class="glyphicon glyphicon-exclamation-sign"></span> already exist!
                </a>
            </div>
        </div>
    </div>
    <div class="panel-footer clearfix">
        <input id="next1" type="button" value="Proceed" ng-click="primaryInfoForm(1)" class="btn btn-primary btn-sm pull-right" />
    </div>
</div>

