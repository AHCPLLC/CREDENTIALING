<script src="~/Areas/Profile/Scripts/ProfessionalReference/ProfessionalReference.js"></script>

<br />
<div class="panel-group" ng-controller="ProfessionalReference">

    <div class="form-style">
        <fieldset>
            <legend>
                Professional Reference
            </legend>

            <table ng-if="ProfessionalReferences.length <=0" class="table table-bordered table-condensed customtbodyStyle table-striped">
                <thead>
                    <tr>
                        <td>
                            No Data Available ! To Add New Click
                            <button class="btn btn-xs btn-success" ng-click="operateViewAndAddControl('addpr')" data-toggle="tooltip" data-placement="right" title="Add New"><i class="fa fa-plus"></i></button>
                        </td>

                    </tr>
                </thead>
            </table>
            <div ng-hide="ProfessionalReferences.length > 3" class="col-md-12 text-right" style="font-style:italic;font-size:x-small;color:red">
                <label>*You are required to provide exactly 3 references. Your application will not be complete with out this information</label>
            </div>

            <div ng-hide="ProfessionalReferences.length > 3" class="col-md-12 text-right" style="font-style:italic;font-size:x-small;color:red">
                <label>*Please check with credentialing entity for any special requirements</label>
            </div>
            <div id="profref" class="panel-body">
                <div class="form-style">
                    <div class="col-lg-12 zero-padding-left-right-div">

                        <table ng-if="ProfessionalReferences.length > 0" class="table table-bordered table-condensed table-striped customtbodyStyle">
                            <thead>
                                <tr>
                                    <th>First Name</th>
                                    <th>Middle Name</th>
                                    <th>Last Name</th>
                                    <th>Title</th>
                                    <th>Telephone</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody ng-repeat="pr in ProfessionalReferences">
                                <tr>
                                    <td>{{pr.FirstName}}</td>
                                    <td>{{pr.MiddleName}}</td>
                                    <td>{{pr.LastName}}</td>
                                    <td>{{pr.ProviderType}}</td>
                                    <td>{{pr.Telephone}}</td>
                                    <td>

                                        <button class="btn btn-xs btn-default" ng-click="operateViewAndAddControl($index+'_viewpr')" ng-hide="showViewProfessionalReference" data-toggle="tooltip" data-placement="left" title="View"><i class="fa fa-eye"></i></button>
                                        <button class="btn btn-xs btn-primary" ng-click="operateEditControl($index+'_editpr',pr)" ng-hide="editShowProfessionalReference" data-toggle="tooltip" data-placement="top" title="Edit"><i class="fa fa-edit"></i></button>
                                        <button class="btn btn-xs btn-success" ng-click="operateViewAndAddControl('addpr')" ng-hide="showViewProfessionalReference || editShowProfessionalReference || newShowProfessionalReference || $index+1!=ProfessionalReferences.length" data-toggle="tooltip" data-placement="right" title="Add New"><i class="fa fa-plus"></i></button>

                                    </td>
                                </tr>

                                <tr ng-show="visibilityControl==($index+'_viewpr')">
                                    <td colspan="6" class="editTableDataStyle">
                                        @Html.Partial("~/Areas/Profile/Views/ProfessionalReference/_ViewProfessionalReference.cshtml")
                                    </td>

                                </tr>

                                <tr ng-show="visibilityControl==($index+'_editpr')">
                                    <td colspan="6" id="professionalReferenceEditDiv{{$index}}" class="editTableDataStyle">
                                        @Html.Partial("~/Areas/Profile/Views/ProfessionalReference/_AddEditProfessionalReference.cshtml")
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                        <div ng-show="visibilityControl=='addedNewProfessionalReference'" class="alert alert-success" role="alert">
                            <button ng-click="operateCancelControl('')" class="close"><span>&times;</span></button>
                            <i class="fa fa-2x fa-arrow-up"></i>New Professional Reference Added Successfully !!!!
                        </div>
                        <div ng-show="visibilityControl=='updatedProfessionalReference'" class="alert alert-warning" role="alert">
                            <button ng-click="operateCancelControl('')" class="close"><span>&times;</span></button>
                            <i class="fa fa-2x fa-arrow-up"></i>Data Updated Successfully !!!!
                        </div>
                    </div>



                    <div class="clearfix"></div>
                    <fieldset ng-show="visibilityControl=='addpr'">
                        <legend>
                            Add Professional Reference
                        </legend>
                        <div id="newProfessionalReferenceFormDiv">
                            @Html.Partial("~/Areas/Profile/Views/ProfessionalReference/_AddEditProfessionalReference.cshtml")
                        </div>
                    </fieldset>

                    @*<div ng-hide="editShowProfessionalReference || newShowProfessionalReference" class="col-md-12 text-right">
                            <button class="btn btn-xs btn-primary" ng-click="addProfessionalReference()"><i class="fa fa-plus"></i> Add Professional Reference</button>
                        </div>*@
                    @*</div>*@
                </div>
            </div>
        </fieldset>
    </div>
</div>


