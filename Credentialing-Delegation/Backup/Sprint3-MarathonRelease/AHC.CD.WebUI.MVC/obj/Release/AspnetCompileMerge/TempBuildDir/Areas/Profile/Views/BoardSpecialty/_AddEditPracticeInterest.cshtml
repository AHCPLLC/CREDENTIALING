@model AHC.CD.WebUI.MVC.Areas.Profile.Models.BoardSpecialty.PracticeInterestViewModel

<form >
    @Html.ValidationSummary(true, "", new { @class = "text-danger validSummary" })
    <span ng-if="tempObject.PracticeInterestID">
        @Html.HiddenFor(model => model.PracticeInterestID, new { ng_value = "tempObject.PracticeInterestID" })
    </span>
    @Html.LabelFor(model => model.Interest, new { @class = "control-label small" })
    @Html.TextAreaFor(model => model.Interest, new { @class = "form-control input-sm", data_ng_model = "tempObject.Interest", maxlength = "500" })
    <span class="control-label small">
        {{500-tempObject.Interest.length}}
        Characters left. 
    </span>
    @Html.ValidationMessageFor(model => model.Interest, "", new { @class = "text-danger" })
    <div class="clearfix"></div>
    <div ng-if="ErrorInPracticeInterest" class="col-lg-12">
        <div class="alert alert-danger" role="alert">
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <span class="sr-only">Error:</span>
            Error Lists : <br />
            <span ng-repeat="err in PracticeInterestErrorList track by $index">{{err}}</span>
        </div>
    </div>
    <div class="col-md-12">
        <button type="button" class="btn btn-warning btn-sm" ng-click="operateCancelControl('')">Cancel</button>
        <button class="btn btn-success pull-right" ng-click="savePracticeInterest(tempObject)">Save</button>
    </div>
</form>