@model AHC.CD.WebUI.MVC.Areas.Profile.Models.Demographic.LanguageInfoViewModel

<style>
    .LanguageSelectAutoList {
        display: inherit;
        left: 0%;
        width: 95%;
        margin-left: 15px;
        margin-right: 15px;
        overflow-y: scroll;
        height: 222px;
    }

    .LanguageSelectAutoList {
        max-width: 100%;
    }

        .LanguageSelectAutoList.popover {
            border-radius: 0px;
        }

            .LanguageSelectAutoList.popover.bottom {
                margin-top: 77px;
            }

        .LanguageSelectAutoList > table > tbody > tr:hover {
            background-color: rgb(36, 71, 196);
            color: white;
        }
</style>
<script>
    $(".LanguageSelectAutoList").hide();
</script>

<form id="languageInfoForm" class="languageInfo">
    <div class="col-md-12 zero-padding-left-right-div">
        @Html.ValidationSummary(true, "", new { @class = "text-danger validSummary" })
        <span ng-if="TempLanguageForEdit.LanguageInfoID">
            @Html.HiddenFor(model => model.LanguageInfoID, new { ng_value = "TempLanguageForEdit.LanguageInfoID" })
        </span>
        <div class="col-lg-6">
            <div class="form-group">
                <label class="control-label">Foreign languages you are fluent (in order of proficiency)</label>
                <br />
                <span>Select Languages:</span>
                <div>
                    <input class="form-control input-sm" ng-model="searchLang" id="searchLanguageKnow" ng-focus="shoLanguageList('DemographicsLanguageKnowSearchResultDiv')" />
                    <div class="LanguageSelectAutoList popover fade bottom in" role="tooltip" id="DemographicsLanguageKnowSearchResultDiv">
                        <table class="table table-striped table-bordered table-hover table-condensed">
                            <tbody>
                                <tr ng-repeat="lang in filteredLangResults = (tempLanguages | filter:searchLang)" ng-click="SelectLanguageKnown(lang)" class="pointer">
                                    <td>{{lang.name}} ({{lang.nativeName}})</td>
                                </tr>
                                <tr ng-if="tempLanguages.length == 0">
                                    <td>No data..... </td>
                                </tr>
                                <tr ng-if="tempLanguages.length > 0 && filteredLangResults.length == 0">
                                    <td>Match not found..... </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            Selected Languages ({{TempLanguageForEdit.KnownLanguages.length}}) : <br />
            <table class="table table-striped table-bordered table-hover table-condensed">
                <thead>
                    <tr>
                        <th>Language</th>
                        @*<th>Read</th>
                            <th>Write</th>
                            <th>Speak</th>*@
                        <th>Priority</th>
                        <th>Remove</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="kl in TempLanguageForEdit.KnownLanguages | orderBy:'ProficiencyIndex':reverse">
                        <td><span>{{kl.Language}}</span>
                            <span ng-if="kl.KnownLanguageID"><input type="hidden" name="KnownLanguages[{{$index}}].KnownLanguageID" value="{{kl.KnownLanguageID}}" /></span>
                            <input type="hidden" name="KnownLanguages[{{$index}}].Language" value="{{kl.Language}}" />
                            <input type="hidden" name="KnownLanguages[{{$index}}].ProficiencyIndex" value="{{kl.ProficiencyIndex}}" />
                        </td>
                        @*<td>
                                <input type="checkbox" ng-model="tempLang.CanRead" ng-checked="tempLang.CanRead">
                            </td>
                            <td>
                                <input type="checkbox" ng-model="tempLang.CanWrite" ng-checked="tempLang.CanWrite">
                            </td>
                            <td>
                                <input type="checkbox" ng-model="tempLang.CanSpeak" ng-checked="tempLang.CanSpeak">
                            </td>*@
                        <td>
                            {{kl.ProficiencyIndex = $index+1}}&nbsp;&nbsp;&nbsp;&nbsp;
                            <span>
                                <i ng-if="kl.ProficiencyIndex != 1" class="fa fa-long-arrow-up pointer" ng-click="PriorityChange('increase', $index)"></i>
                                <i ng-if="TempLanguageForEdit.KnownLanguages.length != $index+1" class="fa fa-long-arrow-down pointer" ng-click="PriorityChange('decrease', $index)"></i>
                            </span>
                        </td>
                        <td><i ng-if="!kl.KnownLanguageID" class="fa fa-minus-circle pointer" style="color:#d9534f;" ng-click="UnselectLanguage(kl)"></i></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="col-lg-12 clearfix" style="padding-bottom:15px;"></div>
    <div class="col-lg-12 zero-padding-left-right-div">
        @Html.LabelFor(model => model.CanSpeakAmericanSignYesNoOption, htmlAttributes: new { @class = "control-label small" })
        &nbsp;&nbsp;
        @foreach (var value in Enum.GetValues(typeof(AHC.CD.Entities.MasterData.Enums.YesNoOption)))
        {
            <label class="radio-inline">
                @Html.RadioButtonFor(model => model.CanSpeakAmericanSignYesNoOption, (int)value, new { data_ng_model = "TempLanguageForEdit.CanSpeakAmericanSignYesNoOption" }) @value.ToString()
            </label>
        }
        <br />
        @Html.ValidationMessageFor(model => model.CanSpeakAmericanSignYesNoOption, "", new { @class = "text-danger" })
    </div>
    <div ng-if="IsLanguageInfoHasError" class="col-lg-12">
        <div class="alert alert-danger" role="alert">
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <span class="sr-only">Error:</span>
            Error Lists : <br />
            <span ng-repeat="err in LanguageInfoErrorList track by $index">{{err}}</span>
        </div>
    </div>
    <div class="col-md-12">
        <button class="btn btn-warning btn-sm" ng-click="LanguageKnownToggle()">Cancel</button>
        <button class="btn btn-success btn-sm pull-right" ng-click="saveLanguages('languageInfoForm')">Save</button>
    </div>
</form>