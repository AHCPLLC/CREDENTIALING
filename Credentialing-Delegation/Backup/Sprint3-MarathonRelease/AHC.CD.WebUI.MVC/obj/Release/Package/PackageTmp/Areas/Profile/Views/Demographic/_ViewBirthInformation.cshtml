@model AHC.CD.WebUI.MVC.Areas.Profile.Models.Demographic.BirthInformationViewModel

<div ng-if="!Provider.BirthInformation" class="col-md-12 zero-padding-left-right-div">
    No Data Available ! Please Provide Birth Information...
    <button class="btn btn-xs btn-primary pull-right" ng-click="operateEditControl('_EditBirthInformation',Provider.BirthInformation)"><i class="fa fa-plus"></i> Birth Information</button>
</div>
<div ng-if="Provider.BirthInformation">
    <div class="col-md-12 zero-padding-left-right-div">
        <div class="form-group col-md-4">
            @Html.LabelFor(model => model.DateOfBirth, htmlAttributes: new { @class = "control-label small" })
            <div>
                <i class="data-label">{{Provider.BirthInformation.DateOfBirth | date: "MM-dd-yyyy"}}</i>
            </div>
        </div>
        <div class="form-group col-md-4">
            @Html.LabelFor(model => model.CityOfBirth, htmlAttributes: new { @class = "control-label small" })
            <div>
                <i class="data-label">{{Provider.BirthInformation.CityOfBirth}}</i>
            </div>
        </div>
        <div class="form-group col-md-4">
            @Html.LabelFor(model => model.CountyOfBirth, htmlAttributes: new { @class = "control-label small" })
            <div>
                <i class="data-label">{{Provider.BirthInformation.CountyOfBirth}}</i>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="col-md-12 zero-padding-left-right-div">
        <div class="form-group col-md-4">
            @Html.LabelFor(model => model.StateOfBirth, htmlAttributes: new { @class = "control-label small" })
            <div>
                <i class="data-label">{{Provider.BirthInformation.StateOfBirth}}</i>
            </div>
        </div>
        <div class="form-group col-md-4">
            @Html.LabelFor(model => model.CountryOfBirth, htmlAttributes: new { @class = "control-label small" })
            <div>
                <i class="data-label">{{Provider.BirthInformation.CountryOfBirth}}</i>
            </div>
        </div>
        <div class="form-group col-md-4">
            @Html.LabelFor(model => model.BirthCertificatePath, htmlAttributes: new { @class = "control-label small" })
            <div>
                <i class="data-label">
                    <a ng-if="Provider.BirthInformation.BirthCertificatePath" href="{{Provider.BirthInformation.BirthCertificatePath}}" class="pointer" target="_blank" data-toggle="tooltip" data-placement="top" title="Birth Certificate"><i class="fa fa-file"> Birth Certificate</i></a>
                    <span ng-if="!Provider.BirthInformation.BirthCertificatePath">Not Available</span>
                </i>
            </div>
        </div>
    </div>
</div>
