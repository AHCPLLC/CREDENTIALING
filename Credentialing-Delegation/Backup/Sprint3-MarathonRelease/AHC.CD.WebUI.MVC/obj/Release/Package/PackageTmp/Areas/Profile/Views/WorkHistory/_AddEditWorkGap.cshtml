@model AHC.CD.WebUI.MVC.Areas.Profile.Models.WorkHistory.WorkGapViewModel

<div>
    <form class="workGapForm">
        <span ng-if="tempObject.WorkGapID">
            @Html.HiddenFor(model => model.WorkGapID, new { ng_value = "tempObject.WorkGapID" })
        </span>
        <div class="col-lg-12 zero-padding-left-right-div">
            <div class="col-md-12">
                <div class="form-group col-md-6">
                    @Html.LabelFor(model => model.StartDate, new { @class="control-label small" })
                    @Html.EditorFor(model => model.StartDate, new { htmlAttributes = new { type = "date", @class = "form-control", data_ng_model = "tempObject.StartDate" } })
                    @Html.ValidationMessageFor(model => model.StartDate, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-md-6">
                    @Html.LabelFor(model => model.EndDate, new { @class = "control-label small" })
                    @Html.EditorFor(model => model.EndDate, new { htmlAttributes = new { type = "date", @class = "form-control", data_ng_model = "tempObject.EndDate" } })
                    @Html.ValidationMessageFor(model => model.EndDate, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group col-md-12">
                    @Html.LabelFor(model => model.Description, new { @class = "control-label small" })
                    @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", data_ng_model = "tempObject.Description" } })
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                </div>
            </div>
            <div ng-if="IsWorkGapHasError" class="col-lg-12">
                <div class="alert alert-danger" role="alert">
                    <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                    <span class="sr-only">Error:</span>
                    Error Lists : <br />
                    <span ng-repeat="err in WorkGapErrorList track by $index">{{err}}</span>
                </div>
            </div>
            <div class="clearfix"></div>
            <br />

            <div class="col-md-12 form-group">
                <div class="col-md-12 form-group">
                    <button type="button" class="btn btn-warning btn-sm" ng-click="operateCancelControl('')">Cancel</button>
                    <button type="submit" class="btn btn-primary btn-sm pull-right" ng-click="saveWorkGap(tempObject, $index)">{{submitButtonText}}</button>
                </div>
            </div>
        </div>
    </form>
</div>
