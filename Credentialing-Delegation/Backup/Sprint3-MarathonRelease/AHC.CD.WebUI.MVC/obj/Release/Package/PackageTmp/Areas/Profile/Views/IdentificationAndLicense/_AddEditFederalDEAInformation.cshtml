@model AHC.CD.WebUI.MVC.Areas.Profile.Models.IdentificationAndLicenses.FederalDEAInformationViewModel
<fieldset>
    <legend>
        Federal DEA Information
    </legend>
    <div>
        <form class="FederalDEALicenseForm">
            <div class="form-style">
                <div id="licensedea" class="panel-body zero-padding-left-right-div">
                    <div class="zero-padding-left-right-div">
                        <div class="col-md-12">
                            <span ng-if="tempObject.FederalDEAInformationID">
                                @Html.HiddenFor(model => model.FederalDEAInformationID, new { ng_value = "tempObject.FederalDEAInformationID" })
                            </span>    
                                <div class="form-group col-md-3">
                                @Html.LabelFor(model => model.DEANumber, new { @class = "control-label small" })
                                <div>
                                    @Html.TextBoxFor(model => model.DEANumber, new { @class = "form-control input-sm", data_ng_model = "tempObject.DEANumber" })
                                </div>
                                @Html.ValidationMessageFor(model => model.DEANumber, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group col-md-3">
                                @Html.LabelFor(model => model.StateOfReg, new { @class = "control-label small" })
                                <div>
                                 @*   @Html.DropDownListFor(model => model.StateOfReg, new[] { new SelectListItem { Value = "Florida", Text = "Florida" }, new SelectListItem { Value = "Arizona", Text = "Arizona" } }, "-- select --", new { @class = "form-control input-sm", data_ng_model = "FederalDEALicense.StateOfRegistration" })*@
                                    <select id="StateOfReg" class="form-control input-sm" data-ng-model="tempObject.StateOfReg" name="StateOfReg">
                                        <option value="" disabled selected>--Select--</option>
                                        <option ng-repeat="state in States | unique: 'State'" value="{{state.State}}">{{state.State}}</option>
                                    </select>
                                </div>
                                @Html.ValidationMessageFor(model => model.StateOfReg, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group col-md-3">
                                @Html.LabelFor(model => model.IssueDate, new { @class = "control-label small" })
                                <div>
                                    @Html.TextBoxFor(model => model.IssueDate, new { @class = "form-control input-sm", type = "date", data_ng_model = "tempObject.IssueDate" })
                                </div>
                                @Html.ValidationMessageFor(model => model.IssueDate, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group col-md-3">
                                @Html.LabelFor(model => model.ExpiryDate, new { @class = "control-label small" })
                                <div>
                                    @Html.TextBoxFor(model => model.ExpiryDate, new { @class = "form-control input-sm", type = "date", data_ng_model = "tempObject.ExpiryDate" })
                                </div>
                                @Html.ValidationMessageFor(model => model.ExpiryDate, "", new { @class = "text-danger" })
                            </div>
                        </div>
                       

                        <div class="clearfix"></div>
                        <div class="col-md-12">
                             <table class="table table-bordered table-condensed customtbodyStyle table-striped">
                                <thead>
                                    <tr>
                                        <th>Schedule</th>
                                        <th>Schedule Type</th>
                                       <th>Eligibility</th>
                                    </tr>
                                </thead>
                                 <tbody>
                                     <tr ng-repeat="sl in Schedules track by $index">
                                         <td>
                                             <label>{{sl.ScheduleTitle}}</label>
                                         </td>
                                         <td>
                                             <label>{{sl.ScheduleTypeTitle}}</label>
                                         </td>
                                         <td>
                                             <span ng-if="tempObject.FederalDEAInformationID">
                                                 <input type="hidden" ng-value="tempObject.DEAScheduleInfoes[{{$index}}].DEAScheduleInfoID" name="DEAScheduleInfoes[{{$index}}].DEAScheduleInfoID">
                                             </span>
                                             <input type="hidden" value="{{sl.DEAScheduleID}}" data-ng-model="tempObject.DEAScheduleInfoes[$index].DEAScheduleID" name="DEAScheduleInfoes[{{$index}}].DEAScheduleID">
                                            
                                             @foreach (var value in Enum.GetValues(typeof(AHC.CD.Entities.MasterData.Enums.YesNoOption)))
                                             {
                                                 <label class="radio-inline">
                                                     <input type="radio" name="DEAScheduleInfoes[{{$index}}].YesNoOption" data-ng-model="tempObject.DEAScheduleInfoes[$index].YesNoOption" value="@((int)value)" />@value.ToString()
                                                 </label>
                                             }
                                         </td>
                                     </tr>
                                 </tbody>
                            </table>
                           </div>
                        <div class="clearfix"></div>
                        <div class="col-md-12">
                            <div class="form-group col-md-3">
                                @Html.LabelFor(model => model.IsInGoodStanding, new { @class = "control-label small" })
                                <div>
                                    @foreach (var value in Enum.GetValues(typeof(AHC.CD.Entities.MasterData.Enums.YesNoOption)))
                                    {
                                        <label class="radio-inline">
                                            @Html.RadioButtonFor(model => model.GoodStandingYesNoOption, (int)value, new { data_ng_model = "tempObject.GoodStandingYesNoOption" }) @value.ToString()
                                        </label>
                                    }
                                </div>
                                @Html.ValidationMessageFor(model => model.GoodStandingYesNoOption, "", new { @class = "text-danger" })


                            </div>
                            <div class="form-group col-md-9">
                                <div class="col-md-11">
                                    @Html.HiddenFor(model => model.DEALicenceCertPath, new { ng_value = "tempObject.DEALicenceCertPath" })


                                    <div class="fileinput fileinput-new input-group" data-provides="fileinput">
                                        <div class="form-control" data-trigger="fileinput">
                                            <i class="glyphicon glyphicon-file fileinput-exists"></i> 
                                            <span class="fileinput-filename"></span>
                                        </div>
                                        <span class="input-group-addon btn btn-default btn-file">
                                            <span class="fileinput-new small">Select Federal DEA License Certificate</span>
                                            <span class="fileinput-exists">Change</span>
                                            <input type="file" name="DEALicenceCertFile" ng-model="tempObject.DEALicenceCertFile" autocomplete="off">
                                        </span>
                                        <a href="#" class="input-group-addon btn btn-default fileinput-exists" data-dismiss="fileinput">Remove</a>
                                    </div>
                                </div>
                              
                                <div ng-show="tempObject.DEALicenceCertPath" class="col-md-1">
                                    <a href="{{tempObject.DEALicenceCertPath}}" target="_blank"><i class="fa fa-2x fa-file"></i></a>
                                </div>
                            </div>
                           
                        </div>
                        <div ng-if="ErrorDEA" class="col-lg-12">
                            <div class="alert alert-danger" role="alert">
                                <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                                <span class="sr-only">Error:</span>
                                Error List : <br />
                                <span ng-repeat="err in DEAError track by $index">{{err}}</span>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="col-md-12">
                            <div class="col-md-12" ng-if="visibilityControl=='addDEAInformation'">
                                <button type="button" class="btn btn-warning btn-sm" ng-click="operateCancelControl('')">Cancel</button>
                                <button type="submit" class="btn btn-primary btn-sm pull-right" ng-click="saveFederalDEALicense(tempObject,-1)">Add</button>
                            </div>
                            <div class="col-md-12" ng-if="visibilityControl==($index+'_editDEAInformation')">
                                <button type="button" class="btn btn-warning btn-sm" ng-click="operateCancelControl('')">Cancel</button>
                                <button type="submit" class="btn btn-primary btn-sm pull-right" ng-click="saveFederalDEALicense(tempObject,$index)">Update</button>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </form>
</div></fieldset>
