@model AHC.CD.WebUI.MVC.Areas.Profile.Models.WorkHistory.WorkGapViewModel

<div class="col-lg-12 zero-padding-left-right-div">
    <div class="col-md-12">
        <div class="form-group col-md-6">
            @Html.LabelFor(model => model.StartDate, new { @class = "control-label small" })
            <div>
                <i class="data-label">{{workGap.StartDate | date:'MM-dd-yyyy'}}</i>
            </div>
        </div>
        <div class="form-group col-md-6">
            @Html.LabelFor(model => model.EndDate, new { @class = "control-label small" })
            <div>
                <i class="data-label">{{workGap.EndDate | date:'MM-dd-yyyy'}}</i>
            </div>
        </div>
    </div>
    <div class="col-md-12">
        <div class="form-group col-md-12">
            @Html.LabelFor(model => model.Description, new { @class = "control-label small" })
            <div>
                <i class="data-label">{{workGap.Description}}</i>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
    <br />

    <div class="col-md-12 form-group">
        <div class="col-md-12 form-group">
            <button type="button" class="btn btn-warning btn-sm" ng-click="operateCancelControl('')">Cancel</button>
            <button type="submit" class="btn btn-primary btn-sm pull-right" ng-click="operateEditControl($index+'_editWorkGap',workGap)">Edit</button>
        </div>
    </div>
</div>
