<fieldset>
    <legend>
        Payment and Remittance
    </legend>
    <div id="practice4" class="panel-body">

        <div class="form-group">
            <div class="col-md-12">
                <div class="form-group col-md-3">
                    <label class="control-label small">Electronic Billing Capabilities *</label>
                    <div>
                        <i class="data-label">{{paymentandRemittance.BillingCapabilities}}</i>
                    </div>
                </div>
                <div class="form-group col-md-3">
                    <label class="control-label small">Billing Department (If Hospital - Based)</label>
                    <div>
                        <i class="data-label">{{paymentandRemittance.BillingDepartment}}</i>
                    </div>
                </div>

                <div class="col-lg-3 form-group">
                    <label class="control-label small">Check Payable To *</label>
                    <div>
                        <i class="data-label">{{paymentandRemittance.Check}}</i>
                    </div>
                </div>
                <div class="col-lg-3 form-group">
                    <label class="control-label small">Office *</label>
                    <div>
                        <i class="data-label">{{paymentandRemittance.Office}}</i>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="col-lg-4 form-group">
                    <label class="control-label small">First Name *</label>
                    <div>
                        <i class="data-label">{{paymentandRemittance.First}}</i>
                    </div>
                </div>
                <div class="col-lg-4 form-group">
                    <label class="control-label small">Middle Name</label>
                    <div>
                        <i class="data-label">{{paymentandRemittance.Middle}}</i>
                    </div>
                </div>
                <div class="col-lg-4 form-group">
                    <label class="control-label small">Last Name *</label>
                    <div>
                        <i class="data-label">{{paymentandRemittance.Last}}</i>
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-md-12">
                <div class="form-group col-md-4">
                    <label class="control-label small">Number *</label>
                    <div>
                        <i class="data-label">{{paymentandRemittance.Number}}</i>
                    </div>
                </div>

                <div class="form-group col-md-4">
                    <label class="control-label small">Street *</label>
                    <div>
                        <i class="data-label">{{paymentandRemittance.Street}}</i>
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label class="control-label small">Suite/Building</label>
                    <div>
                        <i class="data-label">{{paymentandRemittance.Suite}}</i>
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-md-12">
                <div class="form-group col-md-4">
                    <label class="control-label small">State *</label>
                    <div>
                        <i class="data-label">{{paymentandRemittance.State}}</i>
                    </div>
                </div>

                <div class="form-group col-md-4">
                    <label class="control-label small">City *</label>
                    <div>
                        <i class="data-label">{{paymentandRemittance.City}}</i>
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label class="control-label small">ZIP Code *</label>
                    <div>
                        <i class="data-label">{{paymentandRemittance.ZIP}}</i>
                    </div>
                </div>
            </div>

            <div class="clearfix"></div>
            <div class="col-md-12">
                <div class="form-group col-md-4">
                    <label for="MobileNo" class="control-label small">Telephone *</label>
                    <div>
                        <i class="data-label">{{paymentandRemittance.Telephone}}</i>
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="MobileNo" class="control-label small">Fax </label>
                    <div>
                        <i class="data-label">{{paymentandRemittance.Fax}}</i>
                    </div>
                </div>
                <div class="col-lg-4 form-group">
                    <label class="control-label small">E-Mail Address</label>
                    <div>
                        <i class="data-label">{{paymentandRemittance.MailAddress}}</i>
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-md-12">
                <div class="col-md-12 form-group">
                    <button class="btn btn-warning btn-sm" ng-click="cancelPayment()">Cancel</button>
                    <button class="btn btn-primary btn-sm pull-right" ng-click="editPayment($index,paymentandRemittance)">Edit</button>
                </div>
            </div>
        </div>

    </div>
</fieldset>
