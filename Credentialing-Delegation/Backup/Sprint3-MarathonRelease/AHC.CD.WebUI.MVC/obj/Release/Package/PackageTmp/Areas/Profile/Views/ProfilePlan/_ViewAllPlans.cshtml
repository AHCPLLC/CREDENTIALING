    <div class="form-style">
        <fieldset>
            <legend>
                Plan Details
            </legend>
            <div id="Plans" class="panel-body">
                <div class="panel-heading">
                    <span class="badge bg-info pull-right" ng-show="ifFilter()">{{getIndexFirst()}} - {{getIndexLast()}} of {{data.length}}</span>
                    
                </div>
                <table ng-table="tableParams" show-filter="true" class="table ng-table-rowselected">
                    <tbody ng-repeat="plan in $data">
                        <tr>
                            <td data-title="'No'">
                                {{$index+1}}.
                            </td>
                            <td data-title="'Logo'">
                                <img src="~/Content/Images/Plans/{{plan.PlanImage}}" class="datatableimg"/>
                            </td>
                            <td data-title="'Plan Name'" sortable="'PlanName'" filter="{ 'PlanName': 'text' }">
                                {{plan.PlanName}}
                            </td>
                            <td data-title="'Plan Type'" sortable="'PlanType'" filter="{ 'PlanType': 'text' }">
                                {{plan.PlanType}}
                            </td>
                            <td data-title="'Location'" sortable="'Location'" filter="{ 'Location': 'text' }">
                                {{plan.Location}}
                            </td>
                            <td data-title="'Group'" sortable="'Group'" filter="{ 'Group': 'text' }">
                                {{plan.Group}}
                            </td>
                            <td data-title="'Specialty'" sortable="'Specialty'" filter="{ 'Specialty': 'text' }">
                                {{plan.Specialty}}
                            </td>
                            <td data-title="'Status'" sortable="'Status'" filter="{ 'Status': 'text' }">
                                {{plan.Status}}
                            </td>
                        </tr>
                      
                    </tbody>
                </table>
            </div>
        </fieldset>
    </div>
</div>
  

