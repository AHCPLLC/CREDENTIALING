@model AHC.CD.WebUI.MVC.Areas.Profile.Models.HospitalPrivilege.HospitalPrivilegeDetailViewModel

<form class="hospitalPrivilegeForm">
    <div class="col-lg-12 zero-padding-left-right-div">        
        <fieldset>
            <legend>
                Hospital Privilege Information
            </legend>
            <div>
                <div class="col-md-12">
                    <div class="form-group col-md-3">
                        @Html.LabelFor(model => model.PreferenceType, new { @class = "control-label small" })
                        <div>
                            <i class="data-label " ng-class="{'1':'fa fa-check', '2':'fa fa-times'}[hospitalPrivilegeInformation.PreferenceType]"></i>
                        </div>
                    </div>
                    <div class="form-group col-md-5">
                        @Html.LabelFor(model => model.HospitalID, htmlAttributes: new { @class = "control-label small" })
                        <div class="radio">
                            <i class="data-label">{{hospitalPrivilegeInformation.Hospital.HospitalName}}</i>
                        </div>
                    </div>
                    <div class="form-group col-md-4">
                        @Html.LabelFor(model => model.HospitalContactInfoID, htmlAttributes: new { @class = "control-label small" })
                        <div class="radio">
                            <i class="data-label">{{hospitalPrivilegeInformation.HospitalContactInfo.LocationName}}</i>
                        </div>
                    </div>
                </div>
                <div class="col-md-12">                    
                    <div class="form-group col-md-4">
                        <label class="control-label small">Street Address</label>
                        <div>
                            <i class="data-label">{{hospitalPrivilegeInformation.HospitalContactInfo.Street}}</i>
                        </div>
                    </div>
                    <div class="form-group col-md-4">
                        <label class="control-label small">Suit/Building</label>
                        <div>
                            <i class="data-label">{{hospitalPrivilegeInformation.HospitalContactInfo.Building}}</i>
                        </div>
                    </div>
                    <div class="form-group col-md-4">
                        <label class="control-label small">Country</label>
                        <div>
                            <i class="data-label">{{hospitalPrivilegeInformation.HospitalContactInfo.Country}}</i>
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group col-md-3">
                        <label class="control-label small">State</label>
                        <div>
                            <i class="data-label">{{hospitalPrivilegeInformation.HospitalContactInfo.State}}</i>
                        </div>
                    </div>
                    <div class="form-group col-md-3">
                        <label class="control-label small">County</label>
                        <div>
                            <i class="data-label">{{hospitalPrivilegeInformation.HospitalContactInfo.County}}</i>
                        </div>
                    </div>
                    <div class="form-group col-md-3">
                        <label class="control-label small">City</label>
                        <div>
                            <i class="data-label">{{hospitalPrivilegeInformation.HospitalContactInfo.City}}</i>
                        </div>
                    </div>
                    <div class="form-group col-md-3">
                        <label class="control-label small">Zip Code</label>
                        <div>
                            <i class="data-label">{{hospitalPrivilegeInformation.HospitalContactInfo.ZipCode}}</i>
                        </div>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group col-md-4">                        
                        <label class="control-label small">Phone Number</label>
                        <div>
                            <i class="data-label">{{hospitalPrivilegeInformation.HospitalContactInfo.Phone}}</i>
                        </div>                        
                    </div>
                    <div class="form-group col-md-4">
                        <label class="control-label small">Fax</label>
                        <div>
                            <i class="data-label">{{hospitalPrivilegeInformation.HospitalContactInfo.Fax}}</i>
                        </div>
                    </div>
                    <div class="form-group col-md-4">
                        <label class="control-label small">E-mail Address</label>
                        <div>
                            <i class="data-label">{{hospitalPrivilegeInformation.HospitalContactInfo.Email}}</i>
                        </div>
                    </div>
                </div>

                <div class=" col-md-12">
                    <div class="form-group col-md-4">
                        @Html.LabelFor(model => model.HospitalContactPersonID, htmlAttributes: new { @class = "control-label small" })
                        <div>
                            <i class="data-label">{{hospitalPrivilegeInformation.HospitalContactPerson.ContactPersonName}}</i>
                        </div>
                    </div>
                    <div class="form-group col-md-4">
                        <label class="control-label small">Contact Person Phone Number</label>
                        <div>
                            <i class="data-label">{{hospitalPrivilegeInformation.HospitalContactPerson.ContactPersonPhone}}</i>
                        </div>
                    </div>
                    <div class="form-group col-md-4">
                        <label class="control-label small">Contact Person Fax Number</label>
                        <div>
                            <i class="data-label">{{hospitalPrivilegeInformation.HospitalContactPerson.ContactPersonFax}}</i>
                        </div>
                    </div>
                </div>
                <div class=" col-md-12">
                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.DepartmentName, htmlAttributes: new { @class = "control-label small" })
                        <div>
                            <i class="data-label">{{hospitalPrivilegeInformation.DepartmentName}}</i>
                        </div>
                    </div>
                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.DepartmentChief, htmlAttributes: new { @class = "control-label small" })
                        <div>
                            <i class="data-label">{{hospitalPrivilegeInformation.DepartmentChief}}</i>
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group col-md-3">
                        @Html.LabelFor(model => model.AffilicationStartDate, htmlAttributes: new { @class = "control-label small" })
                        <div>
                            <i class="data-label">{{ConvertDateFormat(hospitalPrivilegeInformation.AffilicationStartDate)| date:'MM-dd-yyyy'}}</i>
                        </div>
                    </div>
                    <div class="form-group col-md-3">
                        @Html.LabelFor(model => model.AffiliationEndDate, htmlAttributes: new { @class = "control-label small" })
                        <div>
                            <i class="data-label">{{ConvertDateFormat(hospitalPrivilegeInformation.AffiliationEndDate)| date:'MM-dd-yyyy'}}</i>
                        </div>
                    </div>
                    <div class="form-group col-md-3">
                        @Html.LabelFor(model => model.PrevilegesTemporaryYesNoOption, new { @class = "control-label small" })
                        <div>
                            <i class="data-label " ng-class="{'1':'fa fa-check', '2':'fa fa-times'}[hospitalPrivilegeInformation.PrevilegesTemporaryYesNoOption]"></i>
                        </div>
                    </div>

                    <div class="form-group col-md-3">
                        @Html.LabelFor(model => model.FullUnrestrictedPrevilagesYesNoOption, new { @class = "control-label small" })
                        <div>
                            <i class="data-label " ng-class="{'1':'fa fa-check', '2':'fa fa-times'}[hospitalPrivilegeInformation.FullUnrestrictedPrevilagesYesNoOption]"></i>
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group col-md-3">
                        @Html.LabelFor(model => model.AdmittingPrivilegeID, htmlAttributes: new { @class = "control-label small" })
                        <div>
                            <i class="data-label ">{{hospitalPrivilegeInformation.AdmittingPrivilege.Title}}</i>
                        </div>
                    </div>
                    <div class="form-group col-md-3">
                        @Html.LabelFor(model => model.AnnualAdmisionPercentage, htmlAttributes: new { @class = "control-label small" })
                        <div>
                            <i class="data-label">{{hospitalPrivilegeInformation.AnnualAdmisionPercentage}}</i>
                        </div>
                    </div>
                    <div class="form-group col-md-3">
                        @Html.LabelFor(model => model.SpecialtyID, htmlAttributes: new { @class = "control-label small" })
                        <div>
                            <i class="data-label">{{getSpecialityForProvider(hospitalPrivilegeInformation.SpecialtyID).Name}}</i>
                        </div>
                    </div>
                    <div class="form-group col-md-3">
                        @Html.LabelFor(model => model.StaffCategoryID, htmlAttributes: new { @class = "control-label small" })
                        <div>
                            <i class="data-label">{{hospitalPrivilegeInformation.StaffCategory.Title}}</i>
                        </div>
                    </div>

                </div>

                <div class="col-md-12">
                    <div class="col-md-2 form-group">
                        <span class="fileinput-new small">@Html.LabelFor(model => model.HospitalPrevilegeLetterPath, htmlAttributes: new { @class = "control-label small" })</span>
                    </div>
                    <div class="col-md-8 form-group small">
                        <div>
                            <span ng-show="hospitalPrivilegeInformation.HospitalPrevilegeLetterPath==''">Not Available</span><a ng-show="hospitalPrivilegeInformation.HospitalPrevilegeLetterPath!=''" href="{{hospitalPrivilegeInformation.HospitalPrevilegeLetterPath}}" data-toggle="tooltip" data-placement="top" title="{{hospitalPrivilegeInformation.DocumentPath}}" target="_blank"><i class="fa fa-file"></i> Hospital Privilege Document</a>
                        </div>
                    </div>
                </div>
            </div>
        </fieldset>
        <div class="clearfix"></div>
        <br />
        <div class="col-md-12">
            <div class="col-md-12">
                <button class="btn btn-warning btn-sm" ng-click="operateCancelControl('')">Cancel</button>
                <button class="btn btn-primary btn-sm pull-right" ng-click="operateEditControl($index+'_edithospitalPrivilegeInformation',hospitalPrivilegeInformation)">Edit</button>
            </div>
        </div>
    </div>
</form>
