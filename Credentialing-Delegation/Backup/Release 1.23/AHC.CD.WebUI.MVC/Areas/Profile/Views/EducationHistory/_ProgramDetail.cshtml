@using AHC.CD.WebUI.MVC.Areas.Profile.Attributes;

<div class="form-style">
    <fieldset>
        <legend>
            Residency/Internship/Fellowship Details
        </legend>
        <div id="residency" class="panel-body">
            <div class="form-style">
                <div class="col-lg-12 zero-padding-left-right-div">
                    <table ng-hide="ResidencyInternshipViewModel.length > 0 || visibilityControl == 'addProgramDetail'" class="table table-bordered table-condensed customtbodyStyle table-striped">
                        <thead>
                            <tr>
                                <td>
                                    No Data Available for Program Details! Please click on
                                    @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Add, ViewBag.Roles, false))
                                    {
                                        <button id="noDataAddNewInternshipDetails" class="btn btn-xs btn-success" ng-click="operateViewAndAddControl('addProgramDetail')"><i class="fa fa-plus"></i></button>
                                    }
                                    to add new Program Detail
                                </td>
                            </tr>
                        </thead>
                    </table>
                    <table ng-hide="ResidencyInternshipViewModel.length <= 0" class="table table-bordered table-condensed customtbodystyle table-striped">
                        <thead>
                            <tr>
                                <th>Program Type</th>
                                <th>Specialty</th>
                                <th>School Name</th>
                                <th>Affiliate University</th>
                                <th>Supporting Document</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody ng-repeat="residencyInternshipViewModel in ResidencyInternshipViewModel track by $index">
                            <tr>
                                <td class="col-lg-2" ng-if="residencyInternshipViewModel.ProgramType == 'Resident'">Residency</td>
                                <td class="col-lg-2" ng-if="residencyInternshipViewModel.ProgramType != 'Resident'">{{residencyInternshipViewModel.ProgramType}}</td>
                                <td class="col-lg-2" ng-if="!residencyInternshipViewModel.ProgramType"><i>Not Available</i></td>
                                <td class="col-lg-2" ng-if="residencyInternshipViewModel.Specialty.Name">{{residencyInternshipViewModel.Specialty.Name}}</td>
                                <td class="col-lg-2" ng-if="!residencyInternshipViewModel.Specialty.Name"><i>Not Available</i></td>
                                <td class="col-lg-2" ng-if="residencyInternshipViewModel.SchoolInformation.SchoolName">{{residencyInternshipViewModel.SchoolInformation.SchoolName}}</td>
                                <td class="col-lg-2" ng-if="!residencyInternshipViewModel.SchoolInformation.SchoolName"><i>Not Available</i></td>
                                <td class="col-lg-2" ng-if="residencyInternshipViewModel.HospitalName">{{residencyInternshipViewModel.HospitalName}}</td>
                                <td class="col-lg-2" ng-if="!residencyInternshipViewModel.HospitalName"><i>Not Available</i></td>
                                <td class="col-lg-2" ng-if="residencyInternshipViewModel.DocumentPath"><i class="data-label"><a href="/Document/View?path={{residencyInternshipViewModel.DocumentPath}}" class="pointer" target="_blank" data-toggle="tooltip" data-placement="top" title="Certificate"><i class="fa fa-file"></i></a></i></td>
                                <td class="col-lg-2" ng-if="!residencyInternshipViewModel.DocumentPath"><i>Not Available</i></td>
                                <td class="col-lg-2">
                                    @if (ProfileActionValidator.IsAuthorized(ProfileActionType.View, ViewBag.Roles, false))
                                    {
                                        <button data-toggle="tooltip" data-placement="left" title="View" class="btn btn-xs btn-default" ng-click="operateViewAndAddControl($index+'_viewProgramDetail'); SetAddView('View')"><i class="fa fa-eye"></i></button>
                                    }

                                    @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Edit, ViewBag.Roles, false))
                                    {
                                        <button data-toggle="tooltip" data-placement="top" title="Edit" class="btn btn-xs btn-primary" ng-click="operateEditControl($index+'_editProgramDetail',residencyInternshipViewModel); SetAddView('Add')"><i class="fa fa-edit"></i></button>
                                    }

                                    @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Add, ViewBag.Roles, false))
                                    {
                                        <button id="addNewInternshipDetails" data-toggle="tooltip" data-placement="right" title="Add New" ng-hide="$index+1!=ResidencyInternshipViewModel.length" ng-click="operateViewAndAddControl('addProgramDetail')" class="btn btn-xs btn-success"><i class="fa fa-plus"></i></button>
                                    }

                                </td>
                            </tr>
                            @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Edit, ViewBag.Roles, false))
                            {
                                <tr ng-show="visibilityControl==($index+'_editProgramDetail')">
                                    <td colspan="6" id="programDetailDiv{{$index}}" class="editTableDataStyle">
                                        @Html.Partial("~/Areas/Profile/Views/EducationHistory/_AddEditProgramDetail.cshtml")
                                    </td>
                                </tr>
                            }

                            @if (ProfileActionValidator.IsAuthorized(ProfileActionType.View, ViewBag.Roles, false))
                            {
                                <tr ng-show="visibilityControl==($index+'_viewProgramDetail')">
                                    <td colspan="6" id="{{$index}}" class="editTableDataStyle">
                                        @Html.Partial("~/Areas/Profile/Views/EducationHistory/_ViewProgramDetail.cshtml")
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="clearfix"></div>
                @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Add, ViewBag.Roles, false))
                {
                    <div ng-show="visibilityControl=='addProgramDetail'">
                        <div id="newProgramDetailDiv">
                            <fieldset>
                                <legend>
                                    Add Residency/Internship/Fellowship Details
                                </legend>
                                @Html.Partial("~/Areas/Profile/Views/EducationHistory/_AddEditProgramDetail.cshtml")
                            </fieldset>
                        </div>
                    </div>
                }
            </div>
            <div class="clearfix"></div><br ng-show="activeMessageDiv" />
            <div ng-show="activeMessageDiv=='addedNewProgramDetails'" class="alert alert-success" role="alert">
                <button ng-click="closeAlertMessage('')" class="close"><span>&times;</span></button>
                <i class="fa fa-2x fa-arrow-up"></i> {{messageDesc}}
            </div>
            <div ng-show="activeMessageDiv=='updatedProgramDetails'" class="alert alert-success" role="alert">
                <button ng-click="closeAlertMessage('')" class="close"><span>&times;</span></button>
                {{messageDesc}}
            </div>
        </div>
    </fieldset>
</div>
