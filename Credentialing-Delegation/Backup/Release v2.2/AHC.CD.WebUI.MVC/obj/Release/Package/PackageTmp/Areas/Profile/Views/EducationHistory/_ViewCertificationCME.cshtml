@model AHC.CD.WebUI.MVC.Areas.Profile.Models.EducationHistory.CMECertificationViewModel
@using AHC.CD.WebUI.MVC.Areas.Profile.Attributes;

<div class="clearfix"></div>
<div id="certificate">
    <fieldset>
        <legend>
            Post Graduate Training/CME Details
        </legend>
       
            <div class="col-lg-12 zero-padding-left-right-div">
                <div class="col-lg-3 form-group">

                    @Html.LabelFor(model => model.QualificationDegree, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i class="data-label wrap-words">{{certificationCMEViewModel.QualificationDegree || 'Not Available'}}</i>
                    </div>
                </div>
                <div class="col-lg-3 form-group">

                    @Html.LabelFor(model => model.Certification, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i class="data-label wrap-words">{{certificationCMEViewModel.Certification || 'Not Available'}}</i>
                    </div>
                </div>

                <div class="col-lg-3 form-group">

                    @Html.LabelFor(model => model.SchoolInformation.SchoolName, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i class="data-label wrap-words">{{certificationCMEViewModel.SchoolInformation.SchoolName || 'Not Available'}}</i>
                    </div>
                </div>
                <div class="col-lg-3 form-group">

                    @Html.LabelFor(model => model.SponsorName, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i class="data-label wrap-words">{{certificationCMEViewModel.SponsorName || 'Not Available'}}</i>
                    </div>
                </div>
            </div>
        <div class="col-lg-12 zero-padding-left-right-div">

            <div class="form-group col-md-3">

                @Html.LabelFor(model => model.SchoolInformation.Street, htmlAttributes: new { @class = "control-label small" })
                <div>
                    <i class="data-label wrap-words">{{certificationCMEViewModel.SchoolInformation.Street || 'Not Available'}}</i>
                </div>
            </div>
            <div class="form-group col-md-3">

                @Html.LabelFor(model => model.SchoolInformation.Building, htmlAttributes: new { @class = "control-label small" })
                <div>
                    <i ng-if="certificationCMEViewModel.SchoolInformation.Building" class="data-label wrap-words">{{certificationCMEViewModel.SchoolInformation.Building}}</i>
                    <i ng-if="!certificationCMEViewModel.SchoolInformation.Building" class="data-label">Not Available</i>
                </div>
            </div>
            <div class="form-group col-md-3">

                @Html.LabelFor(model => model.SchoolInformation.City, htmlAttributes: new { @class = "control-label small" })
                <div>
                    <i class="data-label wrap-words">{{certificationCMEViewModel.SchoolInformation.City || 'Not Available'}}</i>
                </div>
            </div>
            <div class="form-group col-md-3">

                @Html.LabelFor(model => model.SchoolInformation.State, htmlAttributes: new { @class = "control-label small" })
                <div>
                    <i class="data-label wrap-words">{{certificationCMEViewModel.SchoolInformation.State || 'Not Available'}}</i>
                </div>
            </div>
        </div>
        <div class="col-lg-12 zero-padding-left-right-div">
            <div class="form-group col-md-3">

                @Html.LabelFor(model => model.SchoolInformation.ZipCode, htmlAttributes: new { @class = "control-label small" })
                <div>
                    <i ng-if="certificationCMEViewModel.SchoolInformation.ZipCode" class="data-label">{{certificationCMEViewModel.SchoolInformation.ZipCode}}</i>
                    <i ng-if="!certificationCMEViewModel.SchoolInformation.ZipCode" class="data-label">Not Available</i>
                </div>
            </div>
            @*<div class="form-group col-md-3">

                @Html.LabelFor(model => model.SchoolInformation.Country, htmlAttributes: new { @class = "control-label small" })
                <div>
                    <i class="data-label">{{certificationCMEViewModel.SchoolInformation.Country}}</i>
                </div>
            </div>*@
            <div class="form-group col-md-3">

                @Html.LabelFor(model => model.SchoolInformation.County, htmlAttributes: new { @class = "control-label small" })
                <div>
                    <i ng-if="certificationCMEViewModel.SchoolInformation.County" class="data-label wrap-words">{{certificationCMEViewModel.SchoolInformation.County}}</i>
                    <i ng-if="!certificationCMEViewModel.SchoolInformation.County" class="data-label">Not Available</i>
                </div>
            </div>
            <div class="form-group col-md-3">

                @Html.LabelFor(model => model.SchoolInformation.Email, htmlAttributes: new { @class = "control-label small" })
                <div>
                    <i ng-if="certificationCMEViewModel.SchoolInformation.Email" class="data-label wrap-words">{{certificationCMEViewModel.SchoolInformation.Email}}</i>
                    <i ng-if="!certificationCMEViewModel.SchoolInformation.Email" class="data-label">Not Available</i>
                </div>
            </div>
            <div class="col-lg-3 form-group">

                @Html.LabelFor(model => model.SchoolInformation.Phone, htmlAttributes: new { @class = "control-label small" })
                <div>
                    <i ng-if="certificationCMEViewModel.SchoolInformation.Phone" class="data-label">{{certificationCMEViewModel.SchoolInformation.PhoneCountryCode}}-{{certificationCMEViewModel.SchoolInformation.Phone}}</i>
                    <i ng-if="!certificationCMEViewModel.SchoolInformation.Phone" class="data-label">Not Available</i>
                </div>
            </div>
        </div>
        <div class="col-lg-12 zero-padding-left-right-div">
            <div class="col-lg-3 form-group">

                @Html.LabelFor(model => model.SchoolInformation.Fax, htmlAttributes: new { @class = "control-label small" })
                <div>
                    <i ng-if="certificationCMEViewModel.SchoolInformation.Fax" class="data-label">{{certificationCMEViewModel.SchoolInformation.FaxCountryCode}}-{{certificationCMEViewModel.SchoolInformation.Fax}}</i>
                    <i ng-if="!certificationCMEViewModel.SchoolInformation.Fax" class="data-label">Not Available</i>
                </div>
            </div>
            <div class="col-lg-3 form-group">

                @Html.LabelFor(model => model.CreditHours, htmlAttributes: new { @class = "control-label small" })
                <div>
                    <i class="data-label">{{certificationCMEViewModel.CreditHours || 'Not Available'}}</i>
                </div>
            </div>
            <div class="col-lg-3 form-group">

                @Html.LabelFor(model => model.StartDate, htmlAttributes: new { @class = "control-label small" })
                <div>
                    <i class="data-label">{{certificationCMEViewModel.StartDate || 'Not Available' | date:'MM-dd-yyyy'}}</i>
                </div>
            </div>
            <div class="col-lg-3 form-group">

                @Html.LabelFor(model => model.EndDate, htmlAttributes: new { @class = "control-label small" })
                <div>
                    <i class="data-label">{{certificationCMEViewModel.EndDate || 'Not Available' | date:'MM-dd-yyyy'}}</i>
                </div>
            </div>
        </div>

        <div class="col-lg-12 zero-padding-left-right-div">

            <div class="col-lg-3 form-group">

                @Html.LabelFor(model => model.ExpiryDate, htmlAttributes: new { @class = "control-label small" })
                <div>
                    <i class="data-label">{{certificationCMEViewModel.ExpiryDate || 'Not Available' | date:'MM-dd-yyyy'}}</i>
                </div>
            </div>
            @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Preview, ViewBag.Roles, false))
            {
                <div class="col-md-3 form-group">
                    @Html.LabelFor(model => model.CertificatePath, htmlAttributes: new { @class = "control-label small" })
                    <div ng-if="certificationCMEViewModel.CertificatePath">
                        <i class="data-label"><a href="/Document/View?path={{certificationCMEViewModel.CertificatePath}}" class="pointer" target="_blank" data-toggle="tooltip" data-placement="top" title="Certificate"><i class="fa fa-file"></i></a></i>
                    </div>
                    <div ng-if="!certificationCMEViewModel.CertificatePath">
                        <i class="data-label"> Not available</i>
                    </div>
                </div>
            }
        </div>
        <div class="clearfix"></div>
        <div ng-show="activeMessageDiv =='updatedCMEDetails'+$index" class="alert alert-success" role="alert">
            <button ng-click="closeAlertMessage('')" class="close"><span>&times;</span></button>
            {{messageDesc}}
        </div>
        <div class="clearfix"></div>

            <div class="col-lg-12 zero-padding-left-right-div">
                <div class="col-md-12 form-group">
                    <button type="button" class="btn btn-warning btn-sm" ng-click="operateCancelControl('')">Cancel</button>
                    @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Edit, ViewBag.Roles, false))
                    {
                        <button type="button" class="btn btn-primary btn-sm pull-right" ng-click="operateEditControl($index+'_editcertificationCMEViewModel',certificationCMEViewModel)">Edit</button>
                    }

                </div>
            </div>
            
    </fieldset>
    
</div>
