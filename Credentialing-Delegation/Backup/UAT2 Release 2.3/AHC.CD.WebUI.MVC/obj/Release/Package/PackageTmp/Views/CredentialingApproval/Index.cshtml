@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section AddToHead{
    <script src="~/Scripts/Lib/Jquery/jquery-1.11.0.js"></script>
    <script src="~/Scripts/Lib/Bootstrap/jquery-ui.js"></script>
    <script src="~/Scripts/Lib/Jquery/select2.min.js"></script>
    <link href="~/Content/Provider/select2.css" rel="stylesheet" />
    @*<script src="~/Scripts/Lib/Angular/angular.min.js"></script>
        <script src="~/Scripts/Lib/Angular/textAngular.min.js"></script>*@
    <link href="~/Content/SharedCss/style.css" rel="stylesheet" />
}
<style>
    label.small {
        color: #337ab7;
    }
</style>

<div id="page-wrapper">
    <div class="container-fluid">

        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <ol class="breadcrumb">
                    <li>
                        <i class="fa fa-dashboard"></i>
                        <a href="~/Dashboard/Index">Dashboard</a>
                    </li>
                    <li>
                        <a href="~/CredentialingApproval/ProvidersList"><i class="fa fa-list-alt"></i> List for Credentialing Action</a>
                    </li>
                    <li class="active">
                        <i class="fa fa-file-o"></i> Credentialing Approval
                    </li>
                </ol>
            </div>
        </div>
        <!-- /.row -->
        <!-- Add Provider content form div -->
        <div class="row">
            <div class="col-lg-12">
                <table class="table table-striped">
                    <thead class="bg-gray">
                        <tr>
                            <th>Title</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Location</th>
                            <th>Plan</th>
                            <th>Date Of Submission</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>MD</td>
                            <td>Pariksith</td>
                            <td>Singh</td>
                            <td>Spring Hill</td>
                            <td>Ultimate Health Plans</td>
                            <td>15th Nov, 2014</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div id="actionControlsContainer">
                <div class="col-lg-9">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div role="tabpanel">
                                <div class="text-center">
                                    <!-- Nav tabs -->
                                    <ul class="nav nav-tabs" role="tablist">
                                        <li role="presentation" class="active"><a href="#form" aria-controls="form" role="tab" data-toggle="tab">Form</a></li>
                                        <li role="presentation"><a href="#uploadedDocuments" aria-controls="uploadedDocuments" role="tab" data-toggle="tab">Uploaded Documents</a></li>
                                        <li role="presentation"><a href="#verificationReport" aria-controls="verificationReport" role="tab" data-toggle="tab">Verification Report</a></li>
                                    </ul>
                                </div>

                                <div class="col-lg-12">
                                    <!-- Tab panes -->
                                    <div class="tab-content">
                                        <div role="tabpanel" class="tab-pane active" id="form">
                                            <!---Practice Location Information partial starts here-->
                                            @Html.Partial("_Form")
                                            <!---Practice Location Information partial ends here-->
                                        </div>
                                        <div role="tabpanel" class="tab-pane" id="uploadedDocuments">
                                            <!---Practice Location Information partial starts here-->
                                            @Html.Partial("_UploadedDocs")
                                            <!---Practice Location Information partial ends here-->
                                        </div>
                                        <div role="tabpanel" class="tab-pane" id="verificationReport">
                                            <!---Practice Location Information partial starts here-->
                                            @Html.Partial("_VerificationReport")
                                            <!---Practice Location Information partial ends here-->
                                        </div>
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3">
                    <!---Info Div partial starts here-->
                    @Html.Partial("_info_div")
                    <!---Info Div partial ends here-->
                </div>
            </div>
            <div id="email_mail_container" style="display:none;">
                <div class="col-lg-12">
                    <!---Email Div partial starts here-->
                    @Html.Partial("_EmailPartial")
                    <!---Email Div partial ends here-->
                </div>
            </div>
            <div id="alert_container" style="display:none;">
                <div class="col-lg-12">
                    <!---Email Div partial starts here-->
                    @Html.Partial("_Alerts")
                    <!---Email Div partial ends here-->
                </div>
            </div>
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->



<script type="text/javascript">

    $('input').prop('autocomplete', 'off');

    var submitForm = function () {
        var value = $("#status").val();
        if (value == "approve") {
            $("#actionControlsContainer").effect('explode', function () { $('#email_mail_container').slideDown(); });
        }
        else if (value == "reject") {
            $("#actionControlsContainer").effect('explode', function () { $('#alert_container').show(); $('#rejectAlert').show(); });
        }
        else if (value == "reprocess") {
            $("#actionControlsContainer").effect('explode', function () { $('#alert_container').show(); $('#reprocessAlert').show(); });
        }
    };

    var sendEmail = function () {
        $("#email_mail_container").effect('explode', function () { $('#alert_container').show(); $('#approveAlert').show(); });
    };

</script>