@{
    ViewBag.Title = "CustomField";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section AddToHead{
    <script src="~/Scripts/Lib/Angular/angular.min.js"></script>
    <script src="~/Scripts/Lib/Angular/ui-bootstrap-tpls-0.13.0.min.js"></script>
    <script src="~/Areas/Profile/Scripts/CustomFields/CustomField.js"></script>
}

<script>
    var togglemenu = function () {
        $("#sidemenu").toggleClass("menu-in");
        $("#page-wrapper").toggleClass("menuup");
    }
</script>
<style>
    .full button span {
        background-color: limegreen;
        border-radius: 32px;
        color: black;
    }
</style>
<div id="page-wrapper">
    <div class="container-fluid" ng-app="CustomFieldApp" ng-controller="CustomFieldController" ng-cloak>
        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <ol class="breadcrumb">
                    <li>
                        <i class="fa fa-dashboard"></i>  <a href="/Dashboard/Index">Dashboard</a>
                    </li>
                    <li class="active">
                        <i class="fa fa-list-alt"></i> Custom Field
                    </li>
                </ol>
            </div>
        </div>
        <div class="row">
            <div class="panel panel-default content-panel">
                <div class="panel-heading">
                    Add Custom Fields  &nbsp;&nbsp;
                </div>
                <div class="panel-body">
                    <div class="col-lg-12 zero-padding-left-right-div form-style">
                        <fieldset>
                            <legend>Custom Field</legend>
                            <div class="pull-right legend2">
                                <button class="btn btn-xs btn-primary" ng-click="AddingPanelForCustomField()" tooltip="" data-toggle="tooltip" data-placement="top" title="" data-original-title="Add New Custom Field" ng-disabled="AddButton"><i class="fa fa-plus"> Add</i></button>
                            </div>
                            <div ng-show="ListOfCustomField.length==0 && AddingPanelStatus==false">
                                <label>No Custom Field Available.</label>
                            </div>
                            <div class="col-lg-12">
                                <div ng-if="activeMessageDiv=='CustomFieldError'" class="col-lg-12 alert alert-{{messageType}}" role="alert">
                                    <button ng-click="closeAlertMessage()" class="close"><span>&times;</span></button>
                                    {{messageDesc}}
                                </div>
                            </div>
                            @*<div class="col-lg-12" ng-if="CustomFieldListStatus==true && ListOfCustomField.length==0 && AddingPanelStatus==false" style="border: 1px solid #ddd; border-bottom-width: 2px; padding: 5px; ">
                                    <span>Please click on <button id="noDataAddNewCustomField" class="btn btn-xs btn-success" ng-click="AddingPanelForCustomField()" tooltip="" data-toggle="tooltip" data-placement="top" title="" data-original-title="Add New CustomField"><i class="fa fa-plus"></i></button> to add new Custom Field</span>
                                </div>*@

                            <div class="col-lg-12" ng-if="CustomFieldListStatus==true && ListOfCustomField.length>0">
                                <div class="form-group" ng-repeat="c in ListOfCustomField">
                                    <div class="col-lg-2 col-md-2 col-sm-2">

                                    </div>
                                    <div class="col-lg-3 col-md-3 col-sm-3">
                                        <label class="control-label pull-right wrap-words" style="font-weight: 400; word-wrap: break-word;">{{c.CustomFieldTitle}}</label>
                                    </div>
                                    <div class="col-lg-1 col-md-1 col-sm-1">
                                        <label>:</label>
                                    </div>
                                    <div class="col-lg-2 col-md-2 col-sm-2">

                                        <i class="control-label">Text Box</i>
                                    </div>
                                    <div class="col-lg-3 col-md-3 col-sm-3">
                                    </div>
                                    <div class="clearfix"></div>

                                </div>

                            </div>
                            <br />
                            <br />
                            <div class="col-lg-12 zero-padding-left-right-div form-style" ng-if="CustomFieldListStatus==true && AddingPanelStatus==true">
                                <div class="form-group">
                                    <div class="col-lg-2 col-md-2 col-sm-2">

                                    </div>
                                    <div class="col-lg-3 col-md-3 col-sm-3">
                                        <input type="text" id="title" ng-model="TitleOfCategory" ng-change="showvalue()" placeholder="Enter Title" class="form-control input-sm" /><img src="~/Content/Images/ajax-loader.gif" ng-if="LoadingImage" style="width:15px" />
                                    </div>
                                    <div class="col-lg-3 col-md-3 col-sm-3">
                                        <select class="form-control input-sm" ng-model="Category[$index]" ng-change="SelectCategory(Category[$index])">
                                            <option selected disabled hidden value="">-Select Category-</option>
                                            <option ng-repeat="c in Category track by $index" value="{{c}}" class="control-label">{{c}}</option>
                                        </select>
                                    </div>

                                    <div class="col-lg-1 col-md-1 col-sm-1 control-label">
                                        <a class="btn btn-primary btn-sm" ng-class="{'disabled': TitleOfCategory==null || TitleOfCategory=='' || SelectedCategory==0 || ErorrMessage==true}" ng-click="AddCustomField(TitleOfCategory)">Add</a>
                                    </div>

                                    <div class="col-lg-1 col-md-1 col-sm-1 control-label">
                                        <a class="btn btn-warning btn-sm" ng-click="Cancel()" ng-hide="cancel">Cancel</a>
                                    </div>
                                </div>
                                <br />
                                <div class="form-group" ng-show="ErorrMessage">
                                    <div class="col-lg-2 col-md-2 col-sm-2">

                                    </div>
                                    <div class="col-lg-3 col-md-3 col-sm-3">
                                        <label class="control-label small"><i class="text-danger">Title already taken *</i></label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div ng-if="activeMessageDiv=='CustomFieldSuccess'" class="col-lg-12 alert alert-{{messageType}}" role="alert">
                                    <button ng-click="closeAlertMessage()" class="close"><span>&times;</span></button>
                                    {{messageDesc}}
                                </div>
                            </div>
                        </fieldset>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/Lib/Jquery/jquery-1.11.0.js"></script>
