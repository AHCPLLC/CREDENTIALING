@model AHC.CD.WebUI.MVC.Areas.Profile.Models.ProfessionalAffiliation.ProfessionalAffiliationDetailViewModel
@using AHC.CD.WebUI.MVC.Areas.Profile.Attributes;

<form class="professionalAffiliationForm">
    <div class="col-lg-12 zero-padding-left-right-div">
        <fieldset>
            <legend>
                Professional Affiliation
            </legend>
            <div class=" col-lg-12">
                <div class="col-lg-12 form-group">
                    @Html.LabelFor(model => model.OrganizationName, new { @class = "control-label small" })
                    <div>
                        <i class="data-label wrap-words">{{pa.OrganizationName}}</i>
                    </div>
                </div>
            </div>
            <div class=" col-lg-12">
                <div class="col-lg-3 form-group">
                    @Html.LabelFor(model => model.StartDate, new { @class = "control-label small" })
                    <div>
                        <i class="data-label wrap-words">{{pa.StartDate| date:'MM-dd-yyyy'}}</i>
                        <i class="data-label" ng-show="!pa.StartDate">Not Available</i>
                    </div>
                </div>
                <div class="col-lg-3 form-group">
                    @Html.LabelFor(model => model.EndDate, new { @class = "control-label small" })
                    <div>
                        <i class="data-label">{{pa.EndDate| date:'MM-dd-yyyy'}}</i>
                        <i class="data-label" ng-show="!pa.EndDate">Not Available</i>
                    </div>
                </div>
                <div class="col-lg-3 form-group">
                    @Html.LabelFor(model => model.PositionOfficeHeld, new { @class = "control-label small" })

                    <div>
                        <i class="data-label wrap-words">{{pa.PositionOfficeHeld}}</i>
                        <i class="data-label" ng-show="!pa.PositionOfficeHeld">Not Available</i>
                    </div>
                </div>
                <div class="col-lg-3 form-group">
                    @Html.LabelFor(model => model.Member, new { @class = "control-label small" })
                    <div>
                        <i class="data-label wrap-words">{{pa.Member}}</i>
                        <i class="data-label" ng-show="!pa.Member">Not Available</i>
                    </div>

                </div>
            </div><div class="clearfix"></div>
            <div ng-show="activeMessageDiv=='updatedProfessionalAffiliation'+$index" class="alert alert-success" role="alert">
                <button ng-click="closeAlertMessage('')" class="close"><span>&times;</span></button>
                {{messageDesc}}
            </div>
            <div class="clearfix"></div>
            <div class="col-md-12 form-group">
                <div>
                    <button class="btn btn-warning btn-sm" ng-click="operateCancelControl('')">Cancel</button>
                    @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Edit, ViewBag.Roles, true))
                    {
                        <button class="btn btn-primary btn-sm pull-right" ng-click="operateEditControl($index+'_editpa',pa)">Edit</button>
                    }
                </div>
            </div>

        </fieldset>

    </div>
</form>
