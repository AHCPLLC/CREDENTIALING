@model AHC.CD.WebUI.MVC.Areas.Profile.Models.HospitalPrivilege.HospitalPrivilegeDetailViewModel
@using AHC.CD.WebUI.MVC.Areas.Profile.Attributes;

<form class="hospitalPrivilegeForm">
    <div class="col-lg-12 zero-padding-left-right-div">
        <fieldset>
            <legend>
                Hospital Privilege Information
            </legend>
            <div>
                <div class="col-md-12 zero-padding-left-right-div">
                    <div class="form-group col-md-3">
                        @Html.LabelFor(model => model.PreferenceType, new { @class = "control-label small" })
                        <div ng-hide="hospitalPrivilegeInformation.PreferenceType == ''">
                            <i class="data-label " ng-class="{'1':'fa fa-check', '2':'fa fa-times'}[hospitalPrivilegeInformation.PreferenceType]"></i>
                        </div>
                        <div ng-show="hospitalPrivilegeInformation.PreferenceType == '' || hospitalPrivilegeInformation.PreferenceType == null">
                            <i>Not Available</i>
                        </div>
                    </div>
                    <div class="form-group col-md-3">
                        @Html.LabelFor(model => model.HospitalID, htmlAttributes: new { @class = "control-label small" })
                        <div class="radio">
                            <i class="data-label">{{hospitalPrivilegeInformation.Hospital.HospitalName || 'Not Available'}}</i>
                        </div>
                    </div>
                    <div class="form-group col-md-3">
                        @Html.LabelFor(model => model.HospitalContactInfoID, htmlAttributes: new { @class = "control-label small" })
                        <div class="radio">
                            <i class="data-label">{{hospitalPrivilegeInformation.HospitalContactInfo.LocationName || 'Not Available'}}</i>
                        </div>
                    </div>
                </div>
                <div class="col-md-12 zero-padding-left-right-div">
                    <div class="form-group col-md-3">
                        <label class="control-label small">Street/P. O. Box No:</label>
                        <div>
                            <i class="data-label">{{hospitalPrivilegeInformation.HospitalContactInfo.Street || 'Not Available'}}</i>
                        </div>
                    </div>
                    <div class="form-group col-md-3">
                        <label class="control-label small">Suite/Building</label>
                        <div>
                            <i class="data-label">{{hospitalPrivilegeInformation.HospitalContactInfo.Building || 'Not Available'}}</i>
                        </div>
                    </div>
                    <div class="form-group col-md-3">
                        <label class="control-label small">City</label>
                        <div>
                            <i class="data-label">{{hospitalPrivilegeInformation.HospitalContactInfo.City || 'Not Available'}}</i>
                        </div>
                    </div>
                    <div class="form-group col-md-3">
                        <label class="control-label small">State</label>
                        <div>
                            <i class="data-label">{{hospitalPrivilegeInformation.HospitalContactInfo.State || 'Not Available'}}</i>
                        </div>
                    </div>
                </div>
                <div class="col-md-12 zero-padding-left-right-div">
                    <div class="form-group col-md-3">
                        <label class="control-label small">Zip Code</label>
                        <div>
                            <i class="data-label">{{hospitalPrivilegeInformation.HospitalContactInfo.ZipCode || 'Not Available'}}</i>
                        </div>
                    </div>
                    <div class="form-group col-md-3">
                        <label class="control-label small">Country</label>
                        <div>
                            <i class="data-label">{{hospitalPrivilegeInformation.HospitalContactInfo.Country || 'Not Available'}}</i>
                        </div>
                    </div>
                    <div class="form-group col-md-3">
                        <label class="control-label small">County</label>
                        <div>
                            <i class="data-label">{{hospitalPrivilegeInformation.HospitalContactInfo.County || 'Not Available'}}</i>
                        </div>
                    </div>
                </div>

                <div class="col-md-12 zero-padding-left-right-div">
                    <div class="form-group col-md-3">
                        <label class="control-label small">Phone Number</label>
                        <div>
                            <i class="data-label">{{hospitalPrivilegeInformation.HospitalContactInfo.Phone || 'Not Available'}}</i>
                        </div>
                    </div>
                    <div class="form-group col-md-3">
                        <label class="control-label small">Fax</label>
                        <div>
                            <i class="data-label">{{hospitalPrivilegeInformation.HospitalContactInfo.Fax || 'Not Available'}}</i>
                        </div>
                    </div>
                    <div class="form-group col-md-3">
                        <label class="control-label small">E-mail Address</label>
                        <div>
                            <i class="data-label">{{hospitalPrivilegeInformation.HospitalContactInfo.Email || 'Not Available'}}</i>
                        </div>
                    </div>
                </div>

                <div class=" col-md-12 zero-padding-left-right-div">
                    <div class="form-group col-md-3">
                        @Html.LabelFor(model => model.HospitalContactPersonID, htmlAttributes: new { @class = "control-label small" })
                        <div>
                            <i class="data-label">{{getContactPersonForProvider(hospitalPrivilegeInformation.HospitalContactPerson.HospitalContactPersonID).ContactPersonName || 'Not Available'}}</i>
                        </div>
                    </div>
                    <div class="form-group col-md-3">
                        <label class="control-label small">Contact Person Phone Number</label>
                        <div>
                            <i class="data-label">{{hospitalPrivilegeInformation.HospitalContactPerson.ContactPersonPhone || 'Not Available'}}</i>
                        </div>
                    </div>
                    <div class="form-group col-md-3">
                        <label class="control-label small">Contact Person Fax Number</label>
                        <div>
                            <i class="data-label">{{hospitalPrivilegeInformation.HospitalContactPerson.ContactPersonFax || 'Not Available'}}</i>
                        </div>
                    </div>
                </div>
                <div class=" col-md-12 zero-padding-left-right-div">
                    <div class="form-group col-md-3">
                        @Html.LabelFor(model => model.DepartmentName, htmlAttributes: new { @class = "control-label small" })
                        <div>
                            <i class="data-label wrap-words">{{hospitalPrivilegeInformation.DepartmentName || 'Not Available'}}</i>
                        </div>
                    </div>
                    <div class="form-group col-md-3">
                        @Html.LabelFor(model => model.DepartmentChief, htmlAttributes: new { @class = "control-label small" })
                        <div>
                            <i class="data-label wrap-words">{{hospitalPrivilegeInformation.DepartmentChief || 'Not Available'}}</i>
                        </div>
                    </div>
                </div>
                <div class="col-md-12 zero-padding-left-right-div">
                    <div class="form-group col-md-3">
                        @Html.LabelFor(model => model.AffilicationStartDate, htmlAttributes: new { @class = "control-label small" })
                        <div>
                            <i class="data-label">{{hospitalPrivilegeInformation.AffilicationStartDate || 'Not Available' | date:'MM/dd/yyyy'}}</i>
                        </div>
                    </div>
                    <div class="form-group col-md-3">
                        @Html.LabelFor(model => model.AffiliationEndDate, htmlAttributes: new { @class = "control-label small" })
                        <div>
                            <i class="data-label">{{hospitalPrivilegeInformation.AffiliationEndDate || 'Not Available' | date:'MM/dd/yyyy' }}</i>
                        </div>
                    </div>
                    <div class="form-group col-md-3">
                        @Html.LabelFor(model => model.PrevilegesTemporaryYesNoOption, new { @class = "control-label small" })
                        <div ng-hide="!hospitalPrivilegeInformation.PrevilegesTemporaryYesNoOption">
                            <i class="data-label " ng-class="{'1':'fa fa-check', '2':'fa fa-times'}[hospitalPrivilegeInformation.PrevilegesTemporaryYesNoOption]"></i>
                        </div>
                        <div ng-show="!hospitalPrivilegeInformation.PrevilegesTemporaryYesNoOption">
                            <i>Not Available</i>
                        </div>
                    </div>

                    <div class="form-group col-md-3">
                        @Html.LabelFor(model => model.FullUnrestrictedPrevilagesYesNoOption, new { @class = "control-label small" })
                        <div ng-hide="!hospitalPrivilegeInformation.FullUnrestrictedPrevilagesYesNoOption">
                            <i class="data-label" ng-class="{'1':'fa fa-check', '2':'fa fa-times'}[hospitalPrivilegeInformation.FullUnrestrictedPrevilagesYesNoOption]"></i>
                        </div>
                        <div ng-show="!hospitalPrivilegeInformation.FullUnrestrictedPrevilagesYesNoOption">
                            <i>Not Available</i>
                        </div>
                    </div>
                </div>
                <div class="col-md-12 zero-padding-left-right-div">
                    <div class="form-group col-md-3">
                        @Html.LabelFor(model => model.AdmittingPrivilegeID, htmlAttributes: new { @class = "control-label small" })
                        <div>
                            <i class="data-label ">{{getAdmittingPrivilageStatusForProvider(hospitalPrivilegeInformation.AdmittingPrivilege.AdmittingPrivilegeID).Title || 'Not Available'}}</i>
                        </div>
                    </div>
                    <div class="form-group col-md-3">
                        @Html.LabelFor(model => model.AnnualAdmisionPercentage, htmlAttributes: new { @class = "control-label small" })
                        <div>
                            <i class="data-label">{{hospitalPrivilegeInformation.AnnualAdmisionPercentage || 'Not Available'}}</i>
                        </div>
                    </div>
                    <div class="form-group col-md-3">
                        @Html.LabelFor(model => model.SpecialtyID, htmlAttributes: new { @class = "control-label small" })
                        <div>
                            <i class="data-label">{{getSpecialityForProvider(hospitalPrivilegeInformation.SpecialtyID).Specialty.Name || 'Not Available'}}</i>
                        </div>
                    </div>
                    <div class="form-group col-md-3">
                        @Html.LabelFor(model => model.StaffCategoryID, htmlAttributes: new { @class = "control-label small" })
                        <div>
                            <i class="data-label">{{getStaffCategoryForProvider(hospitalPrivilegeInformation.StaffCategory.StaffCategoryID).Title || 'Not Available'}}</i>
                        </div>
                    </div>

                </div>

                <div class="col-md-12 zero-padding-left-right-div">
                    <div class="col-md-3 form-group">
                        <span class="fileinput-new small">@Html.LabelFor(model => model.HospitalPrevilegeLetterPath, htmlAttributes: new { @class = "control-label" })</span>
                        <div>
                            <i ng-show="hospitalPrivilegeInformation.HospitalPrevilegeLetterPath==null">Not Available</i><a ng-hide="hospitalPrivilegeInformation.HospitalPrevilegeLetterPath==null" href="/Document/View?path={{hospitalPrivilegeInformation.HospitalPrevilegeLetterPath}}" tooltip data-toggle="tooltip" data-placement="top" title="{{hospitalPrivilegeInformation.DocumentPath}}" target="_blank"><i class="fa fa-file"></i></a>
                        </div>
                    </div>
                    @*<div class="col-md-7 form-group small">
                        <div>
                            <span ng-show="hospitalPrivilegeInformation.HospitalPrevilegeLetterPath==null">Not Available</span><a ng-hide="hospitalPrivilegeInformation.HospitalPrevilegeLetterPath==null" href="/Document/View?path={{hospitalPrivilegeInformation.HospitalPrevilegeLetterPath}}" data-toggle="tooltip" data-placement="top" title="{{hospitalPrivilegeInformation.DocumentPath}}" target="_blank"><i class="fa fa-file"></i></a>
                        </div>
                    </div>*@
                </div>
            </div>
            <div class="clearfix"></div>
            <div ng-show="activeMessageDiv=='updateHospitalPrivilege'+$index" class="alert alert-success" role="alert">
                <button ng-click="closeAlertMessage('')" class="close"><span>&times;</span></button>
                {{messageDesc}}
            </div>
            <div ng-show="activeMessageDiv=='renewHospitalPrivilege'+$index " class="alert alert-success" role="alert">
                <button ng-click="closeAlertMessage('')" class="close"><span>&times;</span></button>
                {{messageDesc}}
            </div>
            <div class="clearfix"></div>
            <br />
            <div class="col-md-12 zero-padding-left-right-div">
                <div class="col-md-12">
                    <button class="btn btn-warning btn-sm" ng-click="operateCancelControl('')">Cancel</button>
                    @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Edit, ViewBag.Roles, true))
                    {
                        <button class="btn btn-primary btn-sm pull-right" ng-click="operateEditControl($index+'_edithospitalPrivilegeInformation',hospitalPrivilegeInformation)">Edit</button>
                    }
                </div>
            </div>
        </fieldset>

    </div>
</form>
