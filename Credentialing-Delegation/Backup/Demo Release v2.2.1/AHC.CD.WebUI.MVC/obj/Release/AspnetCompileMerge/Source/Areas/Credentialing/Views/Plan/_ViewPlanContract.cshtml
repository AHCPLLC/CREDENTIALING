
<div class="col-lg-12 zero-padding-left-right-div">
<div ng-show="activeMessageDiv=='PlanUpdated'" class="alert alert-success" role="alert">
    <button ng-click="closeAlertMessage('')" class="close"><span>&times;</span></button>
    {{messageDesc}}
</div>
</div>

<form id="providerSearch" name="providerData">
    <br />
    <div class="clearfix"></div>
    <div class="row" ng-show="showDiv">
        <div class="col-lg-12 form-style">
            <fieldset>
                <legend>Assign Business Entities</legend>

                <table class="table-bordered table table-condensed">
                    <tr>
                        <th>{{selectedPlan}}</th>
                        <th ng-repeat="be in BE_LOB_Maps[0].BEs">
                            {{be.BE.Name}}
                        </th>
                    </tr>
                    <tr ng-repeat="pl in BE_LOB_Maps">
                        <td>
                            <label>
                                {{pl.PlanLOB.LOB.LOBName}}
                            </label>
                        </td>
                        <td ng-repeat="ber in pl.BEs"><input type="checkbox" ng-model="ber.IsChecked" disabled/></td>
                    </tr>
                </table>
                <div class="clearfix"></div>
                @*<button type="button" ng-click="SaveData()" class="btn btn-sm btn-success pull-right">Save</button>*@
                <button type="button" ng-click="BackToList()" class="btn btn-sm btn-warning">Cancel</button>
            </fieldset>
        </div>
    </div>
</form>


