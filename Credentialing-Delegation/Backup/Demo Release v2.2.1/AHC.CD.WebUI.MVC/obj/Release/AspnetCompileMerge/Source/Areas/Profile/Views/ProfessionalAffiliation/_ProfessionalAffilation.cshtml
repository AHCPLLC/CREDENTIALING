@using AHC.CD.WebUI.MVC.Areas.Profile.Attributes;
<style>
    .loadingHistory{
        padding-left: 7px;
        display: none;
    }
</style>

<br />
<div class="panel-group" ng-controller="professionalAppCtrl">
    <div class="panel-default">
        <div class="form-style">
            <fieldset>
                <legend>
                    Professional Affiliation
                </legend>
                <div class="legend2 pull-right">
                    <button type="button" ng-click="showAffiliationHistory('PAHID')" class="btn btn-xs btn-warning" data-container="body" data-toggle="popover" data-placement="left" data-trigger="hover" data-content="View History"><i class="fa fa-clock-o"></i></button>
                    <div id="PAHID" class="loading pull-right loadingHistory"><img src="/Content/Images/ajax-loader.gif" width="20" height="20"></div>
                </div>
                <div id="Affiliationqwe">
                    <div class="col-lg-12">
                        <table ng-hide="ProfessionalAffiliations.length > 0 || visibilityControl=='addpa' " class="table table-bordered table-condensed customtbodyStyle table-striped">
                            <thead>
                                <tr>
                                    <td>
                                        No Data Available for Professional Affiliation
                                        @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Add, ViewBag.Roles, false))
                                        {
                                            <span>Please click on <button id="noDataAddNewProfessionalAffiliation" class="btn btn-xs btn-success" ng-click="operateViewAndAddControl('addpa')" tooltip data-toggle="tooltip" data-placement="right" title="Add New"><i class="fa fa-plus"></i></button> to add new Professional Affiliation</span>
                                        }
                                    </td>
                                </tr>
                            </thead>
                        </table>
                        <table ng-hide="ProfessionalAffiliations.length <= 0" class="table table-bordered table-condensed table-striped customtbodyStyle">
                            <thead>
                                <tr>
                                    <th>Organization Name</th>
                                    <th>Start Date</th>
                                    <th>End Date</th>
                                    <th>Position Office Held</th>
                                    <th>Member/Applicant</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody ng-repeat="pa in ProfessionalAffiliations track by $index">
                                <tr>
                                    <td class="wrap-words col-md-2">{{pa.OrganizationName}}</td>
                                    <td ng-show="pa.StartDate" class="col-md-2">{{pa.StartDate | date:'MM-dd-yyyy'}}</td>
                                    <td ng-show="!pa.StartDate"><i>Not Available</i></td>
                                    <td ng-show="pa.EndDate" class="col-md-2">{{pa.EndDate | date:'MM-dd-yyyy'}}</td>
                                    <td ng-show="!pa.EndDate"><i>Not Available</i></td>
                                    <td ng-show="pa.PositionOfficeHeld" class="wrap-words col-md-2">{{pa.PositionOfficeHeld}}</td>
                                    <td ng-show="!pa.PositionOfficeHeld"><i>Not Available</i></td>
                                    <td ng-show="pa.Member" class="wrap-words col-md-2">{{pa.Member}}</td>
                                    <td ng-show="!pa.Member"><i>Not Available</i></td>
                                    <td class="col-md-3">
                                        @if (ProfileActionValidator.IsAuthorized(ProfileActionType.View, ViewBag.Roles, false))
                                        {
                                            <button class="btn btn-xs btn-default" ng-click="operateViewAndAddControl($index+'_viewpa')" ng-hide="showViewProfessionalAffiliation" tooltip data-toggle="tooltip" data-placement="left" title="View"><i class="fa fa-eye"></i></button>
                                        }
                                        @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Edit, ViewBag.Roles, false))
                                        {
                                            <button class="btn btn-xs btn-primary" ng-click="operateEditControl($index+'_editpa',pa)" ng-hide="editShowProfessionalAffiliation" tooltip data-toggle="tooltip" data-placement="top" title="Edit"><i class="fa fa-edit"></i></button>
                                        }
                                        @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Add, ViewBag.Roles, false))
                                        {
                                            <button class="btn btn-xs btn-danger" data-toggle="tooltip" data-placement="top" title="Remove" ng-click="initProfessionalAffiliationWarning(pa);" tooltip><i class="fa fa-minus-circle"></i></button>
                                            <button id="addNewProfessionalAffiliation" ng-if="$index == ProfessionalAffiliations.length-1" ng-hide="showViewProfessionalAffiliation||editShowProfessionalAffiliation || newShowProfessionalAffiliation" class="btn btn-xs btn-success" ng-click="operateViewAndAddControl('addpa')" tooltip data-toggle="tooltip" data-placement="right" title="Add New"><i class="fa fa-plus"></i></button>
                                        }
                                    </td>
                                </tr>
                                @if (ProfileActionValidator.IsAuthorized(ProfileActionType.View, ViewBag.Roles, false))
                                {
                                    <tr ng-show="visibilityControl==($index+'_viewpa')">
                                        <td colspan="6" class="editTableDataStyle">
                                            @Html.Partial("~/Areas/Profile/Views/ProfessionalAffiliation/_ViewProfessionalAffiliation.cshtml")
                                        </td>
                                    </tr>
                                }
                                @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Edit, ViewBag.Roles, false))
                                {
                                    <tr ng-show="visibilityControl==($index+'_editpa')">
                                        <td colspan="6" id="professionalAffiliationEditDiv{{$index}}" class="editTableDataStyle">
                                            <fieldset>
                                                <legend>
                                                    Edit Professional Affiliation
                                                </legend>
                                                @Html.Partial("~/Areas/Profile/Views/ProfessionalAffiliation/_AddEditProfessionalAffiliation.cshtml")
                                            </fieldset>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div ng-show="activeMessageDiv=='addedNewProfessionalAffiliation'" class="alert alert-success" role="alert">
                            <button ng-click="closeAlertMessage('')" class="close"><span>&times;</span></button>
                            <i class="fa fa-2x fa-arrow-up"></i> {{messageDesc}}
                        </div>
                        <div ng-show="activeMessageDiv=='removeProfessionalAffiliation'">
                            <div class="alert alert-danger" role="alert">
                                <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                                <span class="sr-only">Error:</span>
                                Error Lists :<br />
                                <span ng-repeat="err in errorProfessionalAffiliation track by $index">{{err}}</span>
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Add, ViewBag.Roles, false))
                    {
                        <fieldset ng-show="visibilityControl=='addpa'">
                            <legend>
                                Add Professional Affiliation
                            </legend>
                            <div id="newShowProfessionalAffiliationDiv">
                                @Html.Partial("~/Areas/Profile/Views/ProfessionalAffiliation/_AddEditProfessionalAffiliation.cshtml")
                            </div>
                        </fieldset>
                    }
                </div>
            </fieldset>
        </div>
    </div>
    <div class="panel-default" ng-if="showAffiliationHistoryTable">
        <div class="form-style">
            <fieldset>
                <legend>
                    Professional Affiliation History
                </legend>
                <div class="legend2 pull-right">
                    <button type="button" ng-click="cancelAffiliationHistory()" class="btn btn-xs btn-default" data-container="body" data-toggle="popover" data-placement="left" data-trigger="hover" data-content="View History"><i class="fa fa-times text-danger"></i></button>
                </div>
                <table ng-hide="affiliationHistoryArray.length > 0" class="table table-bordered table-condensed customtbodyStyle table-striped">
                    <thead>
                        <tr>
                            <td>
                                No History Available for Professional Affiliation!
                            </td>
                        </tr>
                    </thead>
                </table>
                <table ng-hide="affiliationHistoryArray.length <= 0" class="table table-bordered table-condensed table-striped customtbodyStyle">
                    <thead>
                        <tr>
                            <th>Organization Name</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Position Office Held</th>
                            <th>Member/Applicant</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody ng-repeat="paHistory in affiliationHistoryArray track by $index">
                        <tr>
                            <td ng-if="!paHistory.OrganizationName"><i>Not Available</i></td>
                            <td ng-if="paHistory.OrganizationName">{{paHistory.OrganizationName}}</td>
                            <td ng-if="!paHistory.StartDate"><i>Not Available</i></td>
                            <td ng-if="paHistory.StartDate">{{paHistory.StartDate | date:'MM-dd-yyyy'}}</td>
                            <td ng-if="!paHistory.EndDate"><i>Not Available</i></td>
                            <td ng-if="paHistory.EndDate">{{paHistory.EndDate | date:'MM-dd-yyyy'}}</td>
                            <td ng-if="!paHistory.PositionOfficeHeld"><i>Not Available</i></td>
                            <td ng-if="paHistory.PositionOfficeHeld">{{paHistory.PositionOfficeHeld}}</td>
                            <td ng-if="!paHistory.Member"><i>Not Available</i></td>
                            <td ng-if="paHistory.Member">{{paHistory.Member}}</td>
                            <td>
                                <button class="btn btn-xs btn-default" ng-click="operateViewAndAddControl($index+'_viewpaHistory')" ng-hide="showViewProfessionalAffiliation" tooltip data-toggle="tooltip" data-placement="left" title="View"><i class="fa fa-eye"></i></button>
                            </td>
                        </tr>
                        <tr ng-show="visibilityControl==($index+'_viewpaHistory')">
                            <td colspan="6" class="editTableDataStyle">
                                @Html.Partial("~/Areas/Profile/Views/ProfessionalAffiliation/_ViewProfessionalAffiliationHistory.cshtml")
                            </td>
                        </tr>
                    </tbody>
                </table>
            </fieldset>
        </div>
    </div>
    <div class="modal fade" id="professionalAffiliationWarningModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form id="editProfessionalAffiliation">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">Warning!!!!</h4>
                    </div>
                    <div class="modal-body">
                        Do you really want to remove <b>{{tempAffiliation.OrganizationName}}</b> from your Professional Affiliations list ?
                        <input type="hidden" name="ProfessionalAffiliationInfoID" value="{{tempAffiliation.ProfessionalAffiliationInfoID}}" />
                        <input type="hidden" name="StatusType" value="2" />
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-primary" ng-click="removeProfessionalAffiliation(ProfessionalAffiliations)">Remove</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>