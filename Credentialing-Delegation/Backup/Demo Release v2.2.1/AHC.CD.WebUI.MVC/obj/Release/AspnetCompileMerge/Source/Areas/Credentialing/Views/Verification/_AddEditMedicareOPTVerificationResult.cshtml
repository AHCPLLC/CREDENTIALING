@model AHC.CD.WebUI.MVC.Areas.Credentialing.Models.PSVInfo.ProfileVerificationDetailViewModel
<form enctype="multipart/form-data" class="form-style" id="medicareOPT">
    <input type="hidden" name="ProfileVerificationParameterId" value="{{MOPTParameterID}}">
    <div ng-if="MedicareOPT.ProfileVerificationDetail.ProfileVerificationDetailId">
        <input type="hidden" name="ProfileVerificationDetailId" value="{{MedicareOPT.ProfileVerificationDetail.ProfileVerificationDetailId}}">
    </div>
    <div ng-if="MedicareOPT.ProfileVerificationDetail.VerificationResultId">
        <input type="hidden" name="VerificationResultId" value="{{MedicareOPT.ProfileVerificationDetail.VerificationResultId}}">
    </div>
    <div ng-if="MedicareOPT.ProfileVerificationDetail.VerificationResult.VerificationResultId">
        <input type="hidden" name="VerificationResult.VerificationResultId" value="{{MedicareOPT.ProfileVerificationDetail.VerificationResult.VerificationResultId}}">
    </div>
    <fieldset>
        <legend>
            @*{{lisence.name}}*@
            <strong>Verification Result</strong>
        </legend>
        <div class="col-lg-12 zero-padding-left-right-div">
            <div class="col-lg-6 form-group">
                <label class="control-label small">Status</label>
                @*<select class="form-control input-sm" ng-model="lisence.status">
                        <option>Valid</option>
                        <option>Invalid</option>
                    </select>*@
                @{
                    List<SelectListItem> listItems = new List<SelectListItem>();
                    listItems.Add(new SelectListItem
                         {
                             Text = "Valid",
                             Value = "1"
                         });
                    listItems.Add(new SelectListItem
                         {
                             Text = "Invalid",
                             Value = "2",
                         });
                }
                @Html.DropDownListFor(model => model.VerificationResult.VerificationResultStatusType, listItems, "-- Select Status --", new { @class = "form-control input-sm", data_ng_Model = "MedicareOPT.ProfileVerificationDetail.VerificationResult.VerificationResultStatusType" })
            </div>

            <div class="col-lg-6 form-group">
                <label class="control-label small">Source</label>
                @Html.TextBoxFor(model => model.VerificationResult.Source, new { @class = "form-control input-sm", placeholder = "Verification Source", data_ng_Model = "MedicareOPT.ProfileVerificationDetail.VerificationResult.Source" })
            </div>
        </div>
        <div class="col-lg-12">
            <div class="form-group">
                <label class="control-label small">Remarks</label>
                @*<input type="text" class="form-control input-sm" id="exampleInputEmail1" placeholder="Remarks" ng-model="lisence.remarks">*@
                @Html.TextBoxFor(model => model.VerificationResult.Remark, new { @class = "form-control input-sm", placeholder = "Remarks", data_ng_Model = "MedicareOPT.ProfileVerificationDetail.VerificationResult.Remark" })

            </div>
        </div>
        <div class="col-md-12">
            <div class="form-group">
                <label class="control-label small">Verified Document</label>
                <div class="fileinput fileinput-new input-group input-group-sm" data-provides="fileinput">
                    @Html.HiddenFor(model => model.VerificationResult.VerificationDocumentPath, new { data_ng_Model = "MedicareOPT.ProfileVerificationDetail.VerificationResult.VerificationDocumentPath", ng_value = "MedicareOPT.ProfileVerificationDetail.VerificationResult.VerificationDocumentPath" })
                    <div class="form-control" data-trigger="fileinput"><i class="glyphicon glyphicon-file fileinput-exists"></i> <span class="fileinput-filename"></span></div>
                    <span class="input-group-addon btn btn-default btn-file">
                        <span class="fileinput-new">Select Supportive Document</span><span class="fileinput-exists">Change</span>@*<input type="file" name="...">*@
                        @Html.TextBoxFor(model => model.VerificationResult.VerificationResultDocument, new { type = "file", data_ng_Model = "MedicareOPT.ProfileVerificationDetail.VerificationResult.VerificationResultDocument", onchange = "setFileNameWith(this); angular.element(this).scope().setFiles(this)" })
                    </span>
                    <a href="#" class="input-group-addon btn btn-default fileinput-exists" data-dismiss="fileinput">Remove</a>
                </div>
            </div>
        </div>
        <a class="btn btn-success pull-right" ng-show="MedicareOPT.AddDiv" ng-click="MedicareOPT.AddDiv=false;MedicareOPT.ViewDiv=true;AddMedicareOPTProfileVerificationDetail()" @*ng-click="AddBoardCertificationProfileVerificationDetail($index)"*@>Add</a>
        <a class="btn btn-primary pull-right" ng-show="MedicareOPT.EditDiv" ng-click="MedicareOPT.EditDiv=false;MedicareOPT.ViewDiv=true;UpdateMedicareOPTProfileVerificationDetail()" @*ng-click="AddBoardCertificationProfileVerificationDetail($index)"*@>Update</a>
        @*<a class="btn btn-warning pull-left">Cancel</a>*@
        <button type="reset" value="reset" class="btn btn-warning pull-left">Clear</button>

    </fieldset>
</form>



