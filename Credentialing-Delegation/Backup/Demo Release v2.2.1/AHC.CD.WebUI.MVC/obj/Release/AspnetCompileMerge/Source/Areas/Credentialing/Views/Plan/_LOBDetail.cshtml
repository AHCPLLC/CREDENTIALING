
<div class="col-lg-12  form-style">
    <form id="LOBEdit{{$index}}">
        <div>
            <label class="col-lg-4 control-label small"> Select LOB :</label>
            <select class="form-control input-sm" ng-model="tempObject1.LOBID" data-val="true" data-val-required="Please select LOB.">
                <option selected disabled hidden value="">--select--</option>
                <option ng-repeat="lob in Lobs" value="{{lob.LOBID }}">{{lob.LOBName }}</option>
            </select>
        </div>
        <div class="clearfix"></div>
        <br />
        @Html.Partial("_Subplan")

        @Html.Partial("~/Areas/Credentialing/Views/Plan/_LobContactDetails.cshtml")

        @Html.Partial("~/Areas/Credentialing/Views/Plan/_LobAddressDetails.cshtml")

        <br />
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 form-group">
                <button type="button" class="btn btn-sm btn-success pull-right" ng-click="SaveLOB('LOBEdit'+$index,tempObject1);">Save</button>
                <button type="button" class="btn btn-sm btn-warning" ng-click="CancelLOBEdit()">Cancel</button>
            </div>
        </div>
    </form>
</div>