@model AHC.CD.WebUI.MVC.Areas.Profile.Models.Demographic.OtherLegalNameViewModel

<form enctype="multipart/form-data">
    <div class="col-lg-12 zero-padding-left-right-div">
        <span ng-if="tempObject.OtherLegalNameID">
            @Html.HiddenFor(model => model.OtherLegalNameID, new { ng_value = "tempObject.OtherLegalNameID" })
        </span>
        <input type="hidden" name="StatusType" value="1" />
        <div class="col-lg-3 form-group">
            @Html.LabelFor(model => model.OtherFirstName, htmlAttributes: new { @class = "control-label small" })
            @Html.EditorFor(model => model.OtherFirstName, new { htmlAttributes = new { @class = "form-control input-sm", data_ng_model = "tempObject.OtherFirstName", placeholder = "first name" } })
            @Html.ValidationMessageFor(model => model.OtherFirstName, "", new { @class = "text-danger" })
        </div>
        <div class="col-lg-3 form-group">
            @Html.LabelFor(model => model.OtherMiddleName, htmlAttributes: new { @class = "control-label small" })
            @Html.EditorFor(model => model.OtherMiddleName, new { htmlAttributes = new { @class = "form-control input-sm", data_ng_model = "tempObject.OtherMiddleName", placeholder = "middle name" } })
            @Html.ValidationMessageFor(model => model.OtherMiddleName, "", new { @class = "text-danger" })
        </div>
        <div class="col-lg-3 form-group">
            @Html.LabelFor(model => model.OtherLastName, htmlAttributes: new { @class = "control-label small" })
            @Html.EditorFor(model => model.OtherLastName, new { htmlAttributes = new { @class = "form-control input-sm", data_ng_model = "tempObject.OtherLastName", placeholder = "last name" } })
            @Html.ValidationMessageFor(model => model.OtherLastName, "", new { @class = "text-danger" })
        </div>
        <div class="col-lg-3 form-group">
            @Html.LabelFor(model => model.Suffix, htmlAttributes: new { @class = "control-label small" })
            @Html.EditorFor(model => model.Suffix, new { htmlAttributes = new { @class = "form-control input-sm", data_ng_model = "tempObject.Suffix", placeholder = "suffix" } })
            @Html.ValidationMessageFor(model => model.Suffix, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="col-lg-12 zero-padding-left-right-div">
        <div class="form-group col-md-3">
            @Html.LabelFor(model => model.StartDate, htmlAttributes: new { @class = "control-label small" })
            @Html.TextBoxFor(model => model.StartDate, new { data_val_date = "Please enter date in mm/dd/yyyy format.", data_date_format = "MM/dd/yyyy", data_bs_datepicker = "bs-datepicker", placeholder = "mm/dd/yyyy", @class = "form-control input-sm", data_ng_model = "tempObject.StartDate" })
            @Html.ValidationMessageFor(model => model.StartDate, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-md-3">
            @Html.LabelFor(model => model.EndDate, htmlAttributes: new { @class = "control-label small" })
            @Html.TextBoxFor(model => model.EndDate, new { data_val_date = "Please enter date in mm/dd/yyyy format.", data_date_format = "MM/dd/yyyy", data_bs_datepicker = "bs-datepicker", placeholder = "mm/dd/yyyy", @class = "form-control input-sm", data_ng_model = "tempObject.EndDate" })
            @Html.ValidationMessageFor(model => model.EndDate, "", new { @class = "text-danger" })
        </div>
        <div class="form-group" ng-class="{'col-md-5':tempObject.DocumentPath,'col-md-6':!tempObject.DocumentPath}">
            @Html.LabelFor(model => model.File, htmlAttributes: new { @class = "control-label small" })
            <div class="fileinput fileinput-new input-group" data-provides="fileinput">
                <div class="form-control jancyFileWrapTexts" data-trigger="fileinput"><i class="glyphicon glyphicon-file fileinput-exists"></i> <span class="fileinput-filename wraptext"></span></div>
                <span class="input-group-addon btn btn-default btn-sm btn-file">
                    <span class="fileinput-new">Select Document</span><span class="fileinput-exists">Change</span>
                    @Html.TextBoxFor(model => model.File, new { type = "file", onchange = "setFileNameWith(this);" })
                </span>
                <a href="#" class="input-group-addon btn btn-default btn-sm fileinput-exists" data-dismiss="fileinput">Remove</a>
            </div>
            @Html.ValidationMessageFor(model => model.File, "", new { @class = "text-danger" })
        </div>
        <div ng-if="tempObject.DocumentPath" class="col-md-1 form-group">
            <label class="control-label"></label>
            <div style="margin-top: 5px;">
                <input type="hidden" name="DocumentPath" value="{{tempObject.DocumentPath}}" />
                <a href="/Document/View?path={{tempObject.DocumentPath}}" class="pointer" target="_blank" tooltip data-toggle="tooltip" data-placement="top" title="Other Legal Name Document"><i class="fa fa-2x fa-file"></i></a>
            </div>
        </div>
    </div>

    <div class="clearfix"></div>
    <div ng-if="visibilityControl=='_NewOtherLegalName' && activeMessageDiv=='alertOtherLegalNameError'" class="col-md-12 alert alert-{{messageType}}" role="alert">
        <button ng-click="closeAlertMessage()" class="close"><span>&times;</span></button>
        Errors: <br />
        <div ng-repeat="err in messageDesc track by $index">{{err}}</div>
    </div>
    <div ng-if="visibilityControl!='_NewOtherLegalName' && activeMessageDiv=='alertOtherLegalNameError'+$index" class="col-md-12 alert alert-{{messageType}}" role="alert">
        <button ng-click="closeAlertMessage()" class="close"><span>&times;</span></button>
        Errors: <br />
        <div ng-repeat="err in messageDesc track by $index">{{err}}</div>
    </div>
    <div class="clearfix"></div>
    <div ng-if="visibilityControl=='_NewOtherLegalName'" class="col-lg-12 zero-padding-left-right-div">
        <div class="col-md-12 form-group">
            <button type="button" class="btn btn-warning btn-sm" ng-click="operateCancelControl('_NewOtherLegalName')">Cancel</button>
            <button type="submit" class="btn btn-primary btn-sm pull-right" ng-click="saveOtherLegalName('newLegalNameForm')">Add</button>
        </div>
    </div>
    <div ng-if="visibilityControl!='_NewOtherLegalName'" class="col-lg-12 zero-padding-left-right-div">
        <div class="col-md-12 form-group">
            <button type="button" class="btn btn-warning btn-sm" ng-click="operateCancelControl($index+'_EditOtherLegalName')">Cancel</button>
            <button type="submit" class="btn btn-primary btn-sm pull-right" ng-click="updateOtherLegalName('otherLegalNameEditDiv'+$index, $index)">Update</button>
        </div>
    </div>
</form>