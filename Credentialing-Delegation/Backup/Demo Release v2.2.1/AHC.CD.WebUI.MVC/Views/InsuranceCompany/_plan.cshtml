
<script>
    $(document).ready(function () {
        $('.planAddBtn').click(addEditPlan);
        $('.planCancel').click(cancelPlan);
    });

    function addEditPlan() {
        $("#planList").slideUp();
        $(".addEditPlan").slideDown();
    }

    function cancelPlan() {
        $("#planList").slideDown();
        $(".addEditPlan").slideUp();
    }
</script>

