
<script src="~/Scripts/Lib/Jquery/jquery-1.11.0.js"></script>
<script src="~/Scripts/Custom/Profile/Util.js"></script>
<link href="~/Content/SharedCss/jasny-bootstrap.css" rel="stylesheet" />
<script src="~/Scripts/Lib/Bootstrap/jasny-bootstrap.js"></script>

<div id="page-wrapper">
    <div class="container-fluid">

        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <ol class="breadcrumb">
                    <li>
                        <i class="fa fa-dashboard"></i>
                        <a href="~/Dashboard/Index">Dashboard</a>
                    </li>
                    <li class="active">
                        <a href="~/InsuranceCompany/Index"><i class="fa fa-list"></i> List of Companies</a>
                    </li>
                    <li class="active">
                        <i class="fa fa-list"></i> Add/Edit Company
                    </li>
                </ol>
            </div>
        </div>
        <!-- /.row -->
        <!-- Add Provider content form div -->
        <div class="row">

            <div class="panel-group" id="accordion1" role="tablist" aria-multiselectable="true" ng-controller="profileAppCtrl">
                <div class="panel panel-default">

                    <div class="panel-heading text-right">
                        <div class="row col-lg-6 text-left">
                            Insurance Company - Ultimate
                        </div>
                        <button class="btn btn-xs btn-primary" data-toggle="tooltip" data-placement="left" title="Collapse All" onclick="collapseAll(this)"><i class="fa fa-minus-square-o"></i></button>
                        <button class="btn btn-xs btn-primary" data-toggle="tooltip" data-placement="left" title="Expand All" onclick="expandAll(this)"><i class="fa fa-plus-square-o"></i></button>
                    </div>
                </div>

                <div class="panel panel-default">
                    <div class="panel-heading" role="tab" id="stateLicenseInfo">
                        <a class="collapsed" data-toggle="collapse" data-parent="#accordion1" href="#perstateLicenseInfo" aria-expanded="false" aria-controls="perstateLicenseInfo">
                            Genearal Information
                            <span class="glyphicon glyphicon-plus pull-right"></span>
                        </a>
                    </div>

                    <div id="perstateLicenseInfo" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="stateLicenseInfo">
                        @Html.Partial("_companyDetail")
                    </div>
                </div>

                <!-- Contact Person -->
                <div class="panel panel-default">
                    <div class="panel-heading" role="tab" id="boardCertificateInfo">
                        <a class="collapsed" data-toggle="collapse" data-parent="#accordion1" href="#perboardCertificateInfo" aria-expanded="false" aria-controls="perboardCertificateInfo">
                            Contact Person
                            <span class="glyphicon glyphicon-plus pull-right"></span>
                        </a>
                    </div>

                    <div id="perboardCertificateInfo" class="panel-collapse collapse" role="tabpanel" aria-labelledby="stateLicenseInfo">
                        @Html.Partial("_contactPerson")
                    </div>
                </div>

                <!-- Plan Type -->
                <div class="panel panel-default">
                    <div class="panel-heading" role="tab" id="deaInfo">
                        <a class="collapsed" data-toggle="collapse" data-parent="#accordion1" href="#perdea" aria-expanded="false" aria-controls="perdea">
                            Plan Type
                            <span class="glyphicon glyphicon-plus pull-right"></span>
                        </a>
                    </div>

                    <div id="perdea" class="panel-collapse collapse" role="tabpanel" aria-labelledby="stateLicenseInfo">
                        @Html.Partial("_planType")
                    </div>
                </div>

                <!-- Plans -->
                <div class="panel panel-default">
                    <div class="panel-heading" role="tab" id="cdsInfo">
                        <a class="collapsed" data-toggle="collapse" data-parent="#accordion1" href="#percds" aria-expanded="false" aria-controls="percds">
                            Plan
                            <span class="glyphicon glyphicon-plus pull-right"></span>
                        </a>
                    </div>

                    <div id="percds" class="panel-collapse collapse" role="tabpanel" aria-labelledby="stateLicenseInfo">
                        @Html.Partial("_plan")
                    </div>
                </div>
            </div>
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->
