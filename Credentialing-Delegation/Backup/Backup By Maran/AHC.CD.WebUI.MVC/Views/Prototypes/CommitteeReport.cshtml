                    <div class="col-lg-12 biscuits_3D">
                        <div class="col-lg-12">
                            <div class="row panel-body">
                                Signature : <select class="input-sm" style="color:black">
                                    <option>Digital Signature</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-12 panel" style="background-color:white;">
                            <div class="row panel-body">
                                <input class="form-group input-sm" type="text" style="height:50px;width:100%" />
                            </div>
                        </div>
                        <div class="col-lg-12 panel" style="background-color: rgba(51, 122, 183, 0.85); color: black">
                            <div class="row panel-body">
                                <label>You sure want to Accept/Reject</label><br />
                                <button class="btn btn-primary pull-left" ng-click="CancelApproveRejectProvider('Yes')">Yes</button>
                                <button class="btn btn-danger pull-right" ng-click="CancelApproveRejectProvider('No')">No</button>
                            </div>
                        </div>
                    </div>
                    <button class="btn btn-warning pull-left" ng-click="CancelApproveRejectProvider()">Cancel</button>
                </div>

            </fieldset>
        </div>
       
        <div class="modal fade" id="inactiveWarningModal3" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <form id="removeTask">
                        <div class="modal-header" style="background-color: rgba(0, 128, 0, 0.53);">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <h4 class="modal-title" id="myModalLabel">Success</h4>
                        </div>
                        <div class="col-lg-12 text-center" ng-show="isRemoved">
                            <div style="margin-top:2%;">
                                <img src="~/Content/Images/ajax-loader.gif" style="width:50px;" /> Please Wait..
                            </div>
                        </div>
                        <div class="modal-body" ng-show="!isRemoved">
                            Successfully assigned                           
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
