<div id="page-wrapper" ng-app="prototypeApp" ng-cloak>
    <div ng-controller="PrototypesCtrl as pc">
        <div class="zero-padding-left-right-div form-style" style="padding-left: 0px;">
            <fieldset>
                <legend>Committee Summary</legend>
                <div class="col-lg-3">
                    <label>Select Plan: </label>
                    <select class="input-sm">
                        <option>All</option>
                        <option>Aetna</option>
                        <option>Humana</option>
                        <option>Ultimate</option>
                    </select>
                </div>

                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 zero-padding-left-right-div form-style" style="border-top: 1px solid #eee; padding-top: 10px;">
                    <div ng-init="RefreshProfileData()">
                        <table class='paginated table table-striped table-bordered customtbodyStyle medium wrap-words' st-pipe="pc.callServer" st-table="pc.displayed" st-safe-src="PrototypeData">
                            <thead>
                                <tr class="theadColor">
                                    <th st-sort="Name" st-ratio="10">
                                        Provider Name
                                    </th>
                                    <th st-sort="Specialty" st-ratio="8">
                                        Specialty
                                    </th>
                                    <th st-sort="Plan" st-ratio="11">
                                        Plan
                                    </th>
                                    <th st-sort-default="false" st-sort="CredentialintgInitiatedDate" st-ratio="10">
                                        Credentialintg Initiated Date
                                    </th>
                                    <th st-sort="AppointmentDate" st-ratio="11">
                                        Appointment Date
                                    </th>
                                    <th st-sort="RecommendedLevel" st-ratio="10">
                                        Recommended Level
                                    </th>
                                    <th st-sort="Status" st-ratio="10">
                                        Status
                                    </th>
                                    <th st-ratio="4">Action</th>
                                </tr>
                                <tr>
                                    <td st-ratio="10"><input st-search="Name" type="text" placeholder="Filter Provider Name" class="form-control input-sm"></td>
                                    <td st-ratio="8"><input st-search="Specialty" type="text" placeholder="Filter Specialty" class="form-control input-sm" /></td>
                                    <td st-ratio="11"><input st-search="Plan" type="text" placeholder="Filter Plan" class="form-control input-sm" /></td>
                                    <td st-ratio="10"><input st-search="CredentialintgInitiatedDate" type="text" placeholder="Filter Credentialintg Initiated Date" class="form-control input-sm" /></td>
                                    <td st-ratio="11"><input st-search="AppointmentDate" type="text" placeholder="Filter Appointment Date" class="form-control input-sm" /></td>
                                    <td st-ratio="10"><input st-search="RecommendedLevel" type="text" placeholder="Filter Recommended Level" class="form-control input-sm" /></td>
                                    <td st-ratio="4"><input st-search="Status" type="text" placeholder="Filter Status" class="form-control input-sm" /></td>
                                    <td st-ratio="4"></td>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="c in pc.displayed">
                                    <td>{{c.Name}}</td>
                                    <td>{{c.Specialty}}</td>
                                    <td>{{c.Plan}}</td>
                                    <td>{{c.CredentialingIntiatedDate}}</td>
                                    <td>{{c.AppointmentDate}}</td>
                                    <td>{{c.RecommendedLevel}}</td>
                                    <td>{{c.Status}}</td>
                                    <td>
                                        @*<a class="btn btn-xs btn-warning" href='@System.Configuration.ConfigurationManager.AppSettings["AppRoot"]/Profile/MasterProfile/ProviderProfile/1' tooltip data-toggle="tooltip" data-placement="top" title="Redirect"><i class="glyphicon glyphicon-forward"></i></a>*@
                                        <a ng-click="ApproveRejectProvider()">
                                            <i class="fa fa-check-square" style="color:green"></i>
                                        </a>
                                        <a ng-click="ApproveRejectProvider()">
                                            <i class="fa fa-times-circle" style="color:red"></i>
                                        </a>
                                    </td>
                                </tr>
                            </tbody>
                            <tfoot style="cursor:pointer">
                                <tr>
                                    <td class=" text-center" st-pagination="" st-items-by-page="10" colspan="9"></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>

                @*<div ng-show="IsProviderApprovedRejected" class="col-lg-12 col-md-12 col-sm-12 col-xs-12 zero-padding-left-right-div form-style panel" style="border-top: 1px solid #eee; padding-top: 10px;background-color:#cfc3c3">
                    <div class="col-lg-12 biscuits_3D">
                        <div class="col-lg-4 panel" style="background-color: rgba(51, 122, 183, 0.85); color: black">
                            <div class="row panel-body">
