@using Microsoft.AspNet.Identity;
@using Microsoft.AspNet.Identity.Owin;


@model AHC.CD.WebUI.MVC.Models.MasterDataNewViewModel.DecredemtialingReasonViewModel

@{
    ViewBag.Title = "DecredemtialingReason";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section AddToHead{
    <link href="~/Content/SharedCss/app.css" rel="stylesheet" />
    <script src="~/Scripts/Lib/Jquery/jquery-1.11.0.js"></script>
    <script src="~/Scripts/Lib/Angular/angular.min.js"></script>
    <script src="~/Scripts/Lib/AHC_Lib/UtilDirectivesLib.js"></script>
    <script src="~/Scripts/Lib/Angular-DatePicker/ui-bootstrap-tpls-0.12.0.min.js"></script>
    <script src="~/Scripts/Custom/MasterDataNew/DecredReason.js"></script>
}

<div id="page-wrapper">
    <div class="container-fluid wrap-words">
        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <ol class="breadcrumb">
                    <li>
                        <a href="@System.Configuration.ConfigurationManager.AppSettings["AppRoot"]/MasterDataNew"><i class="fa fa-database"></i> Master Data</a>
                    </li>
                    <li>
                        <i class="fa fa-list"></i> Decredentialing Reason
                    </li>
                </ol>
            </div>
        </div>
        <!-- /.row -->
        <!-- Add Provider content form div -->
        <div class="row" ng-app="MasterDataDecredentialingReasons" ng-controller="DecredentialingReasonscontroller" ng-cloak>
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Decredentialing Reason Management
                        <span class="pull-right">
                            @if (HttpContext.Current.User.Identity.IsAuthenticated)
                            {
                                var roles = Context.GetOwinContext().GetUserManager<AHC.CD.WebUI.MVC.ApplicationUserManager>().GetRoles(User.Identity.GetUserId());
                                if (roles.Contains("CRA"))
                                {
                                    <button ng-disabled="disableAdd" ng-click="addDecredentialingReason(Name)" class="btn btn-xs btn-primary"><i class="fa fa-plus"></i> Add</button>
                                }
                            }
                        </span>
                    </div>
                    <div class="panel-body">
                        <div ng-show="activeMessageDiv=='decredreason'" class="alert alert-success" role="alert">
                            {{messageDesc}}
                        </div>
                        <div class="clearfix"></div><br />
                        <div ng-show="activeMessageDiv=='decredreasonerror'" class="alert alert-danger" role="alert">
                            {{messageDesc}}
                        </div>
                        <table class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Decredentialing Reason</th>
                                    @*<th>Status</th>*@
                                    <th>Last Modified Date</th>
                                    <th>Action</th>
                                </tr>
                                <tr ng-show="DecredentialingReasons.length>0">
                                    <td><input type="text" placeholder="Filter Reason" class="form-control input-sm" ng-model="search.Reason" ng-change="filterData()" /></td>
                                    @*<td><input type="text" placeholder="Filter Status" class="form-control input-sm" ng-model="search.Status" ng-change="filterData()" /></td>*@
                                    <td><input type="text" placeholder="Filter LastModifiedDate" class="form-control input-sm" ng-model="search.LastModifiedDate" ng-change="filterData()" /></td>
                                    <td></td>
                                </tr>
                            </thead>
                            <tbody ng-show="DecredentialingReasons.length>0">
                                <tr ng-repeat="Reason in DecredentialingReasonsData=(DecredentialingReasons | filter:{Reason:search.Reason,LastModifiedDate:search.LastModifiedDate}) track by $index" ng-include="getTemplate(Reason)" ng-show="IsValidIndex($index)"></tr>
                            </tbody>
                            <tbody ng-show="DecredentialingReasonsData.length==0 || DecredentialingReasons.length==0 ">
                                <tr class="text-center">
                                    <td colspan="7"><b>No Data Available</b></td>
                                </tr>
                            </tbody>
                        </table>

                        <script type="text/ng-template" id="displayDecredentialingReasons">
                            <td>{{Reason.Reason}}</td>
                            @*<td>{{Reason.Status}}</td>*@
                            <td>{{Reason.LastModifiedDate | date : 'MM-dd-yyyy'}}</td>
                            <td>
                                @if (HttpContext.Current.User.Identity.IsAuthenticated)
{
    var roles = Context.GetOwinContext().GetUserManager<AHC.CD.WebUI.MVC.ApplicationUserManager>().GetRoles(User.Identity.GetUserId());
    if (roles.Contains("CRA"))
    {
        <a class="btn btn-primary btn-xs" ng-click="editDecredentialingReasons(Reason,$index)" tooltip title="Edit"><i class="fa fa-edit"></i></a>
       <a class="btn btn-danger btn-xs" ng-click="Remove(Reason.DecredentialingReasonId)" tooltip title="Remove"><i class="fa fa-remove"></i></a>
    }
                                }


                            </td>
                        </script>
                        <script type="text/ng-template" id="editDecredentialingReason">
                            <td>
                                <input type="text" class="form-group form-control input-sm inputMarginBottoomZero" ng-model="tempDecredentialingReasons.Reason" />
                                <span class="text-danger" name="Reason" ng-if="error && !tempDecredentialingReasons.Reason">{{error}}</span>
                                <span class="text-danger" name="Reason" ng-if="existErr && tempDecredentialingReasons.Reason">{{existErr}}</span>
                            </td>
                            @*<td>{{tempDecredentialingReasons.Status}}</td>*@
                            <td>{{tempDecredentialingReasons.LastModifiedDate | date :'MM-dd-yyyy' }}</td>
                            <td>
                                <button ng-if="!tempDecredentialingReasons.DecredentialingReasonId" ng-click="saveDecredentialingReason($index)" class="btn btn-xs btn-primary">Save</button>
                                <button ng-if="tempDecredentialingReasons.DecredentialingReasonId" ng-click="updateDecredentialingReason($index)" class="btn btn-xs btn-primary">Update</button>
                                <button ng-if="tempDecredentialingReasons.DecredentialingReasonId" ng-click="reset()" class="btn btn-xs btn-warning">Cancel</button>
                                <button ng-if="!tempDecredentialingReasons.DecredentialingReasonId" ng-click="cancelAdd()" class="btn btn-xs btn-warning">Cancel</button>
                            </td>
                        </script>
                        <div class="clearfix"></div>
                        <div ng-if="CurrentPage.length > 0" ccolicensedetailstable></div>
                        <pagination ng-show="CurrentPage.length > 0" total-items="bigTotalItems" ng-model="bigCurrentPage" max-size="maxSize" class="pagination-sm" ng-change="pageChanged(bigCurrentPage)" boundary-links="true" rotate="false" num-pages="numPages" style="margin:0;"></pagination>

                    </div>
                </div>
            </div>
            <div class="modal fade" id="reasonWarningModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <form id="removeTask">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                <h4 class="modal-title" id="myModalLabel">Warning!!!!</h4>
                            </div>
                            <div class="modal-body">
                                Do you want to remove the reason
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                <button type="button" class="btn btn-primary" ng-click="removeDecredReason()" data-dismiss="modal">Continue</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->

   
</div>
