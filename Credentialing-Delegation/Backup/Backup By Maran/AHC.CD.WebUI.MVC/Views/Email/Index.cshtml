                            {
                                <div id="inbox">
                                    @Html.Partial("~/Views/Email/Inbox.cshtml")
                                </div>
                            }
                            @if (!roles.Contains("PRO"))
                            {
                                <div id="sent" ng-show="sentLoad">
                                    @Html.Partial("~/Views/Email/SentMail.cshtml")
                                </div>
                            }
                            @if (!roles.Contains("PRO"))
                            {
                                <div id="outbox" ng-show="outboxLoad">
                                    @Html.Partial("~/Views/Email/Outbox.cshtml")
                                </div>
                            }

                            <div id="all" class="tab-pane fade panel-body">
                                <table class="table table-bordered table-condensed customtbodyStyle table-striped">
                                    <thead>
                                        <tr>
                                            <td>No Data Available</td>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
