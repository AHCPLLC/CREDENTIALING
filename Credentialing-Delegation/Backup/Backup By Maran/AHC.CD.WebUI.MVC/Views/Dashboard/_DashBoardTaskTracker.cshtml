<fieldset ng-controller="DashBoardTaskTrackerController">
    <legend>Daily Tasks</legend>
    <div ng-if="false" style="font-weight:bolder">No Tasks Assigned.</div>
    <div>
        <table st-table="DisplayData" ng-show="true" class='table table-striped table-responsive customtbodyStyle medium wrap-words'>
            <thead>
                <tr>
                    <th st-sort="ProviderName">
                        PROVIDER NAME
                    </th>
                    <th st-sort="Subject">
                        SUBJECT
                    </th>
                    <th st-sort="SubSectionName">
                        SUB SECTION NAME
                    </th>
                    <th st-sort="NextFollowUpDate">
                        NEXT FOLLOW UP DATE
                    </th>
                    <th st-sort="daysleft">
                        DAYS LEFT
                    </th>
                    <th st-sort="TaskStatus">
                        TASK STATUS
                    </th>
                    <th st-sort="InsuranceCompanyName">
                        INSURANCE COMPANY
                    </th>
                    <th>
                        MODE OF FOLLOW UP
                    </th>
                    <th>ACTION</th>
                </tr>
                <tr>
                    <td><input st-search="ProviderName" type="text" placeholder="Provider Name" class="form-control input-sm"></td>
                    <td><input st-search="Subject" type="text" placeholder="Subject" class="form-control input-sm" /></td>
                    <td><input st-search="SubSectionName" type="text" placeholder="Sub Section Name" class="form-control input-sm" /></td>
                    <td><input st-search="NextFollowUpDate" type="text" placeholder="Next FollowUp Date" class="form-control input-sm" /></td>
                    <td><input st-search="daysleft" type="text" placeholder="Days Left" class="form-control input-sm" /></td>
                    <td><input st-search="Status" type="text" placeholder="Assigned To" class="form-control input-sm" /></td>
                    <td><input st-search=" InsuranceCompanyName.CompanyName" type="text" placeholder="Insurance Company" class="form-control input-sm" /></td>
                    <td><input st-search="ModeOfFollowUp" type="text" placeholder=Follow up mode" class="form-control input-sm" /></td>
                    <td></td>
                </tr>
            </thead>
            @*{{clock | date:'HH:mm:ss'}}*@
            <tbody>
                @*{{mc.displayed.length}}
                    {{mc.displayed.ProviderName}}*@
                <tr ng-repeat="row in DisplayData " ng-class="{danger:(c.daysleft < 0) && c.CompleteStatus!='Closed'}">
                    <td>{{row.ProviderName}}</td>
                    <td>{{row.Subject}}</td>
                    <td>{{row.SubSectionName}}</td>
                    <td>{{row.NextFollowUpDate | date:'MM/dd/yyyy'}}</td>
                    <td>{{row.daysleft}}</td>
                    <td>{{row.Status}}</td>
                    <td>{{row.InsuranceCompanyName.CompanyName || 'Not Available'}}</td>
                    @*<td>{{row.ModeOfFollowUp.Name}}</td>*@
                    <td><p ng-repeat="m in row.ModeOfFollowUp"><span class="label label-info">{{m.Name}}</span></p></td>
                    <td>

                        <a href="~/TaskTracker/Index" class="btn btn-xs btn-primary" ng-click="showDetailViewforTab1(c)" tooltip data-toggle="tooltip" data-placement="top" title="View"><i class="fa fa-share"></i></a>
                    </td>
                </tr>

            </tbody>
            <tfoot style="cursor:pointer">
                <tr>
                    <td class="text-center" st-pagination="" st-items-by-page="10" colspan="9"></td>
                </tr>
            </tfoot>
        </table>
    </div>
</fieldset>