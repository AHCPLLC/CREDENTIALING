@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section AddToHead{
    <script src="~/Scripts/Lib/Jquery/jquery-1.11.0.js"></script>
    <script src="~/Scripts/Lib/Angular/angular.min.js"></script>
    <script src="~/Areas/Credentialing/Scripts/PSVCheckList/PSVCheckListMappingController.js"></script>
}
<div id="page-wrapper" ng-app="psvCheckList" ng-controller="viewPSVController">
    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <ol class="breadcrumb">
                    <li>
                        <i class="fa fa-check-square-o"></i> PSV Check List
                    </li>
                </ol>
            </div>
        </div>

        <div class="row" ng-cloak>
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 form-style zero-padding-left-right-div">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        PSV Check List
                        <span class="pull-right">
                            <a ng-click="CancelMapping()" class="btn btn-xs btn-warning">Cancel</a>
                            &nbsp;&nbsp;<a ng-click="SaveMapping()" ng-disabled="!selectedChecklist || !selectedPlan || !selectedPlanType || !selectedLOB" class="btn btn-xs btn-primary">Save</a>
                        </span>
                    </div>
                    <div class="panel-body">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 form-group">
                            <label>PSV Checklist Name</label>
                            <select ng-model="selectedChecklist" class="form-control input-sm">
                                <option value="">-- select --</option>
                                <option ng-repeat="ci in ChecklistItems" value="{{ci}}">{{ci}}</option>
                            </select>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 form-group">
                            <label>Plan Name</label>
                            <select ng-model="selectedPlan" class="form-control input-sm">
                                <option value="">-- select --</option>
                                <option ng-repeat="p in Plans" value="{{p}}">{{p}}</option>
                            </select>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 form-group">
                            <label>Type Of Plan</label>
                            <select ng-model="selectedPlanType" class="form-control input-sm">
                                <option value="">-- select --</option>
                                <option ng-repeat="pt in PanTypes" value="{{pt}}">{{pt}}</option>
                            </select>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 form-group">
                            <label>Line Of Business</label>
                            <select ng-model="selectedLOB" class="form-control input-sm">
                                <option value="">-- select --</option>
                                <option ng-repeat="l in LOB" value="{{l}}">{{l}}</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="panel panel-default">
                    @*<div class="panel-heading">
                            PSV Check List
                            <span class="pull-right">
                                <a ng-click="AddNewPSVData()" class="btn btn-xs btn-primary"><i class="fa fa-plus"></i> Add New</a>
                            </span>
                        </div>*@
                    <div class="panel-body">
                        <!-- success message ----->
                        <div ng-if="DataUpdated" class="alert alert-success alert-dismissible fade in" role="alert">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>
                            <strong>Success!</strong> {{PSVMessage}}
                        </div>

                        <table class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th class="col-lg-3 col-md-3 col-sm-3 col-xs-3">Plan Name</th>
                                    <th class="col-lg-3 col-md-3 col-sm-3 col-xs-3">Type Of Plan</th>
                                    <th class="col-lg-4 col-md-4 col-sm-4 col-xs-4">PSV Checklist Name</th>
                                    <th class="col-lg-2 col-md-2 col-sm-2 col-xs-2">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="m in MappingData track by $index">
                                    <td>{{m.PlanName}}</td>
                                    <td>{{m.PlanType}}</td>
                                    <td>{{m.PSVCheckListName}}</td>
                                    <td>
                                        <a ng-click="RemovePSV($index, m)" class="btn btn-xs btn-danger" tooltip data-toggle="tooltip" data-placement="right" title="Remove"><i class="fa fa-close"></i></a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                    </div>
                </div>

                <!-- Modal -->
                <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                <h4 class="modal-title" id="myModalLabel">Confirmation !!!!</h4>
                            </div>
                            <div class="modal-body">
                                <span>
                                    Are You sure! you want to remove {{selectedPSV.PSVCheckListName}}.
                                </span>
                            </div>
                            <div class="modal-footer">
                                <button ng-click="CancelRemove(selectedIndex)" type="button" class="btn btn-sm btn-default" data-dismiss="modal">No</button>
                                <button ng-click="Confirmation()" type="button" class="btn btn-sm btn-primary">Yes</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /#page-wrapper -->
