@model AHC.CD.WebUI.MVC.Areas.Plans.Models.PlanLOBContactDetailsViewModel
<fieldset>
    <legend>
        Contact Details
    </legend>
    <div ng-repeat="lobcon in tempObject1.LOBContactDetails track by $index" class="col-lg-12 zero-padding-right-right-div">
        <span ng-if="lobcon.LOBContactDetailID">
            @Html.HiddenFor(model => model.LOBContactDetailID, new { @data_ng_value = "lobcon.LOBContactDetailID" })
        </span>
        <div ng-if="CurrentPageMasterViewData.Type=='Add'" class="col-lg-12">
            <input type="checkbox" ng-init="lobcon.IsSameContatcPerson=true" ng-model="lobcon.IsSameContatcPerson" ng-change="GetContactPerson(lobcon.IsSameContatcPerson)" /><label class="control-label">&nbsp;Same As Plan Contact Detail</label>
        </div>
        <div class="col-lg-3 form-group">
            @Html.LabelFor(model => model.ContactPersonName, new { @class = "control-label small" })
            @Html.TextBoxFor(model => model.ContactPersonName, new { @class = "form-control input-sm", data_ng_model = "lobcon.ContactPersonName", placeholder = "contact person name" })
            @Html.ValidationMessageFor(model => model.ContactPersonName, "", new { @class = "text-danger" })
        </div>
        @Html.Partial("_AddLOBContactDetailsInformation")
    </div>
</fieldset>
