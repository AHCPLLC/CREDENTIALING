@model AHC.CD.WebUI.MVC.Areas.Profile.Models.ProfessionalReference.ProfessionalReferenceViewModel
@using AHC.CD.WebUI.MVC.Areas.Profile.Attributes;

<form class="professionalReference">
    <div class="col-lg-12 zero-padding-left-right-div">
        <fieldset class="wrap-words">
            <legend>
                Professional Reference
            </legend>
            <div class="col-lg-12">
                <div class="col-lg-3 form-group">
                    @Html.LabelFor(p => p.ProviderTypeID, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i class="data-label">{{pr.ProviderType.Title || 'Not Available'}}</i>
                    </div>
                </div>
                <div class="col-lg-3 form-group">
                    @Html.LabelFor(p => p.FirstName, htmlAttributes: new { @class = "control-label small" })

                    <div>
                        <i class="data-label">{{pr.FirstName || 'Not Available'}}</i>
                    </div>
                </div>
                <div class="col-lg-3 form-group">
                    @Html.LabelFor(p => p.MiddleName, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i class="data-label">{{pr.MiddleName}}</i>
                        <i class="data-label" ng-show="!pr.MiddleName">Not Available</i>
                    </div>
                </div>
                <div class="col-lg-3 form-group">
                    @Html.LabelFor(p => p.LastName, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i class="data-label">{{pr.LastName || 'Not Available'}}</i>
                    </div>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="col-md-3 form-group">
                    @Html.LabelFor(p => p.Street, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i class="data-label">{{pr.Street || 'Not Available'}}</i>
                    </div>
                </div>
                <div class=" col-md-3 form-group">
                    @Html.LabelFor(p => p.Building, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i class="data-label">{{pr.Building || 'Not Available'}}</i>
                    </div>
                </div>
                <div class="col-md-3 form-group">
                    @Html.LabelFor(p => p.City, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i class="data-label">{{pr.City || 'Not Available'}}</i>
                    </div>
                </div>
                <div class="col-md-3 form-group">
                    @Html.LabelFor(p => p.State, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i class="data-label">{{pr.State || 'Not Available'}}</i>
                    </div>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="col-md-3 form-group">
                    @Html.LabelFor(p => p.Zipcode, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i class="data-label">{{pr.Zipcode || 'Not Available'}}</i>
                    </div>
                </div>
                <div class="col-md-3 form-group">
                    @Html.LabelFor(p => p.Country, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i class="data-label">{{pr.Country || 'Not Available'}}</i>
                    </div>
                </div>
                <div class="col-md-3 form-group">
                    @Html.LabelFor(p => p.County, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i class="data-label">{{pr.County}}</i>
                        <i class="data-label" ng-show="!pr.County">Not Available</i>
                    </div>
                </div>
                <div class="col-md-3  form-group">
                    @Html.LabelFor(p => p.Telephone, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i class="data-label">{{pr.PhoneNumber || 'Not Available'}}</i>
                    </div>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="col-md-3  form-group">
                    @Html.LabelFor(p => p.Fax, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i class="data-label">{{pr.FaxNumber}}</i>
                        <i class="data-label" ng-show="!pr.FaxNumber">Not Available</i>
                    </div>
                </div>
                <div class="col-md-3  form-group">
                    @Html.LabelFor(p => p.Email, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i class="data-label">{{pr.Email}}</i>
                        <i class="data-label" ng-show="!pr.Email">Not Available</i>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group col-md-3">
                    @Html.LabelFor(p => p.Degree, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i class="data-label">{{pr.Degree}}</i>
                        <i class="data-label" ng-show="!pr.Degree">Not Available</i>
                    </div>
                </div>
                <div class="form-group col-md-3">
                    @Html.LabelFor(p => p.SpecialtyID, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i class="data-label">{{pr.Specialty.Name || 'Not Available'}}</i>
                    </div>
                </div>
                <div class="form-group col-md-3">
                    @Html.LabelFor(p => p.Relationship, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i class="data-label">{{pr.Relationship}}</i>
                        <i class="data-label" ng-show="!pr.Relationship">Not Available</i>
                    </div>
                </div>
                <div class="form-group col-md-3">
                    @Html.LabelFor(p => p.BoardCerifiedOption, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i class="data-label">{{pr.IsBoardCerified || 'Not Available'}}</i>
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
            <div ng-show="activeMessageDiv=='updatedProfessionalReference'+$index" class="alert alert-success" role="alert">
                <button ng-click="closeAlertMessage('')" class="close"><span>&times;</span></button>
                {{messageDesc}}
            </div>
            <div class="clearfix"></div>
            <br />
            <div class="col-md-12 zero-padding-left-right-div">
                <div class="col-md-12 form-group zero-padding-left-right-div">
                    <button class="btn btn-warning btn-sm" ng-click="operateCancelControl('')">Cancel</button>
                    @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Edit, ViewBag.Roles, false))
                    {
                        <button class="btn btn-primary btn-sm pull-right" ng-click="operateEditControl($index+'_editpr',pr)">Edit</button>
                    }
                </div>
            </div>
        </fieldset>
    </div>
</form>
