@model AHC.CD.WebUI.MVC.Areas.Profile.Models.IdentificationAndLicenses.MedicareInformationViewModel
@using AHC.CD.WebUI.MVC.Areas.Profile.Attributes;

<div class="form-style">
    <fieldset>
        <legend>
            Medicare Information
        </legend>
        <div>
            <div class="form-group col-md-12 zero-padding-left-right-div">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.LicenseNumber, new { @class = "  control-label small" })
                    <div>
                        <i class="data-label">{{MedicareInformationHistory.LicenseNumber}}</i>
                    </div>
                </div>
                <div class="col-md-3">
                    @Html.LabelFor(model => model.IssueDate, new { @class = "  control-label small" })
                    <div>
                        <i class="data-label">{{MedicareInformationHistory.IssueDate || 'Not Available' | date: "MM-dd-yyyy"}}</i>
                    </div>
                </div>
                <div class="col-md-3">
                    @Html.LabelFor(model => model.ExpirationDate, new { @class = "  control-label small" })
                    <div>
                        <i class="data-label">{{MedicareInformationHistory.ExpirationDate || 'Not Available' | date: "MM-dd-yyyy"}}</i>
                    </div>
                </div>
                <div class="col-md-3">
                    <label class="control-label small">Supporting Document</label>
                    <div ng-show="MedicareInformationHistory.CertificatePath">
                        @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Preview, ViewBag.Roles, false))
                        {
                            <i class="data-label"><a href="@System.Configuration.ConfigurationManager.AppSettings["AppRoot"]/Document/View?path=@System.Configuration.ConfigurationManager.AppSettings["AppRoot"]{{MedicareInformationHistory.CertificatePath}}" class="pointer" target="_blank" tooltip data-toggle="tooltip" data-placement="top" title="Medicare Certificate"><i class="fa fa-file"></i></a></i>
                        }
                    </div>
                    <div ng-hide="MedicareInformationHistory.CertificatePath">
                        <i class="data-label">Not Available</i>
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-md-12 zero-padding-left-right-div">
                <div class="col-md-12">
                    <button type="button" class="btn btn-warning btn-sm" ng-click="operateCancelControl('')">Cancel</button>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
    </fieldset>
</div>