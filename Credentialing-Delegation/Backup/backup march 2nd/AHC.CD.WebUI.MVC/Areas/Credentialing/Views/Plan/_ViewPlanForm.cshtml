@model AHC.CD.WebUI.MVC.Areas.Credentialing.Models.Plan.PlanViewModel

<form id="PlanForm" class="form-style">
    <fieldset>
        <legend>
            General Details
        </legend>
        <span ng-if="tempViewObject.PlanID">
            @Html.HiddenFor(model => model.PlanID, new { @data_ng_value = "tempViewObject.PlanID" })
        </span>
        <div class="col-lg-10 zero-padding-left-right-div">
            <div class="col-lg-6 form-group">
                    <label class="control-label small" for="SalutationType">Plan Name: *</label>
                <div>
                    <i class="data-label  wrap-words">{{tempViewObject.PlanName}}</i>
                </div>
            </div>
            <div class="col-md-6 form-group">
                <label class="control-label small" for="SalutationType">Plan Code:</label>
                <div>
                    <i class="data-label  wrap-words">{{tempViewObject.PlanCode }}</i>
                </div>
            </div>
            <div class="col-md-6 form-group">
                <label class="control-label small" for="IsDelegated">Delegated?: *</label>
                <div>
                    <i class="data-label" ng-if="tempViewObject.IsDelegated==1">Yes</i>
                    <i class="data-label" ng-if="tempViewObject.IsDelegated==2">No</i>

                </div>
            </div>
            <div class="col-lg-6 form-group">
                <label class="control-label small" for="PlanDescription">Plan Description:</label>
                <div>
                    <i class="data-label  wrap-words">{{tempViewObject.PlanDescription }}</i>
                </div>
            </div>
        </div>
        <div class="col-lg-2 zero-padding-left-right-div pull-right text-center profileIamge">
            <label class="control-label small">Plan Logo </label><br />
            <img ng-if="tempViewObject.PlanLogoPath" ng-src="@System.Configuration.ConfigurationManager.AppSettings["AppRoot"]/Document/View?path=@System.Configuration.ConfigurationManager.AppSettings["AppRoot"]{{tempViewObject.PlanLogoPath}}" alt="Plan Logo" style="width: 83px; height: 83px;" class="img-thumbnail" />
            <img ng-if="!tempViewObject.PlanLogoPath" src="~/Content/Images/no_image.png" alt="Plan Logo" style="width: 83px; height: 83px;" class="img-thumbnail" />           
        </div>
    </fieldset>
    @Html.Partial("_ViewPlanAddressDetails")
    @Html.Partial("_ViewPlanContactDetails")
    
    <br />
    <div class="col-lg-12">
        <a ng-if="planckeckCancel" class="btn btn-warning btn-sm pull-left" ng-click="BackToList()">Cancel</a>
        <a ng-if="!planckeckCancel" class="btn btn-warning btn-sm pull-left" ng-click="BackToListForInactivePlan()">Cancel</a>

        <a class="btn btn-primary btn-sm pull-right" ng-click="ProceedView()">Proceed</a>
    </div>
</form>

