@{
    ViewBag.Title = "Credentialing Action Appointment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section AddToHead{
    <link href="~/Content/Provider/ng-table.css" rel="stylesheet" />
    <script src="~/Scripts/Lib/Jquery/jquery-1.11.0.js"></script>
    <script src="~/Scripts/Lib/Angular/angular.min.js"></script>
    @*<script src="~/Scripts/Lib/Angular/angular-animate.min.js"></script>*@
    <script src="~/Scripts/Lib/Angular/ui-bootstrap-tpls-0.13.0.min.js"></script>
    <script src="~/Areas/Credentialing/Scripts/CnDJS.js"></script>
    <script src="~/Areas/Credentialing/Scripts/CnD/CredentialingAppointmentController.js"></script>
    <script src="~/Scripts/Lib/Angular/ng-table.js"></script>
}

<script>

    var togglemenu = function () {
        $("#sidemenu").toggleClass("menu-in");
        $("#page-wrapper").toggleClass("menuup");
    }
</script>
<style>
    .full button span {
        background-color: limegreen;
        border-radius: 32px;
        color: black;
    }
</style>

<div id="page-wrapper">
    <div id="laodingdiv">
        <div style="margin-left:45%;margin-top:15%">
            <img src="~/Areas/Credentialing/img/loading.GIF" />&nbsp;
            <span>Loading...Please Wait</span>
        </div>
    </div>
    
    <div class="container-fluid" ng-controller="CCOController" ng-init="loadingfunction()" ng-cloak>
        <!-- Page Heading -->
        <div id="showloading" ng-show="LoadingAjax">
            <div style="margin-left:45%;margin-top:15%">
                <img src="~/Areas/Credentialing/img/loading.GIF" />&nbsp;
                <span>Loading...Please Wait</span>
            </div>
        </div>
        <div ng-show="!LoadingAjax">
            <div class="row">
                <div class="col-lg-12">
                    <ol class="breadcrumb">
                        <li>
                            <i class="fa fa-dashboard"></i>  <a href="@System.Configuration.ConfigurationManager.AppSettings["AppRoot"]/Dashboard/Index">Dashboard</a>
                        </li>
                        <li class="active">
                            <i class="fa fa-list-alt"></i> CCO Credentialing Appointment
                        </li>
                    </ol>
                </div>
            </div>

            <div class="row">

                <div class="panel panel-default content-panel">
                    <div class="panel-heading">
                        Credentialing Appointment Action &nbsp;&nbsp;
                        <a style="cursor: pointer; text-decoration: none;" ng-class="{disabled:ForAppointmentDetail.length==0}" ng-click="AddSelectedCredentialing()" class="btn btn-xs btn-success pull-right"><i class="fa fa-plus"></i> Add for Credentialing Appointment</a>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="col-lg-4" style="padding-right:0px;">
                                    <!-- In-line DatePicker-->
                                    <h4>Pick a Date</h4>
                                    <div style="display:inline-block; min-height:290px;">
                                        <datepicker id="calendar" ng-model="dt" min-date="minDate" show-weeks="true" class="well well-sm" custom-class="getDayClass(date, mode)"></datepicker>
                                    </div>
                                    <!-- in line date picker -->
                                </div>
                                <div class="col-lg-8 zero-padding-left-right-div form-style" style="padding-left: 0px;">

                                    <fieldset>
                                        <legend>Schedule Appointment</legend>

                                        <div id="showfilter" class="col-lg-3 col-md-3 col-sm-3 form-group" ng-show="NoCreadentialing.length>0 || DoneCreadentialing.length>0">
                                            <label>Select Plan</label>
                                            <select class="form-control input-sm" ng-model="Plans[$index]" ng-change="getValue(Plans[$index]) ">
                                                <option value="">ALL</option>
                                                <option ng-repeat="c in Plans track by $index">{{c}} </option>
                                            </select>
                                        </div>

                                        <div ng-show="NoCreadentialing.length==0" class="col-lg-12">
                                            <label>No Scheduled Appointment Pending.</label>
                                        </div>

                                        <div ng-show="NoCreadentialing.length>0 && !tableHeaderForNonCredValue" class="col-lg-12">

                                            <label>No Appointment is scheduled.</label>
                                        </div>


                                        <table class="table table-hover ng-table-resizable-columns ng-table-rowselected ng-scope ng-table" ng-show="tableHeaderForNonCredValue">
                                            <thead>
                                                <tr>
                                                    <th class="col-lg-1 col-md-1">Name</th>
                                                    <th class="col-lg-2 col-md-2">Provider Type</th>
                                                    <th class="col-lg-1 col-md-1">Specialty</th>
                                                    <th class="col-lg-2 col-md-2">Credentialing Initiated Date</th>
                                                    <th class="col-lg-1 col-md-2">Recommended Level</th>
                                                    <th class="col-lg-1 col-md-1"></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr ng-repeat="c in NoCreadentialing | FilterByDateForNonCredValue:filterPlan" style="cursor:pointer;" ng-click="ListForAppointment(c);">
                                                    <td>{{c.Name}}</td>
                                                    <td><span ng-repeat="d in c.ProviderTitles track by $index" ng-if="d.Status=='Active'"><span ng-if="$index>0">@*,<br />*@</span>{{d.ProviderType.Title}}  </span></td>
                                                    <td><span ng-repeat="e in c.Specialities track by $index" ng-if="e.Status=='Active'"><span ng-if="$index>0">,<br /></span>{{e.Name}}</span></td>
                                                    <td>{{c.CredentialingDate}}</td>
                                                    <td>{{c.RecommendedLevel}}</td>
                                                    <td>
                                                        <i ng-if="c.statusForApp" class="fa fa-check"></i>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>

                                        @*<div>
                                            <br />
                                        </div>*@

                                    </fieldset>
                                    <div id="message1" class="col-lg-12 zero-padding-left-right-div">
                                        <div ng-show="activeMessageDiv=='AppointmentSuccess'" class="alert alert-success col-lg-12" style="position:inherit" role="alert">
                                            <i class="fa fa-2x fa-arrow-up"></i> {{messageDesc}}
                                        </div>
                                        <div ng-show="activeMessageDiv=='Appointmentfailure'" class="alert alert-danger col-lg-12" style="position: inherit" role="alert">
                                            <i class="fa fa-2x fa-warning"></i> {{messageDesc}}
                                        </div>
                                    </div>
                                    <div>
                                        <br />

                                        <br />
                                    </div>

                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12 zero-padding-left-right-div form-style">
                            <fieldset>
                                <legend>Selected Provider List</legend>
                                <div ng-show="!tableHeader">
                                    <label>No Appointment is scheduled.</label>
                                </div>

                                <table class="table table-bordered table-hover" ng-show="tableHeader">
                                    <thead>
                                        <tr>
                                            <th class="col-lg-1 col-md-1">First Name</th>
                                            <th class="col-lg-1 col-md-1">Last Name</th>
                                            <th class="col-lg-1 col-md-1">Provider Type</th>
                                            <th class="col-lg-1 col-md-1">Specialty</th>
                                            <th class="col-lg-1 col-md-1">Credentialing Initiated Date</th>
                                            <th class="col-lg-1 col-md-2">Recommended Level</th>
                                            <th class="col-lg-1 col-md-1">Appointment Date</th>
                                            <th class="col-lg-1 col-md-1">Status</th>
                                            <th class="col-lg-1 col-md-1">Remove</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="c in DoneCreadentialing | FilterByDate:dt:filterPlan track by $index">
                                            <td>{{c.FirstName}}</td>
                                            <td>{{c.LastName}}</td>
                                            <td><span ng-repeat="d in c.ProviderTitles track by $index" ng-if="d.Status=='Active'"><span ng-if="$index>0">,<br /></span>{{d.ProviderType.Title}}</span></td>
                                            <td><span ng-repeat="e in c.Specialities track by $index" ng-if="e.Status=='Active'"><span ng-if="$index>0">,<br /></span>{{e.Name}}</span></td>
                                            <td>{{c.CredentialingDate}}</td>
                                            <td>{{c.RecommendedLevel}}</td>
                                            <td>{{c.AppointmentDate}}</td>
                                            <td>{{c.Status}}</td>
                                            <td class="text-center"><a ng-click="RemoveAppoinment($parent.$index, c)" class="btn btn-xs btn-danger pointer" data-toggle="tooltip" data-placement="right" title="Remove"><i class="fa fa-remove"></i></a></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </fieldset>
                            <div id="message1" class="col-lg-12 zero-padding-left-right-div">
                                <div ng-show="activeMessageDiv=='AppointmentCancelSuccess'" class="alert alert-success col-lg-12" style="position:absolute" role="alert">
                                    <i class="fa fa-2x fa-arrow-up"></i> {{messageDesc}}
                                </div>
                                <div ng-show="activeMessageDiv=='AppointmentCancelfailure'" class="alert alert-danger col-lg-12" style="position:absolute" role="alert">
                                    <i class="fa fa-2x fa-warning"></i> {{messageDesc}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div>

        </div>
    </div>
</div>
