<style>
    .hide {
    display:none;
    }
</style>

<div class="col-lg-12">
    <table class="table table-bordered table-condensed">
        <thead>
            <tr>
                <th class="col-lg-11">Section Name</th>
                <th class="col-lg-1">Action</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="p in profileViewSection track by $index">
                <td ng-class="{'list-group-item-danger':p.class == 'dangerClass','list-group-item-success':p.class == 'successClass','hide':p.class=='hide'}">{{p.ProfileSectionName}}</td>
                <td ng-class="{'hide':p.class=='hide'}">
                    <a class="btn btn-xs btn-default" tooltip data-toggle="tooltip" data-placement="left" title="View Section" ng-click="Opensection(p)"><i class=" fa fa-eye"></i></a>
                    <a ng-if="p.class == 'dangerClass'" class="btn btn-xs btn-danger" tooltip data-toggle="tooltip" data-placement="top" title="Not Applicable" ng-click="confirmationNotApplicable(p);"><i class="fa fa-minus"></i></a>
                </td>
            </tr>
        </tbody>
    </table>
</div>

<div class="col-lg-12">
    <div ng-show="activeMessageDiv=='successfulNotApplicable'" class="alert alert-success" role="alert">
        <button ng-click="closeAlertMessage('')" class="close"><span>&times;</span></button>
        {{messageDesc}}
    </div>
    <div ng-show="activeMessageDiv=='errorNotApplicable'" class="alert alert-danger" role="alert">
        <button ng-click="closeAlertMessage('')" class="close"><span>&times;</span></button>
        {{messageDesc}}
    </div>
</div>
   
<div class="modal fade" id="notApplicableModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="panel panel-default">
            <div class="panel-heading">
                Confirm - Not Applicable
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            </div>
            <div class="panel-body">
                Are you sure, you want to Remove {{RemoveSection.ProfileSectionName}} section?
            </div>
            <div class="panel-footer">
                <div class="clearfix">
                    <a class="btn btn-primary btn-sm pull-right" ng-click="NotApplicable(RemoveSection); ">Yes</a>
                    <button type="button" class="btn btn-default btn-sm pull-right" style="margin-right: 6px;" data-dismiss="modal">No</button>
                    <div class="pull-right" style="margin: 3px;">
                        <saving></saving>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

