
<div class="row" ng-cloak>
    <div class="col-lg-12">
        <ul class="nav nav-tabs" role="tablist">
            <li class="" ng-class="{active: tabStatus == 0,disabled:!AddProviderFormTab0}">
                <a ng-if="AddProviderFormTab0" ng-click="nextForm(0);saving=true;" class="pointer">General Information<i ng-show="AddProviderFormTab1" @*class="fa fa-check-circle text-success*@"></i></a>
                <a ng-if="!AddProviderFormTab0">General Information <i ng-show="AddProviderFormTab4" @*class="fa fa-check-circle text-success"*@></i></a>
            </li>
            <li class="" ng-class="{active: tabStatus == 1,disabled:!AddProviderFormTab1}">
                <a ng-if="AddProviderFormTab1" ng-click="nextForm(1)" class="pointer">LOB Information <i ng-show="AddProviderFormTab2" @*class="fa fa-check-circle text-success"*@></i></a>
                <a ng-if="!AddProviderFormTab1">LOB Information <i ng-show="AddProviderFormTab4" @*class="fa fa-check-circle text-success"*@></i></a>
            </li>
            <li class="" ng-class="{active: tabStatus == 2,disabled:!AddProviderFormTab2}">
                <a ng-if="AddProviderFormTab2" ng-click="nextForm(2)" class="pointer">Plan Contract</a>
                <a ng-if="!AddProviderFormTab2">Plan Contract<i ng-show="AddProviderFormTab3" @*class="fa fa-check-circle text-success"*@></i></a>
            </li>
        </ul>
        <div id="myTabContent" class="tab-content">
            <div class="tab-pane fade" ng-class="{'active in': tabStatus == 0}">
                <br />
                @Html.Partial("_ViewPlanForm")
            </div>
            <div class="tab-pane fade" ng-class="{'active in': tabStatus == 1}">
                <br />
                @Html.Partial("_View_LOB_BE_Mapping")
            </div>
            <div class="tab-pane fade" ng-class="{'active in': tabStatus == 2}">
                <br />
                @Html.Partial("_ViewPlanContract")
            </div>
        </div>
    </div>
</div>
