
<table class="table table-bordered table-hover table-condensed alignTableStyle" ng-if="selectedProviders">
    <thead>
        <tr>
            <th rowspan="2">Profile Pic</th>
            <th>NPI Number</th>
            <th>Title</th>
            <th>First Name</th>
            <th>Last Name</th>
            @*<th>Plan</th>
                <th>Group</th>*@
            <th>Speciality</th>
            <th rowspan="2">Remove</th>
        </tr>
    </thead>
    <tbody ng-repeat="provider in selectedProviders track by $index">
        <tr>
            <td class="col-lg-1">
                <div ng-show="provider.ProfilePhotoPath == null" class="thumbnail imageStyle">
                    <img ng-src="/Content/Images/no_image.png" class="img-rounded" />
                </div>
                <div ng-hide="provider.ProfilePhotoPath == null" class="thumbnail imageStyle">
                    <img ng-src="@System.Configuration.ConfigurationManager.AppSettings["AppRoot"]/Document/View?path=@System.Configuration.ConfigurationManager.AppSettings["AppRoot"]{{provider.ProfilePhotoPath}}" class="img-rounded">
                </div>
            </td>
            <td>{{provider.NPINumber}}</td>
            <td>{{provider.Title}}</td>
            <td>{{provider.FirstName}}</td>
            <td>{{provider.LastName}}</td>
            @*<td><span ng-repeat="s in p.Plan"><span ng-if="$index > 0">, </span>{{s}}</span></td>
                <td><span ng-repeat="g in p.Groups"><span ng-if="$index > 0">, </span>{{g}}</span></td>*@
            <td>{{provider.Specialty}}</td>
            <td class="col-lg-1">
                <a class="btn btn-xs btn-danger" ng-click="removeProvider($index)" data-toggle="tooltip" data-placement="right" title="Remove" ng-disabled="packageLoading || formLoading"><i class="fa fa-minus"></i></a>
            </td>
        </tr>
    </tbody>
</table>
<table ng-if="!selectedProviders" class="table table-bordered table-condensed">
    <tbody>
        <tr>
            <td>
                No Provider selected...
            </td>
        </tr>
    </tbody>
</table>
