@model AHC.CD.WebUI.MVC.Areas.Profile.Models.EducationHistory.CMECertificationViewModel
@using AHC.CD.WebUI.MVC.Areas.Profile.Attributes;

<div class="clearfix"></div>
<div id="certificate">
    <fieldset class="wrap-words">
        <legend>
            Post Graduate Training/CME Details
        </legend>
        <div class="col-lg-12 zero-padding-left-right-div">
            <div class="col-lg-3 form-group">
                @Html.LabelFor(model => model.QualificationDegree, htmlAttributes: new { @class = "control-label small" })
                <div>
                    <i class="data-label wrap-words">{{cmeHistory.QualificationDegree || 'Not Available'}}</i>
                </div>
            </div>
            <div class="col-lg-3 form-group">
                @Html.LabelFor(model => model.Certification, htmlAttributes: new { @class = "control-label small" })
                <div>
                    <i class="data-label wrap-words">{{cmeHistory.Certification || 'Not Available'}}</i>
                </div>
            </div>
            <div class="col-lg-3 form-group">
                @Html.LabelFor(model => model.SchoolInformation.SchoolName, htmlAttributes: new { @class = "control-label small" })
                <div>
                    <i class="data-label wrap-words">{{cmeHistory.SchoolInformation.SchoolName || 'Not Available'}}</i>
                </div>
            </div>
            <div class="col-lg-3 form-group">
                @Html.LabelFor(model => model.SponsorName, htmlAttributes: new { @class = "control-label small" })
                <div>
                    <i class="data-label wrap-words">{{cmeHistory.SponsorName || 'Not Available'}}</i>
                </div>
            </div>
        </div>
        <div class="col-lg-12 zero-padding-left-right-div">
            <div class="form-group col-md-3">
                @Html.LabelFor(model => model.SchoolInformation.Street, htmlAttributes: new { @class = "control-label small" })
                <div>
                    <i class="data-label wrap-words">{{cmeHistory.SchoolInformation.Street || 'Not Available'}}</i>
                </div>
            </div>
            <div class="form-group col-md-3">
                @Html.LabelFor(model => model.SchoolInformation.Building, htmlAttributes: new { @class = "control-label small" })
                <div>
                    <i ng-if="cmeHistory.SchoolInformation.Building" class="data-label wrap-words">{{cmeHistory.SchoolInformation.Building}}</i>
                    <i ng-if="!cmeHistory.SchoolInformation.Building" class="data-label">Not Available</i>
                </div>
            </div>
            <div class="form-group col-md-3">
                @Html.LabelFor(model => model.SchoolInformation.City, htmlAttributes: new { @class = "control-label small" })
                <div>
                    <i class="data-label wrap-words">{{cmeHistory.SchoolInformation.City || 'Not Available'}}</i>
                </div>
            </div>
            <div class="form-group col-md-3">
                @Html.LabelFor(model => model.SchoolInformation.State, htmlAttributes: new { @class = "control-label small" })
                <div>
                    <i class="data-label wrap-words">{{cmeHistory.SchoolInformation.State || 'Not Available'}}</i>
                </div>
            </div>
        </div>
        <div class="col-lg-12 zero-padding-left-right-div">
            <div class="form-group col-md-3">
                @Html.LabelFor(model => model.SchoolInformation.ZipCode, htmlAttributes: new { @class = "control-label small" })
                <div>
                    <i ng-if="cmeHistory.SchoolInformation.ZipCode" class="data-label">{{cmeHistory.SchoolInformation.ZipCode}}</i>
                    <i ng-if="!cmeHistory.SchoolInformation.ZipCode" class="data-label">Not Available</i>
                </div>
            </div>
            <div class="form-group col-md-3">
                @Html.LabelFor(model => model.SchoolInformation.County, htmlAttributes: new { @class = "control-label small" })
                <div>
                    <i ng-if="cmeHistory.SchoolInformation.County" class="data-label wrap-words">{{cmeHistory.SchoolInformation.County}}</i>
                    <i ng-if="!cmeHistory.SchoolInformation.County" class="data-label">Not Available</i>
                </div>
            </div>
            <div class="form-group col-md-3">
                @Html.LabelFor(model => model.SchoolInformation.Email, htmlAttributes: new { @class = "control-label small" })
                <div>
                    <i ng-if="cmeHistory.SchoolInformation.Email" class="data-label wrap-words">{{cmeHistory.SchoolInformation.Email}}</i>
                    <i ng-if="!cmeHistory.SchoolInformation.Email" class="data-label">Not Available</i>
                </div>
            </div>
            <div class="col-lg-3 form-group">
                @Html.LabelFor(model => model.SchoolInformation.Phone, htmlAttributes: new { @class = "control-label small" })
                <div>
                    <i ng-if="cmeHistory.SchoolInformation.Phone" class="data-label">{{cmeHistory.SchoolInformation.PhoneCountryCode}}-{{cmeHistory.SchoolInformation.Phone}}</i>
                    <i ng-if="!cmeHistory.SchoolInformation.Phone" class="data-label">Not Available</i>
                </div>
            </div>
        </div>
        <div class="col-lg-12 zero-padding-left-right-div">
            <div class="col-lg-3 form-group">
                @Html.LabelFor(model => model.SchoolInformation.Fax, htmlAttributes: new { @class = "control-label small" })
                <div>
                    <i ng-if="cmeHistory.SchoolInformation.Fax" class="data-label">{{cmeHistory.SchoolInformation.FaxCountryCode}}-{{cmeHistory.SchoolInformation.Fax}}</i>
                    <i ng-if="!cmeHistory.SchoolInformation.Fax" class="data-label">Not Available</i>
                </div>
            </div>
            <div class="col-lg-3 form-group">
                @Html.LabelFor(model => model.CreditHours, htmlAttributes: new { @class = "control-label small" })
                <div>
                    <i class="data-label">{{cmeHistory.CreditHours || 'Not Available'}}</i>
                </div>
            </div>
            <div class="col-lg-3 form-group">
                @Html.LabelFor(model => model.StartDate, htmlAttributes: new { @class = "control-label small" })
                <div>
                    <i class="data-label">{{cmeHistory.StartDate || 'Not Available' | date:'MM-dd-yyyy'}}</i>
                </div>
            </div>
            <div class="col-lg-3 form-group">
                @Html.LabelFor(model => model.EndDate, htmlAttributes: new { @class = "control-label small" })
                <div>
                    <i class="data-label">{{cmeHistory.EndDate || 'Not Available' | date:'MM-dd-yyyy'}}</i>
                </div>
            </div>
        </div>
        <div class="col-lg-12 zero-padding-left-right-div">
            <div class="col-lg-3 form-group">
                @Html.LabelFor(model => model.ExpiryDate, htmlAttributes: new { @class = "control-label small" })
                <div>
                    <i class="data-label">{{cmeHistory.ExpiryDate || 'Not Available' | date:'MM-dd-yyyy'}}</i>
                </div>
            </div>
            @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Preview, ViewBag.Roles, false))
            {
                <div class="col-md-3 form-group">
                    @Html.LabelFor(model => model.CertificatePath, htmlAttributes: new { @class = "control-label small" })
                    <div ng-if="cmeHistory.CertificatePath">
                        <i class="data-label"><a href="@System.Configuration.ConfigurationManager.AppSettings["AppRoot"]/Document/View?path=@System.Configuration.ConfigurationManager.AppSettings["AppRoot"]{{cmeHistory.CertificatePath}}" class="pointer" target="_blank" tooltip data-toggle="tooltip" data-placement="top" title="Certificate"><i class="fa fa-file"></i></a></i>
                    </div>
                    <div ng-if="!cmeHistory.CertificatePath">
                        <i class="data-label"> Not available</i>
                    </div>
                </div>
            }
        </div>
        <div class="col-lg-12 zero-padding-left-right-div">
            <div class="col-md-12 form-group">
                <button type="button" class="btn btn-warning btn-sm" ng-click="operateCancelControl('')">Cancel</button>
            </div>
        </div>
    </fieldset>
</div>