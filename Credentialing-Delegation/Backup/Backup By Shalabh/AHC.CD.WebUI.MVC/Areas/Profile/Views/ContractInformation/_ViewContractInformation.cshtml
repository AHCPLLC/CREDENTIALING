
<form class="organisationInfo">
    @Html.ValidationSummary(true, "", new { @class = "text-danger validSummary" })
    <div class="col-md-12 zero-padding-left-right-div">
        <div class="col-md-3 form-group">
            <label class="control-label small">Provider Relationship *</label>
            <div>
                <i class="data-label">{{contractInfoes[0].ProviderRelationship}}</i>
            </div>
        </div>
        <div class="col-md-3 form-group">
            <label class="control-label small">Joining Date *</label>
            <div>
                <i class="data-label">{{contractInfoes[0].JoiningDate| date:'MM-dd-yyyy'}}</i>
            </div>
        </div>
        <div class="col-md-3 form-group">
            <label class="control-label small">End Date</label>
            <div>
                <i ng-show="contractInfoes[0].ExpiryDate" class="data-label">{{contractInfoes[0].ExpiryDate| date:'MM-dd-yyyy'}}</i>
                <i ng-show="!contractInfoes[0].ExpiryDate" class="data-label">Not Available</i>
            </div>
        </div>
        <div class="col-md-3 form-group">
            <label class="control-label small">Status *</label>
            <div>
                <i class="data-label">{{contractInfoes[0].ContractStatus}}</i>
            </div>
        </div>
    </div>
    <div class="col-md-3 form-group">
        <label class=" control-label small">Contract</label>
        <div>
            <i class="data-label" ng-show="!contractInfoes[0].ContractFilePath"> Not Available</i>
            <i class="data-label" ng-show="contractInfoes[0].ContractFilePath"><a href="@System.Configuration.ConfigurationManager.AppSettings["AppRoot"]/Document/View?path=@System.Configuration.ConfigurationManager.AppSettings["AppRoot"]{{contractInfoes[0].ContractFilePath}}" class="pointer" target="_blank" tooltip data-toggle="tooltip" data-placement="top" title="Contract Certificate"><i class="fa fa-file"></i></a></i>
        </div>
    </div>
    <div class="clearfix"></div>
    <div ng-show="activeMessageDiv=='addedNewContractInformation'" class="alert alert-success" role="alert">
        <button ng-click="closeAlertMessage('')" class="close"><span>&times;</span></button>
        {{messageDesc}}
    </div>
    <div ng-show="activeMessageDiv=='updatedContractInformation'+$index" class="alert alert-success" role="alert">
        <button ng-click="closeAlertMessage('')" class="close"><span>&times;</span></button>
        {{messageDesc}}
    </div>
</form>