@model AHC.CD.WebUI.MVC.Areas.Profile.Models.WorkHistory.MilitaryServiceInformationViewModel

<fieldset>
    <legend>
        Military Service Information
    </legend>

    <div class="col-lg-12" style="word-wrap: break-word;">
        <div class="col-md-12">
            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.MilitaryBranch, new { @class = "control-label small" })
                <div>
                    <i class="data-label">{{militaryService.MilitaryBranch || 'Not Available'}}</i>
                </div>
            </div>
            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.StartDate, new { @class = "control-label small" })
                <div>
                    <div>
                        <i class="data-label">{{militaryService.StartDate || 'Not Available' | date:'MM-dd-yyyy'}}</i>
                    </div>
                </div>
            </div>
            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.DischargeDate, new { @class = "control-label small" })
                <div>
                    <div>
                        <i class="data-label">{{militaryService.DischargeDate || 'Not Available' | date:'MM-dd-yyyy'}}</i>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="col-md-12">
            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.MilitaryRank, new { @class = "control-label small" })
                <div>
                    <div>
                        <i class="data-label">{{militaryService.MilitaryRank || 'Not Available'}}</i>
                    </div>
                </div>
            </div>
            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.MilitaryDischarge, new { @class = "control-label small" })
                <div>
                    <div>
                        <i class="data-label">{{militaryService.MilitaryDischarge  || 'Not Available'}}</i>
                    </div>
                </div>
            </div>
            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.MilitaryPresentDuty, new { @class = "control-label small" })
                <div>
                    <div>
                        <i class="data-label">{{militaryService.MilitaryPresentDuty || 'Not Available'}}</i>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>

        <div class="col-md-12" ng-show="militaryService.MilitaryDischarge=='Other than honourable'">
            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.HonorableExplanation, new { @class = "control-label small" })
                <div>
                    <div>
                        <i class="data-label">{{militaryService.HonorableExplanation || 'Not Available'}}</i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
    <br />
    <div class="col-md-12">
        <button type="button" class="btn btn-warning btn-sm" ng-click="operateCancelControl('')">Cancel</button>
        <button type="submit" class="btn btn-primary btn-sm pull-right" ng-click="operateEditControl($index+'_editMilitaryServiceInformation',militaryService)">Edit</button>
    </div>
</fieldset>