@model AHC.CD.WebUI.MVC.Areas.Profile.Models.IdentificationAndLicenses.StateLicenseViewModel
@using AHC.CD.WebUI.MVC.Areas.Profile.Attributes;

<div class="form-style">
    <fieldset class="wrap-words">
        <legend>
            State License Information
        </legend>
        <div>
            <div class="col-lg-12 zero-padding-left-right-div">
                <div class="col-md-12 zero-padding-left-right-div" ng-if="StateLicenseInformationHistory.HistoryStatus != 'Renewed'">
                    <div class="col-lg-4 form-group">
                        @Html.LabelFor(model => model.LicenseNumber, new { @class = "control-label small" })
                        <div>
                            <i class="data-label">{{StateLicenseInformationHistory.LicenseNumber}}</i>
                        </div>
                    </div>
                    <div class="col-lg-4 form-group">
                        @Html.LabelFor(model => model.ProviderTypeID, new { @class = "control-label small" })
                        <div>
                            <i class="data-label">{{StateLicenseInformationHistory.ProviderType.Title || 'Not Available'}}</i>
                        </div>
                    </div>
                    <div class="col-lg-4 form-group">
                        @Html.LabelFor(model => model.StateLicenseStatusID, new { @class = "control-label small" })
                        <div>
                            <i class="data-label">{{StateLicenseInformationHistory.StateLicenseStatus.Title || 'Not Available'}}</i>
                        </div>
                    </div>
                </div>
                <div class="col-md-12 zero-padding-left-right-div" ng-if="StateLicenseInformationHistory.HistoryStatus != 'Renewed'">
                    <div class="col-lg-4 form-group">
                        @Html.LabelFor(model => model.IssueDate, new { @class = "control-label small" })
                        <div>
                            <i class="data-label">{{StateLicenseInformationHistory.IssueDate || 'Not Available' | date: "MM-dd-yyyy"}}</i>
                        </div>
                    </div>
                    <div class="col-lg-4 form-group">
                        @Html.LabelFor(model => model.CurrentIssueDate, new { @class = "control-label small" })
                        <div>
                            <i class="data-label">{{StateLicenseInformationHistory.CurrentIssueDate || 'Not Available' | date: "MM-dd-yyyy"}}</i>
                        </div>
                    </div>
                    <div class="col-lg-4 form-group">
                        @Html.LabelFor(model => model.ExpiryDate, new { @class = "control-label small" })
                        <div>
                            <i class="data-label">{{StateLicenseInformationHistory.ExpiryDate || 'Not Available' | date: "MM-dd-yyyy"}}</i>
                        </div>
                    </div>
                </div>
                <div class="col-md-12 zero-padding-left-right-div" ng-if="StateLicenseInformationHistory.HistoryStatus != 'Renewed'">
                    <div class="col-md-4 form-group">
                        @Html.LabelFor(model => model.IssueState, new { @class = "control-label small" })
                        <div>
                            <i class="data-label">{{StateLicenseInformationHistory.IssueState || 'Not Available'}}</i>
                        </div>
                    </div>
                    <div class="col-md-4 form-group">
                        @Html.LabelFor(model => model.CurrentPracticeStateYesNoOption, new { @class = "control-label small" })
                        <div>
                            <i ng-if="StateLicenseInformationHistory.CurrentPracticeStateYesNoOption == 1" class="data-label">Yes</i>
                            <i ng-if="StateLicenseInformationHistory.CurrentPracticeStateYesNoOption == 2" class="data-label">No</i>
                            <i ng-if="StateLicenseInformationHistory.CurrentPracticeStateYesNoOption != 2 && StateLicenseInformationHistory.CurrentPracticeStateYesNoOption != 1" class="data-label">Not Available</i>
                        </div>
                    </div>
                    <div class="form-group col-lg-4">
                        @Html.LabelFor(model => model.GoodStandingYesNoOption, new { @class = "control-label small" })
                        <div>
                            <i ng-if="StateLicenseInformationHistory.GoodStandingYesNoOption==1" class="data-label">Yes</i>
                            <i ng-if="StateLicenseInformationHistory.GoodStandingYesNoOption==2" class="data-label">No</i>
                            <i ng-if="StateLicenseInformationHistory.GoodStandingYesNoOption != 2 && StateLicenseInformationHistory.GoodStandingYesNoOption != 1" class="data-label">Not Available</i>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12 zero-padding-left-right-div">
                    <div class="col-lg-4 form-group" ng-if="StateLicenseInformationHistory.HistoryStatus == 'Renewed'">
                        @Html.LabelFor(model => model.CurrentIssueDate, new { @class = "control-label small" })
                        <div>
                            <i class="data-label">{{StateLicenseInformationHistory.CurrentIssueDate || 'Not Available' | date: "MM-dd-yyyy"}}</i>
                        </div>
                    </div>
                    <div class="col-lg-4 form-group" ng-if="StateLicenseInformationHistory.HistoryStatus == 'Renewed'">
                        @Html.LabelFor(model => model.ExpiryDate, new { @class = "control-label small" })
                        <div>
                            <i class="data-label">{{StateLicenseInformationHistory.ExpiryDate || 'Not Available' | date: "MM-dd-yyyy"}}</i>
                        </div>
                    </div>
                    <div class="form-group col-lg-4">
                        <label class="control-label small">Supporting Document</label>
                        <div ng-show="StateLicenseInformationHistory.StateLicenseDocumentPath">
                            @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Preview, ViewBag.Roles, false))
                            {
                                <i class="data-label"><a href="/Document/View?path={{StateLicenseInformationHistory.StateLicenseDocumentPath}}" class="pointer" target="_blank" tooltip data-toggle="tooltip" data-placement="top" title="State License Certificate"><i class="fa fa-file"></i></a></i>
                            }
                        </div>
                        <div ng-hide="StateLicenseInformationHistory.StateLicenseDocumentPath">
                            <i class="data-label">Not Available</i>
                        </div>
                    </div>
                </div>
                <div class="col-md-12 form-group zero-padding-left-right-div">
                    <div class="col-md-12">
                        <button type="button" class="btn btn-warning btn-sm" ng-click="operateCancelControl('')">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    </fieldset>
</div>