
<form>
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 zero-padding-left-right-div">
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 form-group">
            <label>Checklist Name</label>
            <input type="text" ng-model="PSVCheckListData.Name" class="form-control input-sm" placeholder="checklist name">
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 form-group">
            <label>Checklist Code</label>
            <input type="text" ng-model="PSVCheckListData.Code" class="form-control input-sm" placeholder="checklist code">
        </div>
    </div>

    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 zero-padding-left-right-div">
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
            <fieldset>
                <legend>
                    Default List:
                </legend>
                <div class="legend2 pull-right">
                    <a ng-click="ChangePSVItem()" class="btn btn-xs btn-primary" tooltip data-toggle="tooltip" data-placement="top" title="Edit">
                        <i class="fa fa-edit"></i>
                    </a>
                </div>
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th class="col-lg-6 col-md-6 col-sm-6 col-xs-6">Checklist Items</th>
                            <th class="col-lg-3 col-md-3 col-sm-3 col-xs-3">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="ci in PSVCheckListData.CheckListItems | filter:{IsSelected:true} track by $index">
                            <td>{{ci.SectionName}}</td>
                            <td>
                                <a ng-click="ci.IsSelected=false;" class="btn btn-xs btn-danger" tooltip data-toggle="tooltip" data-placement="right" title="Remove"><i class="fa fa-close"></i></a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </fieldset>
        </div>
        <div ng-if="TempPSVCheckListData.CheckListItems" class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
            <fieldset>
                <legend>
                    Change:
                </legend>
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 zero-padding-left-right-div" style="  max-height: 300px;overflow-y: auto;">
                    <div ng-repeat="temp in TempPSVCheckListData.CheckListItems track by $index" class="checkbox">
                        <label>
                            <input type="checkbox" ng-model="temp.IsSelected"> {{temp.SectionName}}
                        </label>
                        <div ng-repeat="f in temp.Fields" class="checkbox" style="margin-left: 20px">
                            <label>
                                <input type="checkbox" ng-model="f.IsSelected"> {{f.FieldName}}
                            </label>
                            <div ng-if="f.Fields.length > 0" ng-repeat="f1 in f.Fields" class="checkbox" style="margin-left: 40px">
                                <label>
                                    <input type="checkbox" ng-model="f1.IsSelected"> {{f1.FieldName}}
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 zero-padding-left-right-div">
                    <a ng-click="ActionSubmit('',2)" class="btn btn-sm btn-warning pull-left">Cancel</a>
                    <a ng-click="ActionSubmit(TempPSVCheckListData,1)" class="btn btn-sm btn-success pull-right">OK</a>
                </div>
            </fieldset>
        </div>
    </div>

    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 zero-padding-left-right-div">
        <a ng-click="cancelAll()" class="btn btn-sm btn-warning pull-left">Cancel</a>
        <a ng-click="SavePSVChecklist(PSVCheckListData)" class="btn btn-sm btn-success pull-right">Save</a>
    </div>
</form>
