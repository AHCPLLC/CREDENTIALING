<div class="col-lg-12 zero-padding-left-right-div">
    <div ng-show="activeMessageDiv=='PlanAdded'" class="alert alert-success" role="alert">
        <button ng-click="closeAlertMessage('')" class="close"><span>&times;</span></button>
        {{messageDesc}}
    </div>
    <div ng-show="activeMessageDiv=='PlanUpdated'" class="alert alert-success" role="alert">
        <button ng-click="closeAlertMessage('')" class="close"><span>&times;</span></button>
        {{messageDesc}}
    </div>
</div>
<div class="clearfix"></div>

            <form id="providerSearch" name="providerData">
                <br />
                <div class="clearfix"></div>
                <div class="row" ng-show="showDiv">
                    <div class="col-lg-12 form-style">
                        <fieldset>  
                            <legend>Assign Business Entities</legend>
                            <table class="table-bordered table table-condensed">
                                <tr>
                                    <th>{{selectedPlan}}</th>
                                    <th ng-repeat="be in BE_LOB_Maps[0].BEs">                                       
                                        {{be.BE.GroupName}}
                                    </th>
                                </tr>
                                <tr ng-repeat="pl in BE_LOB_Maps">
                                    <td>
                                        <label>
                                            {{pl.PlanLOB.LOB.LOBName}}
                                        </label>
                                    </td>
                                    <td ng-repeat="ber in pl.BEs"><input type="checkbox" ng-model="ber.IsChecked" @*ng-click="uncheck($parent.$index)"*@ /></td>
                                </tr>
                            </table>
                            <div class="clearfix"></div>
                            <div class="clearfix"></div>
                            <div class="col-lg-12 zero-padding-left-right-div">
                                <div ng-show="activeMessageDiv=='PlanContractAdded'" class="alert alert-success" role="alert">
                                    <button ng-click="closeAlertMessage('')" class="close"><span>&times;</span></button>
                                    {{messageDesc}}
                                </div>
                                <div ng-show="activeMessageDiv=='PlanContractUpdated'" class="alert alert-success" role="alert">
                                    <button ng-click="closeAlertMessage('')" class="close"><span>&times;</span></button>
                                    {{messageDesc}}
                                </div>
                            </div>
                            <div class="modal fade" id="myModal1" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="panel panel-default">
                                        <div class="panel-heading">
                                            {{ConfirmTitle1}}
                                            <button type="button" ng-disabled="saving" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                                        </div>
                                        <div class="panel-body">
                                            {{ConfirmMessage1}}
                                        </div>
                                        <div class="panel-footer">
                                            <div class="clearfix">
                                                <a ng-if="!PlanIsEdit" class="btn btn-primary btn-sm pull-right" ng-click="saving = true; SaveData();" ng-disabled="saving">Yes</a>
                                                <a ng-if="PlanIsEdit" class="btn btn-primary btn-sm pull-right" ng-click="saving = true; UpdatePlanContract();" ng-disabled="saving">Yes</a>
                                                <button type="button" class="btn btn-default btn-sm pull-right" style="margin-right: 6px;" data-dismiss="modal" ng-disabled="saving">No</button>
                                                <div class="pull-right" style="margin: 3px;">
                                                    <saving></saving>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <button ng-if="!PlanIsEdit" type="button" ng-click="confirmationAddPlanContract()" class="btn btn-sm btn-success pull-right">Save</button>
                            <button ng-if="PlanIsEdit" type="button" ng-click="confirmationUpdatePlanContract()" class="btn btn-sm btn-primary pull-right">Update</button>
                            <button type="button" ng-click="CancelAdd()" class="btn btn-sm btn-warning">Cancel</button>
                        </fieldset>
                    </div>
                </div>
            </form>
