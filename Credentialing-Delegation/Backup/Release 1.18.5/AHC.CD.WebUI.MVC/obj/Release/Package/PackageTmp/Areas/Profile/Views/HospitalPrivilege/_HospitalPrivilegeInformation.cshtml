@using AHC.CD.WebUI.MVC.Areas.Profile.Attributes;
<br />

@model AHC.CD.WebUI.MVC.Areas.Profile.Models.HospitalPrivilege.HospitalPrivilegeInformationViewModel
<div class="panel-group" ng-controller="hospitalcltr">
    <div class="form-style">
        <fieldset>
            <legend>
                Hospital Privilege Information
            </legend>
            <div ng-hide="visibilityControl=='_EditHospitalPrivilegeInformation' || !HospitalPrivilegeInformations.HospitalPrivilegeYesNoOption" class="legend2 pull-right">
                <button id="editHospitalPrivyesNo" ng-click="operateEditControl('_EditHospitalPrivilegeInformation',HospitalPrivilegeInformations)" class="btn btn-xs btn-primary" data-toggle="tooltip" data-placement="top" title="Edit"><i class="fa fa-edit"></i></button>
            </div>
            <div class="col-lg-12">
                <table ng-show="!HospitalPrivilegeInformations.HospitalPrivilegeYesNoOption && visibilityControl!='_EditHospitalPrivilegeInformation'" class="table table-bordered">
                    <thead>
                        <tr>
                            <td>
                                No Data Available for Hospital Privileges!
                                @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Add, ViewBag.Roles, false))
                                {
                                    <span>
                                        Please click on <button id="noDataAddNewHospitalPrivYesNo" class="btn btn-xs btn-success" ng-click="operateEditControl('_EditHospitalPrivilegeInformation',HospitalPrivilegeInformations)" data-toggle="tooltip" data-placement="top" title="Add New">
                                            <i class="fa fa-plus"></i>
                                        </button> to add new Hospital Privilege Information.
                                    </span>
                                }
                            </td>
                        </tr>
                    </thead>
                </table>

                @*<label class="data-label zero-padding-left-right-div">
                        No data available!!
                        @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Add, ViewBag.Roles, false))
                        {
                            <span>Please click on <button class="btn btn-xs btn-success" ng-click="operateEditControl('_EditHospitalPrivilegeInformation',HospitalPrivilegeInformations)" data-toggle="tooltip" data-placement="top" title="Add New"><i class="fa fa-plus"></i></button> to add new Hospital Privilege Information.</span>
                        }
                    </label>*@
            </div>

            <div class="col-md-12" ng-hide="visibilityControl=='_EditHospitalPrivilegeInformation'">
                <div class="col-lg-12 zero-padding-left-right-div" ng-hide="!HospitalPrivilegeInformations.HospitalPrivilegeYesNoOption">
                    <div class="form-group col-md-6 zero-padding-left-right-div">
                        @Html.LabelFor(model => model.HospitalPrivilegeYesNoOption, new { @class = "control-label small" })
                        <div>

                            <i class="small">{{{'1':'YES', '2':'NO'}[HospitalPrivilegeInformations.HospitalPrivilegeYesNoOption]}}</i>

                        </div>
                    </div>
                    <div ng-show="HospitalPrivilegeInformations.HospitalPrivilegeYesNoOption=='2'" class="form-group col-md-6">
                        @Html.LabelFor(model => model.OtherAdmittingArrangements, new { @class = "control-label small" })
                        <div class="wrap-words">
                            {{HospitalPrivilegeInformations.OtherAdmittingArrangements || 'Not Available'}}
                        </div>
                    </div>
                </div>
                <div class="clearfix"></div>
                <div ng-show="activeMessageDiv=='alertHospitalPrivilegeInformation'" class="alert alert-{{messageType}}" role="alert">
                    <button ng-click="closeAlertMessage()" class="close"><span>&times;</span></button>
                    {{messageDesc}}
                </div>
            </div>
            <div class="col-md-12" ng-show="visibilityControl=='_EditHospitalPrivilegeInformation'">
                <form id="hospitalPrivilegeInfoForm">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger validSummary" })
                    <span ng-if="HospitalPrivilegeInformations.HospitalPrivilegeInformationID">
                        @Html.HiddenFor(model => model.HospitalPrivilegeInformationID, new { ng_value = "HospitalPrivilegeInformations.HospitalPrivilegeInformationID" })
                    </span>
                    <div class="col-lg-12 zero-padding-left-right-div">
                        <div class="form-group col-md-6 zero-padding-left-right-div">
                            @Html.LabelFor(model => model.HospitalPrivilegeYesNoOption, new { @class = "control-label small" })
                            <div class="radio">
                                <label>
                                    @Html.RadioButtonFor(model => model.HospitalPrivilegeYesNoOption, "1", new { data_ng_model = "tempObject.HospitalPrivilegeYesNoOption" }) Yes
                                </label>
                                <label class="radio-inline">
                                    @Html.RadioButtonFor(model => model.HospitalPrivilegeYesNoOption, "2", new { data_ng_model = "tempObject.HospitalPrivilegeYesNoOption" }) No
                                </label>
                            </div>
                            @Html.ValidationMessageFor(model => model.HospitalPrivilegeYesNoOption, "", new { @class = "text-danger" })
                        </div>
                        <div ng-show="tempObject.HospitalPrivilegeYesNoOption=='2'" class="form-group col-md-6 zero-padding-left-right-div">
                            @Html.LabelFor(model => model.OtherAdmittingArrangements, new { @class = "control-label small" })
                            @Html.TextAreaFor(model => model.OtherAdmittingArrangements, new { @class = "form-control input-sm  wrap-words", data_ng_model = "tempObject.OtherAdmittingArrangements" })
                            @Html.ValidationMessageFor(model => model.OtherAdmittingArrangements, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div ng-show="activeMessageDiv=='alertHospitalPrivilegeInformation'" class="alert alert-{{messageType}}" role="alert">
                        <button ng-click="closeAlertMessage()" class="close"><span>&times;</span></button>
                        {{messageDesc}}
                    </div>
                    <div class="clearfix"></div>
                    <div class="form-group col-md-12 zero-padding-left-right-div">
                        <button type="button" class="btn btn-warning btn-sm" ng-click="operateCancelControl('')">Cancel</button>
                        <button class="btn btn-primary pull-right" ng-click="saveHopitalPrivilegeInformation(tempObject)">Update</button>
                    </div>
                </form>
            </div>
        </fieldset>
    </div>
    <div class="form-style" ng-show="HospitalPrivilegeInformations.HospitalPrivilegeYesNoOption=='1'">
        <fieldset>
            <legend>
                Hospital Privilege Detail
            </legend>
            <div id="hospital1" class="panel-body">
                <div class="form-style">
                    <div class="col-lg-12 zero-padding-left-right-div">
                        <table ng-hide="HospitalPrivilegeInformations.HospitalPrivilegeDetails.length > 0 || visibilityControl=='addhospitalPrivilegeInformation'" class="table table-bordered table-condensed customtbodyStyle table-striped">
                            <thead>
                                <tr>
                                    <td>
                                        No Data Available for Hospital Privilege Detail!
                                        @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Add, ViewBag.Roles, true))
                                        {
                                            <span>Please click on <button id="noDataAddNewHospitalPriv" class="btn btn-xs btn-success" ng-click="operateViewAndAddControl('addhospitalPrivilegeInformation')" data-toggle="tooltip" data-placement="top" title="Add New"><i class="fa fa-plus"></i></button> to add new Hospital Privilege Detail information.</span>

                                        }
                                    </td>
                                </tr>
                            </thead>
                        </table>
                        <table ng-if="HospitalPrivilegeInformations.HospitalPrivilegeDetails" ng-hide="HospitalPrivilegeInformations.HospitalPrivilegeDetails.length <= 0" class="table table-bordered table-condensed customtbodyStyle">
                            <thead>
                                <tr>
                                    <th>Hospital Name</th>
                                    <th>Specialty</th>
                                    <th>Street Address</th>
                                    <th>Contact Person</th>
                                    <th>Primary</th>
                                    <th>Document</th>
                                    <th class="col-sm-1">Action</th>
                                </tr>
                            </thead>
                            <tbody ng-repeat="hospitalPrivilegeInformation in HospitalPrivilegeInformations.HospitalPrivilegeDetails track by $index">
                                <tr ng-class="{'1':'isprimary', '2':''}[hospitalPrivilegeInformation.PreferenceType]">
                                    <td>{{hospitalPrivilegeInformation.Hospital.HospitalName || 'Not Available'}}</td>
                                    <td>{{getSpecialityForProvider(hospitalPrivilegeInformation.SpecialtyID).Specialty.Name || 'Not Available'}}</td>
                                    <td>{{hospitalPrivilegeInformation.HospitalContactInfo.Street || 'Not Available'}}</td>
                                    <td>{{getContactPersonForProvider(hospitalPrivilegeInformation.HospitalContactPerson.HospitalContactPersonID).ContactPersonName || 'Not Available'}}</td>

                                    <td><i class="data-label " ng-class="{'1':'fa fa-check', '2':'fa fa-times'}[hospitalPrivilegeInformation.PreferenceType]"></i></td>

                                    <td><span ng-show="hospitalPrivilegeInformation.HospitalPrevilegeLetterPath==null">Not Available</span><a ng-hide="hospitalPrivilegeInformation.HospitalPrevilegeLetterPath==null" href="/Document/View?path={{hospitalPrivilegeInformation.HospitalPrevilegeLetterPath}}" data-toggle="tooltip" data-placement="top" title="{{hospitalPrivilegeInformation.DocumentPath}}" target="_blank"><i class="fa fa-file"></i></a></td>
                                    <td class="col-lg-2">
                                        @if (ProfileActionValidator.IsAuthorized(ProfileActionType.View, ViewBag.Roles, true))
                                        {
                                            <button class="btn btn-xs btn-default" ng-click="operateViewAndAddControl($index+'_viewhospitalPrivilegeInformation')" ng-hide="viewShowHosPrv" data-toggle="tooltip" data-placement="left" title="View"><i class="fa fa-eye"></i></button>
                                        }
                                        @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Edit, ViewBag.Roles, true))
                                        {
                                            <button class="btn btn-xs btn-primary" ng-click="operateEditControl($index+'_edithospitalPrivilegeInformation',hospitalPrivilegeInformation)" ng-hide="editShowHosPrv" data-toggle="tooltip" data-placement="top" title="Edit"><i class="fa fa-edit"></i></button>
                                        }
                                        <button class="btn btn-xs btn-default" ng-click="operateRenewControl($index+'_renewhospitalPrivilegeInformation',hospitalPrivilegeInformation); RenewDiv(hospitalPrivilegeInformation);" ng-hide="renewHosPrv" data-toggle="tooltip" data-placement="top" title="Renew"><i class="fa fa-repeat"></i></button>
                                        
                                        @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Add, ViewBag.Roles, true))
                                        {
                                            <button class="btn btn-xs btn-success text-right" id="addNewHospitalPriv" ng-hide="$index+1!=HospitalPrivilegeInformations.HospitalPrivilegeDetails.length" ng-click="operateViewAndAddControl('addhospitalPrivilegeInformation')" data-toggle="tooltip" data-placement="right" title="Add New"><i class="fa fa-plus"></i></button>
                                        }
                                    </td>
                                </tr>

                                @if (ProfileActionValidator.IsAuthorized(ProfileActionType.View, ViewBag.Roles, true))
                                {
                                    <tr ng-show="visibilityControl==($index+'_viewhospitalPrivilegeInformation')">
                                        <td colspan="7" class="editTableDataStyle">

                                            @Html.Partial("~/Areas/Profile/Views/HospitalPrivilege/_ViewHospitalPriviledge.cshtml")

                                        </td>
                                    </tr>
                                }
                                @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Edit, ViewBag.Roles, true))
                                {
                                    <tr ng-show="visibilityControl==($index+'_edithospitalPrivilegeInformation')">
                                        <td colspan="7" id="hospitalPrivilegeInformationEditDiv{{$index}}" class="editTableDataStyle">
                                            <fieldset>
                                                <legend>
                                                    Edit Hospital Privilege Information
                                                </legend>
                                                @Html.Partial("~/Areas/Profile/Views/HospitalPrivilege/_AddEditHospitalPriviledge.cshtml")
                                            </fieldset>
                                        </td>
                                    </tr>
                                }
                                <tr ng-show=" visibilityControl == ($index+'_renewhospitalPrivilegeInformation')">
                                    <td colspan="7" id="hospitalPrivilegeInformationRenewDiv{{$index}}" class="editTableDataStyle">
                                        <fieldset>
                                            <legend>
                                                Renew Hospital Privilege Information
                                            </legend>
                                            @Html.Partial("~/Areas/Profile/Views/HospitalPrivilege/_RenewHospitalPrivilegeInfo.cshtml")
                                        </fieldset>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <div ng-show="activeMessageDiv=='addedNewHospitalPrivilege'" class="alert alert-success" role="alert">
                            <button ng-click="closeAlertMessage('')" class="close"><span>&times;</span></button>
                            <i class="fa fa-2x fa-arrow-up"></i> {{messageDesc}}
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Add, ViewBag.Roles, true))
                    {
                        <fieldset ng-show="visibilityControl=='addhospitalPrivilegeInformation'">
                            <legend>
                                Add Hospital Privilege Information
                            </legend>
                            <div id="newShowHosPrvDiv">

                                @Html.Partial("~/Areas/Profile/Views/HospitalPrivilege/_AddEditHospitalPriviledge.cshtml")

                            </div>
                        </fieldset>
                    }
                </div>
            </div>
        </fieldset>
    </div>
</div>
