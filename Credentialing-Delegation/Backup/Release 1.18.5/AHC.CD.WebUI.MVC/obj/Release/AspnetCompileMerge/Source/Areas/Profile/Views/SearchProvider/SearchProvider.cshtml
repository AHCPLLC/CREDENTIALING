@{
    ViewBag.Title = "Search Provider";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/Lib/Jquery/jquery-1.11.2.min.js"></script>
<script src="~/Scripts/Lib/Angular/angular.min.js"></script>
<script src="~/Scripts/Lib/Angular/ng-table.js"></script>
@*<script src="~/Scripts/Lib/Jquery/jquery-1.11.0.js"></script>*@
<script src="~/Scripts/Lib/Angular/ng-table-resizable-columns.js"></script>
<link href="~/Content/Provider/ng-table.css" rel="stylesheet" />
<script src="~/Areas/Profile/Scripts/JavaScripts/SearchProvider.js"></script>

<div id="page-wrapper" ng-app="ProviderApp" ng-controller="ProviderCtrl">

    <div class="container-fluid">

        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <ol class="breadcrumb">
                    <li>
                        <i class="fa fa-dashboard"></i>  <a href="/Dashboard/Index">Dashboard</a>
                    </li>
                    <li class="active">
                        <i class="fa fa-search"></i> Search Providers
                    </li>
                </ol>
            </div>
        </div>
        <!-- /.row -->

        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default content-panel">
                    <div class="panel-heading">
                        <span class="panel-title pull-right btn-link" onclick="SearchProviderPanelToggle();"><i class="btn btn-sm btn-default fa fa-th-list"></i></span>
                        <h3 class="panel-title">Search Providers</h3>
                    </div>
                    <div id="SearchProviderPanel" class="panel-body">
                        <form id="providerSearch" name="providerData">
                            <div class="col-lg-12">
                                <div class="col-lg-4 form-group">
                                    <label class="control-label small">NPI Number</label>
                                    <input type="text" placeholder="NPI Number" name="NPI" ng-disabled="((searchProvider.FirstName) || (searchProvider.LastName) || (searchProvider.ProviderRelationship) || (searchProvider.IPAGroupName))" class="form-control input-sm" ng-model="searchProvider.NPINumber" require ng-pattern="/^[0-9]{10}$/" />                                    
                                    <span class="text-danger" ng-show="providerData.NPI.$error.pattern">Please enter valid 10 digit number</span>
                                </div>
                                <div class="col-lg-4 form-group">
                                    <label class="control-label small">First Name</label>
                                    <input type="text" placeholder="First Name" name="fName" ng-disabled="((searchProvider.NPINumber) || (searchProvider.LastName) || (searchProvider.ProviderRelationship) || (searchProvider.IPAGroupName))" class=" form-control input-sm" ng-model="searchProvider.FirstName" ng-pattern="/^[a-zA-Z ,-]*$/" />
                                    <span class="text-danger" ng-show="providerData.fName.$error.pattern">Please enter valid First Name*. Only alphabets, spaces, comma and hyphen accepted.</span>
                                </div>
                                <div class="col-lg-4 form-group">
                                    <label class="control-label small">Last Name</label>
                                    <input type="text" placeholder="Last Name" name="lName" ng-disabled="((searchProvider.FirstName) || (searchProvider.NPINumber) || (searchProvider.ProviderRelationship) || (searchProvider.IPAGroupName))" class=" form-control input-sm" ng-model="searchProvider.LastName" ng-pattern="/^[a-zA-Z ,-]*$/"  />
                                    <span class="text-danger" ng-show="providerData.lName.$error.pattern">Please enter valid First Name*. Only alphabets, spaces, comma and hyphen accepted.</span>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="col-lg-4 form-group">
                                    <label class="control-label small">Provider Relationship</label>
                                    <select class="form-control input-sm" ng-disabled="((searchProvider.FirstName) || (searchProvider.LastName) || (searchProvider.NPINumber) || (searchProvider.IPAGroupName))" ng-model=" searchProvider.ProviderRelationship">
                                        <option disabled value="">Select</option>
                                        @foreach (var value in Enum.GetValues(typeof(AHC.CD.Entities.MasterData.Enums.ProviderRelationshipOption)))
                                        {
                                            <option value="@value.ToString()">@value.ToString()</option>
                                        }
                                        @*<option value="Employee">Employee</option>
                                        <option value="Affiliate">Affiliate</option>*@
                                    </select>

                                </div>
                                <div class="col-lg-4 form-group">
                                    <label class="control-label small">IPA</label>
                                    @*<select class="form-control input-sm" ng-repeat="ipa in PracticingGroups" ng-disabled="((searchProvider.NPINumber) || (searchProvider.FirstName) || (searchProvider.LastName) || (searchProvider.ProviderRelationship))" ng-model="searchProvider.IPAGroupName">
                                        <option disabled value="">Select</option>
                                        <option value="{{ipa.Group.Name}}">{{ipa.Group.Name}}</option>
                                        <option value="AHC">AHC</option>
                                        <option value="Group">Group</option>
                                    </select>*@
                                    <input type="text" class="form-control input-sm" placeholder="IPA" name="IPAGroupName" ng-model="searchProvider.IPAGroupName" ng-change="searchCumDropDown('ForIPA'+$index)" ng-disabled="((searchProvider.NPINumber) || (searchProvider.FirstName) || (searchProvider.LastName) || (searchProvider.ProviderRelationship))" />
                                    <div class="ProviderTypeSelectAutoList popover fade bottom in" role="tooltip" id="ForIPA{{$index}}">
                                        <table class="table table-striped table-bordered table-hover table-condensed">
                                            <tbody>
                                                <tr ng-repeat="ipa in filterIPAData=(PracticingGroups | filter : searchProvider.IPAGroupName) track by $index" ng-click="addIntoIPADropDown(ipa.Group.Name,'ForIPA')" class="pointer">
                                                    <td>{{ipa.Group.Name}}</td>
                                                </tr>
                                                <tr ng-if="!filterIPAData.length">
                                                    <td>IPA Name Not Found</td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-12">
                                @*<div class="col-lg-12"><label></label></div>
                                    <div class="col-lg-12" ng-click="new_search();"><button class="btn btn-info"><i class="fa fa-search"></i> Search</button></div>*@
                                <div class="col-md-12 form-group">
                                    <button type="button" class="btn btn-warning" ng-click="clearSearch();">Clear</button>
                                    <button type="button" class="btn btn-info pull-right" ng-disabled="((!searchProvider.NPINumber) && (!searchProvider.FirstName) && (!searchProvider.LastName) && (!searchProvider.ProviderRelationship)) && (!searchProvider.IPAGroupName)" ng-click="new_search();"><i class=" fa fa-search"></i> Search</button>

                                </div>
                            </div>
                        </form>
                    </div>
                    @*<div class=" col-lg-12 text-center" ng-cloak>
                        <span class="text-danger">{{error_message}}</span>
                    </div>*@
                    
                </div>
            </div>
            <div class="progress" ng-show="progressbar" ng-cloak>
                <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
                    Loading...
                </div>
            </div>           
        </div>
        <div class="clearfix"></div>
        <div ng-show="activeMessageDiv=='noProviderDetails'" class="col-lg-12 form-group">
            <div class="alert alert-danger" role="alert">
                <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>                
                <span>{{messageDesc}}</span>
            </div>
        </div>
        <div class="clearfix"></div>
        <br />
        @Html.Partial("_SearchProviderResults")
        <!-- /.container-fluid -->
    </div>
</div>
<!-- /#page-wrapper -->

<script>
    $('#myTab a').click(function (e) {
        if ($(this).parent('li').hasClass('active')) {
            $($(this).attr('href')).hide();
        }
        else {
            e.preventDefault();
            $(this).tab('show');
        }
    });
</script>