<a class="dropdown-toggle" data-toggle="dropdown" href="#">
    <i class="fa fa-user fa-fw"></i> @User.Identity.GetUserName() @*@Session["FullName"]*@ <i class="fa fa-caret-down"></i>
</a>
<ul class="dropdown-menu dropdown-user">
    <li class="divider"></li>
    @using Microsoft.AspNet.Identity
    @if (Request.IsAuthenticated)
    {
        <form action="/Account/LogOff" method="post" id="logoutForm">
            @Html.AntiForgeryToken()
            <li class="text-center"><a class="text-danger" href="javascript:document.getElementById('logoutForm').submit()"><i class="fa fa-fw fa-power-off"></i>Log off</a></li>
        </form>
    }
</ul>

