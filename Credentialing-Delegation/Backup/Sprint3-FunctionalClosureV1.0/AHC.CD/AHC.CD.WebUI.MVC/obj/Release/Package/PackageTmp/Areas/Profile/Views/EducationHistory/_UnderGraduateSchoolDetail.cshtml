@using AHC.CD.WebUI.MVC.Areas.Profile.Attributes;

<div class="form-style">
    <fieldset>
        <legend>
            Under Graduate/Professional Schools Details
        </legend>
        <div id="under" class="panel-body">
            @*<div id="under" class="panel-body panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">*@
            <div class="form-style">
                <div class="col-lg-12 zero-padding-left-right-div">
                    <table ng-hide="educationDetailViewModels.length > 0 || visibilityControl == 'addeducationDetailViewModel'" class="table table-bordered table-condensed customtbodyStyle table-striped">
                        <thead>
                            <tr>
                                <td>
                                    No Data Available ! To Add New Click
                                    @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Add, ViewBag.Roles, false))
                                    {
                                        <button class="btn btn-xs btn-success" ng-click="operateViewAndAddControl('addeducationDetailViewModel')"><i class="fa fa-plus"></i></button>
                                    }
                                </td>
                            </tr>
                        </thead>
                    </table>
                    <table ng-hide="educationDetailViewModels.length <= 0" class="table table-bordered table-condensed customtbodyStyle table-striped">
                        <thead>
                            <tr>
                                <th>School</th>
                                <th>Degree Awarded</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                                <th>Supporting Document</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody ng-repeat="educationDetailViewModel in educationDetailViewModels track by $index">
                            <tr>
                                <td>{{educationDetailViewModel.SchoolInformation.SchoolName}}</td>
                                <td>{{educationDetailViewModel.QualificationDegree}}</td>
                                <td>{{educationDetailViewModel.StartDate | date:'MM-dd-yyyy'}}</td>
                                <td>{{educationDetailViewModel.EndDate | date:'MM-dd-yyyy'}}</td>
                                <td ng-show="educationDetailViewModel.CertificatePath!=''">
                                    @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Preview, ViewBag.Roles, false))
                                    {
                                        <a href="/Document/View?path={{educationDetailViewModel.CertificatePath}}" target="_blank" title="{{educationDetailViewModel.CertificatePath}}"><i class="fa fa-file" title=""></i></a>
                                    }
                                </td>
                                <td ng-show="educationDetailViewModel.CertificatePath==''">Not Available</td>
                                <td>
                                    @if (ProfileActionValidator.IsAuthorized(ProfileActionType.View, ViewBag.Roles, false))
                                    {
                                        <button data-toggle="tooltip" data-placement="left" title="View" class="btn btn-xs btn-default" ng-click="operateViewAndAddControl($index+'_vieweducationDetailViewModel')" ng-hide="viewShowUG"><i class="fa fa-eye"></i></button>
                                    }

                                    @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Edit, ViewBag.Roles, false))
                                    {
                                        <button data-toggle="tooltip" data-placement="top" title="Edit" class="btn btn-xs btn-primary" ng-click="operateEditControl($index+'_editeducationDetailViewModel',educationDetailViewModel)" ng-hide="editShowUG"><i class="fa fa-edit"></i></button>
                                    }

                                    @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Add, ViewBag.Roles, false))
                                    {
                                        <button data-toggle="tooltip" data-placement="right" title="Add New" ng-hide="viewShowUG || editShowUG || newShowUG || $index+1!=educationDetailViewModels.length" ng-click="operateViewAndAddControl('addeducationDetailViewModel')" class="btn btn-xs btn-success"><i class="fa fa-plus"></i></button>
                                    }

                                </td>
                            </tr>
                            @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Edit, ViewBag.Roles, false))
                            {
                                <tr ng-show="visibilityControl==($index+'_editeducationDetailViewModel')">
                                    <td colspan="6" id="ugEditDiv{{$index}}" class="editTableDataStyle">
                                        @Html.Partial("~/Areas/Profile/Views/EducationHistory/_AddEditUndergraduationDetails.cshtml")
                                    </td>
                                </tr>
                            }

                            @if (ProfileActionValidator.IsAuthorized(ProfileActionType.View, ViewBag.Roles, false))
                            {
                                <tr ng-show="visibilityControl==($index+'_vieweducationDetailViewModel')">
                                    <td colspan="6" id="{{$index}}" class="editTableDataStyle">
                                        @Html.Partial("~/Areas/Profile/Views/EducationHistory/_ViewUnderGraduationDetails.cshtml")
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
                <div class="clearfix"></div>
                @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Add, ViewBag.Roles, false))
                {
                    <div ng-show="visibilityControl=='addeducationDetailViewModel'">                       
                        <div id="newUGFormDiv">
                            @Html.Partial("~/Areas/Profile/Views/EducationHistory/_AddEditUndergraduationDetails.cshtml")
                        </div>
                    </div>
                }


                <div class="clearfix"></div><br />
                <div ng-show="visibilityControl=='addedNewUGDetails'" class="alert alert-success" role="alert">
                    <button ng-click="operateCancelControl('')" class="close"><span>&times;</span></button>
                    <i class="fa fa-2x fa-arrow-up"></i>New Under Graduate/Professional School Detail Added Successfully !!!!
                </div>
                <div ng-show="visibilityControl=='updatedUGDetails'" class="alert alert-success" role="alert">
                    <button ng-click="operateCancelControl('')" class="close"><span>&times;</span></button>
                    <i class="fa fa-2x fa-arrow-up"></i>Under Graduate/Professional School Detail Updated Successfully !!!!
                </div>
            </div>
        </div>
    </fieldset>

</div>

