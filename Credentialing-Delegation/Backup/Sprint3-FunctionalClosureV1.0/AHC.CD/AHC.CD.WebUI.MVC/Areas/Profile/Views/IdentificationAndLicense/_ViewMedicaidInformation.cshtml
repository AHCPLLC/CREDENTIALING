@model AHC.CD.WebUI.MVC.Areas.Profile.Models.IdentificationAndLicenses.MedicaidInformationViewModel
@using AHC.CD.WebUI.MVC.Areas.Profile.Attributes;

<form class="MedicaidInformationForm">
    <div class="form-style">
        <fieldset>
            <legend>
               Medicaid Information
            </legend>
            <div>
                
                    <div class="form-group col-md-12">
                        
                        <div class="col-md-4">
                        @*    @Html.HiddenFor(model => model.MedicaidInformationID, new { ng_value = "tempObject.MedicaidInformationID" })*@
                            @Html.LabelFor(model => model.LicenseNumber, new { @class = "  control-label small" })
                            <div>   
                             <i class="data-label">{{MedicaidInformation.LicenseNumber}}</i>
                            </div>
                        </div>
                        <div class="col-md-4">
                            @Html.LabelFor(model => model.State, new { @class = "  control-label small" })
                             <div>
                                <i class="data-label">{{MedicaidInformation.State}}</i>
                            </div>
                        </div>
                        <div class="col-md-4">
                            @Html.LabelFor(model => model.IssueDate, new { @class = "  control-label small" })
                            <div>
                                <i class="data-label">{{MedicaidInformation.IssueDate | date: "MM-dd-yyyy"}}</i>
                            </div>
                        </div>
                  
                        </div>
                        <div class="clearfix"></div>
                <div class="form-group col-md-12 ">

                    <div class="col-lg-12">
                        <label class="control-label small">Supporting Document</label>
                        <div>
                            @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Preview, ViewBag.Roles, false))
                            {
                                <i class="data-label"><a href="/Document/View?path={{MedicaidInformation.CertificatePath}}" class="pointer" target="_blank" data-toggle="tooltip" data-placement="top" title="{{MedicaidInformation.CertificatePath}}"><i class="fa fa-file">Medicaid Document</i></a></i>
                            }
                        </div>
                    </div>
                </div>
                    <div class="clearfix"></div>
                <div class="col-md-12">
                    <div class="col-md-12">
                        <button type="button" class="btn btn-warning btn-sm" ng-click="operateCancelControl('')">Cancel</button>
@if (ProfileActionValidator.IsAuthorized(ProfileActionType.Edit, ViewBag.Roles, false))
{
       <button type="submit" class="btn btn-primary btn-sm pull-right" ng-click="operateEditControl($index+'_editMedicaidInformation',MedicaidInformation)">Edit</button>
}
                    </div>
                </div>
                    <div class="clearfix"></div>
                </div>
            </fieldset>
        </div>
</form>
