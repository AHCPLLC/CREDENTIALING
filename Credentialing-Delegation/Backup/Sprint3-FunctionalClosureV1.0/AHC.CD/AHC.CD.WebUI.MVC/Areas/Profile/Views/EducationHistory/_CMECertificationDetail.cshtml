@using AHC.CD.WebUI.MVC.Areas.Profile.Attributes;
<div class="form-style">
    <fieldset>
        <legend>
            Post Graduate Training/CME Details
        </legend>
        <div id="Certificate" class="panel-body">
            <div class="form-style">
                <div class="col-lg-12 zero-padding-left-right-div">
                    <table ng-hide="CertificationCMEViewModel.length > 0 || visiblityControl == 'addcertificationCMEViewModel'" class="table table-bordered table-condensed customtbodyStyle table-striped">
                        <thead>
                            <tr>
                                <td>
                                    No Data Available ! To Add New Click
                                    @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Add, ViewBag.Roles, false))
                                    {
                                        <button class="btn btn-xs btn-success" ng-click="operateViewAndAddControl('addcertificationCMEViewModel')"><i class="fa fa-plus"></i></button>
                                    }
                                </td>
                            </tr>
                        </thead>
                    </table>
                    <table ng-hide="CertificationCMEViewModel.length == 0" class="table table-bordered table-condensed customtbodyStyle table-striped">
                        <thead>
                            <tr>
                                <th>Certificate Name</th>
                                <th>Credit Hours</th>
                                <th>Completion Date</th>
                                <th>Expiration Date</th>
                                <th>Supporting Document</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody ng-repeat="certificationCMEViewModel in CertificationCMEViewModel track by $index">
                            <tr>
                                <td>{{certificationCMEViewModel.Certification}}</td>
                                <td>{{certificationCMEViewModel.CreditHours}}</td>
                                <td>{{certificationCMEViewModel.EndDate | date:'MM-dd-yyyy'}}</td>
                                <td>{{certificationCMEViewModel.ExpiryDate | date:'MM-dd-yyyy'}}</td>
                                <td ng-if="certificationCMEViewModel.CertificatePath">
                                    @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Preview, ViewBag.Roles, false))
                                    {
                                        <a href="/Document/View?path={{certificationCMEViewModel.CertificatePath}}" target="_blank" title="{{certificationCMEViewModel.CertificatePath}}"><i><i class="fa fa-file" title=""></i></a>
                                    }
                                </td>
                                <td ng-if="!certificationCMEViewModel.CertificatePath">Not Available</td>
                                <td>
                                    @if (ProfileActionValidator.IsAuthorized(ProfileActionType.View, ViewBag.Roles, false))
                                    {
                                        <button data-toggle="tooltip" data-placement="left" title="View" class="btn btn-xs btn-default" ng-click="operateViewAndAddControl($index+'_viewcertificationCMEViewModel')" ng-hide="viewShowCME" @*ng-hide="showViewCMEBtn" ng-click="showViewCME($index, certificate)"*@><i class="fa fa-eye"></i></button>
                                    }
                                    @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Edit, ViewBag.Roles, false))
                                    {
                                        <button data-toggle="tooltip" data-placement="top" title="Edit" class="btn btn-xs btn-primary" ng-click="operateEditControl($index+'_editcertificationCMEViewModel',certificationCMEViewModel)" ng-hide="editShowCME"><i class="fa fa-edit"></i></button>
                                    }

                                    @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Add, ViewBag.Roles, false))
                                    {
                                        <button data-toggle="tooltip" data-placement="right" title="Add New" ng-hide="viewShowCME || editShowCME || newShowCME || $index+1!=CertificationCMEViewModel.length" ng-click="operateViewAndAddControl('addcertificationCMEViewModel')" class="btn btn-xs btn-success"><i class="fa fa-plus"></i></button>
                                    }

                                </td>
                            </tr>
                            @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Edit, ViewBag.Roles, false))
                            {
                                <tr ng-show="visibilityControl==($index+'_editcertificationCMEViewModel')">
                                    <td colspan="6" id="certificateEditDiv{{$index}}" class=" editTableDataStyle">
                                        @Html.Partial("~/Areas/Profile/Views/EducationHistory/_AddEditCertificationCME.cshtml")
                                    </td>
                                </tr>
                            }

                            @if (ProfileActionValidator.IsAuthorized(ProfileActionType.View, ViewBag.Roles, false))
                            {
                                <tr ng-show="visibilityControl==($index+'_viewcertificationCMEViewModel')">
                                    <td colspan="6" id="{{$index}}" class=" editTableDataStyle">
                                        @Html.Partial("~/Areas/Profile/Views/EducationHistory/_ViewCertificationCME.cshtml")
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
                <div class="clearfix"></div>
                @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Add, ViewBag.Roles, false))
                {
                    <div ng-show="visibilityControl=='addcertificationCMEViewModel'">
                       
                        <div id="newCertificateFormDiv">
                            @Html.Partial("~/Areas/Profile/Views/EducationHistory/_AddEditCertificationCME.cshtml")
                        </div>
                    </div>
                }

                <div class="clearfix"></div><br />
                <div ng-show="visibilityControl=='addedNewCMEDetails'" class="alert alert-success" role="alert">
                    <button ng-click="operateCancelControl('')" class="close"><span>&times;</span></button>
                    <i class="fa fa-2x fa-arrow-up"></i>New PostGraduate Training/CME Details Added Successfully !!!!
                </div>
                <div ng-show="visibilityControl=='updatedCMEDetails'" class="alert alert-success" role="alert">
                    <button ng-click="operateCancelControl('')" class="close"><span>&times;</span></button>
                    <i class="fa fa-2x fa-arrow-up"></i>PostGraduate Training/CME Details Updated Successfully !!!!
                </div>
            </div>
        </div>
    </fieldset>
</div>

