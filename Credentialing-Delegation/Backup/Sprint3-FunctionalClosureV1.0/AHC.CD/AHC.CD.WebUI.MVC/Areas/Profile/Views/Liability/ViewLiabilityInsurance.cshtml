@model AHC.CD.WebUI.MVC.Areas.Profile.Models.ProfessionalLiability.ProfessionalLiabilityInfoViewModel
@using AHC.CD.WebUI.MVC.Areas.Profile.Attributes;

<fieldset>
    <legend>
        Professional Liability
    </legend>
    <form enctype="multipart/form-data">
        <div class="form-style">

            <div class="panel-body">

                <div class="col-md-12">
                <div class="col-md-6 form-group">

                    @Html.LabelFor(p => p.InsuranceCarrierID, htmlAttributes: new { @class = "control-label small" })


                    <div>
                        <i class="data-label">{{Li.InsuranceCarrier.Name}}</i>
                    </div>

                </div>

                <div class="col-md-6 form-group">

                        @Html.LabelFor(p => p.InsuranceCarrierAddressID, htmlAttributes: new { @class = "control-label small" })


                        <div>
                            <i class="data-label">{{Li.InsuranceCarrierAddress.LocationName}}</i>
                        </div>

                    </div>

            </div>

                <div class="col-md-12">
                    <div class="form-group col-md-3">
                        <label class="control-label small">Street</label>

                        <div>
                            <i class="data-label">{{Li.InsuranceCarrierAddress.Street}}</i>
                        </div>
                    </div>

                    <div class="form-group col-md-3">

                        <label class="control-label small">Building</label>

                        <div>

                            <i class="data-label">{{Li.InsuranceCarrierAddress.Building}}</i>
                        </div>
                    </div>

                    <div class="form-group col-md-3">
                        <label class="control-label small">State</label>

                        <div>
                            <i class="data-label">{{Li.InsuranceCarrierAddress.State}}</i>
                        </div>

                    </div>

                    <div class="form-group col-md-3">

                        <label class="control-label small">Zip Code</label>
                        <div>
                            <i class="data-label">{{Li.InsuranceCarrierAddress.ZipCode}}</i>
                        </div>
                    </div>

                </div>

                <div class="col-md-12">
                    <div class="form-group col-md-3">

                        <label class="control-label small">Country</label>

                        <div>
                            <i class="data-label">{{Li.InsuranceCarrierAddress.Country}}</i>
                        </div>
                  </div>

                  
                  <div class="form-group col-md-3">

                        <label class="control-label small">County</label>

                        <div>
                            <i class="data-label">{{Li.InsuranceCarrierAddress.County}}</i>
                        </div>
                 </div>


                 <div class="form-group col-md-3">

                        <label class="control-label small">City</label>
                        <div>
                            <i class="data-label">{{Li.InsuranceCarrierAddress.City}}</i>
                        </div>
                   </div>

                 <div class="form-group col-md-3">
                        @Html.LabelFor(p => p.SelfInsuredYesNoOption, htmlAttributes: new { @class = "control-label small" })

                        <div>
                            <i class="data-label">{{Li.SelfInsured}}</i>
                        </div>

                    </div>

                </div>

                <div class="col-md-12">


                    <div class="form-group col-md-3">

                        @Html.LabelFor(p => p.InsuranceCoverageType, htmlAttributes: new { @class = "control-label small" })

                        <div>
                            <i class="data-label">{{Li.CoverageType}}</i>
                        </div>
                   </div>

                <div class="col-md-3 form-group">

                    @Html.LabelFor(p => p.OriginalEffectiveDate, htmlAttributes: new { @class = "control-label small" })

                    <div>
                        <i class="data-label">{{Li.OriginalEffectiveDate| date:'MM-dd-yyyy'}}</i>
                    </div>
                </div>

                <div class="col-md-3 form-group">

                    @Html.LabelFor(p => p.EffectiveDate, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i class="data-label">{{Li.EffectiveDate| date:'MM-dd-yyyy'}}</i>
                    </div>

                </div>


                <div class="col-md-3 form-group">

                    @Html.LabelFor(p => p.ExpirationDate, htmlAttributes: new { @class = "control-label small" })

                    <div>
                        <i class="data-label">{{Li.ExpirationDate| date:'MM-dd-yyyy'}}</i>
                    </div>

                </div>

            </div>

                <div class="clearfix"></div><br>

                <div class="col-md-12">

                   <div class="col-md-4 form-group">
                        <div>


                            @Html.LabelFor(p => p.PolicyNumber, htmlAttributes: new { @class = "control-label small" })
                            
                         
                            <div>
                      @if (ProfileActionValidator.IsMasked(ViewBag.Roles)) { 

                              <i class="data-label">#######</i>
                         }
                         else
                         {
                          
                        <i class="data-label">{{Li.PolicyNumber}}</i>
                        }
                           
                            </div>
                  </div>

               </div>

                    <div class="form-group col-md-4">
                        @Html.LabelFor(p => p.AmountOfCoveragePerOccurance, htmlAttributes: new { @class = "control-label small" })

                        <div>
                            <i class="data-label">{{Li.AmountOfCoveragePerOccurance}}</i>
                        </div>

                    </div>

                    <div class="form-group col-md-4">
                        @Html.LabelFor(p => p.AmountOfCoverageAggregate, htmlAttributes: new { @class = "control-label small" })

                        <div>
                            <i class="data-label">{{Li.AmountOfCoverageAggregate}}</i>
                        </div>

                    </div>


             </div>

                <div class="clearfix"></div><br>

                <div class="col-md-12">

                    <div class="form-group col-md-4">
                        @Html.LabelFor(p => p.UnlimitedCoverageWithInsuranceCarrierOption, htmlAttributes: new { @class = "control-label small" })
                        <div>
                            <i class="data-label">{{Li.UnlimitedCoverageWithInsuranceCarrier}}</i>
                        </div>
                    </div>

                    <div class=" col-md-4 form-group">

                        @Html.LabelFor(p => p.PolicyIncludesTailCoverageOption, htmlAttributes: new { @class = "control-label small" })

                        <div>
                            <i class="data-label">{{Li.PolicyIncludesTailCoverage}}</i>
                        </div>
                    </div>

                    <div class="form-group col-md-4">

                        <label class="control-label small">Phone Number </label>
                        <div>
                            <i class="data-label">{{Li.PhoneNumber}}</i>
                        </div>

                    </div>

                </div>

                <div class="col-md-12">

             <div class=" col-md-6 form-group">
                 <label class="control-label small">Supporting Document</label>


                    <br>

                 <div ng-show="Li.InsuranceCertificatePath!=null">

                     <i class="data-label"><a href="{{Li.InsuranceCertificatePath}}" class="pointer" target="_blank" data-toggle="tooltip" data-placement="top" title="Liability Insurance Certificate"><i class="fa fa-file"> Liability Insurance Certificate</i></a></i>
                 </div>
                
                 <div ng-show="!Li.InsuranceCertificatePath">
                     Not Available
                 </div>

                </div>
          
             </div>

            <div class="col-md-12">
                <button class="btn btn-warning btn-sm" ng-click="operateCancelControl('')">Cancel</button>

                @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Edit, ViewBag.Roles, true)) {
                  <button class="btn btn-primary btn-sm pull-right" ng-click ="operateEditControl($index+'_editLi',Li)">Edit</button>
           }
            </div>

        </div>
    </div>
    </form>

</fieldset>
