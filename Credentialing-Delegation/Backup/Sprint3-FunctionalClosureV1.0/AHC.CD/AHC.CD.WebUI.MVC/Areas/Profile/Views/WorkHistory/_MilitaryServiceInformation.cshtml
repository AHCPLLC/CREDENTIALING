@using AHC.CD.WebUI.MVC.Areas.Profile.Attributes;
<div class="form-style">
    <fieldset>
        <legend>
            Military Service Information
        </legend>
        <div class="form-style">
            <div class="col-lg-12 zero-padding-left-right-div">
                <table ng-hide="militaryServiceInformations.length > 0 || newShowMilitaryServiceInformation" class="table table-bordered table-condensed customtbodyStyle table-striped">
                    <thead>
                        <tr>
                            <td>
                                No Data Available ! 
                                @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Add, ViewBag.Roles, false))
                                {
                                    <span>To Add New Click</span><button class="btn btn-xs btn-success" ng-click="operateViewAndAddControl('addMilitaryServiceInformation')" data-toggle="tooltip" data-placement="right" title="Add new"><i class="fa fa-plus"></i></button>
                                }
                            </td>
                        </tr>
                    </thead>
                </table>
                <table ng-hide="militaryServiceInformations.length < 1" class="table table-bordered table-condensed customtbodyStyle table-striped">
                    <thead>
                        <tr>
                            <th>Military Branch</th>
                            <th>Rank At Discharge</th>
                            <th>Discharge Type</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody ng-repeat="militaryService in militaryServiceInformations">
                        <tr>
                            <td>{{militaryService.MilitaryBranch || 'Not Available'}}</td>
                            <td>{{militaryService.MilitaryRank || 'Not Available'}}</td>
                            <td>{{militaryService.MilitaryDischarge || 'Not Available'}}</td>
                            <td>{{militaryService.StartDate | date:'MM-dd-yyyy'}}</td>
                            <td>{{militaryService.DischargeDate | date:'MM-dd-yyyy'}}</td>
                            <td>
                                @if (ProfileActionValidator.IsAuthorized(ProfileActionType.View, ViewBag.Roles, false))
                                {
                                    <button class="btn btn-xs btn-default" ng-click="operateViewAndAddControl($index+'_viewMilitaryServiceInformation')" ng-hide="viewMilitaryServiceInformation" data-toggle="tooltip" data-placement="left" title="View"><i class="fa fa-eye"></i></button>
                                }
                                @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Edit, ViewBag.Roles, false))
                                {
                                    <button class="btn btn-xs btn-primary" ng-click="operateEditControl($index+'_editMilitaryServiceInformation',militaryService);changeButtonText()" ng-hide="editMilitaryServiceInformation" data-toggle="tooltip" data-placement="top" title="Edit"><i class="fa fa-edit"></i></button>
                                }
                                @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Add, ViewBag.Roles, false))
                                {
                                    <button class="btn btn-xs btn-success" ng-click="operateViewAndAddControl('addMilitaryServiceInformation');changeButtonText()" ng-hide="viewMilitaryServiceInformation|| editShowMilitaryServiceInformation || newShowMilitaryServiceInformation || $index+1!=militaryServiceInformations.length" data-toggle="tooltip" data-placement="right" title="Add new"><i class="fa fa-plus"></i></button>
                                }
                            </td>
                        </tr>
                        @if (ProfileActionValidator.IsAuthorized(ProfileActionType.View, ViewBag.Roles, false))
                                {
                        <tr ng-show="visibilityControl==($index+'_viewMilitaryServiceInformation')">
                            <td colspan="7">
                                @Html.Partial("~/Areas/Profile/Views/WorkHistory/_ViewMilitaryServiceInformation.cshtml")
                            </td>
                        </tr>
                         }
                         @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Edit, ViewBag.Roles, false))
                                {
                        <tr ng-show="visibilityControl==($index+'_editMilitaryServiceInformation')">
                            <td colspan="7" id="militaryServiceInformationEditDiv{{$index}}" class="editTableDataStyle">
                                <fieldset>
                                    <legend>
                                        Edit Military Service Information
                                    </legend>
                                    @Html.Partial("~/Areas/Profile/Views/WorkHistory/_AddEditMilitaryServiceInformation.cshtml")
                                    <div class="col-md-12 form-group">
                                        <button type="button" class="btn btn-warning btn-sm" ng-click="operateCancelControl('')">Cancel</button>
                                        <button type="submit" class="btn btn-primary btn-sm pull-right" ng-click="saveMilitaryServiceInformation(tempObject, $index)">Update</button>
                                    </div>
                                </fieldset>
                            </td>
                        </tr>
                         }
                    </tbody>
                </table>
                <div ng-show="visibilityControl=='addedNewMilitaryServiceInformation'" class="alert alert-success" role="alert">
                    <button ng-click="operateCancelControl('')" class="close"><span>&times;</span></button>
                    <i class="fa fa-2x fa-arrow-up"></i>Military Service Information saved successfully !!!!
                </div>
                <div ng-show="visibilityControl=='updatedMilitaryServiceInformation'" class="alert alert-success" role="alert">
                    <button ng-click="operateCancelControl('')" class="close"><span>&times;</span></button>
                    <i class="fa fa-2x fa-arrow-up"></i>Military Service Information updated successfully !!!!
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="clearfix"></div>
            @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Add, ViewBag.Roles, false))
             {
            <fieldset ng-show="visibilityControl==('addMilitaryServiceInformation')">
                <legend>
                    Add Military Service Information
                </legend>
                <div id="newMilitaryServiceInformationFormDiv">
                    @Html.Partial("~/Areas/Profile/Views/WorkHistory/_AddEditMilitaryServiceInformation.cshtml")
                    <div class="col-md-12 form-group">
                        <button type="button" class="btn btn-warning btn-sm" ng-click="operateCancelControl('')">Cancel</button>
                        <button type="submit" class="btn btn-primary btn-sm pull-right" ng-click="saveMilitaryServiceInformation(tempObject, $index)">Add</button>
                    </div>
                </div>
            </fieldset>
             }
        </div>
    </fieldset>
</div>