@model AHC.CD.WebUI.MVC.Areas.Profile.Models.IdentificationAndLicenses.FederalDEAInformationViewModel
@using AHC.CD.WebUI.MVC.Areas.Profile.Attributes;

<form class="FederalDEALicenseForm">
    <div class="form-style">
        <fieldset>
            <legend>
                State License Information
            </legend>
            <div>
                <div id="licensedea" class="panel-body zero-padding-left-right-div">
                    <div class="zero-padding-left-right-div">
                        <div class="col-md-12">
                            <div class="form-group col-md-3">
                                @Html.LabelFor(model => model.DEANumber, new { @class = "control-label small" })
                                <div>
                                    <i class="data-label">{{DEAInformation.DEANumber}}</i>
                                </div>
                            </div>

                            <div class="form-group col-md-3">
                                @Html.LabelFor(model => model.StateOfReg, new { @class = "control-label small" })
                                <div>
                                    <i class="data-label">{{DEAInformation.StateOfReg}}</i>
                                </div>
                            </div>
                            <div class="form-group col-md-3">
                                @Html.LabelFor(model => model.IssueDate, new { @class = "control-label small" })
                                <div>
                                    <i class="data-label">{{DEAInformation.IssueDate | date: "MM-dd-yyyy"}}</i>
                                </div>
                            </div>

                            <div class="form-group col-md-3">
                                @Html.LabelFor(model => model.ExpiryDate, new { @class = "control-label small" })
                                <div>
                                    <i class="data-label">{{DEAInformation.ExpiryDate | date: "MM-dd-yyyy"}}</i>
                                </div>
                            </div>
                        </div>
                        <div class="clearfix"></div>

                        <div class="clearfix"></div>
                        <div class="form-group col-md-12">
                            <table class="col-md-12 table table-bordered table-condensed customtbodyStyle table-striped">
                                <thead>
                                    <tr>
                                        <th>Schedule</th>
                                        <th>Schedule Type</th>
                                        <th>Eligibility</th>
                                    </tr>
                                </thead>
                                <tbody ng-repeat="sl in Schedules track by $index">
                                    <tr>
                                        <td>
                                            {{sl.ScheduleTitle}}
                                        </td>
                                        <td>
                                            <label>{{sl.ScheduleTypeTitle}}</label>
                                        </td>
                                        <td>
                                            <i ng-if="DEAInformation.DEAScheduleInfoes[$index].YesNoOption == '1'" class="fa fa-check"></i>
                                            <i ng-if="DEAInformation.DEAScheduleInfoes[$index].YesNoOption == '2'" class="fa fa-close"></i>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="clearfix"></div>
                        <div class="col-md-12">
                            <div class="form-group col-md-3">
                                @Html.LabelFor(model => model.IsInGoodStanding, new { @class = "control-label small" })
                                <div>
                                    <i ng-if="DEAInformation.GoodStandingYesNoOption == 1" class="data-label">Yes</i>
                                    <i ng-if="DEAInformation.GoodStandingYesNoOption == 2" class="data-label">No</i>
                                </div>
                            </div>
                            <div class="form-group col-md-9">
                                <label class="control-label small">Supporting Document</label>
                                <div>
                                    @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Preview, ViewBag.Roles, false))
                                    {
                                        <i class="data-label"><a href="/Document/View?path={{DEAInformation.DEALicenceCertPath}}" class="pointer" target="_blank" data-toggle="tooltip" data-placement="top" title="DEA License Document"><i class="fa fa-file"> DEA License Document</i></a></i>
                                    }
                                </div>
                            </div>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="col-md-12">
                            <div class="col-md-12">
                                <button type="button" class="btn btn-warning btn-sm" ng-click="operateCancelControl('')">Cancel</button>
@if (ProfileActionValidator.IsAuthorized(ProfileActionType.Edit, ViewBag.Roles, false))
{
    <button type="submit" class="btn btn-primary btn-sm pull-right" ng-click="operateEditControl($index+'_editDEAInformation',DEAInformation)">Edit</button>
}
                            </div>
                        </div>
                    </div>
                </div>

            </fieldset></div>
</form>


