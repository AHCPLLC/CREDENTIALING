
@using AHC.CD.WebUI.MVC.Areas.Profile.Attributes;
@*<script src="~/Areas/Profile/Scripts/JavaScripts/ProfessionalLiabilityInsurance.js"></script>*@

<br />
<div class="panel-group" ng-controller="LiabilityCtrl">
    <div class="panel-default">
        <div class="form-style">
            <fieldset>
                <legend>
                    Professional Liability
                </legend>
                <div id="Liabiltyqwe">
                    <div class="col-lg-12 zero-padding-left-right-div">
                        <table ng-hide="ProfessionalLiabilityInfoes.length > 0 || visibilityControl=='addLi' " class="table table-bordered table-condensed customtbodyStyle table-striped">
                            <thead>
                                <tr>
                                    <td>
                                        No Data Available ! To Add New Click
                                        @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Add, ViewBag.Roles, true))
                                        {
                                            <button class="btn btn-xs btn-success" ng-click="operateViewAndAddControl('addLi')" data-toggle="tooltip" data-placement="right" title="Add New"><i class="fa fa-plus"></i></button>
                                        }
                                    </td>

                                </tr>
                            </thead>
                        </table>

                        <table ng-hide="ProfessionalLiabilityInfoes.length <= 0" class="table table-bordered table-condensed customtbodyStyle table-striped">
                            <thead>
                                <tr>
                                    <th>Carrier Name</th>
                                    <th>Policy Number</th>
                                    <th>Address</th>
                                    <th>Supporting Document</th>
                                    <th>Edit</th>
                                </tr>
                            </thead>
                            <tbody ng-repeat="Li in ProfessionalLiabilityInfoes track by $index">

                                <tr>
                                    <td>{{Li.InsuranceCarrier.Name}}</td>
                                    <td>{{Li.PolicyNumber}}</td>
                                    <td>{{Li.InsuranceCarrierAddress.LocationName}}</td>
                                    <td ng-show="Li.InsuranceCertificatePath!=null"><i class="data-label"><a href="/Document/View?path={{Li.InsuranceCertificatePath}}" class="pointer" target="_blank" data-toggle="tooltip" data-placement="top" title="Liability Insurance Certificate"><i class="fa fa-file"></i></a></i></td>
                                    <td ng-show="!Li.InsuranceCertificatePath">Not Available</td>
                                    <td>
                                  @if (ProfileActionValidator.IsAuthorized(ProfileActionType.View, ViewBag.Roles, true)) {
                                  <button class="btn btn-xs btn-default" ng-click="operateViewAndAddControl($index+'_viewLi')" ng-hide="showViewLiabilityInsurance" data-toggle="tooltip" data-placement="left" title="View"><i class="fa fa-eye"></i></button>
                                  }
                                  
                                 @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Edit, ViewBag.Roles, true)) {
                                           
                                        <button class="btn btn-xs btn-primary" ng-click="operateEditControl($index+'_editLi',Li)" ng-hide="editShowProfessionalLiabilty" data-toggle="tooltip" data-placement="top" title="Edit"><i class="fa fa-edit"></i></button>
                                     
                                 }
                                 
                                  @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Add, ViewBag.Roles, true)) {

                                        <button class="btn btn-xs btn-success" ng-show="$index == ProfessionalLiabilityInfoes.length-1" ng-click="operateViewAndAddControl('addLi')" data-toggle="tooltip" data-placement="right" title="Add New"><i class="fa fa-plus"></i></button>
                                      }
                                      

                                    </td>
                                </tr>

                @if (ProfileActionValidator.IsAuthorized(ProfileActionType.View, ViewBag.Roles, true)) {
                           <tr ng-show="visibilityControl==($index+'_viewLi')">
                                    <td colspan="6" class="editTableDataStyle">

                                        @Html.Partial("~/Areas/Profile/Views/Liability/ViewLiabilityInsurance.cshtml")
                                    </td>

                                </tr>
                }
                 @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Edit, ViewBag.Roles, true)) {

                                <tr ng-show="visibilityControl==($index+'_editLi')">
                                    <td colspan="6" id="professionalLiabiltyEditDiv{{$index}}" class="editTableDataStyle">
                                        @Html.Partial("~/Areas/Profile/Views/Liability/_AddEditLiabilityInsurance.cshtml")
                                    </td>
                                </tr>
                 }
                            </tbody>

                        </table>

                        <div ng-show="visibilityControl=='addedNewProfessionalLiability'" class="alert alert-success" role="alert">
                            <button ng-click="operateCancelControl('')" class="close"><span>&times;</span></button>
                            <i class="fa fa-2x fa-arrow-up"></i>New Professional Liability Added Successfully !!!!
                        </div>
                        <div ng-show="visibilityControl=='updatedProfessionalLiability'" class="alert alert-success" role="alert">
                            <button ng-click="operateCancelControl('')" class="close"><span>&times;</span></button>
                            <i class="fa fa-2x fa-arrow-up"></i>Data Updated Successfully !!!!
                        </div>

                    </div>

                    <div class="clearfix"></div>

               @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Add, ViewBag.Roles, true)) {
                  <fieldset ng-show="visibilityControl=='addLi'">
                        <legend>
                            Add Professional Liability
                        </legend>
                        <div id="newShowProfessionalLiabiltyDiv">
                            @Html.Partial("~/Areas/Profile/Views/Liability/_AddEditLiabilityInsurance.cshtml")
                        </div>
                    </fieldset>
                  }
                  
                </div>
            </fieldset>
        </div>
    </div>
</div>