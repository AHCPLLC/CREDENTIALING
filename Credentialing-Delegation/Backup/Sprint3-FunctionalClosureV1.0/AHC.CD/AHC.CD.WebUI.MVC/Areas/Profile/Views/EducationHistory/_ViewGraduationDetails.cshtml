@model AHC.CD.WebUI.MVC.Areas.Profile.Models.EducationHistory.EducationDetailViewModel
@using AHC.CD.WebUI.MVC.Areas.Profile.Attributes;

<div id="viewGraduation">
    <div class=" col-lg-12 zero-padding-left-right-div">
        

        <fieldset>
            <legend>
                Graduate/Medical School Details
            </legend>
            <div class="col-md-12">
                <div class="col-lg-3 form-group">

                    @Html.LabelFor(model => model.GraduateType, htmlAttributes: new { @class = "control-label small" })
                    <div ng-if="graduationDetailViewModel.GraduateType == 1">
                        <i class="data-label">{{graduationDetailViewModel.GraduationType}}</i>
                    </div>
                    <div ng-if="graduationDetailViewModel.GraduateType == 2">
                        <i class="data-label">Fifth Pathway Graduate</i>
                    </div>
                </div>
                <div class="col-lg-3 form-group">

                    @Html.LabelFor(model => model.USGraduateYesNoOption, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i class="data-label">{{graduationDetailViewModel.IsUSGraduate}}</i>
                    </div>
                </div>
                <div class="col-lg-3 form-group">

                    @Html.LabelFor(model => model.SchoolInformation.SchoolName, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i class="data-label">{{graduationDetailViewModel.SchoolInformation.SchoolName}}</i>
                    </div>

                </div>
                <div class="col-lg-3 form-group">

                    @Html.LabelFor(model => model.QualificationDegree, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i class="data-label">{{graduationDetailViewModel.QualificationDegree}}</i>
                    </div>
                </div>
               
            </div>
            <div class="col-md-12">
                
                <div class="form-group col-md-3">

                    @Html.LabelFor(model => model.SchoolInformation.Street, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i class="data-label wrap-words">{{graduationDetailViewModel.SchoolInformation.Street}}</i>
                    </div>
                </div>
                <div class="form-group col-md-3">

                    @Html.LabelFor(model => model.SchoolInformation.Building, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i class="data-label">{{graduationDetailViewModel.SchoolInformation.Building}}</i>
                    </div>
                </div>
                <div class="form-group col-md-3">

                    @Html.LabelFor(model => model.SchoolInformation.City, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i class="data-label">{{graduationDetailViewModel.SchoolInformation.City}}</i>
                    </div>
                </div>
                
                <div class="form-group col-md-3">

                    @Html.LabelFor(model => model.SchoolInformation.State, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i class="data-label">{{graduationDetailViewModel.SchoolInformation.State}}</i>
                    </div>
                </div>
                
            </div>
            <div class="col-md-12">
                <div class="form-group col-md-3">

                    @Html.LabelFor(model => model.SchoolInformation.ZipCode, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i class="data-label">{{graduationDetailViewModel.SchoolInformation.ZipCode}}</i>
                    </div>
                </div>
                <div class="form-group col-md-3">

                    @Html.LabelFor(model => model.SchoolInformation.Country, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i class="data-label">{{graduationDetailViewModel.SchoolInformation.Country}}</i>
                    </div>
                </div>
                <div class="form-group col-md-3">

                    @Html.LabelFor(model => model.SchoolInformation.County, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i class="data-label">{{graduationDetailViewModel.SchoolInformation.County}}</i>
                    </div>
                </div>
                
                <div class="form-group col-md-3">

                    @Html.LabelFor(model => model.SchoolInformation.Email, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i class="data-label">{{graduationDetailViewModel.SchoolInformation.Email}}</i>
                    </div>
                </div>
                
                
                
            </div>
            <div class="col-md-12">
                <div class="col-lg-3 form-group">

                    @Html.LabelFor(model => model.SchoolInformation.Phone, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i class="data-label">({{graduationDetailViewModel.SchoolInformation.PhoneCountryCode}})-{{graduationDetailViewModel.SchoolInformation.Phone}}</i>
                    </div>

                </div>
                <div class="col-lg-3 form-group">

                    @Html.LabelFor(model => model.SchoolInformation.Fax, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i class="data-label">({{graduationDetailViewModel.SchoolInformation.FaxCountryCode}})-{{graduationDetailViewModel.SchoolInformation.Fax}}</i>
                    </div>

                </div>
                <div class="col-lg-3 form-group">

                    @Html.LabelFor(model => model.StartDate, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i class="data-label">{{graduationDetailViewModel.StartDate | date:'MM-dd-yyyy'}}</i>
                    </div>
                </div>
                <div class="col-lg-3 form-group">
                    @Html.LabelFor(model => model.EndDate, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i class="data-label">{{graduationDetailViewModel.EndDate | date:'MM-dd-yyyy'}}</i>
                    </div>

                </div>
            </div>
                <div class="col-lg-12">
                    <div class="col-lg-3 form-group">

                        @Html.LabelFor(model => model.CompletedYesNoOption, htmlAttributes: new { @class = "control-label small" })
                        <div>
                            <i class="data-label">{{graduationDetailViewModel.IsCompleted}}</i>
                        </div>

                    </div>
                @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Preview, ViewBag.Roles, false))
                {
                    <div class="col-lg-3 form-group">
                        <div class="fileinput fileinput-new input-group" data-provides="fileinput">
                            @Html.LabelFor(model => model.CertificatePath, htmlAttributes: new { @class = "control-label small" })
                            <div ng-if="graduationDetailViewModel.CertificatePath!=''">
                                <i class="data-label"><a href="/Document/View?path={{graduationDetailViewModel.CertificatePath}}" cl class="pointer" target="_blank" data-toggle="tooltip" data-placement="top" title="Diploma"><i class="fa fa-file"> Diploma</i></a></i>
                            </div>
                            <div ng-if="graduationDetailViewModel.CertificatePath==''">
                                <i class="data-label"> Not available</i>
                            </div>
                        </div>
                    </div>
                }   
                    
                </div>
                
        </fieldset>
        
        
       
        <div class="col-md-12 form-group">
            <button type="button" class="btn btn-warning btn-sm" ng-click="operateCancelControl('')">Cancel</button>
            @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Edit, ViewBag.Roles, false))
            {
                <button type="button" class="btn btn-primary btn-sm pull-right" ng-click="operateEditControl($index+'_editgraduationDetailViewModel', graduationDetailViewModel)">Edit</button>
            }
            
        </div>
    </div>
</div>
