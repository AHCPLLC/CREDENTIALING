@model AHC.CD.WebUI.MVC.Areas.Profile.Models.EducationHistory.TrainingDetailViewModel
@using AHC.CD.WebUI.MVC.Areas.Profile.Attributes;

<div id="viewprogram">
    <div class=" col-lg-12 zero-padding-left-right-div">

        <fieldset>
            <legend>
                School Details
            </legend>
            <div class="col-lg-12">
                <div class="col-lg-3 form-group">
                    @Html.LabelFor(model => model.SchoolInformation.SchoolName, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i class="data-label">{{residencyInternshipViewModel.SchoolInformation.SchoolName}}</i>
                    </div>
                </div>
                <div class="col-lg-3 form-group">
                    @Html.LabelFor(model => model.HospitalName, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i class="data-label">{{residencyInternshipViewModel.HospitalName}}</i>
                    </div>
                </div>


                <div class="form-group col-lg-3">

                    @Html.LabelFor(model => model.SchoolInformation.Street, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i class="data-label wrap-words">{{residencyInternshipViewModel.SchoolInformation.Street}}</i>
                    </div>
                </div>
                <div class="form-group col-lg-3">

                    @Html.LabelFor(model => model.SchoolInformation.Building, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i class="data-label">{{residencyInternshipViewModel.SchoolInformation.Building}}</i>
                    </div>
                </div>
            </div>
            <div class="col-lg-12">

                <div class="form-group col-lg-3">

                    @Html.LabelFor(model => model.SchoolInformation.City, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i class="data-label">{{residencyInternshipViewModel.SchoolInformation.City}}</i>
                    </div>
                </div>

                <div class="form-group col-lg-3">

                    @Html.LabelFor(model => model.SchoolInformation.State, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i class="data-label">{{residencyInternshipViewModel.SchoolInformation.State}}</i>
                    </div>
                </div>
                <div class="form-group col-lg-3">

                    @Html.LabelFor(model => model.SchoolInformation.ZipCode, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i class="data-label">{{residencyInternshipViewModel.SchoolInformation.ZipCode}}</i>
                    </div>
                </div>
                <div class="form-group col-lg-3">

                    @Html.LabelFor(model => model.SchoolInformation.Country, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i class="data-label">{{residencyInternshipViewModel.SchoolInformation.Country}}</i>
                    </div>
                </div>

            </div>
            <div class="col-lg-12">

                <div class="form-group col-lg-3">

                    @Html.LabelFor(model => model.SchoolInformation.County, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i class="data-label">{{residencyInternshipViewModel.SchoolInformation.County}}</i>
                    </div>
                </div>
                <div class="form-group col-md-3">

                    @Html.LabelFor(model => model.SchoolInformation.Email, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i class="data-label">{{residencyInternshipViewModel.SchoolInformation.Email}}</i>
                    </div>
                </div>

                <div class="col-lg-3 form-group">

                    @Html.LabelFor(model => model.SchoolInformation.Phone, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i class="data-label">({{residencyInternshipViewModel.SchoolInformation.PhoneCountryCode}})-{{residencyInternshipViewModel.SchoolInformation.Phone}}</i>
                    </div>
                </div>
                <div class="col-lg-3 form-group">

                    @Html.LabelFor(model => model.SchoolInformation.Fax, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i class="data-label">({{residencyInternshipViewModel.SchoolInformation.FaxCountryCode}})-{{residencyInternshipViewModel.SchoolInformation.Fax}}</i>
                    </div>
                </div>

            </div>
            <div class="col-lg-12">
                <div class="col-lg-3 form-group">

                    @Html.LabelFor(model => model.CompletedYesNoOption, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i class="data-label">{{residencyInternshipViewModel.IsCompleted}}</i>
                    </div>
                </div>
                <div ng-show="residencyInternshipViewModel.CompletedYesNoOption == 2" class="col-lg-3 form-group">
                    @Html.LabelFor(model => model.InCompleteReason, htmlAttributes: new { @class = "control-label small" })
                    <div>
                        <i class="data-label wrap-words">{{residencyInternshipViewModel.InCompleteReason}}</i>
                    </div>
                </div>
            </div>
            <div class="col-md-12 form-group">
                <button type="button" class="btn btn-warning btn-sm" ng-click="operateCancelControl('')">Cancel</button>
                @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Edit, ViewBag.Roles, false))
                {
                    <button type="button" class="btn btn-primary btn-sm pull-right" ng-click="operateEditControl($index+'_editresidencyInternshipViewModel',residencyInternshipViewModel)">Edit</button>
                }

            </div>
        </fieldset>
        @Html.Partial("~/Areas/Profile/Views/EducationHistory/_ViewIndexResidencyInternshipDetail.cshtml")
    </div>
</div>

