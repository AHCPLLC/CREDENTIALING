@using AHC.CD.WebUI.MVC.Areas.Profile.Attributes;


<div class="panel-default">
    <div class="form-style">
        <fieldset>
            <legend>
                State License
            </legend>
         
            <div class="legend2 pull-right">
                <button class="btn btn-xs btn-default" data-container="body" data-toggle="popover" data-placement="left" data-trigger="focus" data-content="*If you have additional State Licenses include all state license certification numbers here."><i class="fa fa-question"></i></button>
            </div>
            <div id="licenseprofessional" class="panel-body">
                <table ng-hide="StateLicenses.length > 0||newShowStateLicense" class="table table-bordered table-condensed customtbodyStyle table-striped">
                    <thead>
                        <tr>
                            <td ng-hide="visibilityControl=='addStateLicenseInformation'">
                                No Data Available For State License! 
                                @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Add, ViewBag.Roles, false))
                                {
                                    <span>
                                      Please click on <button class="btn btn-xs btn-success" ng-click="operateViewAndAddControl('addStateLicenseInformation')" data-toggle="tooltip" data-placement="right" title="Add new"><i class="fa fa-plus"></i></button>
                                        to add new State License Information</span>}
                            </td>
                        </tr>
                    </thead>
                </table>
                <table ng-hide="StateLicenses.length < 1" class="table table-bordered table-condensed customtbodyStyle table-striped">
                    <thead>
                    <tr>
                    <th>License Number</th>
                    <th>License Type</th>
                    <th>Expiration Date</th>
                    <th>License Status</th>
                    <th>Supporting Document</th>
                    <th>Action</th>
                    </tr>
                    </thead>
                    <tbody ng-repeat="StateLicenseInformation in StateLicenses track by $index">
                        <tr>
                            <td>{{StateLicenseInformation.LicenseNumber}}</td>
                            <td>{{StateLicenseInformation.ProviderType.Title}}</td>
                            <td>{{StateLicenseInformation.ExpiryDate | date: "MM-dd-yyyy"}}</td>
                            <td>{{StateLicenseInformation.StateLicenseStatus.Title}}</td>
                            <td>
                                @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Preview, ViewBag.Roles, false))
                                {
                                    <a ng-if="StateLicenseInformation.StateLicenseDocumentPath" href="/Document/View?path={{StateLicenseInformation.StateLicenseDocumentPath}}" class="pointer" target="_blank" title="{{sl.StateLicenseDocumentPath}}"><i class="fa fa-file" title=""></i></a>
                                }
                                <i ng-if="!StateLicenseInformation.StateLicenseDocumentPath">Not Available</i>
                            </td>
                            <td>
                                @if (ProfileActionValidator.IsAuthorized(ProfileActionType.View, ViewBag.Roles, false))
                                {
                                    <button class="btn btn-xs btn-default" ng-click="operateViewAndAddControl($index+'_viewStateLicenseInformation')" ng-hide="viewStateLicense" data-toggle="tooltip" data-placement="left" title="View"><i class="fa fa-eye"></i></button>
                                }
                                @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Edit, ViewBag.Roles, false))
                                {
                                    <button class="btn btn-xs btn-primary" ng-click="operateEditControl($index+'_editStateLicenseInformation',StateLicenseInformation)" ng-hide="editShowStateLicense" data-toggle="tooltip" data-placement="top" title="Edit"><i class="fa fa-edit"></i></button>
                                }
                                @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Add, ViewBag.Roles, false))
                                {
                                    <button class="btn btn-xs btn-success" ng-click="operateViewAndAddControl('addStateLicenseInformation')" ng-hide="viewStateLicense|| editShowStateLicense || newShowStateLicense || $index+1!=StateLicenses.length" data-toggle="tooltip" data-placement="right" title="Add new"><i class="fa fa-plus"></i></button>
                                }
                            </td>
                        </tr>
                        @if (ProfileActionValidator.IsAuthorized(ProfileActionType.View, ViewBag.Roles, false))
                        {
                            <tr ng-show="visibilityControl==($index+'_viewStateLicenseInformation')">
                                <td colspan="7" class="editTableDataStyle">
                                    @Html.Partial("~/Areas/Profile/Views/IdentificationAndLicense/_ViewStateLicense.cshtml")
                                </td>
                            </tr>
                        }
                        @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Edit, ViewBag.Roles, false))
                        {
                            <tr ng-show="visibilityControl==($index+'_editStateLicenseInformation')">
                                <td colspan="7" id="stateLicenseEditDiv{{$index}}" class="editTableDataStyle">
                                    <fieldset>
                                        <legend>
                                            Edit State License
                                        </legend>
                                        
                                        <div>
                                            @Html.Partial("~/Areas/Profile/Views/IdentificationAndLicense/_AddEditStateLicense.cshtml")
                                        </div>
                                    </fieldset>
                                </td>
                            </tr>
                        }
                    </tbody>
                    </table>

                    <div class="clearfix"></div>
                    @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Add, ViewBag.Roles, false))
                    {
                        <div class="form-style">
                            <fieldset ng-show="visibilityControl=='addStateLicenseInformation'">
                                <legend>
                                    Add State License
                                </legend>
                                <div class="legend2 pull-right">
                                    <button class="btn btn-xs btn-default" data-container="body" data-toggle="popover" data-placement="left" data-trigger="focus" data-content="*Non-Licensed professionals should enter certification/registration number in the space provided for license number"><i class="fa fa-question"></i></button>
                                </div>
                                <div id="newStateLicenseDiv">
                                    @Html.Partial("~/Areas/Profile/Views/IdentificationAndLicense/_AddEditStateLicense.cshtml")
                                </div>
                            </fieldset>
                        </div>
                    }
                <div ng-show="visibilityControl=='addedStateLicense'" class="alert alert-success" role="alert">
                    <button ng-click="operateCancelControl('')" class="close"><span>&times;</span></button>
                    <i class="fa fa-2x fa-arrow-up"></i>State License information saved successfully.!!!!
                </div>
                <div ng-show="visibilityControl=='updatedStateLicense'" class="alert alert-success" role="alert">
                    <button ng-click="operateCancelControl('')" class="close"><span>&times;</span></button>
                    <i class="fa fa-2x fa-arrow-up"></i>State License information updated successfully. !!!!
                </div>
              
</div>
        </fieldset>
    </div>
</div>