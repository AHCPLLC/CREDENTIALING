@using AHC.CD.WebUI.MVC.Areas.Profile.Attributes;

<div class="clearfix"></div>
<div>
    <fieldset>
        <legend>
           View Residency/Internship/Fellowship Details
        </legend>

        <div class="col-lg-12 zero-padding-left-right-div">
            <div>
                <div class="clearfix"></div><br />
                <table ng-hide="residencyInternshipViewModel.ResidencyInternshipDetails.length > 0" class="table table-bordered table-condensed customtbodyStyle table-striped">
                    <thead>
                        <tr>
                            <td>
                                No Data Available 
                                @*@if (ProfileActionValidator.IsAuthorized(ProfileActionType.Add, ViewBag.Roles, false))
                                {
                                    <button class="btn btn-xs btn-success" ng-click="operateSecondViewAndAddControl('addresidency')"><i class="fa fa-plus"></i></button>
                                }*@
                            </td>
                        </tr>
                    </thead>
                </table>
                <table ng-hide="residencyInternshipViewModel.ResidencyInternshipDetails.length <= 0" class="table table-bordered table-condensed customtbodyStyle table-striped">
                    <thead>
                        <tr>
                            <th>Program Type</th>
                            <th>Specialty</th>
                            <th>Department</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Primary</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody ng-repeat="residency in residencyInternshipViewModel.ResidencyInternshipDetails track by $index">
                        <tr>
                            <td>{{residency.ProgramType}}</td>
                            <td>{{residency.Specialty.Name}}</td>
                            <td>{{residency.Department}}</td>
                            <td>{{residency.StartDate | date:'MM-dd-yyyy'}}</td>
                            <td>{{residency.EndDate | date:'MM-dd-yyyy'}}</td>
                            <td><i class="data-label " ng-class="{'1':'fa fa-check', '2':'fa fa-times'}[residency.PreferenceType]"></i></td>
                            <td>
                                @if (ProfileActionValidator.IsAuthorized(ProfileActionType.View, ViewBag.Roles, false))
                                {
                                    <button data-toggle="tooltip" data-placement="left" title="View" class="btn btn-xs btn-default" ng-click="operateSecondViewAndAddControl($index+'_viewresidency'); operateSecondViewAndAddControl('onlyViewresidency')" ng-hide="viewShowResidency"><i class="fa fa-eye"></i></button>
                                }

                                @*@if (ProfileActionValidator.IsAuthorized(ProfileActionType.Edit, ViewBag.Roles, false))
                                {
                                    <button data-toggle="tooltip" data-placement="top" title="Edit" class="btn btn-xs btn-primary" ng-click="operateSecondEditControl($index+'_editresidency',residency)" ng-hide="editShowResidency"><i class="fa fa-edit"></i></button>
                                }

                                @if (ProfileActionValidator.IsAuthorized(ProfileActionType.Add, ViewBag.Roles, false))
                                {
                                    <button data-toggle="tooltip" data-placement="right" title="Add New" ng-click="operateSecondViewAndAddControl('addresidency')" ng-hide="viewShowResidency || editShowResidency || newShowResidency || $index+1 != residencyInternshipViewModel.ResidencyInternshipDetails.length" class="btn btn-xs btn-success"><i class="fa fa-plus"></i></button>
                                }*@

                            </td>
                        </tr>
                        @*@if (ProfileActionValidator.IsAuthorized(ProfileActionType.Edit, ViewBag.Roles, false))
                        {
                            <tr ng-show="visibilitySecondControl==($index+'_editresidency')">
                                <td colspan="7" id="residencyEditDiv{{residency.ResidencyInternshipDetailID}}" class="editTableDataStyle">
                                    <fieldset>
                                        <legend>
                                            Residency/Internship/Fellowship Details
                                        </legend>
                                        @Html.Partial("~/Areas/Profile/Views/EducationHistory/_AddEditResidencyInternshipFellowship.cshtml")
                                    </fieldset>
                                </td>
                            </tr>
                        }*@

                        @if (ProfileActionValidator.IsAuthorized(ProfileActionType.View, ViewBag.Roles, false))
                        {
                            <tr ng-show="visibilitySecondControl==($index+'_viewresidency')">
                                <td colspan="7" id="{{$index}}" class="editTableDataStyle">
                                    <fieldset>
                                        <legend>
                                            Residency/Internship/Fellowship Details
                                        </legend>
                                        @Html.Partial("~/Areas/Profile/Views/EducationHistory/_ViewResidencyInternshipFellowship.cshtml")
                                    </fieldset>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
            @*@if (ProfileActionValidator.IsAuthorized(ProfileActionType.Add, ViewBag.Roles, false))
            {
                <fieldset ng-show="visibilitySecondControl=='addresidency'">
                    <legend>
                        Add Residency/Internship/Fellowship Details
                    </legend>
                    <div id="newResidencyDivForView{{residencyInternshipViewModel.TrainingDetailID}}">
                        @Html.Partial("~/Areas/Profile/Views/EducationHistory/_AddEditResidencyInternshipFellowship.cshtml")
                    </div>
                </fieldset>
            }*@

            @*<div class="clearfix"></div><br />
            <div ng-show="visibilitySecondControl=='addedNewResidencyDetails1'" class="alert alert-success" role="alert">
                <button ng-click="operateSecondCancelControl('')" class="close"><span>&times;</span></button>
                <i class="fa fa-2x fa-arrow-up"></i>New Residency/Internship/Fellowship Details Added Successfully !!!!
            </div>
            <div ng-show="visibilitySecondControl=='updatedResidencyDetails1'" class="alert alert-warning" role="alert">
                <button ng-click="operateSecondCancelControl('')" class="close"><span>&times;</span></button>
                <i class="fa fa-2x fa-arrow-up"></i>Residency/Internship/Fellowship Details Updated Successfully !!!!
            </div>*@
        </div>
    </fieldset>
</div>

